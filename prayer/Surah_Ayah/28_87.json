{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0646\u0651\u064e\u0643\u064e \u0639\u064e\u0646\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0628\u064e\u0639\u06e1\u062f\u064e \u0625\u0650\u0630\u06e1 \u0623\u064f\u0646\u0632\u0650\u0644\u064e\u062a\u06e1 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e\u06d6 \u0648\u064e\u0671\u062f\u06e1\u0639\u064f \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064e\u06d6 \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (let) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0646\u0651\u064e\u0643\u064e", "word_translation": "avert you", "word_transliteration": "yasuddunnaka"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "(the) Verses", "word_transliteration": "ayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "[when]", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u0632\u0650\u0644\u064e\u062a\u06e1", "word_translation": "they have been revealed", "word_transliteration": "unzilat"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e\u06d6", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062f\u06e1\u0639\u064f", "word_translation": "And invite (people)", "word_transliteration": "wa-ud'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e\u06d6", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e", "word_translation": "be", "word_transliteration": "takunanna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "the polytheists", "word_transliteration": "al-mush'rikina"}]}