{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0623\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646 \u0638\u064e\u0644\u064e\u0645\u064e \u0641\u064e\u0633\u064e\u0648\u06e1\u0641\u064e \u0646\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u06e5 \u062b\u064f\u0645\u0651\u064e \u064a\u064f\u0631\u064e\u062f\u0651\u064f \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u0641\u064e\u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u06e5 \u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627 \u0646\u0651\u064f\u0643\u06e1\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "As for", "word_transliteration": "amma"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u064e", "word_translation": "wrongs", "word_transliteration": "zalama"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0648\u06e1\u0641\u064e", "word_translation": "then soon", "word_transliteration": "fasawfa"}, {"word_arabic_uthmani": "\u0646\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u06e5", "word_translation": "we will punish him", "word_transliteration": "nu'adhibuhu"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u064e\u062f\u0651\u064f", "word_translation": "he will be returned", "word_transliteration": "yuraddu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "his Lord", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u06e5", "word_translation": "and He will punish him", "word_transliteration": "fayu'adhibuhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627", "word_translation": "(with) a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0643\u06e1\u0631\u0657\u0627", "word_translation": "terrible", "word_transliteration": "nuk'ran"}]}