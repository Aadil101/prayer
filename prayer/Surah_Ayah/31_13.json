{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0642\u064e\u0627\u0644\u064e \u0644\u064f\u0642\u06e1\u0645\u064e\u0670\u0646\u064f \u0644\u0650\u0671\u0628\u06e1\u0646\u0650\u0647\u0650\u06e6 \u0648\u064e\u0647\u064f\u0648\u064e \u064a\u064e\u0639\u0650\u0638\u064f\u0647\u064f\u06e5 \u064a\u064e\u0670\u0628\u064f\u0646\u064e\u064a\u0651\u064e \u0644\u064e\u0627 \u062a\u064f\u0634\u06e1\u0631\u0650\u0643\u06e1 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0634\u0651\u0650\u0631\u06e1\u0643\u064e \u0644\u064e\u0638\u064f\u0644\u06e1\u0645\u064c \u0639\u064e\u0638\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0644\u064f\u0642\u06e1\u0645\u064e\u0670\u0646\u064f", "word_translation": "Luqman", "word_transliteration": "luq'manu"}, {"word_arabic_uthmani": "\u0644\u0650\u0671\u0628\u06e1\u0646\u0650\u0647\u0650\u06e6", "word_translation": "to his son", "word_transliteration": "li-ib'nihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "while he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u0638\u064f\u0647\u064f\u06e5", "word_translation": "(was) instructing him", "word_transliteration": "ya'izuhu"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0628\u064f\u0646\u064e\u064a\u0651\u064e", "word_translation": "O my son!", "word_transliteration": "yabunayya"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064f\u0634\u06e1\u0631\u0650\u0643\u06e1", "word_translation": "associate partners", "word_transliteration": "tush'rik"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "with Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u0650\u0631\u06e1\u0643\u064e", "word_translation": "associating partners", "word_transliteration": "al-shir'ka"}, {"word_arabic_uthmani": "\u0644\u064e\u0638\u064f\u0644\u06e1\u0645\u064c", "word_translation": "(is) surely an injustice", "word_transliteration": "lazul'mun"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u065e", "word_translation": "great", "word_transliteration": "azimun"}]}