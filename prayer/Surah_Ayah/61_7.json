{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f \u0645\u0650\u0645\u0651\u064e\u0646\u0650 \u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u0643\u064e\u0630\u0650\u0628\u064e \u0648\u064e\u0647\u064f\u0648\u064e \u064a\u064f\u062f\u06e1\u0639\u064e\u0649\u0670\u0653 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u0625\u0650\u0633\u06e1\u0644\u064e\u0670\u0645\u0650\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0627 \u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And who", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) more wrong", "word_transliteration": "azlamu"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0646\u0650", "word_translation": "than (one) who", "word_transliteration": "mimmani"}, {"word_arabic_uthmani": "\u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670", "word_translation": "invents", "word_transliteration": "if'tara"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "upon", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0630\u0650\u0628\u064e", "word_translation": "the lie", "word_transliteration": "al-kadhiba"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "while he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u064a\u064f\u062f\u06e1\u0639\u064e\u0649\u0670\u0653", "word_translation": "is invited", "word_transliteration": "yud'a"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0633\u06e1\u0644\u064e\u0670\u0645\u0650\u06da", "word_translation": "Islam", "word_transliteration": "al-is'lami"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(does) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650\u064a", "word_translation": "guide", "word_transliteration": "yahdi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u064e", "word_translation": "the people", "word_transliteration": "al-qawma"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "[the] wrongdoers", "word_transliteration": "al-zalimina"}]}