{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1 \u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0647\u064f \u0648\u064e\u0623\u064e\u0646\u0651\u064e \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1", "word_translation": "That", "word_transliteration": "dhalikum"}, {"word_arabic_uthmani": "\u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0647\u064f", "word_translation": "So taste it", "word_transliteration": "fadhuquhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e", "word_translation": "And that", "word_transliteration": "wa-anna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "(is the) punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "(of) the Fire", "word_transliteration": "al-nari"}]}