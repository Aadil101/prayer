{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0657\u0627 \u0641\u064e\u0631\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f \u0644\u0650\u062a\u064e\u0642\u06e1\u0631\u064e\u0623\u064e\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064f\u0643\u06e1\u062b\u0656 \u0648\u064e\u0646\u064e\u0632\u0651\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f \u062a\u064e\u0646\u0632\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0657\u0627", "word_translation": "And the Quran", "word_transliteration": "waqur'anan"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We have divided", "word_transliteration": "faraqnahu"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u0642\u06e1\u0631\u064e\u0623\u064e\u0647\u064f\u06e5", "word_translation": "that you might recite it", "word_transliteration": "litaqra-ahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "at", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0645\u064f\u0643\u06e1\u062b\u0656", "word_translation": "intervals", "word_transliteration": "muk'thin"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0632\u0651\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "And We have revealed it", "word_transliteration": "wanazzalnahu"}, {"word_arabic_uthmani": "\u062a\u064e\u0646\u0632\u0650\u064a\u0644\u0657\u0627", "word_translation": "(in) stages", "word_transliteration": "tanzilan"}]}