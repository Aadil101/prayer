{"ayahs": {"ayah_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627 \u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627 \u0645\u064f\u0646\u064e\u0627\u062f\u0650\u064a\u0657\u0627 \u064a\u064f\u0646\u064e\u0627\u062f\u0650\u064a \u0644\u0650\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650 \u0623\u064e\u0646\u06e1 \u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u0641\u064e\u0640\u0654\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627\u06da \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0646\u064e\u0627 \u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0646\u064e\u0627 \u0648\u064e\u0643\u064e\u0641\u0651\u0650\u0631\u06e1 \u0639\u064e\u0646\u0651\u064e\u0627 \u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0646\u064e\u0627 \u0648\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0646\u064e\u0627 \u0645\u064e\u0639\u064e \u0671\u0644\u06e1\u0623\u064e\u0628\u06e1\u0631\u064e\u0627\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627", "word_translation": "indeed we", "word_transliteration": "innana"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627", "word_translation": "[we] heard", "word_transliteration": "sami'na"}, {"word_arabic_uthmani": "\u0645\u064f\u0646\u064e\u0627\u062f\u0650\u064a\u0657\u0627", "word_translation": "a caller", "word_transliteration": "munadiyan"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u064e\u0627\u062f\u0650\u064a", "word_translation": "calling", "word_transliteration": "yunadi"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650", "word_translation": "to the faith", "word_transliteration": "lil'imani"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e1", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "Believe", "word_transliteration": "aminu"}, {"word_arabic_uthmani": "\u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "in your Lord", "word_transliteration": "birabbikum"}, {"word_arabic_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627\u06da", "word_translation": "so we have believed", "word_transliteration": "faamanna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "so forgive", "word_transliteration": "fa-igh'fir"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "for us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0646\u064e\u0627", "word_translation": "our sins", "word_transliteration": "dhunubana"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0641\u0651\u0650\u0631\u06e1", "word_translation": "and remove", "word_transliteration": "wakaffir"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0651\u064e\u0627", "word_translation": "from us", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0646\u064e\u0627", "word_translation": "our evil deeds", "word_transliteration": "sayyiatina"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0646\u064e\u0627", "word_translation": "and cause us to die", "word_transliteration": "watawaffana"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e", "word_translation": "with", "word_transliteration": "ma'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0628\u06e1\u0631\u064e\u0627\u0631\u0650", "word_translation": "the righteous", "word_transliteration": "al-abrari"}]}