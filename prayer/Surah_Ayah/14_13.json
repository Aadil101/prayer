{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u0650\u0631\u064f\u0633\u064f\u0644\u0650\u0647\u0650\u0645\u06e1 \u0644\u064e\u0646\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0646\u0651\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u0623\u064e\u0631\u06e1\u0636\u0650\u0646\u064e\u0627\u0653 \u0623\u064e\u0648\u06e1 \u0644\u064e\u062a\u064e\u0639\u064f\u0648\u062f\u064f\u0646\u0651\u064e \u0641\u0650\u064a \u0645\u0650\u0644\u0651\u064e\u062a\u0650\u0646\u064e\u0627\u06d6 \u0641\u064e\u0623\u064e\u0648\u06e1\u062d\u064e\u0649\u0670\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1 \u0644\u064e\u0646\u064f\u0647\u06e1\u0644\u0650\u0643\u064e\u0646\u0651\u064e \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u0650\u0631\u064f\u0633\u064f\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "to their Messengers", "word_transliteration": "lirusulihim"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0646\u0651\u064e\u0643\u064f\u0645", "word_translation": "Surely we will drive you out", "word_transliteration": "lanukh'rijannakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0636\u0650\u0646\u064e\u0627\u0653", "word_translation": "our land", "word_transliteration": "ardina"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0644\u064e\u062a\u064e\u0639\u064f\u0648\u062f\u064f\u0646\u0651\u064e", "word_translation": "surely you should return", "word_transliteration": "lata'udunna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "to", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0645\u0650\u0644\u0651\u064e\u062a\u0650\u0646\u064e\u0627\u06d6", "word_translation": "our religion", "word_transliteration": "millatina"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0648\u06e1\u062d\u064e\u0649\u0670\u0653", "word_translation": "So inspired", "word_transliteration": "fa-awha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "ilayhim"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbuhum"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u0647\u06e1\u0644\u0650\u0643\u064e\u0646\u0651\u064e", "word_translation": "We will surely destroy", "word_transliteration": "lanuh'likanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "the wrongdoers", "word_transliteration": "al-zalimina"}]}