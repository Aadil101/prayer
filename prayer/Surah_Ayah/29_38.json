{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u064e\u0627\u062f\u0657\u0627 \u0648\u064e\u062b\u064e\u0645\u064f\u0648\u062f\u064e\u0627\u0652 \u0648\u064e\u0642\u064e\u062f \u062a\u0651\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0645\u0651\u064e\u0633\u064e\u0670\u0643\u0650\u0646\u0650\u0647\u0650\u0645\u06e1\u06d6 \u0648\u064e\u0632\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0635\u064e\u062f\u0651\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0646\u0650 \u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650 \u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0645\u064f\u0633\u06e1\u062a\u064e\u0628\u06e1\u0635\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0627\u062f\u0657\u0627", "word_translation": "And Aad", "word_transliteration": "wa'adan"}, {"word_arabic_uthmani": "\u0648\u064e\u062b\u064e\u0645\u064f\u0648\u062f\u064e\u0627\u0652", "word_translation": "and Thamud", "word_transliteration": "wathamuda"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u062f", "word_translation": "and verily", "word_transliteration": "waqad"}, {"word_arabic_uthmani": "\u062a\u0651\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "(has) become clear", "word_transliteration": "tabayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0633\u064e\u0670\u0643\u0650\u0646\u0650\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "their dwellings", "word_transliteration": "masakinihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0632\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "And made fair-seeming", "word_transliteration": "wazayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'malahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u064e\u062f\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and averted them", "word_transliteration": "fasaddahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "from", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "the Way", "word_transliteration": "al-sabili"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "though they were", "word_transliteration": "wakanu"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0628\u06e1\u0635\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "endowed with insight", "word_transliteration": "mus'tabsirina"}]}