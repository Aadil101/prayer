{"ayahs": {"ayah_uthmani": "\u0642\u064e\u062f\u06e1 \u062c\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645 \u0628\u064e\u0635\u064e\u0627\u0653\u0626\u0650\u0631\u064f \u0645\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1\u06d6 \u0641\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0628\u06e1\u0635\u064e\u0631\u064e \u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0639\u064e\u0645\u0650\u064a\u064e \u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06da \u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u064e\u0627\u06e0 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645 \u0628\u0650\u062d\u064e\u0641\u0650\u064a\u0638\u0656"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645", "word_translation": "has come to you", "word_transliteration": "jaakum"}, {"word_arabic_uthmani": "\u0628\u064e\u0635\u064e\u0627\u0653\u0626\u0650\u0631\u064f", "word_translation": "enlightenment", "word_transliteration": "basairu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "your Lord", "word_transliteration": "rabbikum"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u06e1", "word_translation": "Then whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0635\u064e\u0631\u064e", "word_translation": "sees", "word_transliteration": "absara"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "then (it is) for his soul", "word_transliteration": "falinafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u064a\u064e", "word_translation": "(is) blind", "word_transliteration": "amiya"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06da", "word_translation": "then (it is) against himself", "word_transliteration": "fa'alayha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064e\u0627\u06e0", "word_translation": "(am) I", "word_transliteration": "ana"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645", "word_translation": "over you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0641\u0650\u064a\u0638\u0656", "word_translation": "a guardian", "word_transliteration": "bihafizin"}]}