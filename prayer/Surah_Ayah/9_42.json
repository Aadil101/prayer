{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0648\u06e1 \u0643\u064e\u0627\u0646\u064e \u0639\u064e\u0631\u064e\u0636\u0657\u0627 \u0642\u064e\u0631\u0650\u064a\u0628\u0657\u0627 \u0648\u064e\u0633\u064e\u0641\u064e\u0631\u0657\u0627 \u0642\u064e\u0627\u0635\u0650\u062f\u0657\u0627 \u0644\u0651\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0643\u064e \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u06e2 \u0628\u064e\u0639\u064f\u062f\u064e\u062a\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f \u0671\u0644\u0634\u0651\u064f\u0642\u0651\u064e\u0629\u064f\u06da \u0648\u064e\u0633\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0648\u0650 \u0671\u0633\u06e1\u062a\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627 \u0644\u064e\u062e\u064e\u0631\u064e\u062c\u06e1\u0646\u064e\u0627 \u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1 \u064a\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0648\u0646\u064e \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0643\u064e\u0670\u0630\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "it had been", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0639\u064e\u0631\u064e\u0636\u0657\u0627", "word_translation": "a gain", "word_transliteration": "aradan"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u0650\u064a\u0628\u0657\u0627", "word_translation": "near", "word_transliteration": "qariban"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0641\u064e\u0631\u0657\u0627", "word_translation": "and a journey", "word_transliteration": "wasafaran"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0635\u0650\u062f\u0657\u0627", "word_translation": "easy", "word_transliteration": "qasidan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0643\u064e", "word_translation": "surely they (would) have followed you", "word_transliteration": "la-ittaba'uka"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u06e2", "word_translation": "but", "word_transliteration": "walakin"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u064f\u062f\u064e\u062a\u06e1", "word_translation": "was long", "word_transliteration": "ba'udat"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f", "word_translation": "for them", "word_transliteration": "alayhimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064f\u0642\u0651\u064e\u0629\u064f\u06da", "word_translation": "the distance", "word_transliteration": "al-shuqatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "And they will swear", "word_transliteration": "wasayahlifuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u0650", "word_translation": "If", "word_transliteration": "lawi"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627", "word_translation": "we were able", "word_transliteration": "is'tata'na"}, {"word_arabic_uthmani": "\u0644\u064e\u062e\u064e\u0631\u064e\u062c\u06e1\u0646\u064e\u0627", "word_translation": "certainly we (would) have come forth", "word_transliteration": "lakharajna"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1", "word_translation": "with you", "word_transliteration": "ma'akum"}, {"word_arabic_uthmani": "\u064a\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0648\u0646\u064e", "word_translation": "They destroy", "word_transliteration": "yuh'likuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their own selves", "word_transliteration": "anfusahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "and Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "knows", "word_transliteration": "ya'lamu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "(that) indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0670\u0630\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "(are) surely liars", "word_transliteration": "lakadhibuna"}]}