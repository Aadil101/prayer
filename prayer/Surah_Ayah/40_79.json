{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062c\u064e\u0639\u064e\u0644\u064e \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u064e \u0644\u0650\u062a\u064e\u0631\u06e1\u0643\u064e\u0628\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "for you", "word_transliteration": "lakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u064e", "word_translation": "the cattle", "word_transliteration": "al-an'ama"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u0631\u06e1\u0643\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "that you may ride", "word_transliteration": "litarkabu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "some of them", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "and some of them", "word_transliteration": "wamin'ha"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "you eat", "word_transliteration": "takuluna"}]}