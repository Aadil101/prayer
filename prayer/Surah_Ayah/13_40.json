{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u0645\u0651\u064e\u0627 \u0646\u064f\u0631\u0650\u064a\u064e\u0646\u0651\u064e\u0643\u064e \u0628\u064e\u0639\u06e1\u0636\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0623\u064e\u0648\u06e1 \u0646\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u064a\u064e\u0646\u0651\u064e\u0643\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f \u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And whether", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "(what)", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0646\u064f\u0631\u0650\u064a\u064e\u0646\u0651\u064e\u0643\u064e", "word_translation": "We show you", "word_transliteration": "nuriyannaka"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u0636\u064e", "word_translation": "a part", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "We have promised them", "word_transliteration": "na'iduhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u064a\u064e\u0646\u0651\u064e\u0643\u064e", "word_translation": "We cause you to die", "word_transliteration": "natawaffayannaka"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "so only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "on you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f", "word_translation": "(is) the conveyance", "word_transliteration": "al-balaghu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "and on Us", "word_transliteration": "wa'alayna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u064f", "word_translation": "(is) the reckoning", "word_transliteration": "al-hisabu"}]}