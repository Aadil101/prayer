{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u064a\u064e\u0639\u0650\u062f\u064f\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0641\u064e\u0642\u06e1\u0631\u064e \u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0641\u064e\u062d\u06e1\u0634\u064e\u0627\u0653\u0621\u0650\u06d6 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u0639\u0650\u062f\u064f\u0643\u064f\u0645 \u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u0657 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f \u0648\u064e\u0641\u064e\u0636\u06e1\u0644\u0657\u0627\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0670\u0633\u0650\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "The Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u062f\u064f\u0643\u064f\u0645\u064f", "word_translation": "promises you", "word_transliteration": "ya'idukumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0642\u06e1\u0631\u064e", "word_translation": "[the] poverty", "word_transliteration": "al-faqra"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0643\u064f\u0645", "word_translation": "and orders you", "word_transliteration": "wayamurukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0641\u064e\u062d\u06e1\u0634\u064e\u0627\u0653\u0621\u0650\u06d6", "word_translation": "to immorality", "word_transliteration": "bil-fahshai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "while Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u062f\u064f\u0643\u064f\u0645", "word_translation": "promises you", "word_transliteration": "ya'idukum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u0657", "word_translation": "forgiveness", "word_transliteration": "maghfiratan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from Him", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0648\u064e\u0641\u064e\u0636\u06e1\u0644\u0657\u0627\u06d7", "word_translation": "and bounty", "word_transliteration": "wafadlan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u0633\u0650\u0639\u064c", "word_translation": "(is) All-Encompassing", "word_transliteration": "wasi'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}