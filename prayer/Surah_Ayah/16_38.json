{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0642\u06e1\u0633\u064e\u0645\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062c\u064e\u0647\u06e1\u062f\u064e \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u0644\u064e\u0627 \u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064e\u0646 \u064a\u064e\u0645\u064f\u0648\u062a\u064f\u06da \u0628\u064e\u0644\u064e\u0649\u0670 \u0648\u064e\u0639\u06e1\u062f\u064b\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u062d\u064e\u0642\u0651\u0657\u0627 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e \u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0644\u064e\u0627 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u06e1\u0633\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "And they swear", "word_transliteration": "wa-aqsamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u06e1\u062f\u064e", "word_translation": "strongest", "word_transliteration": "jahda"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their oaths", "word_transliteration": "aymanihim"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "Allah will not resurrect", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064f", "word_translation": "Allah will not resurrect", "word_transliteration": "yab'athu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah will not resurrect", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0645\u064f\u0648\u062a\u064f\u06da", "word_translation": "dies", "word_transliteration": "yamutu"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u064e\u0649\u0670", "word_translation": "Nay", "word_transliteration": "bala"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064b\u0627", "word_translation": "(it is) a promise", "word_transliteration": "wa'dan"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "upon Him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u0657\u0627", "word_translation": "(in) truth", "word_transliteration": "haqqan"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e", "word_translation": "but", "word_transliteration": "walakinna"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e", "word_translation": "most", "word_transliteration": "akthara"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "(of) the mankind", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "know", "word_transliteration": "ya'lamuna"}]}