{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "And obey", "word_transliteration": "wa-ati'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e", "word_translation": "and the Messenger", "word_transliteration": "wal-rasula"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "receive mercy", "word_transliteration": "tur'hamuna"}]}