{"ayahs": {"ayah_uthmani": "\u0647\u064f\u0646\u064e\u0627\u0644\u0650\u0643\u064e \u062a\u064e\u0628\u06e1\u0644\u064f\u0648\u0627\u0652 \u0643\u064f\u0644\u0651\u064f \u0646\u064e\u0641\u06e1\u0633\u0656 \u0645\u0651\u064e\u0627\u0653 \u0623\u064e\u0633\u06e1\u0644\u064e\u0641\u064e\u062a\u06e1\u06da \u0648\u064e\u0631\u064f\u062f\u0651\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u064e\u0648\u06e1\u0644\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6 \u0648\u064e\u0636\u064e\u0644\u0651\u064e \u0639\u064e\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0641\u06e1\u062a\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0647\u064f\u0646\u064e\u0627\u0644\u0650\u0643\u064e", "word_translation": "There", "word_transliteration": "hunalika"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u06e1\u0644\u064f\u0648\u0627\u0652", "word_translation": "will be put to trial", "word_transliteration": "tablu"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064f", "word_translation": "every", "word_transliteration": "kullu"}, {"word_arabic_uthmani": "\u0646\u064e\u0641\u06e1\u0633\u0656", "word_translation": "soul", "word_transliteration": "nafsin"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627\u0653", "word_translation": "(for) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0644\u064e\u0641\u064e\u062a\u06e1\u06da", "word_translation": "it did previously", "word_transliteration": "aslafat"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064f\u062f\u0651\u064f\u0648\u0653\u0627\u0652", "word_translation": "and they will be returned", "word_transliteration": "waruddu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u064