{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u0633\u064e\u0623\u064e\u0644\u06e1\u062a\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u0646\u06e1 \u062e\u064e\u0644\u064e\u0642\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u0648\u064e\u0633\u064e\u062e\u0651\u064e\u0631\u064e \u0671\u0644\u0634\u0651\u064e\u0645\u06e1\u0633\u064e \u0648\u064e\u0671\u0644\u06e1\u0642\u064e\u0645\u064e\u0631\u064e \u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6 \u0641\u064e\u0623\u064e\u0646\u0651\u064e\u0649\u0670 \u064a\u064f\u0624\u06e1\u0641\u064e\u0643\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "And if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0633\u064e\u0623\u064e\u0644\u06e1\u062a\u064e\u0647\u064f\u0645", "word_translation": "you ask them", "word_transliteration": "sa-altahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646\u06e1", "word_translation": "Who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e", "word_translation": "created", "word_transliteration": "khalaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "and the earth", "word_transliteration": "wal-arda"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u062e\u0651\u064e\u0631\u064e", "word_translation": "and subjected", "word_transliteration": "wasakhara"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u0645\u06e1\u0633\u064e", "word_translation": "the sun", "word_transliteration": "al-shamsa"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0642\u064e\u0645\u064e\u0631\u064e", "word_translation": "and the moon", "word_transliteration": "wal-qamara"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0646\u0651\u064e", "word_translation": "Surely they would say", "word_transliteration": "layaqulunna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u0651\u064e\u0649\u0670", "word_translation": "Then how", "word_transliteration": "fa-anna"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0641\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "are they deluded", "word_transliteration": "yu'fakuna"}]}