{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u0643\u064e\u0627\u0646\u064e \u0637\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u0629\u065e \u0645\u0651\u0650\u0646\u0643\u064f\u0645\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064f\u0631\u06e1\u0633\u0650\u0644\u06e1\u062a\u064f \u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u0637\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u0629\u065e \u0644\u0651\u064e\u0645\u06e1 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652 \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0628\u064e\u064a\u06e1\u0646\u064e\u0646\u064e\u0627\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u062e\u064e\u064a\u06e1\u0631\u064f \u0671\u0644\u06e1\u062d\u064e\u0670\u0643\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "(there) is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0637\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u0629\u065e", "word_translation": "a group", "word_transliteration": "taifatun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "(who has) believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "in that which", "word_transliteration": "bi-alladhi"}, {"word_arabic_uthmani": "\u0623\u064f\u0631\u06e1\u0633\u0650\u0644\u06e1\u062a\u064f", "word_translation": "I have been sent", "word_transliteration": "ur'sil'tu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with [it]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0637\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u0629\u065e", "word_translation": "and a group", "word_transliteration": "wataifatun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "they believe", "word_transliteration": "yu'minu"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "then be patient", "word_transliteration": "fa-is'biru"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e", "word_translation": "judges", "word_transliteration": "yahkuma"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0646\u064e\u0627\u06da", "word_translation": "between us", "word_transliteration": "baynana"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064f", "word_translation": "(is the) Best", "word_transliteration": "khayru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0670\u0643\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) [the] Judges", "word_transliteration": "al-hakimina"}]}