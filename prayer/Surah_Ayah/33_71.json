{"ayahs": {"ayah_uthmani": "\u064a\u064f\u0635\u06e1\u0644\u0650\u062d\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0643\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064f\u0637\u0650\u0639\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5 \u0641\u064e\u0642\u064e\u062f\u06e1 \u0641\u064e\u0627\u0632\u064e \u0641\u064e\u0648\u06e1\u0632\u064b\u0627 \u0639\u064e\u0638\u0650\u064a\u0645\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064f\u0635\u06e1\u0644\u0650\u062d\u06e1", "word_translation": "He will amend", "word_transliteration": "yus'lih"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your deeds", "word_transliteration": "a'malakum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "and forgive", "word_transliteration": "wayaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0643\u064f\u0645\u06e1\u06d7", "word_translation": "your sins", "word_transliteration": "dhunubakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064f\u0637\u0650\u0639\u0650", "word_translation": "obeys", "word_transliteration": "yuti'i"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and His Messenger", "word_transliteration": "warasulahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "certainly", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0641\u064e\u0627\u0632\u064e", "word_translation": "has attained", "word_transliteration": "faza"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u06e1\u0632\u064b\u0627", "word_translation": "an attainment", "word_transliteration": "fawzan"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u064b\u0627", "word_translation": "great", "word_transliteration": "aziman"}]}