{"ayahs": {"ayah_uthmani": "\u064a\u064f\u0631\u0650\u064a\u062f\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u0650\u064a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1 \u0633\u064f\u0646\u064e\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u062a\u064f\u0648\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u0650\u064a\u0645\u064c \u062d\u064e\u0643\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u062f\u064f", "word_translation": "Wishes", "word_transliteration": "yuridu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e", "word_translation": "to make clear", "word_transliteration": "liyubayyina"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and to guide you", "word_transliteration": "wayahdiyakum"}, {"word_arabic_uthmani": "\u0633\u064f\u0646\u064e\u0646\u064e", "word_translation": "(to) ways", "word_transliteration": "sunana"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(of) those", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064f\u0645\u06e1", "word_translation": "before you", "word_transliteration": "qablikum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062a\u064f\u0648\u0628\u064e", "word_translation": "and (to) accept repentance", "word_transliteration": "wayatuba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06d7", "word_translation": "from you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "(is) All-Knowing", "word_transliteration": "alimun"}, {"word_arabic_uthmani": "\u062d\u064e\u0643\u0650\u064a\u0645\u065e", "word_translation": "All-Wise", "word_transliteration": "hakimun"}]}