{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u062a\u064e\u0639\u064f\u062f\u0651\u064f\u0648\u0627\u0652 \u0646\u0650\u0639\u06e1\u0645\u064e\u0629\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0627 \u062a\u064f\u062d\u06e1\u0635\u064f\u0648\u0647\u064e\u0627\u0653\u06d7 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u064f\u062f\u0651\u064f\u0648\u0627\u0652", "word_translation": "you should count", "word_transliteration": "ta'uddu"}, {"word_arabic_uthmani": "\u0646\u0650\u0639\u06e1\u0645\u064e\u0629\u064e", "word_translation": "the Favors of Allah", "word_transliteration": "ni'mata"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "the Favors of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u06e1\u0635\u064f\u0648\u0647\u064e\u0627\u0653\u06d7", "word_translation": "you could enumerate them", "word_transliteration": "tuh'suha"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "laghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}