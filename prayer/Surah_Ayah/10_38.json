{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0645\u06e1 \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670\u0647\u064f\u06d6 \u0642\u064f\u0644\u06e1 \u0641\u064e\u0623\u06e1\u062a\u064f\u0648\u0627\u0652 \u0628\u0650\u0633\u064f\u0648\u0631\u064e\u0629\u0656 \u0645\u0651\u0650\u062b\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652 \u0645\u064e\u0646\u0650 \u0671\u0633\u06e1\u062a\u064e\u0637\u064e\u0639\u06e1\u062a\u064f\u0645 \u0645\u0651\u0650\u0646 \u062f\u064f\u0648\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u0635\u064e\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1", "word_translation": "Or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "(do) they say", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670\u0647\u064f\u06d6", "word_translation": "He has invented it", "word_transliteration": "if'tarahu"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u06e1\u062a\u064f\u0648\u0627\u0652", "word_translation": "Then bring", "word_transliteration": "fatu"}, {"word_arabic_uthmani": "\u0628\u0650\u0633\u064f\u0648\u0631\u064e\u0629\u0656", "word_translation": "a Surah", "word_transliteration": "bisuratin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "like it", "word_transliteration": "mith'lihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652", "word_translation": "and call", "word_transliteration": "wa-id'u"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u065