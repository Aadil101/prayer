{"ayahs": {"ayah_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0648\u064e\u0635\u064e\u0648\u0651\u064e\u0631\u064e\u0643\u064f\u0645\u06e1 \u0641\u064e\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e \u0635\u064f\u0648\u064e\u0631\u064e\u0643\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0671\u0644\u06e1\u0645\u064e\u0635\u0650\u064a\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e", "word_translation": "He created", "word_transliteration": "khalaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "and the earth", "word_transliteration": "wal-arda"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "with truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u0648\u0651\u064e\u0631\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and He formed you", "word_transliteration": "wasawwarakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e", "word_translation": "and made good", "word_transliteration": "fa-ahsana"}, {"word_arabic_uthmani": "\u0635\u064f\u0648\u064e\u0631\u064e\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "your forms", "word_transliteration": "suwarakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "and to Him", "word_transliteration": "wa-ilayhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0635\u0650\u064a\u0631\u064f", "word_translation": "(is) the final return", "word_transliteration": "al-masiru"}]}