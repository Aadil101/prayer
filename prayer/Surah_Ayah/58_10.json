{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0671\u0644\u0646\u0651\u064e\u062c\u06e1\u0648\u064e\u0649\u0670 \u0645\u0650\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650 \u0644\u0650\u064a\u064e\u062d\u06e1\u0632\u064f\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0644\u064e\u064a\u06e1\u0633\u064e \u0628\u0650\u0636\u064e\u0627\u0653\u0631\u0651\u0650\u0647\u0650\u0645\u06e1 \u0634\u064e\u064a\u06e1\u0640\u0654\u064b\u0627 \u0625\u0650\u0644\u0651\u064e\u0627 \u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0648\u064e\u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0644\u06e1\u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u0650 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u062c\u06e1\u0648\u064e\u0649\u0670", "word_translation": "the secret counsels", "word_transliteration": "al-najwa"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "(are) from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytani"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u062d\u06e1\u0632\u064f\u0646\u064e", "word_translation": "that he may grieve", "word_transliteration": "liyahzuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u064a\u06e1\u0633\u064e", "word_translation": "but not", "word_transliteration": "walaysa"}, {"word_arabic_uthmani": "\u0628\u0650\u0636\u064e\u0627\u0653\u0631\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "he (can) harm them", "word_transliteration": "bidarrihim"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0640\u0654\u064b\u0627", "word_translation": "(in) anything", "word_transliteration": "shayan"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650", "word_translation": "by (Allah's) permission", "word_transliteration": "bi-idh'ni"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(by) Allah's (permission)", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649", "word_translation": "And upon", "word_transliteration": "wa'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u06e1\u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u0650", "word_translation": "let put (their) trust", "word_transliteration": "falyatawakkali"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}]}