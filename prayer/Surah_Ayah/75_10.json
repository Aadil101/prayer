{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d \u0623\u064e\u064a\u06e1\u0646\u064e \u0671\u0644\u06e1\u0645\u064e\u0641\u064e\u0631\u0651\u064f"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "Will say", "word_transliteration": "yaqulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f", "word_translation": "[the] man", "word_transliteration": "al-insanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0646\u064e", "word_translation": "Where", "word_transliteration": "ayna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0641\u064e\u0631\u0651\u064f", "word_translation": "(is) the escape", "word_transliteration": "al-mafaru"}]}