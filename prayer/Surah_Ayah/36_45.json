{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0645\u064e\u0627 \u0628\u064e\u064a\u06e1\u0646\u064e \u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0643\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0627 \u062e\u064e\u0644\u06e1\u0641\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "Fear", "word_transliteration": "ittaqu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e", "word_translation": "(is) before you", "word_transliteration": "bayna"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "(is) before you", "word_transliteration": "aydikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u06e1\u0641\u064e\u0643\u064f\u0645\u06e1", "word_translation": "(is) behind you", "word_transliteration": "khalfakum"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "receive mercy", "word_transliteration": "tur'hamuna"}]}