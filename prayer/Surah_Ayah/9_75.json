{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0646\u06e1 \u0639\u064e\u0670\u0647\u064e\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0626\u0650\u0646\u06e1 \u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u064e\u0627 \u0645\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0644\u064e\u0646\u064e\u0635\u0651\u064e\u062f\u0651\u064e\u0642\u064e\u0646\u0651\u064e \u0648\u064e\u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "And among them", "word_transliteration": "wamin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646\u06e1", "word_translation": "(is he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0639\u064e\u0670\u0647\u064e\u062f\u064e", "word_translation": "made a covenant", "word_transliteration": "ahada"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "(with) Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "If", "word_transliteration": "la-in"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u064e\u0627", "word_translation": "He gives us", "word_transliteration": "atana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "His bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0635\u0651\u064e\u062f\u0651\u064e\u0642\u064e\u0646\u0651\u064e", "word_translation": "surely we will give charity", "word_transliteration": "lanassaddaqanna"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e", "word_translation": "and surely we will be", "word_transliteration": "walanakunanna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "the righteous", "word_transliteration": "al-salihina"}]}