{"ayahs": {"ayah_uthmani": "\u06de\u0641\u064e\u062e\u064e\u0644\u064e\u0641\u064e \u0645\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1 \u062e\u064e\u0644\u06e1\u0641\u064c \u0623\u064e\u0636\u064e\u0627\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0634\u0651\u064e\u0647\u064e\u0648\u064e\u0670\u062a\u0650\u06d6 \u0641\u064e\u0633\u064e\u0648\u06e1\u0641\u064e \u064a\u064e\u0644\u06e1\u0642\u064e\u0648\u06e1\u0646\u064e \u063a\u064e\u064a\u0651\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u06de\u0641\u064e\u062e\u064e\u0644\u064e\u0641\u064e", "word_translation": "Then succeeded", "word_transliteration": "fakhalafa"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e2", "word_translation": "after them", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1", "word_translation": "after them", "word_transliteration": "ba'dihim"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u06e1\u0641\u064c", "word_translation": "successors", "word_transliteration": "khalfun"}, {"word_arabic_uthmani": "\u0623\u064e\u0636\u064e\u0627\u0639\u064f\u0648\u0627\u0652", "word_translation": "who neglected", "word_transliteration": "ada'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "and they followed", "word_transliteration": "wa-ittaba'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u0647\u064e\u0648\u064e\u0670\u062a\u0650\u06d6", "word_translation": "the lusts", "word_transliteration": "al-shahawati"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0648\u06e1\u0641\u064e", "word_translation": "so soon", "word_transliteration": "fasawfa"}, {"word_arabic_uthmani": "\u064a\u064e\u0644\u06e1\u0642\u064e\u0648\u06e1\u0646\u064e", "word_translation": "they will meet", "word_transliteration": "yalqawna"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u0651\u064b\u0627", "word_translation": "evil", "word_transliteration": "ghayyan"}]}