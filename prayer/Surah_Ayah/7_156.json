ion": "but My Mercy", "word_transliteration": "warahmati"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u0650\u0639\u064e\u062a\u06e1", "word_translation": "encompasses", "word_transliteration": "wasi'at"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "every", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u0656\u06da", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0623\u064e\u0643\u06e1\u062a\u064f\u0628\u064f\u0647\u064e\u0627", "word_translation": "So I will ordain it", "word_transliteration": "fasa-aktubuha"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "for those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) righteous", "word_transliteration": "yattaquna"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0646\u064e", "word_translation": "and give", "word_transliteration": "wayu'tuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e", "word_translation": "zakah", "word_transliteration": "al-zakata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "and those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0647\u064f\u0645", "word_translation": "[they]", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "in Our Verses", "word_transliteration": "biayatina"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "they believe", "word_transliteration": "yu'minuna"}]}