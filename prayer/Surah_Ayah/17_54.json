{"ayahs": {"ayah_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0628\u0650\u0643\u064f\u0645\u06e1\u06d6 \u0625\u0650\u0646 \u064a\u064e\u0634\u064e\u0623\u06e1 \u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0643\u064f\u0645\u06e1 \u0623\u064e\u0648\u06e1 \u0625\u0650\u0646 \u064a\u064e\u0634\u064e\u0623\u06e1 \u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u06e1\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0670\u0643\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0648\u064e\u0643\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "Your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) most knowing", "word_transliteration": "a'lamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "of you", "word_transliteration": "bikum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0623\u06e1", "word_translation": "He wills", "word_transliteration": "yasha"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "He will have mercy on you", "word_transliteration": "yarhamkum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0623\u06e1", "word_translation": "He wills", "word_transliteration": "yasha"}, {"word_arabic_uthmani": "\u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u06e1\u0643\u064f\u0645\u06e1\u06da", "word_translation": "He will punish you", "word_transliteration": "yu'adhib'kum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0670\u0643\u064e", "word_translation": "We have sent you", "word_transliteration": "arsalnaka"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "over them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u0650\u064a\u0644\u0657\u0627", "word_translation": "(as) a guardian", "word_transliteration": "wakilan"}]}