ation": "their backs", "word_transliteration": "adbariha"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0646\u064e\u0644\u06e1\u0639\u064e\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "We curse them", "word_transliteration": "nal'anahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0646\u0651\u064e\u0627\u0653", "word_translation": "We cursed", "word_transliteration": "la'anna"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064e", "word_translation": "companions", "word_transliteration": "ashaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u06e1\u062a\u0650\u06da", "word_translation": "(of) the Sabbath", "word_transliteration": "al-sabti"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u064f", "word_translation": "(the) command", "word_transliteration": "amru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0645\u064e\u0641\u06e1\u0639\u064f\u0648\u0644\u064b\u0627", "word_translation": "(always) executed", "word_transliteration": "maf'ulan"}]}