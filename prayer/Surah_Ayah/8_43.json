{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0630\u06e1 \u064a\u064f\u0631\u0650\u064a\u0643\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0641\u0650\u064a \u0645\u064e\u0646\u064e\u0627\u0645\u0650\u0643\u064e \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627\u06d6 \u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0631\u064e\u0649\u0670\u0643\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627 \u0644\u0651\u064e\u0641\u064e\u0634\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u062a\u064e\u0646\u064e\u0670\u0632\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0631\u0650 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0633\u064e\u0644\u0651\u064e\u0645\u064e\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2 \u0628\u0650\u0630\u064e\u0627\u062a\u0650 \u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "When", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u0643\u064e\u0647\u064f\u0645\u064f", "word_translation": "you (where) shown them", "word_transliteration": "yurikahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u064e\u0627\u0645\u0650\u0643\u064e", "word_translation": "your dream", "word_transliteration": "manamika"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627\u06d6", "word_translation": "(as) few", "word_transliteration": "qalilan"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "and if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0649\u0670\u0643\u064e\u0647\u064f\u0645\u06e1", "word_translation": "He had shown them to you", "word_transliteration": "arakahum"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627", "word_translation": "(as) many", "word_transliteration": "kathiran"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0641\u064e\u0634\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "surely you would have lost courage", "word_transliteration": "lafashil'tum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062a\u064e\u0646\u064e\u0670\u0632\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "and surely you would have disputed", "word_transliteration": "walatanaza'tum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0631\u0650", "word_translation": "the matter", "word_transliteration": "al-amri"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e", "word_translation": "but", "word_transliteration": "walakinna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u0651\u064e\u0645\u064e\u06da", "word_translation": "saved (you)", "word_transliteration": "sallama"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed, He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2", "word_translation": "(is) All-Knower", "word_transliteration": "alimun"}, {"word_arabic_uthmani": "\u0628\u0650\u0630\u064e\u0627\u062a\u0650", "word_translation": "of what is in", "word_transliteration": "bidhati"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650", "word_translation": "the breasts", "word_transliteration": "al-suduri"}]}