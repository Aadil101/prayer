{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0639\u064e\u0645\u0651\u064e\u0627 \u0642\u064e\u0644\u0650\u064a\u0644\u0656 \u0644\u0651\u064e\u064a\u064f\u0635\u06e1\u0628\u0650\u062d\u064f\u0646\u0651\u064e \u0646\u064e\u0670\u062f\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0651\u064e\u0627", "word_translation": "After a little while", "word_transliteration": "amma"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0656", "word_translation": "After a little while", "word_transliteration": "qalilin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u064a\u064f\u0635\u06e1\u0628\u0650\u062d\u064f\u0646\u0651\u064e", "word_translation": "surely they will become", "word_transliteration": "layus'bihunna"}, {"word_arabic_uthmani": "\u0646\u064e\u0670\u062f\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "regretful", "word_transliteration": "nadimina"}]}