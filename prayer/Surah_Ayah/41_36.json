{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0645\u0651\u064e\u0627 \u064a\u064e\u0646\u0632\u064e\u063a\u064e\u0646\u0651\u064e\u0643\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650 \u0646\u064e\u0632\u06e1\u063a\u065e \u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u0650\u0630\u06e1 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0647\u064f\u0648\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0645\u0651\u064e\u0627", "word_translation": "And if", "word_transliteration": "wa-imma"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u0632\u064e\u063a\u064e\u0646\u0651\u064e\u0643\u064e", "word_translation": "whisper comes to you", "word_transliteration": "yanzaghannaka"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650", "word_translation": "the Shaitan", "word_transliteration": "al-shaytani"}, {"word_arabic_uthmani": "\u0646\u064e\u0632\u06e1\u063a\u065e", "word_translation": "an evil suggestion", "word_transliteration": "nazghun"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u0650\u0630\u06e1", "word_translation": "then seek refuge", "word_transliteration": "fa-is'ta'idh"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "[He]", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f", "word_translation": "(is) the All-Hearer", "word_transliteration": "al-sami'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f", "word_translation": "the All-Knower", "word_transliteration": "al-'alimu"}]}