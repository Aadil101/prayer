{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0633\u06e1\u062a\u064e\u0645\u0650\u0639\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e \u0641\u064e\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u064e \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e\u0647\u064f\u06e5\u0653\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0647\u064e\u062f\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6 \u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u06e1 \u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0645\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "they listen (to)", "word_transliteration": "yastami'una"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e", "word_translation": "the Word", "word_transliteration": "al-qawla"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "then follow", "word_transliteration": "fayattabi'una"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e\u0647\u064f\u06e5\u0653\u06da", "word_translation": "the best thereof", "word_transliteration": "ahsanahu"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) they whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0647\u064e\u062f\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "Allah has guided them", "word_transliteration": "hadahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6", "word_translation": "Allah has guided them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "and those", "word_transliteration": "wa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "are [they]", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652", "word_translation": "the men of understanding", "word_transliteration": "ulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650", "word_translation": "the men of understanding", "word_transliteration": "al-albabi"}]}