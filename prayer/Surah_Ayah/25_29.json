{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0636\u064e\u0644\u0651\u064e\u0646\u0650\u064a \u0639\u064e\u0646\u0650 \u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u0650 \u0628\u064e\u0639\u06e1\u062f\u064e \u0625\u0650\u0630\u06e1 \u062c\u064e\u0627\u0653\u0621\u064e\u0646\u0650\u064a\u06d7 \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0644\u0650\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u0650 \u062e\u064e\u0630\u064f\u0648\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0636\u064e\u0644\u0651\u064e\u0646\u0650\u064a", "word_translation": "he led me astray", "word_transliteration": "adallani"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "from", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u0650", "word_translation": "the Reminder", "word_transliteration": "al-dhik'ri"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "[when]", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u0646\u0650\u064a\u06d7", "word_translation": "it (had) come to me", "word_transliteration": "jaani"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u0650", "word_translation": "to the man", "word_transliteration": "lil'insani"}, {"word_arabic_uthmani": "\u062e\u064e\u0630\u064f\u0648\u0644\u0657\u0627", "word_translation": "a deserter", "word_transliteration": "khadhulan"}]}