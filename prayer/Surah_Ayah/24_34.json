{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0656 \u0645\u0651\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0656 \u0648\u064e\u0645\u064e\u062b\u064e\u0644\u0657\u0627 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062e\u064e\u0644\u064e\u0648\u06e1\u0627\u0652 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0648\u06e1\u0639\u0650\u0638\u064e\u0629\u0657 \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And verily", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We have sent down", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "ilaykum"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0656", "word_translation": "Verses", "word_transliteration": "ayatin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0656", "word_translation": "clear", "word_transliteration": "mubayyinatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u062b\u064e\u0644\u0657\u0627", "word_translation": "and an example", "word_transliteration": "wamathalan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"w