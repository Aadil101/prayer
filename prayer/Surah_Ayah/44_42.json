{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064e\u0646 \u0631\u0651\u064e\u062d\u0650\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f \u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "Except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(on) whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u0645\u064e", "word_translation": "Allah has mercy", "word_transliteration": "rahima"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "Allah has mercy", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed, He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "[He]", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f", "word_translation": "(is) the All-Mighty", "word_transliteration": "al-'azizu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f", "word_translation": "the Most Merciful", "word_transliteration": "al-rahimu"}]}