{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0631\u064e\u0623\u064e\u0648\u06e1\u0647\u064f \u0632\u064f\u0644\u06e1\u0641\u064e\u0629\u0657 \u0633\u0650\u064a\u0653\u0640\u0654\u064e\u062a\u06e1 \u0648\u064f\u062c\u064f\u0648\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0643\u064f\u0646\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u062a\u064e\u062f\u0651\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "But when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0631\u064e\u0623\u064e\u0648\u06e1\u0647\u064f", "word_translation": "they (will) see it", "word_transliteration": "ra-awhu"}, {"word_arabic_uthmani": "\u0632\u064f\u0644\u06e1\u0641\u064e\u0629\u0657", "word_translation": "approaching", "word_transliteration": "zul'fatan"}, {"word_arabic_uthmani": "\u0633\u0650\u064a\u0653\u0640\u0654\u064e\u062a\u06e1", "word_translation": "(will be) distressed", "word_transliteration": "siat"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u064f", "word_translation": "(the) faces", "word_transliteration": "wujuhu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(of) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "and it will be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) that which", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "for it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u062a\u064e\u062f\u0651\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "call", "word_transliteration": "tadda'una"}]}