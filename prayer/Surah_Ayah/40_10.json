{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u064a\u064f\u0646\u064e\u0627\u062f\u064e\u0648\u06e1\u0646\u064e \u0644\u064e\u0645\u064e\u0642\u06e1\u062a\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0623\u064e\u0643\u06e1\u0628\u064e\u0631\u064f \u0645\u0650\u0646 \u0645\u0651\u064e\u0642\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0630\u06e1 \u062a\u064f\u062f\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650 \u0641\u064e\u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u064e\u0627\u062f\u064e\u0648\u06e1\u0646\u064e", "word_translation": "will be cried out to them", "word_transliteration": "yunadawna"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u0642\u06e1\u062a\u064f", "word_translation": "(Allah's) hatred", "word_transliteration": "lamaqtu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah's (hatred)", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u06e1\u0628\u064e\u0631\u064f", "word_translation": "(was) greater", "word_transliteration": "akbaru"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "than", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0642\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your hatred", "word_transliteration": "maqtikum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0643\u064f\u0645\u06e1", "word_translation": "(of) yourselves", "word_transliteration": "anfusakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "when", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u062a\u064f\u062f\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e", "word_translation": "you were called", "word_transliteration": "tud'awna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650", "word_translation": "the faith", "word_transliteration": "al-imani"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "and you disbelieved", "word_transliteration": "fatakfuruna"}]}