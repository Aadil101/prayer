{"ayahs": {"ayah_uthmani": "\u0627\u0644\u0653\u0631\u06da \u0643\u0650\u062a\u064e\u0670\u0628\u064c \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0644\u0650\u062a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650 \u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0650 \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u0650 \u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u062f\u0650"}, "words": [{"word_arabic_uthmani": "\u0627\u0644\u0653\u0631\u06da", "word_translation": "Alif Laam Ra", "word_transliteration": "alif-lam-ra"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u064c", "word_translation": "A Book", "word_transliteration": "kitabun"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "which We have revealed", "word_transliteration": "anzalnahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e", "word_translation": "so that you may bring out", "word_transliteration": "litukh'rija"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "the mankind", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650", "word_translation": "the darkness[es]", "word_transliteration": "al-zulumati"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650", "word_translation": "the light", "word_transliteration": "al-nuri"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650", "word_translation": "by the permission", "word_transliteration": "bi-idh'ni"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0650", "word_translation": "the Path", "word_transliteration": "sirati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u0650", "word_translation": "(of) the All-Mighty", "word_transliteration": "al-'azizi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u062f\u0650", "word_translation": "the Praiseworthy", "word_transliteration": "al-hamidi"}]}