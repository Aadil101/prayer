{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627\u0653 \u0625\u0650\u0641\u06e1\u0643\u064c \u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670\u0647\u064f \u0648\u064e\u0623\u064e\u0639\u064e\u0627\u0646\u064e\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0642\u064e\u0648\u06e1\u0645\u064c \u0621\u064e\u0627\u062e\u064e\u0631\u064f\u0648\u0646\u064e\u06d6 \u0641\u064e\u0642\u064e\u062f\u06e1 \u062c\u064e\u0627\u0653\u0621\u064f\u0648 \u0638\u064f\u0644\u06e1\u0645\u0657\u0627 \u0648\u064e\u0632\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And say", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "Not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627\u0653", "word_translation": "(is) but", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0625\u0650\u0641\u06e1\u0643\u064c", "word_translation": "a lie", "word_transliteration": "if'kun"}, {"word_arabic_uthmani": "\u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670\u0647\u064f", "word_translation": "he invented it", "word_transliteration": "if'tarahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0639\u064e\u062