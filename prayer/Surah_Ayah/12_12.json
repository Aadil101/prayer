{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u0650\u0644\u06e1\u0647\u064f \u0645\u064e\u0639\u064e\u0646\u064e\u0627 \u063a\u064e\u062f\u0657\u0627 \u064a\u064e\u0631\u06e1\u062a\u064e\u0639\u06e1 \u0648\u064e\u064a\u064e\u0644\u06e1\u0639\u064e\u0628\u06e1 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5 \u0644\u064e\u062d\u064e\u0670\u0641\u0650\u0638\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u0650\u0644\u06e1\u0647\u064f", "word_translation": "Send him", "word_transliteration": "arsil'hu"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0646\u064e\u0627", "word_translation": "with us", "word_transliteration": "ma'ana"}, {"word_arabic_uthmani": "\u063a\u064e\u062f\u0657\u0627", "word_translation": "tomorrow", "word_transliteration": "ghadan"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062a\u064e\u0639\u06e1", "word_translation": "(to) enjoy", "word_transliteration": "yarta'"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0644\u06e1\u0639\u064e\u0628\u06e1", "word_translation": "and play", "word_transliteration": "wayal'ab"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "And indeed, we", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u064e\u0670\u0641\u0650\u0638\u064f\u0648\u0646\u064e", "word_translation": "(will) surely (be) guardians", "word_transliteration": "lahafizuna"}]}