{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f \u064a\u064f\u0639\u06e1\u0631\u064e\u0636\u064f\u0648\u0646\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u063a\u064f\u062f\u064f\u0648\u0651\u0657\u0627 \u0648\u064e\u0639\u064e\u0634\u0650\u064a\u0651\u0657\u0627\u06da \u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0642\u064f\u0648\u0645\u064f \u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f \u0623\u064e\u062f\u06e1\u062e\u0650\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0644\u064e \u0641\u0650\u0631\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e \u0623\u064e\u0634\u064e\u062f\u0651\u064e \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f", "word_translation": "The Fire", "word_transliteration": "al-naru"}, {"word_arabic_uthmani": "\u064a\u064f\u0639\u06e1\u0631\u064e\u0636\u064f\u0648\u0646\u064e", "word_translation": "they are exposed", "word_transliteration": "yu'raduna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "to it", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u063a\u064f\u062f\u064f\u0648\u0651\u0657\u0627", "word_translation": "morning", "word_transliteration": "ghuduwwan"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0634\u0650\u064a\u0651\u0657\u0627\u06da", "word_translation": "and evening", "word_transliteration": "wa'ashiyyan"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "And (the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064f\u0648\u0645\u064f", "word_translation": "(will be) established", "word_transliteration": "taqumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f", "word_translation": "the Hour", "word_transliteration": "al-sa'atu"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u06e1\u062e\u0650\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "Cause to enter", "word_transliteration": "adkhilu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0644\u064e", "word_translation": "(the) people", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0641\u0650\u0631\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e", "word_translation": "(of) Firaun", "word_transliteration": "fir'awna"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u064e\u062f\u0651\u064e", "word_translation": "(in the) severest", "word_transliteration": "ashadda"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "punishment", "word_transliteration": "al-'adhabi"}]}