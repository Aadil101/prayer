{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0633\u0650\u064a\u0642\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652 \u0631\u064e\u0628\u0651\u064e\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650 \u0632\u064f\u0645\u064e\u0631\u064b\u0627\u06d6 \u062d\u064e\u062a\u0651\u064e\u0649\u0670\u0653 \u0625\u0650\u0630\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0647\u064e\u0627 \u0648\u064e\u0641\u064f\u062a\u0650\u062d\u064e\u062a\u06e1 \u0623\u064e\u0628\u06e1\u0648\u064e\u0670\u0628\u064f\u0647\u064e\u0627 \u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u062e\u064e\u0632\u064e\u0646\u064e\u062a\u064f\u0647\u064e\u0627 \u0633\u064e\u0644\u064e\u0670\u0645\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0637\u0650\u0628\u06e1\u062a\u064f\u0645\u06e1 \u0641\u064e\u0671\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0647\u064e\u0627 \u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0633\u0650\u064a\u0642\u064e", "word_translation": "And (will) be driven", "word_transliteration": "wasiqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652", "word_translation": "feared", "word_transliteration": "ittaqaw"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650", "word_translation": "Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u0632\u064f\u0645\u064e\u0631\u064b\u0627\u06d6", "word_translation": "(in) groups", "word_transliteration": "zumaran"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670\u0653", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0647\u064e\u0627", "word_translation": "they reach it", "word_transliteration": "jauha"}, {"word_arabic_uthmani": "\u0648\u064e\u0641\u064f\u062a\u0650\u062d\u064e\u062a\u06e1", "word_translation": "and (will) be opened", "word_transliteration": "wafutihat"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0648\u064e\u0670\u0628\u064f\u0647\u064e\u0627", "word_translation": "its gates", "word_transliteration": "abwabuha"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "and (will) say", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u062e\u064e\u0632\u064e\u0646\u064e\u062a\u064f\u0647\u064e\u0627", "word_translation": "its keepers", "word_transliteration": "khazanatuha"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u064e\u0670\u0645\u064c", "word_translation": "Peace be", "word_transliteration": "salamun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0637\u0650\u0628\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you have done well", "word_transliteration": "tib'tum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0647\u064e\u0627", "word_translation": "so enter it", "word_transliteration": "fa-ud'khuluha"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e", "word_translation": "(to) abide eternally", "word_transliteration": "khalidina"}]}