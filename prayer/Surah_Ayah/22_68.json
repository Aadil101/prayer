{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u062c\u064e\u0670\u062f\u064e\u0644\u064f\u0648\u0643\u064e \u0641\u064e\u0642\u064f\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0627 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062c\u064e\u0670\u062f\u064e\u0644\u064f\u0648\u0643\u064e", "word_translation": "they argue (with) you", "word_transliteration": "jadaluka"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u0650", "word_translation": "then say", "word_transliteration": "faquli"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) most knowing", "word_transliteration": "a'lamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "you do", "word_transliteration": "ta'maluna"}]}