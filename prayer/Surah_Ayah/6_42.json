{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u0649\u0670\u0653 \u0623\u064f\u0645\u064e\u0645\u0656 \u0645\u0651\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e \u0641\u064e\u0623\u064e\u062e\u064e\u0630\u06e1\u0646\u064e\u0670\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u0623\u06e1\u0633\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u0636\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0636\u064e\u0631\u0651\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And certainly", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We sent (Messengers)", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670\u0653", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u064e\u0645\u0656", "word_translation": "nations", "word_transliteration": "umamin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e", "word_translation": "before you", "word_transliteration": "qablika"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062e\u064e\u0630\u06e1\u0646\u064e\u0670\u0647\u064f\u0645", "word_translation": "then We seized them", "word_transliteration": "fa-akhadhnahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u0623\u06e1\u0633\u064e\u0627\u0653\u0621\u0650", "word_translation": "with adversity", "word_transliteration": "bil-basai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0636\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650", "word_translation": "and hardship", "word_transliteration": "wal-darai"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0636\u064e\u0631\u0651\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "humble themselves", "word_transliteration": "yatadarra'una"}]}