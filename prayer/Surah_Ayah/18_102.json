{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u062d\u064e\u0633\u0650\u0628\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646 \u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0627\u0652 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u064a \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650\u064a\u0653 \u0623\u064e\u0648\u06e1\u0644\u0650\u064a\u064e\u0627\u0653\u0621\u064e\u06da \u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0646\u064f\u0632\u064f\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u062d\u064e\u0633\u0650\u0628\u064e", "word_translation": "Do then think", "word_transliteration": "afahasiba"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0627\u0652", "word_translation": "they (can) take", "word_transliteration": "yattakhidhu"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u064a", "word_translation": "My servants", "word_transliteration": "ibadi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "besides Me", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650\u064a\u0653", "word_translation": "besides Me", "word_transliteration": "duni"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u0644\u0650\u064a\u064e\u0627\u0653\u0621\u064e\u06da", "word_translation": "(as) protectors", "word_transliteration": "awliyaa"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "Indeed, We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "We have prepared", "word_transliteration": "a'tadna"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u0646\u064f\u0632\u064f\u0644\u0657\u0627", "word_translation": "(as) a lodging", "word_transliteration": "nuzulan"}]}