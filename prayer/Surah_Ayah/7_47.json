{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0635\u064f\u0631\u0650\u0641\u064e\u062a\u06e1 \u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064f\u0647\u064f\u0645\u06e1 \u062a\u0650\u0644\u06e1\u0642\u064e\u0627\u0653\u0621\u064e \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650 \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0644\u064e\u0627 \u062a\u064e\u062c\u06e1\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0645\u064e\u0639\u064e \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0635\u064f\u0631\u0650\u0641\u064e\u062a\u06e1", "word_translation": "are turned", "word_transliteration": "surifat"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their eyes", "word_transliteration": "absaruhum"}, {"word_arabic_uthmani": "\u062a\u0650\u0644\u06e1\u0642\u064e\u0627\u0653\u0621\u064e", "word_translation": "towards", "word_transliteration": "til'qaa"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650", "word_translation": "(the) companions", "word_transliteration": "ashabi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "(of) the Fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they (will) say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord!", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", 