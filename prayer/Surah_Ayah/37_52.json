{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0623\u064e\u0621\u0650\u0646\u0651\u064e\u0643\u064e \u0644\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0635\u064e\u062f\u0651\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "Who (would) say", "word_transliteration": "yaqulu"}, {"word_arabic_uthmani": "\u0623\u064e\u0621\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "Are you indeed", "word_transliteration": "a-innaka"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0650\u0646\u064e", "word_translation": "surely of", "word_transliteration": "lamina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0635\u064e\u062f\u0651\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "those who believe", "word_transliteration": "al-musadiqina"}]}