{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u0650\u0628\u064e\u0627\u062f\u064f \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0645\u06e1\u0634\u064f\u0648\u0646\u064e \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0647\u064e\u0648\u06e1\u0646\u0657\u0627 \u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u062e\u064e\u0627\u0637\u064e\u0628\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u064f\u0648\u0646\u064e \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0633\u064e\u0644\u064e\u0670\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u0650\u0628\u064e\u0627\u062f\u064f", "word_translation": "And (the) slaves", "word_transliteration": "wa'ibadu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "(of) the Most Gracious", "word_transliteration": "al-rahmani"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0645\u06e1\u0634\u064f\u0648\u0646\u064e", "word_translation": "walk", "word_transliteration": "yamshuna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0647\u064e\u0648\u06e1\u0646\u0657\u0627", "word_translation": "(in) humbleness", "word_transliteration": "hawnan"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "and when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u062e\u064e\u0627\u0637\u064e\u0628\u064e\u0647\u064f\u0645\u064f", "word_translation": "address them", "word_transliteration": "khatabahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "the ignorant ones", "word_transliteration": "al-jahiluna"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u064e\u0670\u0645\u0657\u0627", "word_translation": "Peace", "word_transliteration": "salaman"}]}