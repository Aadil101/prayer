{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0648\u0646\u064e \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u064a\u064e\u0628\u06e1\u063a\u064f\u0648\u0646\u064e\u0647\u064e\u0627 \u0639\u0650\u0648\u064e\u062c\u0657\u0627 \u0648\u064e\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0647\u064f\u0645\u06e1 \u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0648\u0646\u064e", "word_translation": "hinder", "word_transliteration": "yasudduna"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0628\u06e1\u063a\u064f\u0648\u0646\u064e\u0647\u064e\u0627", "word_translation": "and seek (in) it", "word_transliteration": "wayabghunaha"}, {"word_arabic_uthmani": "\u0639\u0650\u0648\u064e\u062c\u0657\u0627", "word_translation": "crookedness", "word_transliteration": "iwajan"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "in the Hereafter", "word_transliteration": "bil-akhirati"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "[th