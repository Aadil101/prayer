{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u062a\u064e\u0631\u064e\u0649\u0670\u0653 \u0625\u0650\u0630\u06e1 \u064a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u064a\u064e\u0636\u06e1\u0631\u0650\u0628\u064f\u0648\u0646\u064e \u0648\u064f\u062c\u064f\u0648\u0647\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u062f\u06e1\u0628\u064e\u0670\u0631\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u06e1\u062d\u064e\u0631\u0650\u064a\u0642\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e\u0649\u0670\u0653", "word_translation": "you (could) see", "word_transliteration": "tara"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "when", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649", "word_translation": "take away souls", "word_transliteration": "yatawaffa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(of) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "the Angels", "word_transliteration": "al-malaikatu"}, {"word_arabic_uthmani": "\u064a\u064e\u0636\u06e1\u0631\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "striking", "word_translite