{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u0650\u0625\u0650\u062e\u06e1\u0648\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0642\u064e\u0639\u064e\u062f\u064f\u0648\u0627\u0652 \u0644\u064e\u0648\u06e1 \u0623\u064e\u0637\u064e\u0627\u0639\u064f\u0648\u0646\u064e\u0627 \u0645\u064e\u0627 \u0642\u064f\u062a\u0650\u0644\u064f\u0648\u0627\u0652\u06d7 \u0642\u064f\u0644\u06e1 \u0641\u064e\u0671\u062f\u06e1\u0631\u064e\u0621\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1 \u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u064e \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u0635\u064e\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0644\u0650\u0625\u0650\u062e\u06e1\u0648\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "about their brothers", "word_transliteration": "li-ikh'wanihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0639\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "while they sat", "word_transliteration": "waqa'adu"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0623\u064e\u0637\u064e\u0627\u0639\u064f\u0648\u0646\u064e\u0627", "word_translation": "they (had) obeyed us", "word_transliteration": "ata'una"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0642\u064f\u062a\u0650\u0644\u064f\u0648\u0627\u0652\u06d7", "word_translation": "they would have been killed", "word_transliteration": "qutilu"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0631\u064e\u0621\u064f\u0648\u0627\u0652", "word_translation": "Then avert", "word_transliteration": "fa-id'rau"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0643\u064f\u0645\u064f", "word_translation": "yourselves", "word_transliteration": "anfusikumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u064e", "word_translation": "[the] death", "word_transliteration": "al-mawta"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you are", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "truthful", "word_transliteration": "sadiqina"}]}