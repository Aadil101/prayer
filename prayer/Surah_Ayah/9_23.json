, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(are) the wrongdoers", "word_transliteration": "al-zalimuna"}]}