{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1 \u0631\u0650\u0626\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0644\u064e\u0627 \u0628\u0650\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0643\u064f\u0646\u0650 \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0644\u064e\u0647\u064f\u06e5 \u0642\u064e\u0631\u0650\u064a\u0646\u0657\u0627 \u0641\u064e\u0633\u064e\u0627\u0653\u0621\u064e \u0642\u064e\u0631\u0650\u064a\u0646\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "spend", "word_transliteration": "yunfiquna"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their wealth", "word_transliteration": "amwalahum"}, {"word_arabic_uthmani": "\u0631\u0650\u0626\u064e\u0627\u0653\u0621\u064e", "word_translation": "to be seen", "word_transliteration": "riaa"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "(by) the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "they believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "in the Day", "word_transliteration": "bil-yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650\u06d7", "word_translation": "the Last", "word_transliteration": "al-akhiri"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0646\u0650", "word_translation": "has", "word_transliteration": "yakuni"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u0650\u064a\u0646\u0657\u0627", "word_translation": "(as) companion", "word_transliteration": "qarinan"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0627\u0653\u0621\u064e", "word_translation": "then evil", "word_transliteration": "fasaa"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u0650\u064a\u0646\u0657\u0627", "word_translation": "(is he as) a companion", "word_transliteration": "qarinan"}]}