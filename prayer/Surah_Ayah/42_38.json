{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0623\u064e\u0645\u06e1\u0631\u064f\u0647\u064f\u0645\u06e1 \u0634\u064f\u0648\u0631\u064e\u0649\u0670 \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0645\u0650\u0645\u0651\u064e\u0627 \u0631\u064e\u0632\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "respond", "word_transliteration": "is'tajabu"}, {"word_arabic_uthmani": "\u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "to their Lord", "word_transliteration": "lirabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652", "word_translation": "and establish", "word_transliteration": "wa-aqamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u06e1\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "and their affairs", "word_transliteration": "wa-amruhum"}, {"word_arabic_uthmani": "\u0634\u064f\u0648\u0631\u064e\u0649\u0670", "word_translation": "(are conducted by) consultation", "word_transliteration": "shura"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "among them", "word_transliteration": "baynahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0645\u0651\u064e\u0627", "word_translation": "and from what", "word_transliteration": "wamimma"}, {"word_arabic_uthmani": "\u0631\u064e\u0632\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We have provided them", "word_transliteration": "razaqnahum"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "they spend", "word_transliteration": "yunfiquna"}]}