{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0644\u064e\u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0656 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "And indeed you", "word_transliteration": "wa-innaka"}, {"word_arabic_uthmani": "\u0644\u064e\u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "certainly call them", "word_transliteration": "latad'uhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0656", "word_translation": "(the) Path", "word_transliteration": "siratin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656", "word_translation": "Straight", "word_transliteration": "mus'taqimin"}]}