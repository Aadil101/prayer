{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u06e1 \u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0647\u064f\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u06e1", "word_translation": "And to", "word_transliteration": "wa-an"}, {"word_arabic_uthmani": "\u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652", "word_translation": "establish", "word_transliteration": "aqimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0647\u064f\u06da", "word_translation": "and fear Him", "word_transliteration": "wa-ittaquhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(is) the One", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "you will be gathered", "word_transliteration": "tuh'sharuna"}]}