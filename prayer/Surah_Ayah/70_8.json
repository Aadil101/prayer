{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0643\u064f\u0648\u0646\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f \u0643\u064e\u0671\u0644\u06e1\u0645\u064f\u0647\u06e1\u0644\u0650"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064f", "word_translation": "will be", "word_transliteration": "takunu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "the sky", "word_transliteration": "al-samau"}, {"word_arabic_uthmani": "\u0643\u064e\u0671\u0644\u06e1\u0645\u064f\u0647\u06e1\u0644\u0650", "word_translation": "like molten copper", "word_transliteration": "kal-muh'li"}]}