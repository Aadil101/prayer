{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0635\u064e\u0627\u0628\u0650\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0631\u064e\u0627\u0628\u0650\u0637\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe[d]!", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "Be steadfast", "word_transliteration": "is'biru"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u0627\u0628\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "and [be] patient", "word_transliteration": "wasabiru"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0627\u0628\u0650\u0637\u064f\u0648\u0627\u0652", "word_translation": "and [be] constant", "word_transliteration": "warabitu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "and fear", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(be) successful", "word_transliteration": "tuf'lihuna"}]}