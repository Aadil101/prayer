{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0670\u0632\u064e\u0643\u064e\u0631\u0650\u064a\u0651\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0627 \u0646\u064f\u0628\u064e\u0634\u0651\u0650\u0631\u064f\u0643\u064e \u0628\u0650\u063a\u064f\u0644\u064e\u0670\u0645\u064d \u0671\u0633\u06e1\u0645\u064f\u0647\u064f\u06e5 \u064a\u064e\u062d\u06e1\u064a\u064e\u0649\u0670 \u0644\u064e\u0645\u06e1 \u0646\u064e\u062c\u06e1\u0639\u064e\u0644 \u0644\u0651\u064e\u0647\u064f\u06e5 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0633\u064e\u0645\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0670\u0632\u064e\u0643\u064e\u0631\u0650\u064a\u0651\u064e\u0627\u0653", "word_translation": "O Zakariya", "word_transliteration": "yazakariyya"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0646\u064f\u0628\u064e\u0634\u0651\u0650\u0631\u064f\u0643\u064e", "word_translation": "[We] give you glad tidings", "word_transliteration": "nubashiruka"}, {"word_arabic_uthmani": "\u0628\u0650\u063a\u064f\u0644\u064e\u0670\u0645\u064d", "word_translation": "of a boy", "word_transliteration": "bighulamin"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u0645\u064f\u0647\u064f\u06e5", "word_translation": "his name", "word_transliteration": "us'muhu"}, {"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u064a\u064e\u0649\u0670", "word_translation": "(will be) Yahya", "word_transliteration": "yahya"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u0646\u064e\u062c\u06e1\u0639\u064e\u0644", "word_translation": "We (have) assigned", "word_transliteration": "naj'al"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u06e5", "word_translation": "[for] it", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0651\u0657\u0627", "word_translation": "(this) name", "word_transliteration": "samiyyan"}]}