ion": "wujuhihim"}, {"word_arabic_uthmani": "\u0639\u064f\u0645\u06e1\u064a\u0657\u0627", "word_translation": "blind", "word_transliteration": "um'yan"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064f\u0643\u06e1\u0645\u0657\u0627", "word_translation": "and dumb", "word_transliteration": "wabuk'man"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064f\u0645\u0651\u0657\u0627\u06d6", "word_translation": "and deaf", "word_transliteration": "wasumman"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "Their abode", "word_transliteration": "mawahum"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6", "word_translation": "(is) Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e\u0645\u064e\u0627", "word_translation": "every time", "word_transliteration": "kullama"}, {"word_arabic_uthmani": "\u062e\u064e\u0628\u064e\u062a\u06e1", "word_translation": "it subsides", "word_transliteration": "khabat"}, {"word_arabic_uthmani": "\u0632\u0650\u062f\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We (will) increase (for) them", "word_transliteration": "zid'nahum"}, {"word_arabic_uthmani": "\u0633\u064e\u0639\u0650\u064a\u0631\u0657\u0627", "word_translation": "the blazing fire", "word_transliteration": "sa'iran"}]}