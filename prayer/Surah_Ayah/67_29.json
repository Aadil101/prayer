{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0647\u064f\u0648\u064e \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1\u0646\u064e\u0627\u06d6 \u0641\u064e\u0633\u064e\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0645\u064e\u0646\u06e1 \u0647\u064f\u0648\u064e \u0641\u0650\u064a \u0636\u064e\u0644\u064e\u0670\u0644\u0656 \u0645\u0651\u064f\u0628\u0650\u064a\u0646\u0656"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f", "word_translation": "(is) the Most Gracious;", "word_transliteration": "al-rahmanu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "we believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "in Him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "and upon Him", "word_transliteration": "wa'alayhi"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1\u0646\u064e\u0627\u06d6", "word_translation": "we put (our) trust", "word_transliteration": "tawakkalna"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "So soon you will know", "word_transliteration": "fasata'lamuna"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u06e1", "word_translation": "who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "(is) it", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(that is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u064e\u0670\u0644\u0656", "word_translation": "error", "word_transliteration": "dalalin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u0650\u064a\u0646\u0656", "word_translation": "clear", "word_transliteration": "mubinin"}]}