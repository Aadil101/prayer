{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u064e\u0631\u064e\u0649 \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e \u062d\u064e\u0627\u0653\u0641\u0651\u0650\u064a\u0646\u064e \u0645\u0650\u0646\u06e1 \u062d\u064e\u0648\u06e1\u0644\u0650 \u0671\u0644\u06e1\u0639\u064e\u0631\u06e1\u0634\u0650 \u064a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0646\u064e \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1\u06da \u0648\u064e\u0642\u064f\u0636\u0650\u064a\u064e \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da \u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0631\u064e\u0628\u0651\u0650 \u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0631\u064e\u0649", "word_translation": "And you will see", "word_transliteration": "watara"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e", "word_translation": "the Angels", "word_transliteration": "al-malaikata"}, {"word_arabic_uthmani": "\u062d\u064e\u0627\u0653\u0641\u0651\u0650\u064a\u0646\u064e", "word_translation": "surrounding", "word_transliteration": "haffina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "[from]", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062d\u064e\u0648\u06e1\u0644\u0650", "word_translation": "around", "word_transliteration": "hawli"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0631\u06e1\u0634\u0650", "word_translation": "the Throne", "word_transliteration": "al-'arshi"}, {"word_arabic_uthmani": "\u064a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "glorifying", "word_transliteration": "yusabbihuna"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650", "word_translation": "(the) praise", "word_transliteration": "bihamdi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1\u06da", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064f\u0636\u0650\u064a\u064e", "word_translation": "And (will) be judged", "word_transliteration": "waqudiya"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645", "word_translation": "between them", "word_transliteration": "baynahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "and it will be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f", "word_translation": "All praise be", "word_transliteration": "al-hamdu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650", "word_translation": "(the) Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the worlds", "word_transliteration": "al-'alamina"}]}