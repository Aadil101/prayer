{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0631\u06e1\u0643\u064e\u0628\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0647\u064e\u0627 \u0628\u0650\u0633\u06e1\u0645\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u064e\u062c\u06e1\u0631\u065c\u0649\u0670\u0647\u064e\u0627 \u0648\u064e\u0645\u064f\u0631\u06e1\u0633\u064e\u0649\u0670\u0647\u064e\u0627\u0653\u06da \u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u0650\u064a \u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And he said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0631\u06e1\u0643\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "Embark", "word_transliteration": "ir'kabu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0628\u0650\u0633\u06e1\u0645\u0650", "word_translation": "in the name", "word_transliteration": "bis'mi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0645\u064e\u062c\u06e1\u0631\u065c\u0649\u0670\u0647\u064e\u0627", "word_translation": "(is) its course", "word_transliteration": "majraha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064f\u0631\u06e1\u0633\u064e\u0649\u0670\u0647\u064e\u0627\u0653\u06da", "word_translation": "and its anchorage", "word_transliteration": "wamur'saha"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) certainly Oft-Forgiving", "word_transliteration": "laghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}