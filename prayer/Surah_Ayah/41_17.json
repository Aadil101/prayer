{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u062b\u064e\u0645\u064f\u0648\u062f\u064f \u0641\u064e\u0647\u064e\u062f\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u062d\u064e\u0628\u0651\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0639\u064e\u0645\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670 \u0641\u064e\u0623\u064e\u062e\u064e\u0630\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1 \u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u064f \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u0671\u0644\u06e1\u0647\u064f\u0648\u0646\u0650 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "And as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u062b\u064e\u0645\u064f\u0648\u062f\u064f", "word_translation": "Thamud", "word_transliteration": "thamudu"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064e\u062f\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We guided them", "word_transliteration": "fahadaynahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u062d\u064e\u0628\u0651\u064f\u0648\u0627\u0652", "word_translation": "but they preferred", "word_transliteration": "fa-is'tahabbu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0645\u064e\u0649\u0670", "word_translation": "[the] blindness", "word_transliteration": "al-'ama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670", "word_translation": "the guidance", "word_transliteration": "al-huda"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062e\u064e\u0630\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "so seized them", "word_transliteration": "fa-akhadhathum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u064f", "word_translation": "a thunderbolt", "word_transliteration": "sa'iqatu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "(of) the punishment", "word_transliteration": "al-'adhabi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0647\u064f\u0648\u0646\u0650", "word_translation": "humiliating", "word_transliteration": "al-huni"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used (to)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "earn", "word_transliteration": "yaksibuna"}]}