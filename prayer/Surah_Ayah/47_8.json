{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0641\u064e\u062a\u064e\u0639\u06e1\u0633\u0657\u0627 \u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0636\u064e\u0644\u0651\u064e \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "But those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0639\u06e1\u0633\u0657\u0627", "word_translation": "destruction is", "word_transliteration": "fata'san"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0636\u064e\u0644\u0651\u064e", "word_translation": "and He will cause to be lost", "word_transliteration": "wa-adalla"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'malahum"}]}