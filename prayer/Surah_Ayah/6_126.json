{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0647\u064e\u0670\u0630\u064e\u0627 \u0635\u0650\u0631\u064e\u0670\u0637\u064f \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627\u06d7 \u0642\u064e\u062f\u06e1 \u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650 \u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "And this", "word_transliteration": "wahadha"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u064f", "word_translation": "(is the) way", "word_transliteration": "siratu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(of) your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627\u06d7", "word_translation": "straight", "word_transliteration": "mus'taqiman"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have detailed", "word_transliteration": "fassalna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650", "word_translation": "the Verses", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "who take heed", "word_transliteration": "yadhakkaruna"}]}