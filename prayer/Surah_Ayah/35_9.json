{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u064e \u0671\u0644\u0631\u0651\u0650\u064a\u064e\u0670\u062d\u064e \u0641\u064e\u062a\u064f\u062b\u0650\u064a\u0631\u064f \u0633\u064e\u062d\u064e\u0627\u0628\u0657\u0627 \u0641\u064e\u0633\u064f\u0642\u06e1\u0646\u064e\u0670\u0647\u064f \u0625\u0650\u0644\u064e\u0649\u0670 \u0628\u064e\u0644\u064e\u062f\u0656 \u0645\u0651\u064e\u064a\u0651\u0650\u062a\u0656 \u0641\u064e\u0623\u064e\u062d\u06e1\u064a\u064e\u064a\u06e1\u0646\u064e\u0627 \u0628\u0650\u0647\u0650 \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u0628\u064e\u0639\u06e1\u062f\u064e \u0645\u064e\u0648\u06e1\u062a\u0650\u0647\u064e\u0627\u06da \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0671\u0644\u0646\u0651\u064f\u0634\u064f\u0648\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u064e", "word_translation": "sends", "word_transliteration": "arsala"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0650\u064a\u064e\u0670\u062d\u064e", "word_translation": "the winds", "word_transliteration": "al-riyaha"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064f\u062b\u0650\u064a\u0631\u064f", "word_translation": "so that they raise", "word_transliteration": "fatuthiru"}, {"word_arabic_uthmani": "\u0633\u064e\u062d\u064e\u0627\u0628\u0657\u0627", "word_translation": "(the) clouds", "word_transliteration": "sahaban"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064f\u0642\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "and We drive them", "word_transliteration": "fasuq'nahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u064e\u062f\u0656", "word_translation": "a land", "word_transliteration": "baladin"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u064a\u0651\u0650\u062a\u0656", "word_translation": "dead", "word_transliteration": "mayyitin"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062d\u06e1\u064a\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "and We revive", "word_transliteration": "fa-ahyayna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650", "word_translation": "therewith", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "the earth", "word_transliteration": "al-arda"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u062a\u0650\u0647\u064e\u0627\u06da", "word_translation": "its death", "word_transliteration": "mawtiha"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0634\u064f\u0648\u0631\u064f", "word_translation": "(will be) the Resurrection", "word_transliteration": "al-nushuru"}]}