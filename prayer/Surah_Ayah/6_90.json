{"ayahs": {"ayah_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0647\u064e\u062f\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6 \u0641\u064e\u0628\u0650\u0647\u064f\u062f\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0642\u06e1\u062a\u064e\u062f\u0650\u0647\u06e1\u06d7 \u0642\u064f\u0644 \u0644\u0651\u064e\u0627\u0653 \u0623\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0643\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0623\u064e\u062c\u06e1\u0631\u064b\u0627\u06d6 \u0625\u0650\u0646\u06e1 \u0647\u064f\u0648\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0630\u0650\u0643\u06e1\u0631\u064e\u0649\u0670 \u0644\u0650\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) ones whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0647\u064e\u062f\u064e\u0649", "word_translation": "(have been) guided", "word_transliteration": "hada"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u0650\u0647\u064f\u062f\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "so of their guidance", "word_transliteration": "fabihudahumu"}, {"word_arabic_uthmani": "\u0671\u0642\u06e1\u062a\u064e\u062f\u0650\u0647\u06e1\u06d7", "word_translation": "you follow", "word_transliteration": "iq'tadih"}, {"word_arabic_uthmani": "\u0642\u064f\u0644", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627\u0653", "word_translation": "Not