{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0648\u064e\u0631\u064e\u0628\u0651\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u062d\u064e\u0642\u0651\u065e \u0645\u0651\u0650\u062b\u06e1\u0644\u064e \u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0646\u0637\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0648\u064e\u0631\u064e\u0628\u0651\u0650", "word_translation": "Then by (the) Lord", "word_transliteration": "fawarabbi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650", "word_translation": "(of) the heaven", "word_transliteration": "al-samai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "indeed it", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u064e\u0642\u0651\u065e", "word_translation": "(is) surely (the) truth", "word_transliteration": "lahaqqun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e", "word_translation": "(just) as", "word_transliteration": "mith'la"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "[what]", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "annakum"}, {"word_arabic_uthmani": "\u062a\u064e\u0646\u0637\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "speak", "word_transliteration": "tantiquna"}]}