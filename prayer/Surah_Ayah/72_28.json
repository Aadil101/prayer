{"ayahs": {"ayah_uthmani": "\u0644\u0651\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e \u0623\u064e\u0646 \u0642\u064e\u062f\u06e1 \u0623\u064e\u0628\u06e1\u0644\u064e\u063a\u064f\u0648\u0627\u0652 \u0631\u0650\u0633\u064e\u0670\u0644\u064e\u0670\u062a\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u062d\u064e\u0627\u0637\u064e \u0628\u0650\u0645\u064e\u0627 \u0644\u064e\u062f\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u062d\u06e1\u0635\u064e\u0649\u0670 \u0643\u064f\u0644\u0651\u064e \u0634\u064e\u064a\u06e1\u0621\u064d \u0639\u064e\u062f\u064e\u062f\u064e\u06e2\u0627"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e", "word_translation": "That He may make evident", "word_transliteration": "liya'lama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "indeed", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0644\u064e\u063a\u064f\u0648\u0627\u0652", "word_translation": "they have conveyed", "word_transliteration": "ablaghu"}, {"word_arabic_uthmani": "\u0631\u0650\u0633\u064e\u0670\u0644\u064e\u0670\u062a\u0650", "word_translation": "(the) Messages", "word_transliteration": "risalati"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord;", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062d\u064e\u0627\u0637\u064e", "word_translation": "and He has encompassed", "word_transliteration": "wa-ahata"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0644\u064e\u062f\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "(is) with them", "word_transliteration": "ladayhim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062d\u06e1\u0635\u064e\u0649\u0670", "word_translation": "and He takes account", "word_transliteration": "wa-ahsa"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "(of) all", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u064d", "word_translation": "things", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u064e\u062f\u064e\u06e2\u0627", "word_translation": "(in) number", "word_transliteration": "adadan"}]}