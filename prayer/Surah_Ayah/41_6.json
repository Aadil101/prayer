{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u064e\u0627\u06e0 \u0628\u064e\u0634\u064e\u0631\u065e \u0645\u0651\u0650\u062b\u06e1\u0644\u064f\u0643\u064f\u0645\u06e1 \u064a\u064f\u0648\u062d\u064e\u0649\u0670\u0653 \u0625\u0650\u0644\u064e\u064a\u0651\u064e \u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u0670\u0647\u064f\u0643\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0670\u0647\u065e \u0648\u064e\u0670\u062d\u0650\u062f\u065e \u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0647\u064f\u06d7 \u0648\u064e\u0648\u064e\u064a\u06e1\u0644\u065e \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064e\u0627\u06e0", "word_translation": "I am", "word_transliteration": "ana"}, {"word_arabic_uthmani": "\u0628\u064e\u0634\u064e\u0631\u065e", "word_translation": "a man", "word_transliteration": "basharun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064f\u0643\u064f\u0645\u06e1", "word_translation": "like you", "word_transliteration": "mith'lukum"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u062d\u064e\u0649\u0670\u0653", "word_translation": "it is revealed", "word_transliteration": "yuha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u0651\u064e", "word_translation": "to me", "word_transliteration": "ilayya"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "that", "word_transliteration": "annama"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u064f\u0643\u064f\u0645\u06e1", "word_translation": "your god", "word_transliteration": "ilahukum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u065e", "word_translation": "(is) God", "word_transliteration": "ilahun"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u065e", "word_translation": "One", "word_transliteration": "wahidun"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0653\u0627\u0652", "word_translation": "so take a Straight Path", "word_transliteration": "fa-is'taqimu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0647\u064f\u06d7", "word_translation": "and ask His forgiveness", "word_transliteration": "wa-is'taghfiruhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0648\u064e\u064a\u06e1\u0644\u065e", "word_translation": "And woe", "word_transliteration": "wawaylun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "to the polytheists", "word_transliteration": "lil'mush'rikina"}]}