{"ayahs": {"ayah_uthmani": "\u0644\u0651\u0650\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u062a\u064f\u0639\u064e\u0632\u0651\u0650\u0631\u064f\u0648\u0647\u064f \u0648\u064e\u062a\u064f\u0648\u064e\u0642\u0651\u0650\u0631\u064f\u0648\u0647\u064f\u06da \u0648\u064e\u062a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0647\u064f \u0628\u064f\u0643\u06e1\u0631\u064e\u0629\u0657 \u0648\u064e\u0623\u064e\u0635\u0650\u064a\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u0650\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "That you may believe", "word_transliteration": "litu'minu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0639\u064e\u0632\u0651\u0650\u0631\u064f\u0648\u0647\u064f", "word_translation": "and (may) honor him", "word_transliteration": "watu'azziruhu"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0648\u064e\u0642\u0651\u0650\u0631\u064f\u0648\u0647\u064f\u06da", "word_translation": "and respect him", "word_transliteration": "watuwaqqiruhu"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0647\u064f", "word_translation": "and glorify Him", "word_transliteration": "watusabbihuhu"}, {"word_arabic_uthmani": "\u0628\u064f\u0643\u06e1\u0631\u064e\u0629\u0657", "word_translation": "morning", "word_transliteration": "buk'ratan"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0635\u0650\u064a\u0644\u064b\u0627", "word_translation": "and evening", "word_transliteration": "wa-asilan"}]}