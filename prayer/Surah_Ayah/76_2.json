{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627 \u062e\u064e\u0644\u064e\u0642\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064e \u0645\u0650\u0646 \u0646\u0651\u064f\u0637\u06e1\u0641\u064e\u0629\u064d \u0623\u064e\u0645\u06e1\u0634\u064e\u0627\u062c\u0656 \u0646\u0651\u064e\u0628\u06e1\u062a\u064e\u0644\u0650\u064a\u0647\u0650 \u0641\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f \u0633\u064e\u0645\u0650\u064a\u0639\u064e\u06e2\u0627 \u0628\u064e\u0635\u0650\u064a\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u06e1\u0646\u064e\u0627", "word_translation": "[We] created", "word_transliteration": "khalaqna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064e", "word_translation": "man", "word_transliteration": "al-insana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0637\u06e1\u0641\u064e\u0629\u064d", "word_translation": "a sperm-drop", "word_transliteration": "nut'fatin"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0634\u064e\u0627\u062c\u0656", "word_translation": "mixture", "word_transliteration": "amshajin"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0628\u06e1\u062a\u064e\u0644\u0650\u064a\u0647\u0650", "word_translation": "(that) We test him;", "word_transliteration": "nabtalihi"}, {"word_arabic_uthmani": "\u0641\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "so We made (for) him", "word_transliteration": "faja'alnahu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0639\u064e\u06e2\u0627", "word_translation": "hearing", "word_transliteration": "sami'an"}, {"word_arabic_uthmani": "\u0628\u064e\u0635\u0650\u064a\u0631\u064b\u0627", "word_translation": "and sight", "word_transliteration": "basiran"}]}