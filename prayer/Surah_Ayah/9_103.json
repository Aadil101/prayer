{"ayahs": {"ayah_uthmani": "\u062e\u064f\u0630\u06e1 \u0645\u0650\u0646\u06e1 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1 \u0635\u064e\u062f\u064e\u0642\u064e\u0629\u0657 \u062a\u064f\u0637\u064e\u0647\u0651\u0650\u0631\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u062a\u064f\u0632\u064e\u0643\u0651\u0650\u064a\u0647\u0650\u0645 \u0628\u0650\u0647\u064e\u0627 \u0648\u064e\u0635\u064e\u0644\u0651\u0650 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06d6 \u0625\u0650\u0646\u0651\u064e \u0635\u064e\u0644\u064e\u0648\u0670\u062a\u064e\u0643\u064e \u0633\u064e\u0643\u064e\u0646\u065e \u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0633\u064e\u0645\u0650\u064a\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u062e\u064f\u0630\u06e1", "word_translation": "Take", "word_transliteration": "khudh"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their wealth", "word_transliteration": "amwalihim"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u0642\u064e\u0629\u0657", "word_translation": "a charity", "word_transliteration": "sadaqatan"}, {"word_arabic_uthmani": "\u062a\u064f\u0637\u064e\u0647\u0651\u0650\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "purifying them", "word_transliteration": "tutahhiruhum"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0632\u064e\u0643\u0651\u0650\u064a\u0647\u0650\u0645", "word_translation": "and cause them increase", "word_transliteration": "watuzakkihim"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627", "word_translation": "by it", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u0644\u0651\u0650", "word_translation": "and bless", "word_transliteration": "wasalli"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "[upon] them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0635\u064e\u0644\u064e\u0648\u0670\u062a\u064e\u0643\u064e", "word_translation": "your blessings", "word_transliteration": "salataka"}, {"word_arabic_uthmani": "\u0633\u064e\u0643\u064e\u0646\u065e", "word_translation": "(are a) reassurance", "word_transliteration": "sakanun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06d7", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0639\u064c", "word_translation": "(is) All-Hearer", "word_transliteration": "sami'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "All-Knower", "word_transliteration": "alimun"}]}