{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u0627\u0630\u064e\u0627\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0633\u064e\u0670\u0637\u0650\u064a\u0631\u064f \u0671\u0644\u06e1\u0623\u064e\u0648\u0651\u064e\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627\u0630\u064e\u0627\u0653", "word_translation": "What", "word_transliteration": "madha"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "has your Lord sent down", "word_transliteration": "anzala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "has your Lord sent down", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u064e\u0670\u0637\u0650\u064a\u0631\u064f", "word_translation": "Tales", "word_transliteration": "asatiru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0648\u0651\u064e\u0644\u0650\u064a\u0646\u064e", "word_translation": "(of) the ancient", "word_transliteration": "al-awalina"}]}