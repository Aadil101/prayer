{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u0650 \u0642\u064e\u0627\u0644\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u0650 \u0647\u064f\u0648\u064e \u0639\u064e\u0644\u064e\u064a\u0651\u064e \u0647\u064e\u064a\u0651\u0650\u0646\u065e\u06d6 \u0648\u064e\u0644\u0650\u0646\u064e\u062c\u06e1\u0639\u064e\u0644\u064e\u0647\u064f\u06e5\u0653 \u0621\u064e\u0627\u064a\u064e\u0629\u0657 \u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657 \u0645\u0651\u0650\u0646\u0651\u064e\u0627\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0623\u064e\u0645\u06e1\u0631\u0657\u0627 \u0645\u0651\u064e\u0642\u06e1\u0636\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u0650", "word_translation": "Thus", "word_transliteration": "kadhaliki"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u0650", "word_translation": "your Lord", "word_transliteration": "rabbuki"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "It", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u0651\u064e", "word_translation": "(is) for Me", "word_transliteration": "alayya"}, {"word_arabic_uthmani": "\u0647\u064e\u064a\u0651\u0650\u0646\u065e\u06d6", "word_translation": "easy", "word_transliteration": "hayyinun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0646\u064e\u062c\u06e1\u0639\u064e\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "and so that We will make him", "word_transliteration": "walinaj'alahu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0629\u0657", "word_translation": "a sign", "word_transliteration": "ayatan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for the mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657", "word_translation": "and a Mercy", "word_transliteration": "warahmatan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u0651\u064e\u0627\u06da", "word_translation": "from Us", "word_transliteration": "minna"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And (it) is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0657\u0627", "word_translation": "a matter", "word_transliteration": "amran"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0642\u06e1\u0636\u0650\u064a\u0651\u0657\u0627", "word_translation": "decreed", "word_transliteration": "maqdiyyan"}]}