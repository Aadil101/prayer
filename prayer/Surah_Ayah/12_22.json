{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0628\u064e\u0644\u064e\u063a\u064e \u0623\u064e\u0634\u064f\u062f\u0651\u064e\u0647\u064f\u06e5\u0653 \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f \u062d\u064f\u0643\u06e1\u0645\u0657\u0627 \u0648\u064e\u0639\u0650\u0644\u06e1\u0645\u0657\u0627\u06da \u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064e\u062c\u06e1\u0632\u0650\u064a \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u064e\u063a\u064e", "word_translation": "he reached", "word_transliteration": "balagha"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u064f\u062f\u0651\u064e\u0647\u064f\u06e5\u0653", "word_translation": "his maturity", "word_transliteration": "ashuddahu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We gave him", "word_transliteration": "ataynahu"}, {"word_arabic_uthmani": "\u062d\u064f\u0643\u06e1\u0645\u0657\u0627", "word_translation": "wisdom", "word_transliteration": "huk'man"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u0650\u0644\u06e1\u0645\u0657\u0627\u06da", "word_translation": "and knowledge", "word_transliteration": "wa'il'man"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And thus", "word_transliteration": "wakadhalika"}, {"word_arabic_uthmani": "\u0646\u064e\u062c\u06e1\u0632\u0650\u064a", "word_translation": "We reward", "word_transliteration": "najzi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the good-doers", "word_transliteration": "al-muh'sinina"}]}