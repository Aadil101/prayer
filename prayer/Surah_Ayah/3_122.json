{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0630\u06e1 \u0647\u064e\u0645\u0651\u064e\u062a \u0637\u0651\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u062a\u064e\u0627\u0646\u0650 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646 \u062a\u064e\u0641\u06e1\u0634\u064e\u0644\u064e\u0627 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645\u064e\u0627\u06d7 \u0648\u064e\u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0644\u06e1\u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u0650 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "When", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0647\u064e\u0645\u0651\u064e\u062a", "word_translation": "inclined", "word_transliteration": "hammat"}, {"word_arabic_uthmani": "\u0637\u0651\u064e\u0627\u0653\u0626\u0650\u0641\u064e\u062a\u064e\u0627\u0646\u0650", "word_translation": "two parties", "word_transliteration": "taifatani"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u062a\u064e\u0641\u06e1\u0634\u064e\u0644\u064e\u0627", "word_translation": "they lost heart", "word_transliteration": "tafshala"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "but Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645\u064e\u0627\u06d7", "word_translation": "(was) their protector", "word_transliteration": "waliyyuhuma"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649", "word_translation": "And on", "word_transliteration": "wa