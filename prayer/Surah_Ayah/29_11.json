{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e \u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e", "word_translation": "And will surely make evident", "word_transliteration": "walaya'lamanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e", "word_translation": "And (He) will surely make evident", "word_transliteration": "walaya'lamanna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "the hypocrites", "word_transliteration": "al-munafiqina"}]}