{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u0644\u0651\u064e\u0645\u06e1 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u06e2 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627 \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0633\u064e\u0639\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "(has) not believed", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u06e2", "word_translation": "(has) not believed", "word_transliteration": "yu'min"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "then indeed, We", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "[We] have prepared", "word_transliteration": "a'tadna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u0633\u064e\u0639\u0650\u064a\u0631\u0657\u0627", "word_translation": "a Blazing Fire", "word_transliteration": "sa'iran"}]}