{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u0644\u0650\u062d\u064f\u0643\u06e1\u0645\u0650 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0646 \u0643\u064e\u0635\u064e\u0627\u062d\u0650\u0628\u0650 \u0671\u0644\u06e1\u062d\u064f\u0648\u062a\u0650 \u0625\u0650\u0630\u06e1 \u0646\u064e\u0627\u062f\u064e\u0649\u0670 \u0648\u064e\u0647\u064f\u0648\u064e \u0645\u064e\u0643\u06e1\u0638\u064f\u0648\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "So be patient", "word_transliteration": "fa-is'bir"}, {"word_arabic_uthmani": "\u0644\u0650\u062d\u064f\u0643\u06e1\u0645\u0650", "word_translation": "for (the) decision", "word_transliteration": "lihuk'mi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(of) your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0646", "word_translation": "be", "word_transliteration": "takun"}, {"word_arabic_uthmani": "\u0643\u064e\u0635\u064e\u0627\u062d\u0650\u0628\u0650", "word_translation": "like (the) companion", "word_transliteration": "kasahibi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u0648\u062a\u0650", "word_translation": "(of) the fish", "word_transliteration": "al-huti"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "when", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u062f\u064e\u0649\u0670", "word_translation": "he called out", "word_transliteration": "nada"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "while he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0645\u064e\u0643\u06e1\u0638\u064f\u0648\u0645\u065e", "word_translation": "(was) distressed", "word_transliteration": "makzumun"}]}