{"ayahs": {"ayah_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0648\u064e\u0671\u0628\u06e1\u0639\u064e\u062b\u06e1 \u0641\u0650\u064a\u0647\u0650\u0645\u06e1 \u0631\u064e\u0633\u064f\u0648\u0644\u0657\u0627 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0627\u0652 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0643\u064e \u0648\u064e\u064a\u064f\u0639\u064e\u0644\u0651\u0650\u0645\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0648\u064e\u0671\u0644\u06e1\u062d\u0650\u0643\u06e1\u0645\u064e\u0629\u064e \u0648\u064e\u064a\u064f\u0632\u064e\u0643\u0651\u0650\u064a\u0647\u0650\u0645\u06e1\u06d6 \u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0623\u064e\u0646\u062a\u064e \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f \u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord!", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0628\u06e1\u0639\u064e\u062b\u06e1", "word_translation": "[And] raise up", "word_transliteration": "wa-ib'ath"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "in them", "word_transliteration": "fihim"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u0657\u0627", "word_translation": "a Messenger", "word_transliteration": "rasulan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0627\u0652", "word_translation": "(who) will recite", "word_transliteration": "yatlu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0643\u064e", "word_translation": "Your Verses", "word_transliteration": "ayatika"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0639\u064e\u0644\u0651\u0650\u0645\u064f\u0647\u064f\u0645\u064f", "word_translation": "and will teach them", "word_transliteration": "wayu'allimuhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u062d\u0650\u0643\u06e1\u0645\u064e\u0629\u064e", "word_translation": "and the wisdom", "word_transliteration": "wal-hik'mata"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0632\u064e\u0643\u0651\u0650\u064a\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "and purify them", "word_transliteration": "wayuzakkihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "Indeed You!", "word_transliteration": "innaka"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064e", "word_translation": "You (are)", "word_transliteration": "anta"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f", "word_translation": "the All-Mighty", "word_transliteration": "al-'azizu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f", "word_translation": "the All-Wise", "word_transliteration": "al-hakimu"}]}