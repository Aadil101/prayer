{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0636\u064e\u0631\u064e\u0628\u06e1\u0646\u064e\u0627 \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0641\u0650\u064a \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650 \u0645\u0650\u0646 \u0643\u064f\u0644\u0651\u0650 \u0645\u064e\u062b\u064e\u0644\u0656\u06da \u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u062c\u0650\u0626\u06e1\u062a\u064e\u0647\u064f\u0645 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0629\u0656 \u0644\u0651\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u06e1 \u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And verily", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0636\u064e\u0631\u064e\u0628\u06e1\u0646\u064e\u0627", "word_translation": "We (have) set forth", "word_transliteration": "darabna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650", "word_translation": "[the] Quran", "word_transliteration": "al-qur'ani"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u064e\u0644\u0656\u06da", "word_translation": "example", "word_transliteration": "mathalin"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "But if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u062c\u0650\u0626\u06e1\u062a\u064e\u0647\u064f\u0645", "word_translation": "you bring them", "word_transliteration": "ji'tahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0629\u0656", "word_translation": "a sign", "word_transliteration": "biayatin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e", "word_translation": "surely will say", "word_transliteration": "layaqulanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "Not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "antum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "(are) except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "falsifiers", "word_transliteration": "mub'tiluna"}]}