{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0635\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u062c\u064e\u062d\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0635\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "(surely) will burn", "word_transliteration": "lasalu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u062d\u0650\u064a\u0645\u0650", "word_translation": "(in) the Hellfire", "word_transliteration": "al-jahimi"}]}