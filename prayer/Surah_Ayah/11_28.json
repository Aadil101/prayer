{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f \u0639\u064e\u0644\u064e\u0649\u0670 \u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0656 \u0645\u0651\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u064a \u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u0650\u064a \u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657 \u0645\u0651\u0650\u0646\u06e1 \u0639\u0650\u0646\u062f\u0650\u0647\u0650\u06e6 \u0641\u064e\u0639\u064f\u0645\u0651\u0650\u064a\u064e\u062a\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646\u064f\u0644\u06e1\u0632\u0650\u0645\u064f\u0643\u064f\u0645\u064f\u0648\u0647\u064e\u0627 \u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u0644\u064e\u0647\u064e\u0627 \u0643\u064e\u0670\u0631\u0650\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "Do you see", "word_transliteration": "ara-aytum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f", "word_translation": "I was", "word_transliteration": "kuntu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0656", "word_translation": "(the) clear proof", "word_transliteration": "bayyinatin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u064a", "word_translation": "my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u0650\u064a", "word_translation": "while He has given me", "word_transliteration": "waatani"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657", "word_translation": "mercy", "word_transliteration": "rahmatan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u0650\u0647\u0650\u06e6", "word_translation": "Himself", "word_transliteration": "indihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064f\u0645\u0651\u0650\u064a\u064e\u062a\u06e1", "word_translation": "but (it) has been obscured", "word_transliteration": "fa'ummiyat"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "from you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064f\u0644\u06e1\u0632\u0650\u0645\u064f\u0643\u064f\u0645\u064f\u0648\u0647\u064e\u0627", "word_translation": "should We compel you (to accept) it", "word_transliteration": "anul'zimukumuha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "while you (are)", "word_transliteration": "wa-antum"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064e\u0627", "word_translation": "averse to it", "word_transliteration": "laha"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u0631\u0650\u0647\u064f\u0648\u0646\u064e", "word_translation": "averse to it", "word_transliteration": "karihuna"}]}