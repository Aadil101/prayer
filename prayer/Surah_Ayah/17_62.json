{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064e\u0643\u064e \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0643\u064e\u0631\u0651\u064e\u0645\u06e1\u062a\u064e \u0639\u064e\u0644\u064e\u064a\u0651\u064e \u0644\u064e\u0626\u0650\u0646\u06e1 \u0623\u064e\u062e\u0651\u064e\u0631\u06e1\u062a\u064e\u0646\u0650 \u0625\u0650\u0644\u064e\u0649\u0670 \u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0644\u064e\u0623\u064e\u062d\u06e1\u062a\u064e\u0646\u0650\u0643\u064e\u0646\u0651\u064e \u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064e\u0643\u064e", "word_translation": "Do You see", "word_transliteration": "ara-aytaka"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "whom", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0643\u064e\u0631\u0651\u064e\u0645\u06e1\u062a\u064e", "word_translation": "You have honored", "word_transliteration": "karramta"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u0651\u064e", "word_translation": "above me", "word_transliteration": "alayya"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "If", "word_transliteration": "la-in"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u0651\u064e\u0631\u06e1\u062a\u064e\u0646\u0650", "word_translation": "You give me respite", "word_transliteration": "akhartani"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "till", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "(the) Day", "word_transliteration": "yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u062d\u06e1\u062a\u064e\u0646\u0650\u0643\u064e\u0646\u0651\u064e", "word_translation": "I will surely destroy", "word_transliteration": "la-ahtanikanna"}, {"word_arabic_uthmani": "\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u064e\u0647\u064f\u06e5\u0653", "word_translation": "his offspring", "word_transliteration": "dhurriyyatahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627", "word_translation": "a few", "word_transliteration": "qalilan"}]}