{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0639\u064e\u0642\u064e\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0646\u0651\u064e\u0627\u0642\u064e\u0629\u064e \u0648\u064e\u0639\u064e\u062a\u064e\u0648\u06e1\u0627\u0652 \u0639\u064e\u0646\u06e1 \u0623\u064e\u0645\u06e1\u0631\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u064a\u064e\u0670\u0635\u064e\u0670\u0644\u0650\u062d\u064f \u0671\u0626\u06e1\u062a\u0650\u0646\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u062a\u064e\u0639\u0650\u062f\u064f\u0646\u064e\u0627\u0653 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0642\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "Then they hamstrung", "word_transliteration": "fa'aqaru"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0642\u064e\u0629\u064e", "word_translation": "the she-camel", "word_transliteration": "al-naqata"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062a\u064e\u0648\u06e1\u0627\u0652", "word_translation": "and (were) insolent", "word_transliteration": "wa'ataw"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1", "word_translation": "towards", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0650", "word_translation": "(the) command", "word_transliteration": "amri"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "and they said", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0635\u064e\u0670\u0644\u0650\u062d\u064f", "word_translation": "O Salih", "word_transliteration": "yasalihu"}, {"word_arabic_uthmani": "\u0671\u0626\u06e1\u062a\u0650\u0646\u064e\u0627", "word_translation": "Bring us", "word_transliteration": "i'tina"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u0650\u062f\u064f\u0646\u064e\u0627\u0653", "word_translation": "you promise us", "word_transliteration": "ta'iduna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064e", "word_translation": "you are", "word_transliteration": "kunta"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0650\u064a\u0646\u064e", "word_translation": "the Messengers", "word_transliteration": "al-mur'salina"}]}