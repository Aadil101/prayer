{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u064e\u0627\u0646\u0650 \u064a\u064e\u0623\u06e1\u062a\u0650\u064a\u064e\u0670\u0646\u0650\u0647\u064e\u0627 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0641\u064e\u0640\u0654\u064e\u0627\u0630\u064f\u0648\u0647\u064f\u0645\u064e\u0627\u06d6 \u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0627\u0628\u064e\u0627 \u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064e\u0627 \u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u064e\u0627\u0653\u06d7 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0643\u064e\u0627\u0646\u064e \u062a\u064e\u0648\u0651\u064e\u0627\u0628\u0657\u0627 \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u064e\u0627\u0646\u0650", "word_translation": "And the two who", "word_transliteration": "wa-alladhani"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u062a\u0650\u064a\u064e\u0670\u0646\u0650\u0647\u064e\u0627", "word_translation": "commit it", "word_transliteration": "yatiyaniha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u0630\u064f\u0648\u0647\u064f\u0645\u064e\u0627\u06d6", "word_translation": "then punish both of them", "word_transliteration": "faadhuhuma"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0627\u0628\u064e\u0627", "word_translation": "they repent", "word_transliteration": "taba"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064e\u0627", "word_translation": "and correct themselves", "word_transliteration": "wa-aslaha"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652", "word_translation": "then turn away", "word_transliteration": "fa-a'ridu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u064e\u0627\u0653\u06d7", "word_translation": "from both of them", "word_transliteration": "anhuma"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u0651\u064e\u0627\u0628\u0657\u0627", "word_translation": "Oft-forgiving", "word_transliteration": "tawwaban"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064b\u0627", "word_translation": "Most-Merciful", "word_transliteration": "rahiman"}]}