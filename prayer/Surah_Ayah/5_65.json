{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0651\u064e \u0623\u064e\u0647\u06e1\u0644\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652 \u0644\u064e\u0643\u064e\u0641\u0651\u064e\u0631\u06e1\u0646\u064e\u0627 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0644\u064e\u0623\u064e\u062f\u06e1\u062e\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u0650 \u0671\u0644\u0646\u0651\u064e\u0639\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e", "word_translation": "(the) People", "word_transliteration": "ahla"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(of) the Book", "word_transliteration": "al-kitabi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "(had) believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652", "word_translation": "and feared (Allah)", "word_transliteration": "wa-ittaqaw"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0641\u0651\u064e\u0631\u06e1\u0646\u064e\u0627", "word_translation": "surely We (would have) removed", "word_transliteration": "lakaffarna"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their evil (deeds)", "word_transliteration": "sayyiatihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0623\u064e\u062f\u06e1\u062e\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and surely We (would have) admitted them", "word_transliteration": "wala-adkhalnahum"}, {"word_arabic_uthmani": "\u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u0650", "word_translation": "[to] Gardens", "word_transliteration": "jannati"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0639\u0650\u064a\u0645\u0650", "word_translation": "(of) Bliss", "word_transliteration": "al-na'imi"}]}