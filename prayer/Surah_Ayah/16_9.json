{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0642\u064e\u0635\u06e1\u062f\u064f \u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650 \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u062c\u064e\u0627\u0653\u0626\u0650\u0631\u065e\u06da \u0648\u064e\u0644\u064e\u0648\u06e1 \u0634\u064e\u0627\u0653\u0621\u064e \u0644\u064e\u0647\u064e\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649", "word_translation": "And upon", "word_transliteration": "wa'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0642\u064e\u0635\u06e1\u062f\u064f", "word_translation": "(is) the direction", "word_transliteration": "qasdu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(of) the way", "word_transliteration": "al-sabili"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "and among them", "word_transliteration": "wamin'ha"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0626\u0650\u0631\u065e\u06da", "word_translation": "(are) crooked", "word_transliteration": "jairun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "He willed", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064e\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1", "word_translation": "surely He would have guided you", "word_transliteration": "lahadakum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "all", "word_transliteration": "ajma'ina"}]}