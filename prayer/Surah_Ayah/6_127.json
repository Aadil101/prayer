{"ayahs": {"ayah_uthmani": "\u06de\u0644\u064e\u0647\u064f\u0645\u06e1 \u062f\u064e\u0627\u0631\u064f \u0671\u0644\u0633\u0651\u064e\u0644\u064e\u0670\u0645\u0650 \u0639\u0650\u0646\u062f\u064e \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1\u06d6 \u0648\u064e\u0647\u064f\u0648\u064e \u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "For them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u062f\u064e\u0627\u0631\u064f", "word_translation": "(will be) home", "word_transliteration": "daru"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0644\u064e\u0670\u0645\u0650", "word_translation": "(of) [the] peace", "word_transliteration": "al-salami"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "with", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645", "word_translation": "(will be) their protecting friend", "word_transliteration": "waliyyuhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "(of what) they used to", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ya'maluna"}]}