{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064f\u0648\u0627\u0652 \u0648\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064f\u0648\u0627\u0652 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0623\u064e\u062a\u064f\u0648\u0628\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0646\u064e\u0627 \u0671\u0644\u062a\u0651\u064e\u0648\u0651\u064e\u0627\u0628\u064f \u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "Except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "who repent[ed]", "word_transliteration": "tabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064f\u0648\u0627\u0652", "word_translation": "and reform[ed]", "word_transliteration": "wa-aslahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "and openly declar[ed]", "word_transliteration": "wabayyanu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0623\u064e\u062a\u064f\u0648\u0628\u064f", "word_translation": "I will accept repentance", "word_transliteration": "atubu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "from them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u064e\u0627", "word_translation": "and I (am)", "word_transliteration": "wa-ana"}, {"word_arabic_uthmani": "\u0671\u0644\u062a\u0651\u064e\u0648\u0651\u064e\u0627\u0628\u064f", "word_translation": "the Acceptor of Repentance", "word_transliteration": "al-tawabu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f", "word_translation": "the Most Merciful", "word_transliteration": "al-rahimu"}]}