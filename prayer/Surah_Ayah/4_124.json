{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1 \u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0645\u0650\u0646 \u0630\u064e\u0643\u064e\u0631\u064d \u0623\u064e\u0648\u06e1 \u0623\u064f\u0646\u062b\u064e\u0649\u0670 \u0648\u064e\u0647\u064f\u0648\u064e \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u065e \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u064a\u064e\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u064e \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u0638\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0646\u064e\u0642\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1", "word_translation": "does", "word_transliteration": "ya'mal"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "[of]", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "[the] righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0630\u064e\u0643\u064e\u0631\u064d", "word_translation": "(the) male", "word_transliteration": "dhakarin"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u062b\u064e\u0649\u0670", "word_translation": "female", "word_transliteration": "untha"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and he", "word_transliteration": "wahuwa"}, {"wo