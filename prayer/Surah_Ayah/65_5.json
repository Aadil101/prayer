{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0623\u064e\u0645\u06e1\u0631\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0623\u064e\u0646\u0632\u064e\u0644\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u062a\u0651\u064e\u0642\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u06e1 \u0639\u064e\u0646\u06e1\u0647\u064f \u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u06e6 \u0648\u064e\u064a\u064f\u0639\u06e1\u0638\u0650\u0645\u06e1 \u0644\u064e\u0647\u064f\u06e5\u0653 \u0623\u064e\u062c\u06e1\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u064f", "word_translation": "(is the) Command", "word_transliteration": "amru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "which He has sent down", "word_transliteration": "anzalahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06da", "word_translation": "to you", "word_transliteration": "ilaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0642\u0650", "word_translation": "fears", "word_transliteration": "yattaqi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u06e1", "word_translation": "He will remove", "word_transliteration": "yukaffir"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f", "word_translation": "from him", "word_transliteration": "anhu"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u06e6", "word_translation": "his misdeeds", "word_transliteration": "sayyiatihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0639\u06e1\u0638\u0650\u0645\u06e1", "word_translation": "and make great", "word_transliteration": "wayu'zim"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064b\u0627", "word_translation": "(his) reward", "word_transliteration": "ajran"}]}