{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u063a\u06e1\u0634\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f \u0645\u0650\u0646 \u0641\u064e\u0648\u06e1\u0642\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0645\u0650\u0646 \u062a\u064e\u062d\u06e1\u062a\u0650 \u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "On (the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u063a\u06e1\u0634\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "will cover them", "word_transliteration": "yaghshahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f", "word_translation": "the punishment", "word_transliteration": "al-'adhabu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u06e1\u0642\u0650\u0647\u0650\u0645\u06e1", "word_translation": "above them", "word_transliteration": "fawqihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646", "word_translation": "and from", "word_transliteration": "wamin"}, {"word_arabic_uthmani": "\u062a\u064e\u062d\u06e1\u062a\u0650", "word_translation": "below", "word_transliteration": "tahti"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their feet", "word_transliteration": "arjulihim"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "and He will say", "word_transliteration": "wayaqulu"}, {"word_ara