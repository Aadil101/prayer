{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0646\u064e\u0627\u0631\u064f \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0644\u064e\u0627 \u064a\u064f\u0642\u06e1\u0636\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0641\u064e\u064a\u064e\u0645\u064f\u0648\u062a\u064f\u0648\u0627\u0652 \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u062e\u064e\u0641\u0651\u064e\u0641\u064f \u0639\u064e\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u0650\u0647\u064e\u0627\u06da \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064e\u062c\u06e1\u0632\u0650\u064a \u0643\u064f\u0644\u0651\u064e \u0643\u064e\u0641\u064f\u0648\u0631\u0656"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u0631\u064f", "word_translation": "(will be the) Fire", "word_transliteration": "naru"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "(of) Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "Not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0642\u06e1\u0636\u064e\u0649\u0670", "word_translation": "is decreed", "word_transliteration": "yuq'da"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "for them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u0645\u064f\u0648\u062a\u064f\u0648\u0627\u0652", "word_translation": "that they die", "word_transliteration": "fayamutu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064f\u062e\u064e\u0641\u0651\u064e\u0641\u064f", "word_translation": "will be lightened", "word_transliteration": "yukhaffafu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645", "word_translation": "for them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0650\u0647\u064e\u0627\u06da", "word_translation": "its torment", "word_transliteration": "adhabiha"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0646\u064e\u062c\u06e1\u0632\u0650\u064a", "word_translation": "We recompense", "word_transliteration": "najzi"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "every", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064f\u0648\u0631\u0656", "word_translation": "ungrateful one", "word_transliteration": "kafurin"}]}