{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u06e1\u0645\u064f\u0628\u064e\u0630\u0651\u0650\u0631\u0650\u064a\u0646\u064e \u0643\u064e\u0627\u0646\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u062e\u06e1\u0648\u064e\u0670\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u06d6 \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u0643\u064e\u0641\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u064e\u0630\u0651\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the spendthrifts", "word_transliteration": "al-mubadhirina"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "are", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0625\u0650\u062e\u06e1\u0648\u064e\u0670\u0646\u064e", "word_translation": "brothers", "word_transliteration": "ikh'wana"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u06d6", "word_translation": "(of) the devils", "word_transliteration": "al-shayatini"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "to his Lord", "word_transliteration": "lirabbihi"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064f\u0648\u0631\u0657\u0627", "word_translation": "ungrateful", "word_transliteration": "kafuran"}]}