{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u0641\u064e\u0636\u06e1\u0644\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u064f\u0647\u064f\u06e5 \u0648\u064e\u0623\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u062a\u064e\u0648\u0651\u064e\u0627\u0628\u064c \u062d\u064e\u0643\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "And if not", "word_transliteration": "walawla"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u064f", "word_translation": "(for) the Grace of Allah", "word_transliteration": "fadlu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(for) the Grace of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u064f\u0647\u064f\u06e5", "word_translation": "and His Mercy", "word_transliteration": "warahmatuhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e", "word_translation": "and that", "word_transliteration": "wa-anna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u0651\u064e\u0627\u0628\u064c", "word_translation": "(is) Oft-Returning (to Mercy)", "word_transliteration": "tawwabun"}, {"word_arabic_uthmani": "\u062d\u064e\u0643\u0650\u064a\u0645\u064c", "word_translation": "All-Wise", "word_transliteration": "hakimun"}]}