{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f \u0645\u0650\u0645\u0651\u064e\u0646\u0650 \u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0643\u064e\u0630\u0650\u0628\u064b\u0627 \u0623\u064e\u0648\u06e1 \u0643\u064e\u0630\u0651\u064e\u0628\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0644\u064e\u0645\u0651\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u06e5\u0653\u06da \u0623\u064e\u0644\u064e\u064a\u06e1\u0633\u064e \u0641\u0650\u064a \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0645\u064e\u062b\u06e1\u0648\u0657\u0649 \u0644\u0651\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And who", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) more unjust", "word_transliteration": "azlamu"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0646\u0650", "word_translation": "than (he) who", "word_transliteration": "mimmani"}, {"word_arabic_uthmani": "\u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670", "word_translation": "invents", "word_transliteration": "if'tara"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "against", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u0650\u0628\u064b\u0627", "word_translation": "a lie", "word_transliteration": "kadhiban"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u0651\u064e\u0628\u064e", "word_translation": "denies", "word_transliteration": "kadhaba"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "the truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "when", "word_transliteration": "lamma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u06e5\u0653\u06da", "word_translation": "it has come to him", "word_transliteration": "jaahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u064a\u06e1\u0633\u064e", "word_translation": "Is there not", "word_transliteration": "alaysa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u06e1\u0648\u0657\u0649", "word_translation": "an abode", "word_transliteration": "mathwan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}]}