{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064e \u0639\u0650\u064a\u0633\u064e\u0649\u0670 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650 \u0642\u064e\u0627\u0644\u064e \u0642\u064e\u062f\u06e1 \u062c\u0650\u0626\u06e1\u062a\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u062d\u0650\u0643\u06e1\u0645\u064e\u0629\u0650 \u0648\u064e\u0644\u0650\u0623\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e \u0644\u064e\u0643\u064f\u0645 \u0628\u064e\u0639\u06e1\u0636\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062a\u064e\u062e\u06e1\u062a\u064e\u0644\u0650\u0641\u064f\u0648\u0646\u064e \u0641\u0650\u064a\u0647\u0650\u06d6 \u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e", "word_translation": "came", "word_transliteration": "jaa"}, {"word_arabic_uthmani": "\u0639\u0650\u064a\u0633\u064e\u0649\u0670", "word_translation": "Isa", "word_transliteration": "isa"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "with clear proofs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "he said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u062c\u0650\u0626\u06e1\u062a\u064f\u0643\u064f\u0645", "word_translation": "I have come to you", "word_transliteration": "ji'tukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u0650\u0643\u06e1\u0645\u064e\u0629\u0650", "word_translation": "with wisdom", "word_transliteration": "bil-hik'mati"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0623\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e", "word_translation": "and that I make clear", "word_transliteration": "wali-ubayyina"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u0636\u064e", "word_translation": "some", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) that which", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062a\u064e\u062e\u06e1\u062a\u064e\u0644\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "you differ", "word_transliteration": "takhtalifuna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650\u06d6", "word_translation": "in it", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "So fear", "word_transliteration": "fa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0646\u0650", "word_translation": "and obey me", "word_transliteration": "wa-ati'uni"}]}