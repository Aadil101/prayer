{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0623\u064e\u0648\u06e1\u0631\u064e\u062b\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0635\u06e1\u0637\u064e\u0641\u064e\u064a\u06e1\u0646\u064e\u0627 \u0645\u0650\u0646\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0646\u064e\u0627\u06d6 \u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0638\u064e\u0627\u0644\u0650\u0645\u065e \u0644\u0651\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6 \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064f\u0642\u06e1\u062a\u064e\u0635\u0650\u062f\u065e \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0633\u064e\u0627\u0628\u0650\u0642\u064f\u06e2 \u0628\u0650\u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u064e\u0670\u062a\u0650 \u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0641\u064e\u0636\u06e1\u0644\u064f \u0671\u0644\u06e1\u0643\u064e\u0628\u0650\u064a\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u0631\u064e\u062b\u06e1\u0646\u064e\u0627", "word_translation": "We caused to inherit", "word_transliteration": "awrathna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0635\u06e1\u0637\u064e\u0641\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "We have chosen", "word_transliteration": "is'tafayna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0646\u064e\u0627\u06d6", "word_translation": "Our slaves", "word_transliteration": "ibadina"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "and among them", "word_transliteration": "famin'hum"}, {"word_arabic_uthmani": "\u0638\u064e\u0627\u0644\u0650\u0645\u065e", "word_translation": "(is he) who wrongs", "word_transliteration": "zalimun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6", "word_translation": "himself", "word_transliteration": "linafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "and among them", "word_transliteration": "wamin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0642\u06e1\u062a\u064e\u0635\u0650\u062f\u065e", "word_translation": "(is he who is) moderate", "word_transliteration": "muq'tasidun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "and among them", "word_transliteration": "wamin'hum"}, {"word_arabic_uthmani": "\u0633\u064e\u0627\u0628\u0650\u0642\u064f\u06e2", "word_translation": "(is he who is) foremost", "word_transliteration": "sabiqun"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u064e\u0670\u062a\u0650", "word_translation": "in good deeds", "word_transliteration": "bil-khayrati"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650", "word_translation": "by permission", "word_transliteration": "bi-idh'ni"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "is", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0636\u06e1\u0644\u064f", "word_translation": "the Bounty", "word_transliteration": "al-fadlu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0628\u0650\u064a\u0631\u064f", "word_translation": "the great", "word_transliteration": "al-kabiru"}]}