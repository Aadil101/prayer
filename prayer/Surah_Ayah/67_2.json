{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062e\u064e\u0644\u064e\u0642\u064e \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u064e \u0648\u064e\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064e \u0644\u0650\u064a\u064e\u0628\u06e1\u0644\u064f\u0648\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u064a\u0651\u064f\u0643\u064f\u0645\u06e1 \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f \u0639\u064e\u0645\u064e\u0644\u0657\u0627\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f \u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "The One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e", "word_translation": "created", "word_transliteration": "khalaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u064e", "word_translation": "death", "word_transliteration": "al-mawta"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064e", "word_translation": "and life", "word_transliteration": "wal-hayata"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0628\u06e1\u0644\u064f\u0648\u064e\u0643\u064f\u0645\u06e1", "word_translation": "that He may test you", "word_transliteration": "liyabluwakum"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "which of you", "word_transliteration": "ayyukum"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f", "word_translation": "(is) best", "word_transliteration": "ahsanu"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u064e\u0644\u0657\u0627\u06da", "word_translation": "(in) deed", "word_transliteration": "amalan"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f", "word_translation": "(is) the All-Mighty", "word_transliteration": "al-'azizu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f", "word_translation": "the Oft-Forgiving", "word_transliteration": "al-ghafuru"}]}