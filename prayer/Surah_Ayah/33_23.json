{"ayahs": {"ayah_uthmani": "\u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0631\u0650\u062c\u064e\u0627\u0644\u065e \u0635\u064e\u062f\u064e\u0642\u064f\u0648\u0627\u0652 \u0645\u064e\u0627 \u0639\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u06d6 \u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0646 \u0642\u064e\u0636\u064e\u0649\u0670 \u0646\u064e\u062d\u06e1\u0628\u064e\u0647\u064f\u06e5 \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0646 \u064a\u064e\u0646\u062a\u064e\u0638\u0650\u0631\u064f\u06d6 \u0648\u064e\u0645\u064e\u0627 \u0628\u064e\u062f\u0651\u064e\u0644\u064f\u0648\u0627\u0652 \u062a\u064e\u0628\u06e1\u062f\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "Among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0631\u0650\u062c\u064e\u0627\u0644\u065e", "word_translation": "(are) men", "word_transliteration": "rijalun"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "(who) have been true", "word_transliteration": "sadaqu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(to) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0639\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "they promised Allah", "word_transliteration": "ahadu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "they promised Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u06d6", "word_translation": "[on it]", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "And among them", "word_transliteration": "famin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "(is he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0642\u064e\u0636\u064e\u0649\u0670", "word_translation": "has fulfilled", "word_transliteration": "qada"}, {"word_arabic_uthmani": "\u0646\u064e\u062d\u06e1\u0628\u064e\u0647\u064f\u06e5", "word_translation": "his vow", "word_transliteration": "nahbahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "and among them", "word_transliteration": "wamin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "(is he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u062a\u064e\u0638\u0650\u0631\u064f\u06d6", "word_translation": "awaits", "word_transliteration": "yantaziru"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0628\u064e\u062f\u0651\u064e\u0644\u064f\u0648\u0627\u0652", "word_translation": "they alter", "word_transliteration": "baddalu"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u06e1\u062f\u0650\u064a\u0644\u0657\u0627", "word_translation": "(by) any alteration", "word_transliteration": "tabdilan"}]}