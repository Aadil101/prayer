{"ayahs": {"ayah_uthmani": "\u06de\u0642\u064f\u0644\u06e1 \u064a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649\u0670\u0643\u064f\u0645 \u0645\u0651\u064e\u0644\u064e\u0643\u064f \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0648\u064f\u0643\u0651\u0650\u0644\u064e \u0628\u0650\u0643\u064f\u0645\u06e1 \u062b\u064f\u0645\u0651\u064e \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649\u0670\u0643\u064f\u0645", "word_translation": "Will take your soul", "word_transliteration": "yatawaffakum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0644\u064e\u0643\u064f", "word_translation": "(the) Angel", "word_transliteration": "malaku"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650", "word_translation": "(of) the death", "word_transliteration": "al-mawti"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "the one who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0648\u064f\u0643\u0651\u0650\u0644\u064e", "word_translation": "has been put in charge", "word_transliteration": "wukkila"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0645\u06e1", "word_translation": "of you", "word_transliteration": "bikum"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbikum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "you will be returned", "word_transliteration": "tur'ja'una"}]}