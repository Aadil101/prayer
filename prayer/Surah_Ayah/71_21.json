{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0646\u064f\u0648\u062d\u065e \u0631\u0651\u064e\u0628\u0651\u0650 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0635\u064e\u0648\u06e1\u0646\u0650\u064a \u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652 \u0645\u064e\u0646 \u0644\u0651\u064e\u0645\u06e1 \u064a\u064e\u0632\u0650\u062f\u06e1\u0647\u064f \u0645\u064e\u0627\u0644\u064f\u0647\u064f\u06e5 \u0648\u064e\u0648\u064e\u0644\u064e\u062f\u064f\u0647\u064f\u06e5\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u062e\u064e\u0633\u064e\u0627\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "Said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u062d\u065e", "word_translation": "Nuh", "word_transliteration": "nuhun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650", "word_translation": "My Lord!", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "Indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0635\u064e\u0648\u06e1\u0646\u0650\u064a", "word_translation": "disobeyed me", "word_transliteration": "asawni"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "and followed", "word_transliteration": "wa-ittaba'u"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(the one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "(did) not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0632\u0650\u062f\u06e1\u0647\u064f", "word_translation": "increase him", "word_transliteration": "yazid'hu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0644\u064f\u0647\u064f\u06e5", "word_translation": "his wealth", "word_transliteration": "maluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0648\u064e\u0644\u064e\u062f\u064f\u0647\u064f\u06e5\u0653", "word_translation": "and his children", "word_transliteration": "wawaladuhu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u062e\u064e\u0633\u064e\u0627\u0631\u0657\u0627", "word_translation": "(in) loss", "word_transliteration": "khasaran"}]}