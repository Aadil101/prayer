{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646\u06e1 \u062d\u064e\u0642\u0651\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064f \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u0623\u064e\u0641\u064e\u0623\u064e\u0646\u062a\u064e \u062a\u064f\u0646\u0642\u0650\u0630\u064f \u0645\u064e\u0646 \u0641\u0650\u064a \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646\u06e1", "word_translation": "Then is (one) who", "word_transliteration": "afaman"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u064e", "word_translation": "became due", "word_transliteration": "haqqa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "on him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064f", "word_translation": "the word", "word_transliteration": "kalimatu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "(of) the punishment", "word_transliteration": "al-'adhabi"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0623\u064e\u0646\u062a\u064e", "word_translation": "Then can you", "word_transliteration": "afa-anta"}, {"word_arabic_uthmani": "\u062a\u064f\u0646\u0642\u0650\u0630\u064f", "word_translation": "save", "word_transliteration": "tunqidhu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "the Fire", "word_transliteration": "al-nari"}]}