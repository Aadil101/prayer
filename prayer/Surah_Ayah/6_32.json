{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627 \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0644\u064e\u0639\u0650\u0628\u065e \u0648\u064e\u0644\u064e\u0647\u06e1\u0648\u065e\u06d6 \u0648\u064e\u0644\u064e\u0644\u062f\u0651\u064e\u0627\u0631\u064f \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064f \u062e\u064e\u064a\u06e1\u0631\u065e \u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e\u06da \u0623\u064e\u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f", "word_translation": "(is) the life", "word_transliteration": "al-hayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u0653", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u0650\u0628\u065e", "word_translation": "a play", "word_transliteration": "la'ibun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u06e1\u0648\u065e\u06d6", "word_translation": "and amusement", "word_transliteration": "walahwun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0644\u062f\u0651\u064e\u0627\u0631\u064f", "word_translation": "but the home", "word_transliteration": "walalddaru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064f", "word_translation": "(of) the Hereafter", "word_transliteration": "al-akhiratu"}, {"word_arabic_uthmani": "\u062e