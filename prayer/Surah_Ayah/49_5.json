{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0635\u064e\u0628\u064e\u0631\u064f\u0648\u0627\u0652 \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u062a\u064e\u062e\u06e1\u0631\u064f\u062c\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0644\u064e\u0643\u064e\u0627\u0646\u064e \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "they", "word_transliteration": "annahum"}, {"word_arabic_uthmani": "\u0635\u064e\u0628\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "had been patient", "word_transliteration": "sabaru"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u062a\u064e\u062e\u06e1\u0631\u064f\u062c\u064e", "word_translation": "you came out", "word_transliteration": "takhruja"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "ilayhim"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "certainly it would be", "word_transliteration": "lakana"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "better", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f",