{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0635\u064e\u064a\u06e1\u062d\u064e\u0629\u0657 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657 \u0641\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0643\u064e\u0647\u064e\u0634\u0650\u064a\u0645\u0650 \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u062a\u064e\u0638\u0650\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "[We] sent", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0635\u064e\u064a\u06e1\u062d\u064e\u0629\u0657", "word_translation": "thunderous blast", "word_transliteration": "sayhatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657", "word_translation": "single", "word_transliteration": "wahidatan"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "and they became", "word_transliteration": "fakanu"}, {"word_arabic_uthmani": "\u0643\u064e\u0647\u064e\u0634\u0650\u064a\u0645\u0650", "word_translation": "like dry twig fragments", "word_transliteration": "kahashimi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u062a\u064e\u0638\u0650\u0631\u0650", "word_translation": "(used by) a fence builder", "word_transliteration": "al-muh'taziri"}]}