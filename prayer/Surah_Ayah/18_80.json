{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u06e1\u063a\u064f\u0644\u064e\u0670\u0645\u064f \u0641\u064e\u0643\u064e\u0627\u0646\u064e \u0623\u064e\u0628\u064e\u0648\u064e\u0627\u0647\u064f \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u064a\u06e1\u0646\u0650 \u0641\u064e\u062e\u064e\u0634\u0650\u064a\u0646\u064e\u0627\u0653 \u0623\u064e\u0646 \u064a\u064f\u0631\u06e1\u0647\u0650\u0642\u064e\u0647\u064f\u0645\u064e\u0627 \u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0657\u0627 \u0648\u064e\u0643\u064f\u0641\u06e1\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "And as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064f\u0644\u064e\u0670\u0645\u064f", "word_translation": "the boy", "word_transliteration": "al-ghulamu"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "his parents were", "word_transliteration": "fakana"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u064e\u0648\u064e\u0627\u0647\u064f", "word_translation": "his parents were", "word_transliteration": "abawahu"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u064a\u06e1\u0646\u0650", "word_translation": "believers", "word_transliteration": "mu'minayni"}, {"word_arabic_uthmani": "\u0641\u064e\u062e\u064e\u0634\u0650\u064a\u0646\u064e\u0627\u0653", "word_translation": "and we feared", "word_transliteration": "fakhashina"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u06e1\u0647\u0650\u0642\u064e\u0647\u064f\u0645\u064e\u0627", "word_translation": "he would overburden them", "word_transliteration": "yur'hiqahuma"}, {"word_arabic_uthmani": "\u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0657\u0627", "word_translation": "(by) transgression", "word_transliteration": "tugh'yanan"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0641\u06e1\u0631\u0657\u0627", "word_translation": "and disbelief", "word_transliteration": "wakuf'ran"}]}