{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0642\u06e1\u062a\u064f\u0644\u06e1 \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0657\u0627 \u0645\u0651\u064f\u062a\u064e\u0639\u064e\u0645\u0651\u0650\u062f\u0657\u0627 \u0641\u064e\u062c\u064e\u0632\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u06e5 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f \u062e\u064e\u0670\u0644\u0650\u062f\u0657\u0627 \u0641\u0650\u064a\u0647\u064e\u0627 \u0648\u064e\u063a\u064e\u0636\u0650\u0628\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u0644\u064e\u0639\u064e\u0646\u064e\u0647\u064f\u06e5 \u0648\u064e\u0623\u064e\u0639\u064e\u062f\u0651\u064e \u0644\u064e\u0647\u064f\u06e5 \u0639\u064e\u0630\u064e\u0627\u0628\u064b\u0627 \u0639\u064e\u0638\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u06e1\u062a\u064f\u0644\u06e1", "word_translation": "kills", "word_transliteration": "yaqtul"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0657\u0627", "word_translation": "a believer", "word_transliteration": "mu'minan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u062a\u064e\u0639\u064e\u0645\u0651\u0650\u062f\u0657\u0627", "word_translation": "intentionally", "word_transliteration": "muta'ammidan"}, {"word_arabic_uthmani": "\u0641\u064e\u062c\u064e\u0632\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u06e5", "word_translation": "then his recompense", "word_transliteration": "fajazauhu"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f", "word_translation": "(is) Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0657\u0627", "word_translation": "abiding forever", "word_transliteration": "khalidan"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0648\u064e\u063a\u064e\u0636\u0650\u0628\u064e", "word_translation": "and will fall the wrath", "word_transliteration": "waghadiba"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(of) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "on him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0646\u064e\u0647\u064f\u06e5", "word_translation": "and He (will) curse him", "word_transliteration": "wala'anahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0639\u064e\u062f\u0651\u064e", "word_translation": "and He has prepared", "word_transliteration": "wa-a'adda"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064b\u0627", "word_translation": "a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u0657\u0627", "word_translation": "great", "word_transliteration": "aziman"}]}