{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0627 \u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0643\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u063a\u06e1\u0648\u0650 \u0641\u0650\u064a\u0653 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646 \u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0643\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0633\u064e\u0628\u064e\u062a\u06e1 \u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0643\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u063a\u064e\u0641\u064f\u0648\u0631\u064c \u062d\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "Not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0643\u064f\u0645\u064f", "word_translation": "will take you to task", "word_transliteration": "yuakhidhukumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u063a\u06e1\u0648\u0650", "word_translation": "for (what is) unintentional", "word_transliteration": "bil-laghwi"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your oaths", "word_transliteration": "aymanikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646", "word_translation": "[and] but", "word_transliteration": "walakin"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0643\u064f\u0645", "word_translation": "He takes you to task", "word_transliteration": "yuakhidhukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0633\u064e\u0628\u064e\u062a\u06e1", "word_translation": "(have) earned", "word_transliteration": "kasabat"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0643\u064f\u0645\u06e1\u06d7", "word_translation": "your hearts", "word_transliteration": "qulubukum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u064c", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u062d\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "Most Forbearing", "word_transliteration": "halimun"}]}