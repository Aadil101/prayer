{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0646 \u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0626\u06e1\u0630\u064e\u0646 \u0644\u0651\u0650\u064a \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0641\u06e1\u062a\u0650\u0646\u0651\u0650\u064a\u0653\u06da \u0623\u064e\u0644\u064e\u0627 \u0641\u0650\u064a \u0671\u0644\u06e1\u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u0650 \u0633\u064e\u0642\u064e\u0637\u064f\u0648\u0627\u0652\u06d7 \u0648\u064e\u0625\u0650\u0646\u0651\u064e \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0644\u064e\u0645\u064f\u062d\u0650\u064a\u0637\u064e\u0629\u064f\u06e2 \u0628\u0650\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "And among them", "word_transliteration": "wamin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "(is he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "says", "word_transliteration": "yaqulu"}, {"word_arabic_uthmani": "\u0671\u0626\u06e1\u0630\u064e\u0646", "word_translation": "Grant me leave", "word_transliteration": "i'dhan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u064a", "word_translation": "Grant me leave", "word_transliteration": "li"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0641\u06e1\u062a\u0650\u0646\u0651\u0650\u064a\u0653\u06da", "word_translation": "put me to trial", "word_transliteration": "taftinni"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u0627", "word_translation": "Surely", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u0650", "word_translation": "the trial", "word_transliteration": "al-fit'nati"}, {"word_arabic_uthmani": "\u0633\u064e\u0642\u064e\u0637\u064f\u0648\u0627\u0652\u06d7", "word_translation": "they have fallen", "word_transliteration": "saqatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064f\u062d\u0650\u064a\u0637\u064e\u0629\u064f\u06e2", "word_translation": "(will) surely surround", "word_transliteration": "lamuhitatun"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the disbelievers", "word_transliteration": "bil-kafirina"}]}