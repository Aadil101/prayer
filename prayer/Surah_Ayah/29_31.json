{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1 \u0631\u064f\u0633\u064f\u0644\u064f\u0646\u064e\u0627\u0653 \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e\u0627 \u0645\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0647\u06e1\u0644\u0650 \u0647\u064e\u0670\u0630\u0650\u0647\u0650 \u0671\u0644\u06e1\u0642\u064e\u0631\u06e1\u064a\u064e\u0629\u0650\u06d6 \u0625\u0650\u0646\u0651\u064e \u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0638\u064e\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1", "word_translation": "came", "word_transliteration": "jaat"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064f\u0646\u064e\u0627\u0653", "word_translation": "Our messengers", "word_transliteration": "rusuluna"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "(to) Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670", "word_translation": "with the glad tidings", "word_transliteration": "bil-bush'ra"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0645\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0648\u0653\u0627\u0652", "word_translation": "(are) going to destroy", "word_transliteration": "muh'liku"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u0650", "word_translation": "(the) people", "word_transliteration": "ahli"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u0650\u0647\u0650", "word_translation": "(of) this", "word_transliteration": "hadhihi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0631\u06e1\u064a\u064e\u0629\u0650\u06d6", "word_translation": "town", "word_transliteration": "al-qaryati"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064e\u0627", "word_translation": "its people", "word_transliteration": "ahlaha"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "are", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0638\u064e\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "wrongdoers", "word_transliteration": "zalimina"}]}