{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064f\u0634\u064e\u0627\u0642\u0650\u0642\u0650 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e \u0645\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0645\u064e\u0627 \u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0647\u064f \u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670 \u0648\u064e\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u06e1 \u063a\u064e\u064a\u06e1\u0631\u064e \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0646\u064f\u0648\u064e\u0644\u0651\u0650\u0647\u0650\u06e6 \u0645\u064e\u0627 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670 \u0648\u064e\u0646\u064f\u0635\u06e1\u0644\u0650\u0647\u0650\u06e6 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e\u06d6 \u0648\u064e\u0633\u064e\u0627\u0653\u0621\u064e\u062a\u06e1 \u0645\u064e\u0635\u0650\u064a\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064f\u0634\u064e\u0627\u0642\u0650\u0642\u0650", "word_translation": "opposes", "word_transliteration": "yushaqiqi"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e", "word_translation": "the Messenger", "word_transliteration": "al-rasula"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "(has) become clear", "word_transliteration": "tabayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f", "word_translation": "to him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670", "word_translation": "(of) the guidance", "word_transliteration": "al-huda"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u06e1", "word_translation": "and he follows", "word_transliteration": "wayattabi'"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u06e1\u0631\u064e", "word_translation": "other than", "word_transliteration": "ghayra"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(of) the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u064e\u0644\u0651\u0650\u0647\u0650\u06e6", "word_translation": "We will turn him", "word_transliteration": "nuwallihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(to) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670", "word_translation": "he (has) turned", "word_transliteration": "tawalla"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0635\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and We will burn him", "word_transliteration": "wanus'lihi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e\u06d6", "word_translation": "(in) Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0627\u0653\u0621\u064e\u062a\u06e1", "word_translation": "and evil it is", "word_transliteration": "wasaat"}, {"word_arabic_uthmani": "\u0645\u064e\u0635\u0650\u064a\u0631\u064b\u0627", "word_translation": "(as) a destination", "word_transliteration": "masiran"}]}