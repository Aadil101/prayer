{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0625\u0650\u0630\u06e1 \u0633\u064e\u0645\u0650\u0639\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f \u0638\u064e\u0646\u0651\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u064f \u0628\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1 \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0641\u06e1\u0643\u065e \u0645\u0651\u064f\u0628\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "Why not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "when", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u0639\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f", "word_translation": "you heard it", "word_transliteration": "sami'tumuhu"}, {"word_arabic_uthmani": "\u0638\u064e\u0646\u0651\u064e", "word_translation": "think", "word_transliteration": "zanna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believing men", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u064f", "word_translation": "and the believing women", "word_transliteration": "wal-mu'minatu"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1", "word_translation": "good of themselves", "word_transliteration": "bi-anfusihim"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "good of themselves", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "and say", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0641\u06e1\u0643\u065e", "word_translation": "(is) a lie", "word_transliteration": "if'kun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u0650\u064a\u0646\u065e", "word_translation": "clear", "word_transliteration": "mubinun"}]}