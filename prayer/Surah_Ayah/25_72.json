{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0644\u064e\u0627 \u064a\u064e\u0634\u06e1\u0647\u064e\u062f\u064f\u0648\u0646\u064e \u0671\u0644\u0632\u0651\u064f\u0648\u0631\u064e \u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0645\u064e\u0631\u0651\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u063a\u06e1\u0648\u0650 \u0645\u064e\u0631\u0651\u064f\u0648\u0627\u0652 \u0643\u0650\u0631\u064e\u0627\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u06e1\u0647\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "bear witness", "word_transliteration": "yashhaduna"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064f\u0648\u0631\u064e", "word_translation": "(to) the falsehood", "word_transliteration": "al-zura"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "and when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "they pass", "word_transliteration": "marru"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u063a\u06e1\u0648\u0650", "word_translation": "by futility", "word_transliteration": "bil-laghwi"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "they pass", "word_transliteration": "marru"}, {"word_arabic_uthmani": "\u0643\u0650\u0631\u064e\u0627\u0645\u0657\u0627", "word_translation": "(as) dignified ones", "word_transliteration": "kiraman"}]}