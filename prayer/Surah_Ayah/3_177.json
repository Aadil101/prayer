{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0634\u06e1\u062a\u064e\u0631\u064e\u0648\u064f\u0627\u0652 \u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u064e \u0628\u0650\u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650 \u0644\u064e\u0646 \u064a\u064e\u0636\u064f\u0631\u0651\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0634\u064e\u064a\u06e1\u0640\u0654\u0657\u0627\u06d6 \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0623\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0634\u06e1\u062a\u064e\u0631\u064e\u0648\u064f\u0627\u0652", "word_translation": "(have) purchased", "word_transliteration": "ish'tarawu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u064e", "word_translation": "[the] disbelief", "word_transliteration": "al-kuf'ra"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650", "word_translation": "with the faith", "word_transliteration": "bil-imani"}, {"word_arabic_uthmani": "\u0644\u064e\u0646", "word_translation": "never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u064a\u064e\u0636\u064f\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "will they harm", "word_transliteration": "yadurru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0640\u0654\u0657\u0627\u06d6", "word_translation": "(in) anything", "word_transliteration": "shayan"}, {"word_arabic