{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e \u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f \u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5 \u0628\u0650\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u0650 \u0648\u064e\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u0650 \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0639\u0650\u0646\u062f\u064e \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u0645\u064e\u0631\u06e1\u0636\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And he used", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f", "word_translation": "(to) enjoin", "word_transliteration": "yamuru"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5", "word_translation": "(on) his people", "word_transliteration": "ahlahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u0650", "word_translation": "the prayer", "word_transliteration": "bil-salati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u0650", "word_translation": "and zakah", "word_transliteration": "wal-zakati"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "and was", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "near", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "his Lord", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u06e1\u0636\u0650\u064a\u0651\u0657\u0627", "word_translation": "pleasing", "word_transliteration": "mardiyyan"}]}