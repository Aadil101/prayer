{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0644\u064e\u0627 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0639\u064e\u0646\u0650 \u0671\u0644\u0635\u0651\u0650\u0631\u064e\u0670\u0637\u0650 \u0644\u064e\u0646\u064e\u0670\u0643\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "in the Hereafter", "word_transliteration": "bil-akhirati"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "from", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u0650\u0631\u064e\u0670\u0637\u0650", "word_translation": "the path", "word_transliteration": "al-sirati"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0670\u0643\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "surely (are) deviating", "word_transliteration": "lanakibuna"}]}