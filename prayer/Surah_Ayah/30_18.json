{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f \u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0648\u064e\u0639\u064e\u0634\u0650\u064a\u0651\u0657\u0627 \u0648\u064e\u062d\u0650\u064a\u0646\u064e \u062a\u064f\u0638\u06e1\u0647\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f", "word_translation": "And for Him", "word_transliteration": "walahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f", "word_translation": "(are) all praises", "word_transliteration": "al-hamdu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0634\u0650\u064a\u0651\u0657\u0627", "word_translation": "and (at) night", "word_transliteration": "wa'ashiyyan"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u0650\u064a\u0646\u064e", "word_translation": "and when", "word_transliteration": "wahina"}, {"word_arabic_uthmani": "\u062a\u064f\u0638\u06e1\u0647\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "you are at noon", "word_transliteration": "tuz'hiruna"}]}