{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a \u0648\u064e\u062c\u0651\u064e\u0647\u06e1\u062a\u064f \u0648\u064e\u062c\u06e1\u0647\u0650\u064a\u064e \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a \u0641\u064e\u0637\u064e\u0631\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u062d\u064e\u0646\u0650\u064a\u0641\u0657\u0627\u06d6 \u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u064e\u0627\u06e0 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a", "word_translation": "Indeed I", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u0651\u064e\u0647\u06e1\u062a\u064f", "word_translation": "[I] have turned", "word_transliteration": "wajjahtu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u06e1\u0647\u0650\u064a\u064e", "word_translation": "my face", "word_transliteration": "wajhiya"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "to the One Who", "word_transliteration": "lilladhi"}, {"word_arabic_uthmani": "\u0641\u064e\u0637\u064e\u0631\u064e", "word_translation": "created", "word_transliteration": "fatara"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "and the earth", "word_transliteration": "wal-arda"}, {"word_arabic_uthmani": "\u062d\u064e\u0646\u0650\u064a\u0641\u0657\u0627\u06d6", "word_translation": "(as) a true monotheist", "word_transliteration": "hanifan"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "and not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064e\u0627\u06e0", "word_translation": "I (am)", "word_transliteration": "ana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "the polytheists", "word_transliteration": "al-mush'rikina"}]}