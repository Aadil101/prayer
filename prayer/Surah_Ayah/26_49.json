{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645\u06e1 \u0644\u064e\u0647\u064f\u06e5 \u0642\u064e\u0628\u06e1\u0644\u064e \u0623\u064e\u0646\u06e1 \u0621\u064e\u0627\u0630\u064e\u0646\u064e \u0644\u064e\u0643\u064f\u0645\u06e1\u06d6 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0643\u064e\u0628\u0650\u064a\u0631\u064f\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0639\u064e\u0644\u0651\u064e\u0645\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0633\u0651\u0650\u062d\u06e1\u0631\u064e \u0641\u064e\u0644\u064e\u0633\u064e\u0648\u06e1\u0641\u064e \u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e\u06da \u0644\u064e\u0623\u064f\u0642\u064e\u0637\u0651\u0650\u0639\u064e\u0646\u0651\u064e \u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u062e\u0650\u0644\u064e\u0670\u0641\u0656 \u0648\u064e\u0644\u064e\u0623\u064f\u0635\u064e\u0644\u0651\u0650\u0628\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "You believed", "word_transliteration": "amantum"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "in him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064e", "word_translation": "before", "word_transliteration": "qabla"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e1", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0630\u064e\u0646\u064e", "word_translation": "I gave permission", "word_transliteration": "adhana"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed he", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0628\u0650\u064a\u0631\u064f\u0643\u064f\u0645\u064f", "word_translation": "(is) surely your chief", "word_transliteration": "lakabirukumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0651\u064e\u0645\u064e\u0643\u064f\u0645\u064f", "word_translation": "has taught you", "word_transliteration": "allamakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u0650\u062d\u06e1\u0631\u064e", "word_translation": "the magic", "word_transliteration": "al-sih'ra"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0633\u064e\u0648\u06e1\u0641\u064e", "word_translation": "so surely soon", "word_transliteration": "falasawfa"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e\u06da", "word_translation": "you will know", "word_transliteration": "ta'lamuna"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064f\u0642\u064e\u0637\u0651\u0650\u0639\u064e\u0646\u0651\u064e", "word_translation": "I will surely cut off", "word_transliteration": "la-uqatti'anna"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your hands", "word_transliteration": "aydiyakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u064e\u0643\u064f\u0645", "word_translation": "and your feet", "word_transliteration": "wa-arjulakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062e\u0650\u0644\u064e\u0670\u0641\u0656", "word_translation": "opposite sides", "word_transliteration": "khilafin"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0623\u064f\u0635\u064e\u0644\u0651\u0650\u0628\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and I will surely crucify you", "word_transliteration": "wala-usallibannakum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "all", "word_transliteration": "ajma'ina"}]}