{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0648\u064e\u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0644\u064e\u0646\u064e\u062d\u06e1\u0634\u064f\u0631\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u064e \u062b\u064f\u0645\u0651\u064e \u0644\u064e\u0646\u064f\u062d\u06e1\u0636\u0650\u0631\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u062d\u064e\u0648\u06e1\u0644\u064e \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u062c\u0650\u062b\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0648\u064e\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "So by your Lord", "word_transliteration": "fawarabbika"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u062d\u06e1\u0634\u064f\u0631\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "surely We will gather them", "word_transliteration": "lanahshurannahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u064e", "word_translation": "and the devils", "word_transliteration": "wal-shayatina"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u062d\u06e1\u0636\u0650\u0631\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "surely We will bring them", "word_transliteration": "lanuh'dirannahum"}, {"word_arabic_uthmani": "\u062d\u064e\u0648\u06e1\u0644\u064e", "word_translation": "around", "word_transliteration": "hawla"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u062c\u0650\u062b\u0650\u064a\u0651\u0657\u0627", "word_translation": "bent (on) knees", "word_transliteration": "jithiyyan"}]}