{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627 \u0671\u0646\u0633\u064e\u0644\u064e\u062e\u064e \u0671\u0644\u06e1\u0623\u064e\u0634\u06e1\u0647\u064f\u0631\u064f \u0671\u0644\u06e1\u062d\u064f\u0631\u064f\u0645\u064f \u0641\u064e\u0671\u0642\u06e1\u062a\u064f\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e \u062d\u064e\u064a\u06e1\u062b\u064f \u0648\u064e\u062c\u064e\u062f\u062a\u0651\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1 \u0648\u064e\u062e\u064f\u0630\u064f\u0648\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u062d\u06e1\u0635\u064f\u0631\u064f\u0648\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0642\u06e1\u0639\u064f\u062f\u064f\u0648\u0627\u0652 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0643\u064f\u0644\u0651\u064e \u0645\u064e\u0631\u06e1\u0635\u064e\u062f\u0656\u06da \u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0648\u064f\u0627\u0652 \u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e \u0641\u064e\u062e\u064e\u0644\u0651\u064f\u0648\u0627\u0652 \u0633\u064e\u0628\u0650\u064a\u0644\u064e\u0647\u064f\u0645\u06e1\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "Then when", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0671\u0646\u0633\u064e\u0644\u064e\u062e\u064e", "word_translation": "have passed", "word_transliteration": "insalakha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0634\u06e1\u0647\u064f\u0631\u064f", "word_translation": "the sacred months", "word_transliteration": "al-ashhuru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u0631\u064f\u0645\u064f", "word_translation": "the sacred months", "word_transliteration": "al-hurumu"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0642\u06e1\u062a\u064f\u0644\u064f\u0648\u0627\u0652", "word_translation": "then kill", "word_transliteration": "fa-uq'tulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "the polytheists", "word_transliteration": "al-mush'rikina"}, {"word_arabic_uthmani": "\u062d\u064e\u064a\u06e1\u062b\u064f", "word_translation": "wherever", "word_transliteration": "haythu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u062f\u062a\u0651\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "you find them", "word_transliteration": "wajadttumuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u062e\u064f\u0630\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "and seize them", "word_transliteration": "wakhudhuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062d\u06e1\u0635\u064f\u0631\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "and besiege them", "word_transliteration": "wa-uh'suruhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0642\u06e1\u0639\u064f\u062f\u064f\u0648\u0627\u0652", "word_translation": "and sit (in wait)", "word_transliteration": "wa-uq'udu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "(at) every", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u06e1\u0635\u064e\u062f\u0656\u06da", "word_translation": "place of ambush", "word_transliteration": "marsadin"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "they repent", "word_transliteration": "tabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652", "word_translation": "and establish", "word_transliteration": "wa-aqamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0648\u064f\u0627\u0652", "word_translation": "and give", "word_transliteration": "waatawu"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e", "word_translation": "the zakah", "word_transliteration": "al-zakata"}, {"word_arabic_uthmani": "\u0641\u064e\u062e\u064e\u0644\u0651\u064f\u0648\u0627\u0652", "word_translation": "then leave", "word_transliteration": "fakhallu"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "their way", "word_transliteration": "sabilahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}