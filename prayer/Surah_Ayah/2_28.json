{"ayahs": {"ayah_uthmani": "\u0643\u064e\u064a\u06e1\u0641\u064e \u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u062a\u0657\u0627 \u0641\u064e\u0623\u064e\u062d\u06e1\u064a\u064e\u0670\u0643\u064f\u0645\u06e1\u06d6 \u062b\u064f\u0645\u0651\u064e \u064a\u064f\u0645\u0650\u064a\u062a\u064f\u0643\u064f\u0645\u06e1 \u062b\u064f\u0645\u0651\u064e \u064a\u064f\u062d\u06e1\u064a\u0650\u064a\u0643\u064f\u0645\u06e1 \u062b\u064f\u0645\u0651\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0643\u064e\u064a\u06e1\u0641\u064e", "word_translation": "How", "word_transliteration": "kayfa"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "(can) you disbelieve", "word_transliteration": "takfuruna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "While you were", "word_transliteration": "wakuntum"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u062a\u0657\u0627", "word_translation": "dead", "word_transliteration": "amwatan"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062d\u06e1\u064a\u064e\u0670\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "then He gave you life", "word_transliteration": "fa-ahyakum"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u064a\u064f\u0645\u0650\u064a\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "He will cause you to die", "word_transliteration": "yumitukum"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u06e1\u064a\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "He will give you life", "word_transliteration": "yuh'yikum"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "you will be returned", "word_transliteration": "tur'ja'una"}]}