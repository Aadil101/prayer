{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u0633\u06e1\u062a\u064e \u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0657\u0627\u06da \u0642\u064f\u0644\u06e1 \u0643\u064e\u0641\u064e\u0649\u0670 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0634\u064e\u0647\u0650\u064a\u062f\u064e\u06e2\u0627 \u0628\u064e\u064a\u06e1\u0646\u0650\u064a \u0648\u064e\u0628\u064e\u064a\u06e1\u0646\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0639\u0650\u0646\u062f\u064e\u0647\u064f\u06e5 \u0639\u0650\u0644\u06e1\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "And say", "word_transliteration": "wayaqulu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0633\u06e1\u062a\u064e", "word_translation": "You are not", "word_transliteration": "lasta"}, {"word_arabic_uthmani": "\u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0657\u0627\u06da", "word_translation": "a Messenger", "word_transliteration": "mur'salan"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0649\u0670", "word_translation": "Sufficient", "word_transliteration": "kafa"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(is) Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u064a\u062f\u064e\u06e2\u0627", "word_translation": "(as) a Witness", "word_transliteration": "shahidan"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u0650\u064a", "word_translation": "between me", "word_transliteration": "bayni"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064e\u064a\u06e1\u0646\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and between you", "word_transliteration": "wabaynakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e\u0647\u064f\u06e5", "word_translation": "[he] has", "word_transliteration": "indahu"}, {"word_arabic_uthmani": "\u0639\u0650\u0644\u06e1\u0645\u064f", "word_translation": "knowledge", "word_transliteration": "il'mu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(of) the Book", "word_transliteration": "al-kitabi"}]}