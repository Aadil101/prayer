{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0643\u064e\u0627\u0646\u064e \u0641\u064e\u0631\u0650\u064a\u0642\u065e \u0645\u0651\u0650\u0646\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u064a \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0646\u064e\u0627 \u0648\u064e\u0671\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627 \u0648\u064e\u0623\u064e\u0646\u062a\u064e \u062e\u064e\u064a\u06e1\u0631\u064f \u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "(there) was", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u064a\u0642\u065e", "word_translation": "a party", "word_transliteration": "fariqun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u064a", "word_translation": "My slaves", "word_transliteration": "ibadi"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "(who) said", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653", "word_translation": "Our Lord!", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "so forgive", "word_transliteration": "fa-igh'fir"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627", "word_translation": "and have mercy on us", "word_transliteration": "wa-ir'hamna"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u062a\u064e", "word_translation": "and You", "word_transliteration": "wa-anta"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064f", "word_translation": "(are) best", "word_transliteration": "khayru"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) those who show mercy", "word_transliteration": "al-rahimina"}]}