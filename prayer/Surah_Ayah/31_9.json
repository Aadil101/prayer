{"ayahs": {"ayah_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e \u0641\u0650\u064a\u0647\u064e\u0627\u06d6 \u0648\u064e\u0639\u06e1\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062d\u064e\u0642\u0651\u0657\u0627\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f \u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e", "word_translation": "(To) abide forever", "word_transliteration": "khalidina"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627\u06d6", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e", "word_translation": "(The) Promise of Allah", "word_transliteration": "wa'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(The) Promise of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u0657\u0627\u06da", "word_translation": "(is) true", "word_transliteration": "haqqan"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f", "word_translation": "(is) the All-Mighty", "word_transliteration": "al-'azizu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f", "word_translation": "the All-Wise", "word_transliteration": "al-hakimu"}]}