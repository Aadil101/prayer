{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064e\u063a\u064e\u0627\u0646\u0650\u0645\u064e \u0643\u064e\u062b\u0650\u064a\u0631\u064e\u0629\u0657 \u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0646\u064e\u0647\u064e\u0627 \u0641\u064e\u0639\u064e\u062c\u0651\u064e\u0644\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0647\u064e\u0670\u0630\u0650\u0647\u0650\u06e6 \u0648\u064e\u0643\u064e\u0641\u0651\u064e \u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0639\u064e\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u0650\u062a\u064e\u0643\u064f\u0648\u0646\u064e \u0621\u064e\u0627\u064a\u064e\u0629\u0657 \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1 \u0635\u0650\u0631\u064e\u0670\u0637\u0657\u0627 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e\u0643\u064f\u0645\u064f", "word_translation": "Allah has promised you", "word_transliteration": "wa'adakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah has promised you", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u063a\u064e\u0627\u0646\u0650\u0645\u064e", "word_translation": "spoils of war", "word_transliteration": "maghanima"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0631\u064e\u0629\u0657", "word_translation": "much", "word_transliteration": "kathiratan"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0646\u064e\u0647\u064e\u0627", "word_translation": "that you will take it", "word_transliteration": "takhudhunaha"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u062c\u0651\u064e\u0644\u064e", "word_translation": "and He has hastened", "word_transliteration": "fa'ajjala"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u0650\u0647\u0650\u06e6", "word_translation": "this", "word_transliteration": "hadhihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0641\u0651\u064e", "word_translation": "and has withheld", "word_transliteration": "wakaffa"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e", "word_translation": "(the) hands", "word_transliteration": "aydiya"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "(of) the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0643\u064f\u0645\u06e1", "word_translation": "from you", "word_transliteration": "ankum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u062a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "that it may be", "word_transliteration": "walitakuna"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0629\u0657", "word_translation": "a sign", "word_transliteration": "ayatan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "for the believers", "word_transliteration": "lil'mu'minina"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and He may guide you", "word_transliteration": "wayahdiyakum"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0657\u0627", "word_translation": "(to the) Path", "word_transliteration": "siratan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627", "word_translation": "Straight", "word_transliteration": "mus'taqiman"}]}