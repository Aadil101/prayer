{"ayahs": {"ayah_uthmani": "\u0644\u0650\u062a\u064f\u0646\u0630\u0650\u0631\u064e \u0642\u064e\u0648\u06e1\u0645\u0657\u0627 \u0645\u0651\u064e\u0627\u0653 \u0623\u064f\u0646\u0630\u0650\u0631\u064e \u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u0645\u06e1 \u0641\u064e\u0647\u064f\u0645\u06e1 \u063a\u064e\u0670\u0641\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u062a\u064f\u0646\u0630\u0650\u0631\u064e", "word_translation": "That you may warn", "word_transliteration": "litundhira"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u0657\u0627", "word_translation": "a people", "word_transliteration": "qawman"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627\u0653", "word_translation": "not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u0630\u0650\u0631\u064e", "word_translation": "were warned", "word_transliteration": "undhira"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their forefathers", "word_transliteration": "abauhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so they", "word_transliteration": "fahum"}, {"word_arabic_uthmani": "\u063a\u064e\u0670\u0641\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "(are) heedless", "word_transliteration": "ghafiluna"}]}