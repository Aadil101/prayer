{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627 \u0631\u064f\u0633\u064f\u0644\u064e\u0646\u064e\u0627 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650 \u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0645\u064e\u0639\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u064a\u0632\u064e\u0627\u0646\u064e \u0644\u0650\u064a\u064e\u0642\u064f\u0648\u0645\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0628\u0650\u0671\u0644\u06e1\u0642\u0650\u0633\u06e1\u0637\u0650\u06d6 \u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u062d\u064e\u062f\u0650\u064a\u062f\u064e \u0641\u0650\u064a\u0647\u0650 \u0628\u064e\u0623\u06e1\u0633\u065e \u0634\u064e\u062f\u0650\u064a\u062f\u065e \u0648\u064e\u0645\u064e\u0646\u064e\u0670\u0641\u0650\u0639\u064f \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064e\u0646 \u064a\u064e\u0646\u0635\u064f\u0631\u064f\u0647\u064f\u06e5 \u0648\u064e\u0631\u064f\u0633\u064f\u0644\u064e\u0647\u064f\u06e5 \u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0642\u064e\u0648\u0650\u064a\u0651\u064c \u0639\u064e\u0632\u0650\u064a\u0632\u065e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We sent", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064e\u0646\u064e\u0627", "word_translation": "Our Messengers", "word_transliteration": "rusulana"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "with clear proofs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "and We sent down", "word_transliteration": "wa-anzalna"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0647\u064f\u0645\u064f", "word_translation": "with them", "word_transliteration": "ma'ahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Scripture", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u064a\u0632\u064e\u0627\u0646\u064e", "word_translation": "and the Balance", "word_transliteration": "wal-mizana"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0642\u064f\u0648\u0645\u064e", "word_translation": "that may establish", "word_transliteration": "liyaquma"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "the people", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0642\u0650\u0633\u06e1\u0637\u0650\u06d6", "word_translation": "justice", "word_transliteration": "bil-qis'ti"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "And We sent down", "word_transliteration": "wa-anzalna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u062f\u0650\u064a\u062f\u064e", "word_translation": "[the] iron", "word_transliteration": "al-hadida"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "wherein", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0628\u064e\u0623\u06e1\u0633\u065e", "word_translation": "(is) power", "word_transliteration": "basun"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u065e", "word_translation": "mighty", "word_transliteration": "shadidun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u064e\u0670\u0641\u0650\u0639\u064f", "word_translation": "and benefits", "word_transliteration": "wamanafi'u"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for the people", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e", "word_translation": "and so that make evident", "word_transliteration": "waliya'lama"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u0635\u064f\u0631\u064f\u0647\u064f\u06e5", "word_translation": "helps Him", "word_transliteration": "yansuruhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064f\u0633\u064f\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and His Messengers", "word_transliteration": "warusulahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650\u06da", "word_translation": "unseen", "word_transliteration": "bil-ghaybi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u0650\u064a\u0651\u064c", "word_translation": "(is) All-Strong", "word_transliteration": "qawiyyun"}, {"word_arabic_uthmani": "\u0639\u064e\u0632\u0650\u064a\u0632\u065e", "word_translation": "All-Mighty", "word_transliteration": "azizun"}]}