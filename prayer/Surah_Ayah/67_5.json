{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0632\u064e\u064a\u0651\u064e\u0646\u0651\u064e\u0627 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0628\u0650\u0645\u064e\u0635\u064e\u0670\u0628\u0650\u064a\u062d\u064e \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064e\u0627 \u0631\u064f\u062c\u064f\u0648\u0645\u0657\u0627 \u0644\u0651\u0650\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u06d6 \u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And certainly", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0632\u064e\u064a\u0651\u064e\u0646\u0651\u064e\u0627", "word_translation": "We have beautified", "word_transliteration": "zayyanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e", "word_translation": "the heaven", "word_transliteration": "al-samaa"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "nearest", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0635\u064e\u0670\u0628\u0650\u064a\u062d\u064e", "word_translation": "with lamps", "word_transliteration": "bimasabiha"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064e\u0627", "word_translation": "and We have made them", "word_transliteration": "waja'alnaha"}, {"word_arabic_uthmani": "\u0631\u064f\u062c\u064f\u0648\u0645\u0657\u0627", "word_translation": "(as) missiles", "word_transliteration": "rujuman"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0634\u0651\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u06d6", "word_translation": "for the devils", "word_transliteration": "lilshayatini"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "and We have prepared", "word_transliteration": "wa-a'tadna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650", "word_translation": "(of) the Blaze", "word_transliteration": "al-sa'iri"}]}