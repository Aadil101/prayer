{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062c\u064e\u0632\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u0645\u06e1 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u064a \u0648\u064e\u0631\u064f\u0633\u064f\u0644\u0650\u064a \u0647\u064f\u0632\u064f\u0648\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u062c\u064e\u0632\u064e\u0627\u0653\u0624\u064f\u0647\u064f\u0645\u06e1", "word_translation": "(is) their recompense", "word_transliteration": "jazauhum"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f", "word_translation": "Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "they disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652", "word_translation": "and took", "word_transliteration": "wa-ittakhadhu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u064a", "word_translation": "My Verses", "word_transliteration": "ayati"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064f\u0633\u064f\u0644\u0650\u064a", "word_translation": "and My Messengers", "word_transliteration": "warusuli"}, {"word_arabic_uthmani": "\u0647\u064f\u0632\u064f\u0648\u064b\u0627", "word_translation": "(in) ridicule", "word_transliteration": "huzuwan"}]}