{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0645\u064e\u0627\u0653 \u0623\u064f\u0648\u062a\u0650\u064a\u062a\u064f\u0645 \u0645\u0651\u0650\u0646 \u0634\u064e\u064a\u06e1\u0621\u0656 \u0641\u064e\u0645\u064e\u062a\u064e\u0670\u0639\u064f \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06da \u0648\u064e\u0645\u064e\u0627 \u0639\u0650\u0646\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062e\u064e\u064a\u06e1\u0631\u065e \u0648\u064e\u0623\u064e\u0628\u06e1\u0642\u064e\u0649\u0670 \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0627\u0653", "word_translation": "So whatever", "word_transliteration": "fama"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u0650\u064a\u062a\u064f\u0645", "word_translation": "you are given", "word_transliteration": "utitum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u0656", "word_translation": "a thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u062a\u064e\u0670\u0639\u064f", "word_translation": "(is) but a passing enjoyment", "word_transliteration": "famata'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650", "word_translation": "(for) the life", "word_transliteration": "al-hayati"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06da", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "But what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "(is) with", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e", "word_translation": "(is) better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0628\u06e1\u0642\u064e\u0649\u0670", "word_translation": "and more lasting", "word_transliteration": "wa-abqa"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "for those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "and upon", "word_transliteration": "wa'ala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "put (their) trust", "word_transliteration": "yatawakkaluna"}]}