{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0645\u064e\u0627 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u0648\u0646\u064e \u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e\u06da \u0643\u064e\u0627\u0646\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0648\u064e\u0639\u06e1\u062f\u0657\u0627 \u0645\u0651\u064e\u0633\u06e1\u0640\u0654\u064f\u0648\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "For them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) whatever", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u0648\u0646\u064e", "word_translation": "they wish", "word_transliteration": "yashauna"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e\u06da", "word_translation": "they will abide forever", "word_transliteration": "khalidina"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "It is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u0657\u0627", "word_translation": "a promise", "word_transliteration": "wa'dan"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0633\u06e1\u0640\u0654\u064f\u0648\u0644\u0657\u0627", "word_translation": "requested", "word_transliteration": "masulan"}]}