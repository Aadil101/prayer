{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u064a\u064e\u0635\u06e1\u062f\u064f\u0631\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0623\u064e\u0634\u06e1\u062a\u064e\u0627\u062a\u0657\u0627 \u0644\u0651\u0650\u064a\u064f\u0631\u064e\u0648\u06e1\u0627\u0652 \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "That Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u06e1\u062f\u064f\u0631\u064f", "word_translation": "will proceed", "word_transliteration": "yasduru"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "the mankind", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u062a\u064e\u0627\u062a\u0657\u0627", "word_translation": "(in) scattered groups", "word_transliteration": "ashtatan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064f\u0631\u064e\u0648\u06e1\u0627\u0652", "word_translation": "to be shown", "word_transliteration": "liyuraw"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'malahum"}]}