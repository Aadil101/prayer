{"ayahs": {"ayah_uthmani": "\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0644\u0650\u062a\u064e\u0631\u06e1\u0636\u064e\u0648\u06e1\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6 \u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0631\u06e1\u0636\u064e\u0648\u06e1\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0627 \u064a\u064e\u0631\u06e1\u0636\u064e\u0649\u0670 \u0639\u064e\u0646\u0650 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "They swear", "word_transliteration": "yahlifuna"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u0631\u06e1\u0636\u064e\u0648\u06e1\u0627\u0652", "word_translation": "that you may be pleased", "word_transliteration": "litardaw"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "with them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u06e1\u0636\u064e\u0648\u06e1\u0627\u0652", "word_translation": "you are pleased", "word_transliteration": "tardaw"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "with them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(is) not pleased", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u0636\u064e\u0649\u0670", "word_translation": "(is) not pleased", "word_transliteration": "yarda"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "with", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "the people", "word_transliteration": "al-qawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "(who are) defiantly disobedient", "word_transliteration": "al-fasiqina"}]}