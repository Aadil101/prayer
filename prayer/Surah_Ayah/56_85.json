{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0646\u064e\u062d\u06e1\u0646\u064f \u0623\u064e\u0642\u06e1\u0631\u064e\u0628\u064f \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646 \u0644\u0651\u064e\u0627 \u062a\u064f\u0628\u06e1\u0635\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u062d\u06e1\u0646\u064f", "word_translation": "And We", "word_transliteration": "wanahnu"}, {"word_arabic_uthmani": "\u0623\u064e\u0642\u06e1\u0631\u064e\u0628\u064f", "word_translation": "(are) nearer", "word_transliteration": "aqrabu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "than you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646", "word_translation": "but", "word_transliteration": "walakin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "you (do) not see", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064f\u0628\u06e1\u0635\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "you (do) not see", "word_transliteration": "tub'siruna"}]}