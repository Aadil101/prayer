{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0631\u064e\u062c\u064e\u0639\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649\u0670\u0653 \u0623\u064e\u0628\u0650\u064a\u0647\u0650\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u064a\u064e\u0640\u0670\u0653\u0623\u064e\u0628\u064e\u0627\u0646\u064e\u0627 \u0645\u064f\u0646\u0650\u0639\u064e \u0645\u0650\u0646\u0651\u064e\u0627 \u0671\u0644\u06e1\u0643\u064e\u064a\u06e1\u0644\u064f \u0641\u064e\u0623\u064e\u0631\u06e1\u0633\u0650\u0644\u06e1 \u0645\u064e\u0639\u064e\u0646\u064e\u0627\u0653 \u0623\u064e\u062e\u064e\u0627\u0646\u064e\u0627 \u0646\u064e\u0643\u06e1\u062a\u064e\u0644\u06e1 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5 \u0644\u064e\u062d\u064e\u0670\u0641\u0650\u0638\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "So when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0631\u064e\u062c\u064e\u0639\u064f\u0648\u0653\u0627\u0652", "word_translation": "they returned", "word_transliteration": "raja'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670\u0653", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "their father", "word_transliteration": "abihim"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u0628\u064e\u0627\u0646\u064e\u0627", "word_translation": "O our father!", "word_transliteration": "yaabana"}, {"word_arabic_uthmani": "\u0645\u064f\u0646\u0650\u0639\u064e", "word_translation": "Has been denied", "word_transliteration": "muni'a"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0651\u064e\u0627", "word_translation": "to us", "word_transliteration": "minna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u064a\u06e1\u0644\u064f", "word_translation": "the measure", "word_transliteration": "al-kaylu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0631\u06e1\u0633\u0650\u0644\u06e1", "word_translation": "so send", "word_transliteration": "fa-arsil"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0646\u064e\u0627\u0653", "word_translation": "with us", "word_transliteration": "ma'ana"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0627\u0646\u064e\u0627", "word_translation": "our brother", "word_transliteration": "akhana"}, {"word_arabic_uthmani": "\u0646\u064e\u0643\u06e1\u062a\u064e\u0644\u06e1", "word_translation": "(that) we will get measure", "word_transliteration": "naktal"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "And indeed we", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u064e\u0670\u0641\u0650\u0638\u064f\u0648\u0646\u064e", "word_translation": "(will) surely (be) guardians", "word_transliteration": "lahafizuna"}]}