{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064e\u0627 \u0645\u064f\u062d\u064e\u0631\u0651\u064e\u0645\u064e\u0629\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06db \u0623\u064e\u0631\u06e1\u0628\u064e\u0639\u0650\u064a\u0646\u064e \u0633\u064e\u0646\u064e\u0629\u0657\u06db \u064a\u064e\u062a\u0650\u064a\u0647\u064f\u0648\u0646\u064e \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06da \u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0623\u06e1\u0633\u064e \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "(Allah) said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064e\u0627", "word_translation": "Then indeed it", "word_transliteration": "fa-innaha"}, {"word_arabic_uthmani": "\u0645\u064f\u062d\u064e\u0631\u0651\u064e\u0645\u064e\u0629\u064c", "word_translation": "(will be) forbidden", "word_transliteration": "muharramatun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06db", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0628\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "(for) forty", "word_transliteration": "arba'ina"}, {"word_arabic_uthmani": "\u0633\u064e\u0646\u064e\u0629\u0657\u06db", "word_translation": "years", "word_transliteration": "sanatan"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0650\u064a\u0647\u064f\u0648\u0646\u064e", "word_translation": "they will wander", "word_transliteration": "yatihuna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06da", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "So (do) not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0633\u064e", "word_translation": "grieve", "word_transliteration": "tasa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "the people", "word_transliteration": "al-qawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "the defiantly disobedient", "word_transliteration": "al-fasiqina"}]}