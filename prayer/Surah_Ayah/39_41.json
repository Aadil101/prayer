{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6 \u0641\u064e\u0645\u064e\u0646\u0650 \u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0649\u0670 \u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0645\u064e\u0646 \u0636\u064e\u0644\u0651\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u0636\u0650\u0644\u0651\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6 \u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u062a\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645 \u0628\u0650\u0648\u064e\u0643\u0650\u064a\u0644\u064d"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We revealed", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for [the] mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u0650", "word_translation": "So whoever", "word_transliteration": "famani"}, {"word_arabic_uthmani": "\u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0649\u0670", "word_translation": "accepts guidance", "word_transliteration": "ih'tada"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "then (it is) for his soul", "word_transliteration": "falinafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u0651\u064e", "word_translation": "goes astray", "word_transliteration": "dalla"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u064a\u064e\u0636\u0650\u0644\u0651\u064f", "word_translation": "he strays", "word_transliteration": "yadillu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6", "word_translation": "against his (soul)", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064e", "word_translation": "you", "word_transliteration": "anta"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645", "word_translation": "(are) over them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0628\u0650\u0648\u064e\u0643\u0650\u064a\u0644\u064d", "word_translation": "a manager", "word_transliteration": "biwakilin"}]}