{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0645\u064e\u0646 \u064a\u064f\u0639\u06e1\u062c\u0650\u0628\u064f\u0643\u064e \u0642\u064e\u0648\u06e1\u0644\u064f\u0647\u064f\u06e5 \u0641\u0650\u064a \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u064a\u064f\u0634\u06e1\u0647\u0650\u062f\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0627 \u0641\u0650\u064a \u0642\u064e\u0644\u06e1\u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u0647\u064f\u0648\u064e \u0623\u064e\u0644\u064e\u062f\u0651\u064f \u0671\u0644\u06e1\u062e\u0650\u0635\u064e\u0627\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u064e", "word_translation": "And of", "word_transliteration": "wamina"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(is the one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064f\u0639\u06e1\u062c\u0650\u0628\u064f\u0643\u064e", "word_translation": "pleases you", "word_transliteration": "yu'jibuka"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0644\u064f\u0647\u064f\u06e5", "word_translation": "(with) his speech", "word_transliteration": "qawluhu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650", "word_translation": "the life", "word_transliteration": "al-hayati"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0634\u06e1\u0647\u065