{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0646\u064e\u0647\u064f\u06e5 \u062d\u064e\u0642\u0651\u064e \u062a\u0650\u0644\u064e\u0627\u0648\u064e\u062a\u0650\u0647\u0650\u06e6\u0653 \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0647\u0650\u06e6\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0643\u06e1\u0641\u064f\u0631\u06e1 \u0628\u0650\u0647\u0650\u06e6 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f", "word_translation": "We have given them", "word_transliteration": "ataynahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0646\u064e\u0647\u064f\u06e5", "word_translation": "recite it", "word_transliteration": "yatlunahu"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u064e", "word_translation": "(as it has the) right", "word_transliteration": "haqqa"}, {"word_arabic_uthmani": "\u062a\u0650\u0644\u064e\u0627\u0648\u064e\u062a\u0650\u0647\u0650\u06e6\u0653", "word_translation": "(of) its recitation", "word_transliteration": "tilawatihi"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those (people)", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06d7", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u0641\u064f\u0631\u06e1", "word_translation": "disbelieves", "word_transliteration": "yakfur"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "they", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(are) the losers", "word_transliteration": "al-khasiruna"}]}