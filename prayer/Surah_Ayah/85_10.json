{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0641\u064e\u062a\u064e\u0646\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u0650 \u062b\u064f\u0645\u0651\u064e \u0644\u064e\u0645\u06e1 \u064a\u064e\u062a\u064f\u0648\u0628\u064f\u0648\u0627\u0652 \u0641\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064f \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064f \u0671\u0644\u06e1\u062d\u064e\u0631\u0650\u064a\u0642\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "persecuted", "word_transliteration": "fatanu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believing men", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "and the believing women", "word_transliteration": "wal-mu'minati"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064f\u0648\u0628\u064f\u0648\u0627\u0652", "word_translation": "they repented", "word_transliteration": "yatubu"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "then for them", "word_transliteration": "falahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064f", "word_translation": "(is) the punishment", "word_transliteration": "adhabu"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "(of) Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and for them", "word_transliteration": "walahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064f", "word_translation": "(is the) punishment", "word_transliteration": "adhabu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0631\u0650\u064a\u0642\u0650", "word_translation": "(of) the Burning Fire", "word_transliteration": "al-hariqi"}]}