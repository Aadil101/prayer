{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064f \u064a\u064e\u0670\u0631\u064e\u0628\u0651\u0650 \u0625\u0650\u0646\u0651\u064e \u0642\u064e\u0648\u06e1\u0645\u0650\u064a \u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0627\u0652 \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e \u0645\u064e\u0647\u06e1\u062c\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064f", "word_translation": "the Messenger", "word_transliteration": "al-rasulu"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0631\u064e\u0628\u0651\u0650", "word_translation": "O my Lord!", "word_transliteration": "yarabbi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u0650\u064a", "word_translation": "my people", "word_transliteration": "qawmi"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0627\u0652", "word_translation": "took", "word_transliteration": "ittakhadhu"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e", "word_translation": "the Quran", "word_transliteration": "al-qur'ana"}, {"word_arabic_uthmani": "\u0645\u064e\u0647\u06e1\u062c\u064f\u0648\u0631\u0657\u0627", "word_translation": "(as) a forsaken thing", "word_transliteration": "mahjuran"}]}