{"ayahs": {"ayah_uthmani": "\u0628\u064e\u0644\u06e1 \u0646\u064e\u0642\u06e1\u0630\u0650\u0641\u064f \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u0650 \u0641\u064e\u064a\u064e\u062f\u06e1\u0645\u064e\u063a\u064f\u0647\u064f\u06e5 \u0641\u064e\u0625\u0650\u0630\u064e\u0627 \u0647\u064f\u0648\u064e \u0632\u064e\u0627\u0647\u0650\u0642\u065e\u06da \u0648\u064e\u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0648\u064e\u064a\u06e1\u0644\u064f \u0645\u0650\u0645\u0651\u064e\u0627 \u062a\u064e\u0635\u0650\u0641\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0646\u064e\u0642\u06e1\u0630\u0650\u0641\u064f", "word_translation": "We hurl", "word_transliteration": "naqdhifu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "the truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "against", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u0650", "word_translation": "[the] falsehood", "word_transliteration": "al-batili"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u062f\u06e1\u0645\u064e\u063a\u064f\u0647\u064f\u06e5", "word_translation": "and it breaks its head", "word_transliteration": "fayadmaghuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "behold", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "it (is)", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0632\u064e\u0627\u0647\u0650\u0642\u065e\u06da", "word_translation": "vanishing", "word_transliteration": "zahiqun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u