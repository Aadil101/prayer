{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0623\u064e\u0643\u0650\u064a\u062f\u064e\u0646\u0651\u064e \u0623\u064e\u0635\u06e1\u0646\u064e\u0670\u0645\u064e\u0643\u064f\u0645 \u0628\u064e\u0639\u06e1\u062f\u064e \u0623\u064e\u0646 \u062a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0627\u0652 \u0645\u064f\u062f\u06e1\u0628\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "And by Allah", "word_transliteration": "watal-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u0643\u0650\u064a\u062f\u064e\u0646\u0651\u064e", "word_translation": "surely I will plan", "word_transliteration": "la-akidanna"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u0646\u064e\u0670\u0645\u064e\u0643\u064f\u0645", "word_translation": "(against) your idols", "word_transliteration": "asnamakum"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0627\u0652", "word_translation": "you go away", "word_transliteration": "tuwallu"}, {"word_arabic_uthmani": "\u0645\u064f\u062f\u06e1\u0628\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "turning (your) backs", "word_transliteration": "mud'birina"}]}