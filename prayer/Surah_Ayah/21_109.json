{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0642\u064f\u0644\u06e1 \u0621\u064e\u0627\u0630\u064e\u0646\u062a\u064f\u0643\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670 \u0633\u064e\u0648\u064e\u0627\u0653\u0621\u0656\u06d6 \u0648\u064e\u0625\u0650\u0646\u06e1 \u0623\u064e\u062f\u06e1\u0631\u0650\u064a\u0653 \u0623\u064e\u0642\u064e\u0631\u0650\u064a\u0628\u064c \u0623\u064e\u0645 \u0628\u064e\u0639\u0650\u064a\u062f\u065e \u0645\u0651\u064e\u0627 \u062a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they turn away", "word_transliteration": "tawallaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u06e1", "word_translation": "then say", "word_transliteration": "faqul"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0630\u064e\u0646\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "I (have) announced to you", "word_transliteration": "adhantukum"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "equally", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0633\u064e\u0648\u064e\u0627\u0653\u0621\u0656\u06d6", "word_translation": "equally", "word_transliteration": "sawain"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And not", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u06e1\u0631\u0650\u064a\u0653", "word_translation": "I know", "word_transliteration": "adri"}, {"word_arabic_uthmani": "\u0623\u064e\u0642\u064e\u0631\u0650\u064a\u0628\u064c", "word_translation": "whether is near", "word_transliteration": "aqaribun"}, {"word_arabic_uthmani": "\u0623\u064e\u0645", "word_translation": "or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u0650\u064a\u062f\u065e", "word_translation": "far", "word_transliteration": "ba'idun"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "you are promised", "word_transliteration": "tu'aduna"}]}