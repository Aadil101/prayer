{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u0623\u064e\u0633\u06e1\u0645\u064e\u0627\u0653\u0621\u064f \u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670 \u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f \u0628\u0650\u0647\u064e\u0627\u06d6 \u0648\u064e\u0630\u064e\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0644\u06e1\u062d\u0650\u062f\u064f\u0648\u0646\u064e \u0641\u0650\u064a\u0653 \u0623\u064e\u0633\u06e1\u0645\u064e\u0640\u0670\u0653\u0626\u0650\u0647\u0650\u06e6\u06da \u0633\u064e\u064a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e \u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "And for Allah", "word_transliteration": "walillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0633\u06e1\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "(are) the names", "word_transliteration": "al-asmau"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670", "word_translation": "the most beautiful", "word_transliteration": "al-hus'na"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f", "word_translation": "so invoke Him", "word_transliteration": "fa-id'uhu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627\u06d6", "word_translation": "by them", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "And leave", "word_transliteration": "wadharu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0644\u06e1\u062d\u0650\u062f\u064f\u0648\u0646\u064e", "word_translation": "deviate", "word_transliteration": "yul'hiduna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "concerning", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0645\u064e\u0640\u0670\u0653\u0626\u0650\u0647\u0650\u06e6\u06da", "word_translation": "His names", "word_transliteration": "asmaihi"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e", "word_translation": "They will be recompensed", "word_transliteration": "sayuj'zawna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used to", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ya'maluna"}]}