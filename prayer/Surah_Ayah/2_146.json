{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e\u0647\u064f\u06e5 \u0643\u064e\u0645\u064e\u0627 \u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e \u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0644\u064e\u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0648\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(To) those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f", "word_translation": "We gave [them]", "word_transliteration": "ataynahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e\u0647\u064f\u06e5", "word_translation": "they recognize it", "word_transliteration": "ya'rifunahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "like", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "they recognize", "word_transliteration": "ya'rifuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "their sons", "word_transliteration": "abnaahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627", "word_translation": "a group", "word_transliteration": "fariqan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "of them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e", "word_translation": "surely they conceal", "word_transliteration": "layaktumuna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "the Truth", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "know", "word_transliteration": "ya'lamuna"}]}