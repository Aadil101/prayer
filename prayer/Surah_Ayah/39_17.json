{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u062c\u06e1\u062a\u064e\u0646\u064e\u0628\u064f\u0648\u0627\u0652 \u0671\u0644\u0637\u0651\u064e\u0640\u0670\u063a\u064f\u0648\u062a\u064e \u0623\u064e\u0646 \u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0647\u064e\u0627 \u0648\u064e\u0623\u064e\u0646\u064e\u0627\u0628\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670\u06da \u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0671\u062c\u06e1\u062a\u064e\u0646\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "avoid", "word_transliteration": "ij'tanabu"}, {"word_arabic_uthmani": "\u0671\u0644\u0637\u0651\u064e\u0640\u0670\u063a\u064f\u0648\u062a\u064e", "word_translation": "the false gods", "word_transliteration": "al-taghuta"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "lest", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0647\u064e\u0627", "word_translation": "they worship them", "word_transliteration": "ya'buduha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u064e\u0627\u0628\u064f\u0648\u0653\u0627\u0652", "word_translation": "and turn", "word_transliteration": "wa-anabu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "wo