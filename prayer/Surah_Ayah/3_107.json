{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0628\u06e1\u064a\u064e\u0636\u0651\u064e\u062a\u06e1 \u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645\u06e1 \u0641\u064e\u0641\u0650\u064a \u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u062e\u064e\u0670\u0644\u0650\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "But as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those whose", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0628\u06e1\u064a\u064e\u0636\u0651\u064e\u062a\u06e1", "word_translation": "turn white", "word_transliteration": "ib'yaddat"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645\u06e1", "word_translation": "[their] faces", "word_transliteration": "wujuhuhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0641\u0650\u064a", "word_translation": "then (they will be) in", "word_transliteration": "fafi"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0650", "word_translation": "(the) Mercy", "word_transliteration": "rahmati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u064f\u0648\u0646\u064e", "word_translation": "(will) abide forever", "word_transliteration": "khaliduna"}]}