{"ayahs": {"ayah_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645\u06e1 \u062c\u064f\u0646\u0651\u064e\u0629\u0657 \u0641\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0633\u064e\u0627\u0653\u0621\u064e \u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652", "word_translation": "They take", "word_transliteration": "ittakhadhu"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their oaths", "word_transliteration": "aymanahum"}, {"word_arabic_uthmani": "\u062c\u064f\u0646\u0651\u064e\u0629\u0657", "word_translation": "(as) a cover", "word_transliteration": "junnatan"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652", "word_translation": "so they turn away", "word_transliteration": "fasaddu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) Way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "Indeed", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0633\u064e\u0627\u0653\u0621\u064e", "word_translation": "evil is", "word_transliteration": "saa"}, {"word_arabic_uthmani": "\u0645\u064e\u062