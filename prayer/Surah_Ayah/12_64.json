{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0647\u064e\u0644\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0643\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0625\u0650\u0644\u0651\u064e\u0627 \u0643\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0645\u0650\u0646\u062a\u064f\u0643\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670\u0653 \u0623\u064e\u062e\u0650\u064a\u0647\u0650 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0641\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u062e\u064e\u064a\u06e1\u0631\u064c \u062d\u064e\u0670\u0641\u0650\u0638\u0657\u0627\u06d6 \u0648\u064e\u0647\u064f\u0648\u064e \u0623\u064e\u0631\u06e1\u062d\u064e\u0645\u064f \u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0647\u064e\u0644\u06e1", "word_translation": "Should", "word_transliteration": "hal"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0643\u064f\u0645\u06e1", "word_translation": "I entrust you", "word_transliteration": "amanukum"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "with him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627\u0653", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u0650\u0646\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "I entrusted you", "word_transliteration": "amintukum"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670\u0653", "word_translation": "with", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u0650\u064a\u0647\u0650", "word_translation": "his brother", "word_transliteration": "akhihi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "But Allah", "word_transliteration": "fal-lahu"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064c", "word_translation": "(is) the best", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u062d\u064e\u0670\u0641\u0650\u0638\u0657\u0627\u06d6", "word_translation": "Guardian", "word_transliteration": "hafizan"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u062d\u064e\u0645\u064f", "word_translation": "(is the) Most Merciful", "word_transliteration": "arhamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the merciful", "word_transliteration": "al-rahimina"}]}