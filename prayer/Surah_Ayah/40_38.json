{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u0650 \u0623\u064e\u0647\u06e1\u062f\u0650\u0643\u064f\u0645\u06e1 \u0633\u064e\u0628\u0650\u064a\u0644\u064e \u0671\u0644\u0631\u0651\u064e\u0634\u064e\u0627\u062f\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "the one who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064e", "word_translation": "believed", "word_transliteration": "amana"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u0650", "word_translation": "Follow me", "word_transliteration": "ittabi'uni"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u062f\u0650\u0643\u064f\u0645\u06e1", "word_translation": "I will guide you", "word_transliteration": "ahdikum"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u064e", "word_translation": "(to the) way", "word_transliteration": "sabila"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0634\u064e\u0627\u062f\u0650", "word_translation": "the right", "word_transliteration": "al-rashadi"}]}