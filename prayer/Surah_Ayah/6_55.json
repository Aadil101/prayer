{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064f\u0641\u064e\u0635\u0651\u0650\u0644\u064f \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650 \u0648\u064e\u0644\u0650\u062a\u064e\u0633\u06e1\u062a\u064e\u0628\u0650\u064a\u0646\u064e \u0633\u064e\u0628\u0650\u064a\u0644\u064f \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And thus", "word_transliteration": "wakadhalika"}, {"word_arabic_uthmani": "\u0646\u064f\u0641\u064e\u0635\u0651\u0650\u0644\u064f", "word_translation": "We explain", "word_transliteration": "nufassilu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650", "word_translation": "the Verses", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u062a\u064e\u0633\u06e1\u062a\u064e\u0628\u0650\u064a\u0646\u064e", "word_translation": "so that becomes manifest", "word_transliteration": "walitastabina"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u064f", "word_translation": "(the) way", "word_transliteration": "sabilu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the criminals", "word_transliteration": "al-muj'rimina"}]}