{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0671\u062c\u06e1\u062a\u064e\u0628\u064e\u0670\u0647\u064f \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u06e5 \u0641\u064e\u062a\u064e\u0627\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u0647\u064e\u062f\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0671\u062c\u06e1\u062a\u064e\u0628\u064e\u0670\u0647\u064f", "word_translation": "chose him", "word_transliteration": "ij'tabahu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0647\u064f\u06e5", "word_translation": "his Lord", "word_transliteration": "rabbuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0627\u0628\u064e", "word_translation": "and turned", "word_transliteration": "fataba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u062f\u064e\u0649\u0670", "word_translation": "and guided (him)", "word_transliteration": "wahada"}]}