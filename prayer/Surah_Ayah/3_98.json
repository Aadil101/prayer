{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u064a\u064e\u0640\u0670\u0653\u0623\u064e\u0647\u06e1\u0644\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0644\u0650\u0645\u064e \u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0634\u064e\u0647\u0650\u064a\u062f\u064c \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0627 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u0647\u06e1\u0644\u064e", "word_translation": "O People", "word_transliteration": "yaahla"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(of) the Book", "word_transliteration": "al-kitabi"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e", "word_translation": "Why", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "(do) you disbelieve", "word_transliteration": "takfuruna"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "in (the) Verses", "word_transliteration": "biayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "while Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u064a\u062f\u064c", "word_translation": "(is) a Witness", "word_transliteration": "shahidun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u06