{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064f\u0645\u0650\u0631\u06e1\u062a\u064f \u0644\u0650\u0623\u064e\u0646\u06e1 \u0623\u064e\u0643\u064f\u0648\u0646\u064e \u0623\u064e\u0648\u0651\u064e\u0644\u064e \u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064f\u0645\u0650\u0631\u06e1\u062a\u064f", "word_translation": "And I am commanded", "word_transliteration": "wa-umir'tu"}, {"word_arabic_uthmani": "\u0644\u0650\u0623\u064e\u0646\u06e1", "word_translation": "that", "word_transliteration": "li-an"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "I be", "word_transliteration": "akuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u0651\u064e\u0644\u064e", "word_translation": "(the) first", "word_transliteration": "awwala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) those who submit", "word_transliteration": "al-mus'limina"}]}