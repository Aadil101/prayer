{"ayahs": {"ayah_uthmani": "\u0633\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0630\u064e\u0627 \u0671\u0646\u0642\u064e\u0644\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0644\u0650\u062a\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6 \u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0631\u0650\u062c\u06e1\u0633\u065e\u06d6 \u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f \u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064e\u06e2 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0633\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "They will swear", "word_transliteration": "sayahlifuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0671\u0646\u0642\u064e\u0644\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you returned", "word_transliteration": "inqalabtum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "ilayhim"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652", "word_translation": "that you may turn away", "word_transliteration": "litu'ridu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0627\u0652", "word_translation": "So turn away", "word_transliteration": "fa-a'ridu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0631\u0650\u062c\u06e1\u0633\u065e\u06d6", "word_translation": "(are) impure", "word_transliteration": "rij'sun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and their abode", "word_transliteration": "wamawahum"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f", "word_translation": "(is) Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064e\u06e2", "word_translation": "a recompense", "word_transliteration": "jazaan"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used (to)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "earn", "word_transliteration": "yaksibuna"}]}