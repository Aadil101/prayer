{"ayahs": {"ayah_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064e\u0627 \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1 \u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u06e1 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0648\u064e\u0639\u0650\u0638\u06e1\u0647\u064f\u0645\u06e1 \u0648\u064e\u0642\u064f\u0644 \u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0653 \u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0644\u064e\u06e2\u0627 \u0628\u064e\u0644\u0650\u064a\u063a\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) the ones who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "knows", "word_transliteration": "ya'lamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their hearts", "word_transliteration": "qulubihim"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0639\u06e1\u0631\u0650\u0636\u06e1", "word_translation": "so turn away", "word_transliteration": "fa-a'rid"}, {"word_arabic_uthmani": "\u0639\u064e\u0646