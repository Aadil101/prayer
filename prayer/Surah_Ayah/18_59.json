{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e \u0671\u0644\u06e1\u0642\u064f\u0631\u064e\u0649\u0670\u0653 \u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0644\u064e\u0645\u0651\u064e\u0627 \u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652 \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0644\u0650\u0645\u064e\u0647\u06e1\u0644\u0650\u0643\u0650\u0647\u0650\u0645 \u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "And these", "word_transliteration": "watil'ka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u064e\u0649\u0670\u0653", "word_translation": "[the] towns", "word_transliteration": "al-qura"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We destroyed them", "word_transliteration": "ahlaknahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "when", "word_transliteration": "lamma"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "they wronged", "word_transliteration": "zalamu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "and We made", "word_transliteration": "waja'alna"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e\u0647\u06e1\u0644\u0650\u0643\u0650\u0647\u0650\u0645", "word_translation": "for their destruction", "word_transliteration": "limahlikihim"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u0657\u0627", "word_translation": "an appointed time", "word_transliteration": "maw'idan"}]}