{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064f\u0641\u064e\u0635\u0651\u0650\u0644\u064f \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650 \u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0631\u06e1\u062c\u0650\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And thus", "word_transliteration": "wakadhalika"}, {"word_arabic_uthmani": "\u0646\u064f\u0641\u064e\u0635\u0651\u0650\u0644\u064f", "word_translation": "We explain", "word_transliteration": "nufassilu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650", "word_translation": "the Verses", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "wala'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062c\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "return", "word_transliteration": "yarji'una"}]}