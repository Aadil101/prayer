{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u064a\u06e1\u062d\u064e\u0629\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u064a\u064e\u0648\u06e1\u0645\u064f \u0671\u0644\u06e1\u062e\u064f\u0631\u064f\u0648\u062c\u0650"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "they will hear", "word_transliteration": "yasma'una"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u064a\u06e1\u062d\u064e\u0629\u064e", "word_translation": "the Blast", "word_transliteration": "al-sayhata"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064f", "word_translation": "(is the) Day", "word_transliteration": "yawmu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064f\u0631\u064f\u0648\u062c\u0650", "word_translation": "(of) coming forth", "word_transliteration": "al-khuruji"}]}