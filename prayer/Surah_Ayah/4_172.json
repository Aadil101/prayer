{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0646 \u064a\u064e\u0633\u06e1\u062a\u064e\u0646\u0643\u0650\u0641\u064e \u0671\u0644\u06e1\u0645\u064e\u0633\u0650\u064a\u062d\u064f \u0623\u064e\u0646 \u064a\u064e\u0643\u064f\u0648\u0646\u064e \u0639\u064e\u0628\u06e1\u062f\u0657\u0627 \u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0644\u064e\u0627 \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u0671\u0644\u06e1\u0645\u064f\u0642\u064e\u0631\u0651\u064e\u0628\u064f\u0648\u0646\u064e\u06da \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0633\u06e1\u062a\u064e\u0646\u0643\u0650\u0641\u06e1 \u0639\u064e\u0646\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u064e\u062a\u0650\u0647\u0650\u06e6 \u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u06e1 \u0641\u064e\u0633\u064e\u064a\u064e\u062d\u06e1\u0634\u064f\u0631\u064f\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0646", "word_translation": "Never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0646\u0643\u0650\u0641\u064e", "word_translation": "will disdain", "word_transliteration": "yastankifa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0633\u0650\u064a\u062d\u064f", "word_translation": "the Messiah", "word_transliteration": "al-masihu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "to", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "be", "word_transliteration": "yakuna"}, {"word_arabic_uthmani": "\u0639\u064e\u0628\u06e1\u062f\u0657\u0627", "word_translation": "a slave", "word_transliteration": "abdan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "of Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "the Angels", "word_transliteration": "al-malaikatu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0642\u064e\u0631\u0651\u064e\u0628\u064f\u0648\u0646\u064e\u06da", "word_translation": "the ones who are near (to Allah)", "word_transliteration": "al-muqarabuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0646\u0643\u0650\u0641\u06e1", "word_translation": "disdains", "word_transliteration": "yastankif"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u064e\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His worship", "word_transliteration": "ibadatihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "and is arrogant", "word_transliteration": "wayastakbir"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u064a\u064e\u062d\u06e1\u0634\u064f\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "then He will gather them", "word_transliteration": "fasayahshuruhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "towards Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627", "word_translation": "all together", "word_transliteration": "jami'an"}]}