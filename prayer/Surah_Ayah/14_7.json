{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u062a\u064e\u0623\u064e\u0630\u0651\u064e\u0646\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0644\u064e\u0626\u0650\u0646 \u0634\u064e\u0643\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1 \u0644\u064e\u0623\u064e\u0632\u0650\u064a\u062f\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u0643\u064e\u0641\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0646\u0651\u064e \u0639\u064e\u0630\u064e\u0627\u0628\u0650\u064a \u0644\u064e\u0634\u064e\u062f\u0650\u064a\u062f\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u064e\u0630\u0651\u064e\u0646\u064e", "word_translation": "proclaimed", "word_transliteration": "ta-adhana"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646", "word_translation": "If", "word_transliteration": "la-in"}, {"word_arabic_uthmani": "\u0634\u064e\u0643\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you are thankful", "word_transliteration": "shakartum"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u0632\u0650\u064a\u062f\u064e\u0646\u0651\u064e\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "surely I will increase you", "word_transliteration": "la-azidannakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "but if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you are ungrateful", "word_transliteration": "kafartum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0650\u064a", "word_translation": "My punishment", "word_transliteration": "adhabi"}, {"word_arabic_uthmani": "\u0644\u064e\u0634\u064e\u062f\u0650\u064a\u062f\u065e", "word_translation": "(is) surely severe", "word_transliteration": "lashadidun"}]}