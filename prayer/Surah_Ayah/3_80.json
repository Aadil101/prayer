{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646 \u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e \u0623\u064e\u0631\u06e1\u0628\u064e\u0627\u0628\u064b\u0627\u06da \u0623\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650 \u0628\u064e\u0639\u06e1\u062f\u064e \u0625\u0650\u0630\u06e1 \u0623\u064e\u0646\u062a\u064f\u0645 \u0645\u0651\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064e\u0643\u064f\u0645\u06e1", "word_translation": "he will order you", "word_transliteration": "yamurakum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0627\u0652", "word_translation": "you take", "word_transliteration": "tattakhidhu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e", "word_translation": "the Angels", "word_transliteration": "al-malaikata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e", "word_translation": "and the Prophets", "word_transliteration": "wal-nabiyina"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0628\u064e\u0627\u0628\u064b\u0627\u06da", "word_translation": "(as) lords", "word_transliteration": "arbaban"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0643\u064f\u0645", "word_translation": "Would he order you", "word_transliteration": "ayamurukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650", "word_translation": "to [the] disbelief", "word_transliteration": "bil-kuf'ri"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "[when]", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064f\u0645", "word_translation": "you (have become)", "word_transliteration": "antum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "Muslims", "word_transliteration": "mus'limuna"}]}