{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0641\u064e\u062a\u064e\u062d\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645 \u0628\u064e\u0627\u0628\u0657\u0627 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650 \u0641\u064e\u0638\u064e\u0644\u0651\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0647\u0650 \u064a\u064e\u0639\u06e1\u0631\u064f\u062c\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And (even) if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u062d\u06e1\u0646\u064e\u0627", "word_translation": "We opened", "word_transliteration": "fatahna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0628\u064e\u0627\u0628\u0657\u0627", "word_translation": "a gate", "word_transliteration": "baban"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650", "word_translation": "the heaven", "word_transliteration": "al-samai"}, {"word_arabic_uthmani": "\u0641\u064e\u0638\u064e\u0644\u0651\u064f\u0648\u0627\u0652", "word_translation": "and they were to continue", "word_transliteration": "fazallu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "therein", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0631\u064f\u062c\u064f\u0648\u0646\u064e", "word_translation": "(to) ascend", "word_transliteration": "ya'rujuna"}]}