{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652 \u0644\u0650\u0645\u064e\u0646 \u064a\u064f\u0642\u06e1\u062a\u064e\u0644\u064f \u0641\u0650\u064a \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u062a\u064f\u06e2\u06da \u0628\u064e\u0644\u06e1 \u0623\u064e\u062d\u06e1\u064a\u064e\u0627\u0653\u0621\u065e \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646 \u0644\u0651\u064e\u0627 \u062a\u064e\u0634\u06e1\u0639\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652", "word_translation": "say", "word_transliteration": "taqulu"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e\u0646", "word_translation": "for (the ones) who", "word_transliteration": "liman"}, {"word_arabic_uthmani": "\u064a\u064f\u0642\u06e1\u062a\u064e\u0644\u064f", "word_translation": "are slain", "word_transliteration": "yuq'talu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u062a\u064f\u06e2\u06da", "word_translation": "(They are) dead", "word_transliteration": "amwatun"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u064a\u064e\u0627\u0653\u0621\u065e", "word_translation": "(they are) alive", "word_transliteration": "ahyaon"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646", "word_translation": "[and] but", "word_transliteration": "walakin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "you (do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0634\u06e1\u0639\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "perceive", "word_transliteration": "tash'uruna"}]}