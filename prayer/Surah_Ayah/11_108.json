{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0633\u064f\u0639\u0650\u062f\u064f\u0648\u0627\u0652 \u0641\u064e\u0641\u0650\u064a \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650 \u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e \u0641\u0650\u064a\u0647\u064e\u0627 \u0645\u064e\u0627 \u062f\u064e\u0627\u0645\u064e\u062a\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f \u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064e\u0627 \u0634\u064e\u0627\u0653\u0621\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064e\u06d6 \u0639\u064e\u0637\u064e\u0627\u0653\u0621\u064b \u063a\u064e\u064a\u06e1\u0631\u064e \u0645\u064e\u062c\u06e1\u0630\u064f\u0648\u0630\u0656"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "And as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0633\u064f\u0639\u0650\u062f\u064f\u0648\u0627\u0652", "word_translation": "were glad", "word_transliteration": "su'idu"}, {"word_arabic_uthmani": "\u0641\u064e\u0641\u0650\u064a", "word_translation": "then (they will be) in", "word_transliteration": "fafi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650", "word_translation": "Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e", "word_translation": "(will be) abiding", "word_transliteration": "khalidina"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "as long as remains", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062f\u064e\u0627\u0645\u064e\u062a\u0650", "word_translation": "as long as remains", "word_transliteration": "damati"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f", "word_translation": "the heavens", "word_transliteration": "al-samawatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f", "word_translation": "and the earth", "word_transliteration": "wal-ardu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what your Lord wills", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "what your Lord wills", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064e\u06d6", "word_translation": "what your Lord wills", "word_transliteration": "rabbuka"}, {"word_arabic_uthmani": "\u0639\u064e\u0637\u064e\u0627\u0653\u0621\u064b", "word_translation": "a bestowal", "word_transliteration": "ataan"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u06e1\u0631\u064e", "word_translation": "not", "word_transliteration": "ghayra"}, {"word_arabic_uthmani": "\u0645\u064e\u062c\u06e1\u0630\u064f\u0648\u0630\u0656", "word_translation": "interrupted", "word_transliteration": "majdhudhin"}]}