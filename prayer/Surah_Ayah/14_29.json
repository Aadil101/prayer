{"ayahs": {"ayah_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u064a\u064e\u0635\u06e1\u0644\u064e\u0648\u06e1\u0646\u064e\u0647\u064e\u0627\u06d6 \u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0671\u0644\u06e1\u0642\u064e\u0631\u064e\u0627\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u06e1\u0644\u064e\u0648\u06e1\u0646\u064e\u0647\u064e\u0627\u06d6", "word_translation": "(in) it they will burn", "word_transliteration": "yaslawnaha"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "and a wretched", "word_transliteration": "wabi'sa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0631\u064e\u0627\u0631\u064f", "word_translation": "place to settle", "word_transliteration": "al-qararu"}]}