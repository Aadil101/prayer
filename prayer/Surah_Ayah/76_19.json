{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u064a\u064e\u0637\u064f\u0648\u0641\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0648\u0650\u0644\u06e1\u062f\u064e\u0670\u0646\u065e \u0645\u0651\u064f\u062e\u064e\u0644\u0651\u064e\u062f\u064f\u0648\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1 \u062d\u064e\u0633\u0650\u0628\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1 \u0644\u064f\u0624\u06e1\u0644\u064f\u0624\u0657\u0627 \u0645\u0651\u064e\u0646\u062b\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u064a\u064e\u0637\u064f\u0648\u0641\u064f", "word_translation": "And will circulate", "word_transliteration": "wayatufu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "among them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0648\u0650\u0644\u06e1\u062f\u064e\u0670\u0646\u065e", "word_translation": "young boys", "word_transliteration": "wil'danun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u062e\u064e\u0644\u0651\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "made eternal", "word_transliteration": "mukhalladuna"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "When", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "you see them", "word_transliteration": "ra-aytahum"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u0650\u0628\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "you would think them", "word_transliteration": "hasib'tahum"}, {"word_arabic_uthmani": "\u0644\u064f\u0624\u06e1\u0644\u064f\u0624\u0657\u0627", "word_translation": "(as) pearls", "word_transliteration": "lu'lu-an"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0646\u062b\u064f\u0648\u0631\u0657\u0627", "word_translation": "scattered", "word_transliteration": "manthuran"}]}