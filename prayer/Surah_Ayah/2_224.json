{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0639\u064f\u0631\u06e1\u0636\u064e\u0629\u0657 \u0644\u0651\u0650\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646 \u062a\u064e\u0628\u064e\u0631\u0651\u064f\u0648\u0627\u0652 \u0648\u064e\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0648\u064e\u062a\u064f\u0635\u06e1\u0644\u0650\u062d\u064f\u0648\u0627\u0652 \u0628\u064e\u064a\u06e1\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0633\u064e\u0645\u0650\u064a\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0627\u0652", "word_translation": "make", "word_transliteration": "taj'alu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allahs (name)", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0639\u064f\u0631\u06e1\u0636\u064e\u0629\u0657", "word_translation": "an excuse", "word_transliteration": "ur'datan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0643\u064f\u0645\u06e1", "word_translation": "in your oaths", "word_transliteration": "li-aymanikum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "you do good", "word_transliteration": "tabarru"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "and be righteous", "word_transliteration": "watattaqu"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0635\u06e1\u0644\u0650\u062d\u064f\u0648\u0627\u0652", "word_translation": "and make peace", "word_transliteration": "watus'lihu"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e", "word_translation": "between", "word_transliteration": "bayna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650\u06da", "word_translation": "[the] people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0639\u064c", "word_translation": "(is) All-Hearing", "word_transliteration": "sami'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}