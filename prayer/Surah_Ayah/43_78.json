{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1 \u062c\u0650\u0626\u06e1\u0646\u064e\u0670\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e \u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e\u0643\u064f\u0645\u06e1 \u0644\u0650\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0643\u064e\u0670\u0631\u0650\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u062c\u0650\u0626\u06e1\u0646\u064e\u0670\u0643\u064f\u0645", "word_translation": "We have brought you", "word_transliteration": "ji'nakum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "the truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e", "word_translation": "but", "word_transliteration": "walakinna"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e\u0643\u064f\u0645\u06e1", "word_translation": "most of you", "word_transliteration": "aktharakum"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "to the truth", "word_transliteration": "lil'haqqi"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u0631\u0650\u0647\u064f\u0648\u0646\u064e", "word_translation": "(are) averse", "word_transliteration": "karihuna"}]}