{"ayahs": {"ayah_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f\u06d6 \u0648\u064e\u0644\u064e\u0639\u064e\u0630\u064e\u0627\u0628\u064f \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0623\u064e\u0643\u06e1\u0628\u064e\u0631\u064f\u06da \u0644\u064e\u0648\u06e1 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Such", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f\u06d6", "word_translation": "(is) the punishment", "word_transliteration": "al-'adhabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0630\u064e\u0627\u0628\u064f", "word_translation": "And surely the punishment", "word_transliteration": "wala'adhabu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "(of) the Hereafter", "word_transliteration": "al-akhirati"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u06e1\u0628\u064e\u0631\u064f\u06da", "word_translation": "(is) greater", "word_transliteration": "akbaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "if", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "know", "word_transliteration": "ya'lamuna"}]}