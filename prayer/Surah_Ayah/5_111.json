{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0623\u064e\u0648\u06e1\u062d\u064e\u064a\u06e1\u062a\u064f \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u062d\u064e\u0648\u064e\u0627\u0631\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e \u0623\u064e\u0646\u06e1 \u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u064a \u0648\u064e\u0628\u0650\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u064a \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0648\u064e\u0671\u0634\u06e1\u0647\u064e\u062f\u06e1 \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0646\u064e\u0627 \u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u062d\u064e\u064a\u06e1\u062a\u064f", "word_translation": "I inspired", "word_transliteration": "awhaytu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0648\u064e\u0627\u0631\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e", "word_translation": "the disciples", "word_transliteration": "al-hawariyina"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e1", "word_translation": "to", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "aminu"}, {"word_arabic_uthmani": "\u0628\u0650\u064a", "word_translation": "in Me", "word_transliteration": "bi"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u064a", "word_translation": "and in My Messenger", "word_transliteration": "wabirasuli"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0634\u06e1\u0647\u064e\u062f\u06e1", "word_translation": "and bear witness", "word_transliteration": "wa-ish'had"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0646\u064e\u0627", "word_translation": "that indeed we", "word_transliteration": "bi-annana"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(are) Muslims", "word_transliteration": "mus'limuna"}]}