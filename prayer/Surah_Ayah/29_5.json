{"ayahs": {"ayah_uthmani": "\u0645\u064e\u0646 \u0643\u064e\u0627\u0646\u064e \u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0627\u0652 \u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0623\u064e\u062c\u064e\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0623\u0653\u062a\u0656\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "[is]", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0627\u0652", "word_translation": "hopes", "word_transliteration": "yarju"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e", "word_translation": "(for the) meeting", "word_transliteration": "liqaa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(with) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u064e\u0644\u064e", "word_translation": "(the) Term", "word_transliteration": "ajala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u0653\u062a\u0656\u06da", "word_translation": "(is) surely coming", "word_transliteration": "laatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u0