{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0645\u064e\u0647\u0651\u0650\u0644\u0650 \u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0623\u064e\u0645\u06e1\u0647\u0650\u0644\u06e1\u0647\u064f\u0645\u06e1 \u0631\u064f\u0648\u064e\u064a\u06e1\u062f\u064e\u06e2\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0647\u0651\u0650\u0644\u0650", "word_translation": "So give respite", "word_transliteration": "famahhili"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "(to) the disbelievers", "word_transliteration": "al-kafirina"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0647\u0650\u0644\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "Give respite to them", "word_transliteration": "amhil'hum"}, {"word_arabic_uthmani": "\u0631\u064f\u0648\u064e\u064a\u06e1\u062f\u064e\u06e2\u0627", "word_translation": "little", "word_transliteration": "ruwaydan"}]}