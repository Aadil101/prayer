{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u062a\u064e\u0623\u064e\u0630\u0651\u064e\u0646\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0644\u064e\u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064e\u0646\u0651\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0645\u064e\u0646 \u064a\u064e\u0633\u064f\u0648\u0645\u064f\u0647\u064f\u0645\u06e1 \u0633\u064f\u0648\u0653\u0621\u064e \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650\u06d7 \u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0643\u064e \u0644\u064e\u0633\u064e\u0631\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u0650\u0642\u064e\u0627\u0628\u0650 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u064e\u0630\u0651\u064e\u0646\u064e", "word_translation": "declared", "word_transliteration": "ta-adhana"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbuka"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064e\u0646\u0651\u064e", "word_translation": "that He would surely send", "word_transliteration": "layab'athanna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "till", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "(the) Day", "word_transliteration": "yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(those) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u064f\u0648\u0645\u064f\u0647\u064f\u0645\u06e1", "word_translation": "would afflict them", "word_transliteration": "yasumuhum"}, {"word_arabic_uthmani": "\u0633\u064f\u0648\u0653\u0621\u064e", "word_translation": "(with) a grievous", "word_transliteration": "sua"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650\u06d7", "word_translation": "[the] punishment", "word_transliteration": "al-'adhabi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbaka"}, {"word_arabic_uthmani": "\u0644\u064e\u0633\u064e\u0631\u0650\u064a\u0639\u064f", "word_translation": "(is) surely swift", "word_transliteration": "lasari'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0642\u064e\u0627\u0628\u0650", "word_translation": "(in) the retribution", "word_transliteration": "al-'iqabi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "but indeed He", "word_transliteration": "wa-innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) surely Oft-Forgiving", "word_transliteration": "laghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}