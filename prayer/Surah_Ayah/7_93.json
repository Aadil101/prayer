{"ayahs": {"ayah_uthmani": "\u0641\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670 \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0648\u064e\u0642\u064e\u0627\u0644\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0628\u06e1\u0644\u064e\u063a\u06e1\u062a\u064f\u0643\u064f\u0645\u06e1 \u0631\u0650\u0633\u064e\u0670\u0644\u064e\u0670\u062a\u0650 \u0631\u064e\u0628\u0651\u0650\u064a \u0648\u064e\u0646\u064e\u0635\u064e\u062d\u06e1\u062a\u064f \u0644\u064e\u0643\u064f\u0645\u06e1\u06d6 \u0641\u064e\u0643\u064e\u064a\u06e1\u0641\u064e \u0621\u064e\u0627\u0633\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649\u0670 \u0642\u064e\u0648\u06e1\u0645\u0656 \u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670", "word_translation": "So he turned away", "word_transliteration": "fatawalla"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "and said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0644\u064e\u063a\u06e1\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "I (have) conveyed to you", "word_transliteration": "ablaghtukum"}, {"word_arabic_uthmani": "\u0631\u0650\u0633\u064e\u0670\u0644\u064e\u0670\u062a\u0650", "word_translation": "(the) Messages", "word_transliteration": "risalati"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "(of) my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0635\u064e\u062d\u06e1\u062a\u064f", "word_translation": "and advised", "word_transliteration": "wanasahtu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "[to] you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u064a\u06e1\u0641\u064e", "word_translation": "So how could", "word_transliteration": "fakayfa"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0633\u064e\u0649\u0670", "word_translation": "I grieve", "word_transliteration": "asa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "for", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "a people", "word_transliteration": "qawmin"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "(who are) disbelievers", "word_transliteration": "kafirina"}]}