{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u0630\u064f\u0643\u0650\u0631\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u062c\u0650\u0644\u064e\u062a\u06e1 \u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0627\u0653 \u0623\u064e\u0635\u064e\u0627\u0628\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0642\u0650\u064a\u0645\u0650\u064a \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u0650 \u0648\u064e\u0645\u0650\u0645\u0651\u064e\u0627 \u0631\u064e\u0632\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0630\u064f\u0643\u0650\u0631\u064e", "word_translation": "is mentioned", "word_transliteration": "dhukira"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u0650\u0644\u064e\u062a\u06e1", "word_translation": "fear", "word_transliteration": "wajilat"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their hearts", "word_transliteration": "qulubuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "and those who are patient", "word_transliteration": "wal-sabirina"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649