{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u06e1 \u0623\u064f\u0648\u062a\u0650\u064a\u064e \u0643\u0650\u062a\u064e\u0670\u0628\u064e\u0647\u064f\u06e5 \u0628\u0650\u0634\u0650\u0645\u064e\u0627\u0644\u0650\u0647\u0650\u06e6 \u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u064a\u064e\u0670\u0644\u064e\u064a\u06e1\u062a\u064e\u0646\u0650\u064a \u0644\u064e\u0645\u06e1 \u0623\u064f\u0648\u062a\u064e \u0643\u0650\u062a\u064e\u0670\u0628\u0650\u064a\u064e\u0647\u06e1"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "But as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u06e1", "word_translation": "(him) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u0650\u064a\u064e", "word_translation": "is given", "word_transliteration": "utiya"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u064e\u0647\u064f\u06e5", "word_translation": "his record", "word_transliteration": "kitabahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0634\u0650\u0645\u064e\u0627\u0644\u0650\u0647\u0650\u06e6", "word_translation": "in his left hand", "word_transliteration": "bishimalihi"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "will say", "word_transliteration": "fayaqulu"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0644\u064e\u064a\u06e1\u062a\u064e\u0646\u0650\u064a", "word_translation": "O! I wish", "word_transliteration": "yalaytani"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u064e", "word_translation": "I had been given", "word_transliteration": "uta"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u0650\u064a\u064e\u0647\u06e1", "word_translation": "my record", "word_transliteration": "kita