{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u06e1\u0645\u064e\u0644\u0650\u0643\u064f \u0671\u0626\u06e1\u062a\u064f\u0648\u0646\u0650\u064a \u0628\u0650\u0647\u0650\u06e6\u06d6 \u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064f \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064f \u0642\u064e\u0627\u0644\u064e \u0671\u0631\u06e1\u062c\u0650\u0639\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u06e1\u0647\u064f \u0645\u064e\u0627 \u0628\u064e\u0627\u0644\u064f \u0671\u0644\u0646\u0651\u0650\u0633\u06e1\u0648\u064e\u0629\u0650 \u0671\u0644\u0651\u064e\u0640\u0670\u062a\u0650\u064a \u0642\u064e\u0637\u0651\u064e\u0639\u06e1\u0646\u064e \u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e\u0647\u064f\u0646\u0651\u064e\u06da \u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u0650\u064a \u0628\u0650\u0643\u064e\u064a\u06e1\u062f\u0650\u0647\u0650\u0646\u0651\u064e \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u0650\u0643\u064f", "word_translation": "the king", "word_transliteration": "al-maliku"}, {"word_arabic_uthmani": "\u0671\u0626\u06e1\u062a\u064f\u0648\u0646\u0650\u064a", "word_translation": "Bring him to me", "word_transliteration": "i'tuni"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "Bring him to me", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "But when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064f", "word_translation": "came to him", "word_transliteration": "jaahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064f", "word_translation": "the messenger", "word_transliteration": "al-rasulu"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "he said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0671\u0631\u06e1\u062c\u0650\u0639\u06e1", "word_translation": "Return", "word_transliteration": "ir'ji'"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u06e1\u0647\u064f", "word_translation": "and ask him", "word_transliteration": "fasalhu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0628\u064e\u0627\u0644\u064f", "word_translation": "(is the) case", "word_transliteration": "balu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u0650\u0633\u06e1\u0648\u064e\u0629\u0650", "word_translation": "(of) the women", "word_transliteration": "al-nis'wati"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0640\u0670\u062a\u0650\u064a", "word_translation": "who", "word_transliteration": "allati"}, {"word_arabic_uthmani": "\u0642\u064e\u0637\u0651\u064e\u0639\u06e1\u0646\u064e", "word_translation": "cut", "word_transliteration": "qatta'na"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u064e\u0647\u064f\u0646\u0651\u064e\u06da", "word_translation": "their hands", "word_transliteration": "aydiyahunna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0628\u0650\u