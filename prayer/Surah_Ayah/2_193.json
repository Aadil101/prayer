{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0647\u064f\u0645\u06e1 \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0648\u0646\u064e \u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u065e \u0648\u064e\u064a\u064e\u0643\u064f\u0648\u0646\u064e \u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650\u06d6 \u0641\u064e\u0625\u0650\u0646\u0650 \u0671\u0646\u062a\u064e\u0647\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0644\u064e\u0627 \u0639\u064f\u062f\u06e1\u0648\u064e\u0670\u0646\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "And fight (against) them", "word_transliteration": "waqatiluhum"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "(there) is", "word_transliteration": "takuna"}, {"word_arabic_uthmani": "\u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u065e", "word_translation": "oppression", "word_transliteration": "fit'natun"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "and becomes", "word_transliteration": "wayakuna"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064f", "word_translation": "the religion", "word_transliteration": "al-dinu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "for Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0650", "word_translation": "Then if", "word_transliteration": "fa-ini"}, {"word_arabic_uthmani": "\u0671\u0646\u062a\u064e\u0647\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they cease", "word_transliteration": "intahaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "then (let there be) no", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u0639\u064f\u062f\u06e1\u0648\u064e\u0670\u0646\u064e", "word_translation": "hostility", "word_transliteration": "ud'wana"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "against", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "the oppressors", "word_transliteration": "al-zalimina"}]}