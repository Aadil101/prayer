{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u064a\u064e\u0646\u06e1\u0647\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0631\u0651\u064e\u0628\u0651\u064e\u0640\u0670\u0646\u0650\u064a\u0651\u064f\u0648\u0646\u064e \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0628\u064e\u0627\u0631\u064f \u0639\u064e\u0646 \u0642\u064e\u0648\u06e1\u0644\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u064e \u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0633\u0651\u064f\u062d\u06e1\u062a\u064e\u06da \u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0635\u06e1\u0646\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "Why (do) not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u06e1\u0647\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "forbid them", "word_transliteration": "yanhahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0628\u0651\u064e\u0640\u0670\u0646\u0650\u064a\u0651\u064f\u0648\u0646\u064e", "word_translation": "the Rabbis", "word_transliteration": "al-rabaniyuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0628\u064e\u0627\u0631\u064f", "word_translation": "and the religious scholars", "word_transliteration": "wal-ahbaru"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0644\u0650\u0647\u0650\u0645\u064f", "word_translation": "their saying", "word_transliteration": "qawlihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u064e", "word_translation": "the sinful", "word_transliteration": "al-ith'ma"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u064f", "word_translation": "and their eating", "word_transliteration": "wa-aklihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u062d\u06e1\u062a\u064e\u06da", "word_translation": "(of) the forbidden", "word_transliteration": "al-suh'ta"}, {"word_arabic_uthmani": "\u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "Surely evil", "word_transliteration": "labi'sa"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used to", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u06e1\u0646\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "yasna'una"}]}