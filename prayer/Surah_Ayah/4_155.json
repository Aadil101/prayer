{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0628\u0650\u0645\u064e\u0627 \u0646\u064e\u0642\u06e1\u0636\u0650\u0647\u0650\u0645 \u0645\u0651\u0650\u064a\u062b\u064e\u0670\u0642\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0643\u064f\u0641\u06e1\u0631\u0650\u0647\u0650\u0645 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0642\u064e\u062a\u06e1\u0644\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u0623\u064e\u0646\u06e2\u0628\u0650\u064a\u064e\u0627\u0653\u0621\u064e \u0628\u0650\u063a\u064e\u064a\u06e1\u0631\u0650 \u062d\u064e\u0642\u0651\u0656 \u0648\u064e\u0642\u064e\u0648\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1 \u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0646\u064e\u0627 \u063a\u064f\u0644\u06e1\u0641\u064f\u06e2\u06da \u0628\u064e\u0644\u06e1 \u0637\u064e\u0628\u064e\u0639\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u0628\u0650\u0643\u064f\u0641\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1 \u0641\u064e\u0644\u064e\u0627 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0628\u0650\u0645\u064e\u0627", "word_translation": "Then because of", "word_transliteration": "fabima"}, {"word_arabic_uthmani": "\u0646\u064e\u0642\u06e1\u0636\u0650\u0647\u0650\u0645", "word_translation": "their breaking", "word_transliteration": "naqdihim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u064a\u062b\u064e\u0670\u0642\u064e\u0647\u064f\u0645\u06e1", "word_translation": "(of) their covenant", "word_transliteration": "mithaqahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0641\u06e1\u0631\u0650\u0647\u0650\u0645", "word_translation": "and their disbelief", "word_transliteration": "wakuf'rihim"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "in (the) Signs", "word_transliteration": "biayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u062a\u06e1\u0644\u0650\u0647\u0650\u0645\u064f", "word_translation": "and their killing", "word_transliteration": "waqatlihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0646\u06e2\u0628\u0650\u064a\u064e\u0627\u0653\u0621\u064e", "word_translation": "(of) the Prophets", "word_transliteration": "al-anbiyaa"}, {"word_arabic_uthmani": "\u0628\u0650\u063a\u064e\u064a\u06e1\u0631\u0650", "word_translation": "without", "word_transliteration": "bighayri"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u0656", "word_translation": "any right", "word_transliteration": "haqqin"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0648\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "and their saying", "word_transliteration": "waqawlihim"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0646\u064e\u0627", "word_translation": "Our hearts", "word_transliteration": "qulubuna"}, {"word_arabic_uthmani": "\u063a\u064f\u0644\u06e1\u0641\u064f\u06e2\u06da", "word_translation": "(are) wrapped", "word_transliteration": "ghul'fun"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0637\u064e\u0628\u064e\u0639\u064e", "word_translation": "(has) set a seal", "word_transliteration": "taba'a"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "on their (hearts)", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0641\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1", "word_translation": "for their disbelief", "word_transliteration": "bikuf'rihim"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "so not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "they believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627", "word_translation": "a few", "word_transliteration": "qalilan"}]}