{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0647\u064f\u062f\u0657\u0649 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "And indeed it", "word_transliteration": "wa-innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u062f\u0657\u0649", "word_translation": "(is) surely a guidance", "word_transliteration": "lahudan"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e", "word_translation": "and a mercy", "word_transliteration": "warahmatun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "for the believers", "word_transliteration": "lil'mu'minina"}]}