{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0646 \u062c\u064e\u0646\u064e\u062d\u064f\u0648\u0627\u0652 \u0644\u0650\u0644\u0633\u0651\u064e\u0644\u06e1\u0645\u0650 \u0641\u064e\u0671\u062c\u06e1\u0646\u064e\u062d\u06e1 \u0644\u064e\u0647\u064e\u0627 \u0648\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0647\u064f\u0648\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062c\u064e\u0646\u064e\u062d\u064f\u0648\u0627\u0652", "word_translation": "they incline", "word_transliteration": "janahu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0633\u0651\u064e\u0644\u06e1\u0645\u0650", "word_translation": "to peace", "word_transliteration": "lilssalmi"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062c\u06e1\u0646\u064e\u062d\u06e1", "word_translation": "then you (also) incline", "word_transliteration": "fa-ij'nah"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064e\u0627", "word_translation": "to it", "word_transliteration": "laha"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1", "word_translation": "and put (your) trust", "word_transliteration": "watawakkal"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "in", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He"