{"ayahs": {"ayah_uthmani": "\u062b\u064e\u0627\u0646\u0650\u064a\u064e \u0639\u0650\u0637\u06e1\u0641\u0650\u0647\u0650\u06e6 \u0644\u0650\u064a\u064f\u0636\u0650\u0644\u0651\u064e \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0644\u064e\u0647\u064f\u06e5 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u062e\u0650\u0632\u06e1\u064a\u065e\u06d6 \u0648\u064e\u0646\u064f\u0630\u0650\u064a\u0642\u064f\u0647\u064f\u06e5 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u06e1\u062d\u064e\u0631\u0650\u064a\u0642\u0650"}, "words": [{"word_arabic_uthmani": "\u062b\u064e\u0627\u0646\u0650\u064a\u064e", "word_translation": "Twisting", "word_transliteration": "thaniya"}, {"word_arabic_uthmani": "\u0639\u0650\u0637\u06e1\u0641\u0650\u0647\u0650\u06e6", "word_translation": "his neck", "word_transliteration": "it'fihi"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0636\u0650\u0644\u0651\u064e", "word_translation": "to mislead", "word_transliteration": "liyudilla"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "For him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u062e\u0650\u0632\u06e1\u064a\u065e\u06d6", "word_translation": "(is) disgrace", "word_transliteration": "khiz'yun"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0630\u0650\u064a\u0642\u064f\u0647\u064f\u06e5", "word_translation": "and We will make him taste", "word_transliteration": "wanudhiquhu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "(the) punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0631\u0650\u064a\u0642\u0650", "word_translation": "(of) the Burning Fire", "word_transliteration": "al-hariqi"}]}