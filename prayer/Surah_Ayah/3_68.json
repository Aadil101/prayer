{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0623\u064e\u0648\u06e1\u0644\u064e\u0649 \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0628\u0650\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0644\u064e\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0647\u064f \u0648\u064e\u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u064f \u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0644\u0650\u064a\u0651\u064f \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u0644\u064e\u0649", "word_translation": "the best to claim relationship", "word_transliteration": "awla"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "(of) people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "with Ibrahim", "word_transliteration": "bi-ib'rahima"}, {"word_arabic_uthmani": "\u0644\u064e\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) those who", "word_transliteration": "lalladhina"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0647\u064f", "word_translation": "follow him", "word_transliteration": "ittaba'uhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "and this", "word_transliteration": "wahadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u064f", "word_translation": "[the] Prophet", "word_transliteration": "al-nabiyu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "and those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652\u06d7", "word_translation": "believe[d]", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u0651\u064f", "word_translation": "(is) a Guardian", "word_transliteration": "waliyyu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(of) the believers", "word_transliteration": "al-mu'minina"}]}