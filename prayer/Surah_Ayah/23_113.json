{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u064e\u0628\u0650\u062b\u06e1\u0646\u064e\u0627 \u064a\u064e\u0648\u06e1\u0645\u064b\u0627 \u0623\u064e\u0648\u06e1 \u0628\u064e\u0639\u06e1\u0636\u064e \u064a\u064e\u0648\u06e1\u0645\u0656 \u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u0650 \u0671\u0644\u06e1\u0639\u064e\u0627\u0653\u062f\u0651\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They will say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0644\u064e\u0628\u0650\u062b\u06e1\u0646\u064e\u0627", "word_translation": "We remained", "word_transliteration": "labith'na"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064b\u0627", "word_translation": "a day", "word_transliteration": "yawman"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u0636\u064e", "word_translation": "a part", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0656", "word_translation": "(of) a day", "word_transliteration": "yawmin"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u0650", "word_translation": "but ask", "word_transliteration": "fasali"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0627\u0653\u062f\u0651\u0650\u064a\u0646\u064e", "word_translation": "those who keep count", "word_transliteration": "al-'adina"}]}