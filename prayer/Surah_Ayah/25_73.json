{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u0630\u064f\u0643\u0651\u0650\u0631\u064f\u0648\u0627\u0652 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0644\u064e\u0645\u06e1 \u064a\u064e\u062e\u0650\u0631\u0651\u064f\u0648\u0627\u0652 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u0635\u064f\u0645\u0651\u0657\u0627 \u0648\u064e\u0639\u064f\u0645\u06e1\u064a\u064e\u0627\u0646\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0630\u064f\u0643\u0651\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "they are reminded", "word_transliteration": "dhukkiru"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "of (the) Verses", "word_transliteration": "biayati"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "(do) not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u0650\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "fall", "word_transliteration": "yakhirru"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "upon them", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0635\u064f\u0645\u0651\u0657\u0627", "word_translation": "deaf", "word_transliteration": "summan"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064f\u0645\u06e1\u064a\u064e\u0627\u0646\u0657\u0627", "word_translation": "and blind", "word_transliteration": "wa'um'yanan"}]}