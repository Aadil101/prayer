{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0623\u064f\u0646\u0632\u0650\u0644\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0645\u064e\u0644\u064e\u0643\u065e\u06d6 \u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0645\u064e\u0644\u064e\u0643\u0657\u0627 \u0644\u0651\u064e\u0642\u064f\u0636\u0650\u064a\u064e \u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0631\u064f \u062b\u064f\u0645\u0651\u064e \u0644\u064e\u0627 \u064a\u064f\u0646\u0638\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they said", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "Why has not been", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u0632\u0650\u0644\u064e", "word_translation": "sent down", "word_transliteration": "unzila"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0645\u064e\u0644\u064e\u0643\u065e\u06d6", "word_translation": "an Angel", "word_transliteration": "malakun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We (had) sent down", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0645\u064e\u0644\u064e\u0643\u0657\u0627", "word_translation": "an Angel", "word_transliteration": "malakan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0642\u064f\u0636\u0650\u064a\u064e", "word_translation": "surely (would) have been decided", "word_transliteration": "laqudiya"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0631\u064f", "word_translation": "the matter", "word_transliteration": "al-amru"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "no", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0638\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "respite would have been granted to them", "word_transliteration": "yunzaruna"}]}