{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0629\u065e \u0644\u0651\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064f \u0646\u064e\u0633\u06e1\u0644\u064e\u062e\u064f \u0645\u0650\u0646\u06e1\u0647\u064f \u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e \u0641\u064e\u0625\u0650\u0630\u064e\u0627 \u0647\u064f\u0645 \u0645\u0651\u064f\u0638\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0629\u065e", "word_translation": "And a Sign", "word_transliteration": "waayatun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u064f", "word_translation": "for them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064f", "word_translation": "(is) the night", "word_transliteration": "al-laylu"}, {"word_arabic_uthmani": "\u0646\u064e\u0633\u06e1\u0644\u064e\u062e\u064f", "word_translation": "We withdraw", "word_transliteration": "naslakhu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from it", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e", "word_translation": "the day", "word_transliteration": "al-nahara"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "Then behold!", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0647\u064f\u0645", "word_translation": "They", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0638\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(are) those in darkness", "word_transliteration": "muz'limuna"}]}