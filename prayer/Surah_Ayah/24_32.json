{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0643\u0650\u062d\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0623\u064e\u064a\u064e\u0670\u0645\u064e\u0649\u0670 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e \u0645\u0650\u0646\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0625\u0650\u0645\u064e\u0627\u0653\u0626\u0650\u0643\u064f\u0645\u06e1\u06da \u0625\u0650\u0646 \u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0641\u064f\u0642\u064e\u0631\u064e\u0627\u0653\u0621\u064e \u064a\u064f\u063a\u06e1\u0646\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0670\u0633\u0650\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0643\u0650\u062d\u064f\u0648\u0627\u0652", "word_translation": "And marry", "word_transliteration": "wa-ankihu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u064a\u064e\u0670\u0645\u064e\u0649\u0670", "word_translation": "the single", "word_transliteration": "al-ayama"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "and the righteous", "word_transliteration": "wal-salihina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "among", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your male slaves", "word_transliteration": "ibadikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0645\u064e\u0627\u0653\u0626\u0650\u0643\u064f\u0645\u06e1\u06da", "word_translation": "and your female slaves", "word_transliteration": "wa-imaikum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "they are", "word_transliteration": "yakunu"}, {"word_arabic_uthmani": "\u0641\u064f\u0642\u064e\u0631\u064e\u0627\u0653\u0621\u064e", "word_translation": "poor", "word_transliteration": "fuqaraa"}, {"word_arabic_uthmani": "\u064a\u064f\u063a\u06e1\u0646\u0650\u0647\u0650\u0645\u064f", "word_translation": "Allah will enrich them", "word_transliteration": "yugh'nihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah will enrich them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7", "word_translation": "His Bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u0633\u0650\u0639\u064c", "word_translation": "(is) All-Encompassing", "word_transliteration": "wasi'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}