{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0631\u064e\u0621\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0632\u064e\u0627\u0628\u064e \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0647\u064e\u0670\u0630\u064e\u0627 \u0645\u064e\u0627 \u0648\u064e\u0639\u064e\u062f\u064e\u0646\u064e\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5 \u0648\u064e\u0635\u064e\u062f\u064e\u0642\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5\u06da \u0648\u064e\u0645\u064e\u0627 \u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u0651\u064e\u0627\u0653 \u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627 \u0648\u064e\u062a\u064e\u0633\u06e1\u0644\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u0631\u064e\u0621\u064e\u0627", "word_translation": "saw", "word_transliteration": "raa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0632\u064e\u0627\u0628\u064e", "word_translation": "the confederates", "word_transliteration": "al-ahzaba"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e\u0646\u064e\u0627", "word_translation": "Allah promised us", "word_transliteration": "wa'adana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah promised us", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5", "word_translation": "and His Messenger", "word_transliteration": "warasuluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u062f\u064e\u0642\u064e", "word_translation": "and Allah spoke the truth", "word_transliteration": "wasadaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "and Allah spoke the truth", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5\u06da", "word_translation": "and His Messenger", "word_transliteration": "warasuluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1", "word_translation": "it increased them", "word_transliteration": "zadahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627\u0653", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627", "word_translation": "(in) faith", "word_transliteration": "imanan"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0633\u06e1\u0644\u0650\u064a\u0645\u0657\u0627", "word_translation": "and submission", "word_transliteration": "watasliman"}]}