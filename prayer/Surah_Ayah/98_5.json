{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064f\u0645\u0650\u0631\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u0651\u064e\u0627 \u0644\u0650\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e \u0644\u064e\u0647\u064f \u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e \u062d\u064f\u0646\u064e\u0641\u064e\u0627\u0653\u0621\u064e \u0648\u064e\u064a\u064f\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e\u06da \u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062f\u0650\u064a\u0646\u064f \u0671\u0644\u06e1\u0642\u064e\u064a\u0651\u0650\u0645\u064e\u0629\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0650\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "they were commanded", "word_transliteration": "umiru"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0627\u0652", "word_translation": "to worship", "word_transliteration": "liya'budu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e", "word_translation": "(being) sincere", "word_transliteration": "mukh'lisina"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f", "word_translation": "to Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e", "word_translation": "(in) the religion", "word_transliteration": "al-dina"}, {"word_arabic_uthmani": "\u062d\u064f\u0646\u064e\u0641\u064e\u0627\u0653\u0621\u064e", "word_translation": "upright", "word_transliteration": "hunafaa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652", "word_translation": "and to establish", "word_transliteration": "wayuqimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0627\u0652", "word_translation": "and to give", "word_transliteration": "wayu'tu"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e\u06da", "word_translation": "the Zakah", "word_transliteration": "al-zakata"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And that", "word_transliteration": "wadhalika"}, {"word_arabic_uthmani": "\u062f\u0650\u064a\u0646\u064f", "word_translation": "(is the) religion", "word_transliteration": "dinu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u064a\u0651\u0650\u0645\u064e\u0629\u0650", "word_translation": "the correct", "word_transliteration": "al-qayimati"}]}