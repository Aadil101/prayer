{"ayahs": {"ayah_uthmani": "\u0644\u0650\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e \u0645\u064e\u0627 \u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u0631\u06e1\u0632\u064f\u0642\u064f \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0628\u0650\u063a\u064e\u064a\u06e1\u0631\u0650 \u062d\u0650\u0633\u064e\u0627\u0628\u0656"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0647\u064f\u0645\u064f", "word_translation": "That Allah may reward them", "word_transliteration": "liyajziyahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "That Allah may reward them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e", "word_translation": "(with the) best", "word_transliteration": "ahsana"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(of) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "they did", "word_transliteration": "amilu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064e\u0647\u064f\u0645", "word_translation": "and increase them", "word_transliteration": "wayazidahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7", "word_translation": "His Bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u0632\u064f\u0642\u064f", "word_translation": "provides", "word_transliteration": "yarzuqu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0628\u0650\u063a\u064e\u064a\u06e1\u0631\u0650", "word_translation": "without", "word_transliteration": "bighayri"}, {"word_arabic_uthmani": "\u062d\u0650\u0633\u064e\u0627\u0628\u0656", "word_translation": "measure", "word_transliteration": "hisabin"}]}