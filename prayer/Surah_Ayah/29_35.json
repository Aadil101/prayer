{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f \u062a\u0651\u064e\u0631\u064e\u0643\u06e1\u0646\u064e\u0627 \u0645\u0650\u0646\u06e1\u0647\u064e\u0627\u0653 \u0621\u064e\u0627\u064a\u064e\u0629\u064e\u06e2 \u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0657 \u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f", "word_translation": "And verily", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u062a\u0651\u064e\u0631\u064e\u0643\u06e1\u0646\u064e\u0627", "word_translation": "We have left", "word_transliteration": "tarakna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627\u0653", "word_translation": "about it", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0629\u064e\u06e2", "word_translation": "a sign", "word_transliteration": "ayatan"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0657", "word_translation": "(as) evidence", "word_transliteration": "bayyinatan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "who use reason", "word_transliteration": "ya'qiluna"}]}