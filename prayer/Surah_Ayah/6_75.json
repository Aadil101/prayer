{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064f\u0631\u0650\u064a\u0653 \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0645\u064e\u0644\u064e\u0643\u064f\u0648\u062a\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0648\u064e\u0644\u0650\u064a\u064e\u0643\u064f\u0648\u0646\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0648\u0642\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And thus", "word_transliteration": "wakadhalika"}, {"word_arabic_uthmani": "\u0646\u064f\u0631\u0650\u064a\u0653", "word_translation": "We show(ed)", "word_transliteration": "nuri"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u0645\u064e\u0644\u064e\u0643\u064f\u0648\u062a\u064e", "word_translation": "the kingdom", "word_transliteration": "malakuta"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "(of) the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "so that he would be", "word_transliteration": "waliyakuna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0648\u0642\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the ones who are certain", "word_transliteration": "al-muqinina"}]}