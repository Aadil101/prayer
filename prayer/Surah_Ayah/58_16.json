{"ayahs": {"ayah_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645\u06e1 \u062c\u064f\u0646\u0651\u064e\u0629\u0657 \u0641\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u065e \u0645\u0651\u064f\u0647\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064f\u0648\u0653\u0627\u0652", "word_translation": "They have taken", "word_transliteration": "ittakhadhu"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their oaths", "word_transliteration": "aymanahum"}, {"word_arabic_uthmani": "\u062c\u064f\u0646\u0651\u064e\u0629\u0657", "word_translation": "(as) a cover", "word_transliteration": "junnatan"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652", "word_translation": "so they hinder", "word_transliteration": "fasaddu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way of Allah", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(the) way of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so for them", "word_transliteration": "falahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u065e", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0647\u0650\u064a\u0646\u065e", "word_translation": "humi