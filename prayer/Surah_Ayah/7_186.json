{"ayahs": {"ayah_uthmani": "\u0645\u064e\u0646 \u064a\u064f\u0636\u06e1\u0644\u0650\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0641\u064e\u0644\u064e\u0627 \u0647\u064e\u0627\u062f\u0650\u064a\u064e \u0644\u064e\u0647\u064f\u06e5\u06da \u0648\u064e\u064a\u064e\u0630\u064e\u0631\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064f\u0636\u06e1\u0644\u0650\u0644\u0650", "word_translation": "(is) let go astray", "word_transliteration": "yud'lili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "then (there is) no", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u0647\u064e\u0627\u062f\u0650\u064a\u064e", "word_translation": "guide", "word_transliteration": "hadiya"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u06da", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0630\u064e\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "And He leaves them", "word_transliteration": "wayadharuhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their transgression", "word_transliteration": "tugh'yanihim"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e", "word_translation": "wandering blindly", "word_transliteration": "ya'mahuna"}]}