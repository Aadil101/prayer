{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f\u0646\u064e\u0627 \u0648\u064e\u0644\u0651\u064e\u0649\u0670 \u0645\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u0657\u0627 \u0643\u064e\u0623\u064e\u0646 \u0644\u0651\u064e\u0645\u06e1 \u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u06e1\u0647\u064e\u0627 \u0643\u064e\u0623\u064e\u0646\u0651\u064e \u0641\u0650\u064a\u0653 \u0623\u064f\u0630\u064f\u0646\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u0642\u06e1\u0631\u0657\u0627\u06d6 \u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f \u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u064d \u0623\u064e\u0644\u0650\u064a\u0645\u064d"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670", "word_translation": "are recited", "word_transliteration": "tut'la"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f\u0646\u064e\u0627", "word_translation": "Our Verses", "word_transliteration": "ayatuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0651\u064e\u0649\u0670", "word_translation": "he turns away", "word_transliteration": "walla"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u0657\u0627", "word_translation": "arrogantly", "word_transliteration": "mus'takbiran"}, {"word_arabic_uthmani": "\u0643\u064e\u0623\u064e\u0646", "word_translation": "as if", "word_transliteration": "ka-an"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u06e1\u0647\u064e\u0627", "word_translation": "he (had) heard them", "word_transliteration": "yasma'ha"}, {"word_arabic_uthmani": "\u0643\u064e\u0623\u064e\u0646\u0651\u064e", "word_translation": "as if", "word_transliteration": "ka-anna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064f\u0630\u064f\u0646\u064e\u064a\u06e1\u0647\u0650", "word_translation": "his ears", "word_transliteration": "udhunayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u06e1\u0631\u0657\u0627\u06d6", "word_translation": "(is) deafness", "word_transliteration": "waqran"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f", "word_translation": "So give him tidings", "word_transliteration": "fabashir'hu"}, {"word_arabic_uthmani": "\u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u064d", "word_translation": "of a punishment", "word_transliteration": "bi'adhabin"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u064d", "word_translation": "painful", "word_transliteration": "alimin"}]}