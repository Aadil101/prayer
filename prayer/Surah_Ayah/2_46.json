{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0638\u064f\u0646\u0651\u064f\u0648\u0646\u064e \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645 \u0645\u0651\u064f\u0644\u064e\u0670\u0642\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0638\u064f\u0646\u0651\u064f\u0648\u0646\u064e", "word_translation": "believe", "word_transliteration": "yazunnuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645", "word_translation": "that they", "word_transliteration": "annahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0644\u064e\u0670\u0642\u064f\u0648\u0627\u0652", "word_translation": "will meet", "word_transliteration": "mulaqu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and that they", "word_transliteration": "wa-annahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "will return", "word_transliteration": "raji'una"}]}