{"ayahs": {"ayah_uthmani": "\u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u064f \u0639\u064e\u062f\u06e1\u0646\u0656 \u064a\u064e\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0646\u064e\u0647\u064e\u0627 \u0648\u064e\u0645\u064e\u0646 \u0635\u064e\u0644\u064e\u062d\u064e \u0645\u0650\u0646\u06e1 \u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0626\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0640\u0670\u062a\u0650\u0647\u0650\u0645\u06e1\u06d6 \u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u064a\u064e\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0646\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645 \u0645\u0651\u0650\u0646 \u0643\u064f\u0644\u0651\u0650 \u0628\u064e\u0627\u0628\u0656"}, "words": [{"word_arabic_uthmani": "\u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u064f", "word_translation": "Gardens", "word_transliteration": "jannatu"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u06e1\u0646\u0656", "word_translation": "of Eden", "word_transliteration": "adnin"}, {"word_arabic_uthmani": "\u064a\u064e\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0646\u064e\u0647\u064e\u0627", "word_translation": "they will enter them", "word_transliteration": "yadkhulunaha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0635\u064e\u0644\u064e\u062d\u064e", "word_translation": "(were) righteous", "word_transliteration": "salaha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "among", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0626\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their fathers", "word_transliteration": "abaihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0647\u0650\u0645\u06e1", "word_translation": "and their spouses", "word_transliteration": "wa-azwajihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0640\u0670\u062a\u0650\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "and their offsprings", "word_transliteration": "wadhurriyyatihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "And the Angels", "word_transliteration": "wal-malaikatu"}, {"word_arabic_uthmani": "\u064a\u064e\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "will enter", "word_transliteration": "yadkhuluna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0628\u064e\u0627\u0628\u0656", "word_translation": "gate", "word_transliteration": "babin"}]}