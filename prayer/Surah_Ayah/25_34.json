{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0648\u064f\u062c\u064f\u0648\u0647\u0650\u0647\u0650\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0634\u064e\u0631\u0651\u065e \u0645\u0651\u064e\u0643\u064e\u0627\u0646\u0657\u0627 \u0648\u064e\u0623\u064e\u0636\u064e\u0644\u0651\u064f \u0633\u064e\u0628\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "will be gathered", "word_transliteration": "yuh'sharuna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their faces", "word_transliteration": "wujuhihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0634\u064e\u0631\u0651\u065e", "word_translation": "(are the) worst", "word_transliteration": "sharrun"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0643\u064e\u0627\u0646\u0657\u0627", "word_translation": "(in) position", "word_transliteration": "makanan"}, {"word_arabic_uthmani": "\u0