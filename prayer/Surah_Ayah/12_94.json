{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0641\u064e\u0635\u064e\u0644\u064e\u062a\u0650 \u0671\u0644\u06e1\u0639\u0650\u064a\u0631\u064f \u0642\u064e\u0627\u0644\u064e \u0623\u064e\u0628\u064f\u0648\u0647\u064f\u0645\u06e1 \u0625\u0650\u0646\u0651\u0650\u064a \u0644\u064e\u0623\u064e\u062c\u0650\u062f\u064f \u0631\u0650\u064a\u062d\u064e \u064a\u064f\u0648\u0633\u064f\u0641\u064e\u06d6 \u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0623\u064e\u0646 \u062a\u064f\u0641\u064e\u0646\u0651\u0650\u062f\u064f\u0648\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u064e\u0644\u064e\u062a\u0650", "word_translation": "departed", "word_transliteration": "fasalati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u064a\u0631\u064f", "word_translation": "the caravan", "word_transliteration": "al-'iru"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "their father said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "their father said", "word_transliteration": "abuhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a", "word_translation": "Indeed, I", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u062c\u0650\u062f\u064f", "word_translation": "[I] find", "word_transliteration": "la-ajidu"}, {"word_arabic_uthmani": "\u0631\u0650\u064a\u062d\u064e", "word_translation": "(the) smell", "word_transliteration": "riha"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0633\u064f\u0641\u064e\u06d6", "word_translation": "(of) Yusuf", "word_transliteration": "yusufa"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "if not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u062a\u064f\u0641\u064e\u0646\u0651\u0650\u062f\u064f\u0648\u0646\u0650", "word_translation": "you think me weakened in mind", "word_transliteration": "tufanniduni"}]}