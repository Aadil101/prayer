{"ayahs": {"ayah_uthmani": "\u06de\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u062c\u06e1\u0645\u064e\u0639\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0631\u0651\u064f\u0633\u064f\u0644\u064e \u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0645\u064e\u0627\u0630\u064e\u0627\u0653 \u0623\u064f\u062c\u0650\u0628\u06e1\u062a\u064f\u0645\u06e1\u06d6 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u064e\u0627 \u0639\u0650\u0644\u06e1\u0645\u064e \u0644\u064e\u0646\u064e\u0627\u0653\u06d6 \u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0623\u064e\u0646\u062a\u064e \u0639\u064e\u0644\u0651\u064e\u0640\u0670\u0645\u064f \u0671\u0644\u06e1\u063a\u064f\u064a\u064f\u0648\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u06de\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u06e1\u0645\u064e\u0639\u064f", "word_translation": "will (be) gathered", "word_transliteration": "yajma'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064f\u0633\u064f\u0644\u064e", "word_translation": "the Messengers", "word_transliteration": "al-rusula"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "and He will say", "word_transliteration": "fayaqulu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0630\u064e\u0627\u0653", "word_translation": "What", "word_transliteration": "madha"}, {"word_arabic_uthmani": "\u0623\u064f\u062c\u0650\u0628\u06e1\u062a\u064f\u0645\u06e1\u06d6", "word_translation": "was (the) response you received", "word_transliteration": "ujib'tum"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(There is) no", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u0639\u0650\u0644\u06e1\u0645\u064e", "word_translation": "knowledge", "word_transliteration": "il'ma"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627\u0653\u06d6", "word_translation": "for us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "Indeed You", "word_transliteration": "innaka"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064e", "word_translation": "You", "word_transliteration": "anta"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0651\u064e\u0640\u0670\u0645\u064f", "word_translation": "(are the) Knower", "word_transliteration": "allamu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064f\u064a\u064f\u0648\u0628\u0650", "word_translation": "(of) the unseen", "word_transliteration": "al-ghuyubi"}]}