{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0627 \u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0645\u065e \u064a\u064e\u0641\u06e1\u0631\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062d\u06e1\u0644\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "And they swear", "word_transliteration": "wayahlifuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "surely (are) of you", "word_transliteration": "laminkum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "while not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0647\u064f\u0645", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "(are) of you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "but they", "word_transliteration": "walakinnahum"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u065e", "word_translation": "(are) a people", "word_transliteration": "qawmun"}, {"word_arabic_uthmani": "\u064a\u064e\u0641\u06e1\u0631\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "(who) are afraid", "word_transliteration": "yafraquna"}]}