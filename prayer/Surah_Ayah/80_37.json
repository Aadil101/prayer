{"ayahs": {"ayah_uthmani": "\u0644\u0650\u0643\u064f\u0644\u0651\u0650 \u0671\u0645\u06e1\u0631\u0650\u064a\u0655\u0656 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0634\u064e\u0623\u06e1\u0646\u065e \u064a\u064f\u063a\u06e1\u0646\u0650\u064a\u0647\u0650"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u0643\u064f\u0644\u0651\u0650", "word_translation": "For every", "word_transliteration": "likulli"}, {"word_arabic_uthmani": "\u0671\u0645\u06e1\u0631\u0650\u064a\u0655\u0656", "word_translation": "man", "word_transliteration": "im'ri-in"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "among them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0634\u064e\u0623\u06e1\u0646\u065e", "word_translation": "(will be) a matter", "word_transliteration": "shanun"}, {"word_arabic_uthmani": "\u064a\u064f\u063a\u06e1\u0646\u0650\u064a\u0647\u0650", "word_translation": "occupying him", "word_transliteration": "yugh'nihi"}]}