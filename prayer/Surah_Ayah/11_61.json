{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0644\u064e\u0649\u0670 \u062b\u064e\u0645\u064f\u0648\u062f\u064e \u0623\u064e\u062e\u064e\u0627\u0647\u064f\u0645\u06e1 \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627\u06da \u0642\u064e\u0627\u0644\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064e\u0627 \u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u0625\u0650\u0644\u064e\u0670\u0647\u064d \u063a\u064e\u064a\u06e1\u0631\u064f\u0647\u064f\u06e5\u06d6 \u0647\u064f\u0648\u064e \u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u06e1\u0645\u064e\u0631\u064e\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0647\u064f \u062b\u064f\u0645\u0651\u064e \u062a\u064f\u0648\u0628\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u06da \u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u0650\u064a \u0642\u064e\u0631\u0650\u064a\u0628\u065e \u0645\u0651\u064f\u062c\u0650\u064a\u0628\u065e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "And to", "word_transliteration": "wa-ila"}, {"word_arabic_uthmani": "\u062b\u064e\u0645\u064f\u0648\u062f\u064e", "word_translation": "Thamud", "word_transliteration": "thamuda"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0627\u0647\u064f\u0645\u06e1", "word_translation": "(We sent) their brother", "word_transliteration": "akhahum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627\u06da", "word_translation": "Salih", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0627\u0652", "word_translation": "Worship", "word_transliteration": "u'budu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645", "word_translation": "you have", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "any", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u064d", "word_translation": "god", "word_transliteration": "ilahin"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u06e1\u0631\u064f\u0647\u064f\u06e5\u06d6", "word_translation": "other than Him", "word_transliteration": "ghayruhu"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645", "word_translation": "produced you", "word_transliteration": "ansha-akum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u06e1\u0645\u064e\u0631\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and settled you", "word_transliteration": "wa-is'ta'marakum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0647\u064f", "word_translation": "So ask forgiveness of Him", "word_transliteration": "fa-is'taghfiruhu"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u0628\u064f\u0648\u0653\u0627\u0652", "word_translation": "turn in repentance", "word_transliteration": "tubu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u06da", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u0650\u064a\u0628\u065e", "word_translation": "(is) near", "word_transliteration": "qaribun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u062c\u0650\u064a\u0628\u065e", "word_translation": "All-Responsive", "word_transliteration": "mujibun"}]}