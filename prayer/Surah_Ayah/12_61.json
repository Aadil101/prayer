{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0633\u064e\u0646\u064f\u0631\u064e\u0670\u0648\u0650\u062f\u064f \u0639\u064e\u0646\u06e1\u0647\u064f \u0623\u064e\u0628\u064e\u0627\u0647\u064f \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u0641\u064e\u0670\u0639\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0633\u064e\u0646\u064f\u0631\u064e\u0670\u0648\u0650\u062f\u064f", "word_translation": "We will try to get permission", "word_transliteration": "sanurawidu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f", "word_translation": "for him", "word_transliteration": "anhu"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u064e\u0627\u0647\u064f", "word_translation": "(from) his father", "word_transliteration": "abahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "and indeed we", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0641\u064e\u0670\u0639\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "surely will do", "word_transliteration": "lafa'iluna"}]}