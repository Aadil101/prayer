{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0646\u0634\u064e\u0642\u0651\u064e\u062a\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f \u0641\u064e\u0647\u0650\u064a\u064e \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0648\u064e\u0627\u0647\u0650\u064a\u064e\u0629\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0646\u0634\u064e\u0642\u0651\u064e\u062a\u0650", "word_translation": "And will split", "word_transliteration": "wa-inshaqqati"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "the heaven", "word_transliteration": "al-samau"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u0650\u064a\u064e", "word_translation": "so it", "word_transliteration": "fahiya"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "(is on) that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0648\u064e\u0627\u0647\u0650\u064a\u064e\u0629\u065e", "word_translation": "frail", "word_transliteration": "wahiyatun"}]}