{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u0650 \u0671\u0639\u06e1\u062a\u064e\u0632\u064e\u0644\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0627 \u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0641\u064e\u0623\u06e1\u0648\u064f\u06e5\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u0643\u064e\u0647\u06e1\u0641\u0650 \u064a\u064e\u0646\u0634\u064f\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6 \u0648\u064e\u064a\u064f\u0647\u064e\u064a\u0651\u0650\u0626\u06e1 \u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u0623\u064e\u0645\u06e1\u0631\u0650\u0643\u064f\u0645 \u0645\u0651\u0650\u0631\u06e1\u0641\u064e\u0642\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u0650", "word_translation": "And when", "word_transliteration": "wa-idhi"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u062a\u064e\u0632\u064e\u0644\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "you withdraw from them", "word_transliteration": "i'tazaltumuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e", "word_translation": "they worship", "word_transliteration": "ya'buduna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u06e1\u0648\u064f\u06e5\u0653\u0627\u0652", "word_translation": "then retreat", "word_transliteration": "fawu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0647\u06e1\u0641\u0650", "word_translation": "the cave", "word_transliteration": "al-kahfi"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u0634\u064f\u0631\u06e1", "word_translation": "Will spread", "word_transliteration": "yanshur"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645", "word_translation": "your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His Mercy", "word_transliteration": "rahmatihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0647\u064e\u064a\u0651\u0650\u0626\u06e1", "word_translation": "and will facilitate", "word_transliteration": "wayuhayyi"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "[from]", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0650\u0643\u064f\u0645", "word_translation": "your affair", "word_transliteration": "amrikum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0631\u06e1\u0641\u064e\u0642\u0657\u0627", "word_translation": "(in) ease", "word_transliteration": "mir'faqan"}]}