{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644 \u0644\u0651\u064e\u0648\u06e1 \u0634\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064e\u0627 \u062a\u064e\u0644\u064e\u0648\u06e1\u062a\u064f\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0627\u0653 \u0623\u064e\u062f\u06e1\u0631\u064e\u0649\u0670\u0643\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6\u06d6 \u0641\u064e\u0642\u064e\u062f\u06e1 \u0644\u064e\u0628\u0650\u062b\u06e1\u062a\u064f \u0641\u0650\u064a\u0643\u064f\u0645\u06e1 \u0639\u064f\u0645\u064f\u0631\u0657\u0627 \u0645\u0651\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u06da \u0623\u064e\u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "(had) willed", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064e\u0644\u064e\u0648\u06e1\u062a\u064f\u0647\u064f\u06e5", "word_translation": "I (would) have recited it", "word_transliteration": "talawtuhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627\u0653", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u06e1\u0631\u064e\u0649\u0670\u0643\u064f\u0645", "word_translation": "He (would) have made it known to you", "word_transliteration": "adrakum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "He (would) have made it known to you", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0644\u064e\u0628\u0650\u062b\u06e1\u062a\u064f", "word_translation": "I have stayed", "word_transliteration": "labith'tu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "fikum"}, {"word_arabic_uthmani": "\u0639\u064f\u0645\u064f\u0631\u0657\u0627", "word_translation": "a lifetime", "word_transliteration": "umuran"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "before it", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u06da", "word_translation": "before it", "word_transliteration": "qablihi"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0644\u064e\u0627", "word_translation": "Then will not", "word_transliteration": "afala"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "you use reason", "word_transliteration": "ta'qiluna"}]}