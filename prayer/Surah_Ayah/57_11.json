{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0646 \u0630\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u0642\u06e1\u0631\u0650\u0636\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0642\u064e\u0631\u06e1\u0636\u064b\u0627 \u062d\u064e\u0633\u064e\u0646\u0657\u0627 \u0641\u064e\u064a\u064f\u0636\u064e\u0670\u0639\u0650\u0641\u064e\u0647\u064f\u06e5 \u0644\u064e\u0647\u064f\u06e5 \u0648\u064e\u0644\u064e\u0647\u064f\u06e5\u0653 \u0623\u064e\u062c\u06e1\u0631\u065e \u0643\u064e\u0631\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "Who (is)", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0630\u064e\u0627", "word_translation": "the one who", "word_transliteration": "dha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "the one who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0642\u06e1\u0631\u0650\u0636\u064f", "word_translation": "will loan", "word_transliteration": "yuq'ridu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "(to) Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u06e1\u0636\u064b\u0627", "word_translation": "a loan", "word_transliteration": "qardan"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u064e\u0646\u0657\u0627", "word_translation": "goodly", "word_transliteration": "hasanan"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064f\u0636\u064e\u0670\u0639\u0650\u0641\u064e\u0647\u064f\u06e5", "word_translation": "so He will multiply it", "word_transliteration": "fayuda'ifahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "and for him", "word_transliteration": "walahu"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u065e", "word_translation": "(is) a reward", "word_transliteration": "ajrun"}, {"word_arabic_uthmani": "\u0643\u064e\u0631\u0650\u064a\u0645\u065e", "word_translation": "noble", "word_transliteration": "karimun"}]}