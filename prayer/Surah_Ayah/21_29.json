{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0642\u064f\u0644\u06e1 \u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0625\u0650\u0646\u0651\u0650\u064a\u0653 \u0625\u0650\u0644\u064e\u0670\u0647\u065e \u0645\u0651\u0650\u0646 \u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6 \u0641\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064e\u062c\u06e1\u0632\u0650\u064a\u0647\u0650 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e\u06da \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0646\u064e\u062c\u06e1\u0632\u0650\u064a \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0644\u06e1", "word_translation": "says", "word_transliteration": "yaqul"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "of them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a\u0653", "word_translation": "Indeed, I am", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u065e", "word_translation": "a god", "word_transliteration": "ilahun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "besides Him", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6", "word_translation": "besides Him", "word_transliteration": "dunihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Then that", "word_transliteration": "fadhalika"}, {"word_arabic_uthmani": "\u0646\u064e\u062c\u06e1\u0632\u0650\u064a\u0647\u0650", "word_translation": "We will recompense", "word_transliteration": "najzihi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u