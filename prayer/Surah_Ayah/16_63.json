{"ayahs": {"ayah_uthmani": "\u062a\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u0649\u0670\u0653 \u0623\u064f\u0645\u064e\u0645\u0656 \u0645\u0651\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e \u0641\u064e\u0632\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0647\u064f\u0648\u064e \u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0623\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u062a\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "By Allah", "word_transliteration": "tal-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "certainly", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We have sent", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670\u0653", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u064e\u0645\u0656", "word_translation": "nations", "word_transliteration": "umamin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "before you", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e", "word_translation": "before you", "word_transliteration": "qablika"}, {"word_arabic_uthmani": "\u0641\u064e\u0632\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "but made fair-seeming", "word_transliteration": "fazayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'malahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0648\u064e", "word_translation": "So he", "word_transliteration": "fahuwa"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u0651\u064f\u0647\u064f\u0645\u064f", "word_translation": "(is) their ally", "word_transliteration": "waliyyuhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and for them", "word_transliteration": "walahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "painful", "word_transliteration": "alimun"}]}