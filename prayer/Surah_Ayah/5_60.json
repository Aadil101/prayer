{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0647\u064e\u0644\u06e1 \u0623\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0643\u064f\u0645 \u0628\u0650\u0634\u064e\u0631\u0651\u0656 \u0645\u0651\u0650\u0646 \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0645\u064e\u062b\u064f\u0648\u0628\u064e\u0629\u064b \u0639\u0650\u0646\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0645\u064e\u0646 \u0644\u0651\u064e\u0639\u064e\u0646\u064e\u0647\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u063a\u064e\u0636\u0650\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u064e \u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0642\u0650\u0631\u064e\u062f\u064e\u0629\u064e \u0648\u064e\u0671\u0644\u06e1\u062e\u064e\u0646\u064e\u0627\u0632\u0650\u064a\u0631\u064e \u0648\u064e\u0639\u064e\u0628\u064e\u062f\u064e \u0671\u0644\u0637\u0651\u064e\u0640\u0670\u063a\u064f\u0648\u062a\u064e\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0634\u064e\u0631\u0651\u065e \u0645\u0651\u064e\u0643\u064e\u0627\u0646\u0657\u0627 \u0648\u064e\u0623\u064e\u0636\u064e\u0644\u0651\u064f \u0639\u064e\u0646 \u0633\u064e\u0648\u064e\u0627\u0653\u0621\u0650 \u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0647\u064e\u0644\u06e1", "word_translation": "Shall", "word_transliteration": "hal"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0643\u064f\u0645", "word_translation": "I inform you", "word_transliteration": "unabbi-ukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0634\u064e\u0631\u0651\u0656", "word_translation": "(of) worse", "word_transliteration": "bisharrin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "than", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u064f\u0648\u0628\u064e\u0629\u064b", "word_translation": "(as) recompense", "word_transliteration": "mathubatan"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "from", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0639\u064e\u0646\u064e\u0647\u064f", "word_translation": "has (been) cursed", "word_transliteration": "la'anahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u063a\u064e\u0636\u0650\u0628\u064e", "word_translation": "and He became angry", "word_transliteration": "waghadiba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "with him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "and made", "word_transliteration": "waja'ala"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u064f", "word_translation": "of them", "word_transliteration": "min'humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u0631\u064e\u062f\u064e\u0629\u064e", "word_translation": "[the] apes", "word_transliteration": "al-qiradata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u062e\u064e\u0646\u064e\u0627\u0632\u0650\u064a\u0631\u064e", "word_translation": "and [the] swines", "word_transliteration": "wal-khanazira"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0628\u064e\u062f\u06