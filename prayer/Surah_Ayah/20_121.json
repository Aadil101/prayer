{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0623\u064e\u0643\u064e\u0644\u064e\u0627 \u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u0641\u064e\u0628\u064e\u062f\u064e\u062a\u06e1 \u0644\u064e\u0647\u064f\u0645\u064e\u0627 \u0633\u064e\u0648\u06e1\u0621\u064e\u0670\u062a\u064f\u0647\u064f\u0645\u064e\u0627 \u0648\u064e\u0637\u064e\u0641\u0650\u0642\u064e\u0627 \u064a\u064e\u062e\u06e1\u0635\u0650\u0641\u064e\u0627\u0646\u0650 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064e\u0627 \u0645\u0650\u0646 \u0648\u064e\u0631\u064e\u0642\u0650 \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650\u06da \u0648\u064e\u0639\u064e\u0635\u064e\u0649\u0670\u0653 \u0621\u064e\u0627\u062f\u064e\u0645\u064f \u0631\u064e\u0628\u0651\u064e\u0647\u064f\u06e5 \u0641\u064e\u063a\u064e\u0648\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0643\u064e\u0644\u064e\u0627", "word_translation": "Then they both ate", "word_transliteration": "fa-akala"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "from it", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u064e\u062f\u064e\u062a\u06e1", "word_translation": "so became apparent", "word_transliteration": "fabadat"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064e\u0627", "word_translation": "to them", "word_transliteration": "lahuma"}, {"word_arabic_uthmani": "\u0633\u064e\u0648\u06e1\u0621\u064e\u0670\u062a\u064f\u0647\u064f\u0645\u064e\u0627", "word_translation": "their shame", "word_transliteration": "sawatuhuma"}, {"word_arabic_uthmani": "\u0648\u064e\u0637\u064e\u0641\u0650\u0642\u064e\u0627", "word_translation": "and they began", "word_transliteration": "watafiqa"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u06e1\u0635\u0650\u0641\u064e\u0627\u0646\u0650", "word_translation": "(to) fasten", "word_transliteration": "yakhsifani"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064e\u0627", "word_translation": "on themselves", "word_transliteration": "alayhima"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0642\u0650", "word_translation": "(the) leaves", "word_transliteration": "waraqi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650\u06da", "word_translation": "(of) Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0635\u064e\u0649\u0670\u0653", "word_translation": "And Adam disobeyed", "word_transliteration": "wa'asa"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062f\u064e\u0645\u064f", "word_translation": "And Adam disobeyed", "word_transliteration": "adamu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0647\u064f\u06e5", "word_translation": "his Lord", "word_transliteration": "rabbahu"}, {"word_arabic_uthmani": "\u0641\u064e\u063a\u064e\u0648\u064e\u0649\u0670", "word_translation": "and erred", "word_transliteration": "faghawa"}]}