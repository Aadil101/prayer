{"ayahs": {"ayah_uthmani": "\u062a\u0650\u0644\u06e1\u0643\u064e \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0646\u064e\u062a\u06e1\u0644\u064f\u0648\u0647\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0644\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "These", "word_transliteration": "til'ka"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f", "word_translation": "(are the) Verses", "word_transliteration": "ayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u06e1\u0644\u064f\u0648\u0647\u064e\u0627", "word_translation": "We recite them", "word_transliteration": "natluha"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da", "word_translation": "in [the] truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "And indeed you", "word_transliteration": "wa-innaka"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0650\u0646\u064e", "word_translation": "(are) surely of", "word_transliteration": "lamina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0631\u06e1\u0633\u064e\u0644\u0650\u064a\u0646\u064e", "word_translation": "the Messengers", "word_transliteration": "al-mur'salina"}]}