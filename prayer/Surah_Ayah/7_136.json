{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0646\u062a\u064e\u0642\u064e\u0645\u06e1\u0646\u064e\u0627 \u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0641\u064e\u0623\u064e\u063a\u06e1\u0631\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u06e1\u064a\u064e\u0645\u0651\u0650 \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0627\u0652 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627 \u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064e\u0627 \u063a\u064e\u0670\u0641\u0650\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0646\u062a\u064e\u0642\u064e\u0645\u06e1\u0646\u064e\u0627", "word_translation": "So We took retribution", "word_transliteration": "fa-intaqamna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u063a\u06e1\u0631\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and We drowned them", "word_transliteration": "fa-aghraqnahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0645\u0651\u0650", "word_translation": "the sea", "word_transliteration": "al-yami"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "because they", "word_transliteration": "bi-annahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "denied", "word_transliteration": "kadhabu"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "Our Signs", "word_transliteration": "biayatina"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "and they were", "word_transliteration": "wakanu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064e\u0627", "word_translation": "to them", "word_transliteration": "anha"}, {"word_arabic_uthmani": "\u063a\u064e\u0670\u0641\u0650\u0644\u0650\u064a\u0646\u064e", "word_translation": "heedless", "word_transliteration": "ghafilina"}]}