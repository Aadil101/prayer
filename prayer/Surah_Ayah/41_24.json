{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646 \u064a\u064e\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652 \u0641\u064e\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f \u0645\u064e\u062b\u06e1\u0648\u0657\u0649 \u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0625\u0650\u0646 \u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062a\u0650\u0628\u064f\u0648\u0627\u0652 \u0641\u064e\u0645\u064e\u0627 \u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0639\u06e1\u062a\u064e\u0628\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "Then if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "they endure", "word_transliteration": "yasbiru"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f", "word_translation": "the Fire", "word_transliteration": "fal-naru"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u06e1\u0648\u0657\u0649", "word_translation": "(is) an abode", "word_transliteration": "mathwan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "and if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062a\u0650\u0628\u064f\u0648\u0627\u0652", "word_translation": "they ask for favor", "word_transliteration": "yasta'tibu"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0627", "word_translation": "then not", "word_transliteration": "fama"}, {"word_arabic_uthmani": "\u0647\u064f\u0645", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "(will be) of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0639\u06e1\u062a\u064e\u0628\u0650\u064a\u0646\u064e", "word_translation": "those who receive favor", "word_transliteration": "al-mu'tabina"}]}