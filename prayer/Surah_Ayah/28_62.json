{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064f\u0646\u064e\u0627\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0623\u064e\u064a\u06e1\u0646\u064e \u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0621\u0650\u064a\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0632\u06e1\u0639\u064f\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "And (the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u064e\u0627\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "He will call them", "word_transliteration": "yunadihim"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "and say", "word_transliteration": "fayaqulu"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0646\u064e", "word_translation": "Where", "word_transliteration": "ayna"}, {"word_arabic_uthmani": "\u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0621\u0650\u064a\u064e", "word_translation": "(are) My partners", "word_transliteration": "shurakaiya"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0632\u06e1\u0639\u064f\u0645\u064f\u0648\u0646\u064e", "word_translation": "claim", "word_transliteration": "taz'umuna"}]}