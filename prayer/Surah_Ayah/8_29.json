{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646 \u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u064a\u064e\u062c\u06e1\u0639\u064e\u0644 \u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u0657\u0627 \u0648\u064e\u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u06e1 \u0639\u064e\u0646\u0643\u064f\u0645\u06e1 \u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0630\u064f\u0648 \u0671\u0644\u06e1\u0641\u064e\u0636\u06e1\u0644\u0650 \u0671\u0644\u06e1\u0639\u064e\u0638\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "you fear", "word_transliteration": "tattaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u06e1\u0639\u064e\u0644", "word_translation": "He will grant", "word_transliteration": "yaj'al"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u0657\u0627", "word_translation": "a criterion", "word_transliteration": "fur'qanan"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u06e1", "word_translation": "and will remove", "word_transliteration": "wayukaffir"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0643\u064f\u0645\u06e1", "word_translation": "from you", "word_transliteration": "ankum"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your evil deeds", "word_transliteration": "sayyiatikum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "and forgive", "word_transliteration": "wayaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1\u06d7", "word_translation": "you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0630\u064f\u0648", "word_translation": "(is) the Possessor", "word_transliteration": "dhu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0636\u06e1\u0644\u0650", "word_translation": "(of) Bounty", "word_transliteration": "al-fadli"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0638\u0650\u064a\u0645\u0650", "word_translation": "the Great", "word_transliteration": "al-'azimi"}]}