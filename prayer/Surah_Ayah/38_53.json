{"ayahs": {"ayah_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627 \u0645\u064e\u0627 \u062a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e \u0644\u0650\u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "you are promised", "word_transliteration": "tu'aduna"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "for (the) Day", "word_transliteration": "liyawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650", "word_translation": "(of) Account", "word_transliteration": "al-hisabi"}]}