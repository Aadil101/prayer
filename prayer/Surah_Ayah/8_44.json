{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u064a\u064f\u0631\u0650\u064a\u0643\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1 \u0625\u0650\u0630\u0650 \u0671\u0644\u06e1\u062a\u064e\u0642\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0641\u0650\u064a\u0653 \u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u0650\u0643\u064f\u0645\u06e1 \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627 \u0648\u064e\u064a\u064f\u0642\u064e\u0644\u0651\u0650\u0644\u064f\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a\u0653 \u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u0650\u0647\u0650\u0645\u06e1 \u0644\u0650\u064a\u064e\u0642\u06e1\u0636\u0650\u064a\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u0645\u06e1\u0631\u0657\u0627 \u0643\u064e\u0627\u0646\u064e \u0645\u064e\u0641\u06e1\u0639\u064f\u0648\u0644\u0657\u0627\u06d7 \u0648\u064e\u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f \u0671\u0644\u06e1\u0623\u064f\u0645\u064f\u0648\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u0643\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "He showed them to you", "word_transliteration": "yurikumuhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u0650", "word_translation": "when", "word_transliteration": "idhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062a\u064e\u0642\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you met", "word_transliteration": "al-taqaytum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your eyes", "word_transliteration": "a'yunikum"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627", "word_translation": "(as) few", "word_transliteration": "qalilan"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0642\u064e\u0644\u0651\u0650\u0644\u064f\u0643\u064f\u0645\u06e1", "word_translation": "and He made you (appear) as few", "word_transliteration": "wayuqallilukum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their eyes", "word_transliteration": "a'yunihim"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0642\u06e1\u0636\u0650\u064a\u064e", "word_translation": "that might accomplish", "word_transliteration": "liyaqdiya"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah might accomplish", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0657\u0627", "word_translation": "a matter", "word_transliteration": "amran"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "(that) was", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0645\u064e\u0641\u06e1\u0639\u064f\u0648\u0644\u0657\u0627\u06d7", "word_translation": "(already) destined", "word_transliteration": "maf'ulan"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0644\u064e\u0649", "word_translation": "And to", "word_transliteration": "wa-ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f", "word_translation": "return", "word_transliteration": "tur'ja'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064f\u0645\u064f\u0648\u0631\u064f", "word_translation": "(all) the matters", "word_transliteration": "al-umuru"}]}