{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0642\u064e\u0627\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u0642\u064e\u062f\u06e1 \u062c\u064e\u0645\u064e\u0639\u064f\u0648\u0627\u0652 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0641\u064e\u0671\u062e\u06e1\u0634\u064e\u0648\u06e1\u0647\u064f\u0645\u06e1 \u0641\u064e\u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1 \u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627 \u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u062d\u064e\u0633\u06e1\u0628\u064f\u0646\u064e\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0646\u0650\u0639\u06e1\u0645\u064e \u0671\u0644\u06e1\u0648\u064e\u0643\u0650\u064a\u0644\u064f"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "[the people]", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "the people", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "(have) certainly", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "gathered", "word_transliteration": "jama'u"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "against you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062e\u06e1\u0634\u064e\u0648\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "so fear them", "word_transliteration": "fa-ikh'shawhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1", "word_translation": "But it increased them", "word_transliteration": "fazadahum"}, {"word_arabic_uthmani": "\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627", "word_translation": "(in the) faith", "word_transliteration": "imanan"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "and they said", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u06e1\u0628\u064f\u0646\u064e\u0627", "word_translation": "Sufficient for us", "word_transliteration": "hasbuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(is) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "and (He is the) best", "word_transliteration": "wani'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0643\u0650\u064a\u0644\u064f", "word_translation": "[the] Disposer of affairs", "word_transliteration": "al-wakilu"}]}