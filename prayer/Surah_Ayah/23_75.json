{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0644\u064e\u0648\u06e1 \u0631\u064e\u062d\u0650\u0645\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0648\u064e\u0643\u064e\u0634\u064e\u0641\u06e1\u0646\u064e\u0627 \u0645\u064e\u0627 \u0628\u0650\u0647\u0650\u0645 \u0645\u0651\u0650\u0646 \u0636\u064f\u0631\u0651\u0656 \u0644\u0651\u064e\u0644\u064e\u062c\u0651\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u0650\u0645\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We had mercy on them", "word_transliteration": "rahim'nahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0634\u064e\u0641\u06e1\u0646\u064e\u0627", "word_translation": "and We removed", "word_transliteration": "wakashafna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u0645", "word_translation": "(was) on them", "word_transliteration": "bihim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0636\u064f\u0631\u0651\u0656", "word_translation": "(the) hardship", "word_transliteration": "durrin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0644\u064e\u062c\u0651\u064f\u0648\u0627\u0652", "word_translation": "surely they would persist", "word_transliteration": "lalajju"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their transgression", "word_transliteration": "tugh'yanihim"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e", "word_translation": "wandering blindly", "word_transliteration": "ya'mahuna"}]}