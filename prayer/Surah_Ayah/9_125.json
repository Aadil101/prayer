{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645 \u0645\u0651\u064e\u0631\u064e\u0636\u065e \u0641\u064e\u0632\u064e\u0627\u062f\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1 \u0631\u0650\u062c\u06e1\u0633\u064b\u0627 \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u0650\u062c\u06e1\u0633\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0645\u064e\u0627\u062a\u064f\u0648\u0627\u0652 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "But as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645", "word_translation": "their hearts", "word_transliteration": "qulubihim"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0631\u064e\u0636\u065e", "word_translation": "(is) a disease", "word_transliteration": "maradun"}, {"word_arabic_uthmani": "\u0641\u064e\u0632\u064e\u0627\u062f\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "(it) increases them", "word_transliteration": "fazadathum"}, {"word_arabic_uthmani": "\u0631\u0650\u062c\u06e1\u0633\u064b\u0627", "word_translation": "(in) evil", "word_transliteration": "rij'san"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u0650\u062c\u06e1\u0633\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their evil", "word_transliteration": "rij'sihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u062a\u064f\u0648\u0627\u0652", "word_translation": "And they die", "word_transliteration": "wamatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(are) disbelievers", "word_transliteration": "kafiruna"}]}