{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u06e1\u0645\u064e\u0644\u0650\u0643\u064f \u0671\u0626\u06e1\u062a\u064f\u0648\u0646\u0650\u064a \u0628\u0650\u0647\u0650\u06e6\u0653 \u0623\u064e\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u0650\u0635\u06e1\u0647\u064f \u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u064a\u06d6 \u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0643\u064e\u0644\u0651\u064e\u0645\u064e\u0647\u064f\u06e5 \u0642\u064e\u0627\u0644\u064e \u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e \u0644\u064e\u062f\u064e\u064a\u06e1\u0646\u064e\u0627 \u0645\u064e\u0643\u0650\u064a\u0646\u064c \u0623\u064e\u0645\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u0650\u0643\u064f", "word_translation": "the king", "word_transliteration": "al-maliku"}, {"word_arabic_uthmani": "\u0671\u0626\u06e1\u062a\u064f\u0648\u0646\u0650\u064a", "word_translation": "Bring him to me", "word_transliteration": "i'tuni"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653", "word_translation": "Bring him to me", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u0650\u0635\u06e1\u0647\u064f", "word_translation": "I will select him", "word_transliteration": "astakhlis'hu"}, {"word_arabic_uthmani": "\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u064a\u06d6", "word_translation": "for myself", "word_transliteration": "linafsi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "Then when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0643\u064e\u0644\u0651\u064e\u0645\u064e\u0647\u064f\u06e5", "word_translation": "he spoke to him", "word_transliteration": "kallamahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "he said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "Indeed, you", "word_transliteration": "innaka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(are) today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u0644\u064e\u062f\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "with us", "word_transliteration": "ladayna"}, {"word_arabic_uthmani": "\u0645\u064e\u0643\u0650\u064a\u0646\u064c", "word_translation": "firmly established", "word_transliteration": "makinun"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u0650\u064a\u0646\u065e", "word_translation": "(and) trusted", "word_transliteration": "aminun"}]}