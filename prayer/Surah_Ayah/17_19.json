{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0631\u064e\u0627\u062f\u064e \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064e \u0648\u064e\u0633\u064e\u0639\u064e\u0649\u0670 \u0644\u064e\u0647\u064e\u0627 \u0633\u064e\u0639\u06e1\u064a\u064e\u0647\u064e\u0627 \u0648\u064e\u0647\u064f\u0648\u064e \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u065e \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0643\u064e\u0627\u0646\u064e \u0633\u064e\u0639\u06e1\u064a\u064f\u0647\u064f\u0645 \u0645\u0651\u064e\u0634\u06e1\u0643\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0627\u062f\u064e", "word_translation": "desires", "word_transliteration": "arada"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064e", "word_translation": "the Hereafter", "word_transliteration": "al-akhirata"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0639\u064e\u0649\u0670", "word_translation": "and exerts", "word_transliteration": "wasa'a"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064e\u0627", "word_translation": "for it", "word_transliteration": "laha"}, {"word_arabic_uthmani": "\u0633\u064e\u0639\u06e1\u064a\u064e\u0647\u064e\u0627", "word_translation": "the effort", "word_transliteration": "sa'yaha"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "while he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u065e", "word_translation": "(is) a believer", "word_transliteration": "mu'minun"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "[are]", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0633\u064e\u0639\u06e1\u064a\u064f\u0647\u064f\u0645", "word_translation": "their effort", "word_transliteration": "sa'yuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0634\u06e1\u0643\u064f\u0648\u0631\u0657\u0627", "word_translation": "(is) appreciated", "word_transliteration": "mashkuran"}]}