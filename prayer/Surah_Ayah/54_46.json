{"ayahs": {"ayah_uthmani": "\u0628\u064e\u0644\u0650 \u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f \u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f \u0623\u064e\u062f\u06e1\u0647\u064e\u0649\u0670 \u0648\u064e\u0623\u064e\u0645\u064e\u0631\u0651\u064f"}, "words": [{"word_arabic_uthmani": "\u0628\u064e\u0644\u0650", "word_translation": "Nay", "word_transliteration": "bali"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f", "word_translation": "the Hour", "word_transliteration": "al-sa'atu"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "(is) their promised time", "word_transliteration": "maw'iduhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f", "word_translation": "and the Hour", "word_transliteration": "wal-sa'atu"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u06e1\u0647\u064e\u0649\u0670", "word_translation": "(will be) more grievous", "word_transliteration": "adha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u064e\u0631\u0651\u064f", "word_translation": "and more bitter", "word_transliteration": "wa-amarru"}]}