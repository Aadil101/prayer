{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0647\u064f\u0645\u06e1 \u0644\u0650\u0623\u064e\u0645\u064e\u0670\u0646\u064e\u0670\u062a\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0639\u064e\u0647\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1 \u0631\u064e\u0670\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "[they]", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0644\u0650\u0623\u064e\u0645\u064e\u0670\u0646\u064e\u0670\u062a\u0650\u0647\u0650\u0645\u06e1", "word_translation": "of their trusts", "word_transliteration": "li-amanatihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0647\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1", "word_translation": "and their promise(s)", "word_transliteration": "wa'ahdihim"}, {"word_arabic_uthmani": "\u0631\u064e\u0670\u0639\u064f\u0648\u0646\u064e", "word_translation": "(are) observers", "word_transliteration": "ra'una"}]}