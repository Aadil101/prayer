{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627 \u0645\u064e\u0646 \u0631\u0651\u064e\u062d\u0650\u0645\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064e\u06da \u0648\u064e\u0644\u0650\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062e\u064e\u0644\u064e\u0642\u064e\u0647\u064f\u0645\u06e1\u06d7 \u0648\u064e\u062a\u064e\u0645\u0651\u064e\u062a\u06e1 \u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064f \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0644\u064e\u0623\u064e\u0645\u06e1\u0644\u064e\u0623\u064e\u0646\u0651\u064e \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u062c\u0650\u0646\u0651\u064e\u0629\u0650 \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "Except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(on) whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u0645\u064e", "word_translation": "your Lord has bestowed Mercy", "word_transliteration": "rahima"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064e\u06da", "word_translation": "your Lord has bestowed Mercy", "word_transliteration": "rabbuka"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "and for that", "word_transliteration": "walidhalika"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e\u0647\u064f\u0645\u06e1\u06d7", "word_translation": "He created them", "word_transliteration": "khalaqahum"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0645\u0651\u064e\u062a\u06e1", "word_translation": "And will be fulfilled", "word_transliteration": "watammat"}, {"word_arabic_uthmani": "\u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064f", "word_translation": "(the) Word of your Lord", "word_transliteration": "kalimatu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(the) Word of your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u0645\u06e1\u0644\u064e\u0623\u064e\u0646\u0651\u064e", "word_translation": "Surely I will fill", "word_transliteration": "la-amla-anna"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "with", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u0650\u0646\u0651\u064e\u0629\u0650", "word_translation": "the Jinn", "word_transliteration": "al-jinati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "and the men", "word_transliteration": "wal-nasi"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "all together", "word_transliteration": "ajma'ina"}]}