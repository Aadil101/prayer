{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u062a\u064e\u0642\u064e\u0627\u0633\u064e\u0645\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0646\u064f\u0628\u064e\u064a\u0651\u0650\u062a\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5 \u062b\u064f\u0645\u0651\u064e \u0644\u064e\u0646\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e \u0644\u0650\u0648\u064e\u0644\u0650\u064a\u0651\u0650\u0647\u0650\u06e6 \u0645\u064e\u0627 \u0634\u064e\u0647\u0650\u062f\u06e1\u0646\u064e\u0627 \u0645\u064e\u0647\u06e1\u0644\u0650\u0643\u064e \u0623\u064e\u0647\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u0635\u064e\u0670\u062f\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064e\u0627\u0633\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "Swear to each other", "word_transliteration": "taqasamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u0628\u064e\u064a\u0651\u0650\u062a\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "surely we will attack him by night", "word_transliteration": "lanubayyitannahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and his family", "word_transliteration": "wa-ahlahu"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e", "word_translation": "we will surely say", "word_transliteration": "lanaqulanna"}, {"word_arabic_uthmani": "\u0644\u0650\u0648\u064e\u0644\u0650\u064a\u0651\u0650\u0647\u0650\u06e6", "word_translation": "to his heir", "word_transliteration": "liwaliyyihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "Not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u062f\u06e1\u0646\u064e\u0627", "word_translation": "we witnessed", "word_transliteration": "shahid'na"}, {"word_arabic_uthmani": "\u0645\u064e\u0647\u06e1\u0644\u0650\u0643\u064e", "word_translation": "(the) destruction", "word_transliteration": "mahlika"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "(of) his family", "word_transliteration": "ahlihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "and indeed we", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0635\u064e\u0670\u062f\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) surely truthful.\"", "word_transliteration": "lasadiquna"}]}