{"ayahs": {"ayah_uthmani": "\u0671\u0635\u06e1\u0644\u064e\u0648\u06e1\u0647\u064e\u0627 \u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0648\u06e1 \u0644\u064e\u0627 \u062a\u064e\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652 \u0633\u064e\u0648\u064e\u0627\u0653\u0621\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06d6 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u062a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e \u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0635\u06e1\u0644\u064e\u0648\u06e1\u0647\u064e\u0627", "word_translation": "Burn in it", "word_transliteration": "is'lawha"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "then be patient", "word_transliteration": "fa-is'biru"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0635\u06e1\u0628\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "be patient", "word_transliteration": "tasbiru"}, {"word_arabic_uthmani": "\u0633\u064e\u0648\u064e\u0627\u0653\u0621\u064c", "word_translation": "(it is) same", "word_transliteration": "sawaon"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "for you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u062a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e", "word_translation": "you are being recompensed", "word_transliteration": "tuj'zawna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(for) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ta'maluna"}]}