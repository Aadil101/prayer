{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0631\u06e1\u062c\u064f\u0641\u064f \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f \u0648\u064e\u0671\u0644\u06e1\u062c\u0650\u0628\u064e\u0627\u0644\u064f \u0648\u064e\u0643\u064e\u0627\u0646\u064e\u062a\u0650 \u0671\u0644\u06e1\u062c\u0650\u0628\u064e\u0627\u0644\u064f \u0643\u064e\u062b\u0650\u064a\u0628\u0657\u0627 \u0645\u0651\u064e\u0647\u0650\u064a\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "On (the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u06e1\u062c\u064f\u0641\u064f", "word_translation": "will quake", "word_transliteration": "tarjufu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f", "word_translation": "the earth", "word_transliteration": "al-ardu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u062c\u0650\u0628\u064e\u0627\u0644\u064f", "word_translation": "and the mountains", "word_transliteration": "wal-jibalu"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e\u062a\u0650", "word_translation": "and will become", "word_transliteration": "wakanati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u0650\u0628\u064e\u0627\u0644\u064f", "word_translation": "the mountains", "word_transliteration": "al-jibalu"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0628\u0657\u0627", "word_translation": "a heap of sand", "word_transliteration": "kathiban"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0647\u0650\u064a\u0644\u064b\u0627", "word_translation": "pouring down", "word_transliteration": "mahilan"}]}