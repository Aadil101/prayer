{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e \u0639\u064e\u0646 \u0630\u0650\u0643\u06e1\u0631\u0650\u064a \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0644\u064e\u0647\u064f\u06e5 \u0645\u064e\u0639\u0650\u064a\u0634\u064e\u0629\u0657 \u0636\u064e\u0646\u0643\u0657\u0627 \u0648\u064e\u0646\u064e\u062d\u06e1\u0634\u064f\u0631\u064f\u0647\u064f\u06e5 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0623\u064e\u0639\u06e1\u0645\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e", "word_translation": "turns away", "word_transliteration": "a'rada"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0630\u0650\u0643\u06e1\u0631\u0650\u064a", "word_translation": "My remembrance", "word_transliteration": "dhik'ri"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u0650\u064a\u0634\u064e\u0629\u0657", "word_translation": "(is) a life", "word_transliteration": "ma'ishatan"}, {"word_arabic_uthmani": "\u0636\u064e\u0646\u0643\u0657\u0627", "word_translation": "straitened", "word_transliteration": "dankan"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u062d\u06e1\u0634\u064f\u0631\u064f\u0647\u064f\u06e5", "word_translation": "and We will gather him", "word_transliteration": "wanahshuruhu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0649\u0670", "word_translation": "blind", "word_transliteration": "a'ma"}]}