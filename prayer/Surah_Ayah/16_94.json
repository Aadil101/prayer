{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0643\u064f\u0645\u06e1 \u062f\u064e\u062e\u064e\u0644\u064e\u06e2\u0627 \u0628\u064e\u064a\u06e1\u0646\u064e\u0643\u064f\u0645\u06e1 \u0641\u064e\u062a\u064e\u0632\u0650\u0644\u0651\u064e \u0642\u064e\u062f\u064e\u0645\u064f\u06e2 \u0628\u064e\u0639\u06e1\u062f\u064e \u062b\u064f\u0628\u064f\u0648\u062a\u0650\u0647\u064e\u0627 \u0648\u064e\u062a\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0633\u0651\u064f\u0648\u0653\u0621\u064e \u0628\u0650\u0645\u064e\u0627 \u0635\u064e\u062f\u064e\u062f\u062a\u0651\u064f\u0645\u06e1 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0639\u064e\u0638\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0653\u0627\u0652", "word_translation": "take", "word_transliteration": "tattakhidhu"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your oaths", "word_transliteration": "aymanakum"}, {"word_arabic_uthmani": "\u062f\u064e\u062e\u064e\u0644\u064e\u06e2\u0627", "word_translation": "(as) a deception", "word_transliteration": "dakhalan"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0643\u064f\u0645\u06e1", "word_translation": "between you", "word_transliteration": "baynakum"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0632\u0650\u0644\u0651\u064e", "word_translation": "lest should slip", "word_transliteration": "fatazilla"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u064e\u0645\u064f\u06e2", "word_translation": "a foot", "word_transliteration": "qadamun"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u062b\u064f\u0628\u064f\u0648\u062a\u0650\u0647\u064e\u0627", "word_translation": "it is firmly planted", "word_transliteration": "thubutiha"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "and you would taste", "word_transliteration": "watadhuqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u0648\u0653\u0621\u064e", "word_translation": "the evil", "word_transliteration": "al-sua"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u062f\u062a\u0651\u064f\u0645\u06e1", "word_translation": "you hindered", "word_transliteration": "sadadttum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and for you", "word_transliteration": "walakum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u065e", "word_translation": "great", "word_transliteration": "azimun"}]}