{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0634\u06e1\u0647\u064e\u062f\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0623\u064e\u0644\u06e1\u0633\u0650\u0646\u064e\u062a\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u064f\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(On a) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0634\u06e1\u0647\u064e\u062f\u064f", "word_translation": "will bear witness", "word_transliteration": "tashhadu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "against them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u06e1\u0633\u0650\u0646\u064e\u062a\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their tongues", "word_transliteration": "alsinatuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "and their hands", "word_transliteration": "wa-aydihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0631\u06e1\u062c\u064f\u0644\u064f\u0647\u064f\u0645", "word_translation": "and their feet", "word_transliteration": "wa-arjuluhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "(to) do", "word_transliteration": "ya'maluna"}]}