{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0646\u064f\u0646\u064e\u062c\u0651\u0650\u064a \u0631\u064f\u0633\u064f\u0644\u064e\u0646\u064e\u0627 \u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652\u06da \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062d\u064e\u0642\u0651\u064b\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627 \u0646\u064f\u0646\u062c\u0650 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0646\u064f\u0646\u064e\u062c\u0651\u0650\u064a", "word_translation": "We will save", "word_transliteration": "nunajji"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064e\u0646\u064e\u0627", "word_translation": "Our Messengers", "word_transliteration": "rusulana"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "and those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652\u06da", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u064b\u0627", "word_translation": "(it is) an obligation", "word_transliteration": "haqqan"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "upon Us", "word_transliteration": "alayna"}, {"word_arabic_uthmani": "\u0646\u064f\u0646\u062c\u0650", "word_translation": "(that) We save", "word_transliteration": "nunji"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}]}