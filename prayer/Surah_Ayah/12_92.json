{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0644\u064e\u0627 \u062a\u064e\u062b\u06e1\u0631\u0650\u064a\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e\u06d6 \u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0643\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0647\u064f\u0648\u064e \u0623\u064e\u0631\u06e1\u062d\u064e\u0645\u064f \u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "No", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u062b\u06e1\u0631\u0650\u064a\u0628\u064e", "word_translation": "blame", "word_transliteration": "tathriba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u064f", "word_translation": "upon you", "word_transliteration": "alaykumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e\u06d6", "word_translation": "today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f", "word_translation": "Allah will forgive", "word_transliteration": "yaghfiru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah will forgive", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u062d\u064e\u0645\u064f", "word_translation": "(is) the Most Merciful", "word_transliteration": "arhamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0640\u0670\u062d\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) those who show mercy", "word_transliteration": "al-rahimina"}]}