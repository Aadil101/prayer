{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1 \u0638\u064e\u0646\u0651\u064f\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0638\u064e\u0646\u064e\u0646\u062a\u064f\u0645 \u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u0623\u064e\u0631\u06e1\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1 \u0641\u064e\u0623\u064e\u0635\u06e1\u0628\u064e\u062d\u06e1\u062a\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1", "word_translation": "And that", "word_transliteration": "wadhalikum"}, {"word_arabic_uthmani": "\u0638\u064e\u0646\u0651\u064f\u0643\u064f\u0645\u064f", "word_translation": "(was) your assumption", "word_transliteration": "zannukumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "which", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0638\u064e\u0646\u064e\u0646\u062a\u064f\u0645", "word_translation": "you assumed", "word_transliteration": "zanantum"}, {"word_arabic_uthmani": "\u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "about your Lord", "word_transliteration": "birabbikum"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1", "word_translation": "It has ruined you", "word_transliteration": "ardakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0635\u06e1\u0628\u064e\u062d\u06e1\u062a\u064f\u0645", "word_translation": "and you have become", "word_transliteration": "fa-asbahtum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the losers", "word_transliteration": "al-khasirina"}]}