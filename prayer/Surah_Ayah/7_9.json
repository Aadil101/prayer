{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u062e\u064e\u0641\u0651\u064e\u062a\u06e1 \u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627 \u064a\u064e\u0638\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And (for) those", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u062e\u064e\u0641\u0651\u064e\u062a\u06e1", "word_translation": "(will be) light", "word_transliteration": "khaffat"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5", "word_translation": "his scales", "word_transliteration": "mawazinuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "so those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(will be) the ones who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "lost", "word_transliteration": "khasiru"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645", "word_translation": "themselves", "word_transliteration": "anfusahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they were", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "to Our Verses", "word_transliteration": "biayatina"}, {"word_arabic_uthmani": "\u064a\u064e\u0638\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(doing) injustice", "word_transliteration": "yazlimuna"}]}