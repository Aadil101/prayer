{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0642\u064e\u0633\u064e\u0645\u065e \u0644\u0651\u064e\u0648\u06e1 \u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0639\u064e\u0638\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "And indeed it", "word_transliteration": "wa-innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u0633\u064e\u0645\u065e", "word_translation": "(is) surely an oath", "word_transliteration": "laqasamun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0648\u06e1", "word_translation": "if", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "you know", "word_transliteration": "ta'lamuna"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u064c", "word_translation": "great", "word_transliteration": "azimun"}]}