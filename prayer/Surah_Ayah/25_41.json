{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0631\u064e\u0623\u064e\u0648\u06e1\u0643\u064e \u0625\u0650\u0646 \u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0646\u064e\u0643\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0647\u064f\u0632\u064f\u0648\u064b\u0627 \u0623\u064e\u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0628\u064e\u0639\u064e\u062b\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0631\u064e\u0633\u064f\u0648\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0631\u064e\u0623\u064e\u0648\u06e1\u0643\u064e", "word_translation": "they see you", "word_transliteration": "ra-awka"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0646\u064e\u0643\u064e", "word_translation": "they take you", "word_transliteration": "yattakhidhunaka"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0647\u064f\u0632\u064f\u0648\u064b\u0627", "word_translation": "(in) mockery", "word_transliteration": "huzuwan"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "Is this", "word_transliteration": "ahadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "the one whom", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u064e\u062b\u064e", "word_translation": "Allah has sent", "word_transliteration": "ba'atha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah has sent", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\