{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0630\u064e\u0631\u06e1\u0646\u0650\u064a \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u0650\u064a\u0646\u064e \u0623\u064f\u0648\u0652\u0644\u0650\u064a \u0671\u0644\u0646\u0651\u064e\u0639\u06e1\u0645\u064e\u0629\u0650 \u0648\u064e\u0645\u064e\u0647\u0651\u0650\u0644\u06e1\u0647\u064f\u0645\u06e1 \u0642\u064e\u0644\u0650\u064a\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0631\u06e1\u0646\u0650\u064a", "word_translation": "And leave Me", "word_transliteration": "wadharni"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u0650\u064a\u0646\u064e", "word_translation": "and the deniers", "word_transliteration": "wal-mukadhibina"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u0650\u064a", "word_translation": "possessors", "word_transliteration": "uli"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0639\u06e1\u0645\u064e\u0629\u0650", "word_translation": "(of) the ease", "word_transliteration": "al-na'mati"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0647\u0651\u0650\u0644\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "and allow them respite", "word_transliteration": "wamahhil'hum"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u064b\u0627", "word_translation": "a little", "word_transliteration": "qalilan"}]}