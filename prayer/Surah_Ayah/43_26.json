{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0642\u064e\u0627\u0644\u064e \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064f \u0644\u0650\u0623\u064e\u0628\u0650\u064a\u0647\u0650 \u0648\u064e\u0642\u064e\u0648\u06e1\u0645\u0650\u0647\u0650\u06e6\u0653 \u0625\u0650\u0646\u0651\u064e\u0646\u0650\u064a \u0628\u064e\u0631\u064e\u0627\u0653\u0621\u065e \u0645\u0651\u0650\u0645\u0651\u064e\u0627 \u062a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "Ibrahim said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064f", "word_translation": "Ibrahim said", "word_transliteration": "ib'rahimu"}, {"word_arabic_uthmani": "\u0644\u0650\u0623\u064e\u0628\u0650\u064a\u0647\u0650", "word_translation": "to his father", "word_transliteration": "li-abihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0648\u06e1\u0645\u0650\u0647\u0650\u06e6\u0653", "word_translation": "and his people", "word_transliteration": "waqawmihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0646\u0650\u064a", "word_translation": "Indeed, I (am)", "word_transliteration": "innani"}, {"word_arabic_uthmani": "\u0628\u064e\u0631\u064e\u0627\u0653\u0621\u065e", "word_translation": "disassociated", "word_transliteration": "baraon"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0645\u0651\u064e\u0627", "word_translation": "from what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e", "word_translation": "you worship", "word_transliteration": "ta'buduna"}]}