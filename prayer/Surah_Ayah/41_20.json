{"ayahs": {"ayah_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670\u0653 \u0625\u0650\u0630\u064e\u0627 \u0645\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0647\u064e\u0627 \u0634\u064e\u0647\u0650\u062f\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0633\u064e\u0645\u06e1\u0639\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u062c\u064f\u0644\u064f\u0648\u062f\u064f\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670\u0653", "word_translation": "Until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "when", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0647\u064e\u0627", "word_translation": "they come to it", "word_transliteration": "jauha"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u062f\u064e", "word_translation": "(will) testify", "word_transliteration": "shahida"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "against them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u06e1\u0639\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their hearing", "word_transliteration": "sam'uhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "and their sight", "word_transliteration": "wa-absaruhum"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064f\u0644\u064f\u0648\u062f\u064f\u0647\u064f\u0645", "word_translation": "and their skins", "word_tr