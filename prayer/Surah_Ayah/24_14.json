{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u0641\u064e\u0636\u06e1\u0644\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u064f\u0647\u064f\u06e5 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0644\u064e\u0645\u064e\u0633\u0651\u064e\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a \u0645\u064e\u0627\u0653 \u0623\u064e\u0641\u064e\u0636\u06e1\u062a\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u0650 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0639\u064e\u0638\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "And if not", "word_transliteration": "walawla"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u064f", "word_translation": "(for the) Grace", "word_transliteration": "fadlu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u064f\u0647\u064f\u06e5", "word_translation": "and His Mercy", "word_transliteration": "warahmatuhu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "and the Hereafter", "word_transliteration": "wal-akhirati"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u0633\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "surely would have touched you", "word_transliteration": "lamassakum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0636\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you had rushed glibly", "word_transliteration": "afadtum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "concerning it", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u064c", "word_translation": "great", "word_transliteration": "azimun"}]}