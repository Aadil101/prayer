{"ayahs": {"ayah_uthmani": "\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u0631\u0650\u064a\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0628\u064e\u0631\u06e1\u0642\u064e \u062e\u064e\u0648\u06e1\u0641\u0657\u0627 \u0648\u064e\u0637\u064e\u0645\u064e\u0639\u0657\u0627 \u0648\u064e\u064a\u064f\u0646\u0634\u0650\u0626\u064f \u0671\u0644\u0633\u0651\u064e\u062d\u064e\u0627\u0628\u064e \u0671\u0644\u062b\u0651\u0650\u0642\u064e\u0627\u0644\u064e"}, "words": [{"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u0643\u064f\u0645\u064f", "word_translation": "shows you", "word_transliteration": "yurikumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0631\u06e1\u0642\u064e", "word_translation": "the lightning", "word_transliteration": "al-barqa"}, {"word_arabic_uthmani": "\u062e\u064e\u0648\u06e1\u0641\u0657\u0627", "word_translation": "a fear", "word_transliteration": "khawfan"}, {"word_arabic_uthmani": "\u0648\u064e\u0637\u064e\u0645\u064e\u0639\u0657\u0627", "word_translation": "and a hope", "word_transliteration": "watama'an"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0646\u0634\u0650\u0626\u064f", "word_translation": "and brings up", "word_transliteration": "wayunshi-u"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u062d\u064e\u0627\u0628\u064e", "word_translation": "the clouds", "word_transliteration": "al-sahaba"}, {"word_arabic_uthmani": "\u0671\u0644\u062b\u0651\u0650\u0642\u064e\u0627\u0644\u064e", "word_translation": "the heavy", "word_transliteration": "al-thiqala"}]}