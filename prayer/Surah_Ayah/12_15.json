{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0630\u064e\u0647\u064e\u0628\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646 \u064a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0647\u064f \u0641\u0650\u064a \u063a\u064e\u064a\u064e\u0670\u0628\u064e\u062a\u0650 \u0671\u0644\u06e1\u062c\u064f\u0628\u0651\u0650\u06da \u0648\u064e\u0623\u064e\u0648\u06e1\u062d\u064e\u064a\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0644\u064e\u062a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064e\u0646\u0651\u064e\u0647\u064f\u0645 \u0628\u0650\u0623\u064e\u0645\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0627 \u064a\u064e\u0634\u06e1\u0639\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "So when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0630\u064e\u0647\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "they took him", "word_transliteration": "dhahabu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "they took him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u064f\u0648\u0653\u0627\u0652", "word_translation": "and agreed", "word_transliteration": "wa-ajma'u"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0647\u064f", "word_translation": "they put him", "word_transliteration": "yaj'aluhu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u064e\u0670\u0628\u064e\u062a\u0650", "word_translation": "(the) bottom", "word_transliteration": "ghayabati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064f\u0628\u0651\u0650\u06da", "word_translation": "(of) the well", "word_transliteration": "al-jubi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0648\u06e1\u062d\u064e\u064a\u06e1\u0646\u064e\u0627\u0653", "word_translation": "But We inspired", "word_transliteration": "wa-awhayna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0644\u064e\u062a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064e\u0646\u0651\u064e\u0647\u064f\u0645", "word_translation": "Surely, you will inform them", "word_transliteration": "latunabbi-annahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0645\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1", "word_translation": "about this affair", "word_transliteration": "bi-amrihim"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "about this affair", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u06e1\u0639\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "perceive", "word_transliteration": "yash'uruna"}]}