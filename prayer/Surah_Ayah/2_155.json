{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0646\u064e\u0628\u06e1\u0644\u064f\u0648\u064e\u0646\u0651\u064e\u0643\u064f\u0645 \u0628\u0650\u0634\u064e\u064a\u06e1\u0621\u0656 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0648\u06e1\u0641\u0650 \u0648\u064e\u0671\u0644\u06e1\u062c\u064f\u0648\u0639\u0650 \u0648\u064e\u0646\u064e\u0642\u06e1\u0635\u0656 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0646\u0641\u064f\u0633\u0650 \u0648\u064e\u0671\u0644\u062b\u0651\u064e\u0645\u064e\u0631\u064e\u0670\u062a\u0650\u06d7 \u0648\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u0650 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0646\u064e\u0628\u06e1\u0644\u064f\u0648\u064e\u0646\u0651\u064e\u0643\u064f\u0645", "word_translation": "And surely We will test you", "word_transliteration": "walanabluwannakum"}, {"word_arabic_uthmani": "\u0628\u0650\u0634\u064e\u064a\u06e1\u0621\u0656", "word_translation": "with something", "word_transliteration": "bishayin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0648\u06e1\u0641\u0650", "word_translation": "[the] fear", "word_transliteration": "al-khawfi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u062c\u064f\u0648\u0639\u0650", "word_translation": "and [the] hunger", "word_transliteration": "wal-ju'i"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0642\u06e1\u0635\u0656", "word_translation": "and loss", "word_transliteration": "wanaqsin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650", "word_translati