{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0646\u06e1 \u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e \u0639\u064e\u0646\u06e1\u0647\u064f \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u064a\u064e\u062d\u06e1\u0645\u0650\u0644\u064f \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0648\u0650\u0632\u06e1\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0646\u06e1", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e", "word_translation": "turns away", "word_transliteration": "a'rada"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f", "word_translation": "from it", "word_transliteration": "anhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "then indeed he", "word_transliteration": "fa-innahu"}, {"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u0645\u0650\u0644\u064f", "word_translation": "will bear", "word_transliteration": "yahmilu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0648\u0650\u0632\u06e1\u0631\u064b\u0627", "word_translation": "a burden", "word_transliteration": "wiz'ran"}]}