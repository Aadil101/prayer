{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u0646\u064e\u0637\u06e1\u0648\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e \u0643\u064e\u0637\u064e\u064a\u0651\u0650 \u0671\u0644\u0633\u0651\u0650\u062c\u0650\u0644\u0651\u0650 \u0644\u0650\u0644\u06e1\u0643\u064f\u062a\u064f\u0628\u0650\u06da \u0643\u064e\u0645\u064e\u0627 \u0628\u064e\u062f\u064e\u0623\u06e1\u0646\u064e\u0627\u0653 \u0623\u064e\u0648\u0651\u064e\u0644\u064e \u062e\u064e\u0644\u06e1\u0642\u0656 \u0646\u0651\u064f\u0639\u0650\u064a\u062f\u064f\u0647\u064f\u06e5\u06da \u0648\u064e\u0639\u06e1\u062f\u064b\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0627 \u0643\u064f\u0646\u0651\u064e\u0627 \u0641\u064e\u0670\u0639\u0650\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0646\u064e\u0637\u06e1\u0648\u0650\u064a", "word_translation": "We will fold", "word_transliteration": "natwi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e", "word_translation": "the heaven", "word_transliteration": "al-samaa"}, {"word_arabic_uthmani": "\u0643\u064e\u0637\u064e\u064a\u0651\u0650", "word_translation": "like (the) folding", "word_transliteration": "katayyi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u0650\u062c\u0650\u0644\u0651\u0650", "word_translation": "(of) a scroll", "word_transliteration": "al-sijili"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064f\u062a\u064f\u0628\u0650\u06da", "word_translation": "for records", "word_transliteration": "lil'kutubi"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "As", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0628\u064e\u062f\u064e\u0623\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We began", "word_transliteration": "badana"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u0651\u064e\u0644\u064e", "word_translation": "(the) first", "word_transliteration": "awwala"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u06e1\u0642\u0656", "word_translation": "creation", "word_transliteration": "khalqin"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0639\u0650\u064a\u062f\u064f\u0647\u064f\u06e5\u06da", "word_translation": "We will repeat it", "word_transliteration": "nu'iduhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064b\u0627", "word_translation": "a promise", "word_transliteration": "wa'dan"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627\u0653\u06da", "word_translation": "upon Us", "word_transliteration": "alayna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "We are", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0641\u064e\u0670\u0639\u0650\u0644\u0650\u064a\u0646\u064e", "word_translation": "(the) Doers", "word_transliteration": "fa'ilina"}]}