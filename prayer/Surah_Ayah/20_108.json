{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u064e \u0671\u0644\u062f\u0651\u064e\u0627\u0639\u0650\u064a\u064e \u0644\u064e\u0627 \u0639\u0650\u0648\u064e\u062c\u064e \u0644\u064e\u0647\u064f\u06e5\u06d6 \u0648\u064e\u062e\u064e\u0634\u064e\u0639\u064e\u062a\u0650 \u0671\u0644\u06e1\u0623\u064e\u0635\u06e1\u0648\u064e\u0627\u062a\u064f \u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f \u0625\u0650\u0644\u0651\u064e\u0627 \u0647\u064e\u0645\u06e1\u0633\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "On that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "they will follow", "word_transliteration": "yattabi'una"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064e\u0627\u0639\u0650\u064a\u064e", "word_translation": "the caller", "word_transliteration": "al-da'iya"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "no", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u0639\u0650\u0648\u064e\u062c\u064e", "word_translation": "deviation", "word_transliteration": "iwaja"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u06d6", "word_translation": "from it", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u062e\u064e\u0634\u064e\u0639\u064e\u062a\u0650", "word_translation": "And (will be) humbled", "word_transliteration": "wakhasha'ati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0635\u06e1\u0648\u064e\u0627\u062a\u064f", "word_translation": "the voices", "word_transliteration": "al-aswatu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "for the Most Gracious", "word_transliteration": "lilrrahmani"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "so not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f", "word_translation": "you will hear", "word_transliteration": "tasma'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0647\u064e\u0645\u06e1\u0633\u0657\u0627", "word_translation": "a faint sound", "word_transliteration": "hamsan"}]}