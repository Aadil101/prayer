{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627\u0653 \u0623\u064f\u0644\u06e1\u0642\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u0645\u064e\u0643\u064e\u0627\u0646\u0657\u0627 \u0636\u064e\u064a\u0651\u0650\u0642\u0657\u0627 \u0645\u0651\u064f\u0642\u064e\u0631\u0651\u064e\u0646\u0650\u064a\u0646\u064e \u062f\u064e\u0639\u064e\u0648\u06e1\u0627\u0652 \u0647\u064f\u0646\u064e\u0627\u0644\u0650\u0643\u064e \u062b\u064f\u0628\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627\u0653", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0623\u064f\u0644\u06e1\u0642\u064f\u0648\u0627\u0652", "word_translation": "they are thrown", "word_transliteration": "ul'qu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "thereof", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0645\u064e\u0643\u064e\u0627\u0646\u0657\u0627", "word_translation": "(in) a place", "word_transliteration": "makanan"}, {"word_arabic_uthmani": "\u0636\u064e\u064a\u0651\u0650\u0642\u0657\u0627", "word_translation": "narrow", "word_transliteration": "dayyiqan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0642\u064e\u0631\u0651\u064e\u0646\u0650\u064a\u0646\u064e", "word_translation": "bound in chains", "word_transliteration": "muqarranina"}, {"word_arabic_uthmani": "\u062f\u064e\u0639\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they will call", "word_transliteration": "da'aw"}, {"word_arabic_uthmani": "\u0647\u064f\u0646\u064e\u0627\u0644\u0650\u0643\u064e", "word_translation": "there", "word_transliteration": "hunalika"}, {"word_arabic_uthmani": "\u062b\u064f\u0628\u064f\u0648\u0631\u0657\u0627", "word_translation": "(for) destruction", "word_transliteration": "thuburan"}]}