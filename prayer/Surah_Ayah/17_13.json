{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064f\u0644\u0651\u064e \u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064d \u0623\u064e\u0644\u06e1\u0632\u064e\u0645\u06e1\u0646\u064e\u0670\u0647\u064f \u0637\u064e\u0640\u0670\u0653\u0626\u0650\u0631\u064e\u0647\u064f\u06e5 \u0641\u0650\u064a \u0639\u064f\u0646\u064f\u0642\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0646\u064f\u062e\u06e1\u0631\u0650\u062c\u064f \u0644\u064e\u0647\u064f\u06e5 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0643\u0650\u062a\u064e\u0670\u0628\u0657\u0627 \u064a\u064e\u0644\u06e1\u0642\u064e\u0649\u0670\u0647\u064f \u0645\u064e\u0646\u0634\u064f\u0648\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0644\u0651\u064e", "word_translation": "And (for) every", "word_transliteration": "wakulla"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064d", "word_translation": "man", "word_transliteration": "insanin"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u06e1\u0632\u064e\u0645\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We have fastened to him", "word_transliteration": "alzamnahu"}, {"word_arabic_uthmani": "\u0637\u064e\u0640\u0670\u0653\u0626\u0650\u0631\u064e\u0647\u064f\u06e5", "word_translation": "his fate", "word_transliteration": "tairahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0639\u064f\u0646\u064f\u0642\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "his neck", "word_transliteration": "unuqihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u062e\u06e1\u0631\u0650\u062c\u064f", "word_translation": "and We will bring forth", "word_transliteration": "wanukh'riju"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u0657\u0627", "word_translation": "a record", "word_transliteration": "kitaban"}, {"word_arabic_uthmani": "\u064a\u064e\u0644\u06e1\u0642\u064e\u0649\u0670\u0647\u064f", "word_translation": "which he will find", "word_transliteration": "yalqahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u0634\u064f\u0648\u0631\u064b\u0627", "word_translation": "wide open", "word_transliteration": "manshuran"}]}