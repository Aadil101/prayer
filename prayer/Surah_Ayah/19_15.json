{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0633\u064e\u0644\u064e\u0670\u0645\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u064a\u064e\u0648\u06e1\u0645\u064e \u0648\u064f\u0644\u0650\u062f\u064e \u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0645\u064f\u0648\u062a\u064f \u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064f\u0628\u06e1\u0639\u064e\u062b\u064f \u062d\u064e\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0644\u064e\u0670\u0645\u064c", "word_translation": "And peace be", "word_transliteration": "wasalamun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "upon him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(the) day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0648\u064f\u0644\u0650\u062f\u064e", "word_translation": "he was born", "word_transliteration": "wulida"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "and (the) day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0645\u064f\u0648\u062a\u064f", "word_translation": "he dies", "word_transliteration": "yamutu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "and (the) day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u064a\u064f\u0628\u06e1\u0639\u064e\u062b\u064f", "word_translation": "he will be raised", "word_transliteration": "yub'athu"}, {"word_arabic_uthmani": "\u062d\u064e\u064a\u0651\u0657\u0627", "word_translation": "alive", "word_transliteration": "hayyan"}]}