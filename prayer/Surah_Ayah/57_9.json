{"ayahs": {"ayah_uthmani": "\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u064f \u0639\u064e\u0644\u064e\u0649\u0670 \u0639\u064e\u0628\u06e1\u062f\u0650\u0647\u0650\u06e6\u0653 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u06ed \u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0656 \u0644\u0651\u0650\u064a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650\u06da \u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0628\u0650\u0643\u064f\u0645\u06e1 \u0644\u064e\u0631\u064e\u0621\u064f\u0648\u0641\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u064f", "word_translation": "sends down", "word_transliteration": "yunazzilu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "upon", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0639\u064e\u0628\u06e1\u062f\u0650\u0647\u0650\u06e6\u0653", "word_translation": "His slave", "word_transliteration": "abdihi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u06ed", "word_translation": "Verses", "word_transliteration": "ayatin"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0656", "word_translation": "clear", "word_transliteration": "bayyinatin"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0643\u064f\u0645", "word_translation": "that He may bring you out", "word_transliteration": "liyukh'rijakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650", "word_translation": "the darkness[es]", "word_transliteration": "al-zulumati"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "into", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650\u06da", "word_translation": "the light", "word_transliteration": "al-nuri"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "bikum"}, {"word_arabic_uthmani": "\u0644\u064e\u0631\u064e\u0621\u064f\u0648\u0641\u065e", "word_translation": "(is the) Most Kind", "word_transliteration": "laraufun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "(the) Most Merciful", "word_transliteration": "rahimun"}]}