{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0648\u064e\u0632\u06e1\u0646\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f\u06da \u0641\u064e\u0645\u064e\u0646 \u062b\u064e\u0642\u064f\u0644\u064e\u062a\u06e1 \u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0648\u064e\u0632\u06e1\u0646\u064f", "word_translation": "And the weighing", "word_transliteration": "wal-waznu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d", "word_translation": "that day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f\u06da", "word_translation": "(will be) the truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646", "word_translation": "So whose", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u062b\u064e\u0642\u064f\u0644\u064e\u062a\u06e1", "word_translation": "(will be) heavy", "word_transliteration": "thaqulat"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5", "word_translation": "his scales", "word_transliteration": "mawazinuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(will be) the successful ones"