{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0631\u064e\u0628\u064e\u0637\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u0649\u0670 \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1 \u0625\u0650\u0630\u06e1 \u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652 \u0641\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u064f\u0646\u064e\u0627 \u0631\u064e\u0628\u0651\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0644\u064e\u0646 \u0646\u0651\u064e\u062f\u06e1\u0639\u064f\u0648\u064e\u0627\u0652 \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6\u0653 \u0625\u0650\u0644\u064e\u0670\u0647\u0657\u0627\u06d6 \u0644\u0651\u064e\u0642\u064e\u062f\u06e1 \u0642\u064f\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0630\u0657\u0627 \u0634\u064e\u0637\u064e\u0637\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0628\u064e\u0637\u06e1\u0646\u064e\u0627", "word_translation": "And We made firm", "word_transliteration": "warabatna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "[on]", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their hearts", "word_transliteration": "qulubihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "when", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652", "word_translation": "they stood up", "word_transliteration": "qamu"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "and said", "word_transliteration": "faqalu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbuna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f", "word_translation": "(is) the Lord", "word_transliteration": "rabbu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "(of) the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0644\u064e\u0646", "word_translation": "Never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u062f\u06e1\u0639\u064f\u0648\u064e\u0627\u0652", "word_translation": "we will invoke", "word_transliteration": "nad'uwa"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "besides Him", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6\u0653", "word_translation": "besides Him", "word_transliteration": "dunihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u0657\u0627\u06d6", "word_translation": "any god", "word_transliteration": "ilahan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "we would have said", "word_transliteration": "qul'na"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u0657\u0627", "word_translation": "then", "word_transliteration": "idhan"}, {"word_arabic_uthmani": "\u0634\u064e\u0637\u064e\u0637\u064b\u0627", "word_translation": "an enormity", "word_transliteration": "shatatan"}]}