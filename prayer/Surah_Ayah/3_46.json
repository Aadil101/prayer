{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064f\u0643\u064e\u0644\u0651\u0650\u0645\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u0641\u0650\u064a \u0671\u0644\u06e1\u0645\u064e\u0647\u06e1\u062f\u0650 \u0648\u064e\u0643\u064e\u0647\u06e1\u0644\u0657\u0627 \u0648\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0643\u064e\u0644\u0651\u0650\u0645\u064f", "word_translation": "And he will speak", "word_transliteration": "wayukallimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "(to) the people", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0647\u06e1\u062f\u0650", "word_translation": "the cradle", "word_transliteration": "al-mahdi"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0647\u06e1\u0644\u0657\u0627", "word_translation": "and (in) maturity", "word_transliteration": "wakahlan"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u064e", "word_translation": "and (he will be) of", "word_transliteration": "wamina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "the righteous", "word_transliteration": "al-salihina"}]}