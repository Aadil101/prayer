{"ayahs": {"ayah_uthmani": "\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u0635\u064e\u0644\u0651\u0650\u064a \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u062a\u064f\u0647\u064f\u06e5 \u0644\u0650\u064a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0631\u064e\u062d\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0635\u064e\u0644\u0651\u0650\u064a", "word_translation": "sends His blessings", "word_transliteration": "yusalli"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u062a\u064f\u0647\u064f\u06e5", "word_translation": "and His Angels", "word_transliteration": "wamalaikatuhu"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u0643\u064f\u0645", "word_translation": "so that He may bring you out", "word_transliteration": "liyukh'rijakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650", "word_translation": "the darkness[es]", "word_transliteration": "al-zulumati"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0648\u0631\u0650\u06da", "word_translation": "the light", "word_transliteration": "al-nuri"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And He is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "to the believers", "word_transliteration": "bil-mu'minina"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u0650\u064a\u0645\u0657\u0627", "word_translation": "Merciful", "word_transliteration": "rahiman"}]}