{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u0650 \u0644\u064e\u0639\u0650\u0628\u06e1\u0631\u064e\u0629\u0657\u06d6 \u0646\u0651\u064f\u0633\u06e1\u0642\u0650\u064a\u0643\u064f\u0645 \u0645\u0651\u0650\u0645\u0651\u064e\u0627 \u0641\u0650\u064a \u0628\u064f\u0637\u064f\u0648\u0646\u0650\u0647\u064e\u0627 \u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0645\u064e\u0646\u064e\u0670\u0641\u0650\u0639\u064f \u0643\u064e\u062b\u0650\u064a\u0631\u064e\u0629\u065e \u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u0650", "word_translation": "the cattle", "word_transliteration": "al-an'ami"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u0650\u0628\u06e1\u0631\u064e\u0629\u0657\u06d6", "word_translation": "surely (is) a lesson", "word_transliteration": "la'ib'ratan"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0633\u06e1\u0642\u0650\u064a\u0643\u064f\u0645", "word_translation": "We give you drink", "word_transliteration": "nus'qikum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0645\u0651\u064e\u0627", "word_translation": "from what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0628\u064f\u0637\u064f\u0648\u0646\u0650\u0647\u064e\u0627", "word_translation": "their bellies", "word_transliteration": "butuniha"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and for you", "word_transliteration": "walakum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in them", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u064e\u0670\u0641\u0650\u0639\u064f", "word_translation": "(are) benefits", "word_transliteration": "manafi'u"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0631\u064e\u0629\u065e", "word_translation": "many", "word_transliteration": "kathiratun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "and of them", "word_transliteration": "wamin'ha"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "you eat", "word_transliteration": "takuluna"}]}