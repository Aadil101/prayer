{"ayahs": {"ayah_uthmani": "\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u0623\u064e\u0646\u0641\u0650\u0642\u064f\u0648\u0627\u0652 \u0645\u0650\u0645\u0651\u064e\u0627 \u062c\u064e\u0639\u064e\u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u064e\u0641\u0650\u064a\u0646\u064e \u0641\u0650\u064a\u0647\u0650\u06d6 \u0641\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0646\u0641\u064e\u0642\u064f\u0648\u0627\u0652 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0631\u065e \u0643\u064e\u0628\u0650\u064a\u0631\u065e"}, "words": [{"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "Believe", "word_transliteration": "aminu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0641\u0650\u0642\u064f\u0648\u0627\u0652", "word_translation": "and spend", "word_transliteration": "wa-anfiqu"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0627", "word_translation": "of what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e\u0643\u064f\u0645", "word_translation": "He has made you", "word_transliteration": "ja'alakum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u064e\u0641\u0650\u064a\u0646\u064e", "word_translation": "trustees", "word_trans