{"ayahs": {"ayah_uthmani": "\u0644\u0650\u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0623\u064e\u0633\u06e1\u0648\u064e\u0623\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0648\u064e\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0631\u064e\u0647\u064f\u0645 \u0628\u0650\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u064e", "word_translation": "That Allah will remove", "word_transliteration": "liyukaffira"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "That Allah will remove", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0648\u064e\u0623\u064e", "word_translation": "(the) worst", "word_transliteration": "aswa-a"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "they did", "word_transliteration": "amilu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and reward them", "word_transliteration": "wayajziyahum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064e\u0647\u064f\u0645", "word_translation": "their due", "word_transliteration": "ajrahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u0650", "word_translation": "for (the) best", "word_transliteration": "bi-ahsani"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used (to)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ya'maluna"}]}