{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1 \u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064f\u0648\u0627\u0652 \u0641\u064e\u0642\u064f\u0644\u06e1 \u0623\u064e\u0646\u0630\u064e\u0631\u06e1\u062a\u064f\u0643\u064f\u0645\u06e1 \u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u0657 \u0645\u0651\u0650\u062b\u06e1\u0644\u064e \u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u0650 \u0639\u064e\u0627\u062f\u0656 \u0648\u064e\u062b\u064e\u0645\u064f\u0648\u062f\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064f\u0648\u0627\u0652", "word_translation": "they turn away", "word_transliteration": "a'radu"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u06e1", "word_translation": "then say", "word_transliteration": "faqul"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0630\u064e\u0631\u06e1\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "I have warned you", "word_transliteration": "andhartukum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u0657", "word_translation": "(of) a thunderbolt", "word_transliteration": "sa'iqatan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e", "word_translation": "like", "word_transliteration": "mith'la"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0639\u0650\u0642\u064e\u0629\u0650", "word_translation": "(the) thunderbolt", "word_transliteration": "sa'iqati"}, {"word_arabic_uthmani": "\u0639\u064e\u0627\u062f\u0656", "word_translation": "(of) Aad", "word_transliteration": "adin"}, {"word_arabic_uthmani": "\u0648\u064e\u062b\u064e\u0645\u064f\u0648\u062f\u064e", "word_translation": "and Thamud", "word_transliteration": "wathamuda"}]}