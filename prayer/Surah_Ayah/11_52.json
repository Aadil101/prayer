{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u064e\u0643\u064f\u0645\u06e1 \u062b\u064f\u0645\u0651\u064e \u062a\u064f\u0648\u0628\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u064a\u064f\u0631\u06e1\u0633\u0650\u0644\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645 \u0645\u0651\u0650\u062f\u06e1\u0631\u064e\u0627\u0631\u0657\u0627 \u0648\u064e\u064a\u064e\u0632\u0650\u062f\u06e1\u0643\u064f\u0645\u06e1 \u0642\u064f\u0648\u0651\u064e\u0629\u064b \u0625\u0650\u0644\u064e\u0649\u0670 \u0642\u064f\u0648\u0651\u064e\u062a\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "And O my people!", "word_transliteration": "wayaqawmi"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "Ask forgiveness", "word_transliteration": "is'taghfiru"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "(of) your Lord", "word_transliteration": "rabbakum"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u0628\u064f\u0648\u0653\u0627\u0652", "word_translation": "turn in repentance", "word_transliteration": "tubu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u06e1\u0633\u0650\u0644\u0650", "word_translation": "He will send", "word_transliteration": "yur'sili"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064e", "word_translation": "(from) the sky (rain)", "word_transliteration": "al-samaa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062f\u06e1\u0631\u064e\u0627\u0631\u0657\u0627", "word_translation": "(in) abundance", "word_transliteration": "mid'raran"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0632\u0650\u062f\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "and increase you", "word_transliteration": "wayazid'kum"}, {"word_arabic_uthmani": "\u0642\u064f\u0648\u0651\u064e\u0629\u064b", "word_translation": "(in) strength", "word_transliteration": "quwwatan"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "(added) to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0642\u064f\u0648\u0651\u064e\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your strength", "word_transliteration": "quwwatikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "turn away", "word_transliteration": "tatawallaw"}, {"word_arabic_uthmani": "\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(as) criminals", "word_transliteration": "muj'rimina"}]}