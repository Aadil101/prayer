{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u062a\u064e\u0623\u06e1\u062a\u064f\u0648\u0646\u064e \u0671\u0644\u0631\u0651\u0650\u062c\u064e\u0627\u0644\u064e \u0634\u064e\u0647\u06e1\u0648\u064e\u0629\u0657 \u0645\u0651\u0650\u0646 \u062f\u064f\u0648\u0646\u0650 \u0671\u0644\u0646\u0651\u0650\u0633\u064e\u0627\u0653\u0621\u0650\u06da \u0628\u064e\u0644\u06e1 \u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0645\u065e \u0645\u0651\u064f\u0633\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "Indeed, you", "word_transliteration": "innakum"}, {"word_arabic_uthmani": "\u0644\u064e\u062a\u064e\u0623\u06e1\u062a\u064f\u0648\u0646\u064e", "word_translation": "you approach", "word_transliteration": "latatuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0650\u062c\u064e\u0627\u0644\u064e", "word_translation": "the men", "word_transliteration": "al-rijala"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u06e1\u0648\u064e\u0629\u0657", "word_translation": "lustfully", "word_transliteration": "shahwatan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650", "word_translation": "instead of", "word_transliteration": "duni"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u0650\u0633\u064e\u0627\u0653\u0621\u0650\u06da", "word_translation": "the women", "word_transliteration": "al-nisai"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "antum"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u065e", "word_translation": "(are) a people", "word_transliteration": "qawmun"}, {"word_ara