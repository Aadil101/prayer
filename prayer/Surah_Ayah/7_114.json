{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0646\u064e\u0639\u064e\u0645\u06e1 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0642\u064e\u0631\u0651\u064e\u0628\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u064e\u0645\u06e1", "word_translation": "Yes", "word_transliteration": "na'am"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "and indeed you", "word_transliteration": "wa-innakum"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0650\u0646\u064e", "word_translation": "surely (will be) of", "word_transliteration": "lamina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0642\u064e\u0631\u0651\u064e\u0628\u0650\u064a\u0646\u064e", "word_translation": "the ones who are near", "word_transliteration": "al-muqarabina"}]}