{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0630\u064e\u0631\u06e1\u0647\u064f\u0645\u06e1 \u064a\u064e\u062e\u064f\u0648\u0636\u064f\u0648\u0627\u0652 \u0648\u064e\u064a\u064e\u0644\u06e1\u0639\u064e\u0628\u064f\u0648\u0627\u0652 \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u064a\u064f\u0644\u064e\u0670\u0642\u064f\u0648\u0627\u0652 \u064a\u064e\u0648\u06e1\u0645\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0630\u064e\u0631\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "So leave them", "word_transliteration": "fadharhum"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u064f\u0648\u0636\u064f\u0648\u0627\u0652", "word_translation": "(to) converse vainly", "word_transliteration": "yakhudu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0644\u06e1\u0639\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "and amuse themselves", "word_transliteration": "wayal'abu"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u064a\u064f\u0644\u064e\u0670\u0642\u064f\u0648\u0627\u0652", "word_translation": "they meet", "word_transliteration": "yulaqu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0647\u064f\u0645\u064f", "word_translation": "their Day", "word_transliteration": "yawmahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "which", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0639\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "they are promised", "word_transliteration": "yu'aduna"}]}