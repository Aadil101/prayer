{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0644\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u062e\u064e\u0644\u064e\u0648\u06e1\u0627\u0652 \u0625\u0650\u0644\u064e\u0649\u0670 \u0634\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u0647\u0650\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e\u0627 \u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0646\u064e\u062d\u06e1\u0646\u064f \u0645\u064f\u0633\u06e1\u062a\u064e\u0647\u06e1\u0632\u0650\u0621\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "they meet", "word_transliteration": "laqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe[d]", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe[d]", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "But when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they are alone", "word_transliteration": "khalaw"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "with", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u064e\u0670\u0637\u0650\u064a\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their evil ones", "word_transliteration": "shayatinihim"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1", "word_translation": "(are) with you", "word_transliteration": "ma'akum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0646\u064e\u062d\u06e1\u0646\u064f", "word_translation": "we", "word_transliteration": "nahnu"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0647\u06e1\u0632\u0650\u0621\u064f\u0648\u0646\u064e", "word_translation": "(are) mockers", "word_transliteration": "mus'tahziuna"}]}