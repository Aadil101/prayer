_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0646\u0651\u064e", "word_translation": "surely they say", "word_transliteration": "layaqulunna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "were", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "with you", "word_transliteration": "ma'akum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u064e\u0644\u064e\u064a\u06e1\u0633\u064e", "word_translation": "Is not", "word_transliteration": "awalaysa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064e", "word_translation": "most knowing", "word_transliteration": "bi-a'lama"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0635\u064f\u062f\u064f\u0648\u0631\u0650", "word_translation": "(the) breasts", "word_transliteration": "suduri"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the worlds", "word_transliteration": "al-'alamina"}]}