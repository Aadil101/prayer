{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0650 \u0671\u0646\u062a\u064e\u0647\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0650", "word_translation": "Then if", "word_transliteration": "fa-ini"}, {"word_arabic_uthmani": "\u0671\u0646\u062a\u064e\u0647\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they cease", "word_transliteration": "intahaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}