{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064f\u0648\u062d\u0650\u064a\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0648\u064e\u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e \u0644\u064e\u0626\u0650\u0646\u06e1 \u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u06e1\u062a\u064e \u0644\u064e\u064a\u064e\u062d\u06e1\u0628\u064e\u0637\u064e\u0646\u0651\u064e \u0639\u064e\u0645\u064e\u0644\u064f\u0643\u064e \u0648\u064e\u0644\u064e\u062a\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And verily", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062d\u0650\u064a\u064e", "word_translation": "it has been revealed", "word_transliteration": "uhiya"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0644\u064e\u0649", "word_translation": "and to", "word_transliteration": "wa-ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "(were) before you", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0643\u064e", "word_translation": "(were) before you", "word_transliteration": "qablika"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "if", "word_transliteration": "la-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u06e1\u062a\u064e", "word_translation": "you associate (with Allah)", "word_transliteration": "ashrakta"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u062d\u06e1\u0628\u064e\u0637\u064e\u0646\u0651\u064e", "word_translation": "surely, will become worthless", "word_transliteration": "layahbatanna"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u064e\u0644\u064f\u0643\u064e", "word_translation": "your deeds", "word_transliteration": "amaluka"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062a\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e", "word_translation": "and you will surely be", "word_transliteration": "walatakunanna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the losers", "word_transliteration": "al-khasirina"}]}