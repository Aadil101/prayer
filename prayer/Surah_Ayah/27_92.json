{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u06e1 \u0623\u064e\u062a\u06e1\u0644\u064f\u0648\u064e\u0627\u0652 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e\u06d6 \u0641\u064e\u0645\u064e\u0646\u0650 \u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0649\u0670 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u0647\u06e1\u062a\u064e\u062f\u0650\u064a \u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0645\u064e\u0646 \u0636\u064e\u0644\u0651\u064e \u0641\u064e\u0642\u064f\u0644\u06e1 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u064e\u0627\u06e0 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0646\u0630\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u06e1", "word_translation": "And that", "word_transliteration": "wa-an"}, {"word_arabic_uthmani": "\u0623\u064e\u062a\u06e1\u0644\u064f\u0648\u064e\u0627\u0652", "word_translation": "I recite", "word_transliteration": "atluwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e\u06d6", "word_translation": "the Quran", "word_transliteration": "al-qur'ana"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u0650", "word_translation": "And whoever", "word_transliteration": "famani"}, {"word_arabic_uthmani": "\u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0649\u0670", "word_translation": "accepts guidance", "word_transliteration": "ih'tada"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062a\u064e\u062f\u0650\u064a", "word_translation": "he accepts guidance", "word_transliteration": "yahtadi"}, {"word_arabic_uthmani": "\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "for himself", "word_transliteration": "linafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u0651\u064e", "word_translation": "goes astray", "word_transliteration": "dalla"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u06e1", "word_translation": "then say", "word_transliteration": "faqul"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064e\u0627\u06e0", "word_translation": "I am", "word_transliteration": "ana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u0630\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the warners", "word_transliteration": "al-mundhirina"}]}