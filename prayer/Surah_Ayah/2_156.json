{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627\u0653 \u0623\u064e\u0635\u064e\u0670\u0628\u064e\u062a\u06e1\u0647\u064f\u0645 \u0645\u0651\u064f\u0635\u0650\u064a\u0628\u064e\u0629\u065e \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627\u0653", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u064e\u0670\u0628\u064e\u062a\u06e1\u0647\u064f\u0645", "word_translation": "strikes them", "word_transliteration": "asabathum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0635\u0650\u064a\u0628\u064e\u0629\u065e", "word_translation": "a misfortune", "word_transliteration": "musibatun"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "belong to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "and indeed we", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "towards Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "will return", "word_transliteration": "raji'una"}]}