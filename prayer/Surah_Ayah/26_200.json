{"ayahs": {"ayah_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0633\u064e\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650 \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We have inserted it", "word_transliteration": "salaknahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "into", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650", "word_translation": "(the) hearts", "word_transliteration": "qulubi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the criminals", "word_transliteration": "al-muj'rimina"}]}