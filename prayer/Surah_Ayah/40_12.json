{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645 \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0630\u064e\u0627 \u062f\u064f\u0639\u0650\u064a\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5 \u0643\u064e\u0641\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1 \u0648\u064e\u0625\u0650\u0646 \u064a\u064f\u0634\u06e1\u0631\u064e\u0643\u06e1 \u0628\u0650\u0647\u0650\u06e6 \u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652\u06da \u0641\u064e\u0671\u0644\u06e1\u062d\u064f\u0643\u06e1\u0645\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0651\u0650 \u0671\u0644\u06e1\u0643\u064e\u0628\u0650\u064a\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645", "word_translation": "That", "word_transliteration": "dhalikum"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5\u0653", "word_translation": "(is) because", "word_transliteration": "bi-annahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u062f\u064f\u0639\u0650\u064a\u064e", "word_translation": "Allah was invoked", "word_transliteration": "du'iya"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah was invoked", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5", "word_translation": "Alone", "word_transliteration": "wahdahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you disbelieved", "word_transliteration": "kafartum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "but if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u064a\u064f\u0634\u06e1\u0631\u064e\u0643\u06e1", "word_translation": "(others) were associated", "word_transliteration": "yush'rak"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with Him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652\u06da", "word_translation": "you believed", "word_transliteration": "tu'minu"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0644\u06e1\u062d\u064f\u0643\u06e1\u0645\u064f", "word_translation": "So the judgment", "word_transliteration": "fal-huk'mu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "(is) with Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0651\u0650", "word_translation": "the Most High", "word_transliteration": "al-'aliyi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0628\u0650\u064a\u0631\u0650", "word_translation": "the Most Great", "word_transliteration": "al-kabiri"}]}