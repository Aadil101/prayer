{"ayahs": {"ayah_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u0632\u0651\u064f\u0628\u064f\u0631\u0650\u06d7 \u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e \u0644\u0650\u062a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0645\u064e\u0627 \u0646\u064f\u0632\u0651\u0650\u0644\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0641\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "With the clear proofs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0632\u0651\u064f\u0628\u064f\u0631\u0650\u06d7", "word_translation": "and the Books", "word_transliteration": "wal-zuburi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "And We sent down", "word_transliteration": "wa-anzalna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e", "word_translation": "the Remembrance", "word_transliteration": "al-dhik'ra"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064e", "word_translation": "that you may make clear", "word_transliteration": "litubayyina"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "to the mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0646\u064f\u0632\u0651\u0650\u0644\u064e", "word_translation": "has been sent down", "word_transliteration": "nuzzila"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "ilayhim"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and that they may", "word_transliteration": "wala'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0641\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "reflect", "word_transliteration": "yatafakkaruna"}]}