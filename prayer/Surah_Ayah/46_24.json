{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0631\u064e\u0623\u064e\u0648\u06e1\u0647\u064f \u0639\u064e\u0627\u0631\u0650\u0636\u0657\u0627 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u06e1\u0628\u0650\u0644\u064e \u0623\u064e\u0648\u06e1\u062f\u0650\u064a\u064e\u062a\u0650\u0647\u0650\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0647\u064e\u0670\u0630\u064e\u0627 \u0639\u064e\u0627\u0631\u0650\u0636\u065e \u0645\u0651\u064f\u0645\u06e1\u0637\u0650\u0631\u064f\u0646\u064e\u0627\u06da \u0628\u064e\u0644\u06e1 \u0647\u064f\u0648\u064e \u0645\u064e\u0627 \u0671\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u064e\u0644\u06e1\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6\u06d6 \u0631\u0650\u064a\u062d\u065e \u0641\u0650\u064a\u0647\u064e\u0627 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0623\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "Then when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0631\u064e\u0623\u064e\u0648\u06e1\u0647\u064f", "word_translation": "they saw it", "word_transliteration": "ra-awhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0627\u0631\u0650\u0636\u0657\u0627", "word_translation": "(as) a cloud", "word_transliteration": "aridan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u06e1\u0628\u0650\u0644\u064e", "word_translation": "approaching", "word_transliteration": "mus'taqbila"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u062f\u0650\u064a\u064e\u062a\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their valleys", "word_transliteration": "awdiyatihim"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0639\u064e\u0627\u0631\u0650\u0636\u065e", "word_translation": "(is) a cloud", "word_transliteration": "aridun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0645\u06e1\u0637\u0650\u0631\u064f\u0646\u064e\u0627\u06da", "word_translation": "bringing us rain", "word_transliteration": "mum'tiruna"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "it", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u064e\u0644\u06e1\u062a\u064f\u0645", "word_translation": "you were asking it to be hastened", "word_transliteration": "is'ta'jaltum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "you were asking it to be hastened", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0631\u0650\u064a\u062d\u065e", "word_translation": "a wind", "word_transliteration": "rihun"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "painful", "word_transliteration": "alimun"}]}