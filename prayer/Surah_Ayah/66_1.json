{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u064f \u0644\u0650\u0645\u064e \u062a\u064f\u062d\u064e\u0631\u0651\u0650\u0645\u064f \u0645\u064e\u0627\u0653 \u0623\u064e\u062d\u064e\u0644\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0643\u064e\u06d6 \u062a\u064e\u0628\u06e1\u062a\u064e\u063a\u0650\u064a \u0645\u064e\u0631\u06e1\u0636\u064e\u0627\u062a\u064e \u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0643\u064e\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u064f", "word_translation": "Prophet", "word_transliteration": "al-nabiyu"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e", "word_translation": "Why (do)", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u064e\u0631\u0651\u0650\u0645\u064f", "word_translation": "you prohibit", "word_transliteration": "tuharrimu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u064e\u0644\u0651\u064e", "word_translation": "has made lawful", "word_transliteration": "ahalla"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u06d6", "word_translation": "for you", "word_transliteration": "laka"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u06e1\u062a\u064e\u063a\u0650\u064a", "word_translation": "seeking", "word_transliteration": "tabtaghi"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u06e1\u0636\u064e\u0627\u062a\u064e", "word_translation": "(to) please", "word_transliteration": "mardata"}, {"word_arabic_uthmani": "\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0643\u064e\u06da", "word_translation": "your wives", "word_transliteration": "azwajika"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}