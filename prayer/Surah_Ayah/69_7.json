{"ayahs": {"ayah_uthmani": "\u0633\u064e\u062e\u0651\u064e\u0631\u064e\u0647\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0633\u064e\u0628\u06e1\u0639\u064e \u0644\u064e\u064a\u064e\u0627\u0644\u0656 \u0648\u064e\u062b\u064e\u0645\u064e\u0670\u0646\u0650\u064a\u064e\u0629\u064e \u0623\u064e\u064a\u0651\u064e\u0627\u0645\u064d \u062d\u064f\u0633\u064f\u0648\u0645\u0657\u0627\u06d6 \u0641\u064e\u062a\u064e\u0631\u064e\u0649 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u064e \u0641\u0650\u064a\u0647\u064e\u0627 \u0635\u064e\u0631\u06e1\u0639\u064e\u0649\u0670 \u0643\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u0639\u06e1\u062c\u064e\u0627\u0632\u064f \u0646\u064e\u062e\u06e1\u0644\u064d \u062e\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u0656"}, "words": [{"word_arabic_uthmani": "\u0633\u064e\u062e\u0651\u064e\u0631\u064e\u0647\u064e\u0627", "word_translation": "Which He imposed", "word_transliteration": "sakharaha"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u06e1\u0639\u064e", "word_translation": "(for) seven", "word_transliteration": "sab'a"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0627\u0644\u0656", "word_translation": "nights", "word_transliteration": "layalin"}, {"word_arabic_uthmani": "\u0648\u064e\u062b\u064e\u0645\u064e\u0670\u0646\u0650\u064a\u064e\u0629\u064e", "word_translation": "and eight", "word_transliteration": "wathamaniyata"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u0651\u064e\u0627\u0645\u064d", "word_translation": "days", "word_transliteration": "ayyamin"}, {"word_arabic_uthmani": "\u062d\u064f\u0633\u064f\u0648\u0645\u0657\u0627\u06d6", "word_translation": "(in) succession", "word_transliteration": "husuman"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0631\u064e\u0649", "word_translation": "so you would see", "word_transliteration": "fatara"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u064e", "word_translation": "the people", "word_transliteration": "al-qawma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0635\u064e\u0631\u06e1\u0639\u064e\u0649\u0670", "word_translation": "fallen", "word_transliteration": "sar'a"}, {"word_arabic_uthmani": "\u0643\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "as if they were", "word_transliteration": "ka-annahum"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u062c\u064e\u0627\u0632\u064f", "word_translation": "trunks", "word_transliteration": "a'jazu"}, {"word_arabic_uthmani": "\u0646\u064e\u062e\u06e1\u0644\u064d", "word_translation": "(of) date-palms", "word_transliteration": "nakhlin"}, {"word_arabic_uthmani": "\u062e\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u0656", "word_translation": "hollow", "word_transliteration": "khawiyatin"}]}