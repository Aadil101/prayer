{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e \u0671\u0644\u06e1\u064a\u064e\u062a\u064e\u0670\u0645\u064e\u0649\u0670 \u0638\u064f\u0644\u06e1\u0645\u064b\u0627 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e \u0641\u0650\u064a \u0628\u064f\u0637\u064f\u0648\u0646\u0650\u0647\u0650\u0645\u06e1 \u0646\u064e\u0627\u0631\u0657\u0627\u06d6 \u0648\u064e\u0633\u064e\u064a\u064e\u0635\u06e1\u0644\u064e\u0648\u06e1\u0646\u064e \u0633\u064e\u0639\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "consume", "word_transliteration": "yakuluna"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e", "word_translation": "wealth", "word_transliteration": "amwala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u062a\u064e\u0670\u0645\u064e\u0649\u0670", "word_translation": "(of) the orphans", "word_transliteration": "al-yatama"}, {"word_arabic_uthmani": "\u0638\u064f\u0644\u06e1\u0645\u064b\u0627", "word_translation": "wrongfully", "word_transliteration": "zul'man"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "they consume", "word_transliteration": "yakuluna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "wo