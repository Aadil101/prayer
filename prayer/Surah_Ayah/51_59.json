{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652 \u0630\u064e\u0646\u064f\u0648\u0628\u0657\u0627 \u0645\u0651\u0650\u062b\u06e1\u0644\u064e \u0630\u064e\u0646\u064f\u0648\u0628\u0650 \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650\u0647\u0650\u0645\u06e1 \u0641\u064e\u0644\u064e\u0627 \u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f\u0648\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "So indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "for those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "do wrong", "word_transliteration": "zalamu"}, {"word_arabic_uthmani": "\u0630\u064e\u0646\u064f\u0648\u0628\u0657\u0627", "word_translation": "(is) a portion", "word_transliteration": "dhanuban"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e", "word_translation": "like", "word_transliteration": "mith'la"}, {"word_arabic_uthmani": "\u0630\u064e\u0646\u064f\u0648\u0628\u0650", "word_translation": "(the) portion", "word_transliteration": "dhanubi"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their companions", "word_transliteration": "ashabihim"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "so let them not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f\u0648\u0646\u0650", "word_translation": "ask Me to hasten", "word_transliteration": "yasta'jiluni"}]}