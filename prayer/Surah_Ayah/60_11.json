{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u0641\u064e\u0627\u062a\u064e\u0643\u064f\u0645\u06e1 \u0634\u064e\u064a\u06e1\u0621\u065e \u0645\u0651\u0650\u0646\u06e1 \u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0643\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u0650 \u0641\u064e\u0639\u064e\u0627\u0642\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1 \u0641\u064e\u0640\u0654\u064e\u0627\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0630\u064e\u0647\u064e\u0628\u064e\u062a\u06e1 \u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u064f\u0647\u064f\u0645 \u0645\u0651\u0650\u062b\u06e1\u0644\u064e \u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u0641\u064e\u0642\u064f\u0648\u0627\u0652\u06da \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0646\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0641\u064e\u0627\u062a\u064e\u0643\u064f\u0645\u06e1", "word_translation": "have gone from you", "word_transliteration": "fatakum"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u065e", "word_translation": "any", "word_transliteration": "shayon"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your wives", "word_transliteration": "azwajikum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u0650", "word_translation": "the disbelievers", "word_transliteration": "al-kufari"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0627\u0642\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "then your turn comes", "word_transliteration": "fa'aqabtum"}, {"word_arabic_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u062a\u064f\u0648\u0627\u0652", "word_translation": "then give", "word_transliteration": "faatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(to) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0630\u064e\u0647\u064e\u0628\u064e\u062a\u06e1", "word_translation": "have gone", "word_transliteration": "dhahabat"}, {"word_arabic_uthmani": "\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u064f\u0647\u064f\u0645", "word_translation": "their wives", "word_transliteration": "azwajuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e", "word_translation": "(the) like", "word_transliteration": "mith'la"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "(of) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064e\u0642\u064f\u0648\u0627\u0652\u06da", "word_translation": "they had spent", "word_transliteration": "anfaqu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "And fear", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(in) Whom", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064f\u0645", "word_translation": "you", "word_transliteration": "antum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "[in Him]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "(are) believers", "word_transliteration": "mu'minuna"}]}