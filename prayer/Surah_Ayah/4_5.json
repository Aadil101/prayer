{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064f\u0624\u06e1\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u0633\u0651\u064f\u0641\u064e\u0647\u064e\u0627\u0653\u0621\u064e \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u062a\u0650\u064a \u062c\u064e\u0639\u064e\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0643\u064f\u0645\u06e1 \u0642\u0650\u064a\u064e\u0670\u0645\u0657\u0627 \u0648\u064e\u0671\u0631\u06e1\u0632\u064f\u0642\u064f\u0648\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0648\u064e\u0671\u0643\u06e1\u0633\u064f\u0648\u0647\u064f\u0645\u06e1 \u0648\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0644\u0657\u0627 \u0645\u0651\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064f\u0624\u06e1\u062a\u064f\u0648\u0627\u0652", "word_translation": "give", "word_transliteration": "tu'tu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u0641\u064e\u0647\u064e\u0627\u0653\u0621\u064e", "word_translation": "the foolish", "word_transliteration": "al-sufahaa"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "your wealth", "word_transliteration": "amwalakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u062a\u0650\u064a", "word_translation": "which", "word_transliteration": "allati"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "(was) made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u064e\u0670\u0645\u0657\u0627", "word_translation": "a means of support", "word_transliteration": "qiyaman"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0631\u06e1\u0632\u064f\u0642\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "(but) provide (for) them", "word_transliteration": "wa-ur'zuquhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "with it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0643\u06e1\u0633\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "and clothe them", "word_transliteration": "wa-ik'suhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652", "word_translation": "and speak", "word_transliteration": "waqulu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0644\u0657\u0627", "word_translation": "words", "word_transliteration": "qawlan"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0657\u0627", "word_translation": "(of) kindness", "word_transliteration": "ma'rufan"}]}