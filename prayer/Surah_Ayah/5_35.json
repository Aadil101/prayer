{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0671\u0628\u06e1\u062a\u064e\u063a\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0671\u0644\u06e1\u0648\u064e\u0633\u0650\u064a\u0644\u064e\u0629\u064e \u0648\u064e\u062c\u064e\u0670\u0647\u0650\u062f\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0633\u064e\u0628\u0650\u064a\u0644\u0650\u0647\u0650\u06e6 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe!", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "Fear", "word_transliteration": "ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0628\u06e1\u062a\u064e\u063a\u064f\u0648\u0653\u0627\u0652", "word_translation": "and seek", "word_transliteration": "wa-ib'taghu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "towards Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0633\u0650\u064a\u0644\u064e\u0629\u064e", "word_translation": "the means", "word_transliteration": "al-wasilata"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0670\u0647\u0650\u062f\u064f\u0648\u0627\u0652", "word_translation": "and strive hard", "word_transliteration": "wajahidu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650\u0647\u0650\u06e6", "word_translation": "His way", "word_transliteration": "sabilihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "succeed", "word_transliteration": "tuf'lihuna"}]}