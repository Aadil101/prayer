{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0630\u06e1\u0647\u064e\u0628\u064e \u0639\u064e\u0646\u0651\u064e\u0627 \u0671\u0644\u06e1\u062d\u064e\u0632\u064e\u0646\u064e\u06d6 \u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0634\u064e\u0643\u064f\u0648\u0631\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they (will) say", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f", "word_translation": "All praises", "word_transliteration": "al-hamdu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "(be) to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0630\u06e1\u0647\u064e\u0628\u064e", "word_translation": "(has) removed", "word_transliteration": "adhhaba"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0651\u064e\u0627", "word_translation": "from us", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0632\u064e\u0646\u064e\u06d6", "word_translation": "the sorrow", "word_transliteration": "al-hazana"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0644\u064e\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) surely Oft-Forgiving", "word_transliteration": "laghafurun"}, {"word_arabic_uthmani": "\u0634\u064e\u0643\u064f\u0648\u0631\u064c", "word_translation": "Most Appreciative", "word_transliteration": "shakurun"}]}