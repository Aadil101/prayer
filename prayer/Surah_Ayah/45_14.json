{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644 \u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0627\u0652 \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0644\u064e\u0627 \u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e \u0623\u064e\u064a\u0651\u064e\u0627\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u0650\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e \u0642\u064e\u0648\u06e1\u0645\u064e\u06e2\u0627 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "to those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "(to) forgive", "word_transliteration": "yaghfiru"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e", "word_translation": "hope", "word_transliteration": "yarjuna"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u0651\u064e\u0627\u0645\u064e", "word_translation": "(for the) days", "word_transliteration": "ayyama"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah",