{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f \u0645\u0650\u0645\u0651\u064e\u0646 \u0630\u064f\u0643\u0651\u0650\u0631\u064e \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u062b\u064f\u0645\u0651\u064e \u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e \u0639\u064e\u0646\u06e1\u0647\u064e\u0627\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0627 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e \u0645\u064f\u0646\u062a\u064e\u0642\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And who", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0638\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) more unjust", "word_transliteration": "azlamu"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0646", "word_translation": "than (he) who", "word_transliteration": "mimman"}, {"word_arabic_uthmani": "\u0630\u064f\u0643\u0651\u0650\u0631\u064e", "word_translation": "is reminded", "word_transliteration": "dhukkira"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "of (the) Verses", "word_transliteration": "biayati"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "(of) his Lord", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0631\u064e\u0636\u064e", "word_translation": "he turns away", "word_transliteration": "a'rada"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064e\u0627\u0653\u06da", "word_translation": "from them", "word_transliteration": "anha"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "the criminals", "word_transliteration": "al-muj'rimina"}, {"word_arabic_uthmani": "\u0645\u064f\u0646\u062a\u064e\u0642\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(will) take retribution", "word_transliteration": "muntaqimuna"}]}