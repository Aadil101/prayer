{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0641\u06e1\u062a\u0650\u0647\u0650\u0645\u06e1  \u0623\u064e\u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064e  \u0671\u0644\u06e1\u0628\u064e\u0646\u064e\u0627\u062a\u064f  \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u064f  \u0671\u0644\u06e1\u0628\u064e\u0646\u064f\u0648\u0646\u064e "}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0641\u06e1\u062a\u0650\u0647\u0650\u0645\u06e1 ", "word_translation": "Then ask them", "word_transliteration": "fa-is'taftihim"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064e ", "word_translation": "Does your Lord", "word_transliteration": "alirabbika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0646\u064e\u0627\u062a\u064f ", "word_translation": "(have) daughters", "word_transliteration": "al-banatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u0645\u064f ", "word_translation": "while for them", "word_transliteration": "walahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0646\u064f\u0648\u0646\u064e ", "word_translation": "(are) sons", "word_transliteration": "al-banuna"}]}