{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f\u06d6 \u0641\u064e\u0645\u064e\u0646 \u0634\u064e\u0627\u0653\u0621\u064e \u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u0645\u064e\u0640\u0654\u064e\u0627\u0628\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064f", "word_translation": "(is) the Day", "word_transliteration": "al-yawmu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f\u06d6", "word_translation": "the True", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646", "word_translation": "So whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "wills", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e", "word_translation": "let him take", "word_transliteration": "ittakhadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "towards", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "his Lord", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0640\u0654\u064e\u0627\u0628\u064b\u0627", "word_translation": "a return", "word_transliteration": "maaban"}]}