{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0646\u064e\u0632\u0651\u064e\u0644\u064e\u0647\u064f\u06e5 \u0631\u064f\u0648\u062d\u064f \u0671\u0644\u06e1\u0642\u064f\u062f\u064f\u0633\u0650 \u0645\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0644\u0650\u064a\u064f\u062b\u064e\u0628\u0651\u0650\u062a\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0647\u064f\u062f\u0657\u0649 \u0648\u064e\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670 \u0644\u0650\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0646\u064e\u0632\u0651\u064e\u0644\u064e\u0647\u064f\u06e5", "word_translation": "Has brought it down", "word_transliteration": "nazzalahu"}, {"word_arabic_uthmani": "\u0631\u064f\u0648\u062d\u064f", "word_translation": "the Holy Spirit", "word_transliteration": "ruhu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u062f\u064f\u0633\u0650", "word_translation": "the Holy Spirit", "word_transliteration": "al-qudusi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u062b\u064e\u0628\u0651\u0650\u062a\u064e", "word_translation": "to make firm", "word_transliteration": "liyuthabbita"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u062f\u0657\u0649", "word_translation": "and (as) a guidance", "word_transliteration": "wahudan"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670", "word_translation": "and glad tidings", "word_transliteration": "wabush'ra"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "to the Muslims", "word_transliteration": "lil'mus'limina"}]}