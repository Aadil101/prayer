{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0634\u064e\u0627\u0653\u0621\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0644\u064e\u0623\u0653\u0645\u064e\u0646\u064e \u0645\u064e\u0646 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0643\u064f\u0644\u0651\u064f\u0647\u064f\u0645\u06e1 \u062c\u064e\u0645\u0650\u064a\u0639\u064b\u0627\u06da \u0623\u064e\u0641\u064e\u0623\u064e\u0646\u062a\u064e \u062a\u064f\u0643\u06e1\u0631\u0650\u0647\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "(had) willed", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbuka"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u0653\u0645\u064e\u0646\u064e", "word_translation": "surely (would) have believed", "word_transliteration": "laamana"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(are) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064f\u0647\u064f\u0645\u06e1", "word_translation": "all of them", "word_transliteration": "kulluhum"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u0650\u064a\u0639\u064b\u0627\u06da", "word_translation": "together", "word_transliteration": "jami'an"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0623\u064e\u0646\u062a\u064e", "word_translation": "Then will you", "word_transliteration": "afa-anta"}, {"word_arabic_uthmani": "\u062a\u064f\u0643\u06e1\u0631\u0650\u0647\u064f", "word_translation": "compel", "word_transliteration": "tuk'rihu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "the mankind", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "they become", "word_transliteration": "yakunu"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "believers", "word_transliteration": "mu'minina"}]}