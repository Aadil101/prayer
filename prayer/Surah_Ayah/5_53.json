{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0647\u064e\u0640\u0670\u0653\u0624\u064f\u0644\u064e\u0627\u0653\u0621\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064e\u0642\u06e1\u0633\u064e\u0645\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062c\u064e\u0647\u06e1\u062f\u064e \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1\u06da \u062d\u064e\u0628\u0650\u0637\u064e\u062a\u06e1 \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064f\u0647\u064f\u0645\u06e1 \u0641\u064e\u0623\u064e\u0635\u06e1\u0628\u064e\u062d\u064f\u0648\u0627\u0652 \u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "And will say", "word_transliteration": "wayaqulu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u064e\u0640\u0670\u0653\u0624\u064f\u0644\u064e\u0627\u0653\u0621\u0650", "word_translation": "Are these", "word_transliteration": "ahaulai"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064e\u0642\u06e1\u0633\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "swore", "word_transliteration": "aqsamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "by Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u06e1\u062f\u064e", "word_translation": "strongest", "word_transliteration": "jahda"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their oaths", "word_transliteration": "aymanihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "indeed they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u0639\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "(were) with you", "word_transliteration": "lama'akum"}, {"word_arabic_uthmani": "\u062d\u064e\u0628\u0650\u0637\u064e\u062a\u06e1", "word_translation": "Became worthless", "word_transliteration": "habitat"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'maluhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0635\u06e1\u0628\u064e\u062d\u064f\u0648\u0627\u0652", "word_translation": "and they became", "word_transliteration": "fa-asbahu"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "(the) losers", "word_transliteration": "khasirina"}]}