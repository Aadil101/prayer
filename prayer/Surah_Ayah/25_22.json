{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0631\u064e\u0648\u06e1\u0646\u064e \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e \u0644\u064e\u0627 \u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670 \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e \u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u062d\u0650\u062c\u06e1\u0631\u0657\u0627 \u0645\u0651\u064e\u062d\u06e1\u062c\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u064e\u0648\u06e1\u0646\u064e", "word_translation": "they see", "word_transliteration": "yarawna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064e", "word_translation": "the Angels", "word_transliteration": "al-malaikata"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "no", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u0628\u064f\u0634\u06e1\u0631\u064e\u0649\u0670", "word_translation": "glad tidings", "word_transliteration": "bush'ra"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "(will be) that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "for the criminals", "word_transliteration": "lil'muj'rimina"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "and they will say", "word_transliteration": "wayaquluna"}, {"word_arabic_uthmani": "\u062d\u0650\u062c\u06e1\u0631\u0657\u0627", "word_translation": "A partition", "word_transliteration": "hij'ran"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u062d\u06e1\u062c\u064f\u0648\u0631\u0657\u0627", "word_translation": "forbidden", "word_transliteration": "mahjuran"}]}