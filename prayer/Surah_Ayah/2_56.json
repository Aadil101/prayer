{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0628\u064e\u0639\u064e\u062b\u06e1\u0646\u064e\u0670\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0645\u064e\u0648\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0634\u06e1\u0643\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u064e\u062b\u06e1\u0646\u064e\u0670\u0643\u064f\u0645", "word_translation": "We revived you", "word_transliteration": "ba'athnakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your death", "word_transliteration": "mawtikum"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u0634\u06e1\u0643\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "(be) grateful", "word_transliteration": "tashkuruna"}]}