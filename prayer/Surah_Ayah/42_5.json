{"ayahs": {"ayah_uthmani": "\u062a\u064e\u0643\u064e\u0627\u062f\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f \u064a\u064e\u062a\u064e\u0641\u064e\u0637\u0651\u064e\u0631\u06e1\u0646\u064e \u0645\u0650\u0646 \u0641\u064e\u0648\u06e1\u0642\u0650\u0647\u0650\u0646\u0651\u064e\u06da \u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u064a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0646\u064e \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0646\u064e \u0644\u0650\u0645\u064e\u0646 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d7 \u0623\u064e\u0644\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f \u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u062a\u064e\u0643\u064e\u0627\u062f\u064f", "word_translation": "Almost", "word_transliteration": "takadu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f", "word_translation": "the heavens", "word_transliteration": "al-samawatu"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0641\u064e\u0637\u0651\u064e\u0631\u06e1\u0646\u064e", "word_translation": "break up", "word_transliteration": "yatafattarna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u06e1\u0642\u0650\u0647\u0650\u0646\u0651\u064e\u06da", "word_translation": "above them", "word_transliteration": "fawqihinna"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "and the Angels", "word_transliteration": "wal-malaikatu"}, {"word_arabic_uthmani": "\u064a\u064f\u0633\u064e\u0628\u0651\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "glorify", "word_transliteration": "yusabbihuna"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650", "word_translation": "(the) praise", "word_transliteration": "bihamdi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "and ask for forgiveness", "word_transliteration": "wayastaghfiruna"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e\u0646", "word_translation": "for those", "word_transliteration": "liman"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "on", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d7", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u0627\u0653", "word_translation": "Unquestionably", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f", "word_translation": "(is) the Oft-Forgiving", "word_transliteration": "al-ghafuru"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064f", "word_translation": "the Most Merciful", "word_transliteration": "al-rahimu"}]}