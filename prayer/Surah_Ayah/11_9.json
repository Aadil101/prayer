{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1 \u0623\u064e\u0630\u064e\u0642\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064e \u0645\u0650\u0646\u0651\u064e\u0627 \u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657 \u062b\u064f\u0645\u0651\u064e \u0646\u064e\u0632\u064e\u0639\u06e1\u0646\u064e\u0670\u0647\u064e\u0627 \u0645\u0650\u0646\u06e1\u0647\u064f \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u064a\u064e\u0640\u0654\u064f\u0648\u0633\u065e \u0643\u064e\u0641\u064f\u0648\u0631\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0630\u064e\u0642\u06e1\u0646\u064e\u0627", "word_translation": "We give man a taste", "word_transliteration": "adhaqna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064e", "word_translation": "We give man a taste", "word_transliteration": "al-insana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0651\u064e\u0627", "word_translation": "(of) Mercy from Us", "word_transliteration": "minna"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657", "word_translation": "(of) Mercy from Us", "word_transliteration": "rahmatan"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0646\u064e\u0632\u064e\u0639\u06e1\u0646\u064e\u0670\u0647\u064e\u0627", "word_translation": "We withdraw it", "word_transliteration": "naza'naha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from him", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "indeed, he", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0640\u0654\u064f\u0648\u0633\u065e", "word_translation": "(is) despairing", "word_transliteration": "layausun"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(and) ungrateful", "word_transliteration": "kafurun"}]}