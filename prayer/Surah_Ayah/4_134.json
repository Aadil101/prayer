{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0646 \u0643\u064e\u0627\u0646\u064e \u064a\u064f\u0631\u0650\u064a\u062f\u064f \u062b\u064e\u0648\u064e\u0627\u0628\u064e \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0641\u064e\u0639\u0650\u0646\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062b\u064e\u0648\u064e\u0627\u0628\u064f \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0633\u064e\u0645\u0650\u064a\u0639\u064e\u06e2\u0627 \u0628\u064e\u0635\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "[is]", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u062f\u064f", "word_translation": "desires", "word_transliteration": "yuridu"}, {"word_arabic_uthmani": "\u062b\u064e\u0648\u064e\u0627\u0628\u064e", "word_translation": "reward", "word_transliteration": "thawaba"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u0650\u0646\u062f\u064e", "word_translation": "then with", "word_transliteration": "fa'inda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062b\u064e\u0648\u064e\u0627\u0628\u064f", "word_translation": "(is the) reward", "word_transliteration": "thawabu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\