{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0646\u064e\u0627\u062f\u064e\u0649\u0670\u0653 \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064e \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650 \u0623\u064e\u0646\u06e1 \u0623\u064e\u0641\u0650\u064a\u0636\u064f\u0648\u0627\u0652 \u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064e\u0627\u0653\u0621\u0650 \u0623\u064e\u0648\u06e1 \u0645\u0650\u0645\u0651\u064e\u0627 \u0631\u064e\u0632\u064e\u0642\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u062d\u064e\u0631\u0651\u064e\u0645\u064e\u0647\u064f\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0627\u062f\u064e\u0649\u0670\u0653", "word_translation": "And (will) call out", "word_transliteration": "wanada"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064f", "word_translation": "(the) companions", "word_transliteration": "ashabu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "(of) the Fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064e", "word_translation": "(to the) companions", "word_transliteration": "ashaba"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650", "word_translation": "(of) Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e1", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u0650\u064a\u0636\u064f\u0648\u0627\u0652", "word_translation": "Pour", "word_transliteration": "afidu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "upon us", "word_transliteration": "alayna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "[of]", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0627\u0653\u0621\u0650", "word_translation": "(some) water", "word_transliteration": "al-mai"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0627", "word_translation": "of what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u0631\u064e\u0632\u064e\u0642\u064e\u0643\u064f\u0645\u064f", "word_translation": "(has been) provided (to) you", "word_transliteration": "razaqakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They (will) say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u062d\u064e\u0631\u0651\u064e\u0645\u064e\u0647\u064f\u0645\u064e\u0627", "word_translation": "has forbidden both", "word_transliteration": "harramahuma"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the disbelievers", "word_transliteration": "al-kafirina"}]}