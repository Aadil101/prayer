{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0646\u064e\u0627 \u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0646\u064e\u0627 \u0648\u064e\u0642\u0650\u0646\u064e\u0627 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "say", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653", "word_translation": "Our Lord!", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627\u0653", "word_translation": "Indeed we", "word_transliteration": "innana"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "(have) believed", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "so forgive", "word_transliteration": "fa-igh'fir"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "for us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0646\u064e\u0627", "word_translation": "our sins", "word_transliteration": "dhunubana"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u0646\u064e\u0627", "word_translation": "and save us", "word_transliteration": "waqina"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "(from) punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "(of) the Fire", "word_transliteration": "al-nari"}]}