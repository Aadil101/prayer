{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064e\u0648\u06e1\u0644\u064e\u0649\u0670\u0643\u064f\u0645\u06e1\u06da \u0646\u0650\u0639\u06e1\u0645\u064e \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u0644\u064e\u0649\u0670 \u0648\u064e\u0646\u0650\u0639\u06e1\u0645\u064e \u0671\u0644\u0646\u0651\u064e\u0635\u0650\u064a\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they turn away", "word_transliteration": "tawallaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652", "word_translation": "then know", "word_transliteration": "fa-i'lamu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u0644\u064e\u0649\u0670\u0643\u064f\u0645\u06e1\u06da", "word_translation": "(is) your Protector", "word_transliteration": "mawlakum"}, {"word_arabic_uthmani": "\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "Excellent", "word_transliteration": "ni'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u0644\u064e\u0649\u0670", "word_translation": "(is) the Protector", "word_transliteration": "al-mawla"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "and Excellent", "word_transliteration": "wani'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064