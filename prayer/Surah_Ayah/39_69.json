{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0634\u06e1\u0631\u064e\u0642\u064e\u062a\u0650 \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f \u0628\u0650\u0646\u064f\u0648\u0631\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u064e\u0627 \u0648\u064e\u0648\u064f\u0636\u0650\u0639\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064f \u0648\u064e\u062c\u0650\u0627\u0652\u064a\u0653\u0621\u064e \u0628\u0650\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e \u0648\u064e\u0671\u0644\u0634\u0651\u064f\u0647\u064e\u062f\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0642\u064f\u0636\u0650\u064a\u064e \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0627 \u064a\u064f\u0638\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0634\u06e1\u0631\u064e\u0642\u064e\u062a\u0650", "word_translation": "And (will) shine", "word_transliteration": "wa-ashraqati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f", "word_translation": "the earth", "word_transliteration": "al-ardu"}, {"word_arabic_uthmani": "\u0628\u0650\u0646\u064f\u0648\u0631\u0650", "word_translation": "with (the) light", "word_transliteration": "binuri"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u064e\u0627", "word_translation": "(of) its Lord", "word_transliteration": "rabbiha"}, {"word_arabic_uthmani": "\u0648\u064e\u0648\u064f\u0636\u0650\u0639\u064e", "word_translation": "and (will) be placed", "word_transliteration": "wawudi'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064f", "word_translation": "the Record", "word_transliteration": "al-kitabu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u0650\u0627\u0652\u064a\u0653\u0621\u064e", "word_translation": "and (will) be brought", "word_transliteration": "wajia"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e", "word_translation": "the Prophets", "word_transliteration": "bil-nabiyina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0634\u0651\u064f\u0647\u064e\u062f\u064e\u0627\u0653\u0621\u0650", "word_translation": "and the witnesses", "word_transliteration": "wal-shuhadai"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064f\u0636\u0650\u064a\u064e", "word_translation": "and it (will) be judged", "word_transliteration": "waqudiya"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645", "word_translation": "between them", "word_transliteration": "baynahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "will not be wronged", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0638\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "will not be wronged", "word_transliteration": "yuz'lamuna"}]}