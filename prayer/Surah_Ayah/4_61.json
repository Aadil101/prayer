{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u062a\u064e\u0639\u064e\u0627\u0644\u064e\u0648\u06e1\u0627\u0652 \u0625\u0650\u0644\u064e\u0649\u0670 \u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650 \u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e \u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u0650\u064a\u0646\u064e \u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0648\u0646\u064e \u0639\u064e\u0646\u0643\u064e \u0635\u064f\u062f\u064f\u0648\u062f\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u064e\u0627\u0644\u064e\u0648\u06e1\u0627\u0652", "word_translation": "Come", "word_transliteration": "ta'alaw"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "(has) revealed", "word_transliteration": "anzala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0644\u064e\u0649", "word_translation": "and to", "word_transliteration": "wa-ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0