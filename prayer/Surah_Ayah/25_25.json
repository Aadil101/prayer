{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0634\u064e\u0642\u0651\u064e\u0642\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f \u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u0645\u064e\u0670\u0645\u0650 \u0648\u064e\u0646\u064f\u0632\u0651\u0650\u0644\u064e \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u062a\u064e\u0646\u0632\u0650\u064a\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "And (the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0634\u064e\u0642\u0651\u064e\u0642\u064f", "word_translation": "will split open", "word_transliteration": "tashaqqaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "the heavens", "word_transliteration": "al-samau"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u0645\u064e\u0670\u0645\u0650", "word_translation": "with the clouds", "word_transliteration": "bil-ghamami"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0632\u0651\u0650\u0644\u064e", "word_translation": "and (will be) sent down", "word_transliteration": "wanuzzila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "the Angels", "word_transliteration": "al-malaikatu"}, {"word_arabic_uthmani": "\u062a\u064e\u0646\u0632\u0650\u064a\u0644\u064b\u0627", "word_translation": "descending", "word_transliteration": "tanzilan"}]}