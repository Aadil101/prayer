{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1 \u0639\u064e\u0632\u064e\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0637\u0651\u064e\u0644\u064e\u0670\u0642\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0633\u064e\u0645\u0650\u064a\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0639\u064e\u0632\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "they resolve", "word_transliteration": "azamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0637\u0651\u064e\u0644\u064e\u0670\u0642\u064e", "word_translation": "(on) [the] divorce", "word_transliteration": "al-talaqa"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0639\u064c", "word_translation": "(is) All-Hearing", "word_transliteration": "sami'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}