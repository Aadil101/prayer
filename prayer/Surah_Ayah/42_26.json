{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064f\u0647\u064f\u0645 \u0645\u0651\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06da \u0648\u064e\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u065e \u0634\u064e\u062f\u0650\u064a\u062f\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f", "word_translation": "And He answers", "word_transliteration": "wayastajibu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and do", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064f\u0647\u064f\u0645", "word_translation": "and increases (for) them", "word_transliteration": "wayaziduhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06da", "word_translation": "His Bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "And the disbelievers", "word_transliteration": "wal-kafiruna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u065e", "word_translation": "(will be) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u065e", "word_translation": "severe", "word_transliteration": "shadidun"}]}