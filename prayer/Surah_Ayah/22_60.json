{"ayahs": {"ayah_uthmani": "\u06de\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0639\u064e\u0627\u0642\u064e\u0628\u064e \u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650 \u0645\u064e\u0627 \u0639\u064f\u0648\u0642\u0650\u0628\u064e \u0628\u0650\u0647\u0650\u06e6 \u062b\u064f\u0645\u0651\u064e \u0628\u064f\u063a\u0650\u064a\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0644\u064e\u064a\u064e\u0646\u0635\u064f\u0631\u064e\u0646\u0651\u064e\u0647\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0639\u064e\u0641\u064f\u0648\u0651\u064c \u063a\u064e\u0641\u064f\u0648\u0631\u065e"}, "words": [{"word_arabic_uthmani": "\u06de\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0639\u064e\u0627\u0642\u064e\u0628\u064e", "word_translation": "has retaliated", "word_transliteration": "aqaba"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650", "word_translation": "with the like", "word_transliteration": "bimith'li"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(of) that", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0639\u064f\u0648\u0642\u0650\u0628\u064e", "word_translation": "he was made to suffer", "word_transliteration": "uqiba"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "by it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0628\u064f\u063a\u0650\u064a\u064e", "word_translation": "he was oppressed", "word_transliteration": "bughiya"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "[on him]", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0646\u0635\u064f\u0631\u064e\u0646\u0651\u064e\u0647\u064f", "word_translation": "Allah will surely help him", "word_transliteration": "layansurannahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "Allah will surely help him", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0641\u064f\u0648\u0651\u064c", "word_translation": "(is) surely Oft-Pardoning", "word_transliteration": "la'afuwwun"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "Oft-Forgiving", "word_transliteration": "ghafurun"}]}