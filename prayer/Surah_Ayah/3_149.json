{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646 \u062a\u064f\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u064a\u064e\u0631\u064f\u062f\u0651\u064f\u0648\u0643\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670\u0653 \u0623\u064e\u0639\u06e1\u0642\u064e\u0670\u0628\u0650\u0643\u064f\u0645\u06e1 \u0641\u064e\u062a\u064e\u0646\u0642\u064e\u0644\u0650\u0628\u064f\u0648\u0627\u0652 \u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "believe!", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u062a\u064f\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "you obey", "word_transliteration": "tuti'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u064f\u062f\u0651\u064f\u0648\u0643\u064f\u0645\u06e1", "word_translation": "they will turn you back", "word_transliteration": "yaruddukum"}, 