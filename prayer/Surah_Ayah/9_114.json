{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064e \u0671\u0633\u06e1\u062a\u0650\u063a\u06e1\u0641\u064e\u0627\u0631\u064f \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0644\u0650\u0623\u064e\u0628\u0650\u064a\u0647\u0650 \u0625\u0650\u0644\u0651\u064e\u0627 \u0639\u064e\u0646 \u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u064e\u0629\u0656 \u0648\u064e\u0639\u064e\u062f\u064e\u0647\u064e\u0627\u0653 \u0625\u0650\u064a\u0651\u064e\u0627\u0647\u064f \u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0647\u064f\u06e5\u0653 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0639\u064e\u062f\u064f\u0648\u0651\u065e \u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650 \u062a\u064e\u0628\u064e\u0631\u0651\u064e\u0623\u064e \u0645\u0650\u0646\u06e1\u0647\u064f\u06da \u0625\u0650\u0646\u0651\u064e \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0644\u064e\u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0647\u064c \u062d\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "was", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u0650\u063a\u06e1\u0641\u064e\u0627\u0631\u064f", "word_translation": "(the) asking of forgiveness", "word_transliteration": "is'tigh'faru"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "(by) Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u0644\u0650\u0623\u064e\u0628\u0650\u064a\u0647\u0650", "word_translation": "for his father", "word_transliteration": "li-abihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "because", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u064e\u0629\u0656", "word_translation": "(of) a promise", "word_transliteration": "maw'idatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e\u0647\u064e\u0627\u0653", "word_translation": "he had promised it", "word_transliteration": "wa'adaha"}, {"word_arabic_uthmani": "\u0625\u0650\u064a\u0651\u064e\u0627\u0647\u064f", "word_translation": "(to) him", "word_transliteration": "iyyahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "But when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "it became clear", "word_transliteration": "tabayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "to him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "that he", "word_transliteration": "annahu"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u064f\u0648\u0651\u065e", "word_translation": "(was) an enemy", "word_transliteration": "aduwwun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u0631\u0651\u064e\u0623\u064e", "word_translation": "he disassociated", "word_transliteration": "tabarra-a"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u06da", "word_translation": "from him", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0647\u064c", "word_translation": "(was) compassionate", "word_transliteration": "la-awwahun"}, {"word_arabic_uthmani": "\u062d\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "forbearing", "word_transliteration": "halimun"}]}