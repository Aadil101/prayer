{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u0625\u0650\u0646\u0651\u064e \u0648\u064e\u0639\u06e1\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062d\u064e\u0642\u0651\u065e\u06da \u0641\u064e\u0625\u0650\u0645\u0651\u064e\u0627 \u0646\u064f\u0631\u0650\u064a\u064e\u0646\u0651\u064e\u0643\u064e \u0628\u064e\u0639\u06e1\u0636\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0623\u064e\u0648\u06e1 \u0646\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u064a\u064e\u0646\u0651\u064e\u0643\u064e \u0641\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0646\u064e\u0627 \u064a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "So be patient", "word_transliteration": "fa-is'bir"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e", "word_translation": "(the) Promise", "word_transliteration": "wa'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u065e\u06da", "word_translation": "(is) true", "word_transliteration": "haqqun"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0645\u0651\u064e\u0627", "word_translation": "And whether", "word_transliteration": "fa-imma"}, {"word_arabic_uthmani": "\u0646\u064f\u0631\u0650\u064a\u064e\u0646\u0651\u064e\u0643\u064e", "word_translation": "We show you", "word_transliteration": "nuriyannaka"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u0636\u064e", "word_translation": "some", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "We have promised them", "word_transliteration": "na'iduhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u064a\u064e\u0646\u0651\u064e\u0643\u064e", "word_translation": "We cause you to die", "word_transliteration": "natawaffayannaka"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "then to Us", "word_transliteration": "fa-ilayna"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "they will be returned", "word_transliteration": "yur'ja'una"}]}