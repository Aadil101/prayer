{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0639\u064e\u0644\u064e\u0649\u0670\u0653 \u0623\u064e\u0646 \u0646\u0651\u064f\u0631\u0650\u064a\u064e\u0643\u064e \u0645\u064e\u0627 \u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0644\u064e\u0642\u064e\u0670\u062f\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "And indeed We", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670\u0653", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0631\u0650\u064a\u064e\u0643\u064e", "word_translation": "We show you", "word_transliteration": "nuriyaka"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "We have promised them", "word_transliteration": "na'iduhum"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u0670\u062f\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "surely able", "word_transliteration": "laqadiruna"}]}