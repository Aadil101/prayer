{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062c\u064e\u0632\u064e\u0640\u0670\u0653\u0624\u064f\u0627\u0652 \u0633\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u0656 \u0633\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u065e \u0645\u0651\u0650\u062b\u06e1\u0644\u064f\u0647\u064e\u0627\u06d6 \u0641\u064e\u0645\u064e\u0646\u06e1 \u0639\u064e\u0641\u064e\u0627 \u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064e \u0641\u064e\u0623\u064e\u062c\u06e1\u0631\u064f\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0627 \u064a\u064f\u062d\u0650\u0628\u0651\u064f \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0632\u064e\u0640\u0670\u0653\u0624\u064f\u0627\u0652", "word_translation": "(The) recompense", "word_transliteration": "wajazau"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u0656", "word_translation": "(of) an evil", "word_transliteration": "sayyi-atin"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u065e", "word_translation": "(is) an evil", "word_transliteration": "sayyi-atun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064f\u0647\u064e\u0627\u06d6", "word_translation": "like it", "word_transliteration": "mith'luha"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u06e1", "word_translation": "But whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u0639\u064e\u0641\u064e\u0627", "word_translation": "pardons", "word_transliteration": "afa"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064e", "word_translation": "and makes reconciliation", "word_transliteration": "wa-aslaha"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062c\u06e1\u0631\u064f\u0647\u064f\u06e5", "word_translation": "then his reward", "word_transliteration": "fa-ajruhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "(is) on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(does) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u0650\u0628\u0651\u064f", "word_translation": "like", "word_transliteration": "yuhibbu"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "the wrongdoers", "word_transliteration": "al-zalimina"}]}