{"ayahs": {"ayah_uthmani": "\u06de\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f \u0628\u0650\u0671\u0644\u06e1\u0639\u064e\u062f\u06e1\u0644\u0650 \u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u062d\u06e1\u0633\u064e\u0670\u0646\u0650 \u0648\u064e\u0625\u0650\u064a\u062a\u064e\u0627\u0653\u064a\u0655\u0650 \u0630\u0650\u064a \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0628\u064e\u0649\u0670 \u0648\u064e\u064a\u064e\u0646\u06e1\u0647\u064e\u0649\u0670 \u0639\u064e\u0646\u0650 \u0671\u0644\u06e1\u0641\u064e\u062d\u06e1\u0634\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650 \u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u063a\u06e1\u064a\u0650\u06da \u064a\u064e\u0639\u0650\u0638\u064f\u0643\u064f\u0645\u06e1 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f", "word_translation": "commands", "word_transliteration": "yamuru"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0639\u064e\u062f\u06e1\u0644\u0650", "word_translation": "justice", "word_transliteration": "bil-'adli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u062d\u06e1\u0633\u064e\u0670\u0646\u0650", "word_translation": "and the good", "word_transliteration": "wal-ih'sani"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u064a\u062a\u064e\u0627\u0653\u064a\u0655\u0650", "word_translation": "and giving", "word_transliteration": "waitai"}, {"word_arabic_uthmani": "\u0630\u0650\u064a", "word_translation": "(to) relatives", "word_transliteration": "dhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0628\u064e\u0649\u0670", "word_translation": "(to) relatives", "word_transliteration": "al-qur'ba"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0646\u06e1\u0647\u064e\u0649\u0670", "word_translation": "and forbids", "word_transliteration": "wayanha"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "[from]", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u062d\u06e1\u0634\u064e\u0627\u0653\u0621\u0650", "word_translation": "the immorality", "word_transliteration": "al-fahshai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650", "word_translation": "and the bad", "word_transliteration": "wal-munkari"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u063a\u06e1\u064a\u0650\u06da", "word_translation": "and the oppression", "word_transliteration": "wal-baghyi"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u0638\u064f\u0643\u064f\u0645\u06e1", "word_translation": "He admonishes you", "word_transliteration": "ya'izukum"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "take heed", "word_transliteration": "tadhakkaruna"}]}