{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652 \u0645\u064e\u0627\u0630\u064e\u0627\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1\u06da \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u062e\u064e\u064a\u06e1\u0631\u0657\u0627\u06d7 \u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0647\u064e\u0670\u0630\u0650\u0647\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u062d\u064e\u0633\u064e\u0646\u064e\u0629\u065e\u06da \u0648\u064e\u0644\u064e\u062f\u064e\u0627\u0631\u064f \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u062e\u064e\u064a\u06e1\u0631\u065e\u06da \u0648\u064e\u0644\u064e\u0646\u0650\u0639\u06e1\u0645\u064e \u062f\u064e\u0627\u0631\u064f \u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "And it will be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "to those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652", "word_translation": "fear Allah", "word_transliteration": "ittaqaw"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0630\u064e\u0627\u0653", "word_translation": "What", "word_transliteration": "madha"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "has your Lord sent down", "word_transliteration": "anzala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1\u06da", "word_translation": "has your Lord sent down", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They will say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627\u06d7", "word_translation": "Good", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "For those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "do good", "word_transliteration": "ahsanu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u0650\u0647\u0650", "word_translation": "this", "word_transliteration": "hadhihi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u064e\u0646\u064e\u0629\u065e\u06da", "word_translation": "(is) a good", "word_transliteration": "hasanatun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062f\u064e\u0627\u0631\u064f", "word_translation": "and the home", "word_transliteration": "waladaru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "of the Hereafter", "word_transliteration": "al-akhirati"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e\u06da", "word_translation": "(is) better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "And surely excellent", "word_transliteration": "walani'ma"}, {"word_arabic_uthmani": "\u062f\u064e\u0627\u0631\u064f", "word_translation": "(is) the home", "word_transliteration": "daru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e", "word_translation": "(of) the righteous", "word_transliteration": "al-mutaqina"}]}