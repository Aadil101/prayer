{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0630\u06e1 \u0646\u064e\u062a\u064e\u0642\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u062c\u064e\u0628\u064e\u0644\u064e \u0641\u064e\u0648\u06e1\u0642\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0638\u064f\u0644\u0651\u064e\u0629\u065e \u0648\u064e\u0638\u064e\u0646\u0651\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0648\u064e\u0627\u0642\u0650\u0639\u064f\u06e2 \u0628\u0650\u0647\u0650\u0645\u06e1 \u062e\u064f\u0630\u064f\u0648\u0627\u0652 \u0645\u064e\u0627\u0653 \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064f\u0645 \u0628\u0650\u0642\u064f\u0648\u0651\u064e\u0629\u0656 \u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652 \u0645\u064e\u0627 \u0641\u0650\u064a\u0647\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u064e\u0642\u06e1\u0646\u064e\u0627", "word_translation": "We raised", "word_transliteration": "nataqna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0628\u064e\u0644\u064e", "word_translation": "the mountain", "word_transliteration": "al-jabala"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u06e1\u0642\u064e\u0647\u064f\u0645\u06e1", "word_translation": "above them", "word_transliteration": "fawqahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "as if it was", "word_transliteration": "ka-annahu"}, {"word_arabic_uthmani": "\u0638\u064f\u0644\u0651\u064e\u0629\u065e", "word_translation": "a canopy", "word_transliteration": "zullatun"}, {"word_arabic_uthmani": "\u0648\u064e\u0638\u064e\u0646\u0651\u064f\u0648\u0653\u0627\u0652", "word_translation": "and they thought", "word_transliteration": "wazannu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "that it", "word_transliteration": "annahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0627\u0642\u0650\u0639\u064f\u06e2", "word_translation": "(would) fall", "word_transliteration": "waqi'un"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u0645\u06e1", "word_translation": "upon them", "word_transliteration": "bihim"}, {"word_arabic_uthmani": "\u062e\u064f\u0630\u064f\u0648\u0627\u0652", "word_translation": "(We said) Take", "word_transliteration": "khudhu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064f\u0645", "word_translation": "We have given you", "word_transliteration": "ataynakum"}, {"word_arabic_uthmani": "\u0628\u0650\u0642\u064f\u0648\u0651\u064e\u0629\u0656", "word_translation": "with strength", "word_transliteration": "biquwwatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652", "word_translation": "and remember", "word_transliteration": "wa-udh'kuru"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "(is) in it", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "fear Allah", "word_transliteration": "tattaquna"}]}