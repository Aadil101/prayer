{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0628\u06e1\u062e\u064e\u0644\u064f\u0648\u0646\u064e \u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u062e\u06e1\u0644\u0650\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u063a\u064e\u0646\u0650\u064a\u0651\u064f \u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u062f\u064f"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0628\u06e1\u062e\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "are stingy", "word_transliteration": "yabkhaluna"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "and enjoin", "word_transliteration": "wayamuruna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "(on) the people", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u062e\u06e1\u0644\u0650\u06d7", "word_translation": "stinginess", "word_transliteration": "bil-bukh'li"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e", "word_translation": "turns away", "word_transliteration": "yatawalla"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "