{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u062a\u064e\u0631\u064e\u0649\u0670\u0653 \u0625\u0650\u0630\u0650 \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u064f\u0648\u0646\u064e \u0646\u064e\u0627\u0643\u0650\u0633\u064f\u0648\u0627\u0652 \u0631\u064f\u0621\u064f\u0648\u0633\u0650\u0647\u0650\u0645\u06e1 \u0639\u0650\u0646\u062f\u064e \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653 \u0623\u064e\u0628\u06e1\u0635\u064e\u0631\u06e1\u0646\u064e\u0627 \u0648\u064e\u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627 \u0641\u064e\u0671\u0631\u06e1\u062c\u0650\u0639\u06e1\u0646\u064e\u0627 \u0646\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1 \u0635\u064e\u0670\u0644\u0650\u062d\u064b\u0627 \u0625\u0650\u0646\u0651\u064e\u0627 \u0645\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e\u0649\u0670\u0653", "word_translation": "you (could) see", "word_transliteration": "tara"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u0650", "word_translation": "when", "word_transliteration": "idhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "the criminals", "word_transliteration": "al-muj'rimuna"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u0643\u0650\u0633\u064f\u0648\u0627\u0652", "word_translation": "(will) hang", "word_transliteration": "nakisu"}, {"word_arabic_uthmani": "\u0631\u064f\u0621\u064f\u0648\u0633\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their heads", "word_transliteration": "ruusihim"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "before", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627\u0653", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0635\u064e\u0631\u06e1\u0646\u064e\u0627", "word_translation": "we have seen", "word_transliteration": "absarna"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627", "word_translation": "and we have heard", "word_transliteration": "wasami'na"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0631\u06e1\u062c\u0650\u0639\u06e1\u0646\u064e\u0627", "word_translation": "so return us", "word_transliteration": "fa-ir'ji'na"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1", "word_translation": "we will do", "word_transliteration": "na'mal"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u064b\u0627", "word_translation": "righteous (deeds)", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0645\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "(are now) certain", "word_transliteration": "muqinuna"}]}