{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u0645\u0651\u064f\u062a\u0651\u064f\u0645\u06e1 \u0623\u064e\u0648\u06e1 \u0642\u064f\u062a\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1 \u0644\u064e\u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "And if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u062a\u0651\u064f\u0645\u06e1", "word_translation": "you die", "word_transliteration": "muttum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0642\u064f\u062a\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "are killed", "word_transliteration": "qutil'tum"}, {"word_arabic_uthmani": "\u0644\u064e\u0625\u0650\u0644\u064e\u0649", "word_translation": "surely to", "word_transliteration": "la-ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "you will be gathered", "word_transliteration": "tuh'sharuna"}]}