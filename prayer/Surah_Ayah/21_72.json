{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e \u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e \u0646\u064e\u0627\u0641\u0650\u0644\u064e\u0629\u0657\u06d6 \u0648\u064e\u0643\u064f\u0644\u0651\u0657\u0627 \u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0635\u064e\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627", "word_translation": "And We bestowed", "word_transliteration": "wawahabna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "on him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e", "word_translation": "Ishaq", "word_transliteration": "is'haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e", "word_translation": "and Yaqub", "word_transliteration": "waya'quba"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u0641\u0650\u0644\u064e\u0629\u0657\u06d6", "word_translation": "(in) addition", "word_transliteration": "nafilatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0644\u0651\u0657\u0627", "word_translation": "and all", "word_transliteration": "wakullan"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We made", "word_transliteration": "ja'alna"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "righteous", "word_transliteration": "salihina"}]}