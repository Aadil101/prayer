{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0641\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u06e1 \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0641\u064e\u0648\u06e1\u0632\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "Then as for", "word_transliteration": "fa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and did", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "[the] righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u06e1", "word_translation": "will admit them", "word_transliteration": "fayud'khiluhum"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbuhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": 