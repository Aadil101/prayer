{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a \u0638\u064e\u0646\u0651\u064e \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0646\u064e\u0627\u062c\u0656 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u064e\u0627 \u0671\u0630\u06e1\u0643\u064f\u0631\u06e1\u0646\u0650\u064a \u0639\u0650\u0646\u062f\u064e \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0641\u064e\u0623\u064e\u0646\u0633\u064e\u0649\u0670\u0647\u064f \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0630\u0650\u0643\u06e1\u0631\u064e \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6 \u0641\u064e\u0644\u064e\u0628\u0650\u062b\u064e \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u0650\u062c\u06e1\u0646\u0650 \u0628\u0650\u0636\u06e1\u0639\u064e \u0633\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And he said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "to the one whom", "word_transliteration": "lilladhi"}, {"word_arabic_uthmani": "\u0638\u064e\u0646\u0651\u064e", "word_translation": "he thought", "word_transliteration": "zanna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "that he", "word_transliteration": "annahu"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u062c\u0656", "word_translation": "(would be) saved", "word_transliteration": "najin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u064e\u0627", "word_translation": "of both of them", "word_transliteration": "min'huma"}, {"word_arabic_uthmani": "\u0671\u0630\u06e1\u0643\u064f\u0631\u06e1\u0646\u0650\u064a", "word_translation": "Mention me", "word_transliteration": "udh'kur'ni"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "to", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your master", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u0633\u064e\u0649\u0670\u0647\u064f", "word_translation": "But made him forget", "word_transliteration": "fa-ansahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0630\u0650\u0643\u06e1\u0631\u064e", "word_translation": "(the) mention", "word_transliteration": "dhik'ra"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u06e6", "word_translation": "(to) his master", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0628\u0650\u062b\u064e", "word_translation": "so he remained", "word_transliteration": "falabitha"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u0650\u062c\u06e1\u0646\u0650", "word_translation": "the prison", "word_transliteration": "al-sij'ni"}, {"word_arabic_uthmani": "\u0628\u0650\u0636\u06e1\u0639\u064e", "word_translation": "several", "word_transliteration": "bid'a"}, {"word_arabic_uthmani": "\u0633\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "years", "word_transliteration": "sinina"}]}