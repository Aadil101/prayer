{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0648\u064e\u0635\u0651\u064e\u0649\u0670 \u0628\u0650\u0647\u064e\u0627\u0653 \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u0640\u06e7\u0645\u064f \u0628\u064e\u0646\u0650\u064a\u0647\u0650 \u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064f \u064a\u064e\u0670\u0628\u064e\u0646\u0650\u064a\u0651\u064e \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0671\u0635\u06e1\u0637\u064e\u0641\u064e\u0649\u0670 \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e \u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0645\u064f\u0648\u062a\u064f\u0646\u0651\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645 \u0645\u0651\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0648\u064e\u0635\u0651\u064e\u0649\u0670", "word_translation": "And enjoined", "word_transliteration": "wawassa"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627\u0653", "word_translation": "[it]", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u0640\u06e7\u0645\u064f", "word_translation": "Ibrahim", "word_transliteration": "ib'rahimu"}, {"word_arabic_uthmani": "\u0628\u064e\u0646\u0650\u064a\u0647\u0650", "word_translation": "(upon) his sons", "word_transliteration": "banihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064f", "word_translation": "and Yaqub", "word_transliteration": "waya'qubu"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0628\u064e\u0646\u0650\u064a\u0651\u064e", "word_translation": "O my sons", "word_transliteration": "yabaniyya"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_tra