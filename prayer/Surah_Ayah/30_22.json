{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6 \u062e\u064e\u0644\u06e1\u0642\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0648\u064e\u0671\u062e\u06e1\u062a\u0650\u0644\u064e\u0670\u0641\u064f \u0623\u064e\u0644\u06e1\u0633\u0650\u0646\u064e\u062a\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0644\u06e1\u0648\u064e\u0670\u0646\u0650\u0643\u064f\u0645\u06e1\u06da \u0625\u0650\u0646\u0651\u064e \u0641\u0650\u064a \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0644\u064e\u0623\u0653\u064a\u064e\u0670\u062a\u0656 \u0644\u0651\u0650\u0644\u06e1\u0639\u064e\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1", "word_translation": "And among", "word_transliteration": "wamin"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His Signs", "word_transliteration": "ayatihi"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u06e1\u0642\u064f", "word_translation": "(is the) creation", "word_transliteration": "khalqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "(of) the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062e\u06e1\u062a\u0650\u0644\u064e\u0670\u0641\u064f", "word_translation": "and the diversity", "word_transliteration": "wa-ikh'tilafu"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u06e1\u0633\u0650\u0646\u064e\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "(of) your languages", "word_transliteration": "alsinatikum"}, {"word_arabi