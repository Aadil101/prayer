{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0641\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u062d\u064f\u062c\u0651\u064e\u0629\u064f \u0671\u0644\u06e1\u0628\u064e\u0670\u0644\u0650\u063a\u064e\u0629\u064f\u06d6 \u0641\u064e\u0644\u064e\u0648\u06e1 \u0634\u064e\u0627\u0653\u0621\u064e \u0644\u064e\u0647\u064e\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "With Allah", "word_transliteration": "falillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u062c\u0651\u064e\u0629\u064f", "word_translation": "(is) the argument", "word_transliteration": "al-hujatu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0670\u0644\u0650\u063a\u064e\u0629\u064f\u06d6", "word_translation": "the conclusive", "word_transliteration": "al-balighatu"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "falaw"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "He (had) willed", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064e\u062f\u064e\u0649\u0670\u0643\u064f\u0645\u06e1", "word_translation": "surely He (would) have guided you", "word_transliteration": "lahadakum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "all", "word_transliteration": "ajma'ina"}]}