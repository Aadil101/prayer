{"ayahs": {"ayah_uthmani": "\u0645\u064e\u0646\u06e1 \u0639\u064e\u0645\u0650\u0644\u064e \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627 \u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0633\u064e\u0627\u0653\u0621\u064e \u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6 \u062b\u064f\u0645\u0651\u064e \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0645\u064e\u0646\u06e1", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064e", "word_translation": "does", "word_transliteration": "amila"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627", "word_translation": "a righteous deed", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "then it is for his soul", "word_transliteration": "falinafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u064e\u0627\u0653\u0621\u064e", "word_translation": "does evil", "word_transliteration": "asaa"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6", "word_translation": "then it (is) against it", "word_transliteration": "fa'alayha"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbikum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "you will be returned", "word_transliteration": "tur'ja'una"}]}