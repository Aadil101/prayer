{"ayahs": {"ayah_uthmani": "\u062a\u0650\u0644\u06e1\u0643\u064e \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0646\u064e\u062a\u06e1\u0644\u064f\u0648\u0647\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6 \u0641\u064e\u0628\u0650\u0623\u064e\u064a\u0651\u0650 \u062d\u064e\u062f\u0650\u064a\u062b\u0650\u06ed \u0628\u064e\u0639\u06e1\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "These", "word_transliteration": "til'ka"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f", "word_translation": "(are the) Verses", "word_transliteration": "ayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u06e1\u0644\u064f\u0648\u0647\u064e\u0627", "word_translation": "We recite them", "word_transliteration": "natluha"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u0650\u0623\u064e\u064a\u0651\u0650", "word_translation": "Then in what", "word_transliteration": "fabi-ayyi"}, {"word_arabic_uthmani": "\u062d\u064e\u062f\u0650\u064a\u062b\u0650\u06ed", "word_translation": "statement", "word_transliteration": "hadithin"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6", "word_translation": "and His Verses", "word_transliteration": "waayatihi"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "will they believe", "word_transliteration": "yu'minuna"}]}