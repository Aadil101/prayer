{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0647\u064e\u0670\u0630\u0650\u0647\u0650\u06e6\u0653 \u0623\u064f\u0645\u0651\u064e\u062a\u064f\u0643\u064f\u0645\u06e1 \u0623\u064f\u0645\u0651\u064e\u0629\u0657 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657 \u0648\u064e\u0623\u064e\u0646\u064e\u0627\u06e0 \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u0650\u0647\u0650\u06e6\u0653", "word_translation": "this", "word_transliteration": "hadhihi"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u062a\u064f\u0643\u064f\u0645\u06e1", "word_translation": "your religion", "word_transliteration": "ummatukum"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u0657", "word_translation": "(is) religion", "word_transliteration": "ummatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657", "word_translation": "one", "word_transliteration": "wahidatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u064e\u0627\u06e0", "word_translation": "And I Am", "word_transliteration": "wa-ana"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u0650", "word_translation": "so fear Me", "word_transliteration": "fa-ittaquni"}]}