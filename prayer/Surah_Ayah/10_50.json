{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0646\u06e1 \u0623\u064e\u062a\u064e\u0649\u0670\u0643\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064f\u0647\u064f\u06e5 \u0628\u064e\u064a\u064e\u0670\u062a\u064b\u0627 \u0623\u064e\u0648\u06e1 \u0646\u064e\u0647\u064e\u0627\u0631\u0657\u0627 \u0645\u0651\u064e\u0627\u0630\u064e\u0627 \u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f \u0645\u0650\u0646\u06e1\u0647\u064f \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "Do you see", "word_transliteration": "ara-aytum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0623\u064e\u062a\u064e\u0649\u0670\u0643\u064f\u0645\u06e1", "word_translation": "comes to you", "word_transliteration": "atakum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064f\u0647\u064f\u06e5", "word_translation": "His punishment", "word_transliteration": "adhabuhu"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u064e\u0670\u062a\u064b\u0627", "word_translation": "(by) night", "word_transliteration": "bayatan"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0646\u064e\u0647\u064e\u0627\u0631\u0657\u0627", "word_translation": "(by) day", "word_transliteration": "naharan"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627\u0630\u064e\u0627", "word_translation": "what (portion)", "word_transliteration": "madha"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f"