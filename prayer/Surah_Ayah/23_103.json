{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u062e\u064e\u0641\u0651\u064e\u062a\u06e1 \u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u062e\u064e\u0670\u0644\u0650\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "But (the one) whose", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u062e\u064e\u0641\u0651\u064e\u062a\u06e1", "word_translation": "(are) light", "word_transliteration": "khaffat"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u064e\u0670\u0632\u0650\u064a\u0646\u064f\u0647\u064f\u06e5", "word_translation": "his scales", "word_transliteration": "mawazinuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "they [who]", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "have lost", "word_transliteration": "khasiru"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their souls", "word_transliteration": "anfusahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u064f\u0648\u0646\u064e", "word_translation": "they (will) abide forever", "word_transliteration": "khaliduna"}]}