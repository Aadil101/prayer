{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646 \u0634\u064e\u0631\u064e\u062d\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0635\u064e\u062f\u06e1\u0631\u064e\u0647\u064f\u06e5 \u0644\u0650\u0644\u06e1\u0625\u0650\u0633\u06e1\u0644\u064e\u0670\u0645\u0650 \u0641\u064e\u0647\u064f\u0648\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0646\u064f\u0648\u0631\u0656 \u0645\u0651\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0647\u0650\u06e6\u06da \u0641\u064e\u0648\u064e\u064a\u06e1\u0644\u065e \u0644\u0651\u0650\u0644\u06e1\u0642\u064e\u0670\u0633\u0650\u064a\u064e\u0629\u0650 \u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645 \u0645\u0651\u0650\u0646 \u0630\u0650\u0643\u06e1\u0631\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0641\u0650\u064a \u0636\u064e\u0644\u064e\u0670\u0644\u0656 \u0645\u0651\u064f\u0628\u0650\u064a\u0646\u064d"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646", "word_translation": "So is (one for) whom", "word_transliteration": "afaman"}, {"word_arabic_uthmani": "\u0634\u064e\u0631\u064e\u062d\u064e", "word_translation": "Allah has expanded", "word_transliteration": "sharaha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah has expanded", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u06e1\u0631\u064e\u0647\u064f\u06e5", "word_translation": "his breast", "word_transliteration": "sadrahu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0625\u0650\u0633\u06e1\u0644\u064e\u0670\u0645\u0650", "word_translation": "for Islam", "word_transliteration": "lil'is'lami"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0648\u064e", "word_translation": "so he", "word_transliteration": "fahuwa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "(is) upon", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u0631\u0656", "word_translation": "a light", "word_transliteration": "nurin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0647\u0650\u06e6\u06da", "word_translation": "his Lord", "word_transliteration": "rabbihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u064e\u064a\u06e1\u0644\u065e", "word_translation": "So woe", "word_transliteration": "fawaylun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0642\u064e\u0670\u0633\u0650\u064a\u064e\u0629\u0650", "word_translation": "to (those are) hardened", "word_transliteration": "lil'qasiyati"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645", "word_translation": "their hearts", "word_transliteration": "qulubuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0630\u0650\u0643\u06e1\u0631\u0650", "word_translation": "(the) remembrance of Allah", "word_transliteration": "dhik'ri"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(the) remembrance of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(are) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u064e\u0670\u0644\u0656", "word_translation": "error", "word_transliteration": "dalalin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u0650\u064a\u0646\u064d", "word_translation": "clear", "word_transliteration": "mubinin"}]}