{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0646\u06e1 \u0639\u064e\u0645\u0650\u0644\u064e \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627 \u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0633\u064e\u0627\u0653\u0621\u064e \u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d7 \u0648\u064e\u0645\u064e\u0627 \u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0628\u0650\u0638\u064e\u0644\u0651\u064e\u0640\u0670\u0645\u0656 \u0644\u0651\u0650\u0644\u06e1\u0639\u064e\u0628\u0650\u064a\u062f\u0650"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0646\u06e1", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064e", "word_translation": "does", "word_transliteration": "amila"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627", "word_translation": "righteous deeds", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "then it is for his soul", "word_transliteration": "falinafsihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u064e\u0627\u0653\u0621\u064e", "word_translation": "does evil", "word_transliteration": "asaa"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d7", "word_translation": "then it is against it", "word_transliteration": "fa'alayha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064e", "word_translation": "(is) your Lord", "word_transliteration": "rabbuka"}, {"word_arabic_uthmani": "\u0628\u0650\u0638\u064e\u0644\u0651\u064e\u0640\u0670\u0645\u0656", "word_translation": "unjust", "word_transliteration": "bizallamin"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0639\u064e\u0628\u0650\u064a\u062f\u0650", "word_translation": "to His slaves", "word_transliteration": "lil'abidi"}]}