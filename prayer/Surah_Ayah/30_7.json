{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0638\u064e\u0670\u0647\u0650\u0631\u0657\u0627 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0646\u0650 \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0647\u064f\u0645\u06e1 \u063a\u064e\u0670\u0641\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "They know", "word_transliteration": "ya'lamuna"}, {"word_arabic_uthmani": "\u0638\u064e\u0670\u0647\u0650\u0631\u0657\u0627", "word_translation": "(the) apparent", "word_transliteration": "zahiran"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650", "word_translation": "the life", "word_transliteration": "al-hayati"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "but they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "about", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "the Hereafter", "word_transliteration": "al-akhirati"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "[they]", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u063a\u064e\u0670\u0641\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "(are) heedless", "word_transliteration": "ghafiluna"}]}