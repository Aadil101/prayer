{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0644\u064e\u0627 \u064a\u064f\u062e\u06e1\u0644\u0650\u0641\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0639\u06e1\u062f\u064e\u0647\u064f\u06e5 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e \u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0644\u064e\u0627 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e", "word_translation": "(It is the) Promise", "word_transliteration": "wa'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Does) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u062e\u06e1\u0644\u0650\u0641\u064f", "word_translation": "fail", "word_transliteration": "yukh'lifu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e\u0647\u064f\u06e5", "word_translation": "(in) His promise", "word_transliteration": "wa'dahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e", "word_translation": "but", "word_transliteration": "walakinna"}, {"word_arabic_uthmani": "\u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064e", "word_translation": "most (of)", "word_transliteration": "akthara"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "[the] people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "know", "word_transliteration": "ya'lamuna"}]}