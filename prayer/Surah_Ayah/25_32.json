{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u0646\u064f\u0632\u0651\u0650\u0644\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064f \u062c\u064f\u0645\u06e1\u0644\u064e\u0629\u0657 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657\u06da \u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0644\u0650\u0646\u064f\u062b\u064e\u0628\u0651\u0650\u062a\u064e \u0628\u0650\u0647\u0650\u06e6 \u0641\u064f\u0624\u064e\u0627\u062f\u064e\u0643\u064e\u06d6 \u0648\u064e\u0631\u064e\u062a\u0651\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f \u062a\u064e\u0631\u06e1\u062a\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "Why not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u0646\u064f\u0632\u0651\u0650\u0644\u064e", "word_translation": "was revealed", "word_transliteration": "nuzzila"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064f", "word_translation": "the Quran", "word_transliteration": "al-qur'anu"}, {"word_arabic_uthmani": "\u062c\u064f\u0645\u06e1\u0644\u064e\u0629\u0657", "word_translation": "all at once", "word_transliteration": "jum'latan"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657\u06da", "word_translation": "all at once", "word_transliteration": "wahidatan"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0644\u0650\u0646\u064f\u062b\u064e\u0628\u0651\u0650\u062a\u064e", "word_translation": "that We may strengthen", "word_transliteration": "linuthabbita"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "thereby", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064f\u0624\u064e\u0627\u062f\u064e\u0643\u064e\u06d6", "word_translation": "your heart", "word_transliteration": "fuadaka"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062a\u0651\u064e\u0644\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "and We have recited it", "word_transliteration": "warattalnahu"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u06e1\u062a\u0650\u064a\u0644\u0657\u0627", "word_translation": "(with distinct) recitation", "word_transliteration": "tartilan"}]}