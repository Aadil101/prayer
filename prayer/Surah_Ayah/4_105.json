{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0644\u0650\u062a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e \u0628\u064e\u064a\u06e1\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0628\u0650\u0645\u064e\u0627\u0653 \u0623\u064e\u0631\u064e\u0649\u0670\u0643\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0646 \u0644\u0651\u0650\u0644\u06e1\u062e\u064e\u0627\u0653\u0626\u0650\u0646\u0650\u064a\u0646\u064e \u062e\u064e\u0635\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We (have) sent down", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "with the truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e", "word_translation": "so that you may judge", "word_transliteration": "litahkuma"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e", "word_translation": "between", "word_transliteration": "bayna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627\u0653", "word_translation": "with what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0649\u0670\u0643\u064e", "word_translation": "has shown you", "word_transliteration": "araka"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0646", "word_translation": "be", "word_transliteration": "takun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u062e\u064e\u0627\u0653\u0626\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "for the deceitful", "word_transliteration": "lil'khainina"}, {"word_arabic_uthmani": "\u062e\u064e\u0635\u0650\u064a\u0645\u0657\u0627", "word_translation": "a pleader", "word_transliteration": "khasiman"}]}