{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0644\u064e\u0639\u0650\u0628\u065e \u0648\u064e\u0644\u064e\u0647\u06e1\u0648\u065e\u06da \u0648\u064e\u0625\u0650\u0646 \u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u064a\u064f\u0624\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1 \u0623\u064f\u062c\u064f\u0648\u0631\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u06e1\u0643\u064f\u0645\u06e1 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f", "word_translation": "the life", "word_transliteration": "al-hayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u0650\u0628\u065e", "word_translation": "(is) play", "word_transliteration": "la'ibun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u06e1\u0648\u065e\u06da", "word_translation": "and amusement", "word_transliteration": "walahwun"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "you believe", "word_transliteration": "tu'minu"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "and fear (Allah)", "word_transliterati