{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0646\u064e \u0645\u064e\u0627\u0653 \u0621\u064e\u0627\u062a\u064e\u0648\u0627\u0652 \u0648\u0651\u064e\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u062c\u0650\u0644\u064e\u0629\u064c \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0646\u064e", "word_translation": "give", "word_transliteration": "yu'tuna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u0648\u0627\u0652", "word_translation": "they give", "word_transliteration": "ataw"}, {"word_arabic_uthmani": "\u0648\u0651\u064e\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1", "word_translation": "while their hearts", "word_transliteration": "waqulubuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u0650\u0644\u064e\u0629\u064c", "word_translation": "(are) fearful", "word_transliteration": "wajilatun"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "because they", "word_transliteration": "annahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0631\u064e\u0670\u062c\u0650\u0639\u064f\u0648\u0