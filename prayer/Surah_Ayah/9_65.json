{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u0633\u064e\u0623\u064e\u0644\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0646\u0651\u064e \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0643\u064f\u0646\u0651\u064e\u0627 \u0646\u064e\u062e\u064f\u0648\u0636\u064f \u0648\u064e\u0646\u064e\u0644\u06e1\u0639\u064e\u0628\u064f\u06da \u0642\u064f\u0644\u06e1 \u0623\u064e\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0633\u06e1\u062a\u064e\u0647\u06e1\u0632\u0650\u0621\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "And if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0633\u064e\u0623\u064e\u0644\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "you ask them", "word_transliteration": "sa-altahum"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0646\u0651\u064e", "word_translation": "surely they will say", "word_transliteration": "layaqulunna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "we were", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0646\u064e\u062e\u064f\u0648\u0636\u064f", "word_translation": "conversing", "word_transliteration": "nakhudu"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0644\u06e1\u0639\u064e\u0628\u064f\u06da", "word_translation": "and playing", "word_transliteration": "wanal'abu"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Is it Allah", "word_transliteration": "abil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6", "word_translation": "and His Verses", "word_transliteration": "waayatihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "(that) you were", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u062a\u064e\u0647\u06e1\u0632\u0650\u0621\u064f\u0648\u0646\u064e", "word_translation": "mocking", "word_transliteration": "tastahziuna"}]}