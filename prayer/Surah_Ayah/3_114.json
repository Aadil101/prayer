{"ayahs": {"ayah_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650 \u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u06e1\u0645\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0650 \u0648\u064e\u064a\u064e\u0646\u06e1\u0647\u064e\u0648\u06e1\u0646\u064e \u0639\u064e\u0646\u0650 \u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650 \u0648\u064e\u064a\u064f\u0633\u064e\u0670\u0631\u0650\u0639\u064f\u0648\u0646\u064e \u0641\u0650\u064a \u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u064e\u0670\u062a\u0650\u06d6 \u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "They believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "and the Day", "word_transliteration": "wal-yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650", "word_translation": "the Last", "word_transliteration": "al-akhiri"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "and they enjoin", "word_transliteration": "wayamuruna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0645\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0650", "word_translation": "[with] the right", "word_transliteration": "bil-ma'rufi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0646\u06e1\u0647\u064e\u0648\u06e1\u0646\u064e", "word_translation": "and forbid", "word_transliteration": "wayanhawna"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "[from]", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650", "word_translation": "the wrong", "word_transliteration": "al-munkari"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0633\u064e\u0670\u0631\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "and they hasten", "word_transliteration": "wayusari'una"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u064e\u0670\u062a\u0650\u06d6", "word_translation": "the good deeds", "word_transliteration": "al-khayrati"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "And those", "word_transliteration": "wa-ulaika"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "(are) from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "the righteous", "word_transliteration": "al-salihina"}]}