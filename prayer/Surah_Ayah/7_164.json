{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0642\u064e\u0627\u0644\u064e\u062a\u06e1 \u0623\u064f\u0645\u0651\u064e\u0629\u065e \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0644\u0650\u0645\u064e \u062a\u064e\u0639\u0650\u0638\u064f\u0648\u0646\u064e \u0642\u064e\u0648\u06e1\u0645\u064b\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0647\u064f\u0645\u06e1 \u0623\u064e\u0648\u06e1 \u0645\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627 \u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627\u06d6 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0645\u064e\u0639\u06e1\u0630\u0650\u0631\u064e\u0629\u064b \u0625\u0650\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e\u062a\u06e1", "word_translation": "said", "word_transliteration": "qalat"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u065e", "word_translation": "a community", "word_transliteration": "ummatun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "among them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e", "word_translation": "Why", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u0650\u0638\u064f\u0648\u0646\u064e", "word_translation": "(do) you preach", "word_transliteration": "ta'izuna"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u064b\u0627", "word_translation": "a people", "word_transliteration": "qawman"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(whom) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0647\u064f\u0645\u06e1", "word_translation": "(is going to) destroy them", "word_transliteration": "muh'likuhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0645\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u0645\u06e1", "word_translation": "punish them", "word_transliteration": "mu'adhibuhum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627", "word_translation": "(with) a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627\u06d6", "word_translation": "severe", "word_transliteration": "shadidan"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u06e1\u0630\u0650\u0631\u064e\u0629\u064b", "word_translation": "To be absolved", "word_transliteration": "ma'dhiratan"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "before", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and that they may", "word_transliteration": "wala'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "become righteous", "word_transliteration": "yattaquna"}]}