{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0647\u0650\u0646\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0671\u0628\u06e1\u062a\u0650\u063a\u064e\u0627\u0653\u0621\u0650 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650\u06d6 \u0625\u0650\u0646 \u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u062a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0643\u064e\u0645\u064e\u0627 \u062a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e\u06d6 \u0648\u064e\u062a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u064e\u0627 \u0644\u064e\u0627 \u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e\u06d7 \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u0650\u064a\u0645\u064b\u0627 \u062d\u064e\u0643\u0650\u064a\u0645\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0647\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "be weak", "word_transliteration": "tahinu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0628\u06e1\u062a\u0650\u063a\u064e\u0627\u0653\u0621\u0650", "word_translation": "pursuit", "word_transliteration": "ib'tighai"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650\u06d6", "word_translation": "(of) the people", "word_transliteration": "al-qawmi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "you are", "word_transliteration": "takunu"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "suffering", "word_transliteration": "talamuna"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "then indeed, they", "word_transliteration": "fa-innahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "are (also) suffering", "word_transliteration": "yalamuna"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "like what", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e\u06d6", "word_translation": "you are suffering", "word_transliteration": "talamuna"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e", "word_translation": "while you (have) hope", "word_transliteration": "watarjuna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e\u06d7", "word_translation": "they hope", "word_transliteration": "yarjuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064b\u0627", "word_translation": "All-Knowing", "word_transliteration": "aliman"}, {"word_arabic_uthmani": "\u062d\u064e\u0643\u0650\u064a\u0645\u064b\u0627", "word_translation": "All-Wise", "word_transliteration": "hakiman"}]}