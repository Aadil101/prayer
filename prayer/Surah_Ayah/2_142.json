{"ayahs": {"ayah_uthmani": "\u06de\u0633\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0644\u0633\u0651\u064f\u0641\u064e\u0647\u064e\u0627\u0653\u0621\u064f \u0645\u0650\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0645\u064e\u0627 \u0648\u064e\u0644\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u0639\u064e\u0646 \u0642\u0650\u0628\u06e1\u0644\u064e\u062a\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0651\u064e\u062a\u0650\u064a \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06da \u0642\u064f\u0644 \u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u0645\u064e\u0634\u06e1\u0631\u0650\u0642\u064f \u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u063a\u06e1\u0631\u0650\u0628\u064f\u06da \u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0656 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656"}, "words": [{"word_arabic_uthmani": "\u06de\u0633\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "Will say", "word_transliteration": "sayaqulu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u0641\u064e\u0647\u064e\u0627\u0653\u0621\u064f", "word_translation": "the foolish ones", "word_transliteration": "al-sufahau"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "What", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "(has) turned them", "word_transliteration": "wallahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0642\u0650\u0628\u06e1\u0644\u064e\u062a\u0650\u0647\u0650\u0645\u064f", "word_translation": "their direction of prayer", "word_transliteration": "qib'latihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u062a\u0650\u064a", "word_translation": "which", "word_transliteration": "allati"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they were used to", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06da", "word_translation": "[on it]", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0642\u064f\u0644", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "For Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0634\u06e1\u0631\u0650\u0642\u064f", "word_translation": "(is) the east", "word_transliteration": "al-mashriqu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u063a\u06e1\u0631\u0650\u0628\u064f\u06da", "word_translation": "and the west", "word_transliteration": "wal-maghribu"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650\u064a", "word_translation": "He guides", "word_transliteration": "yahdi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0656", "word_translation": "a path", "word_transliteration": "siratin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u06