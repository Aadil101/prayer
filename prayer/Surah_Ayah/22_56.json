{"ayahs": {"ayah_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0644\u06e1\u0643\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650 \u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064f \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1\u06da \u0641\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0641\u0650\u064a \u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u0650 \u0671\u0644\u0646\u0651\u064e\u0639\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0644\u06e1\u0643\u064f", "word_translation": "The Sovereignty", "word_transliteration": "al-mul'ku"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "(on) that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "(will be) for Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064f", "word_translation": "He will judge", "word_transliteration": "yahkumu"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "between them", "word_transliteration": "baynahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "So those who", "word_transliteration": "fa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and did", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(will be) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u0650", "word_translation": "Gardens", "word_transliteration": "jannati"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0639\u0650\u064a\u0645\u0650", "word_translation": "(of) Delight", "word_transliteration": "al-na'imi"}]}