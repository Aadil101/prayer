{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0644\u064e\u0648\u06e1 \u0643\u064e\u0627\u0646\u064e \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0645\u0651\u064e\u0627 \u0633\u064e\u0628\u064e\u0642\u064f\u0648\u0646\u064e\u0627\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u06da \u0648\u064e\u0625\u0650\u0630\u06e1 \u0644\u064e\u0645\u06e1 \u064a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6 \u0641\u064e\u0633\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0641\u06e1\u0643\u065e \u0642\u064e\u062f\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And say", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "of those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "it had been", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "good", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u064e\u0642\u064f\u0648\u0646\u064e\u0627\u0653", "word_translation": "they (would) have preceded us", "word_transliteration": "sabaquna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u06da", "word_translation": "to it", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "they (are) guided", "word_transliteration": "yahtadu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "by it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "they say", "word_transliteration": "fasayaquluna"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0641\u06e1\u0643\u065e", "word_translation": "(is) a lie", "word_transliteration": "if'kun"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u0650\u064a\u0645\u065e", "word_translation": "ancient", "word_transliteration": "qadimun"}]}