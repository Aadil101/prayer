{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650 \u0645\u064e\u0627\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u0641\u064e\u0642\u064e\u062f\u0650 \u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0648\u0627\u0652\u06d6 \u0648\u0651\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0634\u0650\u0642\u064e\u0627\u0642\u0656\u06d6 \u0641\u064e\u0633\u064e\u064a\u064e\u0643\u06e1\u0641\u0650\u064a\u0643\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1", "word_translation": "So if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "they believe[d]", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650", "word_translation": "in (the) like", "word_transliteration": "bimith'li"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "(of) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645", "word_translation": "you have believed", "word_transliteration": "amantum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "in [it]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u0650", "word_translation": "then indeed", "word_transliteration": "faqadi"}, {"word_arabic_uthmani": "\u0671\u0647\u06e1\u062a\u064e\u062f\u064e\u0648\u0627\u0652\u06d6", "word_translation": "they are (rightly) guided", "word_transliteration": "ih'tadaw"}, {"word_arabic_uthmani": "\u0648\u0651\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they turn away", "word_transliteration": "tawallaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(are) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0634\u0650\u0642\u064e\u0627\u0642\u0656\u06d6", "word_translation": "dissension", "word_transliteration": "shiqaqin"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u064a\u064e\u0643\u06e1\u0641\u0650\u064a\u0643\u064e\u0647\u064f\u0645\u064f", "word_translation": "So will suffice you against them", "word_transliteration": "fasayakfikahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f", "word_translation": "(is) the All-Hearing", "word_transliteration": "al-sami'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f", "word_translation": "the All-Knowing", "word_transliteration": "al-'alimu"}]}