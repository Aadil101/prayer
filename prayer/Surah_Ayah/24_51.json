{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064e \u0642\u064e\u0648\u06e1\u0644\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u062f\u064f\u0639\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0644\u0650\u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u0646 \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652 \u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627 \u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627\u06da \u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0644\u064e", "word_translation": "(the) statement", "word_transliteration": "qawla"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(of) the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u062f\u064f\u0639\u064f\u0648\u0653\u0627\u0652", "word_translation": "they are called", "word_transliteration": "du'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e", "word_translation": "to judge", "word_transliteration": "liyahkuma"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "between them", "word_transliteration": "baynahum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "(is) that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0627\u0652", "word_translation": "they say", "word_transliteration": "yaqulu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u0639\u06e1\u0646\u064e\u0627", "word_translation": "We hear", "word_transliteration": "sami'na"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627\u06da", "word_translation": "and we obey", "word_transliteration": "wa-ata'na"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "And those", "word_transliteration": "wa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(are) the successful", "word_transliteration": "al-muf'lihuna"}]}