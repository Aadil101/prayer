{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u06d6 \u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0645\u064e\u0627 \u062d\u064f\u0645\u0651\u0650\u0644\u064e \u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645 \u0645\u0651\u064e\u0627 \u062d\u064f\u0645\u0651\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0625\u0650\u0646 \u062a\u064f\u0637\u0650\u064a\u0639\u064f\u0648\u0647\u064f \u062a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652\u06da \u0648\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650 \u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "Obey", "word_transliteration": "ati'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "and obey", "word_transliteration": "wa-ati'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u06d6", "word_translation": "the Messenger", "word_transliteration": "al-rasula"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "but if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "you turn away", "word_transliteration": "tawallaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "upon him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062d\u064f\u0645\u0651\u0650\u0644\u064e", "word_translation": "(is) placed on him", "word_transliteration": "hummila"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645", "word_translation": "and on you", "word_transliteration": "wa'alaykum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062d\u064f\u0645\u0651\u0650\u0644\u06e1\u062a\u064f\u0645\u06e1\u06d6", "word_translation": "(is) placed on you", "word_transliteration": "hummil'tum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064f\u0637\u0650\u064a\u0639\u064f\u0648\u0647\u064f", "word_translation": "you obey him", "word_transliteration": "tuti'uhu"}, {"word_arabic_uthmani": "\u062a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652\u06da", "word_translation": "you will be guided", "word_transliteration": "tahtadu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "(is) on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\