{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e \u0648\u064e\u064a\u06e1\u0644\u064e\u0643\u064f\u0645\u06e1 \u062b\u064e\u0648\u064e\u0627\u0628\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062e\u064e\u064a\u06e1\u0631\u065e \u0644\u0651\u0650\u0645\u064e\u0646\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064e \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064e \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627\u06da \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u0644\u064e\u0642\u0651\u064e\u0649\u0670\u0647\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "But said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652", "word_translation": "were given", "word_transliteration": "utu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e", "word_translation": "the knowledge", "word_transliteration": "al-'il'ma"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u06e1\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "Woe to you!", "word_transliteration": "waylakum"}, {"word_arabic_uthmani": "\u062b\u064e\u0648\u064e\u0627\u0628\u064f", "word_translation": "(The) reward", "word_transliteration": "thawabu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e", "word_translation": "(is) better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0645\u064e\u0646\u06e1", "word_translation": "for (he) who", "word_transliteration": "liman"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064e", "word_translation": "believes", "word_transliteration": "amana"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064e", "word_translation": "and does", "word_transliteration": "wa'amila"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627\u06da", "word_translation": "righteous (deeds)", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064f\u0644\u064e\u0642\u0651\u064e\u0649\u0670\u0647\u064e\u0627\u0653", "word_translation": "it is granted", "word_transliteration": "yulaqqaha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(to) the patient ones", "word_transliteration": "al-sabiruna"}]}