{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0646\u0651\u064e\u0641\u06e1\u0633\u0656 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0656 \u0641\u064e\u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u064e\u0631\u0651\u065e \u0648\u064e\u0645\u064f\u0633\u06e1\u062a\u064e\u0648\u06e1\u062f\u064e\u0639\u065e\u06d7 \u0642\u064e\u062f\u06e1 \u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650 \u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0641\u06e1\u0642\u064e\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645", "word_translation": "(has) produced you", "word_transliteration": "ansha-akum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0641\u06e1\u0633\u0656", "word_translation": "a soul", "word_transliteration": "nafsin"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0656", "word_translation": "single", "word_transliteration": "wahidatin"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u064e\u0631\u0651\u065e", "word_translation": "so (there is) a place of dwelling", "word_transliteration": "famus'taqarrun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064f\u0633\u06e1\u062a\u064e\u0648\u06e1\u062f\u064e\u0639\u065e\u06d7", "word_translation": "and a resting place", "word_transliteration": "wamus'tawda'un"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have made clear", "word_transliteration": "fassalna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650", "word_translation": "the Signs", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064e\u0641\u06e1\u0642\u064e\u0647\u064f\u0648\u0646\u064e", "word_translation": "(who) understand", "word_transliteration": "yafqahuna"}]}