{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064f\u0637\u0650\u0639\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0645\u064e\u0639\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064e\u0646\u06e1\u0639\u064e\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e \u0648\u064e\u0671\u0644\u0635\u0651\u0650\u062f\u0651\u0650\u064a\u0642\u0650\u064a\u0646\u064e \u0648\u064e\u0671\u0644\u0634\u0651\u064f\u0647\u064e\u062f\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e\u06da \u0648\u064e\u062d\u064e\u0633\u064f\u0646\u064e \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0631\u064e\u0641\u0650\u064a\u0642\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064f\u0637\u0650\u0639\u0650", "word_translation": "obeys", "word_transliteration": "yuti'i"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e", "word_translation": "and the Messenger", "word_transliteration": "wal-rasula"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e", "word_translation": "(will be) with", "word_transliteration": "ma'a"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e1\u0639\u064e\u0645\u064e", "word_translation": "has bestowed (His) Favor", "word_transliteration": "an'ama"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0628\u0650\u064a\u0651\u0650\u0640\u06e7\u0646\u064e", "word_translation": "the Prophets", "word_transliteration": "al-nabiyina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0635\u0651\u0650\u062f\u0651\u0650\u064a\u0642\u0650\u064a\u0646\u064e", "word_translation": "and the truthful", "word_transliteration": "wal-sidiqina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0634\u0651\u064f\u0647\u064e\u062f\u064e\u0627\u0653\u0621\u0650", "word_translation": "and the martyrs", "word_transliteration": "wal-shuhadai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e\u06da", "word_translation": "and the righteous", "word_transliteration": "wal-salihina"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u064e\u0633\u064f\u0646\u064e", "word_translation": "And excellent", "word_transliteration": "wahasuna"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "(are) those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0631\u064e\u0641\u0650\u064a\u0642\u0657\u0627", "word_translation": "companion(s)", "word_transliteration": "rafiqan"}]}