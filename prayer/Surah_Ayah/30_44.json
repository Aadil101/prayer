{"ayahs": {"ayah_uthmani": "\u0645\u064e\u0646 \u0643\u064e\u0641\u064e\u0631\u064e \u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0643\u064f\u0641\u06e1\u0631\u064f\u0647\u064f\u06e5\u06d6 \u0648\u064e\u0645\u064e\u0646\u06e1 \u0639\u064e\u0645\u0650\u0644\u064e \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627 \u0641\u064e\u0644\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u0645\u06e1\u0647\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064e", "word_translation": "disbelieves", "word_transliteration": "kafara"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "then against him", "word_transliteration": "fa'alayhi"}, {"word_arabic_uthmani": "\u0643\u064f\u0641\u06e1\u0631\u064f\u0647\u064f\u06e5\u06d6", "word_translation": "(is) his disbelief", "word_transliteration": "kuf'ruhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064e", "word_translation": "does", "word_transliteration": "amila"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627", "word_translation": "righteousness", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1", "word_translation": "then for themselves", "word_transliteration": "fali-anfusihim"}, {"word_arabic_uthmani": "\u064a\u064e\u0645\u06e1\u0647\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "they are preparing", "word_transliteration": "yamhaduna"}]}