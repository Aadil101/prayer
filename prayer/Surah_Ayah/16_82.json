{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "Then if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they turn away", "word_transliteration": "tawallaw"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "upon you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f", "word_translation": "(is) the conveyance", "word_transliteration": "al-balaghu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f", "word_translation": "the clear", "word_transliteration": "al-mubinu"}]}