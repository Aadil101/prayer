{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u0627 \u062a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0627\u0652 \u0644\u0650\u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650 \u0648\u064e\u0671\u0644\u06e1\u063a\u064e\u0648\u06e1\u0627\u0652 \u0641\u0650\u064a\u0647\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u063a\u06e1\u0644\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "listen", "word_transliteration": "tasma'u"}, {"word_arabic_uthmani": "\u0644\u0650\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "to this", "word_transliteration": "lihadha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650", "word_translation": "Quran", "word_transliteration": "al-qur'ani"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u063a\u064e\u0648\u06e1\u0627\u0652", "word_translation": "and make noise", "word_transliteration": "wal-ghaw"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "therein", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u063a\u06e1\u0644\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "overcome", "word_transliteration": "taghlibuna"}]}