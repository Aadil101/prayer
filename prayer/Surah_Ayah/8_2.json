{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u0630\u064f\u0643\u0650\u0631\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u062c\u0650\u0644\u064e\u062a\u06e1 \u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u062a\u064f\u0644\u0650\u064a\u064e\u062a\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f\u0647\u064f\u06e5 \u0632\u064e\u0627\u062f\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1 \u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627 \u0648\u064e\u0639\u064e\u0644\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0630\u064f\u0643\u0650\u0631\u064e", "word_translation": "is mentioned", "word_transliteration": "dhukira"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u0650\u0644\u064e\u062a\u06e1", "word_translation": "feel fear", "word_transliteration": "wajilat"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their hearts", "word_transliteration": "qulubuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "and when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u062a\u064f\u0644\u0650\u064a\u064e\u062a\u06e1", "word_translation": "are recited", "word_transliteration": "tuliyat"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f\u0647\u064f\u06e5", "word_translation": "His Verses", "word_transliteration": "ayatuhu"}, {"word_arabic_uthmani": "\u0632\u064e\u0627\u062f\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "they increase them", "word_transliteration": "zadathum"}, {"word_arabic_uthmani": "\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0657\u0627", "word_translation": "(in) faith", "word_transliteration": "imanan"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "and upon", "word_transliteration": "wa'ala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "they put their trust", "word_transliteration": "yatawakkaluna"}]}