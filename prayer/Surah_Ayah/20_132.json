{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u06e1\u0645\u064f\u0631\u06e1 \u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u064e \u0628\u0650\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u0650 \u0648\u064e\u0671\u0635\u06e1\u0637\u064e\u0628\u0650\u0631\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6 \u0644\u064e\u0627 \u0646\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0643\u064e \u0631\u0650\u0632\u06e1\u0642\u0657\u0627\u06d6 \u0646\u0651\u064e\u062d\u06e1\u0646\u064f \u0646\u064e\u0631\u06e1\u0632\u064f\u0642\u064f\u0643\u064e\u06d7 \u0648\u064e\u0671\u0644\u06e1\u0639\u064e\u0670\u0642\u0650\u0628\u064e\u0629\u064f \u0644\u0650\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u06e1\u0645\u064f\u0631\u06e1", "word_translation": "And enjoin", "word_transliteration": "wamur"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u064e", "word_translation": "(on) your family", "word_transliteration": "ahlaka"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u0650", "word_translation": "the prayer", "word_transliteration": "bil-salati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0635\u06e1\u0637\u064e\u0628\u0650\u0631\u06e1", "word_translation": "and be steadfast", "word_transliteration": "wa-is'tabir"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627\u06d6", "word_translation": "therein", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "Not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u0646\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0643\u064e", "word_translation": "We ask you", "word_transliteration": "nasaluka"}, {"word_arabic_uthmani": "\u0631\u0650\u0632\u06e1\u0642\u0657\u0627\u06d6", "word_translation": "(for) provision", "word_transliteration": "riz'qan"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u062d\u06e1\u0646\u064f", "word_translation": "We", "word_transliteration": "nahnu"}, {"word_arabic_uthmani": "\u0646\u064e\u0631\u06e1\u0632\u064f\u0642\u064f\u0643\u064e\u06d7", "word_translation": "provide (for) you", "word_transliteration": "narzuquka"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0639\u064e\u0670\u0642\u0650\u0628\u064e\u0629\u064f", "word_translation": "and the outcome", "word_transliteration": "wal-'aqibatu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670", "word_translation": "(is) for the righteous[ness]", "word_transliteration": "lilttaqwa"}]}