{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u062d\u064e\u0627\u0635\u0650\u0628\u064b\u0627 \u0625\u0650\u0644\u0651\u064e\u0627\u0653 \u0621\u064e\u0627\u0644\u064e \u0644\u064f\u0648\u0637\u0656\u06d6 \u0646\u0651\u064e\u062c\u0651\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645 \u0628\u0650\u0633\u064e\u062d\u064e\u0631\u0656"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627\u0653", "word_translation": "Indeed We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "[We] sent", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "upon them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u062d\u064e\u0627\u0635\u0650\u0628\u064b\u0627", "word_translation": "a storm of stones", "word_transliteration": "hasiban"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627\u0653", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0644\u064e", "word_translation": "(the) family", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0644\u064f\u0648\u0637\u0656\u06d6", "word_translation": "(of) Lut", "word_transliteration": "lutin"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u062c\u0651\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645", "word_translation": "We saved them", "word_transliteration": "najjaynahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0633\u064e\u062d\u064e\u0631\u0656", "word_translation": "by dawn", "word_transliteration": "bisaharin"}]}