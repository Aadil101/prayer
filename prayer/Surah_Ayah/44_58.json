{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u0633\u0651\u064e\u0631\u06e1\u0646\u064e\u0670\u0647\u064f \u0628\u0650\u0644\u0650\u0633\u064e\u0627\u0646\u0650\u0643\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Indeed", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u0651\u064e\u0631\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We have made it easy", "word_transliteration": "yassarnahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0644\u0650\u0633\u064e\u0627\u0646\u0650\u0643\u064e", "word_translation": "in your tongue", "word_transliteration": "bilisanika"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "take heed", "word_transliteration": "yatadhakkaruna"}]}