{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0647\u064f\u062f\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0628\u0650\u0647\u0650\u06e6 \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0645\u0650\u0646\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0647\u0650\u06e6\u06da \u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652 \u0644\u064e\u062d\u064e\u0628\u0650\u0637\u064e \u0639\u064e\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0647\u064f\u062f\u064e\u0649", "word_translation": "(is the) Guidance", "word_transliteration": "huda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650\u064a", "word_translation": "He guides", "word_transliteration": "yahdi"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0647\u0650\u06e6\u06da", "word_translation": "His slaves", "word_transliteration": "ibadihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "But if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652", "word_translation": "they (had) associated partners (with Allah)", "word_transliteration": "ashraku"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u064e\u0628\u0650\u0637\u064e", "word_translation": "surely (would be) worthless", "word_transliteration": "lahabita"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645", "word_translation": "for them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used to", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ya'maluna"}]}