{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u064a\u064e\u0631\u06e1\u0641\u064e\u0639\u064f \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u0640\u06e7\u0645\u064f \u0671\u0644\u06e1\u0642\u064e\u0648\u064e\u0627\u0639\u0650\u062f\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0628\u064e\u064a\u06e1\u062a\u0650 \u0648\u064e\u0625\u0650\u0633\u06e1\u0645\u064e\u0670\u0639\u0650\u064a\u0644\u064f \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u062a\u064e\u0642\u064e\u0628\u0651\u064e\u0644\u06e1 \u0645\u0650\u0646\u0651\u064e\u0627\u0653\u06d6 \u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0623\u064e\u0646\u062a\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f \u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u0641\u064e\u0639\u064f", "word_translation": "(was) raising", "word_transliteration": "yarfa'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u0640\u06e7\u0645\u064f", "word_translation": "Ibrahim", "word_transliteration": "ib'rahimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u064e\u0627\u0639\u0650\u062f\u064e", "word_translation": "the foundations", "word_transliteration": "al-qawa'ida"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u064a\u06e1\u062a\u0650", "word_translation": "the House", "word_transliteration": "al-bayti"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0633\u06e1\u0645\u064e\u0670\u0639\u0650\u064a\u0644\u064f", "word_translation": "and Ishmael", "word_transliteration": "wa-is'ma'ilu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "(saying), \"Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064e\u0628\u0651\u064e\u0644\u06e1", "word_translation": "Accept", "word_transliteration": "taqabbal"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0651\u064e\u0627\u0653\u06d6", "word_translation": "from us", "word_transliteration": "minna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "Indeed You", "word_transliteration": "innaka"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064e", "word_translation": "[You] (are)", "word_transliteration": "anta"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u0650\u064a\u0639\u064f", "word_translation": "the All-Hearing", "word_transliteration": "al-sami'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0644\u0650\u064a\u0645\u064f", "word_translation": "the All-Knowing", "word_transliteration": "al-'alimu"}]}