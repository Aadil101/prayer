{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0671\u0639\u06e1\u062a\u064e\u0632\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0627 \u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e \u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e\u06d6 \u0648\u064e\u0643\u064f\u0644\u0651\u0657\u0627 \u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0646\u064e\u0628\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "So when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u062a\u064e\u0632\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "he left them", "word_transliteration": "i'tazalahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0646\u064e", "word_translation": "they worshipped", "word_transliteration": "ya'buduna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "besides Allah", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650", "word_translation": "besides Allah", "word_transliteration": "duni"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "besides Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627", "word_translation": "[and] We bestowed", "word_transliteration": "wahabna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "[to] him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e", "word_translation": "Ishaq", "word_transliteration": "is'haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e\u06d6", "word_translation": "and Yaqub", "word_transliteration": "waya'quba"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0644\u0651\u0657\u0627", "word_translation": "and each (of them)", "word_transliteration": "wakullan"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We made", "word_transliteration": "ja'alna"}, {"word_arabic_uthmani": "\u0646\u064e\u0628\u0650\u064a\u0651\u0657\u0627", "word_translation": "a Prophet", "word_transliteration": "nabiyyan"}]}