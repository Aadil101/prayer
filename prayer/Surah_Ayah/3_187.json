{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0623\u064e\u062e\u064e\u0630\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u0650\u064a\u062b\u064e\u0670\u0642\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0644\u064e\u062a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064f\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e\u0647\u064f\u06e5 \u0641\u064e\u0646\u064e\u0628\u064e\u0630\u064f\u0648\u0647\u064f \u0648\u064e\u0631\u064e\u0627\u0653\u0621\u064e \u0638\u064f\u0647\u064f\u0648\u0631\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0671\u0634\u06e1\u062a\u064e\u0631\u064e\u0648\u06e1\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6 \u062b\u064e\u0645\u064e\u0646\u0657\u0627 \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627\u06d6 \u0641\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0645\u064e\u0627 \u064a\u064e\u0634\u06e1\u062a\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0630\u064e", "word_translation": "took", "word_transliteration": "akhadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u0650\u064a\u062b\u064e\u0670\u0642\u064e", "word_translation": "a Covenant", "word_transliteration": "mithaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(from) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652", "word_translation": "were given", "word_transliterat