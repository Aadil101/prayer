{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e \u0643\u064f\u0644\u0651\u064e \u0634\u064e\u064a\u06e1\u0621\u064d \u062e\u064e\u0644\u064e\u0642\u064e\u0647\u064f\u06e5\u06d6 \u0648\u064e\u0628\u064e\u062f\u064e\u0623\u064e \u062e\u064e\u0644\u06e1\u0642\u064e \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u0650 \u0645\u0650\u0646 \u0637\u0650\u064a\u0646\u0656"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "The One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e", "word_translation": "made good", "word_transliteration": "ahsana"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "every", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u064d", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e\u0647\u064f\u06e5\u06d6", "word_translation": "He created", "word_transliteration": "khalaqahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064e\u062f\u064e\u0623\u064e", "word_translation": "and He began", "word_transliteration": "wabada-a"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u06e1\u0642\u064e", "word_translation": "(the) creation", "word_transliteration": "khalqa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u0650", "word_translation": "(of) man", "word_transliteration": "al-insani"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0637\u0650\u064a\u0646\u0656", "word_translation": "clay", "word_transliteration": "tinin"}]}