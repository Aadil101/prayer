{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0627 \u062c\u064e\u0639\u064e\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u0650\u0631\u064e\u062c\u064f\u0644\u0656 \u0645\u0651\u0650\u0646 \u0642\u064e\u0644\u06e1\u0628\u064e\u064a\u06e1\u0646\u0650 \u0641\u0650\u064a \u062c\u064e\u0648\u06e1\u0641\u0650\u0647\u0650\u06e6\u06da \u0648\u064e\u0645\u064e\u0627 \u062c\u064e\u0639\u064e\u0644\u064e \u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u0640\u0670\u0653\u0640\u0654\u0650\u064a \u062a\u064f\u0638\u064e\u0670\u0647\u0650\u0631\u064f\u0648\u0646\u064e \u0645\u0650\u0646\u06e1\u0647\u064f\u0646\u0651\u064e \u0623\u064f\u0645\u0651\u064e\u0647\u064e\u0670\u062a\u0650\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0645\u064e\u0627 \u062c\u064e\u0639\u064e\u0644\u064e \u0623\u064e\u062f\u06e1\u0639\u0650\u064a\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645\u06e1\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0644\u064f\u0643\u064f\u0645 \u0628\u0650\u0623\u064e\u0641\u06e1\u0648\u064e\u0670\u0647\u0650\u0643\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u0642\u064f\u0648\u0644\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0648\u064e\u0647\u064f\u0648\u064e \u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u064e"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "Not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "Allah (has) made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah (has) made", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u0650\u0631\u064e\u062c\u064f\u0644\u0656", "word_translation": "for any man", "word_transliteration": "lirajulin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "[of]", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u06e1\u0628\u064e\u064a\u06e1\u0646\u0650", "word_translation": "two hearts", "word_transliteration": "qalbayni"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062c\u064e\u0648\u06e1\u0641\u0650\u0647\u0650\u06e6\u06da", "word_translation": "his interior", "word_transliteration": "jawfihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "He (has) made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0623\u064e\u0632\u06e1\u0648\u064e\u0670\u062c\u064e\u0643\u064f\u0645\u064f", "word_translation": "your wives", "word_transliteration": "azwajakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0640\u0670\u0653\u0640\u0654\u0650\u064a", "word_translation": "whom", "word_transliteration": "allai"}, {"word_arabic_uthmani": "\u062a\u064f\u0638\u064e\u0670\u0647\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "you declare unlawful", "word_transliteration": "tuzahiruna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0646\u0651\u064e", "word_translation": "[of them]", "word_transliteration": "min'hunna"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0647\u064e\u0670\u062a\u0650\u0643\u064f\u0645\u06e1\u06da", "word_translation": "(as) your mothers", "word_transliteration": "ummahatikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "He has made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u06e1\u0639\u0650\u064a\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your adopted sons", "word_transliteration": "ad'iyaakum"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "your sons", "word_transliteration": "abnaakum"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1", "word_translation": "That", "word_transliteration": "dhalikum"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0644\u064f\u0643\u064f\u0645", "word_translation": "(is) your saying", "word_transliteration": "qawlukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0641\u06e1\u0648\u064e\u0670\u0647\u0650\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "by your mouths", "word_transliteration": "bi-afwahikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "but Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "says", "word_transliteration": "yaqulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "the truth", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650\u064a", "word_translation": "guides", "word_transliteration": "yahdi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u064e", "word_translation": "(to) the Way", "word_transliteration": "al-sabila"}]}