{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0623\u064e\u0646 \u0643\u064e\u062a\u064e\u0628\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u062c\u064e\u0644\u064e\u0627\u0653\u0621\u064e \u0644\u064e\u0639\u064e\u0630\u0651\u064e\u0628\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6 \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0639\u064e\u0630\u064e\u0627\u0628\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "And if not", "word_transliteration": "walawla"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0643\u064e\u062a\u064e\u0628\u064e", "word_translation": "(had) decreed", "word_transliteration": "kataba"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f", "word_translation": "for them", "word_transliteration": "alayhimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0644\u064e\u0627\u0653\u0621\u064e", "word_translation": "the exile", "word_transliteration": "al-jalaa"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0630\u0651\u064e\u0628\u064e\u0647\u064f\u0645\u06e1", "word_translation": "certainly He (would) have punished them", "word_transliteration": "la'adhabahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6", "word_translati