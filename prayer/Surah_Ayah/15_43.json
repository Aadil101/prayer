{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0644\u064e\u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "(is) surely the promised place for them", "word_transliteration": "lamaw'iduhum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0645\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "all", "word_transliteration": "ajma'ina"}]}