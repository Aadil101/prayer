{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627\u0653 \u0623\u064e\u0631\u064e\u062f\u06e1\u0646\u064e\u0627\u0653 \u0623\u064e\u0646 \u0646\u0651\u064f\u0647\u06e1\u0644\u0650\u0643\u064e \u0642\u064e\u0631\u06e1\u064a\u064e\u0629\u064b \u0623\u064e\u0645\u064e\u0631\u06e1\u0646\u064e\u0627 \u0645\u064f\u062a\u06e1\u0631\u064e\u0641\u0650\u064a\u0647\u064e\u0627 \u0641\u064e\u0641\u064e\u0633\u064e\u0642\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0647\u064e\u0627 \u0641\u064e\u062d\u064e\u0642\u0651\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064f \u0641\u064e\u062f\u064e\u0645\u0651\u064e\u0631\u06e1\u0646\u064e\u0670\u0647\u064e\u0627 \u062a\u064e\u062f\u06e1\u0645\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627\u0653", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u062f\u06e1\u0646\u064e\u0627\u0653", "word_translation": "We intend", "word_transliteration": "aradna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0646\u0651\u064f\u0647\u06e1\u0644\u0650\u0643\u064e", "word_translation": "We destroy", "word_transliteration": "nuh'lika"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u06e1\u064a\u064e\u0629\u064b", "word_translation": "a town", "word_transliteration": "qaryatan"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u064e\u0631\u06e1\u0646\u064e\u0627", "word_translation": "We order", "word_transliteration": "amarna"}, {"word_arabic_uthmani": "\u0645\u064f\u062a\u06e1\u0631\u064e\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "its wealthy people", "word_transliteration": "mut'rafiha"}, {"word_arabic_uthmani": "\u0641\u064e\u0641\u064e\u0633\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "but they defiantly disobey", "word_transliteration": "fafasaqu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0641\u064e\u062d\u064e\u0642\u0651\u064e", "word_translation": "so (is) proved true", "word_transliteration": "fahaqqa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "against it", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064f", "word_translation": "the word", "word_transliteration": "al-qawlu"}, {"word_arabic_uthmani": "\u0641\u064e\u062f\u064e\u0645\u0651\u064e\u0631\u06e1\u0646\u064e\u0670\u0647\u064e\u0627", "word_translation": "and We destroy it", "word_transliteration": "fadammarnaha"}, {"word_arabic_uthmani": "\u062a\u064e\u062f\u06e1\u0645\u0650\u064a\u0631\u0657\u0627", "word_translation": "(with) destruction", "word_transliteration": "tadmiran"}]}