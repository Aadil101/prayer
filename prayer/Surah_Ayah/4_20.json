{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1 \u0623\u064e\u0631\u064e\u062f\u062a\u0651\u064f\u0645\u064f \u0671\u0633\u06e1\u062a\u0650\u0628\u06e1\u062f\u064e\u0627\u0644\u064e \u0632\u064e\u0648\u06e1\u062c\u0656 \u0645\u0651\u064e\u0643\u064e\u0627\u0646\u064e \u0632\u064e\u0648\u06e1\u062c\u0656 \u0648\u064e\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u062d\u06e1\u062f\u064e\u0649\u0670\u0647\u064f\u0646\u0651\u064e \u0642\u0650\u0646\u0637\u064e\u0627\u0631\u0657\u0627 \u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1\u0647\u064f \u0634\u064e\u064a\u06e1\u0640\u0654\u064b\u0627\u06da \u0623\u064e\u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0646\u064e\u0647\u064f\u06e5 \u0628\u064f\u0647\u06e1\u062a\u064e\u0670\u0646\u0657\u0627 \u0648\u064e\u0625\u0650\u062b\u06e1\u0645\u0657\u0627 \u0645\u0651\u064f\u0628\u0650\u064a\u0646\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u062f\u062a\u0651\u064f\u0645\u064f", "word_translation": "you intend", "word_transliteration": "aradttumu"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u0650\u0628\u06e1\u062f\u064e\u0627\u0644\u064e", "word_translation": "replacing", "word_transliteration": "is'tib'dala"}, {"word_arabic_uthmani": "\u0632\u064e\u0648\u06e1\u062c\u0656", "word_translation": "a wife", "word_transliteration": "zawjin"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "(in) place", "word_transliteration": "makana"}, {"word_arabic_uthmani": "\u0632\u064e\u0648\u06e1\u062c\u0656", "word_translation": "(of) a wife", "word_transliteration": "zawjin"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "and you have given", "word_transliteration": "waataytum"}, {"word_arabic_uthmani": "\u0625\u0650\u062d\u06e1\u062f\u064e\u0649\u0670\u0647\u064f\u0646\u0651\u064e", "word_translation": "one of them", "word_transliteration": "ih'dahunna"}, {"word_arabic_uthmani": "\u0642\u0650\u0646\u0637\u064e\u0627\u0631\u0657\u0627", "word_translation": "heap (of gold)", "word_transliteration": "qintaran"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "then (do) not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0627\u0652", "word_translation": "take away", "word_transliteration": "takhudhu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from it", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0640\u0654\u064b\u0627\u06da", "word_translation": "anything", "word_transliteration": "shayan"}, {"word_arabic_uthmani": "\u0623\u064e\u062a\u064e\u0623\u06e1\u062e\u064f\u0630\u064f\u0648\u0646\u064e\u0647\u064f\u06e5", "word_translation": "Would you take it", "word_transliteration": "atakhudhunahu"}, {"word_arabic_uthmani": "\u0628\u064f\u0647\u06e1\u062a\u064e\u0670\u0646\u0657\u0627", "word_translation": "(by) slander", "word_transliteration": "buh'tanan"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u062b\u06e1\u0645\u0657\u0627", "word_translation": "and a sin", "word_transliteration": "wa-ith'man"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u0650\u064a\u0646\u0657\u0627", "word_translation": "open", "word_transliteration": "mubinan"}]}