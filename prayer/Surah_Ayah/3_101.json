{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u064a\u06e1\u0641\u064e \u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e \u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0641\u0650\u064a\u0643\u064f\u0645\u06e1 \u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u062a\u064e\u0635\u0650\u0645 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0642\u064e\u062f\u06e1 \u0647\u064f\u062f\u0650\u064a\u064e \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0656 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u064a\u06e1\u0641\u064e", "word_translation": "And how (could)", "word_transliteration": "wakayfa"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "you disbelieve", "word_transliteration": "takfuruna"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "while [you]", "word_transliteration": "wa-antum"}, {"word_arabic_uthmani": "\u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670", "word_translation": "is recited", "word_transliteration": "tut'la"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u064f", "word_translation": "(the) Verses", "word_transliteration": "ayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0641\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "and among you", "word_transliteration": "wafikum"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5\u06d7", "word_translation": "(is) His Messenger", "word_transliteration": "rasuluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u062a\u064e\u0635\u0650\u0645", "word_translation": "holds firmly", "word_transliteration": "ya'tasim"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "then surely", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0647\u064f\u062f\u0650\u064a\u064e", "word_translation": "he is guided", "word_transliteration": "hudiya"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0656", "word_translation": "a path", "word_transliteration": "siratin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656", "word_translation": "straight", "word_transliteration": "mus'taqimin"}]}