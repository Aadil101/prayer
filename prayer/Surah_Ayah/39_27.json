{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0636\u064e\u0631\u064e\u0628\u06e1\u0646\u064e\u0627 \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0641\u0650\u064a \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650 \u0645\u0650\u0646 \u0643\u064f\u0644\u0651\u0650 \u0645\u064e\u062b\u064e\u0644\u0656 \u0644\u0651\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And indeed", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0636\u064e\u0631\u064e\u0628\u06e1\u0646\u064e\u0627", "word_translation": "We have set forth", "word_transliteration": "darabna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for people", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650", "word_translation": "Quran", "word_transliteration": "al-qur'ani"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u064e\u0644\u0656", "word_translation": "example", "word_transliteration": "mathalin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u06