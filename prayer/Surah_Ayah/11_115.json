{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0627 \u064a\u064f\u0636\u0650\u064a\u0639\u064f \u0623\u064e\u062c\u06e1\u0631\u064e \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "And be patient", "word_transliteration": "wa-is'bir"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "for indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(does) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0636\u0650\u064a\u0639\u064f", "word_translation": "let go waste", "word_transliteration": "yudi'u"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064e", "word_translation": "(the) reward", "word_transliteration": "ajra"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(of) the good-doers", "word_transliteration": "al-muh'sinina"}]}