{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0646\u064e \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0639\u0650\u0628\u064e\u0627\u062f\u064c \u0623\u064e\u0645\u06e1\u062b\u064e\u0627\u0644\u064f\u0643\u064f\u0645\u06e1\u06d6 \u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1 \u0641\u064e\u0644\u06e1\u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0627\u0652 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u0635\u064e\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0646\u064e", "word_translation": "you call", "word_transliteration": "tad'una"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650", "word_translation": "besides", "word_transliteration": "duni"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u064c", "word_translation": "(are) slaves", "word_transliteration": "ibadun"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u062b\u064e\u0627\u0644\u064f\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "like you", "word_transliteration": "amthalukum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "So invoke them", "word_transliteration": "fa-id'uhum"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u06e1\u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0627\u0652", "word_translation": "and let them respond", "word_transliteration": "falyastajibu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you are", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "truthful", "word_transliteration": "sadiqina"}]}