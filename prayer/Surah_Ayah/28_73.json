{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646 \u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6 \u062c\u064e\u0639\u064e\u0644\u064e \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064e \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e \u0644\u0650\u062a\u064e\u0633\u06e1\u0643\u064f\u0646\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0647\u0650 \u0648\u064e\u0644\u0650\u062a\u064e\u0628\u06e1\u062a\u064e\u063a\u064f\u0648\u0627\u0652 \u0645\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0634\u06e1\u0643\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646", "word_translation": "And from", "word_transliteration": "wamin"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His Mercy", "word_transliteration": "rahmatihi"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "He made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "for you", "word_transliteration": "lakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064e", "word_translation": "the night", "word_transliteration": "al-layla"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e", "word_translation": "and the day", "word_transliteration": "wal-nahara"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u0633\u06e1\u0643\u064f\u0646\u064f\u0648\u0627\u0652", "word_translation": "that you may rest", "word_transliteration": "litaskunu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "therein", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u062a\