{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0635\u064e\u062f\u064e\u0642\u064e\u0646\u064e\u0627 \u0648\u064e\u0639\u06e1\u062f\u064e\u0647\u064f\u06e5 \u0648\u064e\u0623\u064e\u0648\u06e1\u0631\u064e\u062b\u064e\u0646\u064e\u0627 \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u0646\u064e\u062a\u064e\u0628\u064e\u0648\u0651\u064e\u0623\u064f \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650 \u062d\u064e\u064a\u06e1\u062b\u064f \u0646\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06d6 \u0641\u064e\u0646\u0650\u0639\u06e1\u0645\u064e \u0623\u064e\u062c\u06e1\u0631\u064f \u0671\u0644\u06e1\u0639\u064e\u0670\u0645\u0650\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they will say", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f", "word_translation": "All praise", "word_transliteration": "al-hamdu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "(be) to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u0642\u064e\u0646\u064e\u0627", "word_translation": "has fulfilled for us", "word_transliteration": "sadaqana"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e\u0647\u064f\u06e5", "word_translation": "His promise", "word_transliteration": "wa'dahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0648\u06e1\u0631\u064e\u062b\u064e\u0646\u064e\u0627", "word_translation": "and has made us inherit", "word_transliteration": "wa-awrathana"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "the earth", "word_transliteration": "al-arda"}, {"word_arabic_uthmani": "\u0646\u064e\u062a\u064e\u0628\u064e\u0648\u0651\u064e\u0623\u064f", "word_translation": "we may settle", "word_transliteration": "natabawwa-u"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "in", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650", "word_translation": "Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u062d\u064e\u064a\u06e1\u062b\u064f", "word_translation": "wherever", "word_transliteration": "haythu"}, {"word_arabic_uthmani": "\u0646\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06d6", "word_translation": "we will", "word_transliteration": "nashau"}, {"word_arabic_uthmani": "\u0641\u064e\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "So excellent is", "word_transliteration": "fani'ma"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064f", "word_translation": "(the) reward", "word_transliteration": "ajru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0645\u0650\u0644\u0650\u064a\u0646\u064e", "word_translation": "(of) the workers", "word_transliteration": "al-'amilina"}]}