{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0648\u06e1 \u0623\u064e\u0631\u064e\u0627\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u0646 \u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064e \u0648\u064e\u0644\u064e\u062f\u0657\u0627 \u0644\u0651\u064e\u0671\u0635\u06e1\u0637\u064e\u0641\u064e\u0649\u0670 \u0645\u0650\u0645\u0651\u064e\u0627 \u064a\u064e\u062e\u06e1\u0644\u064f\u0642\u064f \u0645\u064e\u0627 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06da \u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5\u06d6 \u0647\u064f\u0648\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u06e1\u0648\u064e\u0670\u062d\u0650\u062f\u064f \u0671\u0644\u06e1\u0642\u064e\u0647\u0651\u064e\u0627\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0627\u062f\u064e", "word_translation": "Allah (had) intended", "word_transliteration": "arada"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah (had) intended", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "to", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064e", "word_translation": "take", "word_transliteration": "yattakhidha"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062f\u0657\u0627", "word_translation": "a son", "word_transliteration": "waladan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0671\u0635\u06e1\u0637\u064e\u0641\u064e\u0649\u0670", "word_translation": "surely, He (could) have chosen", "word_transliteration": "la-is'tafa"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0627", "word_translation": "from what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u06e1\u0644\u064f\u0642\u064f", "word_translation": "He creates", "word_transliteration": "yakhluqu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "whatever", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06da", "word_translation": "He willed", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5\u06d6", "word_translation": "Glory be to Him", "word_transliteration": "sub'hanahu"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(is) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0670\u062d\u0650\u062f\u064f", "word_translation": "the One", "word_transliteration": "al-wahidu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0647\u0651\u064e\u0627\u0631\u064f", "word_translation": "the Irresistible", "word_transliteration": "al-qaharu"}]}