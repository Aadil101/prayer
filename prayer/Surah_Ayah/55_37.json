{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627 \u0671\u0646\u0634\u064e\u0642\u0651\u064e\u062a\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f \u0641\u064e\u0643\u064e\u0627\u0646\u064e\u062a\u06e1 \u0648\u064e\u0631\u06e1\u062f\u064e\u0629\u0657 \u0643\u064e\u0671\u0644\u062f\u0651\u0650\u0647\u064e\u0627\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "Then when", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0671\u0646\u0634\u064e\u0642\u0651\u064e\u062a\u0650", "word_translation": "is split", "word_transliteration": "inshaqqati"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "the heaven", "word_transliteration": "al-samau"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0627\u0646\u064e\u062a\u06e1", "word_translation": "and it becomes", "word_transliteration": "fakanat"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u06e1\u062f\u064e\u0629\u0657", "word_translation": "rose-colored", "word_transliteration": "wardatan"}, {"word_arabic_uthmani": "\u0643\u064e\u0671\u0644\u062f\u0651\u0650\u0647\u064e\u0627\u0646\u0650", "word_translation": "like murky oil", "word_transliteration": "kal-dihani"}]}