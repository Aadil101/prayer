{"ayahs": {"ayah_uthmani": "\u0639\u064e\u0670\u0644\u0650\u064a\u064e\u0647\u064f\u0645\u06e1 \u062b\u0650\u064a\u064e\u0627\u0628\u064f \u0633\u064f\u0646\u062f\u064f\u0633\u064d \u062e\u064f\u0636\u06e1\u0631\u065e \u0648\u064e\u0625\u0650\u0633\u06e1\u062a\u064e\u0628\u06e1\u0631\u064e\u0642\u065e\u06d6 \u0648\u064e\u062d\u064f\u0644\u0651\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0633\u064e\u0627\u0648\u0650\u0631\u064e \u0645\u0650\u0646 \u0641\u0650\u0636\u0651\u064e\u0629\u0656 \u0648\u064e\u0633\u064e\u0642\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1 \u0634\u064e\u0631\u064e\u0627\u0628\u0657\u0627 \u0637\u064e\u0647\u064f\u0648\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0639\u064e\u0670\u0644\u0650\u064a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "Upon them", "word_transliteration": "aliyahum"}, {"word_arabic_uthmani": "\u062b\u0650\u064a\u064e\u0627\u0628\u064f", "word_translation": "(will be) garments", "word_transliteration": "thiyabu"}, {"word_arabic_uthmani": "\u0633\u064f\u0646\u062f\u064f\u0633\u064d", "word_translation": "(of) fine silk", "word_transliteration": "sundusin"}, {"word_arabic_uthmani": "\u062e\u064f\u0636\u06e1\u0631\u065e", "word_translation": "green", "word_transliteration": "khud'run"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0633\u06e1\u062a\u064e\u0628\u06e1\u0631\u064e\u0642\u065e\u06d6", "word_translation": "and heavy brocade", "word_transliteration": "wa-is'tabraqun"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u064f\u0644\u0651\u064f\u0648\u0653\u0627\u0652", "word_translation": "And they will be adorned", "word_transliteration": "wahullu"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u064e\u0627\u0648\u0650\u0631\u064e", "word_translation": "(with) bracelets", "word_transliteration": "asawira"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u0650\u0636\u0651\u064e\u0629\u0656", "word_translation": "silver", "word_transliteration": "fiddatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0642\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and will give them to drink", "word_transliteration": "wasaqahum"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbuhum"}, {"word_arabic_uthmani": "\u0634\u064e\u0631\u064e\u0627\u0628\u0657\u0627", "word_translation": "a drink", "word_transliteration": "sharaban"}, {"word_arabic_uthmani": "\u0637\u064e\u0647\u064f\u0648\u0631\u064b\u0627", "word_translation": "pure", "word_transliteration": "tahuran"}]}