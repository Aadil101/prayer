{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u064e\u0631\u064e\u0623\u06e1\u062a\u064e \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e \u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u0650\u0630\u06e1 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u0650\u0646\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650 \u0671\u0644\u0631\u0651\u064e\u062c\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "So when", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u064e\u0623\u06e1\u062a\u064e", "word_translation": "you recite", "word_transliteration": "qarata"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e", "word_translation": "the Quran", "word_transliteration": "al-qur'ana"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0633\u06e1\u062a\u064e\u0639\u0650\u0630\u06e1", "word_translation": "seek refuge", "word_transliteration": "fa-is'ta'idh"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0650", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytani"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062c\u0650\u064a\u0645\u0650", "word_translation": "the accursed", "word_transliteration": "al-rajimi"}]}