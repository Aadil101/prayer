{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0644\u064e\u0646\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u064e\u0646\u0651\u064e \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0644\u064e\u0646\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and do", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "righteous (deeds)", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u0643\u064e\u0641\u0651\u0650\u0631\u064e\u0646\u0651\u064e", "word_translation": "surely We will remove", "word_transliteration": "lanukaffiranna"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their evil deeds", "word_transliteration": "sayyiatihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0646\u064e\u062c\u06e1\u0632\u0650\u064a\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and We will surely reward them", "word_transliteration": "walanajziyannahum"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064e", "word_translation": "(the) best", "word_transliteration": "ahsana"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(of) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "(to) do", "word_transliteration": "ya'maluna"}]}