{"ayahs": {"ayah_uthmani": "\u062f\u064e\u0639\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0643\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u0645\u0651\u064e \u0648\u064e\u062a\u064e\u062d\u0650\u064a\u0651\u064e\u062a\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0633\u064e\u0644\u064e\u0670\u0645\u065e\u06da \u0648\u064e\u0621\u064e\u0627\u062e\u0650\u0631\u064f \u062f\u064e\u0639\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u0623\u064e\u0646\u0650 \u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0631\u064e\u0628\u0651\u0650 \u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062f\u064e\u0639\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "Their prayer", "word_transliteration": "da'wahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0643\u064e", "word_translation": "(will be) Glory be to You", "word_transliteration": "sub'hanaka"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u0645\u0651\u064e", "word_translation": "O Allah!", "word_transliteration": "al-lahuma"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u062d\u0650\u064a\u0651\u064e\u062a\u064f\u0647\u064f\u0645\u06e1", "word_translation": "And their greeting", "word_transliteration": "watahiyyatuhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein (will be)", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u064e\u0670\u0645\u065e\u06da", "word_translation": "Peace", "word_transliteration": "salamun"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062e\u0650\u0631\u064f", "word_translation": "And the last", "word_transliteration": "waakhiru"}, {"word_arabic_uthmani": "\u062f\u064e\u0639\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "(of) their call", "word_transliteration": "da'wahum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0650", "word_translation": "(will be) [that]", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u06e1\u062f\u064f", "word_translation": "All the Praise be", "word_transliteration": "al-hamdu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650", "word_translation": "Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the worlds", "word_transliteration": "al-'alamina"}]}