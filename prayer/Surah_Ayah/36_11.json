{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u062a\u064f\u0646\u0630\u0650\u0631\u064f \u0645\u064e\u0646\u0650 \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e \u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e \u0648\u064e\u062e\u064e\u0634\u0650\u064a\u064e \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064e \u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650\u06d6 \u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f \u0628\u0650\u0645\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u0656 \u0648\u064e\u0623\u064e\u062c\u06e1\u0631\u0656 \u0643\u064e\u0631\u0650\u064a\u0645\u064d"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u062a\u064f\u0646\u0630\u0650\u0631\u064f", "word_translation": "you (can) warn", "word_transliteration": "tundhiru"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u0650", "word_translation": "(him) who", "word_transliteration": "mani"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e", "word_translation": "follows", "word_transliteration": "ittaba'a"}, {"word_arabic_uthmani": "\u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e", "word_translation": "the Reminder", "word_transliteration": "al-dhik'ra"}, {"word_arabic_uthmani": "\u0648\u064e\u062e\u064e\u0634\u0650\u064a\u064e", "word_translation": "and fears", "word_transliteration": "wakhashiya"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064e", "word_translation": "the Most Gracious", "word_transliteration": "al-rahmana"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650\u06d6", "word_translation": "in the unseen", "word_transliteration": "bil-ghaybi"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f", "word_translation": "So give him glad tidings", "word_transliteration": "fabashir'hu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u0656", "word_translation": "of forgiveness", "word_transliteration": "bimaghfiratin"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062c\u06e1\u0631\u0656", "word_translation": "and a reward", "word_transliteration": "wa-ajrin"}, {"word_arabic_uthmani": "\u0643\u064e\u0631\u0650\u064a\u0645\u064d", "word_translation": "noble", "word_transliteration": "karimin"}]}