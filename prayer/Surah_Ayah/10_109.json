{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u06e1 \u0645\u064e\u0627 \u064a\u064f\u0648\u062d\u064e\u0649\u0670\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0648\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u062e\u064e\u064a\u06e1\u0631\u064f \u0671\u0644\u06e1\u062d\u064e\u0670\u0643\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u06e1", "word_translation": "And follow", "word_transliteration": "wa-ittabi'"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u062d\u064e\u0649\u0670\u0653", "word_translation": "is revealed", "word_transliteration": "yuha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "and be patient", "word_transliteration": "wa-is'bir"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u064a\u064e\u062d\u06e1\u0643\u064f\u0645\u064e", "word_translation": "Allah gives judgment", "word_transliteration": "yahkuma"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "Allah gives judgment", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064f", "word_translation": "(is) the Best", "word_transliteration": "khayru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0670\u0643\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the Judges", "word_transliteration": "al-hakimina"}]}