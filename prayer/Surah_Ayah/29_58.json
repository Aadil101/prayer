{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0644\u064e\u0646\u064f\u0628\u064e\u0648\u0651\u0650\u0626\u064e\u0646\u0651\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650 \u063a\u064f\u0631\u064e\u0641\u0657\u0627 \u062a\u064e\u062c\u06e1\u0631\u0650\u064a \u0645\u0650\u0646 \u062a\u064e\u062d\u06e1\u062a\u0650\u0647\u064e\u0627 \u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0647\u064e\u0670\u0631\u064f \u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e \u0641\u0650\u064a\u0647\u064e\u0627\u06da \u0646\u0650\u0639\u06e1\u0645\u064e \u0623\u064e\u062c\u06e1\u0631\u064f \u0671\u0644\u06e1\u0639\u064e\u0670\u0645\u0650\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and do", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "[the] righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u0628\u064e\u0648\u0651\u0650\u0626\u064e\u0646\u0651\u064e\u0647\u064f\u0645", "word_translation": "surely We will give them a place", "word_transliteration": "lanubawwi-annahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "in", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u0650", "word_translation": "Paradise", "word_transliteration": "al-janati"}, {"word_arabic_uthmani": "\u063a\u064f\u0631\u064e\u0641\u0657\u0627", "word_translation": "lofty dwellings", "word_transliteration": "ghurafan"}, {"word_arabic_uthmani": "\u062a\u064e\u062c\u06e1\u0631\u0650\u064a", "word_translation": "flow", "word_transliteration": "tajri"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062a\u064e\u062d\u06e1\u062a\u0650\u0647\u064e\u0627", "word_translation": "underneath it", "word_transliteration": "tahtiha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0647\u064e\u0670\u0631\u064f", "word_translation": "the rivers", "word_transliteration": "al-anharu"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e", "word_translation": "will abide forever", "word_transliteration": "khalidina"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627\u06da", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0646\u0650\u0639\u06e1\u0645\u064e", "word_translation": "Excellent is", "word_transliteration": "ni'ma"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064f", "word_translation": "(the) reward", "word_transliteration": "ajru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0645\u0650\u0644\u0650\u064a\u0646\u064e", "word_translation": "(of) the workers", "word_transliteration": "al-'amilina"}]}