{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0644\u0650\u0645\u064e \u062a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u0650 \u0642\u064e\u0628\u06e1\u0644\u064e \u0671\u0644\u06e1\u062d\u064e\u0633\u064e\u0646\u064e\u0629\u0650\u06d6 \u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u062a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e", "word_translation": "Why", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u062a\u064e\u0639\u06e1\u062c\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "(do) you seek to hasten", "word_transliteration": "tasta'jiluna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0626\u064e\u0629\u0650", "word_translation": "the evil", "word_transliteration": "bil-sayi-ati"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064e", "word_translation": "before", "word_transliteration": "qabla"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0633\u064e\u0646\u064e\u0629\u0650\u06d6", "word_translation": "the good", "word_transliteration": "al-hasanati"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "Why not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "you ask forgiveness", "word_transliteration": "tastaghfiruna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "(of) Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "receive mercy", "word_transliteration": "tur'hamuna"}]}