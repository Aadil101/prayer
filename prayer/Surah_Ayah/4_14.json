{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u0635\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5 \u0648\u064e\u064a\u064e\u062a\u064e\u0639\u064e\u062f\u0651\u064e \u062d\u064f\u062f\u064f\u0648\u062f\u064e\u0647\u064f\u06e5 \u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u06e1\u0647\u064f \u0646\u064e\u0627\u0631\u064b\u0627 \u062e\u064e\u0670\u0644\u0650\u062f\u0657\u0627 \u0641\u0650\u064a\u0647\u064e\u0627 \u0648\u064e\u0644\u064e\u0647\u064f\u06e5 \u0639\u064e\u0630\u064e\u0627\u0628\u065e \u0645\u0651\u064f\u0647\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0635\u0650", "word_translation": "disobeys", "word_transliteration": "ya'si"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and His Messenger", "word_transliteration": "warasulahu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062a\u064e\u0639\u064e\u062f\u0651\u064e", "word_translation": "and transgresses", "word_transliteration": "wayata'adda"}, {"word_arabic_uthmani": "\u062d\u064f\u062f\u064f\u0648\u062f\u064e\u0647\u064f\u06e5", "word_translation": "His limits", "word_transliteration": "hududahu"}, {"word_arabic_uthmani": "\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u06e1\u0647\u064f", "word_translation": "He will admit him", "word_transliteration": "yud'khil'hu"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u0631\u064b\u0627", "word_translation": "(to) Fire", "word_transliteration": "naran"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0657\u0627", "word_translation": "(will) abide forever", "wo