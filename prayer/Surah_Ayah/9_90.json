{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062c\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u06e1\u0645\u064f\u0639\u064e\u0630\u0651\u0650\u0631\u064f\u0648\u0646\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u0639\u06e1\u0631\u064e\u0627\u0628\u0650 \u0644\u0650\u064a\u064f\u0624\u06e1\u0630\u064e\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0642\u064e\u0639\u064e\u062f\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0630\u064e\u0628\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5\u06da \u0633\u064e\u064a\u064f\u0635\u0650\u064a\u0628\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0623\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0627\u0653\u0621\u064e", "word_translation": "And came", "word_transliteration": "wajaa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0639\u064e\u0630\u0651\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "the ones who make excuses", "word_transliteration": "al-mu'adhiruna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0639\u06e1\u0631\u064e\u0627\u0628\u0650", "word_translation": "the bedouins", "word_transliteration": "al-a'rabi"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0624\u06e1\u0630\u064e\u0646\u064e", "word_translation": "that permission be granted", "word_transliteration": "liyu'dhana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0639\u064e\u062f\u064e", "word_translation": "and sat", "word_transliteration": "waqa'ada"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "lied", "word_transliteration": "kadhabu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "(to) Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5\u06da", "word_translation": "and His Messenger", "word_transliteration": "warasulahu"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u064f\u0635\u0650\u064a\u0628\u064f", "word_translation": "Will strike", "word_transliteration": "sayusibu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "among them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "painful", "word_transliteration": "alimun"}]}