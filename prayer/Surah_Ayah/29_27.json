{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e \u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0641\u0650\u064a \u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u0650\u0647\u0650 \u0671\u0644\u0646\u0651\u064f\u0628\u064f\u0648\u0651\u064e\u0629\u064e \u0648\u064e\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0648\u064e\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f \u0623\u064e\u062c\u06e1\u0631\u064e\u0647\u064f\u06e5 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0644\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0648\u064e\u0647\u064e\u0628\u06e1\u0646\u064e\u0627", "word_translation": "And We granted", "word_transliteration": "wawahabna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "to him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0633\u06e1\u062d\u064e\u0670\u0642\u064e", "word_translation": "Ishaq", "word_transliteration": "is'haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0639\u06e1\u0642\u064f\u0648\u0628\u064e", "word_translation": "and Yaqub", "word_transliteration": "waya'quba"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "and We placed", "word_transliteration": "waja'alna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u0650\u0647\u0650", "word_translation": "his offsprings", "word_transliteration": "dhurriyyatihi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0628\u064f\u0648\u0651\u064e\u0629\u064e", "word_translation": "the Prophethood", "word_transliteration": "al-nubuwata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "and the Book", "word_transliteration": "wal-kitaba"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "And We gave him", "word_transliteration": "waataynahu"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064e\u0647\u064f\u06e5", "word_translation": "his reward", "word_transliteration": "ajrahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6", "word_translation": "the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "And indeed he", "word_transliteration": "wa-innahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "the Hereafter", "word_transliteration": "al-akhirati"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0650\u0646\u064e", "word_translation": "(is) surely among", "word_transliteration": "lamina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "the righteous", "word_transliteration": "al-salihina"}]}