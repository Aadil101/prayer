{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0628\u0650\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650 \u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627 \u062b\u064f\u0645\u0651\u064e \u064a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670 \u0641\u064e\u0631\u0650\u064a\u0642\u065e \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06da \u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "And they say", "word_transliteration": "wayaquluna"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650", "word_translation": "and in the Messenger", "word_transliteration": "wabil-rasuli"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627", "word_translation": "and we obey", "word_transliteration": "wa-ata'na"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0649\u0670", "word_translation": "turns away", "word_transliteration": "yatawalla"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u064a\u0642\u065e", "word_translation": "a party", "word_transliteration": "fariqun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "of them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "after", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06da", "word_translation": "that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(are) believers", "word_transliteration": "bil-mu'minina"}]}