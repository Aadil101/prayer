{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0635\u064e\u0670\u0628\u064e\u0643\u064f\u0645\u06e1 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u062a\u064e\u0642\u064e\u0649 \u0671\u0644\u06e1\u062c\u064e\u0645\u06e1\u0639\u064e\u0627\u0646\u0650 \u0641\u064e\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627\u0653", "word_translation": "And what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u064e\u0670\u0628\u064e\u0643\u064f\u0645\u06e1", "word_translation": "struck you", "word_transliteration": "asabakum"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062a\u064e\u0642\u064e\u0649", "word_translation": "(when) met", "word_transliteration": "al-taqa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0645\u06e1\u0639\u064e\u0627\u0646\u0650", "word_translation": "the two hosts", "word_transliteration": "al-jam'ani"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650", "word_translation": "by (the) permission", "word_transliteration": "fabi-idh'ni"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e", "word_translation": "and that He (might) make evident", "word_transliteration": "waliya'lama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}]}