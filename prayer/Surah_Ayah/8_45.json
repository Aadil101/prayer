{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0630\u064e\u0627 \u0644\u064e\u0642\u0650\u064a\u062a\u064f\u0645\u06e1 \u0641\u0650\u0626\u064e\u0629\u0657 \u0641\u064e\u0671\u062b\u06e1\u0628\u064f\u062a\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627 \u0644\u0651\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "When", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u0650\u064a\u062a\u064f\u0645\u06e1", "word_translation": "you meet", "word_transliteration": "laqitum"}, {"word_arabic_uthmani": "\u0641\u0650\u0626\u064e\u0629\u0657", "word_translation": "a force", "word_transliteration": "fi-atan"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062b\u06e1\u0628\u064f\u062a\u064f\u0648\u0627\u0652", "word_translation": "then be firm", "word_transliteration": "fa-uth'butu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652", "word_translation": "and remember", "word_transliteration": "wa-udh'kuru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627", "word_translation": "much", "word_transliteration": "kathiran"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(be) successful", "word_transliteration": "tuf'lihuna"}]}