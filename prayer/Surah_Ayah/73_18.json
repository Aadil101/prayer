{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f \u0645\u064f\u0646\u0641\u064e\u0637\u0650\u0631\u064f\u06e2 \u0628\u0650\u0647\u0650\u06e6\u06da \u0643\u064e\u0627\u0646\u064e \u0648\u064e\u0639\u06e1\u062f\u064f\u0647\u064f\u06e5 \u0645\u064e\u0641\u06e1\u0639\u064f\u0648\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u064f", "word_translation": "The heaven", "word_transliteration": "al-samau"}, {"word_arabic_uthmani": "\u0645\u064f\u0646\u0641\u064e\u0637\u0650\u0631\u064f\u06e2", "word_translation": "(will) break apart", "word_transliteration": "munfatirun"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06da", "word_translation": "therefrom", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064f\u0647\u064f\u06e5", "word_translation": "His Promise", "word_transliteration": "wa'duhu"}, {"word_arabic_uthmani": "\u0645\u064e\u0641\u06e1\u0639\u064f\u0648\u0644\u064b\u0627", "word_translation": "to be fulfilled", "word_transliteration": "maf'ulan"}]}