{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u0650\u064a\u0646\u064e \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u064e \u0646\u064e\u0627\u0631\u064e \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e \u0641\u0650\u064a\u0647\u064e\u0627\u06da \u0647\u0650\u064a\u064e \u062d\u064e\u0633\u06e1\u0628\u064f\u0647\u064f\u0645\u06e1\u06da \u0648\u064e\u0644\u064e\u0639\u064e\u0646\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6 \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u065e \u0645\u0651\u064f\u0642\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062f\u064e", "word_translation": "Allah has promised", "word_transliteration": "wa'ada"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah has promised", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "the hypocrite men", "word_transliteration": "al-munafiqina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0646\u064e\u0670\u0641\u0650\u0642\u064e\u0670\u062a\u0650", "word_translation": "and the hypocrite women", "word_transliteration": "wal-munafiqati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u064e", "word_translation": "and the disbelievers", "word_transliteration": "wal-kufara"}, {"word_arabic_uthmani": "\u0646\u064e\u0627\u0631\u064e", "word_translation": "Fire", "word_transliteration": "nara"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "(of the) Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0644\u0650\u062f\u0650\u064a\u0646\u064e", "word_translation": "they (will) abide forever", "word_transliteration": "khalidina"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627\u06da", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0647\u0650\u064a\u064e", "word_translation": "It (is)", "word_transliteration": "hiya"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u06e1\u0628\u064f\u0647\u064f\u0645\u06e1\u06da", "word_translation": "sufficient for them", "word_transliteration": "hasbuhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u064e\u0646\u064e\u0647\u064f\u0645\u064f", "word_translation": "And Allah has cursed them", "word_transliteration": "wala'anahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06d6", "word_translation": "And Allah has cursed them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and for them", "word_transliteration": "walahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u065e", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0642\u0650\u064a\u0645\u065e", "word_translation": "enduring", "word_transliteration": "muqimun"}]}