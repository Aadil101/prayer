{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0627 \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1 \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0642\u064e\u0628\u06e1\u0644\u064e \u0637\u064f\u0644\u064f\u0648\u0639\u0650 \u0671\u0644\u0634\u0651\u064e\u0645\u06e1\u0633\u0650 \u0648\u064e\u0642\u064e\u0628\u06e1\u0644\u064e \u063a\u064f\u0631\u064f\u0648\u0628\u0650\u0647\u064e\u0627\u06d6 \u0648\u064e\u0645\u0650\u0646\u06e1 \u0621\u064e\u0627\u0646\u064e\u0627\u0653\u064a\u0655\u0650 \u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650 \u0641\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1 \u0648\u064e\u0623\u064e\u0637\u06e1\u0631\u064e\u0627\u0641\u064e \u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064e \u062a\u064e\u0631\u06e1\u0636\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "So be patient", "word_transliteration": "fa-is'bir"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "they say", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1", "word_translation": "and glorify", "word_transliteration": "wasabbih"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650", "word_translation": "with praise", "word_transliteration": "bihamdi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(of) your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064e", "word_translation": "before", "word_transliteration": "qabla"}, {"word_arabic_uthmani": "\u0637\u064f\u0644\u064f\u0648\u0639\u0650", "word_translation": "(the) rising", "word_transliteration": "tulu'i"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u0645\u06e1\u0633\u0650", "word_translation": "(of) the sun", "word_transliteration": "al-shamsi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0628\u06e1\u0644\u064e", "word_translation": "and before", "word_transliteration": "waqabla"}, {"word_arabic_uthmani": "\u063a\u064f\u0631\u064f\u0648\u0628\u0650\u0647\u064e\u0627\u06d6", "word_translation": "its setting", "word_transliteration": "ghurubiha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1", "word_translation": "and from", "word_transliteration": "wamin"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0646\u064e\u0627\u0653\u064a\u0655\u0650", "word_translation": "(the) hours", "word_transliteration": "anai"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650", "word_translation": "(of) the night", "word_transliteration": "al-layli"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1", "word_translation": "and glorify", "word_transliteration": "fasabbih"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u06e1\u0631\u064e\u0627\u0641\u064e", "word_translation": "(at the) ends", "word_transliteration": "wa-atrafa"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650", "word_translation": "(of) the day", "word_transliteration": "al-nahari"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064e", "word_translation": "so that you may", "word_transliteration": "la'allaka"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u06e1\u0636\u064e\u0649\u0670", "word_translation": "be satisfied", "word_transliteration": "tarda"}]}