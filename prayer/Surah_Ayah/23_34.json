{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1 \u0623\u064e\u0637\u064e\u0639\u06e1\u062a\u064f\u0645 \u0628\u064e\u0634\u064e\u0631\u0657\u0627 \u0645\u0651\u0650\u062b\u06e1\u0644\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0630\u0657\u0627 \u0644\u0651\u064e\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "And surely if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0637\u064e\u0639\u06e1\u062a\u064f\u0645", "word_translation": "you obey", "word_transliteration": "ata'tum"}, {"word_arabic_uthmani": "\u0628\u064e\u0634\u064e\u0631\u0657\u0627", "word_translation": "a man", "word_transliteration": "basharan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "like you", "word_transliteration": "mith'lakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "indeed you", "word_transliteration": "innakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u0657\u0627", "word_translation": "then", "word_transliteration": "idhan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "surely (will be) losers", "word_transliteration": "lakhasiruna"}]}