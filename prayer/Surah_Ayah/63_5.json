{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u062a\u064e\u0639\u064e\u0627\u0644\u064e\u0648\u06e1\u0627\u0652 \u064a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0631\u064e\u0633\u064f\u0648\u0644\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0648\u0651\u064e\u0648\u06e1\u0627\u0652 \u0631\u064f\u0621\u064f\u0648\u0633\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0648\u0646\u064e \u0648\u064e\u0647\u064f\u0645 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u064e\u0627\u0644\u064e\u0648\u06e1\u0627\u0652", "word_translation": "Come", "word_transliteration": "ta'alaw"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "will ask forgiveness", "word_transliteration": "yastaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u064f", "word_translation": "(the) Messenger", "word_transliteration": "rasulu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u0651\u064e\u0648\u06e1\u0627\u0652", "word_translation": "They turn aside", "word_transliteration": "lawwaw"}, {"word_arabic_uthmani": "\u0631\u064f\u0621\u064f\u0648\u0633\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their heads", "word_transliteration": "ruusahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and you see them", "word_transliteration": "wara-aytahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u064f\u062f\u0651\u064f\u0648\u0646\u064e", "word_translation": "turning away", "word_transliteration": "yasudduna"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(are) arrogant", "word_transliteration": "mus'takbiruna"}]}