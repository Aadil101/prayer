{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u06e1\u0645\u064e\u0634\u06e1\u0631\u0650\u0642\u064f \u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u063a\u06e1\u0631\u0650\u0628\u064f\u06da \u0641\u064e\u0623\u064e\u064a\u06e1\u0646\u064e\u0645\u064e\u0627 \u062a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0627\u0652 \u0641\u064e\u062b\u064e\u0645\u0651\u064e \u0648\u064e\u062c\u06e1\u0647\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0670\u0633\u0650\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "And for Allah", "word_transliteration": "walillahi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0634\u06e1\u0631\u0650\u0642\u064f", "word_translation": "(is) the east", "word_transliteration": "al-mashriqu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064e\u063a\u06e1\u0631\u0650\u0628\u064f\u06da", "word_translation": "and the west", "word_transliteration": "wal-maghribu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u064a\u06e1\u0646\u064e\u0645\u064e\u0627", "word_translation": "so wherever", "word_transliteration": "fa-aynama"}, {"word_arabic_uthmani": "\u062a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0627\u0652", "word_translation": "you turn", "word_transliteration": "tuwallu"}, {"word_arabic_uthmani": "\u0641\u064e\u062b\u064e\u0645\u0651\u064e", "word_translation": "[so] there", "word_transliteration": "fathamma"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u06e1\u0647\u064f", "word_translation": "(is the) face", "word_transliteration": "wajhu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u0633\u0650\u0639\u064c", "word_translation": "(is) All-Encompassing", "word_transliteration": "wasi'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}