{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u064e\u0631\u064e\u0649\u0670 \u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u064a\u064f\u0633\u064e\u0670\u0631\u0650\u0639\u064f\u0648\u0646\u064e \u0641\u0650\u064a \u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u0650 \u0648\u064e\u0671\u0644\u06e1\u0639\u064f\u062f\u06e1\u0648\u064e\u0670\u0646\u0650 \u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0633\u0651\u064f\u062d\u06e1\u062a\u064e\u06da \u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0631\u064e\u0649\u0670", "word_translation": "And you see", "word_transliteration": "watara"}, {"word_arabic_uthmani": "\u0643\u064e\u062b\u0650\u064a\u0631\u0657\u0627", "word_translation": "many", "word_transliteration": "kathiran"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "of them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u064a\u064f\u0633\u064e\u0670\u0631\u0650\u0639\u064f\u0648\u0646\u064e", "word_translation": "hastening", "word_transliteration": "yusari'una"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "into", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u0650", "word_translation": "[the] sin", "word_transliteration": "al-ith'mi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0639\u064f\u062f\u06e1\u0648\u064e\u0670\u0646\u0650", "word_translation": "and [the] transgression", "word_transliteration": "wal-'ud'wani"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u064f", "word_translation": "and eating", "word_transliteration": "wa-aklihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u062d\u06e1\u062a\u064e\u06da", "word_translation": "the forbidden", "word_transliteration": "al-suh'ta"}, {"word_arabic_uthmani": "\u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "Surely evil", "word_transliteration": "labi'sa"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they were", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "doing", "word_transliteration": "ya'maluna"}]}