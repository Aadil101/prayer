{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f \u0639\u064e\u0644\u064e\u0649\u0670 \u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0656 \u0645\u0651\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u064a \u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u0650\u064a \u0645\u0650\u0646\u06e1\u0647\u064f \u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657 \u0641\u064e\u0645\u064e\u0646 \u064a\u064e\u0646\u0635\u064f\u0631\u064f\u0646\u0650\u064a \u0645\u0650\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0625\u0650\u0646\u06e1 \u0639\u064e\u0635\u064e\u064a\u06e1\u062a\u064f\u0647\u064f\u06e5\u06d6 \u0641\u064e\u0645\u064e\u0627 \u062a\u064e\u0632\u0650\u064a\u062f\u064f\u0648\u0646\u064e\u0646\u0650\u064a \u063a\u064e\u064a\u06e1\u0631\u064e \u062a\u064e\u062e\u06e1\u0633\u0650\u064a\u0631\u0656"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0621\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "Do you see", "word_transliteration": "ara-aytum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f", "word_translation": "I am", "word_transliteration": "kuntu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0629\u0656", "word_translation": "a clear proof", "word_transliteration": "bayyinatin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u064a", "word_translation": "my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0646\u0650\u064a", "word_translation": "and He has given me", "word_transliteration": "waatani"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from Him", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0657", "word_translation": "a Mercy", "word_transliteration": "rahmatan"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646", "word_translation": "then who", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u0635\u064f\u0631\u064f\u0646\u0650\u064a", "word_translation": "(can) help me", "word_transliteration": "yansuruni"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "against", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0639\u064e\u0635\u064e\u064a\u06e1\u062a\u064f\u0647\u064f\u06e5\u06d6", "word_translation": "I (were to) disobey Him", "word_transliteration": "asaytuhu"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0627", "word_translation": "So not", "word_transliteration": "fama"}, {"word_arabic_uthmani": "\u062a\u064e\u0632\u0650\u064a\u062f\u064f\u0648\u0646\u064e\u0646\u0650\u064a", "word_translation": "you would increase me", "word_transliteration": "tazidunani"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u06e1\u0631\u064e", "word_translation": "but", "word_transliteration": "ghayra"}, {"word_arabic_uthmani": "\u062a\u064e\u062e\u06e1\u0633\u0650\u064a\u0631\u0656", "word_translation": "(in) loss", "word_transliteration": "takhsirin"}]}