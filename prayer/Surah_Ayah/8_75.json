iteration": "al-laha"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0644\u0651\u0650", "word_translation": "of every", "word_transliteration": "bikulli"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u064d", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2", "word_translation": "(is) All-Knower", "word_transliteration": "alimun"}]}