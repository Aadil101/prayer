{"ayahs": {"ayah_uthmani": "\u0641\u064e\u062a\u0650\u0644\u06e1\u0643\u064e \u0628\u064f\u064a\u064f\u0648\u062a\u064f\u0647\u064f\u0645\u06e1 \u062e\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u064e\u06e2 \u0628\u0650\u0645\u064e\u0627 \u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652\u06da \u0625\u0650\u0646\u0651\u064e \u0641\u0650\u064a \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0644\u064e\u0623\u0653\u064a\u064e\u0629\u0657 \u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "So these", "word_transliteration": "fatil'ka"}, {"word_arabic_uthmani": "\u0628\u064f\u064a\u064f\u0648\u062a\u064f\u0647\u064f\u0645\u06e1", "word_translation": "(are) their houses", "word_transliteration": "buyutuhum"}, {"word_arabic_uthmani": "\u062e\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u064e\u06e2", "word_translation": "ruined", "word_transliteration": "khawiyatan"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652\u06da", "word_translation": "they wronged", "word_transliteration": "zalamu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u0653\u064a\u064e\u0629\u0657", "word_translation": "surely is a sign", "word_transliteration": "laayatan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "who know", "word_transliteration": "ya'lamuna"}]}