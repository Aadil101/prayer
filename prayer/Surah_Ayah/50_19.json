{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1 \u0633\u064e\u0643\u06e1\u0631\u064e\u0629\u064f \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6 \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064e \u0645\u0650\u0646\u06e1\u0647\u064f \u062a\u064e\u062d\u0650\u064a\u062f\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1", "word_translation": "And will come", "word_transliteration": "wajaat"}, {"word_arabic_uthmani": "\u0633\u064e\u0643\u06e1\u0631\u064e\u0629\u064f", "word_translation": "(the) stupor", "word_transliteration": "sakratu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650", "word_translation": "(of) death", "word_transliteration": "al-mawti"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06d6", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064e", "word_translation": "you were", "word_transliteration": "kunta"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f", "word_translation": "[from it]", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u062a\u064e\u062d\u0650\u064a\u062f\u064f", "word_translation": "avoiding", "word_transliteration": "tahidu"}]}