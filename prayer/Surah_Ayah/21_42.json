{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0645\u064e\u0646 \u064a\u064e\u0643\u06e1\u0644\u064e\u0624\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650 \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650 \u0645\u0650\u0646\u064e \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650\u06da \u0628\u064e\u0644\u06e1 \u0647\u064f\u0645\u06e1 \u0639\u064e\u0646 \u0630\u0650\u0643\u06e1\u0631\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645 \u0645\u0651\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u0644\u064e\u0624\u064f\u0643\u064f\u0645", "word_translation": "(can) protect you", "word_transliteration": "yakla-ukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650", "word_translation": "in the night", "word_transliteration": "bi-al-layli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650", "word_translation": "and the day", "word_transliteration": "wal-nahari"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650\u06da", "word_translation": "the Most Gracious", "word_transliteration": "al-rahmani"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Yet", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u