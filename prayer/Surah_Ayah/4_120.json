{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u064a\u064f\u0645\u064e\u0646\u0651\u0650\u064a\u0647\u0650\u0645\u06e1\u06d6 \u0648\u064e\u0645\u064e\u0627 \u064a\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0625\u0650\u0644\u0651\u064e\u0627 \u063a\u064f\u0631\u064f\u0648\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u06e1", "word_translation": "He promises them", "word_transliteration": "ya'iduhum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0645\u064e\u0646\u0651\u0650\u064a\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "and arouses desires in them", "word_transliteration": "wayumannihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u0650\u062f\u064f\u0647\u064f\u0645\u064f", "word_translation": "promises them", "word_transliteration": "ya'iduhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u063a\u064f\u0631\u064f\u0648\u0631\u064b\u0627", "word_translation": "deception", "word_transliteration": "ghururan"}]}