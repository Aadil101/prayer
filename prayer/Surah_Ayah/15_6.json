{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0646\u064f\u0632\u0651\u0650\u0644\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064f \u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0644\u064e\u0645\u064e\u062c\u06e1\u0646\u064f\u0648\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they say", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(to) whom", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0646\u064f\u0632\u0651\u0650\u0644\u064e", "word_translation": "has been sent down", "word_transliteration": "nuzzila"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "[on him]", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064f", "word_translation": "the Reminder", "word_transliteration": "al-dhik'ru"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "indeed you", "word_transliteration": "innaka"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u062c\u06e1\u0646\u064f\u0648\u0646\u065e", "word_translation": "(are) surely mad", "word_transliteration": "lamajnunun"}]}