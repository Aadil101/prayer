{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0639\u064e\u0644\u0650\u0645\u06e1\u062a\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0639\u06e1\u062a\u064e\u062f\u064e\u0648\u06e1\u0627\u0652 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0628\u06e1\u062a\u0650 \u0641\u064e\u0642\u064f\u0644\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0642\u0650\u0631\u064e\u062f\u064e\u0629\u064b \u062e\u064e\u0670\u0633\u0650\u0640\u0654\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And indeed", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u0645\u06e1\u062a\u064f\u0645\u064f", "word_translation": "you knew", "word_transliteration": "alim'tumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u062a\u064e\u062f\u064e\u0648\u06e1\u0627\u0652", "word_translation": "transgressed", "word_transliteration": "i'tadaw"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u06e1\u062a\u0650", "word_translation": "the (matter of) Sabbath", "word_transliteration": "al-sabti"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u06e1\u0646\u064e\u0627", "word_translation": "So We said", "word_transliteration": "faqul'na"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0643\u064f\u06