{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0647\u064f\u0648\u064e \u0631\u064e\u0628\u0651\u0650\u064a \u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0641\u064e\u0671\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0647\u064f\u06da \u0647\u064e\u0670\u0630\u064e\u0627 \u0635\u0650\u0631\u064e\u0670\u0637\u065e \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "(is) my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "and your Lord", "word_transliteration": "warabbukum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0639\u06e1\u0628\u064f\u062f\u064f\u0648\u0647\u064f\u06da", "word_translation": "so worship Him", "word_transliteration": "fa-u'buduhu"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u065e", "word_translation": "(is) a Path", "word_transliteration": "siratun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u065e", "word_translation": "Straight", "word_transliteration": "mus'taqimun"}]}