{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6 \u0645\u064e\u0646\u064e\u0627\u0645\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650 \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650 \u0648\u064e\u0671\u0628\u06e1\u062a\u0650\u063a\u064e\u0627\u0653\u0624\u064f\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u06da \u0625\u0650\u0646\u0651\u064e \u0641\u0650\u064a \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0644\u064e\u0623\u0653\u064a\u064e\u0670\u062a\u0656 \u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u06e1", "word_translation": "And among", "word_transliteration": "wamin"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His Signs", "word_transliteration": "ayatihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u064e\u0627\u0645\u064f\u0643\u064f\u0645", "word_translation": "(is) your sleep", "word_transliteration": "manamukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650", "word_translation": "by night", "word_transliteration": "bi-al-layli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650", "word_translation": "and the day", "word_transliteration": "wal-nahari"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0628\u06e1\u062a\u0650\u063a\u064e\u0627\u0653\u0624\u064f\u0643\u064f\u0645", "word_translation": "[and] your seeking", "word_transliteration": "wa-ib'tighaukum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u0