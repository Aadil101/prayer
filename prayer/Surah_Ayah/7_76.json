{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e\u0627 \u0628\u0650\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "Said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "were arrogant", "word_transliteration": "is'takbaru"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "in that which", "word_transliteration": "bi-alladhi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u062a\u064f\u0645", "word_translation": "you believe", "word_transliteration": "amantum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(are) disbelievers", "word_transliteration": "kafiruna"}]}