{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064e\u0627 \u0646\u064f\u0648\u062f\u0650\u064a\u064e \u0623\u064e\u0646\u06e2 \u0628\u064f\u0648\u0631\u0650\u0643\u064e \u0645\u064e\u0646 \u0641\u0650\u064a \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u0648\u064e\u0645\u064e\u0646\u06e1 \u062d\u064e\u0648\u06e1\u0644\u064e\u0647\u064e\u0627 \u0648\u064e\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0631\u064e\u0628\u0651\u0650 \u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "But when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u0647\u064e\u0627", "word_translation": "he came to it", "word_transliteration": "jaaha"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u062f\u0650\u064a\u064e", "word_translation": "he was called", "word_transliteration": "nudiya"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u06e2", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0628\u064f\u0648\u0631\u0650\u0643\u064e", "word_translation": "Blessed is", "word_transliteration": "burika"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) at", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "the fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u062d\u064e\u0648\u06e1\u0644\u064e\u0647\u064e\u0627", "word_translation": "(is) around it", "word_transliteration": "hawlaha"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e", "word_translation": "And glory be", "word_transliteration": "wasub'hana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(to) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650", "word_translation": "(the) Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0670\u0644\u064e\u0645\u0650\u064a\u0646\u064e", "word_translation": "(of) the worlds", "word_transliteration": "al-'alamina"}]}