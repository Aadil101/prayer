{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u0650\u064a\u0645\u064c \u062d\u064e\u0643\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0628\u064e\u064a\u0651\u0650\u0646\u064f", "word_translation": "And Allah makes clear", "word_transliteration": "wayubayyinu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah makes clear", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "to you", "word_transliteration": "lakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650\u06da", "word_translation": "the Verses", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "(is) All-Knower", "word_transliteration": "alimun"}, {"word_arabic_uthmani": "\u062d\u064e\u0643\u0650\u064a\u0645\u064c", "word_translation": "All-Wise", "word_transliteration": "hakimun"}]}