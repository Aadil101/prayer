{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u06da \u0641\u064e\u0625\u0650\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u0649\u0670 \u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0646\u064e\u0627 \u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "So obey", "word_transliteration": "wa-ati'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "and obey", "word_transliteration": "wa-ati'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u06da", "word_translation": "the Messenger;", "word_transliteration": "al-rasula"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "but if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u064a\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you turn away", "word_transliteration": "tawallaytum"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "then only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "upon", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0646\u064e\u0627", "word_translation": "Our Messenger", "word_transliteration": "rasulina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0644\u064e\u0670\u063a\u064f", "word_translation": "(is) the conveyance", "word_transliteration": "al-balaghu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f", "word_translation": "clear", "word_transliteration": "al-mubinu"}]}