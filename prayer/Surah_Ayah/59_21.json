{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0647\u064e\u0670\u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u062c\u064e\u0628\u064e\u0644\u0656 \u0644\u0651\u064e\u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u06e5 \u062e\u064e\u0670\u0634\u0650\u0639\u0657\u0627 \u0645\u0651\u064f\u062a\u064e\u0635\u064e\u062f\u0651\u0650\u0639\u0657\u0627 \u0645\u0651\u0650\u0646\u06e1 \u062e\u064e\u0634\u06e1\u064a\u064e\u0629\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e \u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u062b\u064e\u0670\u0644\u064f \u0646\u064e\u0636\u06e1\u0631\u0650\u0628\u064f\u0647\u064e\u0627 \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0641\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We (had) sent down", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u064e", "word_translation": "Quran", "word_transliteration": "al-qur'ana"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u062c\u064e\u0628\u064e\u0644\u0656", "word_translation": "a mountain", "word_transliteration": "jabalin"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0631\u064e\u0623\u064e\u064a\u06e1\u062a\u064e\u0647\u064f\u06e5", "word_translation": "surely you (would) have seen it", "word_transliteration": "lara-aytahu"}, {"word_arabic_uthmani": "\u062e\u064e\u0670\u0634\u0650\u0639\u0657\u0627", "word_translation": "humbled", "word_transliteration": "khashi'an"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u062a\u064e\u0635\u064e\u062f\u0651\u0650\u0639\u0657\u0627", "word_translation": "breaking asunder", "word_transliteration": "mutasaddi'an"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062e\u064e\u0634\u06e1\u064a\u064e\u0629\u0650", "word_translation": "(the) fear", "word_transliteration": "khashyati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "And these", "word_transliteration": "watil'ka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0645\u06e1\u062b\u064e\u0670\u0644\u064f", "word_translation": "(are) the examples", "word_transliteration": "al-amthalu"}, {"word_arabic_uthmani": "\u0646\u064e\u0636\u06e1\u0631\u0650\u0628\u064f\u0647\u064e\u0627", "word_translation": "We present them", "word_transliteration": "nadribuha"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "to the people", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0641\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "give thought", "word_transliteration": "yatafakkaruna"}]}