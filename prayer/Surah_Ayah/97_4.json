{"ayahs": {"ayah_uthmani": "\u062a\u064e\u0646\u064e\u0632\u0651\u064e\u0644\u064f \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u0648\u064e\u0671\u0644\u0631\u0651\u064f\u0648\u062d\u064f \u0641\u0650\u064a\u0647\u064e\u0627 \u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645 \u0645\u0651\u0650\u0646 \u0643\u064f\u0644\u0651\u0650 \u0623\u064e\u0645\u06e1\u0631\u0656"}, "words": [{"word_arabic_uthmani": "\u062a\u064e\u0646\u064e\u0632\u0651\u064e\u0644\u064f", "word_translation": "Descend", "word_transliteration": "tanazzalu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "the Angels", "word_transliteration": "al-malaikatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0631\u0651\u064f\u0648\u062d\u064f", "word_translation": "and the Spirit", "word_transliteration": "wal-ruhu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650", "word_translation": "by (the) permission", "word_transliteration": "bi-idh'ni"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "for", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0656", "word_translation": "affair", "word_transliteration": "amrin"}]}