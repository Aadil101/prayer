{"ayahs": {"ayah_uthmani": "\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0627\u0652 \u0645\u064e\u0646 \u0644\u0651\u064e\u0627 \u064a\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0643\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0631\u0657\u0627 \u0648\u064e\u0647\u064f\u0645 \u0645\u0651\u064f\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0627\u0652", "word_translation": "Follow", "word_transliteration": "ittabi'u"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(those) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0643\u064f\u0645\u06e1", "word_translation": "ask (of) you", "word_transliteration": "yasalukum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u0657\u0627", "word_translation": "any payment", "word_transliteration": "ajran"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645", "word_translation": "and they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "(are) rightly guided", "word_transliteration": "muh'taduna"}]}