{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e \u0671\u0644\u0633\u0651\u064e\u0627\u062d\u0650\u0631\u064f \u0671\u062f\u06e1\u0639\u064f \u0644\u064e\u0646\u064e\u0627 \u0631\u064e\u0628\u0651\u064e\u0643\u064e \u0628\u0650\u0645\u064e\u0627 \u0639\u064e\u0647\u0650\u062f\u064e \u0639\u0650\u0646\u062f\u064e\u0643\u064e \u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627 \u0644\u064e\u0645\u064f\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they said", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e", "word_translation": "O", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u062d\u0650\u0631\u064f", "word_translation": "[the] magician!", "word_transliteration": "al-sahiru"}, {"word_arabic_uthmani": "\u0671\u062f\u06e1\u0639\u064f", "word_translation": "Invoke", "word_transliteration": "ud'u"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "for us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbaka"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "by what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0639\u064e\u0647\u0650\u062f\u064e", "word_translation": "He has made covenant", "word_transliteration": "ahida"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e\u0643\u064e", "word_translation": "with you", "word_transliteration": "indaka"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0646\u064e\u0627", "word_translation": "Indeed we", "word_transliteration": "innana"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064f\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "(will) surely be guided", "word_transliteration": "lamuh'taduna"}]}