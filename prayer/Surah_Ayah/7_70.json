{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u062c\u0650\u0626\u06e1\u062a\u064e\u0646\u064e\u0627 \u0644\u0650\u0646\u064e\u0639\u06e1\u0628\u064f\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5 \u0648\u064e\u0646\u064e\u0630\u064e\u0631\u064e \u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064e \u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f \u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627 \u0641\u064e\u0623\u06e1\u062a\u0650\u0646\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u062a\u064e\u0639\u0650\u062f\u064f\u0646\u064e\u0627\u0653 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u0650\u0626\u06e1\u062a\u064e\u0646\u064e\u0627", "word_translation": "Have you come to us", "word_transliteration": "aji'tana"}, {"word_arabic_uthmani": "\u0644\u0650\u0646\u064e\u0639\u06e1\u0628\u064f\u062f\u064e", "word_translation": "that we (should) worship", "word_transliteration": "lina'buda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5", "word_translation": "Alone", "word_transliteration": "wahdahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0630\u064e\u0631\u064e", "word_translation": "and we forsake", "word_transliteration": "wanadhara"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "used to", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0628\u064f\u062f\u064f", "word_translation": "worship", "word_transliteration": "ya'budu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627", "word_translation": "our forefathers", "word_transliteration": "abauna"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u06e1\u062a\u0650\u0646\u064e\u0627", "word_translation": "Then bring us", "word_transliteration": "fatina"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u0650\u062f\u064f\u0646\u064e\u0627\u0653", "word_translation": "you promise us", "word_transliteration": "ta'iduna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064e", "word_translation": "you are", "word_transliteration": "kunta"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u062f\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "the truthful", "word_transliteration": "al-sadiqina"}]}