{"ayahs": {"ayah_uthmani": "\u0645\u064e\u0646 \u064a\u064e\u0647\u06e1\u062f\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0641\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0645\u064f\u0647\u06e1\u062a\u064e\u062f\u0650\u064a\u06d6 \u0648\u064e\u0645\u064e\u0646 \u064a\u064f\u0636\u06e1\u0644\u0650\u0644\u06e1 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650", "word_translation": "(is) guided", "word_transliteration": "yahdi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0648\u064e", "word_translation": "then he", "word_transliteration": "fahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0647\u06e1\u062a\u064e\u062f\u0650\u064a\u06d6", "word_translation": "(is) the guided one", "word_transliteration": "al-muh'tadi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "while whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064f\u0636\u06e1\u0644\u0650\u0644\u06e1", "word_translation": "He lets go astray", "word_transliteration": "yud'lil"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(are) the losers", "word_transliteration": "al-khasiru