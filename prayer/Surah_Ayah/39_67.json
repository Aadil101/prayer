{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627 \u0642\u064e\u062f\u064e\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u062d\u064e\u0642\u0651\u064e \u0642\u064e\u062f\u06e1\u0631\u0650\u0647\u0650\u06e6 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f \u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627 \u0642\u064e\u0628\u06e1\u0636\u064e\u062a\u064f\u0647\u064f\u06e5 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0648\u064e\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f \u0645\u064e\u0637\u06e1\u0648\u0650\u064a\u0651\u064e\u0640\u0670\u062a\u064f\u06e2 \u0628\u0650\u064a\u064e\u0645\u0650\u064a\u0646\u0650\u0647\u0650\u06e6\u06da \u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5 \u0648\u064e\u062a\u064e\u0639\u064e\u0670\u0644\u064e\u0649\u0670 \u0639\u064e\u0645\u0651\u064e\u0627 \u064a\u064f\u0634\u06e1\u0631\u0650\u0643\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "they appraised", "word_transliteration": "qadaru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u064e", "word_translation": "(with) true", "word_transliteration": "haqqa"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1\u0631\u0650\u0647\u0650\u06e6", "word_translation": "appraisal", "word_transliteration": "qadrihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f", "word_translation": "while the earth", "word_transliteration": "wal-ardu"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627", "word_translation": "entirely", "word_transliteration": "jami'an"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0636\u064e\u062a\u064f\u0647\u064f\u06e5", "word_translation": "(will be) in His Grip", "word_transliteration": "qabdatuhu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f", "word_translation": "and the heavens", "word_transliteration": "wal-samawatu"}, {"word_arabic_uthmani": "\u0645\u064e\u0637\u06e1\u0648\u0650\u064a\u0651\u064e\u0640\u0670\u062a\u064f\u06e2", "word_translation": "(will be) folded", "word_transliteration": "matwiyyatun"}, {"word_arabic_uthmani": "\u0628\u0650\u064a\u064e\u0645\u0650\u064a\u0646\u0650\u0647\u0650\u06e6\u06da", "word_translation": "in His Right Hand", "word_transliteration": "biyaminihi"}, {"word_arabic_uthmani": "\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5", "word_translation": "Glory be to Him!", "word_transliteration": "sub'hanahu"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0639\u064e\u0670\u0644\u064e\u0649\u0670", "word_translation": "And High is He", "word_transliteration": "wata'ala"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0651\u064e\u0627", "word_translation": "above what", "word_transliteration": "amma"}, {"word_arabic_uthmani": "\u064a\u064f\u0634\u06e1\u0631\u0650\u0643\u064f\u0648\u0646\u064e", "word_translation": "they associate (with Him)", "word_transliteration": "yush'rikuna"}]}