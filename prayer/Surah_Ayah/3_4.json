{"ayahs": {"ayah_uthmani": "\u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0647\u064f\u062f\u0657\u0649 \u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0671\u0644\u06e1\u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u064e\u06d7 \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u065e \u0634\u064e\u062f\u0650\u064a\u062f\u065e\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0632\u0650\u064a\u0632\u065e \u0630\u064f\u0648 \u0671\u0646\u062a\u0650\u0642\u064e\u0627\u0645\u064d"}, "words": [{"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "From", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before (this)", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0647\u064f\u062f\u0657\u0649", "word_translation": "(as) guidance", "word_transliteration": "hudan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for the mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "And (He) revealed", "word_transliteration": "wa-anzala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u064e\u06d7", "word_translation": "the Criterion", "word_transliteration": "al-fur'qana"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Verily", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve[d]", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "in (the) Verses", "word_transliteration": "biayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u065e", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u065e\u06d7", "word_translation": "severe", "word_transliteration": "shadidun"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0632\u0650\u064a\u0632\u065e", "word_translation": "(is) All-Mighty", "word_transliteration": "azizun"}, {"word_arabic_uthmani": "\u0630\u064f\u0648", "word_translation": "All-Able", "word_transliteration": "dhu"}, {"word_arabic_uthmani": "\u0671\u0646\u062a\u0650\u0642\u064e\u0627\u0645\u064d", "word_translation": "(of) retribution", "word_transliteration": "intiqamin"}]}