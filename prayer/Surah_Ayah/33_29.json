{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f\u0646\u0651\u064e \u062a\u064f\u0631\u0650\u062f\u06e1\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5 \u0648\u064e\u0671\u0644\u062f\u0651\u064e\u0627\u0631\u064e \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0623\u064e\u0639\u064e\u062f\u0651\u064e \u0644\u0650\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u064e\u0670\u062a\u0650 \u0645\u0650\u0646\u0643\u064f\u0646\u0651\u064e \u0623\u064e\u062c\u06e1\u0631\u064b\u0627 \u0639\u064e\u0638\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0646\u0651\u064e", "word_translation": "you", "word_transliteration": "kuntunna"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u0650\u062f\u06e1\u0646\u064e", "word_translation": "desire", "word_transliteration": "turid'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and His Messenger", "word_transliteration": "warasulahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u062f\u0651\u064e\u0627\u0631\u064e", "word_translation": "and the Home", "word_transliteration": "wal-dara"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064e", "word_translation": "(of) the Hereafter", "word_transliteration": "al-akhirata"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "then indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u