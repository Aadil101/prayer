{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u0650\u062c\u064f\u0644\u064f\u0648\u062f\u0650\u0647\u0650\u0645\u06e1 \u0644\u0650\u0645\u064e \u0634\u064e\u0647\u0650\u062f\u062a\u0651\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627\u06d6 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0637\u064e\u0642\u064e\u0646\u064e\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0646\u0637\u064e\u0642\u064e \u0643\u064f\u0644\u0651\u064e \u0634\u064e\u064a\u06e1\u0621\u0656\u06da \u0648\u064e\u0647\u064f\u0648\u064e \u062e\u064e\u0644\u064e\u0642\u064e\u0643\u064f\u0645\u06e1 \u0623\u064e\u0648\u0651\u064e\u0644\u064e \u0645\u064e\u0631\u0651\u064e\u0629\u0656 \u0648\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they will say", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0644\u0650\u062c\u064f\u0644\u064f\u0648\u062f\u0650\u0647\u0650\u0645\u06e1", "word_translation": "to their skins", "word_transliteration": "lijuludihim"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e", "word_translation": "Why do", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u062f\u062a\u0651\u064f\u0645\u06e1", "word_translation": "you testify", "word_transliteration": "shahidttum"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0646\u064e\u0627\u06d6", "word_translation": "against us", "word_transliteration": "alayna"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They will say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0637\u064e\u0642\u064e\u0646\u064e\u0627", "word_translation": "Allah made us speak", "word_transliteration": "antaqana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah made us speak", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0637\u064e\u0642\u064e", "word_translation": "makes speak", "word_transliteration": "antaqa"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e", "word_translation": "every", "word_transliteration": "kulla"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u0656\u06da", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e\u0643\u064f\u0645\u06e1", "word_translation": "created you", "word_transliteration": "khalaqakum"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u0651\u064e\u0644\u064e", "word_translation": "(the) first", "word_transliteration": "awwala"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u0651\u064e\u0629\u0656", "word_translation": "time", "word_transliteration": "marratin"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "and to Him", "word_transliteration": "wa-ilayhi"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062c\u064e\u0639\u064f\u0648\u0646\u064e", "word_translation": "you will be returned", "word_transliteration": "tur'ja'una"}]}