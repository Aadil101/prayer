{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650\u06e4 \u064a\u064e\u0633\u06e1\u062c\u064f\u062f\u064f\u06e4 \u0645\u064e\u0646 \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u0637\u064e\u0648\u06e1\u0639\u0657\u0627 \u0648\u064e\u0643\u064e\u0631\u06e1\u0647\u0657\u0627 \u0648\u064e\u0638\u0650\u0644\u064e\u0670\u0644\u064f\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u063a\u064f\u062f\u064f\u0648\u0651\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u0635\u064e\u0627\u0644\u0650\u06e9"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650\u06e4", "word_translation": "And to Allah", "word_transliteration": "walillahi"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062c\u064f\u062f\u064f\u06e4", "word_translation": "prostrates", "word_transliteration": "yasjudu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0637\u064e\u0648\u06e1\u0639\u0657\u0627", "word_translation": "willingly", "word_transliteration": "taw'an"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0631\u06e1\u0647\u0657\u0627", "word_translation": "or unwillingly", "word_transliteration": "wakarhan"}, {"word_arabic_uthmani": "\u0648\u064e\u0638\u0650\u0644\u064e\u0670\u0644\u064f\u0647\u064f\u0645", "word_translation": "and (so do) their shadows", "word_transliteration": "wazilaluhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u063a\u064f\u062f\u064f\u0648\u0651\u0650", "word_translation": "in the mornings", "word_transliteration": "bil-ghuduwi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u0635\u064e\u0627\u0644\u0650\u06e9", "word_translation": "and in the afternoons", "word_transliteration": "wal-asali"}]}