{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0643\u064f\u0644\u0651\u0650 \u0623\u064f\u0645\u0651\u064e\u0629\u0656 \u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0645\u064e\u0646\u0633\u064e\u0643\u0657\u0627 \u0644\u0651\u0650\u064a\u064e\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652 \u0671\u0633\u06e1\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0627 \u0631\u064e\u0632\u064e\u0642\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0647\u0650\u064a\u0645\u064e\u0629\u0650 \u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u0650\u06d7 \u0641\u064e\u0625\u0650\u0644\u064e\u0670\u0647\u064f\u0643\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0670\u0647\u065e \u0648\u064e\u0670\u062d\u0650\u062f\u065e \u0641\u064e\u0644\u064e\u0647\u064f\u06e5\u0653 \u0623\u064e\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0627\u0652\u06d7 \u0648\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u0650 \u0671\u0644\u06e1\u0645\u064f\u062e\u06e1\u0628\u0650\u062a\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0643\u064f\u0644\u0651\u0650", "word_translation": "And for every", "word_transliteration": "walikulli"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u0656", "word_translation": "nation", "word_transliteration": "ummatin"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have appointed", "word_transliteration": "ja'alna"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u0633\u064e\u0643\u0657\u0627", "word_translation": "a rite", "word_transliteration": "mansakan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064e\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652", "word_translation": "that they may mention", "word_transliteration": "liyadhkuru"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u0645\u064e", "word_translation": "(the) name", "word_transliteration": "is'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0631\u064e\u0632\u064e\u0642\u064e\u0647\u064f\u0645", "word_translation": "He (has) provided them", "word_transliteration": "razaqahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0647\u0650\u064a\u0645\u064e\u0629\u0650", "word_translation": "(the) beast", "word_transliteration": "bahimati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0639\u064e\u0670\u0645\u0650\u06d7", "word_translation": "(of) cattle", "word_transliteration": "al-an'ami"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0644\u064e\u0670\u0647\u064f\u0643\u064f\u0645\u06e1", "word_translation": "And your God", "word_transliteration": "fa-ilahukum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u065e", "word_translation": "(is) God", "word_transliteration": "ilahun"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u065e", "word_translation": "One", "word_transliteration": "wahidun"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "so to Him", "word_transliteration": "falahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0627\u0652\u06d7", "word_translation": "submit", "word_transliteration": "aslimu"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u0650", "word_translation": "And give glad tidings", "word_transliteration": "wabashiri"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062e\u06e1\u0628\u0650\u062a\u0650\u064a\u0646\u064e", "word_translation": "(to) the humble ones", "word_transliteration": "al-mukh'bitina"}]}