{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0638\u064e\u0670\u0647\u064e\u0631\u064f\u0648\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u06e1 \u0623\u064e\u0647\u06e1\u0644\u0650 \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0645\u0650\u0646 \u0635\u064e\u064a\u064e\u0627\u0635\u0650\u064a\u0647\u0650\u0645\u06e1 \u0648\u064e\u0642\u064e\u0630\u064e\u0641\u064e \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0631\u0651\u064f\u0639\u06e1\u0628\u064e \u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627 \u062a\u064e\u0642\u06e1\u062a\u064f\u0644\u064f\u0648\u0646\u064e \u0648\u064e\u062a\u064e\u0623\u06e1\u0633\u0650\u0631\u064f\u0648\u0646\u064e \u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "And He brought down", "word_transliteration": "wa-anzala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0638\u064e\u0670\u0647\u064e\u0631\u064f\u0648\u0647\u064f\u0645", "word_translation": "backed them", "word_transliteration": "zaharuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "among", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u0650", "word_translation": "(the) People", "word_transliteration": "ahli"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(of) the Scripture", "word_transliteration": "al-kitabi"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0635\u064e\u064a\u064e\u0627\u0635\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "their fortresses", "word_transliteration": "sayasihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0630\u064e\u0641\u064e", "word_translation": "and cast", "word_transliteration": "waqadhafa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "into", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u064f", "word_translation": "their hearts", "word_transliteration": "qulubihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064f\u0639\u06e1\u0628\u064e", "word_translation": "[the] terror", "word_transliteration": "al-ru'ba"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627", "word_translation": "a group", "word_transliteration": "fariqan"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u06e1\u062a\u064f\u0644\u064f\u0648\u0646\u064e", "word_translation": "you killed", "word_transliteration": "taqtuluna"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0623\u06e1\u0633\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "and you took captive", "word_transliteration": "watasiruna"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u064a\u0642\u0657\u0627", "word_translation": "a group", "word_transliteration": "fariqan"}]}