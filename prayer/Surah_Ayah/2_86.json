{"ayahs": {"ayah_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0634\u06e1\u062a\u064e\u0631\u064e\u0648\u064f\u0627\u0652 \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064e \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650\u06d6 \u0641\u064e\u0644\u064e\u0627 \u064a\u064f\u062e\u064e\u0641\u0651\u064e\u0641\u064f \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f \u0648\u064e\u0644\u064e\u0627 \u0647\u064f\u0645\u06e1 \u064a\u064f\u0646\u0635\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) the ones who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0671\u0634\u06e1\u062a\u064e\u0631\u064e\u0648\u064f\u0627\u0652", "word_translation": "bought", "word_transliteration": "ish'tarawu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064e", "word_translation": "the life", "word_transliteration": "al-hayata"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650\u06d6", "word_translation": "for the Hereafter", "word_transliteration": "bil-akhirati"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "so not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u064a\u064f\u062e\u064e\u0641\u0651\u064e\u0641\u064f", "word_translation": "will be lightened", "word_transliteration": "yukhaffafu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u064f", "word_translation": "for them", "word_transliteration": "anhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064f", "word_translation": "the punishment", "word_transliteration": "al-'adhabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "they", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0635\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "will be helped", "word_transliteration": "yunsaruna"}]}