{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0643\u064f\u0644\u0651\u0656 \u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0645\u064e\u0648\u064e\u0670\u0644\u0650\u064a\u064e \u0645\u0650\u0645\u0651\u064e\u0627 \u062a\u064e\u0631\u064e\u0643\u064e \u0671\u0644\u06e1\u0648\u064e\u0670\u0644\u0650\u062f\u064e\u0627\u0646\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0642\u06e1\u0631\u064e\u0628\u064f\u0648\u0646\u064e\u06da \u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0639\u064e\u0642\u064e\u062f\u064e\u062a\u06e1 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064f\u0643\u064f\u0645\u06e1 \u0641\u064e\u0640\u0654\u064e\u0627\u062a\u064f\u0648\u0647\u064f\u0645\u06e1 \u0646\u064e\u0635\u0650\u064a\u0628\u064e\u0647\u064f\u0645\u06e1\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0643\u064e\u0627\u0646\u064e \u0639\u064e\u0644\u064e\u0649\u0670 \u0643\u064f\u0644\u0651\u0650 \u0634\u064e\u064a\u06e1\u0621\u0656 \u0634\u064e\u0647\u0650\u064a\u062f\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0643\u064f\u0644\u0651\u0656", "word_translation": "And for all", "word_transliteration": "walikullin"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We (have) made", "word_transliteration": "ja'alna"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u064e\u0670\u0644\u0650\u064a\u064e", "word_translation": "heirs", "word_transliteration": "mawaliya"}, {"word_arabic_uthmani": "\u0645\u0650\u0645\u0651\u064e\u0627", "word_translation": "of what", "word_transliteration": "mimma"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e\u0643\u064e", "word_translation": "(is) left", "word_transliteration": "taraka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0670\u0644\u0650\u062f\u064e\u0627\u0646\u0650", "word_translation": "(by) the parents", "word_transliteration": "al-walidani"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0642\u06e1\u0631\u064e\u0628\u064f\u0648\u0646\u064e\u06da", "word_translation": "and the relatives", "word_transliteration": "wal-aqrabuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those whom", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0639\u064e\u0642\u064e\u062f\u064e\u062a\u06e1", "word_translation": "pledged", "word_transliteration": "aqadat"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064f\u0643\u064f\u0645\u06e1", "word_translation": "your right hands", "word_transliteration": "aymanukum"}, {"word_arabic_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u062a\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "then give them", "word_transliteration": "faatuhum"}, {"word_arabic_uthmani": "\u0646\u064e\u0635\u0650\u064a\u0628\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "their share", "word_transliteration": "nasibahum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u0656", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u064a\u062f\u064b\u0627", "word_translation": "a Witness", "word_transliteration": "shahidan"}]}