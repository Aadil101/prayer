{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0625\u0650\u0646 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064f\u062d\u0650\u0628\u0651\u064f\u0648\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0641\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u0650\u064a \u064a\u064f\u062d\u06e1\u0628\u0650\u0628\u06e1\u0643\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1 \u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u0650\u0628\u0651\u064f\u0648\u0646\u064e", "word_translation": "love", "word_transliteration": "tuhibbuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0646\u0650\u064a", "word_translation": "then follow me", "word_transliteration": "fa-ittabi'uni"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u06e1\u0628\u0650\u0628\u06e1\u0643\u064f\u0645\u064f", "word_translation": "will love you", "word_transliteration": "yuh'bib'kumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "and He will forgive", "word_transliteration": "wayaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0630\u064f\u0646\u064f\u0648\u0628\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "your sins", "word_transliteration": "dhunubakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}