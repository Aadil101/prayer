{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u062b\u064f\u0645\u0651\u064e \u0644\u064e\u0645\u06e1 \u064a\u064e\u0631\u06e1\u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0648\u064e\u062c\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652 \u0628\u0650\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1 \u0641\u0650\u064a \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u062f\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(are) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "and His Messenger", "word_transliteration": "warasulihi"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "(do) not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "doubt", "word_transliteration": "yartabu"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "but strive", "word_transliteration": "wajahadu"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "with their wealth", "word_transliteration": "bi-amwalihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1", "word_translation": "and their lives", "word_transliteration": "wa-anfusihim"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06da", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u062f\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) the truthful", "word_transliteration": "al-sadiquna"}]}