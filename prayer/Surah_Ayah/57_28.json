{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u064a\u064f\u0624\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1 \u0643\u0650\u0641\u06e1\u0644\u064e\u064a\u06e1\u0646\u0650 \u0645\u0650\u0646 \u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6 \u0648\u064e\u064a\u064e\u062c\u06e1\u0639\u064e\u0644 \u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u0646\u064f\u0648\u0631\u0657\u0627 \u062a\u064e\u0645\u06e1\u0634\u064f\u0648\u0646\u064e \u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O (you who)", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(O) you who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "Fear", "word_transliteration": "ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "and believe", "word_transliteration": "waaminu"}, {"word_arabic_uthmani": "\u0628\u0650\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "in His Messenger", "word_transliteration": "birasulihi"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "He will give you", "word_transliteration": "yu'tikum"}, {"word_arabic_uthmani": "\u0643\u0650\u0641\u06e1\u0644\u064e\u064a\u06e1\u0646\u0650", "word_translation": "double portion", "word_transliteration": "kif'layni"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6", "word_translation": "His Mercy", "word_transliteration": "rahmatihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062c\u06e1\u0639\u064e\u0644", "word_translation": "and He will make", "word_transliteration": "wayaj'al"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u0631\u0657\u0627", "word_translation": "a light", "word_transliteration": "nuran"}, {"word_arabic_uthmani": "\u062a\u064e\u0645\u06e1\u0634\u064f\u0648\u0646\u064e", "word_translation": "you will walk", "word_transliteration": "tamshuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "and He will forgive", "word_transliteration": "wayaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}