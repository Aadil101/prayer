{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631 \u0631\u0651\u064e\u0628\u0651\u064e\u0643\u064e \u0641\u0650\u064a \u0646\u064e\u0641\u06e1\u0633\u0650\u0643\u064e \u062a\u064e\u0636\u064e\u0631\u0651\u064f\u0639\u0657\u0627 \u0648\u064e\u062e\u0650\u064a\u0641\u064e\u0629\u0657 \u0648\u064e\u062f\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u062c\u064e\u0647\u06e1\u0631\u0650 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u0650 \u0628\u0650\u0671\u0644\u06e1\u063a\u064f\u062f\u064f\u0648\u0651\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u0635\u064e\u0627\u0644\u0650 \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0646 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u063a\u064e\u0670\u0641\u0650\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0630\u06e1\u0643\u064f\u0631", "word_translation": "And remember", "word_transliteration": "wa-udh'kur"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064e\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbaka"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0646\u064e\u0641\u06e1\u0633\u0650\u0643\u064e", "word_translation": "yourself", "word_transliteration": "nafsika"}, {"word_arabic_uthmani": "\u062a\u064e\u0636\u064e\u0631\u0651\u064f\u0639\u0657\u0627", "word_translation": "humbly", "word_transliteration": "tadarru'an"}, {"word_arabic_uthmani": "\u0648\u064e\u062e\u0650\u064a\u0641\u064e\u0629\u0657", "word_translation": "and (in) fear", "word_transliteration": "wakhifatan"}, {"word_arabic_uthmani": "\u0648\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "and without", "word_transliteration": "waduna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0647\u06e1\u0631\u0650", "word_translation": "the loudness", "word_transliteration": "al-jahri"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u0650", "word_translation": "[the] words", "word_transliteration": "al-qawli"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u063a\u064f\u062f\u064f\u0648\u0651\u0650", "word_translation": "in the mornings", "word_transliteration": "bil-ghuduwi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u0635\u064e\u0627\u0644\u0650", "word_translation": "and (in) the evenings", "word_transliteration": "wal-asali"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0646", "word_translation": "be", "word_transliteration": "takun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0670\u0641\u0650\u0644\u0650\u064a\u0646\u064e", "word_translation": "the heedless", "word_transliteration": "al-ghafilina"}]}