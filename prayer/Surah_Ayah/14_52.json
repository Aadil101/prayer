{"ayahs": {"ayah_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627 \u0628\u064e\u0644\u064e\u0670\u063a\u065e \u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0648\u064e\u0644\u0650\u064a\u064f\u0646\u0630\u064e\u0631\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6 \u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627 \u0647\u064f\u0648\u064e \u0625\u0650\u0644\u064e\u0670\u0647\u065e \u0648\u064e\u0670\u062d\u0650\u062f\u065e \u0648\u064e\u0644\u0650\u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064e \u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "This", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u064e\u0670\u063a\u065e", "word_translation": "(is) a Message", "word_transliteration": "balaghun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for the mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064f\u0646\u0630\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "that they may be warned", "word_transliteration": "waliyundharu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652", "word_translation": "and that they may know", "word_transliteration": "waliya'lamu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "that only", "word_transliteration": "annama"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u065e", "word_translation": "(is) One God", "word_transliteration": "ilahun"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u065e", "word_translation": "(is) One God", "word_transliteration": "wahidun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064e", "word_translation": "and that may take heed", "word_transliteration": "waliyadhakkara"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652", "word_translation": "men", "word_transliteration": "ulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650", "word_translation": "(of) understanding", "word_transliteration": "al-albabi"}]}