{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u062a\u06e1\u0644\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0646\u064e\u0628\u064e\u0623\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627 \u0641\u064e\u0671\u0646\u0633\u064e\u0644\u064e\u062e\u064e \u0645\u0650\u0646\u06e1\u0647\u064e\u0627 \u0641\u064e\u0623\u064e\u062a\u06e1\u0628\u064e\u0639\u064e\u0647\u064f \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f \u0641\u064e\u0643\u064e\u0627\u0646\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u063a\u064e\u0627\u0648\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u06e1\u0644\u064f", "word_translation": "And recite", "word_transliteration": "wa-ut'lu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0646\u064e\u0628\u064e\u0623\u064e", "word_translation": "(the) story", "word_transliteration": "naba-a"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(of the) one whom", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We gave [him]", "word_transliteration": "ataynahu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "Our Verses", "word_transliteration": "ayatina"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0646\u0633\u064e\u0644\u064e\u062e\u064e", "word_translation": "but he detached", "word_transliteration": "fa-insalakha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627", "word_translation": "[from] them", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062a\u06e1\u0628\u064e\u0639\u064e\u0647\u064f", "word_translation": "so followed him", "word_transliteration": "fa-atba'ahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064f", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytanu"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "and he became", "word_transliteration": "fakana"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0627\u0648\u0650\u064a\u0646\u064e", "word_translation": "those gone astray", "word_transliteration": "al-ghawina"}]}