{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0648\u064e\u0670\u0639\u064e\u062f\u06e1\u0646\u064e\u0627 \u0645\u064f\u0648\u0633\u064e\u0649\u0670\u0653 \u0623\u064e\u0631\u06e1\u0628\u064e\u0639\u0650\u064a\u0646\u064e \u0644\u064e\u064a\u06e1\u0644\u064e\u0629\u0657 \u062b\u064f\u0645\u0651\u064e \u0671\u062a\u0651\u064e\u062e\u064e\u0630\u06e1\u062a\u064f\u0645\u064f \u0671\u0644\u06e1\u0639\u0650\u062c\u06e1\u0644\u064e \u0645\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u06e6 \u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u0638\u064e\u0670\u0644\u0650\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u0639\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "We appointed", "word_transliteration": "wa'adna"}, {"word_arabic_uthmani": "\u0645\u064f\u0648\u0633\u064e\u0649\u0670\u0653", "word_translation": "(for) Musa", "word_transliteration": "musa"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0628\u064e\u0639\u0650\u064a\u0646\u064e", "word_translation": "forty", "word_transliteration": "arba'ina"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u06e1\u0644\u064e\u0629\u0657", "word_translation": "nights", "word_transliteration": "laylatan"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u06e1\u062a\u064f\u0645\u064f", "word_translation": "you took", "word_transliteration": "ittakhadhtumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u062c\u06e1\u0644\u064e", "word_translation": "the calf", "word_transliteration": "al-'ij'la"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u06e6", "word_translation": "after him", "word_transliteration": "ba'dihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "and you", "word_transliteration": "wa-antum"}, {"word_arabic_uthmani": "\u0638\u064e\u0670\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(were) wrongdoers", "word_transliteration": "zalimuna"}]}