{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0625\u0650\u062e\u06e1\u0648\u064e\u0629\u065e \u0641\u064e\u0623\u064e\u0635\u06e1\u0644\u0650\u062d\u064f\u0648\u0627\u0652 \u0628\u064e\u064a\u06e1\u0646\u064e \u0623\u064e\u062e\u064e\u0648\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0625\u0650\u062e\u06e1\u0648\u064e\u0629\u065e", "word_translation": "(are) brothers", "word_transliteration": "ikh'watun"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0635\u06e1\u0644\u0650\u062d\u064f\u0648\u0627\u0652", "word_translation": "so make peace", "word_transliteration": "fa-aslihu"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e", "word_translation": "between", "word_transliteration": "bayna"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0648\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1\u06da", "word_translation": "your brothers", "word_transliteration": "akhawaykum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "and fear Allah", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "and fear Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0631\u06e1\u062d\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "receive mercy", "word_transliteration": "tur'hamuna"}]}