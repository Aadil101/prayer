{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0630\u06e1 \u062c\u064e\u0639\u064e\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u0651\u064e\u0629\u064e \u062d\u064e\u0645\u0650\u064a\u0651\u064e\u0629\u064e \u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650 \u0641\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0633\u064e\u0643\u0650\u064a\u0646\u064e\u062a\u064e\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u0649\u0670 \u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6 \u0648\u064e\u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0648\u064e\u0623\u064e\u0644\u06e1\u0632\u064e\u0645\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064e \u0671\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670 \u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u062d\u064e\u0642\u0651\u064e \u0628\u0650\u0647\u064e\u0627 \u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064e\u0627\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0628\u0650\u0643\u064f\u0644\u0651\u0650 \u0634\u064e\u064a\u06e1\u0621\u064d \u0639\u064e\u0644\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0630\u06e1", "word_translation": "When", "word_transliteration": "idh"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "had put", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u064f", "word_translation": "their hearts", "word_transliteration": "qulubihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u0651\u064e\u0629\u064e", "word_translation": "disdain", "word_transliteration": "al-hamiyata"}, {"word_arabic_uthmani": "\u062d\u064e\u0645\u0650\u064a\u0651\u064e\u0629\u064e", "word_translation": "(the) disdain", "word_transliteration": "hamiyyata"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650", "word_translation": "(of) the time of ignorance", "word_transliteration": "al-jahiliyati"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "Then Allah sent down", "word_transliteration": "fa-anzala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Then Allah sent down", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0633\u064e\u0643\u0650\u064a\u0646\u064e\u062a\u064e\u0647\u064f\u06e5", "word_translation": "His tranquility", "word_transliteration": "sakinatahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "upon", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u0650\u0647\u0650\u06e6", "word_translation": "His Messenger", "word_transliteration": "rasulihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0644\u064e\u0649", "word_translation": "and upon", "word_transliteration": "wa'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0644\u06e1\u0632\u064e\u0645\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and made them adhere", "word_transliteration": "wa-alzamahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0644\u0650\u0645\u064e\u0629\u064e", "word_translation": "(to the) word", "word_transliteration": "kalimata"}, {"word_arabic_uthmani": "\u0671\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670", "word_translation": "(of) righteousness", "word_transliteration": "al-taqwa"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064f\u0648\u0653\u0627\u0652", "word_translation": "and they were", "word_transliteration": "wakanu"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u064e\u0642\u0651\u064e", "word_translation": "more deserving", "word_transliteration": "ahaqqa"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627", "word_translation": "of it", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064e\u0627\u06da", "word_translation": "and worthy of it", "word_transliteration": "wa-ahlaha"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0644\u0651\u0650", "word_translation": "of every", "word_transliteration": "bikulli"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u064d", "word_translation": "thing", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u0657\u0627", "word_translation": "All-Knower", "word_transliteration": "aliman"}]}