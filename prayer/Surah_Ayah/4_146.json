{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u0639\u06e1\u062a\u064e\u0635\u064e\u0645\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0623\u064e\u062e\u06e1\u0644\u064e\u0635\u064f\u0648\u0627\u0652 \u062f\u0650\u064a\u0646\u064e\u0647\u064f\u0645\u06e1 \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0645\u064e\u0639\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e\u06d6 \u0648\u064e\u0633\u064e\u0648\u06e1\u0641\u064e \u064a\u064f\u0624\u06e1\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0623\u064e\u062c\u06e1\u0631\u064b\u0627 \u0639\u064e\u0638\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "Except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062a\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "repent", "word_transliteration": "tabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0635\u06e1\u0644\u064e\u062d\u064f\u0648\u0627\u0652", "word_translation": "and correct (themselves)", "word_transliteration": "wa-aslahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0639\u06e1\u062a\u064e\u0635\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "and hold fast", "word_transliteration": "wa-i'tasamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062e\u06e1\u0644\u064e\u0635\u064f\u0648\u0627\u0652", "word_translation": "and are sincere", "word_transliteration": "wa-akhlasu"}, {"word_arabic_uthmani": "\u062f\u0650\u064a\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "(in) their religion", "word_transliteration": "dinahum"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "for Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those (will be)", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e", "word_translation": "with", "word_transliteration": "ma'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e\u06d6", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0648\u06e1\u0641\u064e", "word_translation": "And soon", "word_transliteration": "wasawfa"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u062a\u0650", "word_translation": "will be given", "word_transliteration": "yu'ti"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064b\u0627", "word_translation": "a reward", "word_transliteration": "ajran"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u0657\u0627", "word_translation": "great", "word_transliteration": "aziman"}]}