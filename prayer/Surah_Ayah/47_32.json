{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0634\u064e\u0627\u0653\u0642\u0651\u064f\u0648\u0627\u0652 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e \u0645\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0645\u064e\u0627 \u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670 \u0644\u064e\u0646 \u064a\u064e\u0636\u064f\u0631\u0651\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0634\u064e\u064a\u06e1\u0640\u0654\u0657\u0627 \u0648\u064e\u0633\u064e\u064a\u064f\u062d\u06e1\u0628\u0650\u0637\u064f \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652", "word_translation": "and turn away", "word_transliteration": "wasaddu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way of Allah", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(the) way of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0634\u064e\u0627\u0653\u0642\u0651\u064f\u0648\u0627\u0652", "word_translation": "and opposed", "word_transliteration": "washaqqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e", "word_translation": "the Messenger", "word_transliteration": "al-rasula"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e2", "word_translation": "after", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "[what]", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u064a\u0651\u064e\u0646\u064e", "word_translation": "(has been) made clear", "word_transliteration": "tabayyana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670", "word_translation": "the guidance", "word_transliteration": "al-huda"}, {"word_arabic_uthmani": "\u0644\u064e\u0646", "word_translation": "never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u064a\u064e\u0636\u064f\u0631\u0651\u064f\u0648\u0627\u0652", "word_translation": "will they harm", "word_transliteration": "yadurru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0640\u0654\u0657\u0627", "word_translation": "(in) anything", "word_transliteration": "shayan"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u064a\u064f\u062d\u06e1\u0628\u0650\u0637\u064f", "word_translation": "and He will make worthless", "word_transliteration": "wasayuh'bitu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", 