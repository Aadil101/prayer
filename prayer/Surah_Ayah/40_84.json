{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0631\u064e\u0623\u064e\u0648\u06e1\u0627\u0652 \u0628\u064e\u0623\u06e1\u0633\u064e\u0646\u064e\u0627 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5 \u0648\u064e\u0643\u064e\u0641\u064e\u0631\u06e1\u0646\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u0643\u064f\u0646\u0651\u064e\u0627 \u0628\u0650\u0647\u0650\u06e6 \u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "So when", "word_transliteration": "falamma"}, {"word_arabic_uthmani": "\u0631\u064e\u0623\u064e\u0648\u06e1\u0627\u0652", "word_translation": "they saw", "word_transliteration": "ra-aw"}, {"word_arabic_uthmani": "\u0628\u064e\u0623\u06e1\u0633\u064e\u0646\u064e\u0627", "word_translation": "Our punishment", "word_transliteration": "basana"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u06e1\u062f\u064e\u0647\u064f\u06e5", "word_translation": "Alone", "word_transliteration": "wahdahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0641\u064e\u0631\u06e1\u0646\u064e\u0627", "word_translation": "and we disbelieve", "word_transliteration": "wakafarna"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "in what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "we used (to)", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "with Him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "associate", "word_transliteration": "mush'rikina"}]}