{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u064f \u0671\u0644\u0651\u064e\u062a\u0650\u064a\u0653 \u0623\u064f\u0648\u0631\u0650\u062b\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u0650\u0644\u06e1\u0643\u064e", "word_translation": "And this", "word_transliteration": "watil'ka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u064f", "word_translation": "(is) the Paradise", "word_transliteration": "al-janatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u062a\u0650\u064a\u0653", "word_translation": "which", "word_transliteration": "allati"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0631\u0650\u062b\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064e\u0627", "word_translation": "you are made to inherit", "word_transliteration": "urith'tumuha"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ta'maluna"}]}