{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u062e\u06e1\u0630\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0631\u0651\u0650\u0628\u064e\u0648\u0670\u0627\u0652 \u0648\u064e\u0642\u064e\u062f\u06e1 \u0646\u064f\u0647\u064f\u0648\u0627\u0652 \u0639\u064e\u0646\u06e1\u0647\u064f \u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u0650\u06da \u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627 \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064b\u0627 \u0623\u064e\u0644\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u062e\u06e1\u0630\u0650\u0647\u0650\u0645\u064f", "word_translation": "And for their taking", "word_transliteration": "wa-akhdhihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0650\u0628\u064e\u0648\u0670\u0627\u0652", "word_translation": "(of) [the] usury", "word_transliteration": "al-riba"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u062f\u06e1", "word_translation": "while certainly", "word_transliteration": "waqad"}, {"word_arabic_uthmani": "\u0646\u064f\u0647\u064f\u0648\u0627\u0652", "word_translation": "they were forbidden", "word_transliteration": "nuhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f", "word_translation": "from it", "word_transliteration": "anhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0643\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "and (for) their consuming", "word_transliteration": "wa-aklihim"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064e", "word_translation": "wealth", "word_transliteration": "amwala"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "(of) the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u0650\u06da", "word_translation": "wrongfully", "word_transliteration": "bil-batili"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "And We have prepared", "word_transliteration": "wa-a'tadna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "among them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064b\u0627", "word_translation": "a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u0657\u0627", "word_translation": "painful", "word_transliteration": "aliman"}]}