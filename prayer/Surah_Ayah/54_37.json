{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0631\u064e\u0670\u0648\u064e\u062f\u064f\u0648\u0647\u064f \u0639\u064e\u0646 \u0636\u064e\u064a\u06e1\u0641\u0650\u0647\u0650\u06e6 \u0641\u064e\u0637\u064e\u0645\u064e\u0633\u06e1\u0646\u064e\u0627\u0653 \u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0639\u064e\u0630\u064e\u0627\u0628\u0650\u064a \u0648\u064e\u0646\u064f\u0630\u064f\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And certainly", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0631\u064e\u0670\u0648\u064e\u062f\u064f\u0648\u0647\u064f", "word_translation": "they demanded from him", "word_transliteration": "rawaduhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "they demanded from him", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0636\u064e\u064a\u06e1\u0641\u0650\u0647\u0650\u06e6", "word_translation": "his guests", "word_transliteration": "dayfihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0637\u064e\u0645\u064e\u0633\u06e1\u0646\u064e\u0627\u0653", "word_translation": "so We blinded", "word_transliteration": "fatamasna"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u064a\u064f\u0646\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their eyes", "word_transliteration": "a'yunahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "So taste", "word_transliteration": "fadhuqu"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0650\u064a", "word_translation": "My punishment", "word_transliteration": "adhabi"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0630\u064f\u0631\u0650", "word_translation": "and My warnings", "word_transliteration": "wanudhuri"}]}