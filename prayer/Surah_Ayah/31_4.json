{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0642\u0650\u064a\u0645\u064f\u0648\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0646\u064e \u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0647\u064f\u0645\u06e1 \u064a\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0642\u0650\u064a\u0645\u064f\u0648\u0646\u064e", "word_translation": "establish", "word_transliteration": "yuqimuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0624\u06e1\u062a\u064f\u0648\u0646\u064e", "word_translation": "and give", "word_transliteration": "wayu'tuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e", "word_translation": "zakah", "word_transliteration": "al-zakata"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645", "word_translation": "and they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "in the Hereafter", "word_transliteration": "bil-akhirati"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u06e1", "word_translation": "[they]", "word_transliteration": "hum"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "believe firmly", "word_transliteration": "yuqinuna"}]}