{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0639\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0644\u064e\u0627 \u064a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u062f\u06e1\u0628\u064e\u0670\u0631\u064e\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0639\u064e\u0647\u06e1\u062f\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u064e\u0633\u06e1\u0640\u0654\u064f\u0648\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And certainly", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they had", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0639\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "promised", "word_transliteration": "ahadu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u064e\u0644\u0651\u064f\u0648\u0646\u064e", "word_translation": "they would turn", "word_transliteration": "yuwalluna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u062f\u06e1\u0628\u064e\u0670\u0631\u064e\u06da", "word_translation": "their backs", "word_transliteration": "al-adbara"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation":