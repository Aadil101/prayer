{"ayahs": {"ayah_uthmani": "\u06de\u0642\u064e\u0627\u0644\u064e \u0633\u064e\u0646\u064e\u0646\u0638\u064f\u0631\u064f \u0623\u064e\u0635\u064e\u062f\u064e\u0642\u06e1\u062a\u064e \u0623\u064e\u0645\u06e1 \u0643\u064f\u0646\u062a\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0643\u064e\u0670\u0630\u0650\u0628\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0633\u064e\u0646\u064e\u0646\u0638\u064f\u0631\u064f", "word_translation": "We will see", "word_transliteration": "sananzuru"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u064e\u062f\u064e\u0642\u06e1\u062a\u064e", "word_translation": "whether you speak (the) truth", "word_transliteration": "asadaqta"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1", "word_translation": "or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064e", "word_translation": "you are", "word_transliteration": "kunta"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0630\u0650\u0628\u0650\u064a\u0646\u064e", "word_translation": "the liars", "word_transliteration": "al-kadhibina"}]}