{"ayahs": {"ayah_uthmani": "\u0643\u064f\u062a\u0650\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0645\u064e\u0646 \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0627\u0647\u064f \u0641\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u064a\u064f\u0636\u0650\u0644\u0651\u064f\u0647\u064f\u06e5 \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650 \u0625\u0650\u0644\u064e\u0649\u0670 \u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0643\u064f\u062a\u0650\u0628\u064e", "word_translation": "It has been decreed", "word_transliteration": "kutiba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "for him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "that he", "word_transliteration": "annahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0627\u0647\u064f", "word_translation": "befriends him", "word_transliteration": "tawallahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "then indeed he", "word_transliteration": "fa-annahu"}, {"word_arabic_uthmani": "\u064a\u064f\u0636\u0650\u0644\u0651\u064f\u0647\u064f\u06e5", "word_translation": "will misguide him", "word_transliteration": "yudilluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650", "word_translation": "and will guide him", "word_transliteration": "wayahdihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "(the) punishment", "word_transliteration": "adhabi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650", "word_translation": "(of) the Blaze", "word_transliteration": "al-sa'iri"}]}