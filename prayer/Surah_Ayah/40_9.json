{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u06da \u0648\u064e\u0645\u064e\u0646 \u062a\u064e\u0642\u0650 \u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650 \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0641\u064e\u0642\u064e\u062f\u06e1 \u0631\u064e\u062d\u0650\u0645\u06e1\u062a\u064e\u0647\u064f\u06e5\u06da \u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u0641\u064e\u0648\u06e1\u0632\u064f \u0671\u0644\u06e1\u0639\u064e\u0638\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u0647\u0650\u0645\u064f", "word_translation": "And protect them", "word_transliteration": "waqihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650\u06da", "word_translation": "(from) the evils", "word_transliteration": "al-sayiati"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u0650", "word_translation": "you protect", "word_transliteration": "taqi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u0650", "word_translation": "(from) the evils", "word_transliteration": "al-sayiati"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "(that) Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "then verily", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u0650\u0645\u06e1\u062a\u064e\u0647\u064f\u06e5\u06da", "word_translation": "You bestowed Mercy on him", "word_transliteration": "rahim'tahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And that", "word_transliteration": "wadhalika"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "[it]", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0648\u06e1\u0632\u064f", "word_translation": "(is) the success", "word_transliteration": "al-fawzu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0638\u0650\u064a\u0645\u064f", "word_translation": "the great", "word_transliteration": "al-'azimu"}]}