{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0645\u064e\u0627\u0653 \u0623\u064e\u062e\u06e1\u0644\u064e\u0641\u06e1\u0646\u064e\u0627 \u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064e\u0643\u064e \u0628\u0650\u0645\u064e\u0644\u06e1\u0643\u0650\u0646\u064e\u0627 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0627 \u062d\u064f\u0645\u0651\u0650\u0644\u06e1\u0646\u064e\u0627\u0653 \u0623\u064e\u0648\u06e1\u0632\u064e\u0627\u0631\u0657\u0627 \u0645\u0651\u0650\u0646 \u0632\u0650\u064a\u0646\u064e\u0629\u0650 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650 \u0641\u064e\u0642\u064e\u0630\u064e\u0641\u06e1\u0646\u064e\u0670\u0647\u064e\u0627 \u0641\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0623\u064e\u0644\u06e1\u0642\u064e\u0649 \u0671\u0644\u0633\u0651\u064e\u0627\u0645\u0650\u0631\u0650\u064a\u0651\u064f"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "Not", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u06e1\u0644\u064e\u0641\u06e1\u0646\u064e\u0627", "word_translation": "we broke", "word_transliteration": "akhlafna"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u0639\u0650\u062f\u064e\u0643\u064e", "word_translation": "promise to you", "word_transliteration": "maw'idaka"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0644\u06e1\u0643\u0650\u0646\u064e\u0627", "word_translation": "by our will", "word_transliteration": "bimalkina"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0627", "word_translation": "but we", "word_transliteration": "walakinna"}, {"word_arabic_uthmani": "\u062d\u064f\u0645\u0651\u0650\u0644\u06e1\u0646\u064e\u0627\u0653", "word_translation": "[we] were made to carry", "word_transliteration": "hummil'na"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u0632\u064e\u0627\u0631\u0657\u0627", "word_translation": "burdens", "word_transliteration": "awzaran"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0632\u0650\u064a\u0646\u064e\u0629\u0650", "word_translation": "ornaments", "word_transliteration": "zinati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "(of) the people", "word_transliteration": "al-qawmi"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u0630\u064e\u0641\u06e1\u0646\u064e\u0670\u0647\u064e\u0627", "word_translation": "so we threw them", "word_transliteration": "faqadhafnaha"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "and thus", "word_transliteration": "fakadhalika"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u06e1\u0642\u064e\u0649", "word_translation": "threw", "word_transliteration": "alqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u0645\u0650\u0631\u0650\u064a\u0651\u064f", "word_translation": "the Samiri", "word_transliteration": "al-samiriyu"}]}