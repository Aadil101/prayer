{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0623\u06e1\u062a\u0650 \u0644\u064e\u0627 \u062a\u064e\u0643\u064e\u0644\u0651\u064e\u0645\u064f \u0646\u064e\u0641\u06e1\u0633\u064c \u0625\u0650\u0644\u0651\u064e\u0627 \u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650\u0647\u0650\u06e6\u06da \u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0634\u064e\u0642\u0650\u064a\u0651\u065e \u0648\u064e\u0633\u064e\u0639\u0650\u064a\u062f\u065e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u062a\u0650", "word_translation": "(it) comes", "word_transliteration": "yati"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064e\u0644\u0651\u064e\u0645\u064f", "word_translation": "will speak", "word_transliteration": "takallamu"}, {"word_arabic_uthmani": "\u0646\u064e\u0641\u06e1\u0633\u064c", "word_translation": "a soul", "word_transliteration": "nafsun"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0628\u0650\u0625\u0650\u0630\u06e1\u0646\u0650\u0647\u0650\u06e6\u06da", "word_translation": "by His leave", "word_transliteration": "bi-idh'nihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "Then among them", "word_transliteration": "famin'hum"}, {"word_arabic_uthmani": "\u0634\u064e\u0642\u0650\u064a\u0651\u065e", "word_translation": "(will be the) wretched", "word_transliteration": "shaqiyyun"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0639\u0650\u064a\u062f\u065e", "word_translation": "and (the) glad", "word_transliteration": "wasa'idun"}]}