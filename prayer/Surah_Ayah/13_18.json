{"ayahs": {"ayah_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0628\u064f\u0648\u0627\u0652 \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670\u06da \u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0644\u064e\u0645\u06e1 \u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0627\u0652 \u0644\u064e\u0647\u064f\u06e5 \u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0651\u064e \u0644\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u0627 \u0641\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650 \u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627 \u0648\u064e\u0645\u0650\u062b\u06e1\u0644\u064e\u0647\u064f\u06e5 \u0645\u064e\u0639\u064e\u0647\u064f\u06e5 \u0644\u064e\u0671\u0641\u06e1\u062a\u064e\u062f\u064e\u0648\u06e1\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6\u0653\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0633\u064f\u0648\u0653\u0621\u064f \u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650 \u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6 \u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0671\u0644\u06e1\u0645\u0650\u0647\u064e\u0627\u062f\u064f"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "For those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0628\u064f\u0648\u0627\u0652", "word_translation": "responded", "word_transliteration": "is'tajabu"}, {"word_arabic_uthmani": "\u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u064f", "word_translation": "to their Lord", "word_transliteration": "lirabbihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670\u06da", "word_translation": "(is) the bliss", "word_transliteration": "al-hus'na"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And for those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "(did) not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0627\u0652", "word_translation": "respond", "word_transliteration": "yastajibu"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "to Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "if", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645", "word_translation": "they had", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "whatever", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650", "word_translation": "the earth", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627", "word_translation": "all", "word_transliteration": "jami'an"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u062b\u06e1\u0644\u064e\u0647\u064f\u06e5", "word_translation": "and like of it", "word_transliteration": "wamith'lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e\u0647\u064f\u06e5", "word_translation": "with it", "word_transliteration": "ma'ahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0671\u0641\u06e1\u062a\u064e\u062f\u064e\u0648\u06e1\u0627\u0652", "word_translation": "surely they would offer ransom", "word_transliteration": "la-if'tadaw"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653\u06da", "word_translation": "with it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0633\u064f\u0648\u0653\u0621\u064f", "word_translation": "(is) a terrible", "word_transliteration": "suu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650", "word_translation": "reckoning", "word_transliteration": "al-hisabi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and their abode", "word_transliteration": "wamawahum"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6", "word_translation": "(is) Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "and wretched", "word_transliteration": "wabi'sa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u0650\u0647\u064e\u0627\u062f\u064f", "word_translation": "(is) the resting place", "word_transliteration": "al-mihadu"}]}