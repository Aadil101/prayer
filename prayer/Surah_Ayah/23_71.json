{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u0650 \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u0623\u064e\u0647\u06e1\u0648\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0641\u064e\u0633\u064e\u062f\u064e\u062a\u0650 \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f \u0648\u064e\u0645\u064e\u0646 \u0641\u0650\u064a\u0647\u0650\u0646\u0651\u064e\u06da \u0628\u064e\u0644\u06e1 \u0623\u064e\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645 \u0628\u0650\u0630\u0650\u0643\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1 \u0641\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0646 \u0630\u0650\u0643\u06e1\u0631\u0650\u0647\u0650\u0645 \u0645\u0651\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u0650", "word_translation": "But if", "word_transliteration": "walawi"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e", "word_translation": "(had) followed", "word_transliteration": "ittaba'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "the truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0648\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their desires", "word_transliteration": "ahwaahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0641\u064e\u0633\u064e\u062f\u064e\u062a\u0650", "word_translation": "surely (would) have been corrupted", "word_transliteration": "lafasadati"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u064f", "word_translation": "the heavens", "word_transliteration": "al-samawatu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064f", "word_translation": "and the earth", "word_transliteration": "wal-ardu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650\u0646\u0651\u064e\u06da", "word_translation": "(is) therein", "word_transliteration": "fihinna"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0623\u064e\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645", "word_translation": "We have brought them", "word_transliteration": "ataynahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0630\u0650\u0643\u06e1\u0631\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their reminder", "word_transliteration": "bidhik'rihim"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0645\u06e1", "word_translation": "but they", "word_transliteration": "fahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0630\u0650\u0643\u06e1\u0631\u0650\u0647\u0650\u0645", "word_translation": "their reminder", "word_transliteration": "dhik'rihim"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0646\u064e", "word_translation": "(are) turning away", "word_transliteration": "mu'riduna"}]}