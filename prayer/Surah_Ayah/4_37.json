{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0628\u06e1\u062e\u064e\u0644\u064f\u0648\u0646\u064e \u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e \u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u062e\u06e1\u0644\u0650 \u0648\u064e\u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e \u0645\u064e\u0627\u0653 \u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7 \u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627 \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627 \u0645\u0651\u064f\u0647\u0650\u064a\u0646\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0628\u06e1\u062e\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "are stingy", "word_transliteration": "yabkhaluna"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "and order", "word_transliteration": "wayamuruna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064e", "word_translation": "the people", "word_transliteration": "al-nasa"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064f\u062e\u06e1\u0644\u0650", "word_translation": "[of] stinginess", "word_transliteration": "bil-bukh'li"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e", "word_translation": "and hide", "word_transliteration": "wayaktumuna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "(has) given them", "word_transliteration": "atahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u06d7", "word_translation": "His Bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0639\u06e1\u062a\u064e\u062f\u06e1\u0646\u064e\u0627", "word_translation": "and We (have) prepared", "word_transliteration": "wa-a'tadna"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627", "word_translation": "a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0647\u0650\u064a\u0646\u0657\u0627", "word_translation": "humiliating", "word_transliteration": "muhinan"}]}