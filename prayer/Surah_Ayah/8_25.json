{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u0657 \u0644\u0651\u064e\u0627 \u062a\u064f\u0635\u0650\u064a\u0628\u064e\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u062e\u064e\u0627\u0653\u0635\u0651\u064e\u0629\u0657\u06d6 \u0648\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0634\u064e\u062f\u0650\u064a\u062f\u064f \u0671\u0644\u06e1\u0639\u0650\u0642\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "And fear", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0641\u0650\u062a\u06e1\u0646\u064e\u0629\u0657", "word_translation": "a trial", "word_transliteration": "fit'natan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064f\u0635\u0650\u064a\u0628\u064e\u0646\u0651\u064e", "word_translation": "which will afflict", "word_transliteration": "tusibanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "do wrong", "word_transliteration": "zalamu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "among you", "word_transliteration": "minkum"}, {"word_arabic_uthmani": "\u062e\u064e\u0627\u0653\u0635\u0651\u064e\u0629\u0657\u06d6", "word_translation": "exclusively", "word_transliteration": "khassatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\