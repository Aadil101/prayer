{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0631\u064e\u0621\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652 \u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0647\u064e\u0640\u0670\u0653\u0624\u064f\u0644\u064e\u0627\u0653\u0621\u0650 \u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064f\u0646\u0651\u064e\u0627 \u0646\u064e\u062f\u06e1\u0639\u064f\u0648\u0627\u0652 \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650\u0643\u064e\u06d6 \u0641\u064e\u0623\u064e\u0644\u06e1\u0642\u064e\u0648\u06e1\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e \u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u0643\u064e\u0670\u0630\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0631\u064e\u0621\u064e\u0627", "word_translation": "(will) see", "word_transliteration": "raa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652", "word_translation": "associated partners with Allah", "word_transliteration": "ashraku"}, {"word_arabic_uthmani": "\u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their partners", "word_transliteration": "shurakaahum"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They will say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0647\u064e\u0640\u0670\u0653\u0624\u064f\u0644\u064e\u0627\u0653\u0621\u0650", "word_translation": "these", "word_transliteration": "haulai"}, {"word_arabic_uthmani": "\u0634\u064f\u0631\u064e\u0643\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627", "word_translation": "(are) our partners", "word_transliteration": "shurakauna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "we used to", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0646\u064e\u062f\u06e1\u0639\u064f\u0648\u0627\u0652", "word_translation": "invoke", "word_transliteration": "nad'u"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "besides You", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650\u0643\u064e\u06d6", "word_translation": "besides You", "word_transliteration": "dunika"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0644\u06e1\u0642\u064e\u0648\u06e1\u0627\u0652", "word_translation": "But they (will) throw back", "word_transliteration": "fa-alqaw"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u064f", "word_translation": "at them", "word_transliteration": "ilayhimu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e", "word_translation": "(their) word", "word_transliteration": "al-qawla"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "Indeed, you", "word_transliteration": "innakum"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0670\u0630\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "(are) surely liars", "word_transliteration": "lakadhibuna"}]}