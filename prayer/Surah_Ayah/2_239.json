{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1 \u062e\u0650\u0641\u06e1\u062a\u064f\u0645\u06e1 \u0641\u064e\u0631\u0650\u062c\u064e\u0627\u0644\u064b\u0627 \u0623\u064e\u0648\u06e1 \u0631\u064f\u0643\u06e1\u0628\u064e\u0627\u0646\u0657\u0627\u06d6 \u0641\u064e\u0625\u0650\u0630\u064e\u0627\u0653 \u0623\u064e\u0645\u0650\u0646\u062a\u064f\u0645\u06e1 \u0641\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0643\u064e\u0645\u064e\u0627 \u0639\u064e\u0644\u0651\u064e\u0645\u064e\u0643\u064f\u0645 \u0645\u0651\u064e\u0627 \u0644\u064e\u0645\u06e1 \u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u062e\u0650\u0641\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you fear", "word_transliteration": "khif'tum"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u0650\u062c\u064e\u0627\u0644\u064b\u0627", "word_translation": "then (pray) on foot", "word_transliteration": "farijalan"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0631\u064f\u0643\u06e1\u0628\u064e\u0627\u0646\u0657\u0627\u06d6", "word_translation": "riding", "word_transliteration": "ruk'banan"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0630\u064e\u0627\u0653", "word_translation": "Then when", "word_transliteration": "fa-idha"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u0650\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you are secure", "word_transliteration": "amintum"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0630\u06e1\u0643\u064f\u0631\u064f\u0648\u0627\u0652", "word_translation": "then remember", "word_transliteration": "fa-udh'kuru"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0651\u064e\u0645\u064e\u0643\u064f\u0645", "word_translation": "He (has) taught you", "word_transliteration": "allamakum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "you were", "word_transliteration": "takunu"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "knowing", "word_transliteration": "ta'lamuna"}]}