{"ayahs": {"ayah_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0627\u0644\u064f \u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u0646\u064f\u0648\u0646\u064e \u0632\u0650\u064a\u0646\u064e\u0629\u064f \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6 \u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u0670\u0642\u0650\u064a\u064e\u0670\u062a\u064f \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u064f \u062e\u064e\u064a\u06e1\u0631\u064c \u0639\u0650\u0646\u062f\u064e \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u062b\u064e\u0648\u064e\u0627\u0628\u0657\u0627 \u0648\u064e\u062e\u064e\u064a\u06e1\u0631\u064c \u0623\u064e\u0645\u064e\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0627\u0644\u064f", "word_translation": "The wealth", "word_transliteration": "al-malu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u0646\u064f\u0648\u0646\u064e", "word_translation": "and children", "word_transliteration": "wal-banuna"}, {"word_arabic_uthmani": "\u0632\u0650\u064a\u0646\u064e\u0629\u064f", "word_translation": "(are) adornment", "word_transliteration": "zinatu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650", "word_translation": "(of) the life", "word_transliteration": "al-hayati"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u06d6", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u0670\u0642\u0650\u064a\u064e\u0670\u062a\u064f", "word_translation": "But the enduring", "word_transliteration": "wal-baqiyatu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u064f", "word_translation": "good deeds", "word_transliteration": "al-salihatu"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064c", "word_translation": "(are) better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "near", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u062b\u064e\u0648\u064e\u0627\u0628\u0657\u0627", "word_translation": "(for) reward", "word_transliteration": "thawaban"}, {"word_arabic_uthmani": "\u0648\u064e\u062e\u064e\u064a\u06e1\u0631\u064c", "word_translation": "and better", "word_transliteration": "wakhayrun"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u064e\u0644\u0657\u0627", "word_translation": "(for) hope", "word_transliteration": "amalan"}]}