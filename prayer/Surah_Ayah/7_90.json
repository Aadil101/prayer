{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0623\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0645\u0650\u0646 \u0642\u064e\u0648\u06e1\u0645\u0650\u0647\u0650\u06e6 \u0644\u064e\u0626\u0650\u0646\u0650 \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1 \u0634\u064f\u0639\u064e\u064a\u06e1\u0628\u064b\u0627 \u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0625\u0650\u0630\u0657\u0627 \u0644\u0651\u064e\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0623\u064f", "word_translation": "the chiefs", "word_transliteration": "al-mala-u"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(of) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "among", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u0650\u0647\u0650\u06e6", "word_translation": "his people", "word_transliteration": "qawmihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646\u0650", "word_translation": "If", "word_transliteration": "la-ini"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you follow", "word_transliteration": "ittaba'tum"}, {"word_arabic_uthmani": "\u0634\u064f\u0639\u064e\u064a\u06e1\u0628\u064b\u0627", "word_translation": "Shuaib", "word_transliteration": "shu'ayban"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "indeed you", "word_transliteration": "innakum"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u0657\u0627", "word_translation": "then", "word_transliteration": "idhan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u062e\u064e\u0670\u0633\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "(will be) certainly losers", "word_transliteration": "lakhasiruna"}]}