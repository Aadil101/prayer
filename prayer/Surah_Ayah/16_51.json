{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u0627 \u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0670\u0647\u064e\u064a\u06e1\u0646\u0650 \u0671\u062b\u06e1\u0646\u064e\u064a\u06e1\u0646\u0650\u06d6 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u0647\u064f\u0648\u064e \u0625\u0650\u0644\u064e\u0670\u0647\u065e \u0648\u064e\u0670\u062d\u0650\u062f\u065e \u0641\u064e\u0625\u0650\u064a\u0651\u064e\u0640\u0670\u064a\u064e \u0641\u064e\u0671\u0631\u06e1\u0647\u064e\u0628\u064f\u0648\u0646\u0650"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And Allah has said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah has said", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0653\u0627\u0652", "word_translation": "take", "word_transliteration": "tattakhidhu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u064e\u064a\u06e1\u0646\u0650", "word_translation": "[two] gods", "word_transliteration": "ilahayni"}, {"word_arabic_uthmani": "\u0671\u062b\u06e1\u0646\u064e\u064a\u06e1\u0646\u0650\u06d6", "word_translation": "two", "word_transliteration": "ith'nayni"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0670\u0647\u065e", "word_translation": "(is) God", "word_transliteration": "ilahun"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u065e", "word_translation": "One", "word_transliteration": "wahidun"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u064a\u0651\u064e\u0640\u0670\u064a\u064e", "word_translation": "so Me Alone", "word_transliteration": "fa-iyyaya"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u0631\u06e1\u0647\u064e\u0628\u064f\u0648\u0646\u0650", "word_translation": "you fear [Me]", "word_transliteration": "fa-ir'habuni"}]}