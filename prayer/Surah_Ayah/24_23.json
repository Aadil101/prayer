{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0631\u06e1\u0645\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0635\u064e\u0646\u064e\u0670\u062a\u0650 \u0671\u0644\u06e1\u063a\u064e\u0670\u0641\u0650\u0644\u064e\u0670\u062a\u0650 \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u0650 \u0644\u064f\u0639\u0650\u0646\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u064c \u0639\u064e\u0638\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u0645\u064f\u0648\u0646\u064e", "word_translation": "accuse", "word_transliteration": "yarmuna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0635\u064e\u0646\u064e\u0670\u062a\u0650", "word_translation": "the chaste women", "word_transliteration": "al-muh'sanati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0670\u0641\u0650\u0644\u064e\u0670\u062a\u0650", "word_translation": "the unaware women", "word_transliteration": "al-ghafilati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "(and) the believing women", "word_transliteration": "al-mu'minati"}, {"word_arabic_uthmani": "\u0644\u064f\u0639\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "are cursed", "word_transliteration": "lu'inu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "and the Hereafter", "word_transliteration": "wal-akhirati"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "And for them", "word_transliteration": "walahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064c", "word_translation": "(is) a punishment", "word_transliteration": "adhabun"}, {"word_arabic_uthmani": "\u0639\u064e\u0638\u0650\u064a\u0645\u065e", "word_translation": "great", "word_transliteration": "azimun"}]}