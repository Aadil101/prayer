{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f \u0671\u062a\u0651\u064e\u0642\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0623\u064e\u062e\u064e\u0630\u064e\u062a\u06e1\u0647\u064f \u0671\u0644\u06e1\u0639\u0650\u0632\u0651\u064e\u0629\u064f \u0628\u0650\u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u0650\u06da \u0641\u064e\u062d\u064e\u0633\u06e1\u0628\u064f\u0647\u064f\u06e5 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6 \u0648\u064e\u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0671\u0644\u06e1\u0645\u0650\u0647\u064e\u0627\u062f\u064f"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f", "word_translation": "to him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0642\u0650", "word_translation": "Fear", "word_transliteration": "ittaqi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0630\u064e\u062a\u06e1\u0647\u064f", "word_translation": "takes him", "word_transliteration": "akhadhathu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0632\u0651\u064e\u0629\u064f", "word_translation": "(his) pride", "word_transliteration": "al-'izatu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0625\u0650\u062b\u06e1\u0645\u0650\u06da", "word_translation": "to [the] sins", "word_transliteration": "bil-ith'mi"}, {"word_arabic_uthmani": "\u0641\u064e\u062d\u064e\u0633\u06e1\u0628\u064f\u0647\u064f\u06e5", "word_translation": "Then enough for him", "word_transliteration": "fahasbuhu"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6", "word_translation": "(is) Hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "[and] surely an evil", "word_transliteration": "walabi'sa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u0650\u0647\u064e\u0627\u062f\u064f", "word_translation": "[the] resting-place", "word_transliteration": "al-mihadu"}]}