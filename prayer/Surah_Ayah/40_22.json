{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0627\u0646\u064e\u062a \u062a\u0651\u064e\u0623\u06e1\u062a\u0650\u064a\u0647\u0650\u0645\u06e1 \u0631\u064f\u0633\u064f\u0644\u064f\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650 \u0641\u064e\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0641\u064e\u0623\u064e\u062e\u064e\u0630\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0642\u064e\u0648\u0650\u064a\u0651\u065e \u0634\u064e\u062f\u0650\u064a\u062f\u064f \u0671\u0644\u06e1\u0639\u0650\u0642\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "(was) because [they]", "word_transliteration": "bi-annahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e\u062a", "word_translation": "used to come to them", "word_transliteration": "kanat"}, {"word_arabic_uthmani": "\u062a\u0651\u064e\u0623\u06e1\u062a\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "used to come to them", "word_transliteration": "tatihim"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064f\u0647\u064f\u0645", "word_translation": "their Messengers", "word_transliteration": "rusuluhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "with clear proofs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0641\u064e\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "but they disbelieved", "word_transliteration": "fakafaru"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062e\u064e\u0630\u064e\u0647\u064f\u0645\u064f", "word_translation": "So Allah seized them", "word_transliteration": "fa-akhadhahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f\u06da", "word_translation": "So Allah seized them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed, He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u0650\u064a\u0651\u065e", "word_translation": "(is) All-Strong", "word_transliteration": "qawiyyun"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u064f", "word_translation": "severe", "word_transliteration": "shadidu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0642\u064e\u0627\u0628\u0650", "word_translation": "(in) punishment", "word_transliteration": "al-'iqabi"}]}