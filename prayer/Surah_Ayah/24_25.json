{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u064a\u064f\u0648\u064e\u0641\u0651\u0650\u064a\u0647\u0650\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u062f\u0650\u064a\u0646\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0648\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0623\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "That Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u064e\u0641\u0651\u0650\u064a\u0647\u0650\u0645\u064f", "word_translation": "Allah will pay them in full", "word_transliteration": "yuwaffihimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah will pay them in full", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u062f\u0650\u064a\u0646\u064e\u0647\u064f\u0645\u064f", "word_translation": "their recompense", "word_transliteration": "dinahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "the due", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "and they will know", "word_transliteration": "waya'lamuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "(is) the Truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f", "word_translation": "the Manifest", "word_transliteration": "al-mubinu"}]}