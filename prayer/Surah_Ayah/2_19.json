{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0648\u06e1 \u0643\u064e\u0635\u064e\u064a\u0651\u0650\u0628\u0656 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650 \u0641\u0650\u064a\u0647\u0650 \u0638\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u065e \u0648\u064e\u0631\u064e\u0639\u06e1\u062f\u065e \u0648\u064e\u0628\u064e\u0631\u06e1\u0642\u065e \u064a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0646\u064e \u0623\u064e\u0635\u064e\u0670\u0628\u0650\u0639\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0653 \u0621\u064e\u0627\u0630\u064e\u0627\u0646\u0650\u0647\u0650\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0648\u064e\u0670\u0639\u0650\u0642\u0650 \u062d\u064e\u0630\u064e\u0631\u064e \u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0645\u064f\u062d\u0650\u064a\u0637\u064f\u06e2 \u0628\u0650\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "Or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u0643\u064e\u0635\u064e\u064a\u0651\u0650\u0628\u0656", "word_translation": "like a rainstorm", "word_transliteration": "kasayyibin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u0653\u0621\u0650", "word_translation": "the sky", "word_transliteration": "al-samai"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650", "word_translation": "in it (are)", "word_transliteration": "fihi"}, {"word_arabic_uthmani": "\u0638\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u065e", "word_translation": "darkness[es]", "word_transliteration": "zulumatun"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0639\u06e1\u062f\u065e", "word_translation": "and thunder", "word_transliteration": "wara'dun"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u064e\u0631\u06e1\u0642\u065e", "word_translation": "and lightning", "word_transliteration": "wabarqun"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u06e1\u0639\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "They put", "word_transliteration": "yaj'aluna"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u064e\u0670\u0628\u0650\u0639\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their fingers", "word_transliteration": "asabi'ahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0630\u064e\u0627\u0646\u0650\u0647\u0650\u0645", "word_translation": "their ears", "word_transliteration": "adhanihim"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0648\u064e\u0670\u0639\u0650\u0642\u0650", "word_translation": "the thunderclaps", "word_transliteration": "al-sawa'iqi"}, {"word_arabic_uthmani": "\u062d\u064e\u0630\u064e\u0631\u064e", "word_translation": "(in) fear (of)", "word_transliteration": "hadhara"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0648\u06e1\u062a\u0650\u06da", "word_translation": "[the] death", "word_transliteration": "al-mawti"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0645\u064f\u062d\u0650\u064a\u0637\u064f\u06e2", "word_translation": "(is) [the One Who] encompasses", "word_transliteration": "muhitun"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the disbelievers", "word_transliteration": "bil-kafirina"}]}