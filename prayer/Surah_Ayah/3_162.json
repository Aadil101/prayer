{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646\u0650 \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e \u0631\u0650\u0636\u06e1\u0648\u064e\u0670\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0643\u064e\u0645\u064e\u0646\u06e2 \u0628\u064e\u0627\u0653\u0621\u064e \u0628\u0650\u0633\u064e\u062e\u064e\u0637\u0656 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6 \u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0671\u0644\u06e1\u0645\u064e\u0635\u0650\u064a\u0631\u064f"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646\u0650", "word_translation": "So is (the one) who", "word_transliteration": "afamani"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e", "word_translation": "pursues", "word_transliteration": "ittaba'a"}, {"word_arabic_uthmani": "\u0631\u0650\u0636\u06e1\u0648\u064e\u0670\u0646\u064e", "word_translation": "(the) pleasure", "word_transliteration": "rid'wana"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0646\u06e2", "word_translation": "like (the one) who", "word_transliteration": "kaman"}, {"word_arabic_uthmani": "\u0628\u064e\u0627\u0653\u0621\u064e", "word_translation": "draws", "word_transliteration": "baa"}, {"word_arabic_uthmani": "\u0628\u0650\u0633\u064e\u062e\u064e\u0637\u0656", "word_translation": "on (himself) wrath", "word_transliteration": "bisakhatin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f", "word_translation": "and his abode", "word_transliteration": "wamawahu"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064f\u06d6", "word_translation": "(is) hell", "word_transliteration": "jahannamu"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "and wretched", "word_transliteration": "wabi'sa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0635\u0650\u064a\u0631\u064f", "word_translation": "(is) the destination", "word_transliteration": "al-masiru"}]}