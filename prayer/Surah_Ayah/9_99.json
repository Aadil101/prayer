{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0623\u064e\u0639\u06e1\u0631\u064e\u0627\u0628\u0650 \u0645\u064e\u0646 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650 \u0648\u064e\u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f \u0645\u064e\u0627 \u064a\u064f\u0646\u0641\u0650\u0642\u064f \u0642\u064f\u0631\u064f\u0628\u064e\u0670\u062a\u064d \u0639\u0650\u0646\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0635\u064e\u0644\u064e\u0648\u064e\u0670\u062a\u0650 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650\u06da \u0623\u064e\u0644\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0647\u064e\u0627 \u0642\u064f\u0631\u06e1\u0628\u064e\u0629\u065e \u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06da \u0633\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0641\u0650\u064a \u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6\u0653\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u064e", "word_translation": "But among", "word_transliteration": "wamina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0639\u06e1\u0631\u064e\u0627\u0628\u0650", "word_translation": "the bedouins", "word_transliteration": "al-a'rabi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "(is he) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f", "word_translation": "believes", "word_transliteration": "yu'minu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "and the Day", "word_transliteration": "wal-yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650", "word_translation": "the Last", "word_transliteration": "al-akhiri"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062a\u0651\u064e\u062e\u0650\u0630\u064f", "word_translation": "and takes", "word_transliteration": "wayattakhidhu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0641\u0650\u0642\u064f", "word_translation": "he spends", "word_transliteration": "yunfiqu"}, {"word_arabic_uthmani": "\u0642\u064f\u0631\u064f\u0628\u064e\u0670\u062a\u064d", "word_translation": "(as) means of nearness", "word_transliteration": "qurubatin"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "with", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u0644\u064e\u0648\u064e\u0670\u062a\u0650", "word_translation": "and blessings", "word_transliteration": "wasalawati"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u0650\u06da", "word_translation": "(of) the Messenger", "word_transliteration": "al-rasuli"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u0627\u0653", "word_translation": "Behold", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064e\u0627", "word_translation": "Indeed, it", "word_transliteration": "innaha"}, {"word_arabic_uthmani": "\u0642\u064f\u0631\u06e1\u0628\u064e\u0629\u065e", "word_translation": "(is) a means of nearness", "word_transliteration": "qur'batun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u064f", "word_translation": "Allah will admit them", "word_transliteration": "sayud'khiluhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah will admit them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "to", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u0650\u0647\u0650\u06e6\u0653\u06da", "word_translation": "His Mercy", "word_transliteration": "rahmatihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u065e", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}