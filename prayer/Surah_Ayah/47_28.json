{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u064f \u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652 \u0645\u064e\u0627\u0653 \u0623\u064e\u0633\u06e1\u062e\u064e\u0637\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0643\u064e\u0631\u0650\u0647\u064f\u0648\u0627\u0652 \u0631\u0650\u0636\u06e1\u0648\u064e\u0670\u0646\u064e\u0647\u064f\u06e5 \u0641\u064e\u0623\u064e\u062d\u06e1\u0628\u064e\u0637\u064e \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u064f", "word_translation": "(is) because they", "word_transliteration": "bi-annahumu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "followed", "word_transliteration": "ittaba'u"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u062e\u064e\u0637\u064e", "word_translation": "angered", "word_transliteration": "askhata"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0631\u0650\u0647\u064f\u0648\u0627\u0652", "word_translation": "and hated", "word_transliteration": "wakarihu"}, {"word_arabic_uthmani": "\u0631\u0650\u0636\u06e1\u0648\u064e\u0670\u0646\u064e\u0647\u064f\u06e5", "word_translation": "His pleasure", "word_transliteration": "rid'wanahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062d\u06e1\u0628\u064e\u0637\u064e", "word_translation": "so He made worthless", "word_transliteration": "fa-ahbata"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their deeds", "word_transliteration": "a'malahum"}]}