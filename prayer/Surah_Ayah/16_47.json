{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0648\u06e1 \u064a\u064e\u0623\u06e1\u062e\u064f\u0630\u064e\u0647\u064f\u0645\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670 \u062a\u064e\u062e\u064e\u0648\u0651\u064f\u0641\u0656 \u0641\u064e\u0625\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u0631\u064e\u0621\u064f\u0648\u0641\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "Or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u062e\u064f\u0630\u064e\u0647\u064f\u0645\u06e1", "word_translation": "that He may seize them", "word_transliteration": "yakhudhahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "with", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u062a\u064e\u062e\u064e\u0648\u0651\u064f\u0641\u0656", "word_translation": "a gradual wasting", "word_transliteration": "takhawwufin"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "But indeed", "word_transliteration": "fa-inna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbakum"}, {"word_arabic_uthmani": "\u0644\u064e\u0631\u064e\u0621\u064f\u0648\u0641\u065e", "word_translation": "(is) surely Full of Kindness", "word_transliteration": "laraufun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064c", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}