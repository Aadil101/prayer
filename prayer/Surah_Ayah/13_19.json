{"ayahs": {"ayah_uthmani": "\u06de\u0623\u064e\u0641\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0623\u064f\u0646\u0632\u0650\u0644\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0645\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u0643\u064e\u0645\u064e\u0646\u06e1 \u0647\u064f\u0648\u064e \u0623\u064e\u0639\u06e1\u0645\u064e\u0649\u0670\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f \u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u06de\u0623\u064e\u0641\u064e\u0645\u064e\u0646", "word_translation": "Then is (he) who", "word_transliteration": "afaman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "knows", "word_transliteration": "ya'lamu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "that which", "word_transliteration": "annama"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u0632\u0650\u0644\u064e", "word_translation": "has been revealed", "word_transliteration": "unzila"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "(is) the truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0646\u06e1", "word_translation": "like (one) who", "word_transliteration": "kaman"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "[he]", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0649\u0670\u0653\u06da", "word_translation": "(is) blind", "word_transliteration": "a'ma"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f", "word_translation": "pay heed", "word_transliteration": "yatadhakkaru"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064f\u0648\u0627\u0652", "word_translation": "men", "word_transliteration": "ulu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650", "word_translation": "(of) understanding", "word_transliteration": "al-albabi"}]}