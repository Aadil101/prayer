{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0648\u064e\u0642\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0634\u064e\u0631\u0651\u064e \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650 \u0648\u064e\u0644\u064e\u0642\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u06e1 \u0646\u064e\u0636\u06e1\u0631\u064e\u0629\u0657 \u0648\u064e\u0633\u064f\u0631\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0648\u064e\u0642\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "But will protect them", "word_transliteration": "fawaqahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0634\u064e\u0631\u0651\u064e", "word_translation": "(from the) evil", "word_transliteration": "sharra"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "(of) that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "Day", "word_transliteration": "al-yawmi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and will cause them to meet", "word_transliteration": "walaqqahum"}, {"word_arabic_uthmani": "\u0646\u064e\u0636\u06e1\u0631\u064e\u0629\u0657", "word_translation": "radiance", "word_transliteration": "nadratan"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064f\u0631\u064f\u0648\u0631\u0657\u0627", "word_translation": "and happiness", "word_transliteration": "wasururan"}]}