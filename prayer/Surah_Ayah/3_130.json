{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0644\u064e\u0627 \u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0631\u0651\u0650\u0628\u064e\u0648\u0670\u0653\u0627\u0652 \u0623\u064e\u0636\u06e1\u0639\u064e\u0670\u0641\u0657\u0627 \u0645\u0651\u064f\u0636\u064e\u0670\u0639\u064e\u0641\u064e\u0629\u0657\u06d6 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O you", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe!", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0643\u064f\u0644\u064f\u0648\u0627\u0652", "word_translation": "eat", "word_transliteration": "takulu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0650\u0628\u064e\u0648\u0670\u0653\u0627\u0652", "word_translation": "the usury", "word_transliteration": "al-riba"}, {"word_arabic_uthmani": "\u0623\u064e\u0636\u06e1\u0639\u064e\u0670\u0641\u0657\u0627", "word_translation": "doubled", "word_transliteration": "ad'afan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0636\u064e\u0670\u0639\u064e\u0641\u064e\u0629\u0657\u06d6", "word_translation": "multiplied", "word_transliteration": "muda'afatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "And fear", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(be) successful", "word_transliteration": "tuf'lihuna"}]}