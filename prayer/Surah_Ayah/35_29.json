{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0646\u064e \u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0623\u064e\u0646\u0641\u064e\u0642\u064f\u0648\u0627\u0652 \u0645\u0650\u0645\u0651\u064e\u0627 \u0631\u064e\u0632\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0633\u0650\u0631\u0651\u0657\u0627 \u0648\u064e\u0639\u064e\u0644\u064e\u0627\u0646\u0650\u064a\u064e\u0629\u0657 \u064a\u064e\u0631\u06e1\u062c\u064f\u0648\u0646\u064e \u062a\u0650\u062c\u064e\u0670\u0631\u064e\u0629\u0657 \u0644\u0651\u064e\u0646 \u062a\u064e\u0628\u064f\u0648\u0631\u064e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u06e1\u0644\u064f\u0648\u0646\u064e", "word_translation": "recite", "word_transliteration": "yatluna"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "(the) Book", "word_transliteration": "kitaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u064e\u0627\u0645\u064f\u0648\u0627\u0652", "word_translation": "and establish", "word_transliteration": "wa-aqamu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0641\u064e\