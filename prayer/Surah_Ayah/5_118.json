{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646 \u062a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u06e1\u0647\u064f\u0645\u06e1 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0639\u0650\u0628\u064e\u0627\u062f\u064f\u0643\u064e\u06d6 \u0648\u064e\u0625\u0650\u0646 \u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e \u0623\u064e\u0646\u062a\u064e \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f \u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u062a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "You punish them", "word_transliteration": "tu'adhib'hum"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "then indeed they", "word_transliteration": "fa-innahum"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u064f\u0643\u064e\u06d6", "word_translation": "(are) Your slaves", "word_transliteration": "ibaduka"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "and if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "You forgive", "word_transliteration": "taghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "[for] them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0643\u064e", "word_translation": "then indeed You", "word_transliteration": "fa-innaka"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064e", "word_translation": "You", "word_transliteration": "anta"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u064f", "word_translation": "(are) the All-Mighty", "word_transliteration": "al-'azizu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0643\u0650\u064a\u0645\u064f", "word_translation": "the All-Wise", "word_transliteration": "al-hakimu"}]}