{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064e \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064e \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627 \u0641\u064e\u0644\u064e\u0647\u064f\u06e5 \u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064b \u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670\u06d6 \u0648\u064e\u0633\u064e\u0646\u064e\u0642\u064f\u0648\u0644\u064f \u0644\u064e\u0647\u064f\u06e5 \u0645\u0650\u0646\u06e1 \u0623\u064e\u0645\u06e1\u0631\u0650\u0646\u064e\u0627 \u064a\u064f\u0633\u06e1\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "But as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0645\u064e\u0646\u06e1", "word_translation": "(one) who", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064e", "word_translation": "believes", "word_transliteration": "amana"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064e", "word_translation": "and does", "word_transliteration": "wa'amila"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627", "word_translation": "righteous (deeds)", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0647\u064f\u06e5", "word_translation": "then for him", "word_transliteration": "falahu"}, {"word_arabic_uthmani": "\u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064b", "word_translation": "(is) a reward", "word_transliteration": "jazaan"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064f\u0633\u06e1\u0646\u064e\u0649\u0670\u06d6", "word_translation": "good", "word_transliteration": "al-hus'na"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0646\u064e\u0642\u064f\u0648\u0644\u064f", "word_translation": "And we will speak", "word_transliteration": "wasanaqulu"}, {"word_arabic_uthmani": "\u0644\