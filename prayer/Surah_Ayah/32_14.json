{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0628\u0650\u0645\u064e\u0627 \u0646\u064e\u0633\u0650\u064a\u062a\u064f\u0645\u06e1 \u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e \u064a\u064e\u0648\u06e1\u0645\u0650\u0643\u064f\u0645\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0627 \u0646\u064e\u0633\u0650\u064a\u0646\u064e\u0670\u0643\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u06e1\u062e\u064f\u0644\u06e1\u062f\u0650 \u0628\u0650\u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "So taste", "word_transliteration": "fadhuqu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0646\u064e\u0633\u0650\u064a\u062a\u064f\u0645\u06e1", "word_translation": "you forgot", "word_transliteration": "nasitum"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e", "word_translation": "(the) meeting", "word_transliteration": "liqaa"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650\u0643\u064f\u0645\u06e1", "word_translation": "(of) this Day of yours", "word_transliteration": "yawmikum"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "(of) this Day of yours", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, We", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0646\u064e\u0633\u0650\u064a\u0646\u064e\u0670\u0643\u064f\u0645\u06e1\u06d6", "word_translation": "have forgotten you", "word_transliteration": "nasinakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "And taste", "word_transliteration": "wadhuqu"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "(the) punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064f\u0644\u06e1\u062f\u0650", "word_translation": "(of) eternity", "word_transliteration": "al-khul'di"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ta'maluna"}]}