{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u0646\u0651\u064e\u0643\u064e\u062b\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0639\u064e\u0647\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0637\u064e\u0639\u064e\u0646\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u062f\u0650\u064a\u0646\u0650\u0643\u064f\u0645\u06e1 \u0641\u064e\u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0626\u0650\u0645\u0651\u064e\u0629\u064e \u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650 \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0627\u0653 \u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0646\u062a\u064e\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0643\u064e\u062b\u064f\u0648\u0653\u0627\u0652", "word_translation": "they break", "word_transliteration": "nakathu"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e\u0647\u064f\u0645", "word_translation": "their oaths", "word_transliteration": "aymanahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "after", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0639\u064e\u0647\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their treaty", "word_transliteration": "ahdihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0637\u064e\u0639\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "and defame", "word_transliteration": "wata'anu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "[in]", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062f\u0650\u064a\u0646\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your religion", "word_transliteration": "dinikum"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "then fight", "word_transliteration": "faqatilu"}, {"word_arabic_uthmani": "\u0623\u064e\u0626\u0650\u0645\u0651\u064e\u0629\u064e", "word_translation": "the leaders", "word_transliteration": "a-immata"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650", "word_translation": "(of) [the] disbelief", "word_transliteration": "al-kuf'ri"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "indeed, they", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627\u0653", "word_translation": "no", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u0645\u064e\u0670\u0646\u064e", "word_translation": "oaths", "word_transliteration": "aymana"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u062a\u064e\u0647\u064f\u0648\u0646\u064e", "word_translation": "cease", "word_transliteration": "yantahuna"}]}