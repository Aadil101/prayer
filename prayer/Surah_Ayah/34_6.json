{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0631\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064f\u0646\u0632\u0650\u0644\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e \u0645\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e \u0647\u064f\u0648\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0653 \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0650 \u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u0650 \u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u062f\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0631\u064e\u0649", "word_translation": "And see", "word_transliteration": "wayara"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652", "word_translation": "have been given", "word_transliteration": "utu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e", "word_translation": "the knowledge", "word_transliteration": "al-'il'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(that) what", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064f\u0646\u0632\u0650\u0644\u064e", "word_translation": "is revealed", "word_transliteration": "unzila"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "ilayka"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "[it]", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "(is) the Truth", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0653", "word_translation": "and it guides", "word_transliteration": "wayahdi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0650", "word_translation": "(the) Path", "word_transliteration": "sirati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0632\u0650\u064a\u0632\u0650", "word_translation": "(of) the All-Mighty", "word_transliteration": "al-'azizi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0645\u0650\u064a\u062f\u0650", "word_translation": "the Praiseworthy", "word_transliteration": "al-hamidi"}]}