{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0628\u064e\u0644\u06e1 \u0641\u064e\u0639\u064e\u0644\u064e\u0647\u064f\u06e5 \u0643\u064e\u0628\u0650\u064a\u0631\u064f\u0647\u064f\u0645\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627 \u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0648\u0647\u064f\u0645\u06e1 \u0625\u0650\u0646 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0646\u0637\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u06e1", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e\u0647\u064f\u06e5", "word_translation": "(some doer) did it", "word_transliteration": "fa'alahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0628\u0650\u064a\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "Their chief", "word_transliteration": "kabiruhum"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "(is) this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "So ask them", "word_transliteration": "fasaluhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "if", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they (can)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0646\u0637\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "speak", "word_transliteration": "yantiquna"}]}