{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0623\u064e\u0646\u0632\u064e\u0644\u064e \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650 \u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u064a\u0632\u064e\u0627\u0646\u064e\u06d7 \u0648\u064e\u0645\u064e\u0627 \u064a\u064f\u062f\u06e1\u0631\u0650\u064a\u0643\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e \u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064e \u0642\u064e\u0631\u0650\u064a\u0628\u065e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u064e", "word_translation": "(has) sent down", "word_transliteration": "anzala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u064a\u0632\u064e\u0627\u0646\u064e\u06d7", "word_translation": "and the Balance", "word_transliteration": "wal-mizana"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u064a\u064f\u062f\u06e1\u0631\u0650\u064a\u0643\u064e", "word_translation": "will make you know", "word_transliteration": "yud'rika"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e", "word_translation": "Perhaps", "word_transliteration": "la'alla"}, {"word_arabic_uthmani": "\u