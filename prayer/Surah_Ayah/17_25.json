{"ayahs": {"ayah_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0627 \u0641\u0650\u064a \u0646\u064f\u0641\u064f\u0648\u0633\u0650\u0643\u064f\u0645\u06e1\u06da \u0625\u0650\u0646 \u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0635\u064e\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0643\u064e\u0627\u0646\u064e \u0644\u0650\u0644\u06e1\u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0628\u0650\u064a\u0646\u064e \u063a\u064e\u0641\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "Your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "(is) most knowing", "word_transliteration": "a'lamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0646\u064f\u0641\u064f\u0648\u0633\u0650\u0643\u064f\u0645\u06e1\u06da", "word_translation": "yourselves", "word_transliteration": "nufusikum"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "you are", "word_transliteration": "takunu"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0650\u064a\u0646\u064e", "word_translation": "righteous", "word_transliteration": "salihina"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "then indeed He", "word_transliteration": "fa-innahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e", "word_translation": "is", "word_transliteration": "kana"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0628\u0650\u064a\u0646\u064e", "word_translation": "to those who often turn (to Him)", "word_transliteration": "lil'awwabina"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u0657\u0627", "word_translation": "Most Forgiving", "word_transliteration": "ghafuran"}]}