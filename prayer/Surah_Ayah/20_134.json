{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0651\u064e\u0627\u0653 \u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f\u0645 \u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u0656 \u0645\u0651\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0644\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u062a\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0646\u064e\u0627 \u0631\u064e\u0633\u064f\u0648\u0644\u0657\u0627 \u0641\u064e\u0646\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064e \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0643\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650 \u0623\u064e\u0646 \u0646\u0651\u064e\u0630\u0650\u0644\u0651\u064e \u0648\u064e\u0646\u064e\u062e\u06e1\u0632\u064e\u0649\u0670"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0627\u0653", "word_translation": "We", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0670\u0647\u064f\u0645", "word_translation": "(had) destroyed them", "word_transliteration": "ahlaknahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u0656", "word_translation": "with a punishment", "word_transliteration": "bi'adhabin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "before him", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "before him", "word_transliteration": "qablihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "surely they (would) have said", "word_transliteration": "laqalu"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "why not", "word_transliteration": "lawla"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u062a\u064e", "word_translation": "You sent", "word_transliteration": "arsalta"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "to us", "word_transliteration": "ilayna"}, {"word_arabic_uthmani": "\u0631\u064e\u0633\u064f\u0648\u0644\u0657\u0627", "word_translation": "a Messenger", "word_transliteration": "rasulan"}, {"word_arabic_uthmani": "\u0641\u064e\u0646\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064e", "word_translation": "so we (could) have followed", "word_transliteration": "fanattabi'a"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0643\u064e", "word_translation": "Your signs", "word_transliteration": "ayatika"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650", "word_translation": "before", "word_transliteration": "qabli"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0630\u0650\u0644\u0651\u064e", "word_translation": "we were humiliated", "word_transliteration": "nadhilla"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u062e\u06e1\u0632\u064e\u0649\u0670", "word_translation": "and disgraced", "word_transliteration": "wanakhza"}]}