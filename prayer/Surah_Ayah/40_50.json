{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0648\u064e\u0644\u064e\u0645\u06e1 \u062a\u064e\u0643\u064f \u062a\u064e\u0623\u06e1\u062a\u0650\u064a\u0643\u064f\u0645\u06e1 \u0631\u064f\u0633\u064f\u0644\u064f\u0643\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650\u06d6 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0628\u064e\u0644\u064e\u0649\u0670\u06da \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652\u06d7 \u0648\u064e\u0645\u064e\u0627 \u062f\u064f\u0639\u064e\u0640\u0670\u0653\u0624\u064f\u0627\u0652 \u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u0641\u0650\u064a \u0636\u064e\u0644\u064e\u0670\u0644\u064d"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They (will) say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u064e\u0644\u064e\u0645\u06e1", "word_translation": "Did there not", "word_transliteration": "awalam"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f", "word_translation": "Did there not", "word_transliteration": "taku"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u062a\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "come to you", "word_transliteration": "tatikum"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064f\u0643\u064f\u0645", "word_translation": "your Messengers", "word_transliteration": "rusulukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650\u06d6", "word_translation": "with clear proofs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They (will) say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u064e\u0649\u0670\u06da", "word_translation": "Yes", "word_transliteration": "bala"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They (will) say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652\u06d7", "word_translation": "Then call", "word_transliteration": "fa-id'u"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "but not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u062f\u064f\u0639\u064e\u0640\u0670\u0653\u0624\u064f\u0627\u0652", "word_translation": "(is) the call", "word_transliteration": "du'au"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "(of) the disbelievers", "word_transliteration": "al-kafirina"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u064e\u0670\u0644\u064d", "word_translation": "error", "word_transliteration": "dalalin"}]}