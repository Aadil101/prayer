{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1 \u0648\u064f\u0639\u0650\u062f\u06e1\u0646\u064e\u0627 \u0646\u064e\u062d\u06e1\u0646\u064f \u0648\u064e\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627 \u0647\u064e\u0670\u0630\u064e\u0627 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0625\u0650\u0646\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627\u0653 \u0623\u064e\u0633\u064e\u0670\u0637\u0650\u064a\u0631\u064f \u0671\u0644\u06e1\u0623\u064e\u0648\u0651\u064e\u0644\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0648\u064f\u0639\u0650\u062f\u06e1\u0646\u064e\u0627", "word_translation": "we have been promised", "word_transliteration": "wu'id'na"}, {"word_arabic_uthmani": "\u0646\u064e\u062d\u06e1\u0646\u064f", "word_translation": "[we]", "word_transliteration": "nahnu"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627", "word_translation": "and our forefathers", "word_transliteration": "waabauna"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "(is) this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627\u0653", "word_translation": "but", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u064e\u0