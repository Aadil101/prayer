{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u0634\u064f \u0639\u064e\u0646 \u0630\u0650\u0643\u06e1\u0631\u0650 \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0646\u064f\u0642\u064e\u064a\u0651\u0650\u0636\u06e1 \u0644\u064e\u0647\u064f\u06e5 \u0634\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0657\u0627 \u0641\u064e\u0647\u064f\u0648\u064e \u0644\u064e\u0647\u064f\u06e5 \u0642\u064e\u0631\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0634\u064f", "word_translation": "turns away", "word_transliteration": "ya'shu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0630\u0650\u0643\u06e1\u0631\u0650", "word_translation": "(the) remembrance", "word_transliteration": "dhik'ri"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "(of) the Most Gracious", "word_transliteration": "al-rahmani"}, {"word_arabic_uthmani": "\u0646\u064f\u0642\u064e\u064a\u0651\u0650\u0636\u06e1", "word_translation": "We appoint", "word_transliteration": "nuqayyid"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "for him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u0657\u0627", "word_translation": "a devil", "word_transliteration": "shaytanan"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0648\u064e", "word_translation": "then he", "word_transliteration": "fahuwa"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "(is) to him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0631\u0650\u064a\u0646\u065e", "word_translation": "a companion", "word_transliteration": "qarinun"}]}