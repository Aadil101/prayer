{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0641\u064e\u062a\u064e\u0646\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1\u06d6 \u0641\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0635\u064e\u062f\u064e\u0642\u064f\u0648\u0627\u0652 \u0648\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e \u0671\u0644\u06e1\u0643\u064e\u0670\u0630\u0650\u0628\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And indeed", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0646\u0651\u064e\u0627", "word_translation": "We tested", "word_transliteration": "fatanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "(were) before them", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "(were) before them", "word_transliteration": "qablihim"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064e\u0646\u0651\u064e", "word_translation": "And will surely make evident", "word_transliteration": "falaya'lamanna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u0642\u064f\u0648\