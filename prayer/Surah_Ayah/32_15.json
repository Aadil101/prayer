{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0625\u0650\u0630\u064e\u0627 \u0630\u064f\u0643\u0651\u0650\u0631\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u064e\u0627 \u062e\u064e\u0631\u0651\u064f\u0648\u0627\u0652\u06e4 \u0633\u064f\u062c\u0651\u064e\u062f\u0657\u0627\u06e4 \u0648\u064e\u0633\u064e\u0628\u0651\u064e\u062d\u064f\u0648\u0627\u0652 \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0627 \u064a\u064e\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u064f\u0648\u0646\u064e\u06e9"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f", "word_translation": "believe", "word_transliteration": "yu'minu"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "in Our Verses", "word_transliteration": "biayatina"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0625\u0650\u0630\u064e\u0627", "word_translation": "when", "word_transliteration": "idha"}, {"word_arabic_uthmani": "\u0630\u064f\u0643\u0651\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "they are reminded", "word_transliteration": "dhukkiru"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627", "word_translation": "of them", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u062e\u064e\u0631\u0651\u064f\u0648\u0627\u0652\u06e4", "word_translation": "fall down", "word_transliteration": "kharru"}, {"word_arabic_uthmani": "\u0633\u064f\u062c\u0651\u064e\u062f\u0657\u0627\u06e4", "word_translation": "prostrating", "word_transliteration": "sujjadan"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0628\u0651\u064e\u062d\u064f\u0648\u0627\u0652", "word_translation": "and glorify", "word_transliteration": "wasabbahu"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650", "word_translation": "(the) praises", "word_transliteration": "bihamdi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(of) their Lord", "word_transliteration": "rabbihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "are not arrogant", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u064f\u0648\u0646\u064e\u06e9", "word_translation": "are not arrogant", "word_transliteration": "yastakbiruna"}]}