{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u064a\u064f\u062d\u06e1\u064a\u0650\u06e6 \u0648\u064e\u064a\u064f\u0645\u0650\u064a\u062a\u064f \u0648\u064e\u0644\u064e\u0647\u064f \u0671\u062e\u06e1\u062a\u0650\u0644\u064e\u0670\u0641\u064f \u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650 \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650\u06da \u0623\u064e\u0641\u064e\u0644\u064e\u0627 \u062a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u06e1\u064a\u0650\u06e6", "word_translation": "gives life", "word_transliteration": "yuh'yi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0645\u0650\u064a\u062a\u064f", "word_translation": "and causes death", "word_transliteration": "wayumitu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0647\u064f", "word_translation": "and for Him", "word_transliteration": "walahu"}, {"word_arabic_uthmani": "\u0671\u062e\u06e1\u062a\u0650\u0644\u064e\u0670\u0641\u064f", "word_translation": "(is the) alternation", "word_transliteration": "ikh'tilafu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u0650", "word_translation": "(of) the night", "word_transliteration": "al-layli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650\u06da", "word_translation": "and the day", "word_transliteration": "wal-nahari"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0644\u064e\u0627", "word_translation": "Then will not", "word_transliteration": "afala"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0642\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "you reason", "word_transliteration": "ta'qiluna"}]}