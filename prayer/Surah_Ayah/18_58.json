{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f \u0630\u064f\u0648 \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0629\u0650\u06d6 \u0644\u064e\u0648\u06e1 \u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0633\u064e\u0628\u064f\u0648\u0627\u0652 \u0644\u064e\u0639\u064e\u062c\u0651\u064e\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064e\u06da \u0628\u064e\u0644 \u0644\u0651\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u065e \u0644\u0651\u064e\u0646 \u064a\u064e\u062c\u0650\u062f\u064f\u0648\u0627\u0652 \u0645\u0650\u0646 \u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6 \u0645\u064e\u0648\u06e1\u0626\u0650\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064e", "word_translation": "And your Lord", "word_transliteration": "warabbuka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0641\u064f\u0648\u0631\u064f", "word_translation": "(is) the Most Forgiving", "word_transliteration": "al-ghafuru"}, {"word_arabic_uthmani": "\u0630\u064f\u0648", "word_translation": "Owner", "word_transliteration": "dhu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0629\u0650\u06d6", "word_translation": "(of) the Mercy", "word_transliteration": "al-rahmati"}, {"word_arabic_uthmani": "\u0644\u064e\u0648\u06e1", "word_translation": "If", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u064e\u0627\u062e\u0650\u0630\u064f\u0647\u064f\u0645", "word_translation": "He were to seize them", "word_transliteration": "yuakhidhuhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0633\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "they have earned", "word_transliteration": "kasabu"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u062c\u0651\u064e\u0644\u064e", "word_translation": "surely, He (would) have hastened", "word_transliteration": "la'ajjala"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "for them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u064e\u06da", "word_translation": "the punishment", "word_transliteration": "al-'adhaba"}, {"word_arabic_uthmani": "\u0628\u064e\u0644", "word_translation": "But", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u062f\u065e", "word_translation": "(is) an appointment", "word_transliteration": "maw'idun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0646", "word_translation": "never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u0650\u062f\u064f\u0648\u0627\u0652", "word_translation": "they will find", "word_transliteration": "yajidu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "other than it", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u062f\u064f\u0648\u0646\u0650\u0647\u0650\u06e6", "word_translation": "other than it", "word_transliteration": "dunihi"}, {"word_arabic_uthmani": "\u0645\u064e\u0648\u06e1\u0626\u0650\u0644\u0657\u0627", "word_translation": "an escape", "word_transliteration": "mawilan"}]}