{"ayahs": {"ayah_uthmani": "\u0633\u064e\u0646\u064f\u0644\u06e1\u0642\u0650\u064a \u0641\u0650\u064a \u0642\u064f\u0644\u064f\u0648\u0628\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u0631\u0651\u064f\u0639\u06e1\u0628\u064e \u0628\u0650\u0645\u064e\u0627\u0653 \u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0645\u064e\u0627 \u0644\u064e\u0645\u06e1 \u064a\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u06e1 \u0628\u0650\u0647\u0650\u06e6 \u0633\u064f\u0644\u06e1\u0637\u064e\u0670\u0646\u0657\u0627\u06d6 \u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6 \u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e \u0645\u064e\u062b\u06e1\u0648\u064e\u0649 \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0633\u064e\u0646\u064f\u0644\u06e1\u0642\u0650\u064a", "word_translation": "We will cast", "word_transliteration": "sanul'qi"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650", "word_translation": "(the) hearts", "word_transliteration": "qulubi"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(of) those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064f\u0639\u06e1\u0628\u064e", "word_translation": "[the] terror", "word_transliteration": "al-ru'ba"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627\u0653", "word_translation": "because", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064f\u0648\u0627\u0652", "word_translation": "they associated partners", "word_transliteration": "ashraku"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "with Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u06e1", "word_translation": "He sent down", "word_transliteration": "yunazzil"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "about it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0633\u064f\u0644\u06e1\u0637\u064e\u0670\u0646\u0657\u0627\u06d6", "word_translation": "any authority", "word_transliteration": "sul'tanan"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "and their refuge", "word_transliteration": "wamawahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6", "word_translation": "(will be) the Fire", "word_transliteration": "al-naru"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0626\u06e1\u0633\u064e", "word_translation": "and wretched", "word_transliteration": "wabi'sa"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u06e1\u0648\u064e\u0649", "word_translation": "(is the) abode", "word_transliteration": "mathwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "[of] the wrongdoers", "word_transliteration": "al-zalimina"}]}