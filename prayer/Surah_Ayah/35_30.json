{"ayahs": {"ayah_uthmani": "\u0644\u0650\u064a\u064f\u0648\u064e\u0641\u0651\u0650\u064a\u064e\u0647\u064f\u0645\u06e1 \u0623\u064f\u062c\u064f\u0648\u0631\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646 \u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0634\u064e\u0643\u064f\u0648\u0631\u065e"}, "words": [{"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0648\u064e\u0641\u0651\u0650\u064a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "That He may give them in full", "word_transliteration": "liyuwaffiyahum"}, {"word_arabic_uthmani": "\u0623\u064f\u062c\u064f\u0648\u0631\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their rewards", "word_transliteration": "ujurahum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0632\u0650\u064a\u062f\u064e\u0647\u064f\u0645", "word_translation": "and increase for them", "word_transliteration": "wayazidahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u0650\u0647\u0650\u06e6\u0653\u06da", "word_translation": "His Bounty", "word_transliteration": "fadlihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0634\u064e\u0643\u064f\u0648\u0631\u065e", "word_translation": "Most Appreciative", "word_transliteration": "shakurun"}]}