{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u062c\u064e\u0670\u0639\u0650\u0644\u064f\u0648\u0646\u064e \u0645\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u0635\u064e\u0639\u0650\u064a\u062f\u0657\u0627 \u062c\u064f\u0631\u064f\u0632\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "And indeed We", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u062c\u064e\u0670\u0639\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "(will) surely make", "word_transliteration": "laja'iluna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "(is) on it", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u0635\u064e\u0639\u0650\u064a\u062f\u0657\u0627", "word_translation": "soil", "word_transliteration": "sa'idan"}, {"word_arabic_uthmani": "\u062c\u064f\u0631\u064f\u0632\u064b\u0627", "word_translation": "barren", "word_transliteration": "juruzan"}]}