{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0646\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0644\u064e\u0623\u064e\u0631\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0644\u064e\u0639\u064e\u0631\u064e\u0641\u06e1\u062a\u064e\u0647\u064f\u0645 \u0628\u0650\u0633\u0650\u064a\u0645\u064e\u0670\u0647\u064f\u0645\u06e1\u06da \u0648\u064e\u0644\u064e\u062a\u064e\u0639\u06e1\u0631\u0650\u0641\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0644\u064e\u062d\u06e1\u0646\u0650 \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u0650\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u06e1"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0646\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "We willed", "word_transliteration": "nashau"}, {"word_arabic_uthmani": "\u0644\u064e\u0623\u064e\u0631\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064e\u0647\u064f\u0645\u06e1", "word_translation": "surely We could show them to you", "word_transliteration": "la-araynakahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0639\u064e\u0631\u064e\u0641\u06e1\u062a\u064e\u0647\u064f\u0645", "word_translation": "and you would know them", "word_transliteration": "fala'araftahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0633\u0650\u064a\u0645\u064e\u0670\u0647\u064f\u0645\u06e1\u06da", "word_translation": "by their marks", "word_transliteration": "bisimahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062a\u064e\u0639\u06e1\u0631\u0650\u0641\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "but surely you will know them", "word_transliteration": "walata'rifannahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "by", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u06e1\u0646\u0650", "word_translation": "(the) tone", "word_transliteration": "lahni"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u0650\u06da", "word_translation": "(of their) speech", "word_transliteration": "al-qawli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "knows", "word_transliteration": "ya'lamu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0645\u064e\u0670\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your deeds", "word_transliteration": "a'malakum"}]}