{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0635\u0650\u0644\u064f\u0648\u0646\u064e \u0645\u064e\u0627\u0653 \u0623\u064e\u0645\u064e\u0631\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0628\u0650\u0647\u0650\u06e6\u0653 \u0623\u064e\u0646 \u064a\u064f\u0648\u0635\u064e\u0644\u064e \u0648\u064e\u064a\u064e\u062e\u06e1\u0634\u064e\u0648\u06e1\u0646\u064e \u0631\u064e\u0628\u0651\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u062e\u064e\u0627\u0641\u064f\u0648\u0646\u064e \u0633\u064f\u0648\u0653\u0621\u064e \u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0635\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "join", "word_transliteration": "yasiluna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627\u0653", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u064e\u0631\u064e", "word_translation": "(has been) commanded", "word_transliteration": "amara"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653", "word_translation": "[for it]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "to", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0635\u064e\u0644\u064e", "word_translation": "be joined", "word_transliteration": "yusala"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062e\u06e1\u0634\u064e\u0648\u06e1\u0646\u064e", "word_translation": "and fear", "word_transliteration": "wayakhshawna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their Lord", "word_transliteration": "rabbahum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062e\u064e\u0627\u0641\u064f\u0648\u0646\u064e", "word_translation": "and are afraid", "word_transliteration": "wayakhafuna"}, {"word_arabic_uthmani": "\u0633\u064f\u0648\u0653\u0621\u064e", "word_translation": "(of) the evil", "word_transliteration": "sua"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u0650\u0633\u064e\u0627\u0628\u0650", "word_translation": "the account", "word_transliteration": "al-hisabi"}]}