{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0645\u064e\u0646 \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1 \u0645\u0650\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0648\u064e\u0647\u064f\u0648\u064e \u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u065e \u0641\u064e\u0644\u064e\u0627 \u0643\u064f\u0641\u06e1\u0631\u064e\u0627\u0646\u064e \u0644\u0650\u0633\u064e\u0639\u06e1\u064a\u0650\u0647\u0650\u06e6 \u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627 \u0644\u064e\u0647\u064f\u06e5 \u0643\u064e\u0670\u062a\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646", "word_translation": "Then whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u06e1", "word_translation": "does", "word_transliteration": "ya'mal"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "[of]", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "[the] righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "while he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u065e", "word_translation": "(is) a believer", "word_transliteration": "mu'minun"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0627", "word_translation": "then not", "word_transliteration": "fala"}, {"word_arabic_uthmani": "\u0643\u064f\u0641\u06e1\u0631\u064e\u0627\u0646\u064e", "word_translation": "(will be) rejected", "word_transliteration": "kuf'rana"}, {"word_arabic_uthmani": "\u0644\u0650\u0633\u064e\u0639\u06e1\u064a\u0650\u0647\u0650\u06e6", "word_translation": "[of] his effort", "word_transliteration": "lisa'yihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "And indeed We", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u06e5", "word_translation": "of it", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0670\u062a\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "(are) Recorders", "word_transliteration": "katibuna"}]}