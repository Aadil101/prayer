{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0634\u064e\u0642\u064f\u0648\u0627\u0652 \u0641\u064e\u0641\u0650\u064a \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u0632\u064e\u0641\u0650\u064a\u0631\u065e \u0648\u064e\u0634\u064e\u0647\u0650\u064a\u0642\u064c"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "As for", "word_transliteration": "fa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0634\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "were wretched", "word_transliteration": "shaqu"}, {"word_arabic_uthmani": "\u0641\u064e\u0641\u0650\u064a", "word_translation": "then (they will be) in", "word_transliteration": "fafi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "the Fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "For them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0632\u064e\u0641\u0650\u064a\u0631\u065e", "word_translation": "(is) sighing", "word_transliteration": "zafirun"}, {"word_arabic_uthmani": "\u0648\u064e\u0634\u064e\u0647\u0650\u064a\u0642\u064c", "word_translation": "and wailing", "word_transliteration": "washahiqun"}]}