{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0630\u0650\u0643\u06e1\u0631\u065e \u0644\u0651\u064e\u0643\u064e \u0648\u064e\u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0650\u0643\u064e\u06d6 \u0648\u064e\u0633\u064e\u0648\u06e1\u0641\u064e \u062a\u064f\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "And indeed it", "word_transliteration": "wa-innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0630\u0650\u0643\u06e1\u0631\u065e", "word_translation": "(is) surely a Reminder", "word_transliteration": "ladhik'run"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0643\u064e", "word_translation": "for you", "word_transliteration": "laka"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0650\u0643\u064e\u06d6", "word_translation": "and your people", "word_transliteration": "waliqawmika"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0648\u06e1\u0641\u064e", "word_translation": "and soon", "word_transliteration": "wasawfa"}, {"word_arabic_uthmani": "\u062a\u064f\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "you will be questioned", "word_transliteration": "tus'aluna"}]}