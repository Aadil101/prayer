{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0641\u064e\u0633\u064e\u0642\u064f\u0648\u0627\u0652 \u0641\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6 \u0643\u064f\u0644\u0651\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0631\u064e\u0627\u062f\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646 \u064a\u064e\u062e\u06e1\u0631\u064f\u062c\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1\u0647\u064e\u0627\u0653 \u0623\u064f\u0639\u0650\u064a\u062f\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0647\u064e\u0627 \u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0639\u064e\u0630\u064e\u0627\u0628\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0643\u064f\u0646\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u062a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "But as for", "word_transliteration": "wa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "are defiantly disobedient", "word_transliteration": "fasaqu"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "then their refuge", "word_transliteration": "famawahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6", "word_translation": "(is) the Fire", "word_transliteration": "al-naru"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "Every time", "word_transliteration": "kullama"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u064e\u0627\u062f\u064f\u0648\u0653\u0627\u0652", "word_translation": "they wish", "word_transliteration": "aradu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "to", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u06e1\u0631\u064f\u062c\u064f\u0648\u0627\u0652", "word_translation": "come out", "word_transliteration": "yakhruju"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1\u0647\u064e\u0627\u0653", "word_translation": "from it", "word_transliteration": "min'ha"}, {"word_arabic_uthmani": "\u0623\u064f\u0639\u0650\u064a\u062f\u064f\u0648\u0627\u0652", "word_translation": "they (will) be returned", "word_transliteration": "u'idu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "and it (will) be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "to them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "Taste", "word_transliteration": "dhuqu"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u064e", "word_translation": "(the) punishment", "word_transliteration": "adhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "(of) the Fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "which", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "[in it]", 