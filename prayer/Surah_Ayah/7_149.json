{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627 \u0633\u064f\u0642\u0650\u0637\u064e \u0641\u0650\u064a\u0653 \u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0648\u064e\u0631\u064e\u0623\u064e\u0648\u06e1\u0627\u0652 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u062f\u06e1 \u0636\u064e\u0644\u0651\u064f\u0648\u0627\u0652 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0644\u064e\u0626\u0650\u0646 \u0644\u0651\u064e\u0645\u06e1 \u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627 \u0631\u064e\u0628\u0651\u064f\u0646\u064e\u0627 \u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0646\u064e\u0627 \u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "And when", "word_transliteration": "walamma"}, {"word_arabic_uthmani": "\u0633\u064f\u0642\u0650\u0637\u064e", "word_translation": "(it was made to) fall", "word_transliteration": "suqita"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0653", "word_translation": "into", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "their hands", "word_transliteration": "aydihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0623\u064e\u0648\u06e1\u0627\u0652", "word_translation": "and they saw", "word_transliteration": "wara-aw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "that they", "word_transliteration": "annahum"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "(had) indeed", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0636\u064e\u0644\u0651\u064f\u0648\u0627\u0652", "word_translation": "gone astray", "word_transliteration": "dallu"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "they said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0644\u064e\u0626\u0650\u0646", "word_translation": "If", "word_transliteration": "la-in"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627", "word_translation": "has Mercy on us", "word_transliteration": "yarhamna"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbuna"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "and forgive", "word_transliteration": "wayaghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "[for] us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e", "word_translation": "we will surely be", "word_transliteration": "lanakunanna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the losers", "word_transliteration": "al-khasirina"}]}