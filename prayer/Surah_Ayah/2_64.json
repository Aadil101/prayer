{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u062a\u064e\u0648\u064e\u0644\u0651\u064e\u064a\u06e1\u062a\u064f\u0645 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650 \u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6 \u0641\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627 \u0641\u064e\u0636\u06e1\u0644\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u062a\u064f\u0647\u064f\u06e5 \u0644\u064e\u0643\u064f\u0646\u062a\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u064a\u06e1\u062a\u064f\u0645", "word_translation": "you turned away", "word_transliteration": "tawallaytum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650", "word_translation": "after", "word_transliteration": "ba'di"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6", "word_translation": "that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627", "word_translation": "So if not", "word_transliteration": "falawla"}, {"word_arabic_uthmani": "\u0641\u064e\u0636\u06e1\u0644\u064f", "word_translation": "(for the) Grace", "word_transliteration": "fadlu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "upon you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0648\u06