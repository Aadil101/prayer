{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0648\u06e1 \u062a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064e \u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u064f \u0648\u064e\u0643\u064f\u0646\u0651\u064e\u0627 \u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0629\u0657 \u0645\u0651\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1\u06d6 \u0623\u064e\u0641\u064e\u062a\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0646\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u0641\u064e\u0639\u064e\u0644\u064e \u0671\u0644\u06e1\u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1", "word_translation": "Or", "word_transliteration": "aw"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "you say", "word_transliteration": "taqulu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u0623\u064e\u0634\u06e1\u0631\u064e\u0643\u064e", "word_translation": "partners (were) associated (with Allah)", "word_transliteration": "ashraka"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0628\u064e\u0627\u0653\u0624\u064f\u0646\u064e\u0627", "word_translation": "(by) our forefathers", "word_transliteration": "abauna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u064f", "word_translation": "before (us)", "word_transliteration": "qablu"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "and we are", "word_transliteration": "wakunna"}, {"word_arabic_uthmani": "\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0629\u0657", "word_translation": "descendants", "word_transliteration": "dhurriyyatan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650\u0647\u0650\u0645\u06e1\u06d6", "word_translation": "after them", "word_transliteration": "ba'dihim"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u062a\u064f\u0647\u06e1\u0644\u0650\u0643\u064f\u0646\u064e\u0627", "word_translation": "So will You destroy us", "word_transliteration": "afatuh'likuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u064e", "word_translation": "did", "word_transliteration": "fa'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "the falsifiers", "word_transliteration": "al-mub'tiluna"}]}