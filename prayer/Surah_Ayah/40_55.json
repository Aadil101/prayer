{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1 \u0625\u0650\u0646\u0651\u064e \u0648\u064e\u0639\u06e1\u062f\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062d\u064e\u0642\u0651\u065e \u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u0650\u0630\u064e\u0646\u06e2\u0628\u0650\u0643\u064e \u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1 \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0628\u0650\u0671\u0644\u06e1\u0639\u064e\u0634\u0650\u064a\u0651\u0650 \u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u0628\u06e1\u0643\u064e\u0670\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u0635\u06e1\u0628\u0650\u0631\u06e1", "word_translation": "So be patient", "word_transliteration": "fa-is'bir"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064e", "word_translation": "(the) Promise of Allah", "word_transliteration": "wa'da"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(the) Promise of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u065e", "word_translation": "(is) true", "word_transliteration": "haqqun"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0633\u06e1\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "And ask forgiveness", "word_transliteration": "wa-is'taghfir"}, {"word_arabic_uthmani": "\u0644\u0650\u0630\u064e\u0646\u06e2\u0628\u0650\u0643\u064e", "word_translation": "for your sin", "word_transliteration": "lidhanbika"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1", "word_translation": "and glorify", "word_transliteration": "wasabbih"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650", "word_translation": "(the) praise", "word_transliteration": "bihamdi"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(of) your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0639\u064e\u0634\u0650\u064a\u0651\u0650", "word_translation": "in the evening", "word_transliteration": "bil-'ashiyi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u0628\u06e1\u0643\u064e\u0670\u0631\u0650", "word_translation": "and the morning", "word_transliteration": "wal-ib'kari"}]}