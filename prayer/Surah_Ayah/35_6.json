{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0639\u064e\u062f\u064f\u0648\u0651\u065e \u0641\u064e\u0671\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0647\u064f \u0639\u064e\u062f\u064f\u0648\u0651\u064b\u0627\u06da \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0627\u0652 \u062d\u0650\u0632\u06e1\u0628\u064e\u0647\u064f\u06e5 \u0644\u0650\u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u06e1 \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650 \u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0634\u0651\u064e\u064a\u06e1\u0637\u064e\u0670\u0646\u064e", "word_translation": "the Shaitaan", "word_transliteration": "al-shaytana"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "(is) to you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u064f\u0648\u0651\u065e", "word_translation": "an enemy", "word_transliteration": "aduwwun"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u062e\u0650\u0630\u064f\u0648\u0647\u064f", "word_translation": "so take him", "word_transliteration": "fa-ittakhidhuhu"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u064f\u0648\u0651\u064b\u0627\u06da", "word_translation": "(as) an enemy", "word_transliteration": "aduwwan"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0627\u0652", "word_translation": "he invites", "word_transliteration": "yad'u"}, {"word_arabic_uthmani": "\u062d\u0650\u0632\u06e1\u0628\u064e\u0647\u064f\u06e5", "word_translation": "his party", "word_transliteration": "hiz'bahu"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "that they may be", "word_transliteration": "liyakunu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "among", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u0650", "word_translation": "(the) companions", "word_transliteration": "ashabi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0639\u0650\u064a\u0631\u0650", "word_translation": "(of) the Blaze", "word_transliteration": "al-sa'iri"}]}