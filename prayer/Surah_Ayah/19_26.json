{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0643\u064f\u0644\u0650\u064a \u0648\u064e\u0671\u0634\u06e1\u0631\u064e\u0628\u0650\u064a \u0648\u064e\u0642\u064e\u0631\u0651\u0650\u064a \u0639\u064e\u064a\u06e1\u0646\u0657\u0627\u06d6 \u0641\u064e\u0625\u0650\u0645\u0651\u064e\u0627 \u062a\u064e\u0631\u064e\u064a\u0650\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0628\u064e\u0634\u064e\u0631\u0650 \u0623\u064e\u062d\u064e\u062f\u0657\u0627 \u0641\u064e\u0642\u064f\u0648\u0644\u0650\u064a\u0653 \u0625\u0650\u0646\u0651\u0650\u064a \u0646\u064e\u0630\u064e\u0631\u06e1\u062a\u064f \u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0635\u064e\u0648\u06e1\u0645\u0657\u0627 \u0641\u064e\u0644\u064e\u0646\u06e1 \u0623\u064f\u0643\u064e\u0644\u0651\u0650\u0645\u064e \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e \u0625\u0650\u0646\u0633\u0650\u064a\u0651\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0643\u064f\u0644\u0650\u064a", "word_translation": "So eat", "word_transliteration": "fakuli"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0634\u06e1\u0631\u064e\u0628\u0650\u064a", "word_translation": "and drink", "word_transliteration": "wa-ish'rabi"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0631\u0651\u0650\u064a", "word_translation": "and cool", "word_transliteration": "waqarri"}, {"word_arabic_uthmani": "\u0639\u064e\u064a\u06e1\u0646\u0657\u0627\u06d6", "word_translation": "(your) eyes", "word_transliteration": "aynan"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0645\u0651\u064e\u0627", "word_translation": "And if", "word_transliteration": "fa-imma"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e\u064a\u0650\u0646\u0651\u064e", "word_translation": "you see", "word_transliteration": "tarayinna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0634\u064e\u0631\u0650", "word_translation": "human being", "word_transliteration": "al-bashari"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u064e\u062f\u0657\u0627", "word_translation": "anyone", "word_transliteration": "ahadan"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0648\u0644\u0650\u064a\u0653", "word_translation": "then say", "word_transliteration": "faquli"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a", "word_translation": "Indeed I", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u0646\u064e\u0630\u064e\u0631\u06e1\u062a\u064f", "word_translation": "[I] have vowed", "word_transliteration": "nadhartu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "to the Most Gracious", "word_transliteration": "lilrrahmani"}, {"word_arabic_uthmani": "\u0635\u064e\u0648\u06e1\u0645\u0657\u0627", "word_translation": "a fast", "word_transliteration": "sawman"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0646\u06e1", "word_translation": "so not", "word_transliteration": "falan"}, {"word_arabic_uthmani": "\u0623\u064f\u0643\u064e\u0644\u0651\u0650\u0645\u064e", "word_translation": "I will speak", "word_transliteration": "ukallima"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0633\u0650\u064a\u0651\u0657\u0627", "word_translation": "(to any) human being", "word_transliteration": "insiyyan"}]}