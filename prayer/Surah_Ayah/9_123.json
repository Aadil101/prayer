{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0644\u064f\u0648\u0646\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u0650 \u0648\u064e\u0644\u06e1\u064a\u064e\u062c\u0650\u062f\u064f\u0648\u0627\u0652 \u0641\u0650\u064a\u0643\u064f\u0645\u06e1 \u063a\u0650\u0644\u06e1\u0638\u064e\u0629\u0657\u06da \u0648\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064e\u0639\u064e \u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O (you who)", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(O) you who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0642\u064e\u0670\u062a\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "Fight", "word_transliteration": "qatilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0644\u064f\u0648\u0646\u064e\u0643\u064f\u0645", "word_translation": "(are) close to you", "word_transliteration": "yalunakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064f\u0641\u0651\u064e\u0627\u0631\u0650", "word_translation": "the disbelievers", "word_transliteration": "al-kufari"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u06e1\u064a\u064e\u062c\u0650\u062f\u064f\u0648\u0627\u0652", "word_translation": "and let them find", "word_transliteration": "walyajidu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0643\u064f\u0645\u06e1", "word_translation": "in you", "word_transliteration": "fikum"}, {"word_arabic_uthmani": "\u063a\u0650\u0644\u06e1\u0638\u064e\u0629\u0657\u06da", "word_translation": "harshness", "word_transliteration": "ghil'zatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0653\u0627\u0652", "word_translation": "And know", "word_transliteration": "wa-i'lamu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064e\u0639\u064e", "word_translation": "(is) with", "word_transliteration": "ma'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e", "word_translation": "those who fear (Him)", "word_transliteration": "al-mutaqina"}]}