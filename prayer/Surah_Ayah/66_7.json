{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u0627 \u062a\u064e\u0639\u06e1\u062a\u064e\u0630\u0650\u0631\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e\u06d6 \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u062a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e \u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "(you) who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u062a\u064e\u0630\u0650\u0631\u064f\u0648\u0627\u0652", "word_translation": "make excuses", "word_transliteration": "ta'tadhiru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e\u06d6", "word_translation": "today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u062a\u064f\u062c\u06e1\u0632\u064e\u0648\u06e1\u0646\u064e", "word_translation": "you will be recompensed", "word_transliteration": "tuj'zawna"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(for) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u