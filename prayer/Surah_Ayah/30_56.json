{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e \u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u064e \u0644\u064e\u0642\u064e\u062f\u06e1 \u0644\u064e\u0628\u0650\u062b\u06e1\u062a\u064f\u0645\u06e1 \u0641\u0650\u064a \u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0625\u0650\u0644\u064e\u0649\u0670 \u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0628\u064e\u0639\u06e1\u062b\u0650\u06d6 \u0641\u064e\u0647\u064e\u0670\u0630\u064e\u0627 \u064a\u064e\u0648\u06e1\u0645\u064f \u0671\u0644\u06e1\u0628\u064e\u0639\u06e1\u062b\u0650 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u0644\u064e\u0627 \u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "But will say", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u062a\u064f\u0648\u0627\u0652", "word_translation": "were given", "word_transliteration": "utu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u0650\u0644\u06e1\u0645\u064e", "word_translation": "the knowledge", "word_transliteration": "al-'il'ma"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u064e", "word_translation": "and the faith", "word_transliteration": "wal-imana"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "laqad"}, {"word_arabic_uthmani": "\u0644\u064e\u0628\u0650\u062b\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you remained", "word_transliteration": "labith'tum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "by", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(the) Decree", "word_transliteration": "kitabi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "(the) Day", "word_transliteration": "yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0639\u06e1\u062b\u0650\u06d6", "word_translation": "(of) Resurrection", "word_transliteration": "al-ba'thi"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "And this", "word_transliteration": "fahadha"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064f", "word_translation": "(is the) Day", "word_transliteration": "yawmu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0639\u06e1\u062b\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-ba'thi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "but you", "word_transliteration": "walakinnakum"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "were", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "knowing", "word_transliteration": "ta'lamuna"}]}