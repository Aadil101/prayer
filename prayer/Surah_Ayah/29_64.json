{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0627 \u0647\u064e\u0670\u0630\u0650\u0647\u0650 \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0644\u064e\u0647\u06e1\u0648\u065e \u0648\u064e\u0644\u064e\u0639\u0650\u0628\u065e\u06da \u0648\u064e\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u062f\u0651\u064e\u0627\u0631\u064e \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u064e \u0644\u064e\u0647\u0650\u064a\u064e \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u064e\u0627\u0646\u064f\u06da \u0644\u064e\u0648\u06e1 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u0650\u0647\u0650", "word_translation": "(is) this", "word_transliteration": "hadhihi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u064f", "word_translation": "life", "word_transliteration": "al-hayatu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627\u0653", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "but", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u06e1\u0648\u065e", "word_translation": "amusement", "word_transliteration": "lahwun"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0639\u0650\u0628\u065e\u06da", "word_translation": "and play", "word_transliteration": "wala'ibun"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u0651\u064e", "word_translation": "And indeed", "word_transliteration": "wa-inna"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064e\u0627\u0631