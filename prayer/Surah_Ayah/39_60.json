{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u062a\u064e\u0631\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0630\u064e\u0628\u064f\u0648\u0627\u0652 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645 \u0645\u0651\u064f\u0633\u06e1\u0648\u064e\u062f\u0651\u064e\u0629\u064c\u06da \u0623\u064e\u0644\u064e\u064a\u06e1\u0633\u064e \u0641\u0650\u064a \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0645\u064e\u062b\u06e1\u0648\u0657\u0649 \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062a\u064e\u0643\u064e\u0628\u0651\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "And (on the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e\u0649", "word_translation": "you will see", "word_transliteration": "tara"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "lied", "word_transliteration": "kadhabu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "about", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645", "word_translation": "their faces", "word_transliteration": "wujuhuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u0648\u064e\u062f\u0651\u064e\u0629\u064c\u06da", "word_translation": "(will be) blackened", "word_transliteration": "mus'waddatun"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u064a\u06e1\u0633\u064e", "word_translation": "Is (there) not", "word_transliteration": "alaysa"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0645\u064e\u062b\u06e1\u0648\u0657\u0649", "word_translation": "an abode", "word_transliteration": "mathwan"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062a\u064e\u0643\u064e\u0628\u0651\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the arrogant", "word_transliteration": "lil'mutakabbirina"}]}