{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646 \u0648\u064e\u0639\u064e\u062f\u06e1\u0646\u064e\u0670\u0647\u064f \u0648\u064e\u0639\u06e1\u062f\u064b\u0627 \u062d\u064e\u0633\u064e\u0646\u0657\u0627 \u0641\u064e\u0647\u064f\u0648\u064e \u0644\u064e\u0670\u0642\u0650\u064a\u0647\u0650 \u0643\u064e\u0645\u064e\u0646 \u0645\u0651\u064e\u062a\u0651\u064e\u0639\u06e1\u0646\u064e\u0670\u0647\u064f \u0645\u064e\u062a\u064e\u0670\u0639\u064e \u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650 \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u062b\u064f\u0645\u0651\u064e \u0647\u064f\u0648\u064e \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0636\u064e\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646", "word_translation": "Then is (he) whom", "word_transliteration": "afaman"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u062f\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We have promised him", "word_transliteration": "wa'adnahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u06e1\u062f\u064b\u0627", "word_translation": "a promise", "word_transliteration": "wa'dan"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u064e\u0646\u0657\u0627", "word_translation": "good", "word_transliteration": "hasanan"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0648\u064e", "word_translation": "and he", "word_transliteration": "fahuwa"}, {"word_arabic_uthmani": "\u0644\u064e\u0670\u0642\u0650\u064a\u0647\u0650", "word_translation": "(will) meet it", "word_transliteration": "laqihi"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0646", "word_translation": "like (the one) whom", "word_transliteration": "kaman"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u062a\u0651\u064e\u0639\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We provided him", "word_transliteration": "matta'nahu"}, {"word_arabic_uthmani": "\u0645\u064e\u062a\u064e\u0670\u0639\u064e", "word_translation": "enjoyment", "word_transliteration": "mata'a"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u0650", "word_translation": "(of the) life", "word_transliteration": "al-hayati"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "(of) the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "he", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "(will be) among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0636\u064e\u0631\u0650\u064a\u0646\u064e", "word_translation": "those presented", "word_transliteration": "al-muh'darina"}]}