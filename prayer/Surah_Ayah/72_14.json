{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e\u0627 \u0645\u0650\u0646\u0651\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e \u0648\u064e\u0645\u0650\u0646\u0651\u064e\u0627 \u0671\u0644\u06e1\u0642\u064e\u0670\u0633\u0650\u0637\u064f\u0648\u0646\u064e\u06d6 \u0641\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u0633\u06e1\u0644\u064e\u0645\u064e \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u062a\u064e\u062d\u064e\u0631\u0651\u064e\u0648\u06e1\u0627\u0652 \u0631\u064e\u0634\u064e\u062f\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e\u0627", "word_translation": "And that we", "word_transliteration": "wa-anna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u0651\u064e\u0627", "word_translation": "among us", "word_transliteration": "minna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u064f\u0648\u0646\u064e", "word_translation": "(are) Muslims", "word_transliteration": "al-mus'limuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u0651\u064e\u0627", "word_translation": "and among us", "word_transliteration": "waminna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0670\u0633\u0650\u0637\u064f\u0648\u0646\u064e\u06d6", "word_translation": "(are) unjust", "word_transliteration": "al-qasituna"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0644\u064e\u0645\u064e", "word_translation": "submits", "word_transliteration": "aslama"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u062a\u064e\u062d\u064e\u0631\u0651\u064e\u0648\u06e1\u0627\u0652", "wor