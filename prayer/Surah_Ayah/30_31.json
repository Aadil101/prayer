{"ayahs": {"ayah_uthmani": "\u06de\u0645\u064f\u0646\u0650\u064a\u0628\u0650\u064a\u0646\u064e \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0647\u064f \u0648\u064e\u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0645\u064f\u0646\u0650\u064a\u0628\u0650\u064a\u0646\u064e", "word_translation": "Turning", "word_transliteration": "munibina"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0647\u064f", "word_translation": "and fear Him", "word_transliteration": "wa-ittaquhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652", "word_translation": "and establish", "word_transliteration": "wa-aqimu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u064f\u0648\u0646\u064f\u0648\u0627\u0652", "word_translation": "be", "word_transliteration": "takunu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "the polytheists", "word_transliteration": "al-mush'rikina"}]}