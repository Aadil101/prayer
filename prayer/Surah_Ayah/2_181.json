{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0645\u064e\u0646\u06e2 \u0628\u064e\u062f\u0651\u064e\u0644\u064e\u0647\u064f\u06e5 \u0628\u064e\u0639\u06e1\u062f\u064e\u0645\u064e\u0627 \u0633\u064e\u0645\u0650\u0639\u064e\u0647\u064f\u06e5 \u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653 \u0625\u0650\u062b\u06e1\u0645\u064f\u0647\u064f\u06e5 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0628\u064e\u062f\u0651\u0650\u0644\u064f\u0648\u0646\u064e\u0647\u064f\u06e5\u0653\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0633\u064e\u0645\u0650\u064a\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0645\u064e\u0646\u06e2", "word_translation": "Then whoever", "word_transliteration": "faman"}, {"word_arabic_uthmani": "\u0628\u064e\u062f\u0651\u064e\u0644\u064e\u0647\u064f\u06e5", "word_translation": "changes it", "word_transliteration": "baddalahu"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e\u0645\u064e\u0627", "word_translation": "after what", "word_transliteration": "ba'dama"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u0639\u064e\u0647\u064f\u06e5", "word_translation": "he (has) heard [it]", "word_transliteration": "sami'ahu"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627\u0653", "word_translation": "so only", "word_transliteration": "fa-innama"}, {"word_arabic_uthmani": "\u0625\u0650\u062b\u06e1\u0645\u064f\u0647\u064f\u06e5", "word_translation": "its sin", "word_transliteration": "ith'muhu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "(would be) on", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0628\u064e\u062f\u0651\u0650\u0644\u064f