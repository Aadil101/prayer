{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0671\u062c\u06e1\u0639\u064e\u0644\u06e1\u0646\u0650\u064a \u0639\u064e\u0644\u064e\u0649\u0670 \u062e\u064e\u0632\u064e\u0627\u0653\u0626\u0650\u0646\u0650 \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d6 \u0625\u0650\u0646\u0651\u0650\u064a \u062d\u064e\u0641\u0650\u064a\u0638\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0671\u062c\u06e1\u0639\u064e\u0644\u06e1\u0646\u0650\u064a", "word_translation": "Appoint me", "word_transliteration": "ij'alni"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u062e\u064e\u0632\u064e\u0627\u0653\u0626\u0650\u0646\u0650", "word_translation": "(the) treasuries", "word_transliteration": "khazaini"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d6", "word_translation": "(of) the land", "word_transliteration": "al-ardi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a", "word_translation": "Indeed I", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u062d\u064e\u0641\u0650\u064a\u0638\u064c", "word_translation": "(will be) a guardian", "word_transliteration": "hafizun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u065e", "word_translation": "knowing", "word_transliteration": "alimun"}]}