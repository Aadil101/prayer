{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0644\u064e\u062d\u064e\u0644\u0650\u064a\u0645\u064c \u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0647\u065e \u0645\u0651\u064f\u0646\u0650\u064a\u0628\u065e"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u0644\u064e\u062d\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "(was) certainly forbearing", "word_transliteration": "lahalimun"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u0651\u064e\u0640\u0670\u0647\u065e", "word_translation": "imploring", "word_transliteration": "awwahun"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0646\u0650\u064a\u0628\u065e", "word_translation": "and oft-returning", "word_transliteration": "munibun"}]}