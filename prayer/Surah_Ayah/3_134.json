{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u0636\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650 \u0648\u064e\u0671\u0644\u06e1\u0643\u064e\u0670\u0638\u0650\u0645\u0650\u064a\u0646\u064e \u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0638\u064e \u0648\u064e\u0671\u0644\u06e1\u0639\u064e\u0627\u0641\u0650\u064a\u0646\u064e \u0639\u064e\u0646\u0650 \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064f\u062d\u0650\u0628\u0651\u064f \u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0646\u0641\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "spend", "word_transliteration": "yunfiquna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650", "word_translation": "[the] ease", "word_transliteration": "al-sarai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0636\u0651\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u0650", "word_translation": "and (in) the hardship", "word_transliteration": "wal-darai"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0643\u064e\u0670\u0638\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "and those who restrain", "word_transliteration": "wal-kazimina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0638\u064e", "word_translation": "the anger", "word_transliteration": "al-ghayza"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0639\u064e\u0627\u0641\u0650\u064a\u0646\u064e", "word_translation": "and those who pardon", "word_transliteration": "wal-'afina"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "[from]", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u0650\u06d7", "word_translation": "the people", "word_transliteration": "al-nasi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "and Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064f\u062d\u0650\u0628\u0651\u064f", "word_translation": "loves", "word_transliteration": "yuhibbu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the good-doers", "word_transliteration": "al-muh'sinina"}]}