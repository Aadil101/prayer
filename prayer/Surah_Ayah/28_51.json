{"ayahs": {"ayah_uthmani": "\u06de\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0648\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627 \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And indeed", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have conveyed", "word_transliteration": "wassalna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064e\u0648\u06e1\u0644\u064e", "word_translation": "the Word", "word_transliteration": "al-qawla"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "remember", "word_transliteration": "yatadhakkaruna"}]}