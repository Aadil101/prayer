{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0647\u06e1\u0648\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1\u06da \u0648\u064e\u0643\u064f\u0644\u0651\u064f \u0623\u064e\u0645\u06e1\u0631\u0656 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u0631\u0651\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0627\u0652", "word_translation": "And they denied", "word_transliteration": "wakadhabu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064f\u0648\u0653\u0627\u0652", "word_translation": "and followed", "word_transliteration": "wa-ittaba'u"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0648\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u06e1\u06da", "word_translation": "their desires", "word_transliteration": "ahwaahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064f\u0644\u0651\u064f", "word_translation": "but (for) every", "word_transliteration": "wakullu"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0631\u0656", "word_translation": "matter", "word_transliteration": "amrin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u0631\u0651\u065e", "word_translation": "(will be a) settlement", "word_transliteration": "mus'taqirrun"}]}