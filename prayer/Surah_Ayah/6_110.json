{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0646\u064f\u0642\u064e\u0644\u0651\u0650\u0628\u064f \u0623\u064e\u0641\u06e1\u0640\u0654\u0650\u062f\u064e\u062a\u064e\u0647\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064e\u0647\u064f\u0645\u06e1 \u0643\u064e\u0645\u064e\u0627 \u0644\u064e\u0645\u06e1 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6\u0653 \u0623\u064e\u0648\u0651\u064e\u0644\u064e \u0645\u064e\u0631\u0651\u064e\u0629\u0656 \u0648\u064e\u0646\u064e\u0630\u064e\u0631\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1 \u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0642\u064e\u0644\u0651\u0650\u0628\u064f", "word_translation": "And We will turn", "word_transliteration": "wanuqallibu"}, {"word_arabic_uthmani": "\u0623\u064e\u0641\u06e1\u0640\u0654\u0650\u062f\u064e\u062a\u064e\u0647\u064f\u0645\u06e1", "word_translation": "their hearts", "word_transliteration": "afidatahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and their sights", "word_transliteration": "wa-absarahum"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "(just) as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0627\u0652", "word_translation": "they believe", "word_transliteration": "yu'minu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u0651\u064e\u0644\u064e", "word_translation": "(the) first", "word_transliteration": "awwala"}, {"word_arabic_uthmani": "\u0645\u064e\u0631\u0651\u064e\u0629\u0656", "word_translation": "time", "word_transliteration": "marratin"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0630\u064e\u0631\u064f\u0647\u064f\u0645\u06e1", "word_translation": "And We will leave them", "word_transliteration": "wanadharuhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0637\u064f\u063a\u06e1\u064a\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their transgression", "word_transliteration": "tugh'yanihim"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0647\u064f\u0648\u0646\u064e", "word_translation": "wandering blindly", "word_transliteration": "ya'mahuna"}]}