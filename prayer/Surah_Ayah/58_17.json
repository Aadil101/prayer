{"ayahs": {"ayah_uthmani": "\u0644\u0651\u064e\u0646 \u062a\u064f\u063a\u06e1\u0646\u0650\u064a\u064e \u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064f\u0647\u064f\u0645\u06e1 \u0648\u064e\u0644\u064e\u0627\u0653 \u0623\u064e\u0648\u06e1\u0644\u064e\u0670\u062f\u064f\u0647\u064f\u0645 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0634\u064e\u064a\u06e1\u0640\u0654\u064b\u0627\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0623\u064e\u0635\u06e1\u062d\u064e\u0670\u0628\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650\u06d6 \u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u062e\u064e\u0670\u0644\u0650\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u064e\u0646", "word_translation": "Never", "word_transliteration": "lan"}, {"word_arabic_uthmani": "\u062a\u064f\u063a\u06e1\u0646\u0650\u064a\u064e", "word_translation": "will avail", "word_transliteration": "tugh'niya"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their wealth", "word_transliteration": "amwaluhum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627\u0653", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u0623\u064e\u0648\u06e1\u0644\u064e\u0670\u062f\u064f\u0647\u064f\u0645", "word_translation": "their children", "word_transliteration": "awladuhum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "against", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0640\u0654\u064