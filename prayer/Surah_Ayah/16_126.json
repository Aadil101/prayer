{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1 \u0639\u064e\u0627\u0642\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1 \u0641\u064e\u0639\u064e\u0627\u0642\u0650\u0628\u064f\u0648\u0627\u0652 \u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650 \u0645\u064e\u0627 \u0639\u064f\u0648\u0642\u0650\u0628\u06e1\u062a\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6\u06d6 \u0648\u064e\u0644\u064e\u0626\u0650\u0646 \u0635\u064e\u0628\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1 \u0644\u064e\u0647\u064f\u0648\u064e \u062e\u064e\u064a\u06e1\u0631\u065e \u0644\u0651\u0650\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0639\u064e\u0627\u0642\u064e\u0628\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you retaliate", "word_transliteration": "aqabtum"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0627\u0642\u0650\u0628\u064f\u0648\u0627\u0652", "word_translation": "then retaliate", "word_transliteration": "fa'aqibu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u0650\u062b\u06e1\u0644\u0650", "word_translation": "with the like", "word_transliteration": "bimith'li"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0639\u064f\u0648\u0642\u0650\u0628\u06e1\u062a\u064f\u0645", "word_translation": "you were afflicted", "word_transliteration": "uqib'tum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06d6", "word_translation": "with [it]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646", "word_translation": "But if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0635\u064e\u0628\u064e\u0631\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you are patient", "word_transliteration": "sabartum"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0648\u064e", "word_translation": "surely (it) is", "word_transliteration": "lahuwa"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e", "word_translation": "better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0635\u0651\u064e\u0640\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for those who are patient", "word_transliteration": "lilssabirina"}]}