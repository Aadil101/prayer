{"ayahs": {"ayah_uthmani": "\u0623\u064f\u062d\u0650\u0644\u0651\u064e \u0644\u064e\u0643\u064f\u0645\u06e1 \u0635\u064e\u064a\u06e1\u062f\u064f \u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u0650 \u0648\u064e\u0637\u064e\u0639\u064e\u0627\u0645\u064f\u0647\u064f\u06e5 \u0645\u064e\u062a\u064e\u0670\u0639\u0657\u0627 \u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u0644\u0650\u0644\u0633\u0651\u064e\u064a\u0651\u064e\u0627\u0631\u064e\u0629\u0650\u06d6 \u0648\u064e\u062d\u064f\u0631\u0651\u0650\u0645\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0635\u064e\u064a\u06e1\u062f\u064f \u0671\u0644\u06e1\u0628\u064e\u0631\u0651\u0650 \u0645\u064e\u0627 \u062f\u064f\u0645\u06e1\u062a\u064f\u0645\u06e1 \u062d\u064f\u0631\u064f\u0645\u0657\u0627\u06d7 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064f\u062d\u0650\u0644\u0651\u064e", "word_translation": "Is made lawful", "word_transliteration": "uhilla"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0635\u064e\u064a\u06e1\u062f\u064f", "word_translation": "game", "word_transliteration": "saydu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u0650", "word_translation": "(of) the sea", "word_transliteration": "al-bahri"}, {"word_arabic_uthmani": "\u0648\u064e\u0637\u064e\u0639\u064e\u0627\u0645\u064f\u0647\u064f\u06e5", "word_translation": "and its food", "word_transliteration": "wata'amuhu"}, {"word_arabic_uthmani": "\u0645\u064e\u062a\u064e\u0670\u0639\u0657\u0627", "word_translation": "(as) provision", "word_transliteration": "mata'an"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0633\u0651\u064e\u064a\u0651\u064e\u0627\u0631\u064e\u0629\u0650\u06d6", "word_translation": "and for the travelers", "word_transliteration": "walilssayyarati"}, {"word_arabic_uthmani": "\u0648\u064e\u062d\u064f\u0631\u0651\u0650\u0645\u064e", "word_translation": "and is made unlawful", "word_transliteration": "wahurrima"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "on you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0635\u064e\u064a\u06e1\u062f\u064f", "word_translation": "game", "word_transliteration": "saydu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0631\u0651\u0650", "word_translation": "(of) the land", "word_transliteration": "al-bari"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "as", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u062f\u064f\u0645\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "long as you", "word_transliteration": "dum'tum"}, {"word_arabic_uthmani": "\u062d\u064f\u0631\u064f\u0645\u0657\u0627\u06d7", "word_translation": "(are) in Ihram", "word_transliteration": "huruman"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "And be conscious", "word_transliteration": "wa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "(of) Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "the One", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u062a\u064f\u062d\u06e1\u0634\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "you will be gathered", "word_transliteration": "tuh'sharuna"}]}