{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1 \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670 \u0644\u064e\u0627 \u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0643\u064f\u0645\u06e1\u06da \u0633\u064e\u0648\u064e\u0627\u0653\u0621\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0623\u064e\u062f\u064e\u0639\u064e\u0648\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1 \u0623\u064e\u0645\u06e1 \u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u0635\u064e\u0670\u0645\u0650\u062a\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u062a\u064e\u062f\u06e1\u0639\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "you call them", "word_transliteration": "tad'uhum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0647\u064f\u062f\u064e\u0649\u0670", "word_translation": "the guidance", "word_transliteration": "al-huda"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0643\u064f\u0645\u06e1\u06da", "word_translation": "will they follow you", "word_transliteration": "yattabi'ukum"}, {"word_arabic_uthmani": "\u0633\u064e\u0648\u064e\u0627\u0653\u0621\u064c", "word_translation": "(It is) same", "word_transliteration": "sawaon"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "for you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0623\u064e\u062f\u064e\u0639\u064e\u0648\u06e1\u062a\u064f\u0645\u064f\u0648\u0647\u064f\u0645\u06e1", "word_translation": "whether you call them", "word_transliteration": "ada'awtumuhum"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1", "word_translation": "or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "antum"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0645\u0650\u062a\u064f\u0648\u0646\u064e", "word_translation": "remain silent", "word_transliteration": "samituna"}]}