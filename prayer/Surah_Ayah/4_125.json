{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f \u062f\u0650\u064a\u0646\u0657\u0627 \u0645\u0651\u0650\u0645\u0651\u064e\u0646\u06e1 \u0623\u064e\u0633\u06e1\u0644\u064e\u0645\u064e \u0648\u064e\u062c\u06e1\u0647\u064e\u0647\u064f\u06e5 \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0647\u064f\u0648\u064e \u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u065e \u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e \u0645\u0650\u0644\u0651\u064e\u0629\u064e \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u062d\u064e\u0646\u0650\u064a\u0641\u0657\u0627\u06d7 \u0648\u064e\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u062e\u064e\u0644\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And who", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f", "word_translation": "(is) better", "word_transliteration": "ahsanu"}, {"word_arabic_uthmani": "\u062f\u0650\u064a\u0646\u0657\u0627", "word_translation": "(in) religion", "word_transliteration": "dinan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0645\u0651\u064e\u0646\u06e1", "word_translation": "than (one) who", "word_transliteration": "mimman"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0644\u064e\u0645\u064e", "word_translation": "submits", "word_transliteration": "aslama"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u06e1\u0647\u064e\u0647\u064f\u06e5", "word_translation": "his face", "word_transliteration": "wajhahu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "to Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and he", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0645\u064f\u062d\u06e1\u0633\u0650\u0646\u065e", "word_translation": "(is) a good-doer", "word_transliteration": "muh'sinun"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e", "word_translation": "and follows", "word_transliteration": "wa-ittaba'a"}, {"word_arabic_uthmani": "\u0645\u0650\u0644\u0651\u064e\u0629\u064e", "word_translation": "(the) religion", "word_transliteration": "millata"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "(of) Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u062d\u064e\u0646\u0650\u064a\u0641\u0657\u0627\u06d7", "word_translation": "(the) upright", "word_transliteration": "hanifan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e", "word_translation": "And was taken", "word_transliteration": "wa-ittakhadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(by) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "Ibrahim", "word_transliteration": "ib'rahima"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u0650\u064a\u0644\u0657\u0627", "word_translation": "(as) a friend", "word_transliteration": "khalilan"}]}