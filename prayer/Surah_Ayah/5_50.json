{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u062d\u064f\u0643\u06e1\u0645\u064e \u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650 \u064a\u064e\u0628\u06e1\u063a\u064f\u0648\u0646\u064e\u06da \u0648\u064e\u0645\u064e\u0646\u06e1 \u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f \u0645\u0650\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062d\u064f\u0643\u06e1\u0645\u0657\u0627 \u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u062d\u064f\u0643\u06e1\u0645\u064e", "word_translation": "Is it then the judgment", "word_transliteration": "afahuk'ma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650", "word_translation": "of [the] ignorance", "word_transliteration": "al-jahiliyati"}, {"word_arabic_uthmani": "\u064a\u064e\u0628\u06e1\u063a\u064f\u0648\u0646\u064e\u06da", "word_translation": "they seek", "word_transliteration": "yabghuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646\u06e1", "word_translation": "And who (is)", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0633\u064e\u0646\u064f", "word_translation": "better", "word_transliteration": "ahsanu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "than", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062d\u064f\u0643\u06e1\u0645\u0657\u0627", "word_translation": "(in) judgment", "word_transliteration": "huk'man"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0642\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "(who) firmly believe", "word_transliteration": "yuqinuna"}]}