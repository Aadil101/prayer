{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0632\u0650\u062f\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627 \u0641\u064e\u0648\u06e1\u0642\u064e \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064f\u0641\u06e1\u0633\u0650\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u062f\u0651\u064f\u0648\u0627\u0652", "word_translation": "and hindered", "word_transliteration": "wasaddu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0632\u0650\u062f\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "We will increase them", "word_transliteration": "zid'nahum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627", "word_translation": "(in) punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0641\u064e\u0648\u06e1\u0642\u064e", "word_translation": "over", "word_transliteration": "fawqa"}, {"word_arabic_ut