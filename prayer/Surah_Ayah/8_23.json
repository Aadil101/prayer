{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0639\u064e\u0644\u0650\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0641\u0650\u064a\u0647\u0650\u0645\u06e1 \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0644\u0651\u064e\u0623\u064e\u0633\u06e1\u0645\u064e\u0639\u064e\u0647\u064f\u0645\u06e1\u06d6 \u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0633\u06e1\u0645\u064e\u0639\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u0627\u0652 \u0648\u0651\u064e\u0647\u064f\u0645 \u0645\u0651\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u0645\u064e", "word_translation": "(had) known", "word_transliteration": "alima"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "in them", "word_transliteration": "fihim"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "any good", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0623\u064e\u0633\u06e1\u0645\u064e\u0639\u064e\u0647\u064f\u0645\u06e1\u06d6", "word_translation": "surely, He (would) have made them hear", "word_transliteration": "la-asma'ahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0633\u06e1\u0645\u064e\u0639\u064e\u0647\u064f\u0645\u06e1", "word_translation": "He had made them hear", "word_transliteration": "asma'ahum"}, {"word_arabic_uthmani": "\u0644\u064e\u062a\u064e\u0648\u064e\u0644\u0651\u064e\u0648\u0627\u0652", "word_translation": "surely they would have turned away", "word_transliteration": "latawallaw"}, {"word_arabic_uthmani": "\u0648\u0651\u064e\u0647\u064f\u0645", "word_translation": "while they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0639\u06e1\u0631\u0650\u0636\u064f\u0648\u0646\u064e", "word_translation": "(were) averse", "word_transliteration": "mu'riduna"}]}