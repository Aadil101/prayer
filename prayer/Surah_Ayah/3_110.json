{"ayahs": {"ayah_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062e\u064e\u064a\u06e1\u0631\u064e \u0623\u064f\u0645\u0651\u064e\u0629\u064d \u0623\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u062a\u06e1 \u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650 \u062a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u06e1\u0645\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0650 \u0648\u064e\u062a\u064e\u0646\u06e1\u0647\u064e\u0648\u06e1\u0646\u064e \u0639\u064e\u0646\u0650 \u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650 \u0648\u064e\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d7 \u0648\u064e\u0644\u064e\u0648\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064e \u0623\u064e\u0647\u06e1\u0644\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0644\u064e\u0643\u064e\u0627\u0646\u064e \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0644\u0651\u064e\u0647\u064f\u0645\u06da \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0648\u064e\u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "You are", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064e", "word_translation": "(the) best", "word_transliteration": "khayra"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u064d", "word_translation": "(of) people", "word_transliteration": "ummatin"}, {"word_arabic_uthmani": "\u0623\u064f\u062e\u06e1\u0631\u0650\u062c\u064e\u062a\u06e1", "word_translation": "raised", "word_transliteration": "ukh'rijat"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0646\u0651\u064e\u0627\u0633\u0650", "word_translation": "for the mankind", "word_transliteration": "lilnnasi"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "enjoining", "word_transliteration": "tamuruna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0645\u064e\u0639\u06e1\u0631\u064f\u0648\u0641\u0650", "word_translation": "the right", "word_transliteration": "bil-ma'rufi"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0646\u06e1\u0647\u064e\u0648\u06e1\u0646\u064e", "word_translation": "and forbidding", "word_transliteration": "watanhawna"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0650", "word_translation": "[from]", "word_transliteration": "ani"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u0643\u064e\u0631\u0650", "word_translation": "the wrong", "word_transliteration": "al-munkari"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "and believing", "word_transliteration": "watu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d7", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064e", "word_translation": "believed", "word_transliteration": "amana"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064f", "word_translation": "(the) People", "word_transliteration": "ahlu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "(of) the Book", "word_transliteration": "al-kitabi"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "surely would have been", "word_transliteration": "lakana"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "good", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u06da", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u064f", "word_translation": "Among them", "word_transliteration": "min'humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "(are) the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0643\u06e1\u062b\u064e\u0631\u064f\u0647\u064f\u0645\u064f", "word_translation": "but most of them", "word_transliteration": "wa-aktharuhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0670\u0633\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) defiantly disobedient", "word_transliteration": "al-fasiquna"}]}