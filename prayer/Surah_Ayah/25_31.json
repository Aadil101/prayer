{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0644\u0650\u0643\u064f\u0644\u0651\u0650 \u0646\u064e\u0628\u0650\u064a\u0651\u064d \u0639\u064e\u062f\u064f\u0648\u0651\u0657\u0627 \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e\u06d7 \u0648\u064e\u0643\u064e\u0641\u064e\u0649\u0670 \u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0647\u064e\u0627\u062f\u0650\u064a\u0657\u0627 \u0648\u064e\u0646\u064e\u0635\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And thus", "word_transliteration": "wakadhalika"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have made", "word_transliteration": "ja'alna"}, {"word_arabic_uthmani": "\u0644\u0650\u0643\u064f\u0644\u0651\u0650", "word_translation": "for every", "word_transliteration": "likulli"}, {"word_arabic_uthmani": "\u0646\u064e\u0628\u0650\u064a\u0651\u064d", "word_translation": "Prophet", "word_transliteration": "nabiyyin"}, {"word_arabic_uthmani": "\u0639\u064e\u062f\u064f\u0648\u0651\u0657\u0627", "word_translation": "an enemy", "word_transliteration": "aduwwan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062c\u06e1\u0631\u0650\u0645\u0650\u064a\u0646\u064e\u06d7", "word_translation": "the criminals", "word_transliteration": "al-muj'rimina"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0641\u064e\u0649\u0670", "word_translation": "But sufficient is", "word_transliteration": "wakafa"}, {"word_arabic_uthmani": "\u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "your Lord", "word_transliteration": "birabbika"}, {"w