{"ayahs": {"ayah_uthmani": "\u0648\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u062d\u064e\u064a\u0651\u0650 \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u0644\u064e\u0627 \u064a\u064e\u0645\u064f\u0648\u062a\u064f \u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1 \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650\u0647\u0650\u06e6\u06da \u0648\u064e\u0643\u064e\u0641\u064e\u0649\u0670 \u0628\u0650\u0647\u0650\u06e6 \u0628\u0650\u0630\u064f\u0646\u064f\u0648\u0628\u0650 \u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0647\u0650\u06e6 \u062e\u064e\u0628\u0650\u064a\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0648\u064e\u0643\u0651\u064e\u0644\u06e1", "word_translation": "And put your trust", "word_transliteration": "watawakkal"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "in", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u064a\u0651\u0650", "word_translation": "the Ever-Living", "word_transliteration": "al-hayi"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "does not die", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0645\u064f\u0648\u062a\u064f", "word_translation": "does not die", "word_transliteration": "yamutu"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u0628\u0651\u0650\u062d\u06e1", "word_translation": "and glorify", "word_transliteration": "wasabbih"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650\u0647\u0650\u06e6\u06da", "word_translation": "with His Praise", "word_transliteration": "bihamdihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0641\u064e\u0649\u0670", "word_translation": "And sufficient is", "word_transliteration": "wakafa"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "He", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0628\u0650\u0630\u064f\u0646\u064f\u0648\u0628\u0650", "word_translation": "regarding the sins", "word_transliteration": "bidhunubi"}, {"word_arabic_uthmani": "\u0639\u0650\u0628\u064e\u0627\u062f\u0650\u0647\u0650\u06e6", "word_translation": "(of) His slaves", "word_transliteration": "ibadihi"}, {"word_arabic_uthmani": "\u062e\u064e\u0628\u0650\u064a\u0631\u064b\u0627", "word_translation": "All-Aware", "word_transliteration": "khabiran"}]}