ation": "wanaj'alahum"}, {"word_arabic_uthmani": "\u0623\u064e\u0626\u0650\u0645\u0651\u064e\u0629\u0657", "word_translation": "leaders", "word_transliteration": "a-immatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u062c\u06e1\u0639\u064e\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "and make them", "word_transliteration": "wanaj'alahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0670\u0631\u0650\u062b\u0650\u064a\u0646\u064e", "word_translation": "the inheritors", "word_transliteration": "al-warithina"}]}