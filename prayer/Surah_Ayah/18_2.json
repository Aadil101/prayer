{"ayahs": {"ayah_uthmani": "\u0642\u064e\u064a\u0651\u0650\u0645\u0657\u0627 \u0644\u0651\u0650\u064a\u064f\u0646\u0630\u0650\u0631\u064e \u0628\u064e\u0623\u06e1\u0633\u0657\u0627 \u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627 \u0645\u0651\u0650\u0646 \u0644\u0651\u064e\u062f\u064f\u0646\u06e1\u0647\u064f \u0648\u064e\u064a\u064f\u0628\u064e\u0634\u0651\u0650\u0631\u064e \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u0623\u064e\u0646\u0651\u064e \u0644\u064e\u0647\u064f\u0645\u06e1 \u0623\u064e\u062c\u06e1\u0631\u064b\u0627 \u062d\u064e\u0633\u064e\u0646\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u064a\u0651\u0650\u0645\u0657\u0627", "word_translation": "Straight", "word_transliteration": "qayyiman"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064f\u0646\u0630\u0650\u0631\u064e", "word_translation": "to warn", "word_transliteration": "liyundhira"}, {"word_arabic_uthmani": "\u0628\u064e\u0623\u06e1\u0633\u0657\u0627", "word_translation": "(of) a punishment", "word_transliteration": "basan"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627", "word_translation": "severe", "word_transliteration": "shadidan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u062f\u064f\u0646\u06e1\u0647\u064f", "word_translation": "near Him", "word_transliteration": "ladun'hu"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0628\u064e\u0634\u0651\u0650\u0631\u064e", "word_translation": "and give glad tidings", "word_transliteration": "wayubashira"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(to) the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ya'maluna"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0623\u064e\u062c\u06e1\u0631\u064b\u0627", "word_translation": "(is) a good reward", "word_transliteration": "ajran"}, {"word_arabic_uthmani": "\u062d\u064e\u0633\u064e\u0646\u0657\u0627", "word_translation": "(is) a good reward", "word_transliteration": "hasanan"}]}