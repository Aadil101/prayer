{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062e\u064e\u0644\u064e\u0642\u064e \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e \u0648\u064e\u0645\u064e\u0627 \u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u064e\u0627 \u0641\u0650\u064a \u0633\u0650\u062a\u0651\u064e\u0629\u0650 \u0623\u064e\u064a\u0651\u064e\u0627\u0645\u0656 \u062b\u064f\u0645\u0651\u064e \u0671\u0633\u06e1\u062a\u064e\u0648\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0639\u064e\u0631\u06e1\u0634\u0650\u06d6 \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f \u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u06e1 \u0628\u0650\u0647\u0650\u06e6 \u062e\u064e\u0628\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "The One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e", "word_translation": "created", "word_transliteration": "khalaqa"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u064e", "word_translation": "and the earth", "word_transliteration": "wal-arda"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and whatever", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0628\u064e\u064a\u06e1\u0646\u064e\u0647\u064f\u0645\u064e\u0627", "word_translation": "(is) between them", "word_transliteration": "baynahuma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0633\u0650\u062a\u0651\u064e\u0629\u0650", "word_translation": "six", "word_transliteration": "sittati"}, {"word_arabic_uthmani": "\u0623\u064e\u064a\u0651\u064e\u0627\u0645\u0656", "word_translation": "periods", "word_transliteration": "ayyamin"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u0648\u064e\u0649\u0670", "word_translation": "He established Himself", "word_transliteration": "is'tawa"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0631\u06e1\u0634\u0650\u06d6", "word_translation": "the Throne", "word_transliteration": "al-'arshi"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f", "word_translation": "the Most Gracious", "word_transliteration": "al-rahmanu"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u06e1", "word_translation": "so ask", "word_transliteration": "fasal"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "Him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u062e\u064e\u0628\u0650\u064a\u0631\u0657\u0627", "word_translation": "(as He is) All-Aware", "word_transliteration": "khabiran"}]}