{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u064a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0628\u0650\u0647\u0650\u06e6\u0653 \u0625\u0650\u0646\u0651\u064e\u0647\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u0645\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0646\u064e\u0627\u0653 \u0625\u0650\u0646\u0651\u064e\u0627 \u0643\u064f\u0646\u0651\u064e\u0627 \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6 \u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u064a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670", "word_translation": "it is recited", "word_transliteration": "yut'la"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f", "word_translation": "Indeed, it", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "(is) the truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0646\u064e\u0627\u0653", "word_translation": "our Lord", "word_transliteration": "rabbina"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0627", "word_translation": "Indeed, we", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u0651\u064e\u0627", "word_translation": "[we] were", "word_transliteration": "kunna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "before it", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u06e6", "word_translation": "before it", "word_transliteration": "qablihi"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "Muslims", "word_transliteration": "mus'limina"}]}