{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064f\u0642\u064e\u0644\u0651\u064e\u0628\u064f \u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650 \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u064a\u064e\u0670\u0644\u064e\u064a\u06e1\u062a\u064e\u0646\u064e\u0627\u0653 \u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627 \u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u0627\u06e0"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u062a\u064f\u0642\u064e\u0644\u0651\u064e\u0628\u064f", "word_translation": "will be turned about", "word_transliteration": "tuqallabu"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u064f\u0647\u064f\u0645\u06e1", "word_translation": "their faces", "word_transliteration": "wujuhuhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u0650", "word_translation": "the Fire", "word_transliteration": "al-nari"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "they will say", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0644\u064e\u064a\u06e1\u062a\u064e\u0646\u064e\u0627\u0653", "word_translation": "O we wish", "word_transliteration": "yalaytana"}, {"word_arabic_uthmani": "\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627", "word_translation": "we (had) obeyed", "word_transliteration": "ata'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u064e\u0639\u06e1\u0646\u064e\u0627", "word_translation": "and obeyed", "word_transliteration": "wa-ata'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0633\u064f\u0648\u0644\u064e\u0627\u06e0", "word_translation": "the Messenger!", "word_transliteration": "al-rasula"}]}