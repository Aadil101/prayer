{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u063a\u064e\u062f\u064e\u0648\u06e1\u062a\u064e \u0645\u0650\u0646\u06e1 \u0623\u064e\u0647\u06e1\u0644\u0650\u0643\u064e \u062a\u064f\u0628\u064e\u0648\u0651\u0650\u0626\u064f \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0645\u064e\u0642\u064e\u0670\u0639\u0650\u062f\u064e \u0644\u0650\u0644\u06e1\u0642\u0650\u062a\u064e\u0627\u0644\u0650\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0633\u064e\u0645\u0650\u064a\u0639\u064c \u0639\u064e\u0644\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u063a\u064e\u062f\u064e\u0648\u06e1\u062a\u064e", "word_translation": "you left early morning", "word_transliteration": "ghadawta"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u0650\u0643\u064e", "word_translation": "your household", "word_transliteration": "ahlika"}, {"word_arabic_uthmani": "\u062a\u064f\u0628\u064e\u0648\u0651\u0650\u0626\u064f", "word_translation": "to post", "word_transliteration": "tubawwi-u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0645\u064e\u0642\u064e\u0670\u0639\u0650\u062f\u064e", "word_translation": "(to take) positions", "word_transliteration": "maqa'ida"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0642\u0650\u062a\u064e\u0627\u0644\u0650\u06d7", "word_translation": "for the battle", "word_transliteration": "lil'qitali"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u064a\u0639\u064c", "word_translation": "(is) All-Hearing", "word_transliteration": "sami'un"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "All-Knowing", "word_transliteration": "alimun"}]}