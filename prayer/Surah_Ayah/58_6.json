{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064f\u0647\u064f\u0645\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627 \u0641\u064e\u064a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0647\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0653\u0627\u0652\u06da \u0623\u064e\u062d\u06e1\u0635\u064e\u0649\u0670\u0647\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0646\u064e\u0633\u064f\u0648\u0647\u064f\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u0649\u0670 \u0643\u064f\u0644\u0651\u0650 \u0634\u064e\u064a\u06e1\u0621\u0656 \u0634\u064e\u0647\u0650\u064a\u062f\u064c"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(On the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0628\u06e1\u0639\u064e\u062b\u064f\u0647\u064f\u0645\u064f", "word_translation": "(when) Allah will raise them", "word_transliteration": "yab'athuhumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(when) Allah will raise them", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u062c\u064e\u0645\u0650\u064a\u0639\u0657\u0627", "word_translation": "all", "word_transliteration": "jami'an"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0647\u064f\u0645", "word_translation": "and inform them", "word_transliteration": "fayunabbi-uhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0653\u0627\u0652\u06da", "word_translation": "they did", "word_transliteration": "amilu"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u06e1\u0635\u064e\u0649\u0670\u0647\u064f", "word_translation": "Allah has recorded it", "word_transliteration": "ahsahu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah has recorded it", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0633\u064f\u0648\u0647\u064f\u06da", "word_translation": "while they forgot it", "word_transliteration": "wanasuhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "(is) over", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "all", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0634\u064e\u064a\u06e1\u0621\u0656", "word_translation": "things", "word_transliteration": "shayin"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u064a\u062f\u064c", "word_translation": "a Witness", "word_transliteration": "shahidun"}]}