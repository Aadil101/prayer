{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0645\u064f\u0644\u06e1\u0643\u064f \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06da \u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0642\u064f\u0648\u0645\u064f \u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u064a\u064e\u062e\u06e1\u0633\u064e\u0631\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "And for Allah", "word_transliteration": "walillahi"}, {"word_arabic_uthmani": "\u0645\u064f\u0644\u06e1\u0643\u064f", "word_translation": "(is the) dominion", "word_transliteration": "mul'ku"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "(of) the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06da", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "and (the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064f\u0648\u0645\u064f", "word_translation": "is established", "word_transliteration": "taqumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f", "word_translation": "the Hour", "word_transliteration": "al-sa'atu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u06e1\u0633\u064e\u0631\u064f", "word_translation": "will lose", "word_transliteration": "yakhsaru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u06e1\u0637\u0650\u0644\u064f\u0648\u0646\u064e", "word_translation": "the falsifiers", "word_transliteration": "al-mub'tiluna"}]}