{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0645\u06e1 \u062a\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0647\u064f\u0645\u06e1 \u062e\u064e\u0631\u06e1\u062c\u0657\u0627 \u0641\u064e\u062e\u064e\u0631\u064e\u0627\u062c\u064f \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u062e\u064e\u064a\u06e1\u0631\u065e\u06d6 \u0648\u064e\u0647\u064f\u0648\u064e \u062e\u064e\u064a\u06e1\u0631\u064f \u0671\u0644\u0631\u0651\u064e\u0640\u0670\u0632\u0650\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1", "word_translation": "Or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u062a\u064e\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0647\u064f\u0645\u06e1", "word_translation": "you ask them", "word_transliteration": "tasaluhum"}, {"word_arabic_uthmani": "\u062e\u064e\u0631\u06e1\u062c\u0657\u0627", "word_translation": "(for) a payment", "word_transliteration": "kharjan"}, {"word_arabic_uthmani": "\u0641\u064e\u062e\u064e\u0631\u064e\u0627\u062c\u064f", "word_translation": "But the payment", "word_transliteration": "fakharaju"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u0643\u064e", "word_translation": "(of) your Lord", "word_transliteration": "rabbika"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e\u06d6", "word_translation": "(is) best", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "and He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u064f", "word_translation": "(is) the Best", "word_transliteration": "khayru"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u0640\u0670\u0632\u0650\u0642\u0650\u064a\u0646\u064e", "word_translation": "(of) the Providers", "word_transliteration": "al-raziqina"}]}