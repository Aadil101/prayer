{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e \u0646\u064e\u0646\u0633\u064e\u0649\u0670\u0643\u064f\u0645\u06e1 \u0643\u064e\u0645\u064e\u0627 \u0646\u064e\u0633\u0650\u064a\u062a\u064f\u0645\u06e1 \u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e \u064a\u064e\u0648\u06e1\u0645\u0650\u0643\u064f\u0645\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627 \u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0643\u064f\u0645\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f \u0648\u064e\u0645\u064e\u0627 \u0644\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0646\u0651\u064e\u0640\u0670\u0635\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "And it will be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "Today", "word_transliteration": "al-yawma"}, {"word_arabic_uthmani": "\u0646\u064e\u0646\u0633\u064e\u0649\u0670\u0643\u064f\u0645\u06e1", "word_translation": "We forget you", "word_transliteration": "nansakum"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0646\u064e\u0633\u0650\u064a\u062a\u064f\u0645\u06e1", "word_translation": "you forgot", "word_transliteration": "nasitum"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0627\u0653\u0621\u064e", "word_translation": "(the) meeting", "word_transliteration": "liqaa"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650\u0643\u064f\u0645\u06e1", "word_translation": "(of) this Day of yours", "word_transliteration": "yawmikum"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "(of) this Day of yours", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0623\u06e1\u0648\u064e\u0649\u0670\u0643\u064f\u0645\u064f", "word_translation": "and your abode", "word_transliteration": "wamawakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f", "word_translation": "(is) the Fire", "word_transliteration": "al-naru"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "and not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645", "word_translation": "for you", "word_transliteration": "lakum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "any", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0640\u0670\u0635\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "helpers", "word_transliteration": "nasirina"}]}