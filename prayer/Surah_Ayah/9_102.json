{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062e\u064e\u0631\u064f\u0648\u0646\u064e \u0671\u0639\u06e1\u062a\u064e\u0631\u064e\u0641\u064f\u0648\u0627\u0652 \u0628\u0650\u0630\u064f\u0646\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1 \u062e\u064e\u0644\u064e\u0637\u064f\u0648\u0627\u0652 \u0639\u064e\u0645\u064e\u0644\u0657\u0627 \u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627 \u0648\u064e\u0621\u064e\u0627\u062e\u064e\u0631\u064e \u0633\u064e\u064a\u0651\u0650\u0626\u064b\u0627 \u0639\u064e\u0633\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u0646 \u064a\u064e\u062a\u064f\u0648\u0628\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06da \u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u063a\u064e\u0641\u064f\u0648\u0631\u065e \u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062e\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "And others", "word_transliteration": "waakharuna"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u062a\u064e\u0631\u064e\u0641\u064f\u0648\u0627\u0652", "word_translation": "(who have) acknowledged", "word_transliteration": "i'tarafu"}, {"word_arabic_uthmani": "\u0628\u0650\u0630\u064f\u0646\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1", "word_translation": "their sins", "word_transliteration": "bidhunubihim"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0637\u064f\u0648\u0627\u0652", "word_translation": "They had mixed", "word_transliteration": "khalatu"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u064e\u0644\u0657\u0627", "word_translation": "a deed", "word_transliteration": "amalan"}, {"word_arabic_uthmani": "\u0635\u064e\u0670\u0644\u0650\u062d\u0657\u0627", "word_translation": "righteous", "word_transliteration": "salihan"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062e\u064e\u0631\u064e", "word_translation": "(with) other", "word_transliteration": "waakhara"}, {"word_arabic_uthmani": "\u0633\u064e\u064a\u0651\u0650\u0626\u064b\u0627", "word_translation": "(that was) evil", "word_transliteration": "sayyi-an"}, {"word_arabic_uthmani": "\u0639\u064e\u0633\u064e\u0649", "word_translation": "Perhaps", "word_transliteration": "asa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "[that]", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064f\u0648\u0628\u064e", "word_translation": "will turn (in mercy)", "word_transliteration": "yatuba"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650\u0645\u06e1\u06da", "word_translation": "to them", "word_transliteration": "alayhim"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u063a\u064e\u0641\u064f\u0648\u0631\u065e", "word_translation": "(is) Oft-Forgiving", "word_transliteration": "ghafurun"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u062d\u0650\u064a\u0645\u064c", "word_translation": "Most Merciful", "word_transliteration": "rahimun"}]}