{"ayahs": {"ayah_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6 \u0648\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u062d\u064e\u0637\u06e1\u0646\u064e\u0627 \u0628\u0650\u0645\u064e\u0627 \u0644\u064e\u062f\u064e\u064a\u06e1\u0647\u0650 \u062e\u064f\u0628\u06e1\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0643\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e\u06d6", "word_translation": "Thus", "word_transliteration": "kadhalika"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And verily", "word_transliteration": "waqad"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u064e\u0637\u06e1\u0646\u064e\u0627", "word_translation": "We encompassed", "word_transliteration": "ahatna"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0644\u064e\u062f\u064e\u064a\u06e1\u0647\u0650", "word_translation": "(was) with him", "word_transliteration": "ladayhi"}, {"word_arabic_uthmani": "\u062e\u064f\u0628\u06e1\u0631\u0657\u0627", "word_translation": "(of the) information", "word_transliteration": "khub'ran"}]}