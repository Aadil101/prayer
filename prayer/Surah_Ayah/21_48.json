{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0627 \u0645\u064f\u0648\u0633\u064e\u0649\u0670 \u0648\u064e\u0647\u064e\u0670\u0631\u064f\u0648\u0646\u064e \u0671\u0644\u06e1\u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u064e \u0648\u064e\u0636\u0650\u064a\u064e\u0627\u0653\u0621\u0657 \u0648\u064e\u0630\u0650\u0643\u06e1\u0631\u0657\u0627 \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And verily", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0627", "word_translation": "We gave", "word_transliteration": "atayna"}, {"word_arabic_uthmani": "\u0645\u064f\u0648\u0633\u064e\u0649\u0670", "word_translation": "Musa", "word_transliteration": "musa"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u0670\u0631\u064f\u0648\u0646\u064e", "word_translation": "and Harun", "word_transliteration": "waharuna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064f\u0631\u06e1\u0642\u064e\u0627\u0646\u064e", "word_translation": "the Criterion", "word_transliteration": "al-fur'qana"}, {"word_arabic_uthmani": "\u0648\u064e\u0636\u0650\u064a\u064e\u0627\u0653\u0621\u0657", "word_translation": "and a light", "word_transliteration": "wadiyaan"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u0650\u0643\u06e1\u0631\u0657\u0627", "word_translation": "and a Reminder", "word_transliteration": "wadhik'ran"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e", "word_translation": "for the righteous", "word_transliteration": "lil'muttaqina"}]}