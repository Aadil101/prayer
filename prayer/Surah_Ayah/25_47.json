{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062c\u064e\u0639\u064e\u0644\u064e \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064e \u0644\u0650\u0628\u064e\u0627\u0633\u0657\u0627 \u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0648\u06e1\u0645\u064e \u0633\u064f\u0628\u064e\u0627\u062a\u0657\u0627 \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u064e \u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e \u0646\u064f\u0634\u064f\u0648\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "for you", "word_transliteration": "lakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u064a\u06e1\u0644\u064e", "word_translation": "the night", "word_transliteration": "al-layla"}, {"word_arabic_uthmani": "\u0644\u0650\u0628\u064e\u0627\u0633\u0657\u0627", "word_translation": "(as) a covering", "word_transliteration": "libasan"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0646\u0651\u064e\u0648\u06e1\u0645\u064e", "word_translation": "and the sleep", "word_transliteration": "wal-nawma"}, {"word_arabic_uthmani": "\u0633\u064f\u0628\u064e\u0627\u062a\u0657\u0627", "word_translation": "a rest", "word_transliteration": "subatan"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "and made", "word_transliteration": "waja'ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u064e", "word_translation": "the day", "word_transliteration": "al-