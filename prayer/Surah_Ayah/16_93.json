{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0634\u064e\u0627\u0653\u0621\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u064e\u062c\u064e\u0639\u064e\u0644\u064e\u0643\u064f\u0645\u06e1 \u0623\u064f\u0645\u0651\u064e\u0629\u0657 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657 \u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646 \u064a\u064f\u0636\u0650\u0644\u0651\u064f \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06da \u0648\u064e\u0644\u064e\u062a\u064f\u0633\u06e1\u0640\u0654\u064e\u0644\u064f\u0646\u0651\u064e \u0639\u064e\u0645\u0651\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0634\u064e\u0627\u0653\u0621\u064e", "word_translation": "Allah (had) willed", "word_transliteration": "shaa"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah (had) willed", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u064e\u062c\u064e\u0639\u064e\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "surely He (could) have made you", "word_transliteration": "laja'alakum"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u0657", "word_translation": "a nation", "word_transliteration": "ummatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657", "word_translation": "one", "word_transliteration": "wahidatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0670\u0643\u0650\u0646", "word_translation": "but", "word_transliteration": "walakin"}, {"word_arabic_uthmani": "\u064a\u064f\u0636\u0650\u0644\u0651\u064f", "word_translation": "He lets go as