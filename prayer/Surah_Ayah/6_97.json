{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062c\u064e\u0639\u064e\u0644\u064e \u0644\u064e\u0643\u064f\u0645\u064f \u0671\u0644\u0646\u0651\u064f\u062c\u064f\u0648\u0645\u064e \u0644\u0650\u062a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u064e\u0627 \u0641\u0650\u064a \u0638\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650 \u0671\u0644\u06e1\u0628\u064e\u0631\u0651\u0650 \u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u0650\u06d7 \u0642\u064e\u062f\u06e1 \u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650 \u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0648\u064e", "word_translation": "And He", "word_transliteration": "wahuwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062c\u064e\u0639\u064e\u0644\u064e", "word_translation": "made", "word_transliteration": "ja'ala"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064f\u0645\u064f", "word_translation": "for you", "word_transliteration": "lakumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u062c\u064f\u0648\u0645\u064e", "word_translation": "the stars", "word_transliteration": "al-nujuma"}, {"word_arabic_uthmani": "\u0644\u0650\u062a\u064e\u0647\u06e1\u062a\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "that you may guide yourselves", "word_transliteration": "litahtadu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u064e\u0627", "word_translation": "with them", "word_transliteration": "biha"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0638\u064f\u0644\u064f\u0645\u064e\u0670\u062a\u0650", "word_translation": "the darkness[es]", "word_transliteration": "zulumati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0631\u0651\u0650", "word_translation": "(of) the land", "word_transliteration": "al-bari"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u0650\u06d7", "word_translation": "and the sea", "word_transliteration": "wal-bahri"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Certainly", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0641\u064e\u0635\u0651\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have made clear", "word_transliteration": "fassalna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u064a\u064e\u0670\u062a\u0650", "word_translation": "the Signs", "word_transliteration": "al-ayati"}, {"word_arabic_uthmani": "\u0644\u0650\u0642\u064e\u0648\u06e1\u0645\u0656", "word_translation": "for a people", "word_transliteration": "liqawmin"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "(who) know", "word_transliteration": "ya'lamuna"}]}