{"ayahs": {"ayah_uthmani": "\u0647\u064f\u0648\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062e\u064e\u0644\u064e\u0642\u064e\u0643\u064f\u0645\u06e1 \u0641\u064e\u0645\u0650\u0646\u0643\u064f\u0645\u06e1 \u0643\u064e\u0627\u0641\u0650\u0631\u065e \u0648\u064e\u0645\u0650\u0646\u0643\u064f\u0645 \u0645\u0651\u064f\u0624\u06e1\u0645\u0650\u0646\u065e\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0628\u0650\u0645\u064e\u0627 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e \u0628\u064e\u0635\u0650\u064a\u0631\u064c"}, "words": [{"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "He", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "(is) the One Who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u062e\u064e\u0644\u064e\u0642\u064e\u0643\u064f\u0645\u06e1", "word_translation": "created you", "word_transliteration": "khalaqakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u0650\u0646\u0643\u064f\u0645\u06e1", "word_translation": "and among you", "word_transliteration": "faminkum"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0641\u0650\u0631\u065e", "word_translation": "(is) a disbeliever", "word_transliteration": "kafirun"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u0650\u0646\u0643\u064f\u0645", "word_translation": "and among you", "word_transliteration": "waminkum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0624\u06e1\u0645\u0650\u0646\u065e\u06da", "word_translation": "(is) a believer", "word_transliteration": "mu'minun"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "you do", "word_transliteration": "ta'maluna"}, {"word_arabic_uthmani": "\u0628\u064e\u0635\u0650\u064a\u0631\u064c", "word_translation": "(is) All-Seer", "word_transliteration": "basirun"}]}