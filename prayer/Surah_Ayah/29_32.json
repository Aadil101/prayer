{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e \u0625\u0650\u0646\u0651\u064e \u0641\u0650\u064a\u0647\u064e\u0627 \u0644\u064f\u0648\u0637\u0657\u0627\u06da \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0646\u064e\u062d\u06e1\u0646\u064f \u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0646 \u0641\u0650\u064a\u0647\u064e\u0627\u06d6 \u0644\u064e\u0646\u064f\u0646\u064e\u062c\u0651\u0650\u064a\u064e\u0646\u0651\u064e\u0647\u064f\u06e5 \u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0671\u0645\u06e1\u0631\u064e\u0623\u064e\u062a\u064e\u0647\u064f\u06e5 \u0643\u064e\u0627\u0646\u064e\u062a\u06e1 \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u063a\u064e\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e", "word_translation": "He said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0644\u064f\u0648\u0637\u0657\u0627\u06da", "word_translation": "(is) Lut", "word_transliteration": "lutan"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0646\u064e\u062d\u06e1\u0646\u064f", "word_translation": "We", "word_transliteration": "nahnu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "know better", "word_transliteration": "a'lamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0646", "word_translation": "who", "word_transliteration": "biman"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627\u06d6", "word_translation": "(is) in it", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064f\u0646\u064e\u062c\u0651\u0650\u064a\u064e\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "We will surely save him", "word_transliteration": "lanunajjiyannahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0647\u064f\u06e5\u0653", "word_translation": "and his family", "word_transliteration": "wa-ahlahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0671\u0645\u06e1\u0631\u064e\u0623\u064e\u062a\u064e\u0647\u064f\u06e5", "word_translation": "his wife", "word_transliteration": "im'ra-atahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064e\u062a\u06e1", "word_translation": "She", "word_transliteration": "kanat"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "(is) of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0670\u0628\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "those who remain behind", "word_transliteration": "al-ghabirina"}]}