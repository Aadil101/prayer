{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0670\u0628\u064e\u0646\u0650\u064a\u0653 \u0621\u064e\u0627\u062f\u064e\u0645\u064e \u0642\u064e\u062f\u06e1 \u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1 \u0644\u0650\u0628\u064e\u0627\u0633\u0657\u0627 \u064a\u064f\u0648\u064e\u0670\u0631\u0650\u064a \u0633\u064e\u0648\u06e1\u0621\u064e\u0670\u062a\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0631\u0650\u064a\u0634\u0657\u0627\u06d6 \u0648\u064e\u0644\u0650\u0628\u064e\u0627\u0633\u064f \u0671\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670 \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062e\u064e\u064a\u06e1\u0631\u065e\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0645\u0650\u0646\u06e1 \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1 \u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0670\u0628\u064e\u0646\u0650\u064a\u0653", "word_translation": "O Children", "word_transliteration": "yabani"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062f\u064e\u0645\u064e", "word_translation": "(of) Adam", "word_transliteration": "adama"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0632\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We have sent down", "word_transliteration": "anzalna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "to you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0644\u0650\u0628\u064e\u0627\u0633\u0657\u0627", "word_translation": "clothing", "word_transliteration": "libasan"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u064e\u0670\u0631\u0650\u064a", "word_translation": "it covers", "word_transliteration": "yuwari"}, {"word_arabic_uthmani": "\u0633\u064e\u0648\u06e1\u0621\u064e\u0670\u062a\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your shame", "word_transliteration": "sawatikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u0650\u064a\u0634\u0657\u0627\u06d6", "word_translation": "and (as) an adornment", "word_transliteration": "warishan"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u0650\u0628\u064e\u0627\u0633\u064f", "word_translation": "But the clothing", "word_transliteration": "walibasu"}, {"word_arabic_uthmani": "\u0671\u0644\u062a\u0651\u064e\u0642\u06e1\u0648\u064e\u0649\u0670", "word_translation": "(of) [the] righteousness", "word_transliteration": "al-taqwa"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "that", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e\u06da", "word_translation": "(is) best", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e1", "word_translation": "(is) from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "(the) Signs", "word_transliteration": "ayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "so that they may", "word_transliteration": "la'allahum"}, {"word_arabic_uthmani": "\u064a\u064e\u0630\u0651\u064e\u0643\u0651\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "remember", "word_transliteration": "yadhakkaruna"}]}