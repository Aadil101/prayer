{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0643\u064f\u0645\u06e1 \u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627 \u0648\u064e\u0642\u064e\u062f \u062f\u0651\u064e\u062e\u064e\u0644\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650 \u0648\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u062f\u06e1 \u062e\u064e\u0631\u064e\u062c\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6\u06da \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064f\u0648\u0643\u064f\u0645\u06e1", "word_translation": "they come to you", "word_transliteration": "jaukum"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "they say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u0651\u064e\u0627", "word_translation": "We believe", "word_transliteration": "amanna"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u062f", "word_translation": "But certainly", "word_transliteration": "waqad"}, {"word_arabic_uthmani": "\u062f\u0651\u064e\u062e\u064e\u0644\u064f\u0648\u0627\u0652", "word_translation": "they entered", "word_transliteration": "dakhalu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0643\u064f\u0641\u06e1\u0631\u0650", "word_translation": "with disbelief", "word_transliteration": "bil-kuf'ri"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u0645\u06e1", "word_translation": "and they", "word_transliteration": "wahum"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "certainly", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u062e\u064e\u0631\u064e\u062c\u064f\u0648\u0627\u0652", "word_translation": "went out", "word_transliteration": "kharaju"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u06da", "word_translation": "with it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u0644\u064e\u0645\u064f", "word_translation": "knows best", "word_transliteration": "a'lamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "[of] what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they were", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u062a\u064f\u0645\u064f\u0648\u0646\u064e", "word_translation": "hiding", "word_transliteration": "yaktumuna"}]}