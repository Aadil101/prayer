{"ayahs": {"ayah_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064f \u0623\u064e\u0639\u06e1\u062f\u064e\u0627\u0653\u0621\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6 \u0644\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a\u0647\u064e\u0627 \u062f\u064e\u0627\u0631\u064f \u0671\u0644\u06e1\u062e\u064f\u0644\u06e1\u062f\u0650 \u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064e\u06e2 \u0628\u0650\u0645\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627 \u064a\u064e\u062c\u06e1\u062d\u064e\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064f", "word_translation": "(is the) recompense", "word_transliteration": "jazau"}, {"word_arabic_uthmani": "\u0623\u064e\u0639\u06e1\u062f\u064e\u0627\u0653\u0621\u0650", "word_translation": "(of the) enemies", "word_transliteration": "a'dai"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0631\u064f\u06d6", "word_translation": "the Fire", "word_transliteration": "al-naru"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u06e1", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a\u0647\u064e\u0627", "word_translation": "therein", "word_transliteration": "fiha"}, {"word_arabic_uthmani": "\u062f\u064e\u0627\u0631\u064f", "word_translation": "(is the) home", "word_transliteration": "daru"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064f\u0644\u06e1\u062f\u0650", "word_translation": "(of) the eternity", "word_transliteration": "al-khul'di"}, {"word_arabic_uthmani": "\u062c\u064e\u0632\u064e\u0627\u0653\u0621\u064e\u06e2", "word_translation": "(as) recompense", "word_transliteration": "jazaan"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used (to)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0640\u0654\u064e\u0627\u064a\u064e\u0670\u062a\u0650\u0646\u064e\u0627", "word_translation": "of Our Verses", "word_transliteration": "biayatina"}, {"word_arabic_uthmani": "\u064a\u064e\u062c\u06e1\u062d\u064e\u062f\u064f\u0648\u0646\u064e", "word_translation": "reject", "word_transliteration": "yajhaduna"}]}