{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0644\u064e\u0645\u06e1 \u062a\u064e\u0631\u064e \u0625\u0650\u0644\u064e\u0649 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0632\u064e\u0643\u0651\u064f\u0648\u0646\u064e \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06da \u0628\u064e\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064f\u0632\u064e\u0643\u0651\u0650\u064a \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0648\u064e\u0644\u064e\u0627 \u064a\u064f\u0638\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e \u0641\u064e\u062a\u0650\u064a\u0644\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0644\u064e\u0645\u06e1", "word_translation": "Do not", "word_transliteration": "alam"}, {"word_arabic_uthmani": "\u062a\u064e\u0631\u064e", "word_translation": "you see", "word_transliteration": "tara"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649", "word_translation": "[towards]", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0632\u064e\u0643\u0651\u064f\u0648\u0646\u064e", "word_translation": "claim purity", "word_transliteration": "yuzakkuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06da", "word_translation": "(for) themselves", "word_transliteration": "anfusahum"}, {"word_arabic_uthmani": "\u0628\u064e\u0644\u0650", "word_translation": "Nay", "word_transliteration": "bali"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "(it is) Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u064a\u064f\u0632\u064e\u0643\u0651\u0650\u064a", "word_translation": "He purifies", "word_transliteration": "yuzakki"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064f\u0638\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "they will be wronged", "word_transliteration": "yuz'lamuna"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u0650\u064a\u0644\u064b\u0627", "word_translation": "(even as much as) a hair on a date-seed", "word_transliteration": "fatilan"}]}