{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1 \u0641\u0650\u064a \u0671\u0644\u06e1\u0642\u0650\u0635\u064e\u0627\u0635\u0650 \u062d\u064e\u064a\u064e\u0648\u0670\u0629\u065e \u064a\u064e\u0640\u0670\u0653\u0623\u064f\u0648\u0652\u0644\u0650\u064a \u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "And for you", "word_transliteration": "walakum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u0635\u064e\u0627\u0635\u0650", "word_translation": "the legal retribution", "word_transliteration": "al-qisasi"}, {"word_arabic_uthmani": "\u062d\u064e\u064a\u064e\u0648\u0670\u0629\u065e", "word_translation": "(is) life", "word_transliteration": "hayatun"}, {"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064f\u0648\u0652\u0644\u0650\u064a", "word_translation": "O men", "word_transliteration": "yauli"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0644\u06e1\u0628\u064e\u0670\u0628\u0650", "word_translation": "(of) understanding", "word_transliteration": "al-albabi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "So that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "(become) righteous", "word_transliteration": "tattaquna"}]}