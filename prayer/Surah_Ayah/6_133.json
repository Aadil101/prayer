{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0671\u0644\u06e1\u063a\u064e\u0646\u0650\u064a\u0651\u064f \u0630\u064f\u0648 \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0629\u0650\u06da \u0625\u0650\u0646 \u064a\u064e\u0634\u064e\u0623\u06e1 \u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u06e1\u0643\u064f\u0645\u06e1 \u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u0650\u0641\u06e1 \u0645\u0650\u0646\u06e2 \u0628\u064e\u0639\u06e1\u062f\u0650\u0643\u064f\u0645 \u0645\u0651\u064e\u0627 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0643\u064e\u0645\u064e\u0627\u0653 \u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645 \u0645\u0651\u0650\u0646 \u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0629\u0650 \u0642\u064e\u0648\u06e1\u0645\u064d \u0621\u064e\u0627\u062e\u064e\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0628\u0651\u064f\u0643\u064e", "word_translation": "And your Lord", "word_transliteration": "warabbuka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u0646\u0650\u064a\u0651\u064f", "word_translation": "(is) the Self-Sufficient", "word_transliteration": "al-ghaniyu"}, {"word_arabic_uthmani": "\u0630\u064f\u0648", "word_translation": "(the) Possessor", "word_transliteration": "dhu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0629\u0650\u06da", "word_translation": "(of) mercy", "word_transliteration": "al-rahmati"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "If", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0623\u06e1", "word_translation": "He wills", "word_transliteration": "yasha"}, {"word_arabic_uthmani": "\u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u06e1\u0643\u064f\u0645\u06e1", "word_translation": "He can take you away", "word_transliteration": "yudh'hib'kum"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0633\u06e1\u062a\u064e\u062e\u06e1\u0644\u0650\u0641\u06e1", "word_translation": "and grant succession", "word_transliteration": "wayastakhlif"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u06e2", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u0650\u0643\u064f\u0645", "word_translation": "after you", "word_transliteration": "ba'dikum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "(to) whom", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627\u0653", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0634\u064e\u0623\u064e\u0643\u064f\u0645", "word_translation": "He raised you", "word_transliteration": "ansha-akum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u0629\u0650", "word_translation": "the descendants", "word_transliteration": "dhurriyyati"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u064d", "word_translation": "(of) people", "word_transliteration": "qawmin"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062e\u064e\u0631\u0650\u064a\u0646\u064e", "word_translation": "other", "word_transliteration": "akharina"}]}