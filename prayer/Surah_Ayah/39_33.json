{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a \u062c\u064e\u0627\u0653\u0621\u064e \u0628\u0650\u0671\u0644\u0635\u0651\u0650\u062f\u06e1\u0642\u0650 \u0648\u064e\u0635\u064e\u062f\u0651\u064e\u0642\u064e \u0628\u0650\u0647\u0650\u06e6\u0653 \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a", "word_translation": "And the one who", "word_transliteration": "wa-alladhi"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e", "word_translation": "brought", "word_transliteration": "jaa"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0635\u0651\u0650\u062f\u06e1\u0642\u0650", "word_translation": "the truth", "word_transliteration": "bil-sid'qi"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u064e\u062f\u0651\u064e\u0642\u064e", "word_translation": "and believed", "word_transliteration": "wasaddaqa"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6\u0653", "word_translation": "in it", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) the righteous", "word_transliteration": "al-mutaquna"}]}