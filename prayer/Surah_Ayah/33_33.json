{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0631\u06e1\u0646\u064e \u0641\u0650\u064a \u0628\u064f\u064a\u064f\u0648\u062a\u0650\u0643\u064f\u0646\u0651\u064e \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u0628\u064e\u0631\u0651\u064e\u062c\u06e1\u0646\u064e \u062a\u064e\u0628\u064e\u0631\u0651\u064f\u062c\u064e \u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650 \u0671\u0644\u06e1\u0623\u064f\u0648\u0644\u064e\u0649\u0670\u06d6 \u0648\u064e\u0623\u064e\u0642\u0650\u0645\u06e1\u0646\u064e \u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0621\u064e\u0627\u062a\u0650\u064a\u0646\u064e \u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e \u0648\u064e\u0623\u064e\u0637\u0650\u0639\u06e1\u0646\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627 \u064a\u064f\u0631\u0650\u064a\u062f\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0644\u0650\u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u064e \u0639\u064e\u0646\u0643\u064f\u0645\u064f \u0671\u0644\u0631\u0651\u0650\u062c\u06e1\u0633\u064e \u0623\u064e\u0647\u06e1\u0644\u064e \u0671\u0644\u06e1\u0628\u064e\u064a\u06e1\u062a\u0650 \u0648\u064e\u064a\u064f\u0637\u064e\u0647\u0651\u0650\u0631\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0637\u06e1\u0647\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0631\u06e1\u0646\u064e", "word_translation": "And stay", "word_transliteration": "waqarna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0628\u064f\u064a\u064f\u0648\u062a\u0650\u0643\u064f\u0646\u0651\u064e", "word_translation": "your houses", "word_transliteration": "buyutikunna"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "and (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u0631\u0651\u064e\u062c\u06e1\u0646\u064e", "word_translation": "display yourselves", "word_transliteration": "tabarrajna"}, {"word_arabic_uthmani": "\u062a\u064e\u0628\u064e\u0631\u0651\u064f\u062c\u064e", "word_translation": "(as was the) display", "word_transliteration": "tabarruja"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062c\u064e\u0670\u0647\u0650\u0644\u0650\u064a\u0651\u064e\u0629\u0650", "word_translation": "(of the times of) ignorance", "word_transliteration": "al-jahiliyati"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064f\u0648\u0644\u064e\u0649\u0670\u06d6", "word_translation": "the former", "word_transliteration": "al-ula"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u0650\u0645\u06e1\u0646\u064e", "word_translation": "And establish", "word_transliteration": "wa-aqim'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0644\u064e\u0648\u0670\u0629\u064e", "word_translation": "the prayer", "word_transliteration": "al-salata"}, {"word_arabic_uthmani": "\u0648\u064e\u0621\u064e\u0627\u062a\u0650\u064a\u0646\u064e", "word_translation": "and give", "word_transliteration": "waatina"}, {"word_arabic_uthmani": "\u0671\u0644\u0632\u0651\u064e\u0643\u064e\u0648\u0670\u0629\u064e", "word_translation": "zakah", "word_transliteration": "al-zakata"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u0639\u06e1\u0646\u064e", "word_translation": "and obey", "word_transliteration": "wa-ati'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064e\u0647\u064f\u06e5\u0653\u06da", "word_translation": "and His Messenger", "word_transliteration": "warasulahu"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0645\u064e\u0627", "word_translation": "Only", "word_transliteration": "innama"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u062f\u064f", "word_translation": "Allah wishes", "word_transliteration": "yuridu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah wishes", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0644\u0650\u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u064e", "word_translation": "to remove", "word_transliteration": "liyudh'hiba"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0643\u064f\u0645\u064f", "word_translation": "from you", "word_transliteration": "ankumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u0650\u062c\u06e1\u0633\u064e", "word_translation": "the impurity", "word_transliteration": "al-rij'sa"}, {"word_arabic_uthmani": "\u0623\u064e\u0647\u06e1\u0644\u064e", "word_translation": "(O) People", "word_transliteration": "ahla"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u064a\u06e1\u062a\u0650", "word_translation": "(of) the House", "word_transliteration": "al-bayti"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0637\u064e\u0647\u0651\u0650\u0631\u064e\u0643\u064f\u0645\u06e1", "word_translation": "And to purify you", "word_transliteration": "wayutahhirakum"}, {"word_arabic_uthmani": "\u062a\u064e\u0637\u06e1\u0647\u0650\u064a\u0631\u0657\u0627", "word_translation": "(with thorough) purification", "word_transliteration": "tathiran"}]}