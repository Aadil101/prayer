{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064e\u0627 \u0671\u0633\u06e1\u062a\u064e\u0637\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1 \u0648\u064e\u0671\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0627\u0652 \u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652 \u0648\u064e\u0623\u064e\u0646\u0641\u0650\u0642\u064f\u0648\u0627\u0652 \u062e\u064e\u064a\u06e1\u0631\u0657\u0627 \u0644\u0651\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0643\u064f\u0645\u06e1\u06d7 \u0648\u064e\u0645\u064e\u0646 \u064a\u064f\u0648\u0642\u064e \u0634\u064f\u062d\u0651\u064e \u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6 \u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0642\u064f\u0648\u0627\u0652", "word_translation": "So fear", "word_transliteration": "fa-ittaqu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "as much as", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u0637\u064e\u0639\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you are able", "word_transliteration": "is'tata'tum"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0633\u06e1\u0645\u064e\u0639\u064f\u0648\u0627\u0652", "word_translation": "and listen", "word_transliteration": "wa-is'ma'u"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0637\u0650\u064a\u0639\u064f\u0648\u0627\u0652", "word_translation": "and obey", "word_transliteration": "wa-ati'u"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0641\u0650\u0642\u064f\u0648\u0627\u0652", "word_translation": "and spend;", "word_transliteration": "wa-anfiqu"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u0657\u0627", "word_translation": "(it is) better", "word_transliteration": "khayran"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0643\u064f\u0645\u06e1\u06d7", "word_translation": "for your souls", "word_transliteration": "li-anfusikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "And whoever", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u064a\u064f\u0648\u0642\u064e", "word_translation": "is saved", "word_transliteration": "yuqa"}, {"word_arabic_uthmani": "\u0634\u064f\u062d\u0651\u064e", "word_translation": "(from the) greediness", "word_transliteration": "shuhha"}, {"word_arabic_uthmani": "\u0646\u064e\u0641\u06e1\u0633\u0650\u0647\u0650\u06e6", "word_translation": "(of) his soul", "word_transliteration": "nafsihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "then those", "word_transliteration": "fa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "[they]", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(are) the successful ones", "word_transliteration": "al-muf'lihuna"}]}