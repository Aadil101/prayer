{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u0649\u0670 \u062f\u064e\u0627\u0631\u0650 \u0671\u0644\u0633\u0651\u064e\u0644\u064e\u0670\u0645\u0650 \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0625\u0650\u0644\u064e\u0649\u0670 \u0635\u0650\u0631\u064e\u0670\u0637\u0656 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0656"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0653\u0627\u0652", "word_translation": "calls", "word_transliteration": "yad'u"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u062f\u064e\u0627\u0631\u0650", "word_translation": "(the) Home", "word_transliteration": "dari"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0644\u064e\u0670\u0645\u0650", "word_translation": "(of) the Peace", "word_transliteration": "al-salami"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a", "word_translation": "and guides", "word_transliteration": "wayahdi"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0656", "word_translation": "(the) straight path", "word_transliteration": "siratin"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u0