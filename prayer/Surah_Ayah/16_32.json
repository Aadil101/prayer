{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f \u0637\u064e\u064a\u0651\u0650\u0628\u0650\u064a\u0646\u064e \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0633\u064e\u0644\u064e\u0670\u0645\u064c \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u064f \u0671\u062f\u06e1\u062e\u064f\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u062c\u064e\u0646\u0651\u064e\u0629\u064e \u0628\u0650\u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u064e\u0648\u064e\u0641\u0651\u064e\u0649\u0670\u0647\u064f\u0645\u064f", "word_translation": "take them in death", "word_transliteration": "tatawaffahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e\u0629\u064f", "word_translation": "the Angels", "word_transliteration": "al-malaikatu"}, {"word_arabic_uthmani": "\u0637\u064e\u064a\u0651\u0650\u0628\u0650\u064a\u0646\u064e", "word_translation": "(when they are) pure", "word_transliteration": "tayyibina"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "saying", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0633\u064e\u0644\u064e\u0670\u0645\u064c", "word_translation": "Peace", "word_transliteration": "salamun"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645\u064f", "word_translation": "(be) upon you", "word_transliteration": "alaykumu"}, {"word_arabic_uthmani": "\u0671\u062f\u06e1\u062e\