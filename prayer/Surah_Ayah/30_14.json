{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e \u062a\u064e\u0642\u064f\u0648\u0645\u064f \u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u064a\u064e\u062a\u064e\u0641\u064e\u0631\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "And (the) Day", "word_transliteration": "wayawma"}, {"word_arabic_uthmani": "\u062a\u064e\u0642\u064f\u0648\u0645\u064f", "word_translation": "will (be) established", "word_transliteration": "taqumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0627\u0639\u064e\u0629\u064f", "word_translation": "the Hour", "word_transliteration": "al-sa'atu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u064e\u0641\u064e\u0631\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "they will become separated", "word_transliteration": "yatafarraquna"}]}