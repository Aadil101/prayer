{"ayahs": {"ayah_uthmani": "\u0642\u064e\u0627\u0644\u064e\u0627 \u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627 \u0638\u064e\u0644\u064e\u0645\u06e1\u0646\u064e\u0627\u0653 \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0646\u064e\u0627 \u0648\u064e\u0625\u0650\u0646 \u0644\u0651\u064e\u0645\u06e1 \u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1 \u0644\u064e\u0646\u064e\u0627 \u0648\u064e\u062a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627 \u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064e\u0627", "word_translation": "Both of them said", "word_transliteration": "qala"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064e\u0646\u064e\u0627", "word_translation": "Our Lord", "word_transliteration": "rabbana"}, {"word_arabic_uthmani": "\u0638\u064e\u0644\u064e\u0645\u06e1\u0646\u064e\u0627\u0653", "word_translation": "we have wronged", "word_transliteration": "zalamna"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0646\u064e\u0627", "word_translation": "ourselves", "word_transliteration": "anfusana"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "and if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u062a\u064e\u063a\u06e1\u0641\u0650\u0631\u06e1", "word_translation": "You forgive", "word_transliteration": "taghfir"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0627", "word_translation": "[for] us", "word_transliteration": "lana"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0631\u06e1\u062d\u064e\u0645\u06e1\u0646\u064e\u0627", "word_translation": "and have mercy (on) us", "word_transliteration": "watarhamna"}, {"word_arabic_uthmani": "\u0644\u064e\u0646\u064e\u0643\u064f\u0648\u0646\u064e\u0646\u0651\u064e", "word_translation": "surely we will be", "word_transliteration": "lanakunanna"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "among", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062e\u064e\u0670\u0633\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the losers", "word_transliteration": "al-khasirina"}]}