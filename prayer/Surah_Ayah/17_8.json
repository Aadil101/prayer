{"ayahs": {"ayah_uthmani": "\u0639\u064e\u0633\u064e\u0649\u0670 \u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1 \u0623\u064e\u0646 \u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u064e\u0643\u064f\u0645\u06e1\u06da \u0648\u064e\u0625\u0650\u0646\u06e1 \u0639\u064f\u062f\u062a\u0651\u064f\u0645\u06e1 \u0639\u064f\u062f\u06e1\u0646\u064e\u0627\u06da \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e \u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u062d\u064e\u0635\u0650\u064a\u0631\u064b\u0627"}, "words": [{"word_arabic_uthmani": "\u0639\u064e\u0633\u064e\u0649\u0670", "word_translation": "(It) may be", "word_transliteration": "asa"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0643\u064f\u0645\u06e1", "word_translation": "that your Lord", "word_transliteration": "rabbukum"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that your Lord", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u0631\u06e1\u062d\u064e\u0645\u064e\u0643\u064f\u0645\u06e1\u06da", "word_translation": "(may) have mercy upon you", "word_transliteration": "yarhamakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "But if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0639\u064f\u062f\u062a\u0651\u064f\u0645\u06e1", "word_translation": "you return", "word_transliteration": "udttum"}, {"word_arabic_uthmani": "\u0639\u064f\u062f\u06e1\u0646\u064e\u0627\u06da", "word_translation": "We will return", "word_transliteration": "ud'na"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "And We have made", "word_transliteration": "waja'alna"}, {"word_arabic_uthmani": "\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e", "word_translation": "Hell", "word_transliteration": "jahannama"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "for the disbelievers", "word_transliteration": "lil'kafirina"}, {"word_arabic_uthmani": "\u062d\u064e\u0635\u0650\u064a\u0631\u064b\u0627", "word_translation": "a prison-bed", "word_transliteration": "hasiran"}]}