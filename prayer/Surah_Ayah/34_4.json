{"ayahs": {"ayah_uthmani": "\u0644\u0651\u0650\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650\u06da \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0644\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u065e \u0648\u064e\u0631\u0650\u0632\u06e1\u0642\u065e \u0643\u064e\u0631\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0644\u0651\u0650\u064a\u064e\u062c\u06e1\u0632\u0650\u064a\u064e", "word_translation": "That He may reward", "word_transliteration": "liyajziya"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believe", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and do", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650\u06da", "word_translation": "righteous deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "Those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u065e", "word_translation": "(will be) forgiveness", "word_transliteration": "maghfiratun"}, {"word_arabic_uthmani": "\u0648\u064e\