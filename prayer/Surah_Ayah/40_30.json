{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653 \u0621\u064e\u0627\u0645\u064e\u0646\u064e \u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650 \u0625\u0650\u0646\u0651\u0650\u064a\u0653 \u0623\u064e\u062e\u064e\u0627\u0641\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645 \u0645\u0651\u0650\u062b\u06e1\u0644\u064e \u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0632\u064e\u0627\u0628\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "And said", "word_transliteration": "waqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0653", "word_translation": "(he) who", "word_transliteration": "alladhi"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064e", "word_translation": "believed", "word_transliteration": "amana"}, {"word_arabic_uthmani": "\u064a\u064e\u0670\u0642\u064e\u0648\u06e1\u0645\u0650", "word_translation": "O my people!", "word_transliteration": "yaqawmi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u0650\u064a\u0653", "word_translation": "Indeed I", "word_transliteration": "inni"}, {"word_arabic_uthmani": "\u0623\u064e\u062e\u064e\u0627\u0641\u064f", "word_translation": "[I] fear", "word_transliteration": "akhafu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064f\u0645", "word_translation": "for you", "word_transliteration": "alaykum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u062b\u06e1\u0644\u064e", "word_translation": "like", "word_transliteration": "mith'la"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "(the) day", "word_transliteration": "yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u062d\u06e1\u0632\u064e\u0627\u0628\u0650", "word_translation": "(of) the companies", "word_transliteration": "al-ahzabi"}]}