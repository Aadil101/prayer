{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0648\u064e\u0644\u064e\u062f\u0657\u0627\u06d7 \u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5\u06d6 \u0628\u064e\u0644 \u0644\u0651\u064e\u0647\u064f\u06e5 \u0645\u064e\u0627 \u0641\u0650\u064a \u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650 \u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d6 \u0643\u064f\u0644\u0651\u065e \u0644\u0651\u064e\u0647\u064f\u06e5 \u0642\u064e\u0670\u0646\u0650\u062a\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "And they said", "word_transliteration": "waqalu"}, {"word_arabic_uthmani": "\u0671\u062a\u0651\u064e\u062e\u064e\u0630\u064e", "word_translation": "has taken", "word_transliteration": "ittakhadha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u062f\u0657\u0627\u06d7", "word_translation": "a son", "word_transliteration": "waladan"}, {"word_arabic_uthmani": "\u0633\u064f\u0628\u06e1\u062d\u064e\u0670\u0646\u064e\u0647\u064f\u06e5\u06d6", "word_translation": "Glory be to Him", "word_transliteration": "sub'hanahu"}, {"word_arabic_uthmani": "\u0628\u064e\u0644", "word_translation": "Nay", "word_transliteration": "bal"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u06e5", "word_translation": "for Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "(is) what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0645\u064e\u0670\u0648\u064e\u0670\u062a\u0650", "word_translation": "the heavens", "word_transliteration": "al-samawati"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0636\u0650\u06d6", "word_translation": "and the earth", "word_transliteration": "wal-ardi"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u065e", "word_translation": "All", "word_transliteration": "kullun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u06e5", "word_translation": "to Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0642\u064e\u0670\u0646\u0650\u062a\u064f\u0648\u0646\u064e", "word_translation": "(are) humbly obedient", "word_transliteration": "qanituna"}]}