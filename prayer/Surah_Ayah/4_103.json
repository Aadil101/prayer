eration": "al-mu'minina"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u0657\u0627", "word_translation": "prescribed", "word_transliteration": "kitaban"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0648\u06e1\u0642\u064f\u0648\u062a\u0657\u0627", "word_translation": "(at) fixed times", "word_transliteration": "mawqutan"}]}