{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646 \u064a\u064e\u062a\u0651\u064e\u0642\u0650\u064a \u0628\u0650\u0648\u064e\u062c\u06e1\u0647\u0650\u0647\u0650\u06e6 \u0633\u064f\u0648\u0653\u0621\u064e \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u064a\u064e\u0648\u06e1\u0645\u064e \u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650\u06da \u0648\u064e\u0642\u0650\u064a\u0644\u064e \u0644\u0650\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e \u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652 \u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0641\u064e\u0645\u064e\u0646", "word_translation": "Then (is) he who", "word_transliteration": "afaman"}, {"word_arabic_uthmani": "\u064a\u064e\u062a\u0651\u064e\u0642\u0650\u064a", "word_translation": "will shield", "word_transliteration": "yattaqi"}, {"word_arabic_uthmani": "\u0628\u0650\u0648\u064e\u062c\u06e1\u0647\u0650\u0647\u0650\u06e6", "word_translation": "with his face", "word_transliteration": "biwajhihi"}, {"word_arabic_uthmani": "\u0633\u064f\u0648\u0653\u0621\u064e", "word_translation": "(the) worst", "word_transliteration": "sua"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "punishment", "word_transliteration": "al-'adhabi"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(on the) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u0650\u064a\u064e\u0670\u0645\u064e\u0629\u0650\u06da", "word_translation": "(of) the Resurrection", "word_transliteration": "al-qiyamati"}, {"word_arabic_uthmani": "\u0648\u064e\u0642\u0650\u064a\u0644\u064e", "word_translation": "And it will be said", "word_transliteration": "waqila"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "to the wrongdoers", "word_transliteration": "lilzzalimina"}, {"word_arabic_uthmani": "\u0630\u064f\u0648\u0642\u064f\u0648\u0627\u0652", "word_translation": "Taste", "word_transliteration": "dhuqu"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0643\u06e1\u0633\u0650\u0628\u064f\u0648\u0646\u064e", "word_translation": "earn", "word_transliteration": "taksibuna"}]}