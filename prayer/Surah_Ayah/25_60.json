{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627 \u0642\u0650\u064a\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u064f \u0671\u0633\u06e1\u062c\u064f\u062f\u064f\u0648\u0627\u0652\u06e4 \u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652 \u0648\u064e\u0645\u064e\u0627 \u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f \u0623\u064e\u0646\u064e\u0633\u06e1\u062c\u064f\u062f\u064f \u0644\u0650\u0645\u064e\u0627 \u062a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0646\u064e\u0627 \u0648\u064e\u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1 \u0646\u064f\u0641\u064f\u0648\u0631\u0657\u0627\u06e9"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u064e\u0627", "word_translation": "And when", "word_transliteration": "wa-idha"}, {"word_arabic_uthmani": "\u0642\u0650\u064a\u0644\u064e", "word_translation": "it is said", "word_transliteration": "qila"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645\u064f", "word_translation": "to them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062c\u064f\u062f\u064f\u0648\u0627\u0652\u06e4", "word_translation": "Prostrate", "word_transliteration": "us'judu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "to the Most Gracious", "word_transliteration": "lilrrahmani"}, {"word_arabic_uthmani": "\u0642\u064e\u0627\u0644\u064f\u0648\u0627\u0652", "word_translation": "They say", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And what", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u064f", "word_translation": "(is) the Most Gracious", "word_transliteration": "al-rahmanu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064e\u0633\u06e1\u062c\u064f\u062f\u064f", "word_translation": "Should we prostrate", "word_transliteration": "anasjudu"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e\u0627", "word_translation": "to what", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u062a\u064e\u0623\u06e1\u0645\u064f\u0631\u064f\u0646\u064e\u0627", "word_translation": "you order us", "word_transliteration": "tamuruna"}, {"word_arabic_uthmani": "\u0648\u064e\u0632\u064e\u0627\u062f\u064e\u0647\u064f\u0645\u06e1", "word_translation": "And it increases them", "word_transliteration": "wazadahum"}, {"word_arabic_uthmani": "\u0646\u064f\u0641\u064f\u0648\u0631\u0657\u0627\u06e9", "word_translation": "(in) aversion", "word_transliteration": "nufuran"}]}