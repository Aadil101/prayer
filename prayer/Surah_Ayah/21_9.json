{"ayahs": {"ayah_uthmani": "\u062b\u064f\u0645\u0651\u064e \u0635\u064e\u062f\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0648\u064e\u0639\u06e1\u062f\u064e \u0641\u064e\u0623\u064e\u0646\u062c\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0648\u064e\u0645\u064e\u0646 \u0646\u0651\u064e\u0634\u064e\u0627\u0653\u0621\u064f \u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0627 \u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0631\u0650\u0641\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0635\u064e\u062f\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f", "word_translation": "We fulfilled (for) them", "word_transliteration": "sadaqnahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0648\u064e\u0639\u06e1\u062f\u064e", "word_translation": "the promise", "word_transliteration": "al-wa'da"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u062c\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1", "word_translation": "and We saved them", "word_transliteration": "fa-anjaynahum"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0646", "word_translation": "and whom", "word_transliteration": "waman"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0634\u064e\u0627\u0653\u0621\u064f", "word_translation": "We willed", "word_transliteration": "nashau"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0647\u06e1\u0644\u064e\u0643\u06e1\u0646\u064e\u0627", "word_translation": "and We destroyed", "word_transliteration": "wa-ahlakna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0633\u06e1\u0631\u0650\u0641\u0650\u064a\u0646\u064e", "word_translation": "the transgressors", "word_transliteration": "al-mus'rifina"}]}