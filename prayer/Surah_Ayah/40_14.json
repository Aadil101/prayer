{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0644\u0651\u064e\u0647\u064e \u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e \u0644\u064e\u0647\u064f \u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e \u0648\u064e\u0644\u064e\u0648\u06e1 \u0643\u064e\u0631\u0650\u0647\u064e \u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0627\u0652", "word_translation": "So invoke", "word_transliteration": "fa-id'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064e", "word_translation": "Allah", "word_transliteration": "al-laha"}, {"word_arabic_uthmani": "\u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e", "word_translation": "(being) sincere", "word_transliteration": "mukh'lisina"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f", "word_translation": "to Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e", "word_translation": "(in) the religion", "word_transliteration": "al-dina"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "even though", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0643\u064e\u0631\u0650\u0647\u064e", "word_translation": "dislike (it)", "word_transliteration": "kariha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u064f\u0648\u0646\u064e", "word_translation": "the disbelievers", "word_transliteration": "al-kafiruna"}]}