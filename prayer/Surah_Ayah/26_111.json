{"ayahs": {"ayah_uthmani": "\u06de\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u064f\u0624\u06e1\u0645\u0650\u0646\u064f \u0644\u064e\u0643\u064e \u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e\u0643\u064e \u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0630\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u06de\u0642\u064e\u0627\u0644\u064f\u0648\u0653\u0627\u0652", "word_translation": "They said", "word_transliteration": "qalu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u064f\u0624\u06e1\u0645\u0650\u0646\u064f", "word_translation": "Should we believe", "word_transliteration": "anu'minu"}, {"word_arabic_uthmani": "\u0644\u064e\u0643\u064e", "word_translation": "in you", "word_transliteration": "laka"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0628\u064e\u0639\u064e\u0643\u064e", "word_translation": "while followed you", "word_transliteration": "wa-ittaba'aka"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0631\u06e1\u0630\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "the lowest", "word_transliteration": "al-ardhaluna"}]}