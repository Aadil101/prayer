{"ayahs": {"ayah_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0644\u06e1\u0643\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650\u06da \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u064a\u064e\u0648\u06e1\u0645\u064b\u0627 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e \u0639\u064e\u0633\u0650\u064a\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0644\u06e1\u0643\u064f", "word_translation": "The Sovereignty", "word_transliteration": "al-mul'ku"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u064d", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "(will be) truly", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650\u06da", "word_translation": "for the Most Gracious", "word_transliteration": "lilrrahmani"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And (it will) be", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064b\u0627", "word_translation": "a Day", "word_transliteration": "yawman"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "for", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u064e\u0670\u0641\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "the disbelievers", "word_transliteration": "al-kafirina"}, {"word_arabic_uthmani": "\u0639\u064e\u0633\u0650\u064a\u0631\u0657\u0627", "word_translation": "difficult", "word_transliteration": "asiran"}]}