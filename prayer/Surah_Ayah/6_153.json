{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e \u0647\u064e\u0670\u0630\u064e\u0627 \u0635\u0650\u0631\u064e\u0670\u0637\u0650\u064a \u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627 \u0641\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0647\u064f\u06d6 \u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0633\u0651\u064f\u0628\u064f\u0644\u064e \u0641\u064e\u062a\u064e\u0641\u064e\u0631\u0651\u064e\u0642\u064e \u0628\u0650\u0643\u064f\u0645\u06e1 \u0639\u064e\u0646 \u0633\u064e\u0628\u0650\u064a\u0644\u0650\u0647\u0650\u06e6\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0635\u0651\u064e\u0649\u0670\u0643\u064f\u0645 \u0628\u0650\u0647\u0650\u06e6 \u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0651\u064e", "word_translation": "And that", "word_transliteration": "wa-anna"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627", "word_translation": "this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0650\u064a", "word_translation": "(is) My path", "word_transliteration": "sirati"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627", "word_translation": "straight", "word_transliteration": "mus'taqiman"}, {"word_arabic_uthmani": "\u0641\u064e\u0671\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0647\u064f\u06d6", "word_translation": "so follow it", "word_transliteration": "fa-ittabi'uhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "And (do) not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u0628\u0650\u0639\u064f\u0648\u0627\u0652", "word_translation": "follow", "word_transliteration": "tattabi'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064f\u0628\u064f\u0644\u064e", "word_translation": "the (other) paths", "word_transliteration": "al-subula"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0641\u064e\u0631\u0651\u064e\u0642\u064e", "word_translation": "then they will separate", "word_transliteration": "fatafarraqa"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0645\u06e1", "word_translation": "you", "word_transliteration": "bikum"}, {"word_arabic_uthmani": "\u0639\u064e\u0646", "word_translation": "from", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650\u0647\u0650\u06e6\u06da", "word_translation": "His path", "word_transliteration": "sabilihi"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064f\u0645\u06e1", "word_translation": "That", "word_transliteration": "dhalikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0635\u0651\u064e\u0649\u0670\u0643\u064f\u0645", "word_translation": "(He) has enjoined on you", "word_transliteration": "wassakum"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "[with it]", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0644\u064e\u0639\u064e\u0644\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "so that you may", "word_transliteration": "la'allakum"}, {"word_arabic_uthmani": "\u062a\u064e\u062a\u0651\u064e\u0642\u064f\u0648\u0646\u064e", "word_translation": "become righteous", "word_transliteration": "tattaquna"}]}