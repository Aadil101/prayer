{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1 \u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627 \u0646\u064f\u0648\u062d\u0657\u0627 \u0648\u064e\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e \u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0641\u0650\u064a \u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u0650\u0647\u0650\u0645\u064e\u0627 \u0671\u0644\u0646\u0651\u064f\u0628\u064f\u0648\u0651\u064e\u0629\u064e \u0648\u064e\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e\u06d6 \u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064f\u0647\u06e1\u062a\u064e\u062f\u0656\u06d6 \u0648\u064e\u0643\u064e\u062b\u0650\u064a\u0631\u065e \u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1 \u0641\u064e\u0670\u0633\u0650\u0642\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0642\u064e\u062f\u06e1", "word_translation": "And certainly", "word_transliteration": "walaqad"}, {"word_arabic_uthmani": "\u0623\u064e\u0631\u06e1\u0633\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We sent", "word_transliteration": "arsalna"}, {"word_arabic_uthmani": "\u0646\u064f\u0648\u062d\u0657\u0627", "word_translation": "Nuh", "word_transliteration": "nuhan"}, {"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0628\u06e1\u0631\u064e\u0670\u0647\u0650\u064a\u0645\u064e", "word_translation": "and Ibrahim", "word_transliteration": "wa-ib'rahima"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "and We placed", "word_transliteration": "waja'alna"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0630\u064f\u0631\u0651\u0650\u064a\u0651\u064e\u062a\u0650\u0647\u0650\u0645\u064e\u0627", "word_translation": "their offspring", "word_transliteration": "dhurriyyatihima"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064f\u0628\u064f\u0648\u0651\u064e\u0629\u064e", "word_translation": "Prophethood", "word_transliteration": "al-nubuwata"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e\u06d6", "word_translation": "and the Scripture", "word_transliteration": "wal-kitaba"}, {"word_arabic_uthmani": "\u0641\u064e\u0645\u0650\u0646\u06e1\u0647\u064f\u0645", "word_translation": "and among them", "word_transliteration": "famin'hum"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0647\u06e1\u062a\u064e\u062f\u0656\u06d6", "word_translation": "(is) a guided one", "word_transliteration": "muh'tadin"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u062b\u0650\u064a\u0631\u065e", "word_translation": "but most", "word_transliteration": "wakathirun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "of them", "word_transliteration": "min'hum"}, {"word_arabic_uthmani": "\u0641\u064e\u0670\u0633\u0650\u0642\u064f\u0648\u0646\u064e", "word_translation": "(are) defiantly disobediently", "word_transliteration": "fasiquna"}]}