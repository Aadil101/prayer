{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653 \u0623\u064e\u0646 \u064a\u064e\u0643\u064f\u0648\u0646\u064e \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0623\u064f\u0645\u0651\u064e\u0629\u0657 \u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657 \u0644\u0651\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627 \u0644\u0650\u0645\u064e\u0646 \u064a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f \u0628\u0650\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650 \u0644\u0650\u0628\u064f\u064a\u064f\u0648\u062a\u0650\u0647\u0650\u0645\u06e1 \u0633\u064f\u0642\u064f\u0641\u0657\u0627 \u0645\u0651\u0650\u0646 \u0641\u0650\u0636\u0651\u064e\u0629\u0656 \u0648\u064e\u0645\u064e\u0639\u064e\u0627\u0631\u0650\u062c\u064e \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627 \u064a\u064e\u0638\u06e1\u0647\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1\u0644\u064e\u0627\u0653", "word_translation": "And if not", "word_transliteration": "walawla"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0648\u0646\u064e", "word_translation": "(would) become", "word_transliteration": "yakuna"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "[the] mankind", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u0657", "word_translation": "a community", "word_transliteration": "ummatan"}, {"word_arabic_uthmani": "\u0648\u064e\u0670\u062d\u0650\u062f\u064e\u0629\u0657", "word_translation": "one", "word_transliteration": "wahidatan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u062c\u064e\u0639\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We (would have) made", "word_transliteration": "laja'alna"}, {"word_arabic_uthmani": "\u0644\u0650\u0645\u064e\u0646", "word_translation": "for (one) who", "word_transliteration": "liman"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u06e1\u0641\u064f\u0631\u064f", "word_translation": "disbelieves", "word_transliteration": "yakfuru"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0631\u0651\u064e\u062d\u06e1\u0645\u064e\u0670\u0646\u0650", "word_translation": "in the Most Gracious", "word_transliteration": "bil-rahmani"}, {"word_arabic_uthmani": "\u0644\u0650\u0628\u064f\u064a\u064f\u0648\u062a\u0650\u0647\u0650\u0645\u06e1", "word_translation": "for their houses", "word_transliteration": "libuyutihim"}, {"word_arabic_uthmani": "\u0633\u064f\u0642\u064f\u0641\u0657\u0627", "word_translation": "roofs", "word_transliteration": "suqufan"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "of", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0641\u0650\u0636\u0651\u064e\u0629\u0656", "word_translation": "silver", "word_transliteration": "fiddatin"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0639\u064e\u0627\u0631\u0650\u062c\u064e", "word_translation": "and stairways", "word_transliteration": "wama'arija"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u064e\u0627", "word_translation": "upon which", "word_transliteration": "alayha"}, {"word_arabic_uthmani": "\u064a\u064e\u0638\u06e1\u0647\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "they mount", "word_transliteration": "yazharuna"}]}