{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0647\u064e\u0627\u062c\u064e\u0631\u064f\u0648\u0627\u0652 \u0648\u064e\u062c\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652 \u0641\u0650\u064a \u0633\u064e\u0628\u0650\u064a\u0644\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0648\u064e\u0648\u0627\u0652 \u0648\u0651\u064e\u0646\u064e\u0635\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u062d\u064e\u0642\u0651\u0657\u0627\u06da \u0644\u0651\u064e\u0647\u064f\u0645 \u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u065e \u0648\u064e\u0631\u0650\u0632\u06e1\u0642\u065e \u0643\u064e\u0631\u0650\u064a\u0645\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "And those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064e\u0627\u062c\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "and emigrated", "word_transliteration": "wahajaru"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u064e\u0670\u0647\u064e\u062f\u064f\u0648\u0627\u0652", "word_translation": "and strove hard", "word_transliteration": "wajahadu"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0633\u064e\u0628\u0650\u064a\u0644\u0650", "word_translation": "(the) way", "word_transliteration": "sabili"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "and those who", "word_transliteration": "wa-alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0648\u064e\u0648\u0627\u0652", "word_translation": "gave shelter", "word_transliteration": "awaw"}, {"word_arabic_uthmani": "\u0648\u0651\u064e\u0646\u064e\u0635\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "and helped", "word_transliteration": "wanasaru"}, {"word_arabic_uthmani": "\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "those", "word_transliteration": "ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "they (are)", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "the believers", "word_transliteration": "al-mu'minuna"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u0657\u0627\u06da", "word_translation": "(in) truth", "word_transliteration": "haqqan"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645", "word_translation": "For them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u063a\u06e1\u0641\u0650\u0631\u064e\u0629\u065e", "word_translation": "(is) forgiveness", "word_transliteration": "maghfiratun"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u0650\u0632\u06e1\u0642\u065e", "word_translation": "and a provision", "word_transliteration": "wariz'qun"}, {"word_arabic_uthmani": "\u0643\u064e\u0631\u0650\u064a\u0645\u065e", "word_translation": "noble", "word_transliteration": "karimun"}]}