{"ayahs": {"ayah_uthmani": "\u0645\u0651\u064e\u0646 \u064a\u064f\u0635\u06e1\u0631\u064e\u0641\u06e1 \u0639\u064e\u0646\u06e1\u0647\u064f \u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656 \u0641\u064e\u0642\u064e\u062f\u06e1 \u0631\u064e\u062d\u0650\u0645\u064e\u0647\u064f\u06e5\u06da \u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0671\u0644\u06e1\u0641\u064e\u0648\u06e1\u0632\u064f \u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f"}, "words": [{"word_arabic_uthmani": "\u0645\u0651\u064e\u0646", "word_translation": "Whoever", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064f\u0635\u06e1\u0631\u064e\u0641\u06e1", "word_translation": "is averted", "word_transliteration": "yus'raf"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f", "word_translation": "from it", "word_transliteration": "anhu"}, {"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e\u0626\u0650\u0630\u0656", "word_translation": "that Day", "word_transliteration": "yawma-idhin"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "then surely", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u0650\u0645\u064e\u0647\u064f\u06e5\u06da", "word_translation": "He had Mercy on him", "word_transliteration": "rahimahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "And that", "word_transliteration": "wadhalika"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0641\u064e\u0648\u06e1\u0632\u064f", "word_translation": "(is) the success", "word_transliteration": "al-fawzu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0628\u0650\u064a\u0646\u064f", "word_translation": "(the) clear", "word_transliteration": "al-mubinu"}]}