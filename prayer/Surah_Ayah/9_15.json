{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u06e1 \u063a\u064e\u064a\u06e1\u0638\u064e \u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1\u06d7 \u0648\u064e\u064a\u064e\u062a\u064f\u0648\u0628\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u064e\u0649\u0670 \u0645\u064e\u0646 \u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u0650\u064a\u0645\u064c \u062d\u064e\u0643\u0650\u064a\u0645\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u0630\u06e1\u0647\u0650\u0628\u06e1", "word_translation": "And remove", "word_transliteration": "wayudh'hib"}, {"word_arabic_uthmani": "\u063a\u064e\u064a\u06e1\u0638\u064e", "word_translation": "(the) anger", "word_transliteration": "ghayza"}, {"word_arabic_uthmani": "\u0642\u064f\u0644\u064f\u0648\u0628\u0650\u0647\u0650\u0645\u06e1\u06d7", "word_translation": "(of) their hearts", "word_transliteration": "qulubihim"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062a\u064f\u0648\u0628\u064f", "word_translation": "And accepts repentance", "word_transliteration": "wayatubu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "of", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0645\u064e\u0646", "word_translation": "whom", "word_transliteration": "man"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0627\u0653\u0621\u064f\u06d7", "word_translation": "He wills", "word_transliteration": "yashau"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064c", "word_translation": "(is) All-Knower", "word_transliteration": "a