{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0642\u064f\u0644\u0650 \u0671\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0627\u0652 \u0641\u064e\u0633\u064e\u064a\u064e\u0631\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0645\u064e\u0644\u064e\u0643\u064f\u0645\u06e1 \u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5 \u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e\u06d6 \u0648\u064e\u0633\u064e\u062a\u064f\u0631\u064e\u062f\u0651\u064f\u0648\u0646\u064e \u0625\u0650\u0644\u064e\u0649\u0670 \u0639\u064e\u0670\u0644\u0650\u0645\u0650 \u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650 \u0648\u064e\u0671\u0644\u0634\u0651\u064e\u0647\u064e\u0670\u062f\u064e\u0629\u0650 \u0641\u064e\u064a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0643\u064f\u0645 \u0628\u0650\u0645\u064e\u0627 \u0643\u064f\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0642\u064f\u0644\u0650", "word_translation": "And say", "word_transliteration": "waquli"}, {"word_arabic_uthmani": "\u0671\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0627\u0652", "word_translation": "Do", "word_transliteration": "i'malu"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u064a\u064e\u0631\u064e\u0649", "word_translation": "then Allah will see", "word_transliteration": "fasayara"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "then Allah will see", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0645\u064e\u0644\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your deed", "word_transliteration": "amalakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u0633\u064f\u0648\u0644\u064f\u0647\u064f\u06e5", "word_translation": "and His Messenger", "word_transliteration": "warasuluhu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e\u06d6", "word_translation": "and the believers", "word_transliteration": "wal-mu'minuna"}, {"word_arabic_uthmani": "\u0648\u064e\u0633\u064e\u062a\u064f\u0631\u064e\u062f\u0651\u064f\u0648\u0646\u064e", "word_translation": "And you will be brought back", "word_transliteration": "wasaturadduna"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u0649\u0670", "word_translation": "to", "word_transliteration": "ila"}, {"word_arabic_uthmani": "\u0639\u064e\u0670\u0644\u0650\u0645\u0650", "word_translation": "(the) Knower", "word_transliteration": "alimi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u063a\u064e\u064a\u06e1\u0628\u0650", "word_translation": "(of) the unseen", "word_transliteration": "al-ghaybi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0634\u0651\u064e\u0647\u064e\u0670\u062f\u064e\u0629\u0650", "word_translation": "and the seen", "word_transliteration": "wal-shahadati"}, {"word_arabic_uthmani": "\u0641\u064e\u064a\u064f\u0646\u064e\u0628\u0651\u0650\u0626\u064f\u0643\u064f\u0645", "word_translation": "then He will inform you", "word_transliteration": "fayunabbi-ukum"}, {"word_arabic_uthmani": "\u0628\u0650\u0645\u064e\u0627", "word_translation": "of what", "word_transliteration": "bima"}, {"word_arabic_uthmani": "\u0643\u064f\u0646\u062a\u064f\u0645\u06e1", "word_translation": "you used (to)", "word_transliteration": "kuntum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u06e1\u0645\u064e\u0644\u064f\u0648\u0646\u064e", "word_translation": "do", "word_transliteration": "ta'maluna"}]}