{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0641\u064e\u0623\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u0645\u06e1 \u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627 \u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627 \u0641\u0650\u064a \u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627 \u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650 \u0648\u064e\u0645\u064e\u0627 \u0644\u064e\u0647\u064f\u0645 \u0645\u0651\u0650\u0646 \u0646\u0651\u064e\u0640\u0670\u0635\u0650\u0631\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "Then as for", "word_transliteration": "fa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve[d]", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f\u0647\u064f\u0645\u06e1", "word_translation": "then I will punish them", "word_transliteration": "fa-u'adhibuhum"}, {"word_arabic_uthmani": "\u0639\u064e\u0630\u064e\u0627\u0628\u0657\u0627", "word_translation": "(with) a punishment", "word_transliteration": "adhaban"}, {"word_arabic_uthmani": "\u0634\u064e\u062f\u0650\u064a\u062f\u0657\u0627", "word_translation": "severe", "word_transliteration": "shadidan"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u064f\u0646\u06e1\u064a\u064e\u0627", "word_translation": "the world", "word_transliteration": "al-dun'ya"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u064e\u0629\u0650", "word_translation": "and (in) the Hereafter", "word_transliteration": "wal-akhirati"}, {"word_arabic_uthmani": "\u0648\u064e\u0645\u064e\u0627", "word_translation": "And not", "word_transliteration": "wama"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f\u0645", "word_translation": "for them", "word_transliteration": "lahum"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "[of]", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0646\u0651\u064e\u0640\u0670\u0635\u0650\u0631\u0650\u064a\u0646\u064e", "word_translation": "(any) helpers", "word_transliteration": "nasirina"}]}