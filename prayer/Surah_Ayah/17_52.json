{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0643\u064f\u0645\u06e1 \u0641\u064e\u062a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0646\u064e \u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650\u0647\u0650\u06e6 \u0648\u064e\u062a\u064e\u0638\u064f\u0646\u0651\u064f\u0648\u0646\u064e \u0625\u0650\u0646 \u0644\u0651\u064e\u0628\u0650\u062b\u06e1\u062a\u064f\u0645\u06e1 \u0625\u0650\u0644\u0651\u064e\u0627 \u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(On) the Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u062f\u06e1\u0639\u064f\u0648\u0643\u064f\u0645\u06e1", "word_translation": "He will call you", "word_transliteration": "yad'ukum"}, {"word_arabic_uthmani": "\u0641\u064e\u062a\u064e\u0633\u06e1\u062a\u064e\u062c\u0650\u064a\u0628\u064f\u0648\u0646\u064e", "word_translation": "and you will respond", "word_transliteration": "fatastajibuna"}, {"word_arabic_uthmani": "\u0628\u0650\u062d\u064e\u0645\u06e1\u062f\u0650\u0647\u0650\u06e6", "word_translation": "with His Praise", "word_transliteration": "bihamdihi"}, {"word_arabic_uthmani": "\u0648\u064e\u062a\u064e\u0638\u064f\u0646\u0651\u064f\u0648\u0646\u064e", "word_translation": "and you will think", "word_transliteration": "watazunnuna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646", "word_translation": "not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0628\u0650\u062b\u06e1\u062a\u064f\u0645\u06e1", "word_translation": "you had remained", "word_transliteration": "labith'tum"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u0650\u064a\u0644\u0657\u0627", "word_translation": "a little (while)", "word_transliteration": "qalilan"}]}