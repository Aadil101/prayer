{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1 \u0641\u064e\u0631\u064e\u0642\u06e1\u0646\u064e\u0627 \u0628\u0650\u0643\u064f\u0645\u064f \u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u064e \u0641\u064e\u0623\u064e\u0646\u062c\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064f\u0645\u06e1 \u0648\u064e\u0623\u064e\u063a\u06e1\u0631\u064e\u0642\u06e1\u0646\u064e\u0627\u0653 \u0621\u064e\u0627\u0644\u064e \u0641\u0650\u0631\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e \u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1 \u062a\u064e\u0646\u0638\u064f\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0630\u06e1", "word_translation": "And when", "word_transliteration": "wa-idh"}, {"word_arabic_uthmani": "\u0641\u064e\u0631\u064e\u0642\u06e1\u0646\u064e\u0627", "word_translation": "We parted", "word_transliteration": "faraqna"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064f\u0645\u064f", "word_translation": "for you", "word_transliteration": "bikumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u062d\u06e1\u0631\u064e", "word_translation": "the sea", "word_transliteration": "al-bahra"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0646\u062c\u064e\u064a\u06e1\u0646\u064e\u0670\u0643\u064f\u0645\u06e1", "word_translation": "then We saved you", "word_transliteration": "fa-anjaynakum"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u063a\u06e1\u0631\u064e\u0642\u06e1\u0646\u064e\u0627\u0653", "word_translation": "and We drowned", "word_transliteration": "wa-aghraqna"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0644\u064e", "word_translation": "(the) people", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0641\u0650\u0631\u06e1\u0639\u064e\u0648\u06e1\u0646\u064e", "word_translation": "(of) Firaun", "word_transliteration": "fir'awna"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u062a\u064f\u0645\u06e1", "word_translation": "while you", "word_transliteration": "wa-antum"}, {"word_arabic_uthmani": "\u062a\u064e\u0646\u0638\u064f\u0631\u064f\u0648\u0646\u064e", "word_translation": "(were) looking", "word_transliteration": "tanzuruna"}]}