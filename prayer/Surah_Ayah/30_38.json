{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u062a\u0650 \u0630\u064e\u0627 \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0628\u064e\u0649\u0670 \u062d\u064e\u0642\u0651\u064e\u0647\u064f\u06e5 \u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u0633\u06e1\u0643\u0650\u064a\u0646\u064e \u0648\u064e\u0671\u0628\u06e1\u0646\u064e \u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u062e\u064e\u064a\u06e1\u0631\u065e \u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0631\u0650\u064a\u062f\u064f\u0648\u0646\u064e \u0648\u064e\u062c\u06e1\u0647\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6 \u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e \u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0640\u0654\u064e\u0627\u062a\u0650", "word_translation": "So give", "word_transliteration": "faati"}, {"word_arabic_uthmani": "\u0630\u064e\u0627", "word_translation": "the relative", "word_transliteration": "dha"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0628\u064e\u0649\u0670", "word_translation": "the relative", "word_transliteration": "al-qur'ba"}, {"word_arabic_uthmani": "\u062d\u064e\u0642\u0651\u064e\u0647\u064f\u06e5", "word_translation": "his right", "word_transliteration": "haqqahu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u0645\u0650\u0633\u06e1\u0643\u0650\u064a\u0646\u064e", "word_translation": "and the poor", "word_transliteration": "wal-mis'kina"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0628\u06e1\u0646\u064e", "word_translation": "and the wayfarer", "word_transliteration": "wa-ib'na"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u0628\u0650\u064a\u0644\u0650\u06da", "word_translation": "and the wayfarer", "word_transliteration": "al-sabili"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e", "word_translation": "(is) best", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "for those who", "word_transliteration": "lilladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0631\u0650\u064a\u062f\u064f\u0648\u0646\u064e", "word_translation": "desire", "word_transliteration": "yuriduna"}, {"word_arabic_uthmani": "\u0648\u064e\u062c\u06e1\u0647\u064e", "word_translation": "(the) Countenance", "word_transliteration": "wajha"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650\u06d6", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064f\u0648\u0652\u0644\u064e\u0640\u0670\u0653\u0626\u0650\u0643\u064e", "word_translation": "And those", "word_transliteration": "wa-ulaika"}, {"word_arabic_uthmani": "\u0647\u064f\u0645\u064f", "word_translation": "they", "word_transliteration": "humu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0641\u06e1\u0644\u0650\u062d\u064f\u0648\u0646\u064e", "word_translation": "(are) the successful ones", "word_transliteration": "al-muf'lihuna"}]}