{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u064a\u064e\u0643\u064e\u0627\u062f\u064f \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652 \u0644\u064e\u064a\u064f\u0632\u06e1\u0644\u0650\u0642\u064f\u0648\u0646\u064e\u0643\u064e \u0628\u0650\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u0650\u0647\u0650\u0645\u06e1 \u0644\u064e\u0645\u0651\u064e\u0627 \u0633\u064e\u0645\u0650\u0639\u064f\u0648\u0627\u0652 \u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e \u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0645\u064e\u062c\u06e1\u0646\u064f\u0648\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And indeed", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064e\u0627\u062f\u064f", "word_translation": "would almost", "word_transliteration": "yakadu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0627\u0652", "word_translation": "disbelieve", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064f\u0632\u06e1\u0644\u0650\u0642\u064f\u0648\u0646\u064e\u0643\u064e", "word_translation": "surely make you slip", "word_transliteration": "layuz'liqunaka"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0628\u06e1\u0635\u064e\u0670\u0631\u0650\u0647\u0650\u0645\u06e1", "word_translation": "with their eyes", "word_transliteration": "bi-absarihim"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u0651\u064e\u0627", "word_translation": "when", "word_transliteration": "lamma"}, {"word_arabic_uthmani": "\u0633\u064e\u0645\u0650\u0639\u064f\u0648\u0627\u0652", "word_translation": "they hear", "word_transliteration": "sami'u"}, {"word_arabic_uthmani": "\u0671\u0644\u0630\u0651\u0650\u0643\u06e1\u0631\u064e", "word_translation": "the Message", "word_transliteration": "al-dhik'ra"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "and they say", "word_transliteration": "wayaquluna"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed he", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u062c\u06e1\u0646\u064f\u0648\u0646\u065e", "word_translation": "(is) surely mad", "word_transliteration": "lamajnunun"}]}