{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0646\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u064f \u0645\u0650\u0646\u064e \u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650 \u0645\u064e\u0627 \u0647\u064f\u0648\u064e \u0634\u0650\u0641\u064e\u0627\u0653\u0621\u065e \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e \u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u0632\u0650\u064a\u062f\u064f \u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e \u0625\u0650\u0644\u0651\u064e\u0627 \u062e\u064e\u0633\u064e\u0627\u0631\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0646\u064f\u0646\u064e\u0632\u0651\u0650\u0644\u064f", "word_translation": "And We reveal", "word_transliteration": "wanunazzilu"}, {"word_arabic_uthmani": "\u0645\u0650\u0646\u064e", "word_translation": "from", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0642\u064f\u0631\u06e1\u0621\u064e\u0627\u0646\u0650", "word_translation": "the Quran", "word_transliteration": "al-qur'ani"}, {"word_arabic_uthmani": "\u0645\u064e\u0627", "word_translation": "that", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0647\u064f\u0648\u064e", "word_translation": "it", "word_transliteration": "huwa"}, {"word_arabic_uthmani": "\u0634\u0650\u0641\u064e\u0627\u0653\u0621\u065e", "word_translation": "(is) a healing", "word_transliteration": "shifaon"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e", "word_translation": "and a mercy", "word_transliteration": "warahmatun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "for the believers", "word_transliteration": "lil'mu'minina"}, {"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0627", "word_translation": "but not", "word_transliteration": "wala"}, {"word_arabic_uthmani": "\u064a\u064e\u0632\u0650\u064a\u062f\u064f", "word_translation": "it increases", "word_transliteration": "yazidu"}, {"word_arabic_uthmani": "\u0671\u0644\u0638\u0651\u064e\u0640\u0670\u0644\u0650\u0645\u0650\u064a\u0646\u064e", "word_translation": "the wrongdoers", "word_transliteration": "al-zalimina"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "except", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u062e\u064e\u0633\u064e\u0627\u0631\u0657\u0627", "word_translation": "(in) loss", "word_transliteration": "khasaran"}]}