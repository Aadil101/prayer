{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e \u064a\u064e\u0643\u064f\u0648\u0646\u064f \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0643\u064e\u0671\u0644\u06e1\u0641\u064e\u0631\u064e\u0627\u0634\u0650 \u0671\u0644\u06e1\u0645\u064e\u0628\u06e1\u062b\u064f\u0648\u062b\u0650"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0648\u06e1\u0645\u064e", "word_translation": "(The) Day", "word_transliteration": "yawma"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0648\u0646\u064f", "word_translation": "will be", "word_transliteration": "yakunu"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "the mankind", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0643\u064e\u0671\u0644\u06e1\u0641\u064e\u0631\u064e\u0627\u0634\u0650", "word_translation": "like moths", "word_transliteration": "kal-farashi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064e\u0628\u06e1\u062b\u064f\u0648\u062b\u0650", "word_translation": "scattered", "word_transliteration": "al-mabthuthi"}]}