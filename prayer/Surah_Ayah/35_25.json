{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u064a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f\u0648\u0643\u064e \u0641\u064e\u0642\u064e\u062f\u06e1 \u0643\u064e\u0630\u0651\u064e\u0628\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0645\u0650\u0646 \u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1 \u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1 \u0631\u064f\u0633\u064f\u0644\u064f\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650 \u0648\u064e\u0628\u0650\u0671\u0644\u0632\u0651\u064f\u0628\u064f\u0631\u0650 \u0648\u064e\u0628\u0650\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650 \u0671\u0644\u06e1\u0645\u064f\u0646\u0650\u064a\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u064a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f\u0648\u0643\u064e", "word_translation": "they deny you", "word_transliteration": "yukadhibuka"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064e\u062f\u06e1", "word_translation": "then certainly", "word_transliteration": "faqad"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u0651\u064e\u0628\u064e", "word_translation": "denied", "word_transliteration": "kadhaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "(were) before them", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0642\u064e\u0628\u06e1\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "(were) before them", "word_transliteration": "qablihim"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1\u0647\u064f\u0645\u06e1", "word_translation": "Came to them", "word_transliteration": "jaathum"}, {"word_arabic_uthmani": "\u0631\u064f\u0633\u064f\u0644\u064f\u0647\u064f\u0645", "word_translation": "their Messengers", "word_transliteration": "rusuluhum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0628\u064e\u064a\u0651\u0650\u0646\u064e\u0670\u062a\u0650", "word_translation": "with clear signs", "word_transliteration": "bil-bayinati"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0671\u0644\u0632\u0651\u064f\u0628\u064f\u0631\u0650", "word_translation": "and with Scriptures", "word_transliteration": "wabil-zuburi"}, {"word_arabic_uthmani": "\u0648\u064e\u0628\u0650\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u0650", "word_translation": "and with the Book", "word_transliteration": "wabil-kitabi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0646\u0650\u064a\u0631\u0650", "word_translation": "[the] enlightening", "word_transliteration": "al-muniri"}]}