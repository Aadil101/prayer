{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1 \u0623\u064e\u062d\u064e\u062f\u065e \u0645\u0651\u0650\u0646\u064e \u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e \u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0631\u064e\u0643\u064e \u0641\u064e\u0623\u064e\u062c\u0650\u0631\u06e1\u0647\u064f \u062d\u064e\u062a\u0651\u064e\u0649\u0670 \u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064e \u0643\u064e\u0644\u064e\u0670\u0645\u064e \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062b\u064f\u0645\u0651\u064e \u0623\u064e\u0628\u06e1\u0644\u0650\u063a\u06e1\u0647\u064f \u0645\u064e\u0623\u06e1\u0645\u064e\u0646\u064e\u0647\u064f\u06e5\u06da \u0630\u064e\u0670\u0644\u0650\u0643\u064e \u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0642\u064e\u0648\u06e1\u0645\u065e \u0644\u0651\u064e\u0627 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646\u06e1", "word_translation": "And if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u0623\u064e\u062d\u064e\u062f\u065e", "word_translation": "anyone", "word_transliteration": "ahadun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u064e", "word_translation": "of", "word_transliteration": "mina"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0645\u064f\u0634\u06e1\u0631\u0650\u0643\u0650\u064a\u0646\u064e", "word_translation": "the polytheists", "word_transliteration": "al-mush'rikina"}, {"word_arabic_uthmani": "\u0671\u0633\u06e1\u062a\u064e\u062c\u064e\u0627\u0631\u064e\u0643\u064e", "word_translation": "seek your protection", "word_transliteration": "is'tajaraka"}, {"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u062c\u0650\u0631\u06e1\u0647\u064f", "word_translation": "then grant him protection", "word_transliteration": "fa-ajir'hu"}, {"word_arabic_uthmani": "\u062d\u064e\u062a\u0651\u064e\u0649\u0670", "word_translation": "until", "word_transliteration": "hatta"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064e", "word_translation": "he hears", "word_transliteration": "yasma'a"}, {"word_arabic_uthmani": "\u0643\u064e\u0644\u064e\u0670\u0645\u064e", "word_translation": "(the) Words of Allah", "word_transliteration": "kalama"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(the) Words of Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "Then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0644\u0650\u063a\u06e1\u0647\u064f", "word_translation": "escort him", "word_transliteration": "abligh'hu"}, {"word_arabic_uthmani": "\u0645\u064e\u0623\u06e1\u0645\u064e\u0646\u064e\u0647\u064f\u06e5\u06da", "word_translation": "(to) his place of safety", "word_transliteration": "mamanahu"}, {"word_arabic_uthmani": "\u0630\u064e\u0670\u0644\u0650\u0643\u064e", "word_translation": "That", "word_transliteration": "dhalika"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "(is) because they", "word_transliteration": "bi-annahum"}, {"word_arabic_uthmani": "\u0642\u064e\u0648\u06e1\u0645\u065e", "word_translation": "(are) a people", "word_transliteration": "qawmun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0627", "word_translation": "(who) do not know", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "(who) do not know", "word_transliteration": "ya'lamuna"}]}