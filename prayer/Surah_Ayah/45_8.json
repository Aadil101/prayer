{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f \u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650 \u062b\u064f\u0645\u0651\u064e \u064a\u064f\u0635\u0650\u0631\u0651\u064f \u0645\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u0657\u0627 \u0643\u064e\u0623\u064e\u0646 \u0644\u0651\u064e\u0645\u06e1 \u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u06e1\u0647\u064e\u0627\u06d6 \u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f \u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u064d \u0623\u064e\u0644\u0650\u064a\u0645\u0656"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u064f", "word_translation": "Who hears", "word_transliteration": "yasma'u"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u064a\u064e\u0670\u062a\u0650", "word_translation": "(the) Verses", "word_transliteration": "ayati"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "(of) Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062a\u064f\u062a\u06e1\u0644\u064e\u0649\u0670", "word_translation": "recited", "word_transliteration": "tut'la"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "alayhi"}, {"word_arabic_uthmani": "\u062b\u064f\u0645\u0651\u064e", "word_translation": "then", "word_transliteration": "thumma"}, {"word_arabic_uthmani": "\u064a\u064f\u0635\u0650\u0631\u0651\u064f", "word_translation": "persists", "word_transliteration": "yusirru"}, {"word_arabic_uthmani": "\u0645\u064f\u0633\u06e1\u062a\u064e\u0643\u06e1\u0628\u0650\u0631\u0657\u0627", "word_translation": "arrogantly", "word_transliteration": "mus'takbiran"}, {"word_arabic_uthmani": "\u0643\u064e\u0623\u064e\u0646", "word_translation": "as if", "word_transliteration": "ka-an"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0645\u06e1", "word_translation": "not", "word_transliteration": "lam"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u0645\u064e\u0639\u06e1\u0647\u064e\u0627\u06d6", "word_translation": "he heard them", "word_transliteration": "yasma'ha"}, {"word_arabic_uthmani": "\u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u06e1\u0647\u064f", "word_translation": "So give him tidings", "word_transliteration": "fabashir'hu"}, {"word_arabic_uthmani": "\u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u064d", "word_translation": "(of) a punishment", "word_transliteration": "bi'adhabin"}, {"word_arabic_uthmani": "\u0623\u064e\u0644\u0650\u064a\u0645\u0656", "word_translation": "painful", "word_transliteration": "alimin"}]}