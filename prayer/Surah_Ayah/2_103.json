{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652 \u0644\u064e\u0645\u064e\u062b\u064f\u0648\u0628\u064e\u0629\u065e \u0645\u0651\u0650\u0646\u06e1 \u0639\u0650\u0646\u062f\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u062e\u064e\u064a\u06e1\u0631\u065e\u06da \u0644\u0651\u064e\u0648\u06e1 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "[that] they", "word_transliteration": "annahum"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "(had) believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062a\u0651\u064e\u0642\u064e\u0648\u06e1\u0627\u0652", "word_translation": "and feared (Allah)", "word_transliteration": "wa-ittaqaw"}, {"word_arabic_uthmani": "\u0644\u064e\u0645\u064e\u062b\u064f\u0648\u0628\u064e\u0629\u065e", "word_translation": "surely (the) reward", "word_transliteration": "lamathubatun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1", "word_translation": "(of)", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u0650", "word_translation": "from", "word_transliteration": "indi"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u062e\u064e\u064a\u06e1\u0631\u065e\u06da", "word_translation": "(would have been) better", "word_transliteration": "khayrun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0648\u06e1", "word_translation": "if", "word_transliteration": "law"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they were", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0644\u064e\u0645\u064f\u0648\u0646\u064e", "word_translation": "(to) know", "word_transliteration": "ya'lamuna"}]}