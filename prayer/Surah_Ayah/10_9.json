{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652 \u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650 \u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645 \u0628\u0650\u0625\u0650\u064a\u0645\u064e\u0670\u0646\u0650\u0647\u0650\u0645\u06e1\u06d6 \u062a\u064e\u062c\u06e1\u0631\u0650\u064a \u0645\u0650\u0646 \u062a\u064e\u062d\u06e1\u062a\u0650\u0647\u0650\u0645\u064f \u0671\u0644\u06e1\u0623\u064e\u0646\u06e1\u0647\u064e\u0670\u0631\u064f \u0641\u0650\u064a \u062c\u064e\u0646\u0651\u064e\u0640\u0670\u062a\u0650 \u0671\u0644\u0646\u0651\u064e\u0639\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e", "word_translation": "Indeed", "word_transliteration": "inna"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627\u0652", "word_translation": "and did", "word_transliteration": "wa'amilu"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064e\u0640\u0670\u0644\u0650\u062d\u064e\u0670\u062a\u0650", "word_translation": "good deeds", "word_transliteration": "al-salihati"}, {"word_arabic_uthmani": "\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "(will) guide them", "word_transliteration": "yahdihim"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645", "word_translation": "their Lord", "word_transliteration": "rabbuhum"}, {"word_arabic_uthmani": "\u