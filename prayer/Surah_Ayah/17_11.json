{"ayahs": {"ayah_uthmani": "\u0648\u064e\u064a\u064e\u062f\u06e1\u0639\u064f \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f \u0628\u0650\u0671\u0644\u0634\u0651\u064e\u0631\u0651\u0650 \u062f\u064f\u0639\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u06e5 \u0628\u0650\u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u0650\u06d6 \u0648\u064e\u0643\u064e\u0627\u0646\u064e \u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f \u0639\u064e\u062c\u064f\u0648\u0644\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u062f\u06e1\u0639\u064f", "word_translation": "And prays", "word_transliteration": "wayad'u"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f", "word_translation": "the man", "word_transliteration": "al-insanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0634\u0651\u064e\u0631\u0651\u0650", "word_translation": "for evil", "word_transliteration": "bil-shari"}, {"word_arabic_uthmani": "\u062f\u064f\u0639\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u06e5", "word_translation": "(as) he prays", "word_transliteration": "du'aahu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062e\u064e\u064a\u06e1\u0631\u0650\u06d6", "word_translation": "for the good", "word_transliteration": "bil-khayri"}, {"word_arabic_uthmani": "\u0648\u064e\u0643\u064e\u0627\u0646\u064e", "word_translation": "And is", "word_transliteration": "wakana"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0625\u0650\u0646\u0633\u064e\u0670\u0646\u064f", "word_translation": "the man", "word_transliteration": "al-insanu"}, {"word_arabic_uthmani": "\u0639\u064e\u062c\u064f\u0648\u0644\u0657\u0627", "word_translation": "ever hasty", "word_transliteration": "ajulan"}]}