{"ayahs": {"ayah_uthmani": "\u0642\u064f\u0644\u06e1 \u0623\u064e\u0645\u064e\u0631\u064e \u0631\u064e\u0628\u0651\u0650\u064a \u0628\u0650\u0671\u0644\u06e1\u0642\u0650\u0633\u06e1\u0637\u0650\u06d6 \u0648\u064e\u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652 \u0648\u064f\u062c\u064f\u0648\u0647\u064e\u0643\u064f\u0645\u06e1 \u0639\u0650\u0646\u062f\u064e \u0643\u064f\u0644\u0651\u0650 \u0645\u064e\u0633\u06e1\u062c\u0650\u062f\u0656 \u0648\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f \u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e \u0644\u064e\u0647\u064f \u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e\u06da \u0643\u064e\u0645\u064e\u0627 \u0628\u064e\u062f\u064e\u0623\u064e\u0643\u064f\u0645\u06e1 \u062a\u064e\u0639\u064f\u0648\u062f\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0642\u064f\u0644\u06e1", "word_translation": "Say", "word_transliteration": "qul"}, {"word_arabic_uthmani": "\u0623\u064e\u0645\u064e\u0631\u064e", "word_translation": "(Has been) ordered", "word_transliteration": "amara"}, {"word_arabic_uthmani": "\u0631\u064e\u0628\u0651\u0650\u064a", "word_translation": "(by) my Lord", "word_transliteration": "rabbi"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0642\u0650\u0633\u06e1\u0637\u0650\u06d6", "word_translation": "justice", "word_transliteration": "bil-qis'ti"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0642\u0650\u064a\u0645\u064f\u0648\u0627\u0652", "word_translation": "and set", "word_transliteration": "wa-aqimu"}, {"word_arabic_uthmani": "\u0648\u064f\u062c\u064f\u0648\u0647\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your faces", "word_transliteration": "wujuhakum"}, {"word_arabic_uthmani": "\u0639\u0650\u0646\u062f\u064e", "word_translation": "at", "word_transliteration": "inda"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0645\u064e\u0633\u06e1\u062c\u0650\u062f\u0656", "word_translation": "masjid", "word_transliteration": "masjidin"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u062f\u06e1\u0639\u064f\u0648\u0647\u064f", "word_translation": "and invoke Him", "word_transliteration": "wa-id'uhu"}, {"word_arabic_uthmani": "\u0645\u064f\u062e\u06e1\u0644\u0650\u0635\u0650\u064a\u0646\u064e", "word_translation": "(being) sincere", "word_transliteration": "mukh'lisina"}, {"word_arabic_uthmani": "\u0644\u064e\u0647\u064f", "word_translation": "to Him", "word_transliteration": "lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u062f\u0651\u0650\u064a\u0646\u064e\u06da", "word_translation": "(in) the religion", "word_transliteration": "al-dina"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "As", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u0628\u064e\u062f\u064e\u0623\u064e\u0643\u064f\u0645\u06e1", "word_translation": "He originated you", "word_transliteration": "bada-akum"}, {"word_arabic_uthmani": "\u062a\u064e\u0639\u064f\u0648\u062f\u064f\u0648\u0646\u064e", "word_translation": "(so) will you return", "word_transliteration": "ta'uduna"}]}