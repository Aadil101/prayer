{"ayahs": {"ayah_uthmani": "\u0646\u0651\u064e\u062d\u06e1\u0646\u064f \u0646\u064e\u0642\u064f\u0635\u0651\u064f \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0646\u064e\u0628\u064e\u0623\u064e\u0647\u064f\u0645 \u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1 \u0641\u0650\u062a\u06e1\u064a\u064e\u0629\u064c \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0632\u0650\u062f\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u06e1 \u0647\u064f\u062f\u0657\u0649"}, "words": [{"word_arabic_uthmani": "\u0646\u0651\u064e\u062d\u06e1\u0646\u064f", "word_translation": "We", "word_transliteration": "nahnu"}, {"word_arabic_uthmani": "\u0646\u064e\u0642\u064f\u0635\u0651\u064f", "word_translation": "narrate", "word_transliteration": "naqussu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0646\u064e\u0628\u064e\u0623\u064e\u0647\u064f\u0645", "word_translation": "their story", "word_transliteration": "naba-ahum"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u0650\u06da", "word_translation": "in truth", "word_transliteration": "bil-haqi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u0645\u06e1", "word_translation": "Indeed they (were)", "word_transliteration": "innahum"}, {"word_arabic_uthmani": "\u0641\u0650\u062a\u06e1\u064a\u064e\u0629\u064c", "word_translation": "youths", "word_transliteration": "fit'yatun"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "who believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u06e1", "word_translation": "in their Lord", "word_transliteration": "birabbihim"}, {"