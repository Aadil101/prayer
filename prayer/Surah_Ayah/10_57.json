{"ayahs": {"ayah_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0642\u064e\u062f\u06e1 \u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1\u0643\u064f\u0645 \u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u0638\u064e\u0629\u065e \u0645\u0651\u0650\u0646 \u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1 \u0648\u064e\u0634\u0650\u0641\u064e\u0627\u0653\u0621\u065e \u0644\u0651\u0650\u0645\u064e\u0627 \u0641\u0650\u064a \u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650 \u0648\u064e\u0647\u064f\u062f\u0657\u0649 \u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e \u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u064a\u064e\u0640\u0670\u0653\u0623\u064e\u064a\u0651\u064f\u0647\u064e\u0627", "word_translation": "O mankind", "word_transliteration": "yaayyuha"}, {"word_arabic_uthmani": "\u0671\u0644\u0646\u0651\u064e\u0627\u0633\u064f", "word_translation": "O mankind", "word_transliteration": "al-nasu"}, {"word_arabic_uthmani": "\u0642\u064e\u062f\u06e1", "word_translation": "Verily", "word_transliteration": "qad"}, {"word_arabic_uthmani": "\u062c\u064e\u0627\u0653\u0621\u064e\u062a\u06e1\u0643\u064f\u0645", "word_translation": "has come to you", "word_transliteration": "jaatkum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0648\u06e1\u0639\u0650\u0638\u064e\u0629\u065e", "word_translation": "an instruction", "word_transliteration": "maw'izatun"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0631\u0651\u064e\u0628\u0651\u0650\u0643\u064f\u0645\u06e1", "word_translation": "your Lord", "word_transliteration": "rabbikum"}, {"word_arabic_uthmani": "\u0648\u064e\u0634\u0650\u0641\u064e\u0627\u0653\u0621\u065e", "word_translation": "and a healing", "word_transliteration": "washifaon"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0645\u064e\u0627", "word_translation": "for what", "word_transliteration": "lima"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "(is) in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650", "word_translation": "your breasts", "word_transliteration": "al-suduri"}, {"word_arabic_uthmani": "\u0648\u064e\u0647\u064f\u062f\u0657\u0649", "word_translation": "and guidance", "word_transliteration": "wahudan"}, {"word_arabic_uthmani": "\u0648\u064e\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u065e", "word_translation": "and mercy", "word_transliteration": "warahmatun"}, {"word_arabic_uthmani": "\u0644\u0651\u0650\u0644\u06e1\u0645\u064f\u0624\u06e1\u0645\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "for the believers", "word_transliteration": "lil'mu'minina"}]}