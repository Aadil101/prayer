{"ayahs": {"ayah_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e \u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e\u0647\u064f\u06e5 \u0643\u064e\u0645\u064e\u0627 \u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e \u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u064f\u06d8 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1 \u0641\u064e\u0647\u064f\u0645\u06e1 \u0644\u064e\u0627 \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those (to) whom", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u062a\u064e\u064a\u06e1\u0646\u064e\u0670\u0647\u064f\u0645\u064f", "word_translation": "We have given them", "word_transliteration": "ataynahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0643\u0650\u062a\u064e\u0670\u0628\u064e", "word_translation": "the Book", "word_transliteration": "al-kitaba"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e\u0647\u064f\u06e5", "word_translation": "they recognize him", "word_transliteration": "ya'rifunahu"}, {"word_arabic_uthmani": "\u0643\u064e\u0645\u064e\u0627", "word_translation": "as", "word_transliteration": "kama"}, {"word_arabic_uthmani": "\u064a\u064e\u0639\u06e1\u0631\u0650\u0641\u064f\u0648\u0646\u064e", "word_translation": "they recognize", "word_transliteration": "ya'rifuna"}, {"word_arabic_uthmani": "\u0623\u064e\u0628\u06e1\u0646\u064e\u0627\u0653\u0621\u064e\u0647\u064f\u0645\u064f\u06d8", "word_translation": "their sons", "word_transliteration": "abnaahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "Those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u062e\u064e\u0633\u0650\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "lost", "word_transliteration": "khasiru"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0641\u064f\u0633\u064e\u0647\u064f\u0645\u06e1", "word_translation": "themselves", "word_transliteration": "anfusahum"}, {"word_arabic_uthmani": "\u0641\u064e\u0647\u064f\u0645\u06e1", "word_translation": "then they", "word_transliteration": "fahum"}, {"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(do) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "believe", "word_transliteration": "yu'minuna"}]}