{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0646\u064e\u0632\u064e\u0639\u06e1\u0646\u064e\u0627 \u0645\u0650\u0646 \u0643\u064f\u0644\u0651\u0650 \u0623\u064f\u0645\u0651\u064e\u0629\u0656 \u0634\u064e\u0647\u0650\u064a\u062f\u0657\u0627 \u0641\u064e\u0642\u064f\u0644\u06e1\u0646\u064e\u0627 \u0647\u064e\u0627\u062a\u064f\u0648\u0627\u0652 \u0628\u064f\u0631\u06e1\u0647\u064e\u0670\u0646\u064e\u0643\u064f\u0645\u06e1 \u0641\u064e\u0639\u064e\u0644\u0650\u0645\u064f\u0648\u0653\u0627\u0652 \u0623\u064e\u0646\u0651\u064e \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0644\u0650\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0636\u064e\u0644\u0651\u064e \u0639\u064e\u0646\u06e1\u0647\u064f\u0645 \u0645\u0651\u064e\u0627 \u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652 \u064a\u064e\u0641\u06e1\u062a\u064e\u0631\u064f\u0648\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0646\u064e\u0632\u064e\u0639\u06e1\u0646\u064e\u0627", "word_translation": "And We will draw forth", "word_transliteration": "wanaza'na"}, {"word_arabic_uthmani": "\u0645\u0650\u0646", "word_translation": "from", "word_transliteration": "min"}, {"word_arabic_uthmani": "\u0643\u064f\u0644\u0651\u0650", "word_translation": "every", "word_transliteration": "kulli"}, {"word_arabic_uthmani": "\u0623\u064f\u0645\u0651\u064e\u0629\u0656", "word_translation": "nation", "word_transliteration": "ummatin"}, {"word_arabic_uthmani": "\u0634\u064e\u0647\u0650\u064a\u062f\u0657\u0627", "word_translation": "a witness", "word_transliteration": "shahidan"}, {"word_arabic_uthmani": "\u0641\u064e\u0642\u064f\u0644\u06e1\u0646\u064e\u0627", "word_translation": "and We will say", "word_transliteration": "faqul'na"}, {"word_arabic_uthmani": "\u0647\u064e\u0627\u062a\u064f\u0648\u0627\u0652", "word_translation": "Bring", "word_transliteration": "hatu"}, {"word_arabic_uthmani": "\u0628\u064f\u0631\u06e1\u0647\u064e\u0670\u0646\u064e\u0643\u064f\u0645\u06e1", "word_translation": "your proof", "word_transliteration": "bur'hanakum"}, {"word_arabic_uthmani": "\u0641\u064e\u0639\u064e\u0644\u0650\u0645\u064f\u0648\u0653\u0627\u0652", "word_translation": "Then they will know", "word_transliteration": "fa'alimu"}, {"word_arabic_uthmani": "\u0623\u064e\u0646\u0651\u064e", "word_translation": "that", "word_transliteration": "anna"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "the truth", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0644\u0650\u0644\u0651\u064e\u0647\u0650", "word_translation": "(is) for Allah", "word_transliteration": "lillahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0636\u064e\u0644\u0651\u064e", "word_translation": "and (will be) lost", "word_transliteration": "wadalla"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u06e1\u0647\u064f\u0645", "word_translation": "from them", "word_transliteration": "anhum"}, {"word_arabic_uthmani": "\u0645\u0651\u064e\u0627", "word_translation": "what", "word_transliteration": "ma"}, {"word_arabic_uthmani": "\u0643\u064e\u0627\u0646\u064f\u0648\u0627\u0652", "word_translation": "they used (to)", "word_transliteration": "kanu"}, {"word_arabic_uthmani": "\u064a\u064e\u0641\u06e1\u062a\u064e\u0631\u064f\u0648\u0646\u064e", "word_translation": "invent", "word_transliteration": "yaftaruna"}]}