{"ayahs": {"ayah_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1 \u0644\u064e\u0630\u064e\u0627\u0653\u0626\u0650\u0642\u064f\u0648\u0627\u0652 \u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650 \u0671\u0644\u06e1\u0623\u064e\u0644\u0650\u064a\u0645\u0650"}, "words": [{"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0643\u064f\u0645\u06e1", "word_translation": "Indeed you", "word_transliteration": "innakum"}, {"word_arabic_uthmani": "\u0644\u064e\u0630\u064e\u0627\u0653\u0626\u0650\u0642\u064f\u0648\u0627\u0652", "word_translation": "(will) surely taste", "word_transliteration": "ladhaiqu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0639\u064e\u0630\u064e\u0627\u0628\u0650", "word_translation": "the punishment", "word_transliteration": "al-'adhabi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u064e\u0644\u0650\u064a\u0645\u0650", "word_translation": "painful", "word_transliteration": "al-alimi"}]}