{"ayahs": {"ayah_uthmani": "\u0623\u064e\u0645\u06e1 \u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e \u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670 \u0639\u064e\u0644\u064e\u0649 \u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0643\u064e\u0630\u0650\u0628\u0657\u0627\u06d6 \u0641\u064e\u0625\u0650\u0646 \u064a\u064e\u0634\u064e\u0625\u0650 \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u064a\u064e\u062e\u06e1\u062a\u0650\u0645\u06e1 \u0639\u064e\u0644\u064e\u0649\u0670 \u0642\u064e\u0644\u06e1\u0628\u0650\u0643\u064e\u06d7 \u0648\u064e\u064a\u064e\u0645\u06e1\u062d\u064f \u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u064e \u0648\u064e\u064a\u064f\u062d\u0650\u0642\u0651\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e \u0628\u0650\u0643\u064e\u0644\u0650\u0645\u064e\u0670\u062a\u0650\u0647\u0650\u06e6\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2 \u0628\u0650\u0630\u064e\u0627\u062a\u0650 \u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650"}, "words": [{"word_arabic_uthmani": "\u0623\u064e\u0645\u06e1", "word_translation": "Or", "word_transliteration": "am"}, {"word_arabic_uthmani": "\u064a\u064e\u0642\u064f\u0648\u0644\u064f\u0648\u0646\u064e", "word_translation": "(do) they say", "word_transliteration": "yaquluna"}, {"word_arabic_uthmani": "\u0671\u0641\u06e1\u062a\u064e\u0631\u064e\u0649\u0670", "word_translation": "He has invented", "word_transliteration": "if'tara"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649", "word_translation": "about", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "Allah", "word_transliteration": "al-lahi"}, {"word_arabic_uthmani": "\u0643\u064e\u0630\u0650\u0628\u0657\u0627\u06d6", "word_translation": "a lie", "word_transliteration": "kadhiban"}, {"word_arabic_uthmani": "\u0641\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "fa-in"}, {"word_arabic_uthmani": "\u064a\u064e\u0634\u064e\u0625\u0650", "word_translation": "Allah (had) willed", "word_transliteration": "yasha-i"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "Allah (had) willed", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u064a\u064e\u062e\u06e1\u062a\u0650\u0645\u06e1", "word_translation": "He would seal", "word_transliteration": "yakhtim"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u0649\u0670", "word_translation": "[over]", "word_transliteration": "ala"}, {"word_arabic_uthmani": "\u0642\u064e\u0644\u06e1\u0628\u0650\u0643\u064e\u06d7", "word_translation": "your heart", "word_transliteration": "qalbika"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0645\u06e1\u062d\u064f", "word_translation": "And Allah eliminates", "word_transliteration": "wayamhu"}, {"word_arabic_uthmani": "\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah eliminates", "word_transliteration": "al-lahu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0628\u064e\u0670\u0637\u0650\u0644\u064e", "word_translation": "the falsehood", "word_transliteration": "al-batila"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064f\u062d\u0650\u0642\u0651\u064f", "word_translation": "and establishes", "word_transliteration": "wayuhiqqu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064e", "word_translation": "the truth", "word_transliteration": "al-haqa"}, {"word_arabic_uthmani": "\u0628\u0650\u0643\u064e\u0644\u0650\u0645\u064e\u0670\u062a\u0650\u0647\u0650\u06e6\u0653\u06da", "word_translation": "by His Words", "word_transliteration": "bikalimatihi"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed, He", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2", "word_translation": "(is) All-Knowing", "word_transliteration": "alimun"}, {"word_arabic_uthmani": "\u0628\u0650\u0630\u064e\u0627\u062a\u0650", "word_translation": "of what", "word_transliteration": "bidhati"}, {"word_arabic_uthmani": "\u0671\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0631\u0650", "word_translation": "(is in) the breasts", "word_transliteration": "al-suduri"}]}