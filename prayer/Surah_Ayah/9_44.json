{"ayahs": {"ayah_uthmani": "\u0644\u064e\u0627 \u064a\u064e\u0633\u06e1\u062a\u064e\u0640\u0654\u06e1\u0630\u0650\u0646\u064f\u0643\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650 \u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650 \u0623\u064e\u0646 \u064a\u064f\u062c\u064e\u0670\u0647\u0650\u062f\u064f\u0648\u0627\u0652 \u0628\u0650\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1 \u0648\u064e\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1\u06d7 \u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f \u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2 \u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0644\u064e\u0627", "word_translation": "(Would) not", "word_transliteration": "la"}, {"word_arabic_uthmani": "\u064a\u064e\u0633\u06e1\u062a\u064e\u0640\u0654\u06e1\u0630\u0650\u0646\u064f\u0643\u064e", "word_translation": "ask your permission", "word_transliteration": "yastadhinuka"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u064a\u064f\u0624\u06e1\u0645\u0650\u0646\u064f\u0648\u0646\u064e", "word_translation": "believe", "word_transliteration": "yu'minuna"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u06e1\u064a\u064e\u0648\u06e1\u0645\u0650", "word_translation": "and the Day", "word_transliteration": "wal-yawmi"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u0623\u0653\u062e\u0650\u0631\u0650", "word_translation": "the Last", "word_transliteration": "al-akhiri"}, {"word_arabic_uthmani": "\u0623\u064e\u0646", "word_translation": "that", "word_transliteration": "an"}, {"word_arabic_uthmani": "\u064a\u064f\u062c\u064e\u0670\u0647\u0650\u062f\u064f\u0648\u0627\u0652", "word_translation": "they strive", "word_transliteration": "yujahidu"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u0645\u06e1\u0648\u064e\u0670\u0644\u0650\u0647\u0650\u0645\u06e1", "word_translation": "with their wealth", "word_transliteration": "bi-amwalihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0623\u064e\u0646\u0641\u064f\u0633\u0650\u0647\u0650\u0645\u06e1\u06d7", "word_translation": "and their lives", "word_transliteration": "wa-anfusihim"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0644\u0644\u0651\u064e\u0647\u064f", "word_translation": "And Allah", "word_transliteration": "wal-lahu"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u0650\u064a\u0645\u064f\u06e2", "word_translation": "(is) All-Knower", "word_transliteration": "alimun"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u06e1\u0645\u064f\u062a\u0651\u064e\u0642\u0650\u064a\u0646\u064e", "word_translation": "of the righteous", "word_transliteration": "bil-mutaqina"}]}