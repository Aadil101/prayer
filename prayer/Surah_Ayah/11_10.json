{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1 \u0623\u064e\u0630\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f \u0646\u064e\u0639\u06e1\u0645\u064e\u0627\u0653\u0621\u064e \u0628\u064e\u0639\u06e1\u062f\u064e \u0636\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u064e \u0645\u064e\u0633\u0651\u064e\u062a\u06e1\u0647\u064f \u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e \u0630\u064e\u0647\u064e\u0628\u064e \u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u064f \u0639\u064e\u0646\u0651\u0650\u064a\u0653\u06da \u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5 \u0644\u064e\u0641\u064e\u0631\u0650\u062d\u065e \u0641\u064e\u062e\u064f\u0648\u0631\u064c"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0626\u0650\u0646\u06e1", "word_translation": "But if", "word_transliteration": "wala-in"}, {"word_arabic_uthmani": "\u0623\u064e\u0630\u064e\u0642\u06e1\u0646\u064e\u0670\u0647\u064f", "word_translation": "We give him a taste", "word_transliteration": "adhaqnahu"}, {"word_arabic_uthmani": "\u0646\u064e\u0639\u06e1\u0645\u064e\u0627\u0653\u0621\u064e", "word_translation": "(of) favor", "word_transliteration": "na'maa"}, {"word_arabic_uthmani": "\u0628\u064e\u0639\u06e1\u062f\u064e", "word_translation": "after", "word_transliteration": "ba'da"}, {"word_arabic_uthmani": "\u0636\u064e\u0631\u0651\u064e\u0627\u0653\u0621\u064e", "word_translation": "hardship", "word_transliteration": "darraa"}, {"word_arabic_uthmani": "\u0645\u064e\u0633\u0651\u064e\u062a\u06e1\u0647\u064f", "word_translation": "(has) touched him", "word_transliteration": "massathu"}, {"word_arabic_uthmani": "\u0644\u064e\u064a\u064e\u0642\u064f\u0648\u0644\u064e\u0646\u0651\u064e", "word_translation": "surely he will say", "word_transliteration": "layaqulanna"}, {"word_arabic_uthmani": "\u0630\u064e\u0647\u064e\u0628\u064e", "word_translation": "Have gone", "word_transliteration": "dhahaba"}, {"word_arabic_uthmani": "\u0671\u0644\u0633\u0651\u064e\u064a\u0651\u0650\u0640\u0654\u064e\u0627\u062a\u064f", "word_translation": "the evils", "word_transliteration": "al-sayiatu"}, {"word_arabic_uthmani": "\u0639\u064e\u0646\u0651\u0650\u064a\u0653\u06da", "word_translation": "from me", "word_transliteration": "anni"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u0651\u064e\u0647\u064f\u06e5", "word_translation": "Indeed he", "word_transliteration": "innahu"}, {"word_arabic_uthmani": "\u0644\u064e\u0641\u064e\u0631\u0650\u062d\u065e", "word_translation": "(is) exultant", "word_transliteration": "lafarihun"}, {"word_arabic_uthmani": "\u0641\u064e\u062e\u064f\u0648\u0631\u064c", "word_translation": "(and) boastful", "word_transliteration": "fakhurun"}]}