{"ayahs": {"ayah_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627 \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652 \u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650 \u0648\u064e\u0671\u0639\u06e1\u062a\u064e\u0635\u064e\u0645\u064f\u0648\u0627\u0652 \u0628\u0650\u0647\u0650\u06e6 \u0641\u064e\u0633\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u06e1 \u0641\u0650\u064a \u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0656 \u0645\u0651\u0650\u0646\u06e1\u0647\u064f \u0648\u064e\u0641\u064e\u0636\u06e1\u0644\u0656 \u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0635\u0650\u0631\u064e\u0670\u0637\u0657\u0627 \u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627"}, "words": [{"word_arabic_uthmani": "\u0641\u064e\u0623\u064e\u0645\u0651\u064e\u0627", "word_translation": "So as for", "word_transliteration": "fa-amma"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0621\u064e\u0627\u0645\u064e\u0646\u064f\u0648\u0627\u0652", "word_translation": "believed", "word_transliteration": "amanu"}, {"word_arabic_uthmani": "\u0628\u0650\u0671\u0644\u0644\u0651\u064e\u0647\u0650", "word_translation": "in Allah", "word_transliteration": "bil-lahi"}, {"word_arabic_uthmani": "\u0648\u064e\u0671\u0639\u06e1\u062a\u064e\u0635\u064e\u0645\u064f\u0648\u0627\u0652", "word_translation": "and held fast", "word_transliteration": "wa-i'tasamu"}, {"word_arabic_uthmani": "\u0628\u0650\u0647\u0650\u06e6", "word_translation": "to Him", "word_transliteration": "bihi"}, {"word_arabic_uthmani": "\u0641\u064e\u0633\u064e\u064a\u064f\u062f\u06e1\u062e\u0650\u0644\u064f\u0647\u064f\u0645\u06e1", "word_translation": "then He will admit them", "word_transliteration": "fasayud'khiluhum"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0631\u064e\u062d\u06e1\u0645\u064e\u0629\u0656", "word_translation": "Mercy", "word_transliteration": "rahmatin"}, {"word_arabic_uthmani": "\u0645\u0651\u0650\u0646\u06e1\u0647\u064f", "word_translation": "from Himself", "word_transliteration": "min'hu"}, {"word_arabic_uthmani": "\u0648\u064e\u0641\u064e\u0636\u06e1\u0644\u0656", "word_translation": "and Bounty", "word_transliteration": "wafadlin"}, {"word_arabic_uthmani": "\u0648\u064e\u064a\u064e\u0647\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "and will guide them", "word_transliteration": "wayahdihim"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to Himself", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0635\u0650\u0631\u064e\u0670\u0637\u0657\u0627", "word_translation": "(on) a way", "word_transliteration": "siratan"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0633\u06e1\u062a\u064e\u0642\u0650\u064a\u0645\u0657\u0627", "word_translation": "straight", "word_transliteration": "mus'taqiman"}]}