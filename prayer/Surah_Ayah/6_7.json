{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1 \u0646\u064e\u0632\u0651\u064e\u0644\u06e1\u0646\u064e\u0627 \u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e \u0643\u0650\u062a\u064e\u0670\u0628\u0657\u0627 \u0641\u0650\u064a \u0642\u0650\u0631\u06e1\u0637\u064e\u0627\u0633\u0656 \u0641\u064e\u0644\u064e\u0645\u064e\u0633\u064f\u0648\u0647\u064f \u0628\u0650\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1 \u0644\u064e\u0642\u064e\u0627\u0644\u064e \u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0646\u06e1 \u0647\u064e\u0670\u0630\u064e\u0627\u0653 \u0625\u0650\u0644\u0651\u064e\u0627 \u0633\u0650\u062d\u06e1\u0631\u065e \u0645\u0651\u064f\u0628\u0650\u064a\u0646\u065e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0644\u064e\u0648\u06e1", "word_translation": "And (even) if", "word_transliteration": "walaw"}, {"word_arabic_uthmani": "\u0646\u064e\u0632\u0651\u064e\u0644\u06e1\u0646\u064e\u0627", "word_translation": "We (had) sent down", "word_transliteration": "nazzalna"}, {"word_arabic_uthmani": "\u0639\u064e\u0644\u064e\u064a\u06e1\u0643\u064e", "word_translation": "to you", "word_transliteration": "alayka"}, {"word_arabic_uthmani": "\u0643\u0650\u062a\u064e\u0670\u0628\u0657\u0627", "word_translation": "a written Scripture", "word_transliteration": "kitaban"}, {"word_arabic_uthmani": "\u0641\u0650\u064a", "word_translation": "in", "word_transliteration": "fi"}, {"word_arabic_uthmani": "\u0642\u0650\u0631\u06e1\u0637\u064e\u0627\u0633\u0656", "word_translation": "a parchment", "word_transliteration": "qir'tasin"}, {"word_arabic_uthmani": "\u0641\u064e\u0644\u064e\u0645\u064e\u0633\u064f\u0648\u0647\u064f", "word_translation": "and they touched it", "word_transliteration": "falamasuhu"}, {"word_arabic_uthmani": "\u0628\u0650\u0623\u064e\u064a\u06e1\u062f\u0650\u064a\u0647\u0650\u0645\u06e1", "word_translation": "with their hands", "word_transliteration": "bi-aydihim"}, {"word_arabic_uthmani": "\u0644\u064e\u0642\u064e\u0627\u0644\u064e", "word_translation": "surely (would) have said", "word_transliteration": "laqala"}, {"word_arabic_uthmani": "\u0671\u0644\u0651\u064e\u0630\u0650\u064a\u0646\u064e", "word_translation": "those who", "word_transliteration": "alladhina"}, {"word_arabic_uthmani": "\u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0653\u0627\u0652", "word_translation": "disbelieved", "word_transliteration": "kafaru"}, {"word_arabic_uthmani": "\u0625\u0650\u0646\u06e1", "word_translation": "Not", "word_transliteration": "in"}, {"word_arabic_uthmani": "\u0647\u064e\u0670\u0630\u064e\u0627\u0653", "word_translation": "(is) this", "word_transliteration": "hadha"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u0651\u064e\u0627", "word_translation": "but", "word_transliteration": "illa"}, {"word_arabic_uthmani": "\u0633\u0650\u062d\u06e1\u0631\u065e", "word_translation": "magic", "word_transliteration": "sih'run"}, {"word_arabic_uthmani": "\u0645\u0651\u064f\u0628\u0650\u064a\u0646\u065e", "word_translation": "clear", "word_transliteration": "mubinun"}]}