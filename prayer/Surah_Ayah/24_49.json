{"ayahs": {"ayah_uthmani": "\u0648\u064e\u0625\u0650\u0646 \u064a\u064e\u0643\u064f\u0646 \u0644\u0651\u064e\u0647\u064f\u0645\u064f \u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f \u064a\u064e\u0623\u06e1\u062a\u064f\u0648\u0653\u0627\u0652 \u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650 \u0645\u064f\u0630\u06e1\u0639\u0650\u0646\u0650\u064a\u0646\u064e"}, "words": [{"word_arabic_uthmani": "\u0648\u064e\u0625\u0650\u0646", "word_translation": "But if", "word_transliteration": "wa-in"}, {"word_arabic_uthmani": "\u064a\u064e\u0643\u064f\u0646", "word_translation": "is", "word_transliteration": "yakun"}, {"word_arabic_uthmani": "\u0644\u0651\u064e\u0647\u064f\u0645\u064f", "word_translation": "with them", "word_transliteration": "lahumu"}, {"word_arabic_uthmani": "\u0671\u0644\u06e1\u062d\u064e\u0642\u0651\u064f", "word_translation": "the truth", "word_transliteration": "al-haqu"}, {"word_arabic_uthmani": "\u064a\u064e\u0623\u06e1\u062a\u064f\u0648\u0653\u0627\u0652", "word_translation": "they come", "word_transliteration": "yatu"}, {"word_arabic_uthmani": "\u0625\u0650\u0644\u064e\u064a\u06e1\u0647\u0650", "word_translation": "to him", "word_transliteration": "ilayhi"}, {"word_arabic_uthmani": "\u0645\u064f\u0630\u06e1\u0639\u0650\u0646\u0650\u064a\u0646\u064e", "word_translation": "(as) promptly obedient", "word_transliteration": "mudh'inina"}]}